<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_cost_center.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//field[@name='line_ids']/tree/field[@name='cost_center_id']" position="replace">
                <field name="cost_center_required_on_journal" invisible="1"/>
                <field name="cost_center_id" attrs="{'required': [('cost_center_required_on_journal', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
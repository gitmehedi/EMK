<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
    	<record id="view_promos_rules_filter" model="ir.ui.view">
            <field name="name">promos.rules.list.select</field>
            <field name="model">promos.rules</field>
            <field name="arch" type="xml">
                <search string="Search Promotion Rules">
                    <group expand="0" string="Group By">
                        <filter string="Promotion Group" domain="[]" context="{'group_by':'group_id'}"/>
                    </group>
               </search>
            </field>
        </record>
        
    	<record id="promos_rules_tree_inherit" model="ir.ui.view">
            <field name="name">promos.rules.tree.inherit</field>
            <field name="model">promos.rules</field>
            <field name="inherit_id" ref="sale_promotions.view_promotion_rules_tree"/>
            <field name="arch" type="xml">
                <!--field name="shop" position="replace"/-->
                <field name="coupon_code" position="replace"/>
            </field>
        </record>
        
        <record id="promos_rules_form_inherit" model="ir.ui.view">
            <field name="name">promos.rules.form.inherit</field>
            <field name="model">promos.rules</field>
            <field name="inherit_id" ref="sale_promotions.view_promotion_rules_form"/>
            <field name="arch" type="xml">
            	<xpath expr='//sheet/group/field[@name="active"]' position="replace">
                    <field name="is_order"/>
                    <field name="group_id" domain="[('active','=',True)]"/>
                </xpath>
                <!--xpath expr='//sheet/group/field[@name="shop"]' position="replace">
                    <field name="shop" invisible="1"/>
                </xpath-->
                <xpath expr='//sheet/group/field[@name="stop_further"]' position="replace">
                    <field name="stop_further"/>
                </xpath>
                <xpath expr='//sheet/group/separator[@string="Coupon/Voucher Settings"]' position="replace">   
                </xpath>
                <xpath expr='//sheet/group/group/field[@name="coupon_code"]' position="replace">
                    <field name="coupon_code" invisible="1"/>
                </xpath>
                <xpath expr='//sheet/group/group/field[@name="coupon_used"]' position="replace">
                    <field name="coupon_used" invisible="1"/>
                </xpath>
                <xpath expr='//sheet/group/group/field[@name="uses_per_coupon"]' position="replace">
                    <field name="uses_per_coupon" invisible="1"/>
                </xpath>
                <xpath expr='//sheet/group/group/field[@name="uses_per_partner"]' position="replace">
                    <field name="uses_per_partner" invisible="1"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
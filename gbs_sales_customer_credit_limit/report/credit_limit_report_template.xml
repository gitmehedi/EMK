<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<odoo>
    <data>
        <template id="customer_credit_limit">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-12" style="text-align:center;">
                                    <h2 ><strong >Customer Credit Limit</strong></h2>
                                    <p><span t-field="o.name"/></p>
                                    <p><span t-field="o.approve_date"/></p>
                                </div>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <tr style="background-color:#C0C0C0;">
                                        <th>Customer</th>
                                        <th>Limit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.limit_ids" t-as="l">
                                        <tr>
                                            <td><span t-esc="l.partner_id.name"/></td>
                                            <td><span t-esc="l.value"/></td>
                                        </tr>
                	                 </t>
                                </tbody>
                            </table>
                            <footer>
                                <t t-foreach="docs" t-as="l">
                                    <tr><span t-esc="l.requested_by"/></tr>
                                    <tr><span t-esc="l.approver1_id"/></tr>
                                    <tr><span t-esc="l.approver2_id"/></tr>
                                    <tr><span t-esc="l.message_ids"/></tr>
                                </t>
<!--
                                <p style="text-align:center"> Create by Head of Sale | First Approveal by Head of Account | Final Approveal by Manager</p>
-->
                            </footer>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
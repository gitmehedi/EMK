<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<odoo>
    <data>
        <template id="customer_credit_limit">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page" style="page-break-inside:auto">
                            <br></br>
                            <div class="row">
                                    <div class="col-xs-12" style="text-align:center;">
                                        <h2><strong >Customer Credit Limit</strong></h2>
                                    </div>
                                    <div class="col-xs-12" style="text-align:left;">
                                        <p><b>Description: </b><span t-field="o.name"/></p>
                                        <p><b>Approval Date:</b><span t-field="o.approve_date"/></p>
                                    </div>
                                </div>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr style="background-color:#C0C0C0;">
                                            <th>SL Num</th>
                                            <th>Customer</th>
                                            <th>Limit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.limit_ids" t-as="l">
                                            <tr style="page-break-inside: avoid">
                                                <td><span t-esc="l.sl_num"/></td>
                                                <td><span t-esc="l.partner_id.name"/></td>
                                                <td><span t-esc="'%.2f'%(l.value)"/></td>
                                            </tr>
                                         </t>
                                    </tbody>
                                </table>
                                <footer>
                                <p>Submitted by: <span t-field="o.requested_by"/></p>
                                <p>First Approval by: <span t-field="o.approver1_id"/></p>
                                <p>Final Approval by: <span t-field="o.approver2_id"/></p>
                            </footer>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
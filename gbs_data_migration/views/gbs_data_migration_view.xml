<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gbs_data_migration_form" model="ir.ui.view">
            <field name="name">gbs.data.migration.form</field>
            <field name="model">gbs.data.migration</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bulk / Manual Journal" delete="0" duplicate="0">
                    <header>
                        <button name="gbs_data_migration.action_gbs_data_migration_wizard"
                                groups="mtbl_access.group_mtbl_sys_admin"
                                type="action" string="Upload" class="oe_highlight"/>
                        <button name="action_process"
                                groups="mtbl_access.group_mtbl_sys_admin"
                                type="object" string="Process" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div>
                            <h1>
                                <field name="code"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" readonly="1"/>
                                <field name="file_name" invisible="1"/>
                                <field name="upload_file" filename="file_name" readonly="1"/>
                            </group>

                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="gbs_data_migration_tree" model="ir.ui.view">
            <field name="name">gbs.data.migration.tree</field>
            <field name="model">gbs.data.migration</field>
            <field name="arch" type="xml">
                <tree string="Bulk / Manual Journal"
                      decoration-success="state=='draft'" decoration-muted="state=='processed'">
                    <field name="code"/>
                    <field name="file_name" invisible="1"/>
                    <field name="date"/>
                    <field name="upload_file" filename="file_name" readonly="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_generate_cbs_journal_success_search">
            <field name="name">gbs.data.migration.search</field>
            <field name="model">gbs.data.migration</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Bulk / Manual Journal">
                    <field name="date"/>
                    <group name="group_by">
                        <filter string="Draft" name="state" icon="terp-personal"
                                domain="[('state','=','draft')]"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_gbs_data_migration" model="ir.actions.act_window">
            <field name="name">Accounting Data Migration</field>
            <field name="res_model">gbs.data.migration</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {"search_default_state":'draft'}
            </field>
        </record>


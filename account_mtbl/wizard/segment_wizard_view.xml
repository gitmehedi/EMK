<?xml version="1.0"?>
<odoo>
    <record id="view_segment_wizard" model="ir.ui.view">
        <field name="name">segment.wizard</field>
        <field name="model">segment.wizard</field>
        <field name="arch" type="xml">
            <form string="Proposed">
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="status"/>
                    </group>
                </group>
                <footer>
                    <button name="act_change_name" string="Change Request" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_segment_wizard" model="ir.actions.act_window">
        <field name="name">Request for Name Change</field>
        <field name="res_model">segment.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_segment_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_cbs" model="ir.ui.view">
            <field name="name">account.move.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="edit">0</attribute>
                </xpath>
                <xpath expr="//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='account_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='analytic_account_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>>
                    <attribute name="string">Cost Centre</attribute>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='analytic_account_id']" position="after">
                    <field name="segment_id" options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                    <field name="acquiring_channel_id"
                           options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                    <field name="servicing_channel_id"
                           options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                </xpath>
                <xpath expr="//sheet/notebook/page/field/tree/field[@name='name']" position="before">
                    <field name="sub_operating_unit_id" options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                </xpath>

                <xpath expr="//button[@name='post']" position="attributes">
                    <attribute name="string">Approve</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/field/tree/field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/field/tree/field[@name='date_maturity']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//button[@name='%(account.action_view_account_move_reversal)d']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//button[@name='open_reconcile_view']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_move_tree_cbs" model="ir.ui.view">
            <field name="name">account.move.tree.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="edit">0</attribute>
                    <attribute name="decoration-info">state == 'draft'</attribute>
                    <attribute name="decoration-muted">state == 'posted'</attribute>
                    <attribute name="decoration-bf">state in ('posted')</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>

        <record id="account.action_account_move_reversal_cbs" model="ir.values">
            <field name="model_id" ref="account.model_account_move"/>
            <field name="name">Reverse Moves</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('account.action_view_account_move_reversal'))"/>
            <field name="key">action</field>
            <field name="model">account.move</field>
            <field name="groups_id"
                   eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

        <record id="view_account_move_filter_cbs" model="ir.ui.view">
            <field name="name">account.move.select</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <search string="Search Move">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]"
                           string="Move"/>
                    <field name="date"/>
                    <filter string="Unposted" domain="[('state','=','draft')]" help="Unposted Journal Entries"/>
                    <filter string="Posted" domain="[('state','=','posted')]" help="Posted Journal Entries"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="dummy_account_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Journal" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="States" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Date" domain="[]" context="{'group_by':'date'}"
                                help="Journal Entries by Month"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_move_journal_line_cbs" model="ir.actions.act_window">
            <field name="name">Journal Entries</field>
            <field name="res_model">account.move</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="account.view_move_tree"/>
            <field name="search_view_id" ref="view_account_move_filter_cbs"/>
            <field name="context">{}</field>
            <field name="domain">[('is_cbs','=',True)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a journal entry.
                </p>
                <p>
                    A journal entry consists of several journal items, each of
                    which is either a debit or a credit transaction.
                </p>
                <p>
                    Odoo automatically creates one journal entry per accounting
                    document: invoice, refund, vendor payment, bank statements,
                    etc. So, you should record journal entries manually only/mainly
                    for miscellaneous operations.
                </p>
            </field>
        </record>

        <menuitem action="action_move_journal_line_cbs" name="CBS"
                  id="menu_action_move_journal_line_cbs_form"
                  parent="account.menu_action_move_journal_line_form"
                  groups="account.group_account_manager,mtbl_access.group_mtbl_sys_admin"
                  sequence="5"/>
    </data>
</odoo>
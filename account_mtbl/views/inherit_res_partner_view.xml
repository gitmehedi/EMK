<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inherit_res_partner_form_view" model="ir.ui.view">
            <field name="name">inherit.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="gbs_res_partner.inherited_view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_payable_id']" position="after">
                    <field name="property_account_payable_sou_id"
                           domain="[('account_id', 'in', [property_account_payable_id])]"
                           options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
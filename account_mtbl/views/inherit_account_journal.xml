<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_journal_form_inherit" model="ir.ui.view">
            <field name="name">account.journal.form.view</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='default_credit_account_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='default_debit_account_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_account_journal_form_ou_inherit" model="ir.ui.view">
            <field name="name">account.journal.ou.form.view</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account_operating_unit.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='operating_unit_id']" position="replace">
                    <field name="operating_unit_id"
                       options="{'no_create': True,'no_create_edit':True,'no_open':True}"
                       groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
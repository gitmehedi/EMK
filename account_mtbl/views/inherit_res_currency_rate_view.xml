<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="currency_rate_form_inherit" model="ir.ui.view">
        <field name="name">currency.rate.form.inherit</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_form"/>
        <field eval="26" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Currency Rate" edit="0" duplicate="0">
                    <header>
                        <button name="act_approve" string="Approve" type="object" states="draft"
                                class="oe_highlight"
                                groups="mtbl_access.group_mtbl_sys_admin"/>
                        <button name="act_reject" string="Reject" type="object" states="draft"
                                groups="mtbl_access.group_mtbl_sys_admin"/>
                        <button name="%(action_currency_rate_wizard)d" string="Edit" type="action"
                                class="oe_highlight" groups="mtbl_access.group_mtbl_sys_admin"
                                attrs="{'invisible':['|',('state','in',('draft','reject')),('pending','=', True)]}"/>
                        <button name="act_approve_pending" string="Approve" type="object" class="oe_highlight"
                                groups="mtbl_access.group_mtbl_sys_admin"
                                attrs="{'invisible':['|',('state','=','draft'),('pending','=', False)]}"/>
                        <button name="act_reject_pending" string="Reject" type="object"
                                groups="mtbl_access.group_mtbl_sys_admin"
                                attrs="{'invisible':['|',('state','=','draft'),('pending','=', False)]}"/>
                        <button name="act_draft" string="Set to Draft" type="object" states="reject"
                                groups="mtbl_access.group_mtbl_sys_admin"/>
                        <field name="state" widget="statusbar" invisible="True"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options="{&quot;terminology&quot;: &quot;active&quot;}"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="rate"/>
                                <field name="pending" invisible="1"/>
                            </group>
                            <group>
                                <field name="currency_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>

                        </group>
                        <field name="line_ids" attrs="{'invisible':[('line_ids','=',[])]}">
                            <tree decoration-info="state=='pending'" decoration-success="state=='approve'"
                                  decoration-bf="state in ('pending',)"
                                  decoration-danger="state=='reject'">
                                <field name="change_rate"/>
                                <field name="request_date"/>
                                <field name="change_date"/>
                                <field name="status"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </xpath>
        </field>
    </record>
    <record id="currency_rate_tree_inherit" model="ir.ui.view">
        <field name="name">res.currency.rate.tree.inherit</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="Rates" decoration-info="state=='draft'"
                      decoration-success="state=='approve'"
                      decoration-danger="state=='reject'"
                      decoration-bf="state in ('approve',)">
                    <field name="name"/>
                    <field name="currency_id"/>
                    <field name="rate"/>
                    <field name="state"/>
                    <field name="active" invisible="1"/>
                </tree>
            </xpath>
        </field>
    </record>

    <record id="currency_rate_search_inherit" model="ir.ui.view">
        <field name="name">res.currency.rate.search.inherit</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_search"/>
        <field name="arch" type="xml">
            <search string="Currency Rates">
                <field name="pending" string="Pending"/>
                <group string="Group By">
                    <filter string="Pending" name="pending" icon="terp-personal"
                            domain="[('state','in',('draft','approve')),('pending','=',1),'|',('active','=',0),('active','=',1)]"/>
                    <filter string="Rejected" name="state" icon="terp-personal"
                            domain="[('active','=',0),('pending','=',0),('state','=','reject')]"/>
                    <filter string="In-Active" name="state" icon="terp-personal"
                            domain="[('active','=',0),('pending','=',0),('state','=','approve')]"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_res_currency_rate" model="ir.actions.act_window">
        <field name="name">Currency Rate</field>
        <field name="res_model">res.currency.rate</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {"search_default_active":'False',"search_default_pending":'True',}
        </field>
        <field name="search_view_id" ref="currency_rate_search_inherit"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Currency Rate.
            </p>
        </field>
    </record>

    <act_window
           id="base.act_view_currency_rates"
           name="Currency Rates"
           view_mode='tree,form'
           view_id='base.view_currency_rate_tree'
           domain="[('currency_id','=', active_id),'|',('active','=',0),('active','=',1)]"
           context="{'default_currency_id': active_id}"
           res_model="res.currency.rate"/>

    <menuitem
            id="menu_action_currency_rate"
            action="action_res_currency_rate"
            name="Currency Rates" sequence="21"
            parent="account.menu_config_multi_currency"
            groups="base.group_multi_currency,mtbl_access.group_mtbl_sys_admin"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_acquiring_channel_form" model="ir.ui.view">
        <field name="name">acquiring.channel.form</field>
        <field name="model">acquiring.channel</field>
        <field name="arch" type="xml">
            <form string="Acquiring Channel" copy='false'>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_acquiring_channel_tree" model="ir.ui.view">
        <field name="name">acquiring.channel.tree</field>
        <field name="model">acquiring.channel</field>
        <field name="arch" type="xml">
            <tree string="Acquiring Channel" copy='false'>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_acquiring_channel_search" model="ir.ui.view">
        <field name="name">acquiring.channel.search</field>
        <field name="model">acquiring.channel</field>
        <field name="arch" type="xml">
            <search string="Acquiring Channel">
                <field name="name" string="Name"/>
                <field name="code" string="Code"/>
                <filter name="inactive" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_acquiring_channel" model="ir.actions.act_window">
        <field name="name">Acquiring Channel</field>
        <field name="res_model">acquiring.channel</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new acquiring channel.
            </p>
        </field>
    </record>

    <menuitem action="action_acquiring_channel"
              id="menu_action_acquiring_channel_tree"
              parent="account.account_account_menu"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page/field/tree/field[@name='operating_unit_id']" position="after">
                    <field name="sub_operating_unit_id" options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                    <field name="segment_id" options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                    <field name="acquiring_channel_id" options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                    <field name="servicing_channel_id" options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_analytic_account_list" model="ir.ui.view">
            <field name="name">inherit.analytic.account.list</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//field[@name='debit']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//field[@name='credit']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//field[@name='balance']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>

        <record id="inherit_analytic_account_form" model="ir.ui.view">
            <field name="name">inherit.analytic.account.form</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="maker_id" invisible="1"/>
                    <field name="approver_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='operating_unit_ids']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
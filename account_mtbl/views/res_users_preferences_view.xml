<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_users_form_simple_modif" model="ir.ui.view">
            <field name="name">inherit.res.users.preferences.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='preferences']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//form/group[2]" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

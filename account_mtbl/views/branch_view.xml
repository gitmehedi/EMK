<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_operating_unit_inherit" model="ir.ui.view">
            <field name="name">view.operating.unit.form</field>
            <field name="model">operating.unit</field>
            <field name="inherit_id" ref="operating_unit.view_operating_unit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Branch" edit="0" duplicate="0">
                        <header>
                            <button name="act_approve" string="Approve" type="object" states="draft"
                                    class="oe_highlight"
                                    groups="mtbl_access.group_mtbl_sys_admin,account.group_account_manager"/>
                            <button name="act_reject" string="Reject" type="object" states="draft"
                                    groups="mtbl_access.group_mtbl_sys_admin,account.group_account_manager"/>
                            <button name="%(action_branch_wizard)d" string="Edit" type="action"
                                    class="oe_highlight" groups="mtbl_access.group_mtbl_sys_admin,account.group_account_manager"
                                    attrs="{'invisible':['|',('state','in',('draft','reject')),('pending','=', True)]}"/>
                            <button name="act_approve_pending" string="Approve" type="object" class="oe_highlight"
                                    groups="mtbl_access.group_mtbl_sys_admin,account.group_account_manager"
                                    attrs="{'invisible':['|',('state','=','draft'),('pending','=', False)]}"/>
                            <button name="act_reject_pending" string="Reject" type="object"
                                    groups="mtbl_access.group_mtbl_sys_admin,account.group_account_manager"
                                    attrs="{'invisible':['|',('state','=','draft'),('pending','=', False)]}"/>
                            <button name="act_draft" string="Set to Draft" type="object" states="reject"
                                    groups="mtbl_access.group_mtbl_sys_admin,account.group_account_manager"/>
                            <field name="state" widget="statusbar" invisible="True"/>
                        </header>
                        <sheet>
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="pending" invisible="True"/>
                                </group>
                                <group>
                                    <field name="company_id" invisible="True"
                                           groups="base.group_multi_company"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="branch_type"/>
                                    <field name="maker_id" invisible="1"/>
                                    <field name="approver_id" invisible="1"/>
                                </group>
                            </group>
                            <field name="line_ids" attrs="{'invisible':[('line_ids','=',[])]}">
                                <tree decoration-info="state=='pending'" decoration-success="state=='approve'"
                                      decoration-bf="state in ('pending',)"
                                      decoration-danger="state=='reject'">
                                    <field name="change_name"/>
                                    <field name="branch_type"/>
                                    <field name="status"/>
                                    <field name="request_date"/>
                                    <field name="change_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </xpath>
            </field>
        </record>

        <record id="inherit_branch_type" model="ir.ui.view">
            <field name="name">inherit.operating.unit.tree</field>
            <field name="model">operating.unit</field>
            <field name="inherit_id" ref="operating_unit.view_operating_unit_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Branch" decoration-info="state=='draft'"
                          decoration-success="state=='approve'"
                          decoration-danger="state=='reject'"
                          decoration-bf="state in ('approve',)">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="branch_type"/>
                        <field name="state"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="view_branch_search" model="ir.ui.view">
            <field name="name">inherit.operating.unit.search</field>
            <field name="model">operating.unit</field>
            <field name="inherit_id" ref="operating_unit.view_operating_unit_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="replace">
                    <search string="Branch">
                        <field name="name" string="Branch"/>
                        <field name="pending" string="Pending"/>
                        <field name="code" string="Code"/>
                        <field name="branch_type" string="Location of Branch"/>
                        <group string="Group By">
                            <filter name="branch_type" string="Location of Branch"
                                    context="{'group_by': 'branch_type'}"/>
                            <filter string="Pending" name="pending" icon="terp-personal"
                                    domain="[('state','in',('draft','approve')),('pending','=',1),'|',('active','=',0),('active','=',1)]"/>
                            <filter string="Rejected" name="state" icon="terp-personal"
                                    domain="[('active','=',0),('pending','=',0),('state','=','reject')]"/>
                            <filter string="In-Active" name="state" icon="terp-personal"
                                    domain="[('active','=',0),('pending','=',0),('state','=','approve')]"/>
                        </group>
                    </search>
                </xpath>
            </field>
        </record>

        <record id="operating_unit.action_operating_unit_tree" model="ir.actions.act_window">
            <field name="name">Branch</field>
            <field name="res_model">operating.unit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {"search_default_branch_type":1,"search_default_active":'False',"search_default_pending":'True',}
            </field>
            <field name="search_view_id" ref="view_branch_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to start a new Branch.
                </p>
            </field>
        </record>

        <record id="operating_unit.menu_action_operating_unit_tree" model="ir.ui.menu">
            <field name="name">Branch</field>
            <field name="sequence">10</field>
            <field name="groups_id"
                   eval="[(4, ref('mtbl_access.group_mtbl_sys_admin')),(4,ref('operating_unit.group_multi_operating_unit'))]"/>
        </record>

    </data>
</odoo>
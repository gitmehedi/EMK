<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="edit">0</attribute>
                </xpath>
                <xpath expr="//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='account_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='analytic_account_id']" position="attributes">
                    <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>>
                    <attribute name="string">Cost Centre</attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/field/tree/field[@name='operating_unit_id']" position="after">
                    <field name="segment_id" options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                    <field name="acquiring_channel_id"
                           options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                    <field name="servicing_channel_id"
                           options="{'no_create': True,'no_create_edit':True,'no_open':True}"/>
                </xpath>
                <xpath expr="//sheet/notebook/page/field/tree/field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/field/tree/field[@name='date_maturity']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//button[@name='%(account.action_view_account_move_reversal)d']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//button[@name='open_reconcile_view']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_move_tree" model="ir.ui.view">
            <field name="name">account.move.tree.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="edit">0</attribute>
                    <attribute name="decoration-info">state == 'draft'</attribute>
                    <attribute name="decoration-muted">state == 'posted'</attribute>
                    <attribute name="decoration-bf">state in ('posted')</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.values" id="account.action_account_move_reversal">
            <field name="model_id" ref="account.model_account_move"/>
            <field name="name">Reverse Moves</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('account.action_view_account_move_reversal'))"/>
            <field name="key">action</field>
            <field name="model">account.move</field>
            <field name="groups_id"
                   eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>
    </data>
</odoo>
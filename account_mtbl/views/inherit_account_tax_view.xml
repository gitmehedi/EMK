<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_account_tax_form" model="ir.ui.view">
        <field name="name">inherit.account.tax.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_adjustment']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='analytic']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_account_tax_search_inherited" model="ir.ui.view">
        <field name="name">view.account.tax.search</field>
        <field name="model">account.tax</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="l10n_bd_account_tax.inherited_view_account_tax_search"/>
        <field name="arch" type="xml">
            <xpath expr="field[@name='company_id']" position="after">
                <filter name="inactive" string="Inactive"
                        domain="[('active', '=', False)]"/>
                <seperator/>
            </xpath>
        </field>
    </record>
</odoo>
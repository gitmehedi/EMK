<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_segment_form" model="ir.ui.view">
        <field name="name">segment.form</field>
        <field name="model">segment</field>
        <field name="arch" type="xml">
            <form string="Segment" copy='false'>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_segment_tree" model="ir.ui.view">
        <field name="name">segment.tree</field>
        <field name="model">segment</field>
        <field name="arch" type="xml">
            <tree string="Segment" copy='false'>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_segment_search" model="ir.ui.view">
        <field name="name">segment.search</field>
        <field name="model">segment</field>
        <field name="arch" type="xml">
            <search string="Segment">
                <field name="name" string="Name"/>
                <field name="code" string="Code"/>
                <filter name="inactive" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_segment" model="ir.actions.act_window">
        <field name="name">Segment</field>
        <field name="res_model">segment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new Segment.
            </p>
        </field>
    </record>

    <menuitem action="action_segment"
              id="menu_action_segment_tree"
              parent="account.account_account_menu"/>
</odoo>

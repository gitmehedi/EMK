<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Stock Transfer Menu -->
		<menuitem name="Gate Pass Report" parent="base.menu_reporting"
			id="sub_group_menu_gete_pass_report" sequence="4"
			groups="stock.group_stock_user" />
						
		<record id="view_wizard_gate_pass_report_history" model="ir.ui.view">
            <field name="name">Gate Pass Report</field>
            <field name="model">gatepass.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <field name="start_date"/>
                        <field name="end_date" />
                        <field name="gate_pass_type" invisible='1'/>
                        <field name="source_loc" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'></field>
                        <field name="desti_loc" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'></field>
                    </group>
                    <footer>
                        <button name="action_gate_pass_report" string="Submit" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
                
		<record id="action_wizard_gate_pass_in_report_history" model="ir.actions.act_window">
			<field name="name">Gate Pass In</field>
			<field name="res_model">gatepass.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_wizard_gate_pass_report_history" />
			<field name="context">{'default_gate_pass_type': '1'}</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_action_wizard_gate_pass_in_report_history"
			action="action_wizard_gate_pass_in_report_history" parent="sub_group_menu_gete_pass_report"
			sequence="1" />
		
		<record id="action_wizard_gate_pass_out_report_history" model="ir.actions.act_window">
			<field name="name">Gate Pass Out </field>
			<field name="res_model">gatepass.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_wizard_gate_pass_report_history" />
			<field name="context">{'default_gate_pass_type': '2'}</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_action_wizard_gate_pass_out_report_history"
			action="action_wizard_gate_pass_out_report_history" parent="sub_group_menu_gete_pass_report"
			sequence="2" />
        
	</data>
</openerp>
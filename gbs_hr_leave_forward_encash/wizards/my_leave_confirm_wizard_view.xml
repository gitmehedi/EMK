<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="my_leave_confirm_wizard" model="ir.ui.view">
            <field name="name">my.leave.confirm.wizard</field>
            <field name="model">my.leave.confirm.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Please Enter The Information" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="encashment_leave"/>
                            <field name="carried_leave"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Save" name="action_confirm_save" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--Employee criteria view-->
        <record id="view_hr_employee_criteria_tree" model="ir.ui.view">
			<field name="name">hr_employee_criteria_tree</field>
			<field name="model">hr.employee.criteria</field>
			<field name="arch" type="xml">
				<tree string="HR Employee Criteria">
					<field name="name" />
                    <field name="seq"/>
                    <field name="marks"/>
                    <field name="type"/>
                    <field name="is_active"/>
				</tree>
			</field>
		</record>

        <record id="view_hr_employee_criteria_form" model="ir.ui.view">
			<field name="name">hr_employee_criteria_form</field>
			<field name="model">hr.employee.criteria</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
                <form string="HR Employee Criteria">
                    <sheet>
                        <div class="oe_button_box"></div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h2><field name="name"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="seq"/>
                                <field name="marks"/>
                            </group>
                            <group>
                                <field name="type"/>
                                <field name="is_active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_employee_criteria" model="ir.actions.act_window">
			<field name="name">HR Employee Criteria</field>
			<field name="res_model">hr.employee.criteria</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem
				name="HR Employee Criteria"
                parent="hr.menu_hr_root"
				id="hr_criteria_main_menu"
				sequence="94"
                groups="hr.group_hr_user,hr.group_hr_manager"
        />
		<menuitem
				name="HR Employee Criteria"
                parent="hr_criteria_main_menu"
				id="hr_evaluation_criteria_menu"
				sequence="30"
                action="action_hr_employee_criteria"
                groups="hr.group_hr_user,hr.group_hr_manager"
        />
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_type_product_account_form_view" model="ir.ui.view">
            <field name="name">sale.type.product.account.form.view</field>
            <field name="model">sale.type.product.account</field>
            <field name="arch" type="xml">
                <form string="Sale Type Product Account">
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="sale_order_type_id"/>
                            <field name="packing_mode_id"/>
                            <field name="account_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sale_type_product_account_tree_view" model="ir.ui.view">
            <field name="name">sale.type.product.account.tree.view</field>
            <field name="model">sale.type.product.account</field>
            <field name="arch" type="xml">
                <tree string="Sale Type Product Account">
                    <field name="product_id"/>
                    <field name="sale_order_type_id"/>
                    <field name="packing_mode_id"/>
                    <field name="account_id"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_form_view_invoice_policy1">
            <field name="name">product.template.invoice.policy</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="invoicing" position="inside">
                    <separator string="Credited Account" attrs="{'invisible': [('sale_ok', '=', False)]}"/>
                    <field name="sale_type_account_ids" nolabel="1" attrs="{'invisible': [('sale_ok', '=', False)]}">
                        <tree string="Sale Type Product Account" editable="bottom">
                            <field name="product_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="sale_order_type_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="packing_mode_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="account_id" options="{'no_open':True,'no_create':True}"/>
                        </tree>
                    </field>
                </page>
            </field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_type_product_account_form_view" model="ir.ui.view">
            <field name="name">sale.type.product.account.form.view</field>
            <field name="model">sale.type.product.account</field>
            <field name="arch" type="xml">
                <form string="Sale Type Product Account">
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="account_id"/>
                            <field name="sale_order_type_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sale_type_product_account_tree_view" model="ir.ui.view">
            <field name="name">sale.type.product.account.tree.view</field>
            <field name="model">sale.type.product.account</field>
            <field name="arch" type="xml">
                <tree string="Sale Type Product Account">
                    <field name="product_id"/>
                    <field name="account_id"/>
                    <field name="sale_order_type_id"/>
                </tree>
            </field>
        </record>
        <record id="inherited_product_product_form_view" model="ir.ui.view">
            <field name="name">inherited_product_product_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='email_template_and_project']" position="after">
                    <separator string="Credited Account"/>
                    <field name="sale_type_account_ids" nolabel="1">
                        <tree string="Sale Type Product Account" editable="bottom">
                            <field name="product_id" domain="[('sale_ok','=',1)]" options="{'no_open':True,'no_create':True}"/>
                            <field name="sale_order_type_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="account_id" options="{'no_open':True,'no_create':True}"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
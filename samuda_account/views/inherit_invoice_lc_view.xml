<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="som_invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form.so.map</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="lc_id" string="LC No"/>
            </field>
            <xpath expr="//page[2]/group/group/field[@name='date_due']" position="replace">
                <field name="date_due" groups="base.group_user"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.samuda.account</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="groups_id" eval="[(6, 0, [ref('gbs_application_group.group_invoice_manager')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_invoice']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form.inherit.samuda.account</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_invoice']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.invoice.select</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <field name="number" position="after">
                <field name="so_id"/>
                <field name="lc_id"/>
            </field>
        </field>
    </record>

</odoo>
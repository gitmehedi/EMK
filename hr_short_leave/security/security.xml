<odoo>

      <record id="short_leave_permission_for_dept_manager" model="ir.rule">
        <field name="name">Leave Permission for Department Manager</field>
        <field name="model_id" ref="model_hr_short_leave"/>
        <field name="domain_force">[('department_id.manager_id.user_id','=',user.id)]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('gbs_base_package.group_dept_manager'))]"/>
    </record>

    <record id="property_rule_short_leaves_officers" model="ir.rule">
        <field name="name">Short Leaves Officer</field>
        <field name="model_id" ref="model_hr_short_leave"/>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays.group_hr_holidays_user'))]"/>
    </record>

   <record id="ir_rule_hr_emp_2234" model="ir.rule">
        <field name="model_id" ref="model_hr_short_leave"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="name">Employee Permission Employe1e</field>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>


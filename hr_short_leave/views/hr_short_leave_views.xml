<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="hr_short_leave_form_view" model="ir.ui.view">
            <field name="name">hr.holidays.view.form</field>
            <field name="model">hr.short.leave</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='date_from']" position="replace" >
                    <field name="date_from" attrs="{'required':[('type', '=', 'remove')]}" class="oe_inline"/>
                </xpath>

                <xpath expr="//field[@name='date_to']" position="replace">
                    <field name="date_to" attrs="{'required':[('type', '=', 'remove')]}" class="oe_inline"/>
                </xpath>

                <xpath expr="//field[@name='number_of_days_temp']" position="replace">
                    <field name="number_of_days_temp" class="oe_inline"/> Hours
                </xpath>

            </field>
        </record>

        <record id="hr_short_leave_tree_view" model="ir.ui.view">
            <field name="name">hr.short.leave.tree</field>
            <field name="model">hr.short.leave</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="hr_holidays.view_holiday_allocation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_from']" position="replace">
                    <field name="date_from" />
                </xpath>

                <xpath expr="//field[@name='date_to']" position="replace">
                    <field name="date_to" />
                </xpath>

            </field>
        </record>

        <record model="ir.actions.act_window" id="hr_short_leave_action">
            <field name="name">Short Leaves</field>
            <field name="res_model">hr.short.leave</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="short_leave_menu" name="Short Leaves" parent="hr_holidays.menu_hr_holidays_root"
                  action="hr_short_leave_action" groups="base.group_user"/>

        <menuitem id="short_leave" name="Short Leaves" parent="short_leave_menu"
                  action="hr_short_leave_action" groups="base.group_user"/>

    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Holidays: Allocation Request -->
        <record id="edit_holiday_new1" model="ir.ui.view">
            <field name="name">Short Leave Request</field>
            <field name="model">hr.short.leave</field>
            <field name="arch" type="xml">
                <form string="Leave Request">
                <field name="can_reset" invisible="1"/>
                <field name="type" invisible="1"/>
                <header>
                    <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
                    <button string="Approve" name="action_approve" states="confirm" type="object" groups="gbs_base_package.group_dept_manager" class="oe_highlight"/>
                    <button string="Validate" name="action_validate" states="validate1" type="object" groups="hr_holidays.group_hr_holidays_manager" class="oe_highlight"/>
                    <button string="Refuse" name="action_refuse" states="confirm,validate,validate1" type="object"  groups="hr_holidays.group_hr_holidays_user,gbs_base_package.group_dept_manager"/>
                    <button string="Reset to Draft" name="action_draft" type="object"
                            attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'not in', ['confirm', 'refuse'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="display_name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly':[('state','!=','draft'),('state','!=','confirm')]}"/>
                            <field name="holiday_status_id" attrs="{'readonly':[('state','!=','draft'),('state','!=','confirm')]}" context="{'employee_id':employee_id}"/>
                            <label for="number_of_days_temp" attrs="{'readonly':[('state','!=','draft'),('state','!=','confirm')]}"  string="Duration"/>
                            <div>
                                <div attrs="{'invisible': [('type', '=', 'add')]}">
                                    <field name="date_from" attrs="{'required':[('type', '=', 'remove')], 'readonly':[('state','!=','draft'),('state','!=','confirm')]}" class="oe_inline"/>
                                    <label string="-" class="oe_inline"/>
                                    <field name="date_to"  attrs="{'required':[('type', '=', 'remove')], 'readonly':[('state','!=','draft'),('state','!=','confirm')]}" class="oe_inline"/>
                                </div>
                                <div>
                                    <field name="number_of_days_temp" class="oe_inline"/> Hour(s)
                                    <!--<field name="number_of_days_temp" attrs="{'readonly':[('type','=','remove')]}" class="oe_inline"/> Hour(s)-->
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="holiday_type" attrs="{'readonly':[('type', '=', 'remove'),('state','!=','draft')]}" string="Mode" groups="hr_holidays.group_hr_holidays_user" context="{'employee_id':employee_id}" />
                            <field name="employee_id" attrs="{'required':[('holiday_type','=','employee')],'invisible':[('holiday_type','=','category')], 'readonly':[('state','!=','draft'),('state','!=','confirm')]}" groups="hr_holidays.group_hr_holidays_user"/>
                            <field name="category_id" attrs="{'required':[('holiday_type','=','category')], 'readonly': [('type', '=', 'remove'),('state','!=','draft'), ('state','!=','confirm')], 'invisible':[('holiday_type','=','employee')]}"/>
                            <field name="department_id" groups="hr_holidays.group_hr_holidays_user" attrs="{'readonly':['|','|' ,('type','=','add'),('holiday_type','=','category'),('state','=', 'validate')],'invisible':[('holiday_type','=','category')],'readonly':[('state','!=','draft'),('state','!=','confirm')]}"/>
                            <field name="payslip_status" groups="hr_holidays.group_hr_holidays_manager" attrs="{'invisible':[('type','=','add')]}" widget="toggle_button"/>
                        </group>
                        <field name="notes" nolabel="1" colspan="4" placeholder="Add a reason..." attrs="{'invisible': [('type', '=', 'remove')]}"/>
                        <div groups="hr_holidays.group_hr_holidays_manager" attrs="{'invisible':[('type','=','add')]}">
                            <separator string="Comment by Manager"/>
                            <field name="report_note" placeholder="e.g. Report to the next month..."/>
                        </div>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="view_holiday_allocation_tree1" model="ir.ui.view">
            <field name="name">short.leave.allocation.tree1</field>
            <field name="model">hr.short.leave</field>
            <field name="arch" type="xml">
                <tree decoration-danger="state == 'refuse'" decoration-info="state == 'draft'" string="Allocation Requests"
                       decoration-bf="message_needaction == True">
                    <field name="employee_id"/>
                    <field name="holiday_type"/>
                    <field name="category_id"/>
                    <field name="department_id" invisible="1"/>
                    <field name="holiday_status_id"/>
                    <field name="name"/>
                    <field name="number_of_days" string="Allocated Hours" sum="Remaining Days"/>
                    <field name="manager_id" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="message_needaction" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hr_short_leave_action">
            <field name="name">Short Leaves</field>
            <field name="res_model">hr.short.leave</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="short_leave_menu" name="Short Leaves" parent="hr_holidays.menu_hr_holidays_root"
                  action="hr_short_leave_action" sequence="7"
                  groups="gbs_base_package.group_dept_manager,hr.group_hr_manager,base.group_user"/>

        <menuitem id="short_leave" name="Short Leaves" parent="short_leave_menu" action="hr_short_leave_action"
                  groups="gbs_base_package.group_dept_manager,hr.group_hr_manager,base.group_user"/>

    </data>
</odoo>
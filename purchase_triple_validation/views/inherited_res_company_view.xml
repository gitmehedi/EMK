<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_company_form_inherit_triple_validation" model="ir.ui.view">
            <field name="name">res.company.mrp.config</field>
            <field name="model">res.company</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='logistics_grp']" position="inside">
                        <field name="po_triple_validation_amount"
						attrs="{'invisible': [('po_double_validation', 'in', ('one_step','two_step'))]}" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>


<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="act_double_wait_2" model="workflow.activity">
			<field name="wkf_id" ref="purchase.purchase_order" />
			<field name="name">WaitForApproval_2</field>
			<field name="kind">dummy</field>
		</record>

		<record id="act_double_check_2" model="workflow.activity">
			<field name="wkf_id" ref="purchase.purchase_order" />
			<field name="name">CheckForApproval2</field>
			<field name="split_mode">OR</field>
			<field name="kind">dummy</field>
		</record>

		<record id="trans_confirmed_2_double_check" model="workflow.transition">
			<field name="act_from" ref="purchase_double_validation.act_double_wait" />
			<field name="act_to" ref="act_double_check_2" />
		</record>

		<record id="trans_confirmed_2_double_gt" model="workflow.transition">
			<field name="act_from" ref="act_double_check_2" />
			<field name="act_to" ref="act_double_wait_2" />
			<field name="condition">amount_untaxed &gt;= 500</field>
			<field name="signal">purchase_approve_2</field>
			<field name="group_id" ref="purchase.group_purchase_manager" />
		</record>

		<record id="trans_confirmed_2_double_lt" model="workflow.transition">
			<field name="act_from" ref="act_double_check_2" />
			<field name="act_to" ref="act_double_wait_2" />
			<field name="condition">amount_untaxed &lt; 500</field>
		</record>

		<record id="trans_double_app_2_conf" model="workflow.transition">
			<field name="act_from" ref="act_double_wait_2" />
			<field name="act_to" ref="purchase.act_router" />
		</record>

	</data>
</openerp>

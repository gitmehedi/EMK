<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_event_reservation" name="Website Event Reservation" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/opa_utility/static/src/js/bootstrap.validator.js"></script>
            <script type="text/javascript" src="/opa_utility/static/src/js/utils.js"></script>
            <script type="text/javascript" src="/event_registration/static/src/js/custom.js"></script>
            <link rel="stylesheet" href="/event_registration/static/src/css/style.css"/>
        </xpath>
    </template>

    <template id="event_reservation" name="Event Reservation ">
        <t t-call="web.login_layout">
            <div class="container">
                <div class="row">
                    <form class="s_website_form container-fluid mt32" enctype="multipart/form-data" role="form"
                          method="post" t-if="not message" data-toggle="validator2" id="event-reservation">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <script type="text/javascript">
                            var config = {
                            baseurl: "<t t-esc="baseurl"/>",
                            };
                        </script>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <input type="hidden" name="token" t-att-value="token"/>
                        <h2 class="panel-title text-center">Event Reservation</h2>

                        <div class="col-md-12 margin-top-15">
                            <div class="panel panel-success">
                                <div class="panel-heading odoobg">
                                    <h3 class="panel-title text-left">Basic Information</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-12">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="event_name" class="control-label">Event Name</label>
                                                <input type="text" name="event_name" t-att-value="event_name"
                                                       id="event_name" maxlength="100" placeholder="Event Name"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="poc_type_id" class="control-label">PoC Type</label>
                                                <select class="form-control input-sm reqfield" name="poc_type_id"
                                                        id="poc_type_id" required="required">
                                                    <option value="">--Please Select--</option>
                                                    <t t-foreach="poc_type_ids" t-as='label'>
                                                        <option t-att-value="label_value[0]"
                                                                t-att-selected="'selected' if poc_type_id==label_value[0] else None">
                                                            <t t-esc="label_value[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="facilities_ids" class="control-label">Facilities Requested
                                                </label>
                                                <div class="mar-btm required">
                                                    <t t-foreach="facilities" t-as='label'>
                                                        <input type="checkbox"
                                                               name="facilities_ids"
                                                               t-att-value="label_value[0]"
                                                               t-att-checked="'checked' if label_value[0] in facilities_ids else None"/>
                                                        <t t-esc="label_value[1]"/>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="event_type_id" class="control-label">Event Type</label>
                                                <select class="form-control input-sm reqfield" name="event_type_id"
                                                        id="event_type_id" required="required">
                                                    <option value="">--Please Select--</option>
                                                    <t t-foreach="event_type_ids" t-as='label'>
                                                        <option t-att-value="label_value[0]"
                                                                t-att-selected="'selected' if event_type_id==label_value[0] else None">
                                                            <t t-esc="label_value[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="space_id" class="control-label">Need EMK Space?</label>
                                                <div class="mar-btm">
                                                    <t t-foreach="space_ids" t-as='label'>
                                                        <label class="radio-inline">
                                                            <input type="radio" name="space_id"
                                                                   t-att-value="label_value[0]"
                                                                   t-att-checked="'checked' if label_value[0]==space_id else None"
                                                                   required="required"/>
                                                            <t t-esc="label_value[1]"/>
                                                        </label>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel panel-success">
                                <div class="panel-heading odoobg">
                                    <h3 class="panel-title text-left">Seats Information</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="seats_available" class="control-label">Available Seats
                                                </label>
                                                <div class="mar-btm">
                                                    <t t-foreach="seats_available_ids" t-as='label'>
                                                        <label class="radio-inline">
                                                            <input type="radio" name="seats_available" class="number"
                                                                   t-att-value="label_value[0]" required="required"
                                                                   t-att-checked="'checked' if label_value[0]==seats_available else None"
                                                            />
                                                            <t t-esc="label_value[1]"/>
                                                        </label>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="attendee_number" class="control-label">No. of Attendees
                                                </label>
                                                <input type="text" name="attendee_number" t-att-value="attendee_number"
                                                       id="attendee_number" maxlength="10"
                                                       class="form-control input-sm reqfield number"
                                                       required="required"/>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="total_session" class="control-label">No. of Sessions</label>
                                                <input type="text" name="total_session" t-att-value="total_session"
                                                       id="total_session" maxlength="2" required="required"
                                                       class="form-control input-sm reqfield number"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="request_date" class="control-label">Requested Date
                                                </label>
                                                <input type="text" name="request_date" t-att-value="request_date"
                                                       id="request_date" placeholder="1960-12-31" readonly="readonly"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                            <!--                                                         <input type="text" name="phone" t-att-value="phone" id="phone"-->
                                            <!--                                                       placeholder="8801900000000" maxlength="13" minlength="13"-->
                                            <!--                                                       class="form-control input-sm reqfield number" pattern="(880)([0-9]{10})"-->
                                            <!--                                                       data-minlength="13" data-maxlength="13" required="required"/>-->
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="start_date" class="control-label">Start Date</label>
                                                <input type="text" name="start_date" t-att-value="start_date"
                                                       id="start_date" placeholder="1960-12-31"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="end_date" class="control-label">End Date</label>
                                                <input type="text" name="end_date" t-att-value="end_date" id="end_date"
                                                       placeholder="1960-12-31"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="last_date_reg" class="control-label">Last Date of
                                                    Registration
                                                </label>
                                                <input type="text" name="last_date_reg" t-att-value="last_date_reg"
                                                       id="last_date_reg" placeholder="1960-12-31"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel panel-success">
                                <div class="panel-heading odoobg">
                                    <h3 class="panel-title text-left">Payments Information</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="mode_of_payment" class="control-label">Mode of Payment
                                                </label>
                                                <select class="form-control input-sm reqfield" name="mode_of_payment"
                                                        id="mode_of_payment"
                                                        required="required">
                                                    <option value="">--Please Select--</option>
                                                    <t t-foreach="payment_ids" t-as='label'>
                                                        <option t-att-value="label_value[0]"
                                                                t-att-selected="'selected' if mode_of_payment==label_value[0] else None">
                                                            <t t-esc="label_value[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="payment_type" class="control-label">Type</label>
                                                <div class="mar-btm">
                                                    <t t-foreach="payment_type_ids" t-as='label'>
                                                        <label class="radio-inline">
                                                            <input type="radio" name="payment_type"
                                                                   t-att-value="label_value[0]"
                                                                   t-att-checked="'checked' if label_value[0]==payment_type else None"
                                                                   required="required"/>
                                                            <t t-esc="label_value[1]"/>
                                                        </label>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="date_of_payment" class="control-label">Date for Payment
                                                </label>
                                                <input type="text" name="date_of_payment" t-att-value="date_of_payment"
                                                       id="date_of_payment" placeholder="1960-12-31"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="proposed_budget" class="control-label">Proposed Budget
                                                </label>
                                                <input type="text" name="proposed_budget" t-att-value="proposed_budget"
                                                       id="proposed_budget"
                                                       class="form-control input-sm reqfield number "
                                                       required="required"/>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="paid_attendee" class="control-label">Participation Charge
                                                </label>
                                                <div class="mar-btm">
                                                    <t t-foreach="paid_attendee_ids" t-as='label'>
                                                        <label class="radio-inline">
                                                            <input type="radio" name="paid_attendee"
                                                                   t-att-value="label_value[0]"
                                                                   t-att-checked="'checked' if label_value[0]==paid_attendee else None"
                                                                   required="required"/>
                                                            <t t-esc="label_value[1]"/>
                                                        </label>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="participating_amount" class="control-label">Participation
                                                    Amount
                                                </label>
                                                <input type="text" name="participating_amount"
                                                       t-att-value="participating_amount" id="participating_amount"
                                                       class="form-control input-sm reqfield number "
                                                       required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel panel-success">
                                <div class="panel-heading odoobg">
                                    <h3 class="panel-title text-left">Additional Information</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="target_audience_group" class="control-label">Target Audience
                                                    Group
                                                </label>
                                                <select class="form-control input-sm reqfield"
                                                        name="target_audience_group"
                                                        id="target_audience_group" required="required">
                                                    <option value="">--Please Select--</option>
                                                    <t t-foreach="target_audience_group_ids" t-as='label'>
                                                        <option t-att-value="label_value[0]"
                                                                t-att-selected="'selected' if target_audience_group==label_value[0] else None">
                                                            <t t-esc="label_value[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="target_age" class="control-label">Target Age</label>
                                                <input type="text" name="target_age" t-att-value="target_age"
                                                       class="form-control input-sm reqfield number"
                                                       id="target_age" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="outreach_plan" class="control-label">Outreach Plan</label>
                                                <select class="form-control input-sm reqfield" name="outreach_plan"
                                                        id="outreach_plan" required="required">
                                                    <option value="">--Please Select--</option>
                                                    <t t-foreach="outreach_plan_ids" t-as='label'>
                                                        <option t-att-value="label_value[0]"
                                                                t-att-selected="'selected' if outreach_plan==label_value[0] else None">
                                                            <t t-esc="label_value[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="outreach_plan_other" class="control-label">Outreach Plan
                                                    Other
                                                </label>
                                                <input type="text" name="outreach_plan_other"
                                                       t-att-value="outreach_plan_other"
                                                       id="outreach_plan_other"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-field">
                                                <label for="snakes_required" class="control-label">
                                                    Food/Beverage/Snacks?
                                                </label>
                                                <div class="mar-btm">
                                                    <t t-foreach="snakes_ids" t-as='label'>
                                                        <label class="radio-inline">
                                                            <input type="radio" name="snakes_required"
                                                                   t-att-value="label_value[0]"
                                                                   t-att-checked="'checked' if label_value[0]==snakes_required else None"
                                                                   required="required"/>
                                                            <t t-esc="label_value[1]"/>
                                                        </label>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel panel-success">
                                <div class="panel-heading odoobg">
                                    <h3 class="panel-title text-left">Event Details</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-12">
                                        <h4>Upload Event Details</h4>
                                        <div class="input_fields_wrap">
                                            <div>
                                                <table class="table table-hover" id="uploadtable">
                                                    <tr>
                                                        <td>
                                                            <input type="file" class="attachment"  name="event_details" required="required"
                                                            accept=".doc,.docx,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,.pdf"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-md-offset-5" style="margin-bottom: 100px;">
                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary btn-lg">Submit Event</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <template id="event_reservation_success" name="Event Reservation Success">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="container">
                    <div class="jumbotron mt32">
                        <h1>Thank you!</h1>
                        <div>
                            Your request has been submitted successfully. Check email for
                            further processing.
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="event_reservation_expire" name="Event Reservation Success">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="container">
                    <div class="jumbotron mt32">
                        <h1>Thank you!</h1>
                        <div>
                            Session has expire, please contact with administrator
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

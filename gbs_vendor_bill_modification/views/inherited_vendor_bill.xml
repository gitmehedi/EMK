<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherited_invoice_supplier_cancel_form_" model="ir.ui.view">
            <field name="name">inherited.invoice.supplier.cancel.form.1</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_cancel.invoice_supplier_cancel_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_invoice_cancel']" position="replace">
                    <button name="open_wizard_cancel" type="object" states="draft,proforma2,open" string="Cancel Bill"
                            groups="account.group_account_manager"/>
                </xpath>
            </field>
        </record>
        <record id="inherited_vendor_bill_form" model="ir.ui.view">
            <field name="name">inherit.vendor.bill.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="from_po_form" invisible="1"/>
                    <field name="direct_vendor_bill" invisible="1"/>
                    <field name="is_after_automation" invisible="1"/>
                    <field name="id" invisible="1"/>

                </xpath>

                <xpath expr="//sheet/group/group[2]" position="after">
                    <group colspan="4">
                        <field name="pickings" widget="many2many_tags"
                               attrs="{'invisible':[('is_after_automation','=',False)],'readonly':[('id','>',0)]}"
                               context="{'display_mrr_no': True}"/>
                    </group>
                </xpath>

                <field name="invoice_line_ids" position="attributes">
                    <attribute name="context" operation="python_dict" key="direct_vendor_bill">direct_vendor_bill
                    </attribute>
                </field>


                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="before">
                    <field name="can_edit_bill_line" invisible="1"/>
                    <field name="direct_vendor_bill" invisible="1"/>
                    <field name="duplc_qty" invisible="1"/>
                    <field name="move_ref" groups="base.group_private_addresses"/>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_bill_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='uom_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_bill_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='name']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_bill_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_bill_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_bill_line', '=', False)]}</attribute>
                </xpath>

            </field>
        </record>

        <record id="inherited_vendor_bill_form_100" model="ir.ui.view">
            <field name="name">inherit.vendor.bill.form_100</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="invoice_cancel_reason"
                           attrs="{'invisible': [('state', 'in', ['draft', 'proforma','proforma2', 'open','paid'])]}"/>
                </xpath>
            </field>
        </record>

        <record id="account.action_invoice_tree2" model="ir.actions.act_window">
            <field name="context">
                {'default_type': 'in_invoice',
                'type': 'in_invoice',
                'journal_type': 'purchase',
                'search_default_draft':1,
                'default_direct_vendor_bill':True
                }
            </field>
        </record>

        <record id="purchase.action_invoice_pending" model="ir.actions.act_window">
            <field name="context">
                {'default_type':'in_invoice',
                'type':'in_invoice',
                'journal_type': 'purchase',
                'no_create_edit_button':True
                }
            </field>
        </record>


    </data>
</odoo>

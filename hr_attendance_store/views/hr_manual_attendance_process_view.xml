<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_manual_attendance_process_form" model="ir.ui.view">
            <field name="name">hr.manual.attendance.process.form</field>
            <field name="model">hr.manual.attendance.process</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bulk / Manual Journal" delete="0" duplicate="0">
                    <header>
                        <button name="%(hr_attendance_store.action_hr_manual_attendance_process_wizard)d"
                                groups="hr_attendance.group_hr_attendance_manager" states="draft"
                                type="action" string="Attendance Import" class="oe_highlight"/>
                        <button name="act_filter" string="Filter Attendance" states="draft" type="object"
                                class="oe_highlight"/>
                        <button name="act_approve" string="Approve" states="filter" type="object" class="oe_highlight"/>
                        <button name="act_draft" string="Draft" states="filter" type="object"/>
                        <button name="act_reject" string="Reject" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,done,reject"/>
                    </header>
                    <sheet>
                        <div class="pull-left">
                            <h1>
                                <field name="name" readonly="1" nolabel="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="attendance_filename" invisible="True"/>
                                <field name="attendance_file" filename="attendance_filename"
                                       attr="{'invisible':[('','','')]}"/>
                                <field name="error_filename" invisible="True"/>
                                <field name="error_file" filename="error_filename"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Attendance Data" states="draft">
                                <field name="line_ids">
                                    <tree>
                                        <field name="date"/>
                                        <field name="time"/>
                                        <field name="terminal_id"/>
                                        <field name="employee_id"/>
                                        <field name="type"/>
                                        <field name="mode"/>
                                        <field name="card_serial_id"/>
                                        <field name="result"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Attendance Data" states="filter,approve,done,reject">
                                <field name="filter_ids">
                                    <tree>
                                        <field name="date"/>
                                        <field name="employee_id"/>
                                        <field name="terminal_id"/>
                                        <field name="entry_time"/>
                                        <field name="exit_time"/>
                                        <field name="duration"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_manual_attendance_process_tree" model="ir.ui.view">
            <field name="name">hr.manual.attendance.process.tree</field>
            <field name="model">hr.manual.attendance.process</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='draft'"
                      decoration-success="state in ('draft','filter','approve','migrate',)"
                      decoration-muted="state=='reject'"
                      decoration-bf="state in ('filter','approve','migrate',)">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_generate_cbs_journal_success_search" model="ir.ui.view">
            <field name="name">hr.manual.attendance.process.search</field>
            <field name="model">hr.manual.attendance.process</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="date"/>
                    <field name="date"/>
                </search>
            </field>
        </record>

        <record id="action_hr_manual_attendance_process" model="ir.actions.act_window">
            <field name="name">Manual Attendance Process</field>
            <field name="res_model">hr.manual.attendance.process</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_hr_manual_attendance_process" name="Manual Attendance Process"
                  parent="hr_manual_attendance.menu_hr_manual_attendance"
                  sequence="10" groups="hr_attendance.group_hr_attendance_manager"
                  action="action_hr_manual_attendance_process"/>
    </data>
</odoo>
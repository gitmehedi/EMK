<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <menuitem
				name="HR Evaluation"
                parent="hr.menu_hr_root"
				id="hr_evaluation_main_menu"
				sequence="93"
        />
        <!--evaluation plan view-->
        <record id="view_hr_evaluation_plan_tree" model="ir.ui.view">
			<field name="name">hr_evaluation_plan_tree</field>
			<field name="model">hr.evaluation.plan</field>
			<field name="arch" type="xml">
				<tree string="HR Evaluation Plan">
					<field name="name" />
					<field name="plan_year" />
				</tree>
			</field>
		</record>

        <record id="view_hr_evaluation_plan_form" model="ir.ui.view">
			<field name="name">hr_evaluation_plan_form</field>
			<field name="model">hr.evaluation.plan</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
                <form string="HR Evaluation Plan">
                    <sheet>
                        <div class="oe_button_box"></div>
                        <div class="oe_title">
                            <h2><field name="name"/></h2>
                        </div>
                        <group>
                            <group><field name="plan_year"/></group>
                            <group></group>
                        </group>
                        <separator string="Employees" colspan="2"/>
                        <field name="evaluation_form_ids">
                            <tree string="Employees" create='false' editable='bottom'>
                                <field name='employee_id' readonly='1'/>
                            </tree>
                        </field>

                        <button name="%(action_hr_evaluation_employees)d" type="action" string="Assign Employee"
                                class="oe_highlight"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_evaluation_plan" model="ir.actions.act_window">
			<field name="name">HR Evaluation Plan</field>
			<field name="res_model">hr.evaluation.plan</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem
				name="HR Evaluation Plan"
                parent="hr_evaluation_main_menu"
				id="hr_evaluation_plan_menu"
				sequence="10"
                action="action_hr_evaluation_plan"
        />

        <!--evaluation criteria view-->
        <record id="view_hr_evaluation_criteria_tree" model="ir.ui.view">
			<field name="name">hr_evaluation_criteria_tree</field>
			<field name="model">hr.evaluation.criteria</field>
			<field name="arch" type="xml">
				<tree string="HR Evaluation Criteria">
					<field name="name" />
                    <field name="seq"/>
                    <field name="marks"/>
                    <field name="is_active"/>
				</tree>
			</field>
		</record>

        <record id="view_hr_evaluation_criteria_form" model="ir.ui.view">
			<field name="name">hr_evaluation_criteria_form</field>
			<field name="model">hr.evaluation.criteria</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
                <form string="HR Evaluation Criteria">
                    <sheet>
                        <div class="oe_button_box"></div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h2><field name="name"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="seq"/>
                                <field name="marks"/>
                            </group>
                            <group>
                                <field name="is_active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_evaluation_criteria" model="ir.actions.act_window">
			<field name="name">HR Evaluation Criteria</field>
			<field name="res_model">hr.evaluation.criteria</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem
				name="HR Evaluation Criteria"
                parent="hr_evaluation_main_menu"
				id="hr_evaluation_criteria_menu"
				sequence="30"
                action="action_hr_evaluation_criteria"
        />
    </data>
</odoo>
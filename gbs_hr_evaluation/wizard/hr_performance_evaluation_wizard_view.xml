<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="evaluation_hr_comment_wizard" model="ir.ui.view">
            <field name="name">evaluation.hr.comment.wizard</field>
            <field name="model">evaluation.hr.comment.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="HR Evaluation" create="false" edit="false">
                    <div>
                        <group>
                            <field name="given_reward"/>
                            <field name="disciplinary_action"/>
                        </group>
                    </div>
                    <footer>
                        <button string="Save" name="save_record" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

            <field name="name">evaluation.employee.comment.wizard</field>
            <field name="model">evaluation.employee.comment.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Employee Comment" create="false" edit="false">
                    <div colspan="1">
                        <separator string="Comment by Employee"/>
                        <field name="emp_comment" placeholder="I do hereby acknowledge that i have reviewed the above information about me which is correct. "/>
                    </div>
                    <footer>
                        <button string="Save" name="save_record" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>


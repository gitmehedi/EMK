        <record id="evaluating_judgement_wizard" model="ir.ui.view">
            <field name="name">evaluating.judgement.wizard</field>
            <field name="model">evaluating.judgement.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="HR Evaluation">
                    <group colspan="4">
                        <separator string="Evaluation Criteria" colspan="4"/>
                        <newline/>
                        <field name="criteria_line_ids" nolabel="1">
                            <tree string="Evaluation Criteria Line" create="false" delete="false" editable="bottom">
                                <field name="seq" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="marks" readonly="1"/>
                                <field name="obtain_marks"/>
                            </tree>
                        </field>
                    </group>
                    <separator string="Judgement of evaluating person"/>
                    <group colspan="4">
                        <group>
                            <field name="judgment_promotion"/>
                            <field name="judgment_observation"/>
                        </group>
                        <group>
                            <field name="judgment_increment"/>
                            <field name="judgment_training_requirement"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Save" name="save_evaluating_judgement" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>


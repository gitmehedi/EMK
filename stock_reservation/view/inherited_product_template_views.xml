<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view"
			id="inherited_product_template_view_form_reservation">
			<field name="name">Product Template Kanban Stock</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_kanban_view" />
			<field name="arch" type="xml">
				<ul position="inside">
					<li t-if="record.type.raw_value == 'product'">
						Reserved:
						<field name="reserve_qty" />
						<field name="uom_id" />
					</li>
				</ul>
			</field>
		</record>
		<record model="ir.ui.view" id="product_form_view_reserve_qty_button">
			<field name="name">product.template_procurement</field>
			<field name="model">product.template</field>
			<field name="inherit_id"
				ref="stock.product_template_form_view_procurement_button" />
			<field name="arch" type="xml">
				<data>
					<div name="button_box" position="inside">
						<button type="object" name="action_open_reservation" class="oe_stat_button"
							icon="fa-building-o" attrs="{'invisible':[('type', '!=', 'product')]}">
							<field name="reserve_qty" widget="statinfo" string="Reserved" />
						</button>

					</div>
				</data>
			</field>
		</record>

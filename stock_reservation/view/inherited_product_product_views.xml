<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view"
			id="inherited_product_tree_view_form_reservation">
			<field name="name">Product Tree View</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="stock.view_stock_product_tree" />
			<field name="arch" type="xml">
				<field name="price" position="after">
                    <field name="reserve_qty" string="Reserved"/>
                </field>
			</field>
		</record>
		<record model="ir.ui.view" id="product_variant_form_view_reserve_qty_button">
			<field name="name">Product Reservation</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="stock.product_form_view_procurement_button" />
			<field name="arch" type="xml">
				<data>
					<div name="button_box" position="inside">
						<button type="object" name="product_reservation" class="oe_stat_button"
							icon="fa-building-o" attrs="{'invisible':[('type', '!=', 'product')]}">
							<field name="reserve_qty" widget="statinfo" string="Reserved" />
						</button>

					</div>
				</data>
			</field>
		</record>
	</data>
</openerp>

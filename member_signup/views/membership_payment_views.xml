<?xml version="1.0"?>
<odoo>

    <record id="view_member_payment_form" model="ir.ui.view">
        <field name="name">member.payment.form</field>
        <field name="model">member.payment</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Membership Payment">

                <header>
                    <button string='Pay' name="member_payment" type='object' class="oe_highlight"
                            states="draft"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="membership_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,}"/>
                            <field name="due_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                                   readonly="True"/>
                            <field name="paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="journal_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,}"/>
                            <field name="date"/>
                            <field name="payment_ref"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_member_payment_tree" model="ir.ui.view">
        <field name="name">member.payment.tree</field>
        <field name="model">member.payment</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Membership Payment">
                <field name="membership_id"/>
                <field name="paid_amount" sum="paid_amount"/>
                <field name="journal_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_membership_payment">
        <field name="name">Member Payment</field>
        <field name="res_model">member.payment</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Member's Payment
            </p>
        </field>
    </record>

    <menuitem name="Payments" id="menu_member_payments" parent="membership.menu_association"/>
    <menuitem name="Payment" id="sub_member_general" parent="menu_member_payments"
              action="action_membership_payment"/>


</odoo>
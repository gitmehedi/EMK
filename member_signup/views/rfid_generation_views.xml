<?xml version="1.0"?>
<odoo>
    <record id="view_rfid_generation_form" model="ir.ui.view">
        <field name="name">rfid.generation.form</field>
        <field name="model">rfid.generation</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="RFID Generation">
                <header>
                    <button string='Issue' name="act_issue" type='object' class="oe_highlight" states="draft"
                            groups="member_user.group_mem_user_officer,membership_extension.group_membership_manager"/>
                    <button string='Generated' name="act_generate" type='object' states="issue" class="oe_highlight"
                            groups="member_user.group_mem_user_officer,membership_extension.group_membership_manager"/>
                    <button string='Print RFID' name="rfid_print" type='object' states="issue"
                            groups="member_user.group_mem_user_officer,membership_extension.group_membership_manager"/>
                    <button string='Hand Over' name="act_handover" type='object' states="generate" class="oe_highlight"
                            groups="member_user.group_mem_user_officer,membership_extension.group_membership_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="membership_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,}"/>
                            <field name="ref"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_rfid_generation_tree" model="ir.ui.view">
        <field name="name">rfid.generation.tree</field>
        <field name="model">rfid.generation</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="RFID Generation"
                  decoration-primary="state=='draft'" decoration-success="state=='issue'"
                  decoration-info="state=='generate'" decoration-muted="state=='handover'"
                  decoration-bf="state in ('issue','generate')">
                <field name="membership_id"/>
                <field name="ref"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_rfid_generation">
        <field name="name">RFID</field>
        <field name="res_model">rfid.generation</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new RFID for Member
            </p>
        </field>
    </record>

    <menuitem name="RFID Generation" id="menu_rfid_generation" parent="membership.menu_association"
              groups="member_user.group_user_member,member_user.group_mem_user_officer,membership_extension.group_membership_manager"/>

    <menuitem id="sub_rfid_generation" parent="menu_rfid_generation" action="action_rfid_generation"
              groups="member_user.group_user_member,member_user.group_mem_user_officer,membership_extension.group_membership_manager"/>
</odoo>
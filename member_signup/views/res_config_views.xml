<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_general_configuration" model="ir.ui.view">
        <field name="name">base.config.settings.inherit.signup</field>
        <field name="model">base.config.settings</field>
        <field name="inherit_id" ref="base_setup.view_general_configuration"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='authentication']" position="before">
                <group name="Membership Signup">
                    <label string="Membership Settings"/>
                    <div>
                        <div>
                            <field name="member_signup_reset_password" class="oe_inline"/>
                            <label for="member_signup_reset_password"/>
                        </div>
                        <div>
                            <field name="member_signup_uninvited" class="oe_inline"/>
                            <label for="member_signup_uninvited"/>
                        </div>
                        <div attrs="{'invisible':[('member_signup_uninvited','=',False)]}" groups="base.group_no_one">
                            <label for="member_signup_template_user_id"/>
                            <field name="member_signup_template_user_id" class="oe_inline"
                                   attrs="{'required': [('member_signup_uninvited', '=', True)]}"
                                   domain="['|',('active','=',0),('active','=',1)]"/>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

</odoo>

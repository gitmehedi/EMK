<?xml version="1.0"?>
<odoo>
    <record id="member_app_tree_view" model="ir.ui.view">
        <field name="name">Members</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Members" decoration-bf="state == 'invoice'"
                  decoration-success="state in ('application','invoice')" decoration-muted="state == 'reject'">
                <field name="member_sequence"/>
                <field name="name" style="color: blue;"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="birth_date"/>
                <field name="occupation"/>
                <field name="highest_certification"/>
                <field name="gender"/>
                <field name="membership_state"/>
                <field name="state"/>
                <field name="user_id" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="member_app_form_view" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Partners">
                <header>
                    <button string="Approve" type="object" name="member_invoiced" class="btn btn-sm oe_highlight"
                            states="application" groups="membership_user.group_mem_user_officer"/>
                    <button string="Reject" type="object" name="member_reject" class="btn btn-sm"
                            states="application" groups="membership_user.group_mem_user_officer"/>
                    <field name="state" widget="statusbar" statusbar_visible="application,invoice,member"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                                class="oe_stat_button"
                                id="invoice_button"
                                icon="fa-pencil-square-o"
                                name="open_partner_history"
                                context="{'default_partner_id': active_id}"
                                attrs="{'invisible':[('state','=','application')]}">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_invoiced" widget='monetary'
                                           options="{'currency_field': 'currency_id'}"/>
                                </span>
                                <span class="o_stat_text">Invoiced</span>
                            </div>
                        </button>
                    </div>

                    <field name="image" widget='image' class="oe_avatar"
                           options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                    <div class="oe_title">
                        <field name="is_applicant" invisible="1"/>
                        <field name="is_company" invisible="1"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <field name="company_type" widget="radio" invisible="True"
                               class="oe_edit_only"
                               options="{'horizontal': true}"/>
                        <h1>
                            <field name="member_sequence" readonly="True" style="color: green;"
                               attrs="{'invisible':[('member_sequence','=',False)]}"/>
                            <br/>
                            <field name="name" default_focus="1" placeholder="Name"
                                   attrs="{'required' : [('is_company', '=',True)],
                                   'readonly' : [('is_company', '=',False)]}"/>
                            <br/>
                        </h1>


                        <div class="oe_edit_only">
                            <group attrs="{'invisible': [('is_company', '=', True)]}">
                                <field name="firstname" required="True"/>
                                <field name="middlename"/>
                                <field name="lastname" required="True"/>
                            </group>
                        </div>
                        <div class="o_row">
                            <field name="parent_id" invisible="True"
                                   placeholder="Company"
                                   domain="[('is_company', '=', True)]"
                                   context="{'default_is_company': True, 'default_supplier': supplier, 'default_customer': customer}"
                                   attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
                            <field name="company_name"
                                   attrs="{'invisible': ['|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}"/>
                            <button name="create_company" type="object" string="Create company"
                                    class="btn btn-sm oe_edit_only fa fa-external-link btn btn-link "
                                    attrs="{'invisible': ['|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)]}"/>
                        </div>
                    </div>

                    <group>
                        <group>
                            <field name="is_applicant" invisible="True"/>
                            <field name="type" attrs="{'invisible': [('parent_id','=', False)]}"
                                   groups="base.group_no_one"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <div class="oe_edit_only">
                                    <button name="open_parent" type="object" string="(edit)" class="oe_link"
                                            attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                                </div>
                                <field name="street" placeholder="Street..." class="o_address_street"
                                       attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"
                                       attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="city" placeholder="City" class="o_address_city"
                                       attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options='{"no_open": True}'
                                       attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"
                                       context="{'country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"
                                       attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'
                                       attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            </div>
                            <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                            <field name="birth_date"/>
                            <field name="category_id" widget="many2many_tags" placeholder="Tags..."
                                   options="{'no_create_edit': True}" invisible="True"/>
                        </group>
                        <group>
                            <field name="function" placeholder="e.g. Sales Director" invisible="True"
                                   attrs="{'invisible': [('is_company','=', True)]}"/>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="fax" invisible="True"/>
                            <field name="user_ids" invisible="1"/>
                            <field name="email" readonly="True" widget="email"
                                   attrs="{'required': [('user_ids','!=', [])]}"/>
                            <field name="title" options='{"no_open": True}' invisible="True"
                                   attrs="{'invisible': [('is_company', '=', True)]}"/>
                            <field name="lang" invisible="True"/>
                        </group>
                    </group>

                    <notebook colspan="4">
                        <page name="member_personal_information" string="Personal Information" autofocus="autofocus">
                            <group>
                                <group string="Basic Information">
                                    <field name="gender" widget="radio" options="{'horizontal': true}"/>
                                    <field name="occupation"
                                           options="{'no_create_edit':True,'no_open':True}"/>
                                    <field name="occupation_other"/>
                                    <field name="subject_of_interest" widget="many2many_tags"
                                           options="{'no_create_edit':True,'no_open':True}"/>
                                    <field name="subject_of_interest_others"/>
                                </group>
                                <group string="Educational Information">
                                    <field name="last_place_of_study"/>
                                    <field name="highest_certification"
                                           options="{'no_create_edit':True,'no_open':True}"/>
                                    <field name="highest_certification_other"/>
                                    <field name="field_of_study"/>
                                    <field name="place_of_study"/>
                                    <field name="usa_work_or_study" widget="radio" options="{'horizontal': true}"/>
                                    <field name="usa_work_or_study_place"
                                           attrs="{'invisible':[('usa_work_or_study','=','no')],'required':[('usa_work_or_study','=','yes')]}"/>
                                    <field name="alumni_institute"/>
                                </group>
                            </group>
                            <group>
                                <group string="Additional Information">
                                    <field name="current_employee"/>
                                    <field name="work_title"/>
                                    <field name="work_phone"/>
                                    <field name="info_about_emk"/>
                                </group>
                                <group string="Signature">
                                    <field name="signature_image" widget='image' class="oe_avatar"
                                           options='{"preview_signature_image": "image_medium", "size": [90, 90]}'/>
                                </group>
                            </group>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="member_app_kanban_view" model="ir.ui.view">
        <field name="name">member.res.partner.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="color"/>
                <field name="display_name"/>
                <field name="title"/>
                <field name="email" readonly="True"/>
                <field name="parent_id"/>
                <field name="is_company"/>
                <field name="function"/>
                <field name="phone"/>
                <field name="street"/>
                <field name="street2"/>
                <field name="zip"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="mobile"/>
                <field name="state_id"/>
                <field name="category_id"/>
                <field name="image_small"/>
                <field name="type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_res_partner_kanban">
                            <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                            <div class="o_kanban_image">
                                <t t-if="record.image_small.raw_value">
                                    <img t-att-src="kanban_image('res.partner', 'image_small', record.id.value)"/>
                                </t>
                                <t t-if="!record.image_small.raw_value">
                                    <t t-if="record.type.raw_value === 'delivery'">
                                        <img t-att-src='_s + "/base/static/src/img/truck.png"'
                                             class="o_kanban_image oe_kanban_avatar_smallbox"/>
                                    </t>
                                    <t t-if="record.type.raw_value === 'invoice'">
                                        <img t-att-src='_s + "/base/static/src/img/money.png"'
                                             class="o_kanban_image oe_kanban_avatar_smallbox"/>
                                    </t>
                                    <t t-if="record.type.raw_value != 'invoice' &amp;&amp; record.type.raw_value != 'delivery'">
                                        <t t-if="record.is_company.raw_value === true">
                                            <img t-att-src='_s + "/base/static/src/img/company_image.png"'/>
                                        </t>
                                        <t t-if="record.is_company.raw_value === false">
                                            <img t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                        </t>
                                    </t>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="oe_partner_heading">
                                    <field name="display_name"/>
                                </strong>
                                <ul>
                                    <li t-if="record.parent_id.raw_value and !record.function.raw_value">
                                        <field name="parent_id"/>
                                    </li>
                                    <li t-if="!record.parent_id.raw_value and record.function.raw_value">
                                        <field name="function"/>
                                    </li>
                                    <li t-if="record.parent_id.raw_value and record.function.raw_value">
                                        <field name="function"/>
                                        at
                                        <field name="parent_id"/>
                                    </li>
                                    <li t-if="record.city.raw_value and !record.country_id.raw_value">
                                        <field name="city"/>
                                    </li>
                                    <li t-if="!record.city.raw_value and record.country_id.raw_value">
                                        <field name="country_id"/>
                                    </li>
                                    <li t-if="record.city.raw_value and record.country_id.raw_value"><field
                                            name="city"/>,
                                        <field name="country_id"/>
                                    </li>
                                    <li t-if="record.email.raw_value" class="o_text_overflow">
                                        <field name="email" readonly="True"/>
                                    </li>
                                </ul>
                                <div class="oe_kanban_partner_links"/>
                            </div>
                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_member_app_pending" model="ir.actions.act_window">
        <field name="name">Pending Applications</field>
        <field name="res_model">res.partner</field>
        <field name="search_view_id" ref="membership.view_res_partner_member_filter"/>
        <field name="domain">[('is_applicant','=',True),('state','=','application')]</field>
        <field name="context">{'mcount':'application','default_is_applicant':True}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Application
            </p>
        </field>
    </record>
    <record id="action_member_app_pending_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="member_app_tree_view"/>
        <field name="act_window_id" ref="action_member_app_pending"/>
    </record>
    <record id="action_member_app_pending_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="member_app_form_view"/>
        <field name="act_window_id" ref="action_member_app_pending"/>
    </record>
    <record id="action_member_app_pending_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="member_app_kanban_view"/>
        <field name="act_window_id" ref="action_member_app_pending"/>
    </record>
    <menuitem id="menu_member_app_pending" sequence="10" parent="menu_member_app"
              action="action_member_app_pending"
              groups="membership_user.group_mem_user_officer,membership_extension.group_membership_manager"/>

    <record id="action_member_app_approved" model="ir.actions.act_window">
        <field name="name">Approved Application</field>
        <field name="res_model">res.partner</field>
        <field name="search_view_id" ref="membership.view_res_partner_member_filter"/>
        <field name="domain">[('free_member','=',False),('state','in',['invoice','member'])]</field>
        <field name="context">{'mcount':'invoice'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Application
            </p>
        </field>
    </record>
    <record id="action_member_app_approved_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="member_app_tree_view"/>
        <field name="act_window_id" ref="action_member_app_approved"/>
    </record>
    <record id="action_member_app_approved_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="member_app_form_view"/>
        <field name="act_window_id" ref="action_member_app_approved"/>
    </record>
    <record id="action_member_app_approved_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="member_app_kanban_view"/>
        <field name="act_window_id" ref="action_member_app_approved"/>
    </record>
    <menuitem id="menu_member_app_approved" sequence="5" parent="menu_member_app"
              action="action_member_app_approved"
              groups="membership_user.group_mem_user_officer,membership_extension.group_membership_manager"/>

    <record id="action_member_app_reject" model="ir.actions.act_window">
        <field name="name">Rejected Application</field>
        <field name="res_model">res.partner</field>
        <field name="search_view_id" ref="membership.view_res_partner_member_filter"/>
        <field name="domain">[('is_applicant','=',True),('state','=','reject')]</field>
        <field name="context">{'mcount':'reject'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Application
            </p>
        </field>
    </record>
    <record id="action_member_app_reject_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="member_app_tree_view"/>
        <field name="act_window_id" ref="action_member_app_reject"/>
    </record>
    <record id="action_member_app_reject_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="member_app_form_view"/>
        <field name="act_window_id" ref="action_member_app_reject"/>
    </record>
    <record id="action_member_app_reject_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="member_app_kanban_view"/>
        <field name="act_window_id" ref="action_member_app_reject"/>
    </record>
    <menuitem id="menu_member_app_reject" sequence="15" parent="menu_member_app"
              action="action_member_app_reject"
              groups="membership_user.group_mem_user_officer,membership_user.group_user_member,membership_extension.group_membership_manager"/>
</odoo>
<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="membership_signup_products_form_">
        <field name="name">Add membership category field</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="membership.membership_products_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Membership products">
                    <header>
                        <button name="act_approve" string="Approve" states="draft" type="object" class="oe_highlight"/>
                        <button name="act_draft" string="Draft" states="reject" type="object" class="oe_highlight"/>
                        <button name="act_reject" string="Reject" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"cancel":"red"}'/>
                    </header>
                    <sheet>
<!--                        <div class="oe_button_box" name="button_box">-->
<!--                            <button name="toggle_active" type="object"-->
<!--                                    class="oe_stat_button" icon="fa-archive">-->
<!--                                <field name="active" widget="boolean_button"-->
<!--                                       options='{"terminology": "archive"}'/>-->
<!--                            </button>-->
<!--                        </div>-->
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Membership Name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="list_price" string="Membership Fee" required="1"/>
                                <field name="membership_status"/>
                            </group>
                            <group>
                                <label for="membership_date_from" string="Membership Duration"/>
                                <div>
                                    <field name="membership_date_from" required="1" class="oe_inline"/>
                                    -
                                    <field name="membership_date_to" required="1" class="oe_inline"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="General Information">
                                <group>
                                    <group>
                                        <field name="membership_category_id" string="Membership Category" required="1"
                                               options="{'no_open':True,'no_create':True}"
                                               domain="[('state','=','approve')]"/>
                                        <field name="default_code"/>
                                        <field name="categ_id" invisible="True"/>
                                        <field name="membership" invisible="1"/>
                                        <field name="company_id"
                                               groups="base.group_multi_company"
                                               options="{'no_create': True}"/>
                                    </group>
                                    <group>

                                        <field name="property_account_income_id"
                                               options="{'no_open':True,'no_create':True}"/>
                                        <field name="taxes_id" widget="many2many_tags"
                                               options="{'no_open':True,'no_create':True}"
                                               string="Taxes"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <group name="description">
                                    <separator string="Description" colspan="4"/>
                                    <field name="description" colspan="4" nolabel="1"
                                           placeholder="Add a description..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="membership_signup_partner_form_view">
        <field name="name">Membership Extension Form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="membership_extension.view_partner_form"/>
        <field name="priority" eval="999"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group/group/field[@name='category_id']" position="attributes">
                <attribute name="attrs">{'invisible':True}</attribute>
            </xpath>
        </field>
    </record>
    <record id="membership_types_tree_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="membership.membership_products_tree"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="state"/>
            </field>
        </field>
    </record>
    <record id="membership.action_membership_products" model="ir.actions.act_window">
        <field name="name">Membership Types</field>
        <field name="view_mode">tree,form</field>
        <field name="model">product.template</field>
        <field name="context">
            {"search_default_active":'False',"search_default_pending":'True'}
        </field>
    </record>
    <record id="membership_extension.menu_marketing_config_association_item" model="ir.ui.menu">
        <field name="name">Membership Types</field>
    </record>
</odoo>
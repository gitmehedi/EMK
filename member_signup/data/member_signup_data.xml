<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Default template user for new users signing in -->
        <record id="default_member_template_user" model="res.users">
            <field name="name">Member Template User</field>
            <field name="login">portal_template</field>
            <field name="active" eval="False"/>
            <!-- Avoid auto-including this user in any default group, just like a typical portal member -->
            <field name="groups_id" eval="[(6, 0,  [ref('base.group_portal')])]"/>
        </record>

        <record id="default_member_template_user_config" model="ir.config_parameter">
            <field name="key">member_signup.template_user_id</field>
            <field name="value" ref="default_member_template_user"/>
        </record>

    </data>
</odoo>

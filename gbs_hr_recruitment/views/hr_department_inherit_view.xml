<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="hr_department_form_view_inherit" model="ir.ui.view">
            <field name="name">hr.department.form.view.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="approved_no_of_emp" readonly="True" groups="hr.group_hr_user,gbs_application_group.group_cxo" />
                </xpath>
            </field>
		</record>
        <record id="hr_department_view_rule" model="ir.ui.view">
            <field name="name">hr.department.form.inherit.hr</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr_department_form_view_inherit" />
            <field name="groups_id" eval="[(6, 0, [ref('hr.group_hr_manager')])]" />
            <field name="arch" type="xml">
                <field name="approved_no_of_emp" position="attributes">
                   <attribute name="readonly">0</attribute>
                </field>
            </field>
		</record>
    </data>
</openerp>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>

		<record id="view_public_holidays_tree" model="ir.ui.view">
			<field name="name">hr_holidays_public_tree</field>
			<field name="model">hr.holidays.public</field>
			<field name="arch" type="xml">
				<tree string="Public Holidays">
					<field name="name" />
					<field name="year_id" />
					<field name="status" />
				</tree>
			</field>
		</record>

		<record id="view_public_holidays_form" model="ir.ui.view">
			<field name="name">hr_holidays_public_form</field>
			<field name="model">hr.holidays.public</field>
			<field name="arch" type="xml">
				<form string="Public Holidays">
					<header>
						<button name="geneare_yearly_calendar" type="object"	
							string="Generate" class="oe_highlight" />
						<button name="%(hr_calendar_clone_wizard_action_view)d"
							type="action" string="Clone" />
					</header>
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="year_id" required="1" 
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<!--<field name="operating_unit_ids" widget="many2many_tags"/>-->
							</group>
						</group>
						<notebook colspan="4">
							<page string="Public Holidays">
								<field name="public_details_ids">
									<tree string="List" editable="bottom">
										<field name="name" required="1"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
										<field name="date" required="1" />
										<field name="status" />
									</tree>
								</field>
							</page>
							<page string="Weekly Holidays">
								<field name="weekly_details_ids">
									<tree string="List" editable="bottom">
										<field name="weekly_type" required="1"/>
									</tree>
								</field>
							</page>
							<page string="Operating Unit">
								<field name="operating_unit_ids" widget="many2many" options="{'no_create': True}">
									<tree string="Operating Units" editable="bottom">
										<field name="name"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>

					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>

				</form>
			</field>
		</record>

		<record id="open_public_holidays_view" model="ir.actions.act_window">
			<field name="name">Holidays</field>
			<field name="res_model">hr.holidays.public</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<menuitem action="open_public_holidays_view" id="menu_public_holidays_view" 
			parent="hr_holidays.menu_hr_holidays_configuration" sequence="10" />
					
		<menuitem id="hr_payroll.menu_hr_root_payroll" name="Payroll" 
		    parent="hr.menu_hr_root" sequence="30"/>
		
		<menuitem action="hr_payroll.action_view_hr_payslip_form" id="hr_payroll.menu_department_tree" 
			parent="hr_payroll.menu_hr_root_payroll" />        
		<!-- <menuitem action="hr_payroll.action_view_hr_payslip_form" id="hr_payroll.menu_department_tree" 
			parent="hr_payroll.menu_hr_root_payroll" groups="base.group_hr_user,base.group_user"/>         -->

		<!-- <menuitem id="payroll_configure" parent="hr.menu_hr_configuration" name="Payroll" 
				groups="base.group_hr_manager,base.group_hr_user" sequence="45"/> -->
				
		<!-- <menuitem id="hr_payroll.menu_hr_root_payroll" parent="hr.menu_hr_root" name="Payroll" 
		groups="base.group_hr_manager,base.group_user" sequence="30"/> -->
		

	</data>
</odoo>

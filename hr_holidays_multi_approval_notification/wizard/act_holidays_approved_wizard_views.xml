<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="act_holidays_approved_wizard_view" model="ir.ui.view">
            <field name="name">act.holidays.approved.wizard</field>
            <field name="model">act.holidays.approved.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Set Approver" create="false" edit="false">
                    <div>
                        <h3>To set the first level approver in existing 'Leave' records please press the button</h3>
                        <br></br>
                        <button string="Set Approver" name="set_approver" type="object"
                                class="oe_highlight" help="Set approvers to existing records"/>
                    </div>
                    <footer>
                        <button special="cancel" string="Cancel" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
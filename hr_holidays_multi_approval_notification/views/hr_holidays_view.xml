<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <menuitem
                id="hr_holidays.menu_hr_holidays_approvals"
                name="Leaves to Approve"
                parent="hr_holidays.menu_hr_holidays_root"
                sequence="3"
                groups="hr_holidays.group_hr_holidays_manager,hr_holidays.group_hr_holidays_user"/>

        <menuitem
                id="hr_holidays.menu_open_department_leave_allocation_approve"
                groups="hr_holidays.group_hr_holidays_manager,hr_holidays.group_hr_holidays_user"
                name="Leaves Allocation"
                parent="hr_holidays.menu_hr_holidays_approvals"
                action="hr_holidays.open_department_holidays_allocation_approve"
                sequence="2"/>

        <menuitem
                id="hr_holidays.menu_open_department_leave_approve"
                name="Leaves"
                parent="hr_holidays.menu_hr_holidays_approvals"
                groups="hr_holidays.group_hr_holidays_manager,hr_holidays.group_hr_holidays_user"
                action="hr_holidays.open_department_holidays_approve"
                sequence="1"/>

        <!-- Inherited Form view-->
        <record id="hr_holidays_leave_req_view_form" model="ir.ui.view">
            <field name="name">hr.holidays.view.form</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="arch" type="xml">
                <!-- states="confirm"  -->

                <xpath expr="//button[@name='action_refuse']" position="replace">
                    <button string="Refuse" name="action_refuse" states="confirm,validate1" type="object"
                            groups="hr_holidays.group_hr_holidays_user"/>
                </xpath>

                <xpath expr="//field[@name='employee_id']" position="replace">
                    <field name="employee_id"
                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                           attrs="{'required':[('holiday_type','=','employee')],'invisible':[('holiday_type','=','category')]}"
                           groups="hr_holidays.group_hr_holidays_user,base.group_user"/>
                </xpath>

                <xpath expr="//field[@name='department_id']" position="replace">
                    <field name="department_id"
                           attrs="{'invisible':[('holiday_type','=','category')]}"
                           groups="hr_holidays.group_hr_holidays_user,base.group_user"/>
                </xpath>

                <xpath expr="//field[@name='payslip_status']" position="replace" >
                    <field name="payslip_status"
                           attrs="{'invisible':[('type','=','add')]}" widget="toggle_button"
                           groups="hr_holidays.group_hr_holidays_manager"/>
                </xpath>

                <xpath expr="//field[@name='pending_approver']" position="replace" >
                    <field name="pending_approver"
                           groups="hr_holidays.group_hr_holidays_user,base.group_user"/>
                </xpath>

                <xpath expr="//notebook/page/field[@name='approbations']" position="replace">
                    <field name="approbations" groups="hr_holidays.group_hr_holidays_user,base.group_user">
                        <tree>
                            <field name="approver" />
                            <field name="date" />
                        </tree>
                    </field>
                </xpath>

            </field>
        </record>

        <record id="view_hr_holidays_filter_inherit" model="ir.ui.view">
            <field name="name">hr.holidays.filter.inherit</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter"/>
            <field name="arch" type="xml">
                <filter name="department" domain="[('department_id.manager_id.user_id', '=', uid)]" position="replace"/>
                <search string="Search Leave">
                    <!--<xpath expr="//filter[@name='department']"  position="attributes">-->
                    <!--<attribute name='invisible'>1</attribute>-->
                    <!--</xpath>-->
                </search>
                <xpath expr="//filter[@name='year']" position="after">
                    <separator/>
                    <filter name="my_approval" string="My Approval" domain="[('pending_approver.user_id','=',uid)]"/>
                    <field name="pending_approver" string="My Approval" filter_domain="[('pending_approver', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>
        <!--Inherit Action-->
        <record id="hr_holidays.open_department_holidays_approve" model="ir.actions.act_window">
            <field name="name">Department Leaves</field>
            <field name="res_model">hr.holidays</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="context">{
                'search_default_year': 1,
                'search_default_department':1,
                'search_default_approve':1,
                'search_default_my_approval': 1,}
            </field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new leave request.
                </p>
            </field>
            <field name="domain">[('type','=','remove')]</field>
            <field name="search_view_id" ref="hr_holidays.view_hr_holidays_filter"/>
        </record>
        <!--Action To SET the approver issue-->

        <act_window name="Set Approver"
                    res_model="act.holidays.approved.wizard"
                    src_model="hr.holidays"
                    key2="client_action_multi"
                    view_mode="form" target="new"
                    view_type="form"
                    id="act_fix_holiday_approver"/>


    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_ted_cafe_bill_form" model="ir.ui.view">
            <field name="name">hr.ted.cafe.bill.form</field>
            <field name="model">hr.ted.cafe.bill</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Employee Ted Cafe Bills" delete="false">
                    <header>
                        <button name="%(contract_employee_ted_wizard_action_view)d"
                                groups="point_of_sale.group_pos_user,point_of_sale.group_pos_manager"
                                type="action" string="Employee" class="oe_highlight" states="draft"/>
                        <button name="action_confirm" type="object" string="Approve" states="draft"
                                groups="point_of_sale.group_pos_user,point_of_sale.group_pos_manager"
                                class="oe_highlight"/>
                        <button name="action_done" type="object" string="Done" states="approve" class="oe_highlight"
                                groups="point_of_sale.group_pos_user,point_of_sale.group_pos_manager"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="total_amount"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Ted Cafe Bills">
                                <field name="line_ids">
                                    <tree string="List" editable="bottom">
                                        <field name="employee_id"
                                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                        <field name="amount"/>
                                        <field name="date"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_ted_cafe_bill_tree" model="ir.ui.view">
            <field name="name">hr.ted.cafe.bill.tree</field>
            <field name="model">hr.ted.cafe.bill</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Ted Cafe Bills" decoration-info="state=='draft'"
                      decoration-success="state=='approve'" decoration-mute="state=='done'"
                      decoration-bf="state in ('approve',)">
                    <field name="period_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="total_amount" sum="total_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="hr_ted_cafe_bill_action">
            <field name="name">Ted Cafe Loan</field>
            <field name="res_model">hr.ted.cafe.bill</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_ted_cafe_bills_menu" name="Cafe Loans" parent="hr_cafe_operations_menu"
                  action="hr_ted_cafe_bill_action" sequence="10"
                  groups="point_of_sale.group_pos_user,pos_users.group_pos_gen_user,point_of_sale.group_pos_manager"/>
    </data>
</odoo>
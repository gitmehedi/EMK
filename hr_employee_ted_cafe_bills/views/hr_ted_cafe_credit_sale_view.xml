<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_ted_cafe_credit_sale_form" model="ir.ui.view">
            <field name="name">hr.ted.cafe.credit.sale.form</field>
            <field name="model">hr.ted.cafe.credit.sale</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Employee Ted Cafe Bills" delete="false">
                    <header>
                        <button name="action_confirm" type="object" string="Approve" states="draft"
                                groups="point_of_sale.group_pos_user,point_of_sale.group_pos_manager"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                groups="point_of_sale.group_pos_user,point_of_sale.group_pos_manager"
                                string="Done" states="approve" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="total_amount"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Credit Sales">
                                <field name="line_ids">
                                    <tree string="List" editable="bottom" delete="0" create="0" edit="0">
                                        <field name="employee_id"
                                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                        <field name="pos_id"
                                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                        <field name="date"/>
                                        <field name="amount" sum="amount"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_ted_cafe_credit_sale_tree" model="ir.ui.view">
            <field name="name">hr.ted.cafe.credit.sale.tree</field>
            <field name="model">hr.ted.cafe.credit.sale</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Ted Cafe Bills" decoration-info="state=='draft'"
                      decoration-success="state=='approve'" decoration-mute="state=='done'"
                      decoration-bf="state in ('approve',)">
                    <field name="period_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="total_amount" sum="total_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="hr_ted_cafe_credit_sale_action" model="ir.actions.act_window">
            <field name="name">Cafe Credit Sales</field>
            <field name="res_model">hr.ted.cafe.credit.sale</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_ted_cafe_credit_sales_menu" name="Cafe Credit Sale" parent="hr_cafe_operations_menu"
                  action="hr_ted_cafe_credit_sale_action" sequence="5"
                  groups="point_of_sale.group_pos_user,pos_users.group_pos_gen_user,point_of_sale.group_pos_manager"/>
    </data>
</odoo>
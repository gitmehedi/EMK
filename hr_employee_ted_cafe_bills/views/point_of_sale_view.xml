<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_pos_credit_sale_form" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref=""></field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_pos_order_invoice']" position="before">
                <button name="%(employee_credit_sale_wizard_action)d" string="Assign Credit Sale" type="action"
                        class="oe_highlight" attrs="{'invisible':[('credit_sale_id','!=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="credit_sale_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>

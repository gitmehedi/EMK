<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="employee_credit_sale_wizard_view" model="ir.ui.view">
            <field name="name">employee.credit.sale.wizard</field>
            <field name="model">employee.credit.sale.wizard</field>
            <field name="arch" type="xml">
                <form string="Employee Credit Sale">
                    <group>
                        <group>
                            <field name="credit_month_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="employee_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="credit_amount"/>
                        </group>
                    </group>
                    <footer>
                        <button icon="fa-cogs" string="Generate" name="process_credit_sale" type="object"
                                class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="employee_credit_sale_wizard_action" model="ir.actions.act_window">
            <field name="name">Employee Credit Sales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.credit.sale.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

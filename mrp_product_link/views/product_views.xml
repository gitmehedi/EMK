<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.product.form.inherit.link</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Manufacturing" attrs="{'invisible': [('purchase_ok', '=', True)]}">
                        <p>
                            If you don't configure the type for any operating unit, the system will consider the type as <strong>Production.</strong>
                        </p>
                        <p>
                            If you configure the type for one operating unit, the system will consider the type as <strong>Production</strong> for others operating unit.
                        </p>
                        <field name="mrp_type_ids">
                            <tree editable="bottom">
                                <field name="product_id" invisible="1"/>
                                <field name="operating_unit_id" required="1"
                                       options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                <field name="mrp_type" string="Type" required="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
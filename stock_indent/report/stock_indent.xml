<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!--<report id="report_indent_indent"-->
                <!--model="indent.indent"-->
                <!--string="Stock Indent"-->
                <!--name="stock_indent.report_stock_indent_view"-->
                <!--file="stock_indent.report_stock_indent_view"-->
                <!--report_type="qweb-pdf"/>-->

        <template id="report_stock_indent_view">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <div>
                                <div style="display: inline">
                                    <strong> Form: </strong><span t-field="o.name"/>
                                </div>
                                <div style="display: inline; float:right; padding-right:5px">
                                    <strong> Date of issue: </strong><span t-field="o.indent_date"/>
                                </div>
                            </div>
                            <h4 style="padding: 15px 0px; text-align: center;">
                                Samuda Chemical Complex Limited<br/>
                                 Sikirgoan,Gazaria,Munshigonj<br/>
                                      Maerial Indent From
                            </h4>
                            <div>
                                <div style="display: inline;">
                                    <strong>Indent No: </strong><span t-field="o.name"/>
                                </div>
                                <div style="display: inline; float:right; padding-right:5px">
                                    <strong> Date: </strong><span t-field="o.indent_date"/>
                                </div>
                            </div>
                            <div>
                                <div style="padding: 30px 0px;">
                                    <div>
                                        <div>
                                            <strong>Department: </strong><span t-field="o.department_id"/>
                                        </div>
                                        <div style="padding: 10px 0px; display: inline">
                                            <strong> The material is required for: </strong><span t-field="o.material_required_for"/>
                                        </div>
                                        <div style="display: inline; float:right; padding-right:5px">
                                            <strong> Type: </strong><span t-field="o.indent_type"/>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-bordered" style="padding:15px 0px;">
                                    <thead>
                                        <tr style="background-color:#C0C0C0;">
                                            <th>SL</th>
                                            <th>Item Name</th>
                                            <!--<th>Specification</th>-->
                                            <th>Qty</th>
                                            <th>Remarks</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.product_lines" t-as="p">
                                            <tr style="page-break-inside: avoid">
                                                <td><span t-esc="p_index+1"/></td>
                                                <td><span t-esc="p.product_id.name"/></td>
                                                <!--<td><span t-esc="p.specification"/></td>-->
                                                <td><span t-esc="p.product_uom_qty"/></td>
                                                <td><span t-esc="p.remarks"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <div style="padding: 30px 0px;">
                                    <div>
                                        <div style="display: inline;text-decoration: overline;">
                                            <strong>Prepared by </strong>
                                        </div>
                                        <div style="padding:0px 100px; display:inline; text-decoration:overline;">
                                            <strong> Approved by </strong><span t-field="o.approver_id"/>
                                        </div>
                                        <div style="padding:0px 50px; display:inline; text-decoration:overline;">
                                            <strong> Issue by </strong>
                                        </div>
                                        <div style="padding:0px 50px; display:inline; text-decoration:overline;">
                                            <strong> Received by </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_stock_indent_scrap_tree" model="ir.ui.view">
            <field name="name">view.stock.indent.scrap.tree</field>
            <field name="model">stock.indent.scrap</field>
            <field name="arch" type="xml">
                <tree string="Scraps" decoration-success="state=='waiting_approval'" decoration-bf= "state=='waiting_approval'" decoration-danger="state=='reject'" decoration-muted="state=='done'" >
					<field name="name" />
					<field name="requestor_id" />
					<field name="department_id" />
					<field name="scrap_date" />
					<field name="stock_location_id" />
					<field name="scrap_location_id" />
					<field name="approve_date" />
					<field name="state" />
				</tree>
            </field>
        </record>

        <record id="view_stock_indent_scrap_form" model="ir.ui.view">
            <field name="name">view.stock.indent.scrap.form</field>
            <field name="model">stock.indent.scrap</field>
            <field name="arch" type="xml">
                <form string="Scraps">
					<header>
						<button name="scrap_confirm" string="Confirm" states="draft"
								class="oe_highlight" type="object"/>
						<button name="approve_scrap" string="Approve" states="waiting_approval" type="object"
								class="oe_highlight" /><!--groups="inventory_user.grp_inv_supervisor"-->
						<button name="reject_scrap" string="Reject" states="waiting_approval"
								 type="object"/><!--groups="inventory_user.grp_inv_supervisor"-->

						<field name="state" widget="statusbar"
							   statusbar_visible="draft,waiting_approval,done"
							   statusbar_colors='{"reject":"red"}' />
					</header>
					<sheet>
						<group>
							<group>
								<field name="requestor_id" readonly="1" />
								<field name="department_id"/>
								<field name="material_scrap_remarks" placeholder="The material is scrap remarks" />
							</group>
							<group>
								<field name="scrap_date" />
								<field name="approve_date" invisible="1"/>
							</group>
						</group>

						<notebook>
							<page string="Products">
								<field name="product_lines">
									<tree string="Products" editable="bottom" >
										<field name="sequence" widget="handle"/>
										<field name="product_id" domain="[('type','!=','service')]" options="{'no_create_edit': true}" attrs="{'readonly':[('state','not in',('draft','waiting_approval'))]}" />
										<field name="remarks" attrs="{'readonly':[('state','not in',('draft','waiting_approval'))]}" />
										<field name="state" invisible="1"/>
										<field name="qty_available" readonly="0" groups="" attrs="{'readonly':[('state','not in',('draft','waiting_approval'))]}"  />
										<field name="product_uom" string="UOM" options="{'no_create_edit': true}" attrs="{'readonly':[('state','not in',('draft','waiting_approval'))]}" />
										<field name="scrap_qty" sum="Total Scrap Qty" attrs="{'readonly':[('state','not in',('draft','waiting_approval'))]}"/>

									</tree>
								</field>

							</page>
							<page string="Others">
								<group>
									<group>
										<field name="company_id" groups="base.group_multi_company"
											   options="{'no_create': True,'no_open':True}"/>
										<field name="approver_id" invisible="1"/>
										<field name="closer_id" invisible="1"/>

									</group>
									<group>
										<field name="warehouse_id" groups="stock.group_stock_multi_locations" options="{'no_create': True,'no_open':True}"/>
										<field name="scrap_location_id" options="{'no_create': True,'no_open':True}" /><!--groups="stock.group_stock_multi_locations"-->
										<field name="picking_type_id" invisible="1"/>
									</group>
								</group>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
            </field>
        </record>
        <!-- Scrap Window Action -->
		<record id='action_stock_indent_scrap' model='ir.actions.act_window'>
			<field name="name">Scraps</field>
			<field name="res_model">stock.indent.scrap</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to create a new Scrap.
				</p>
			</field>
		</record>

		<!-- Scrap Approval Window Action -->
		<record id='action_stock_indent_scrap_waiting_for_approval' model='ir.actions.act_window'>
			<field name="name">Scraps Waiting For Approval</field>
			<field name="res_model">stock.indent.scrap</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('state','=','waiting_approval')]</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					No Scrap for approval.
				</p>
			</field>
		</record>

		<!-- Scrap Menu -->

<!--		-->
<!--		<menuitem name="Indents" parent="stock.menu_stock_root" id="menu_stock_indent_scrap_main"-->
<!--				  sequence="4" groups="base.group_user"/>-->

		<menuitem action="action_stock_indent_scrap" name="Scraps"
				  parent="menu_indent_indent_main" id="menu_stock_indent_scrap" sequence="5"
				  groups="base.group_user"/>

		<menuitem action="action_stock_indent_scrap_waiting_for_approval" name="Scraps (Pending)"
				  parent="menu_indent_indent_main" id="menu_scrap_waiting_for_approval" sequence="6"/>


    </data>
</odoo>
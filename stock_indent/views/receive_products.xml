<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stock_indent_picking_form_inherit">
        <field name="name">view.stock.indent.picking.inherit.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='button_scrap']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header/button[@name='498']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

        <!-- actions -->
        <record id="action_view_picking100" model="ir.actions.act_window">
            <field name="name">Receive Products</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','assigned')]</field>

        </record>

        <record id='action_purchase_order_done' model='ir.actions.act_window'>
			<field name="name">Purchase Done</field>
			<field name="res_model">stock.picking</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','done')]</field>
<!--			<field name="help" type="html">-->
<!--				<p class="oe_view_nocontent_create">-->
<!--					Click to create a new Purchase Order.-->
<!--				</p>-->
<!--			</field>-->
		</record>


        <menuitem id="purchase_orders_receive" name="Purchase Orders (Receive)" parent="stock_indent_menu.menu_stock_purchase" sequence="5" action="action_view_picking100"/>
        <menuitem id="menu_purchase_orders_done" name="Purchase Orders (Done)" parent="stock_indent_menu.menu_stock_purchase" sequence="10" action="action_purchase_order_done"/>
    </data>
</odoo>

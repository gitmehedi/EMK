<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stock_indent_picking_form_inherit">
            <field name="name">view.stock.indent.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='button_scrap']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='423']" position="replace"/>

            </field>
        </record>

        <record id='action_purchase_order_emk' model='ir.actions.act_window'>
            <field name="name">Purchase Order</field>
            <field name="res_model">purchase.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Purchase Order.
                </p>
            </field>
        </record>


        <!-- actions -->
        <record id="action_view_picking100" model="ir.actions.act_window">
            <field name="name">Receive Products</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','assigned')]</field>

        </record>

        <record id='action_purchase_order_done' model='ir.actions.act_window'>
            <field name="name">Purchase Done</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','done')]</field>
        </record>

        <menuitem id="purchase_orders_emk" name="Purchase Orders (Draft)" parent="emk_purchase_order.menu_stock_purchase" sequence="0"
                  action="action_purchase_order_emk"
                  groups="stock.group_stock_user,stock.group_stock_manager"/>

        <menuitem id="purchase_orders_receive" name="Purchase Orders (Receive)"
                  parent="emk_purchase_order.menu_stock_purchase"
                  sequence="5" action="action_view_picking100"
                  groups="stock.group_stock_user,stock.group_stock_manager"/>

        <menuitem id="menu_purchase_orders_done" name="Purchase Orders (Done)"
                  parent="emk_purchase_order.menu_stock_purchase"
                  sequence="10" action="action_purchase_order_done"
                  groups="stock.group_stock_user,stock.group_stock_manager"/>

    </data>
</odoo>

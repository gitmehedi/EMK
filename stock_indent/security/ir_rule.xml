<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_stock_indent_emp" model="ir.rule">
        <field name="name">Stock Indent(General Employee)</field>
        <field name="model_id" ref="stock_indent.model_indent_indent"/>
        <field name="domain_force">[('indentor_id.id','=',user.id)]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

    <record id="rule_stock_indent_inventory_user" model="ir.rule">
        <field name="name">Stock Indent(Inventory User)</field>
        <field name="model_id" ref="stock_indent.model_indent_indent"/>
        <field name="domain_force">[('operating_unit_id.id','in',user.operating_unit_ids.ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('stock_indent.group_stock_indent_issuer')),(4,ref('stock.group_stock_user'))]"/>
    </record>

    <record id="rule_stock_indent_approver" model="ir.rule">
        <field name="name">Stock Indent(Indent Approver)</field>
        <field name="model_id" ref="stock_indent.model_indent_indent"/>
        <field name="domain_force">[('stock_location_id.id','in',user.location_ids.ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('stock_indent.group_stock_indent_approver'))]"/>
    </record>

</odoo>


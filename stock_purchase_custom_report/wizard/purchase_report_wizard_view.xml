<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_purchase_report" model="ir.ui.view">
            <field name="name">wizard.purchase.report</field>
            <field name="model">purchase.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="operating_unit_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                            <field name="partner_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="report_print" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_wizard_purchase_report" model="ir.actions.act_window">
            <field name="name">Purchase Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_wizard_purchase_report"
                  id="menu_wizard_purchase_report"
                  parent="stock.menu_warehouse_report" groups="stock.group_stock_user"
                  sequence="11"/>


    </data>
</odoo>

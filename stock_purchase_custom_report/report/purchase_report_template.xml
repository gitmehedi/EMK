<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchase_temp" inherit_id="custom_report.gbs_external_layout" primary="True">
        <xpath expr="//t[@t-call='custom_report.gbs_external_layout_header']" position="attributes">
            <attribute name="t-call">gbs_purchase_requisition.external_layout_header_po</attribute>
        </xpath>
    </template>
    <template id="external_layout_header_po" inherit_id="custom_report.gbs_external_layout_header" primary="True">
        <xpath expr="//div[@class='company-info']" position="after">
            <div name="company_address">
                <h5><span t-esc="address"/></h5>
            </div>
        </xpath>
    </template>
    <!-- Main template -->
    <template id="purchase_report_template">
        <t t-call="report.html_container">
            <t t-call="stock_purchase_custom_report.report_purchase_temp">
                <div class="page" style="page-break-inside:auto">
                    <div class="row" style="padding-top:25px;">
                        <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                        </style>
                        <div class="clearfix">
                            <h4 class="report-title">Purchase Details</h4>
                            <div class="row" style="padding-bottom:10px;">
                                <div class="col-xs-8 text-left">
                                    <t t-if="record['date_from']">
                                        <strong>Date : </strong><span t-esc="record['date_from']"/>
                                    </t>
                                    <t t-if="record['date_to']">
                                        <strong style="padding-left:10px;">To : </strong><span t-esc="record['date_to']"/>
                                    </t>
                                </div>
                                <div class="col-xs-4 text-right">
                                    <t t-if="record['operating_unit_name']">
                                        <strong>Operating Unit : </strong><span t-esc="record['operating_unit_name']"/>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <table class="table table-report-xs table-bordered table-striped">
                            <thead>
                                <tr class="odo-bg-gray">
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Ref</th>
                                    <th class="text-center">Particulars</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-center">Unit</th>
                                    <th class="text-center">Rate</th>
                                    <th class="text-center">Discount</th>
                                    <th class="text-center">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lines" t-as="data">
                                    <t t-if="data_value['product']">
                                        <tr style="page-break-inside: avoid" class="text-left">
                                            <td colspan="8" style="padding: 0px;">
                                                <strong>
                                                    <t t-esc="data"/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <t t-foreach="data_value['product']" t-as="line">
                                            <tr>
                                                <td>
                                                    <!--<t t-esc="line['m_date']" t-options='{"widget": "date"}'/>-->
                                                    <t t-esc="time.strftime('%Y-%m-%d',time.strptime(line['m_date'],'%Y-%m-%d %H:%M:%S'))"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['mrr']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['name']"/>
                                                </td>
                                                <td class="text-right">
                                                    <t t-esc="line['qty_in_tk']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['uom_name']"/>
                                                </td>
                                                <td class="text-right">
                                                    <t t-esc="line['rate_in']"/>
                                                </td>
                                                <td></td>
                                                <td class="text-right">
                                                    <t t-esc="line['val_in_tk']"/>
                                                </td>

                                            </tr>
                                        </t>
                                        <t t-if="data_value['product']">
                                            <tr style="font-weight: bold; background-color: #E4E4E4; border-bottom: 1px solid black;">
                                                <td colspan="3" class="text-left">
                                                    <t t-esc="data_value['sub-total']['title']"/>
                                                </td>
                                                <td class="text-right">
                                                    <t t-esc="data_value['sub-total']['total_in_qty']"/>
                                                </td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td class="text-right">
                                                    <t t-esc="data_value['sub-total']['total_in_val']"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                <tr style="font-weight: bold; background-color: #897d79; border-bottom: 1px solid black;">
                                    <td colspan="3" class="text-left">
                                        <t t-esc="total['title']"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="total['total_in_qty']"/>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td class="text-right">
                                        <t t-esc="total['total_in_val']"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <t t-call="custom_report.report_signing"></t>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report id="report_stock_purchase"
            model="stock.move"
            string="Purchase Report"
            name="stock_purchase_custom_report.purchase_report_template"
            file="stock_purchase_custom_report.purchase_report_template"
            multi="True"
            menu="False"
            report_type="qweb-pdf"/>

    <record id="report_stock_purchase" model="ir.actions.report.xml">
        <field name="paperformat_id" ref="custom_report.paperformat_backend_landscape"/>
    </record>
</odoo>
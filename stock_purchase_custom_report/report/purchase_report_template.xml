<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Main template -->
    <template id="purchase_report_template">
        <t t-call="report.html_container">
            <t t-call="custom_report.gbs_internal_layout">
                <div class="page">
                    <div class="row mb32">
                        <div class="col-xs-12">
                            <h2 class="text-center">Purchase Details</h2>
                        </div>
                        <hr></hr>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <t t-if="record['date_from']">
                                <strong>Date : </strong>
                                <span t-esc="record['date_from']"/>
                            </t>
                            <t t-if="record['date_to']">
                                <strong>To : </strong>
                                <span t-esc="record['date_to']"/>
                            </t>
                        </div>
                        <div class="col-xs-6 text-right">
                            <t t-if="record['operating_unit_name']">
                                <strong>Operating Unit : </strong>
                                <span t-esc="record['operating_unit_name']"/>
                            </t>
                        </div>
                    </div>

                    <table class="table table-bordered table-report-xs table-striped" style="margin-bottom: 10px;">
                        <thead>
                            <tr style="background-color: #EFECEB;">
                                <th class="text-center">Date</th>
                                <th class="text-center">Ref</th>
                                <th class="text-center">Particulars</th>
                                <th class="text-center">Qty</th>
                                <th class="text-center">Unit</th>
                                <th class="text-center">Rate</th>
                                <th class="text-center">Discount</th>
                                <th class="text-center">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="lines" t-as="data">
                                <t t-if="data_value['product']">
                                    <tr style="background-color: #ebebe0; text-align:left;">
                                        <td colspan="8" style="padding: 0px;">
                                            <strong>
                                                <t t-esc="data"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <t t-foreach="data_value['product']" t-as="line">
                                        <tr>
                                            <td>
                                                <t t-esc="line['m_date']"/>
                                            </td>
                                            <td>
                                                <t t-esc="line['mrr']"/>
                                            </td>
                                            <td>
                                                <t t-esc="line['name']"/>
                                            </td>
                                            <td class="text-right">
                                                <t t-esc="line['qty_in_tk']"/>
                                            </td>
                                            <td>
                                                <t t-esc="line['uom_name']"/>
                                            </td>
                                            <td class="text-right">
                                                <t t-esc="line['rate_in']"/>
                                            </td>
                                            <td></td>
                                            <td class="text-right">
                                                <t t-esc="line['val_in_tk']"/>
                                            </td>

                                        </tr>
                                    </t>
                                    <t t-if="data_value['product']">
                                        <tr style="font-weight: bold; background-color: #E4E4E4; border-bottom: 1px solid black;">
                                            <td colspan="3" class="text-left">
                                                <t t-esc="data_value['sub-total']['title']"/>
                                            </td>
                                            <td class="text-right">
                                                <t t-esc="data_value['sub-total']['total_in_qty']"/>
                                            </td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td class="text-right">
                                                <t t-esc="data_value['sub-total']['total_in_val']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            <tr>
                                <td colspan="12"></td>
                            </tr>
                            <tr style="font-weight: bold; background-color: #897d79; border-bottom: 1px solid black;">
                                <td colspan="3" class="text-left">
                                    <t t-esc="total['title']"/>
                                </td>
                                <td class="text-right">
                                    <t t-esc="total['total_in_qty']"/>
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-right">
                                    <t t-esc="total['total_in_val']"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <t t-call="custom_report.report_signing"></t>
                </div>
            </t>
        </t>
    </template>

    <report id="report_stock_purchase"
            model="stock.move"
            string="Purchase Report"
            name="stock_purchase_custom_report.purchase_report_template"
            file="stock_purchase_custom_report.purchase_report_template"
            multi="True"
            menu="False"
            report_type="qweb-pdf"/>

    <record id="report_stock_purchase" model="ir.actions.report.xml">
        <field name="paperformat_id" ref="custom_report.paperformat_backend_portrait"/>
    </record>
</odoo>
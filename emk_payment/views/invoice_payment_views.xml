<?xml version="1.0"?>
<odoo>
    <record id="view_invoice_payment_form" model="ir.ui.view">
        <field name="name">invoice.payment.form</field>
        <field name="model">invoice.payment</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Invoice Payment">
                <header>
                    <button string='Register Payment' name="invoice_payment" type='object' class="oe_highlight"
                            states="open"/>
                    <field name="state" widget="statusbar" statusbar_visible="open,paid" no_label="1"/>
                </header>
                <sheet>
                    <h1 class="oe_title">
                        Session:
                        <field name="session_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="invoice_type"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,}"/>
                            <field name="payment_partner_id" attrs="{'invisible':[('invoice_type','=',False)]}"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,}"/>
                            <field name="invoice_id" attrs="{'invisible':[('payment_partner_id','=',False)]}"
                                   options="{'no_create':True,'no_create_edit':True,}"/>
                            <field name="due_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="True"/>
                            <field name="paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="journal_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,}"/>
                            <field name="date"/>
                            <field name="payment_ref"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_invoice_payment_tree" model="ir.ui.view">
        <field name="name">invoice.payment.tree</field>
        <field name="model">invoice.payment</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Invoice Payment" decoration-bf="state == 'open'"
                  decoration-success="state == 'open'" decoration-muted="state == 'paid'">
                <field name="session_id"/>
                <field name="invoice_type"/>
                <field name="payment_partner_id"/>
                <field name="payment_ref"/>
                <field name="journal_id"/>
                <field name="date"/>
                <field name="state"/>
                <field name="paid_amount" sum="paid_amount"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_membership_payment">
        <field name="name">Invoice Payments</field>
        <field name="res_model">invoice.payment</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Invoice Payments
            </p>
        </field>
    </record>

    <menuitem id="menu_invoice_payment" parent="sub_payment_operation" action="action_membership_payment" sequence="5"/>
</odoo>
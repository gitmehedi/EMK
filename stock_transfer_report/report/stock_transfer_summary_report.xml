<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_transfer_summary_temp" inherit_id="report_layout.gbs_internal_layout" primary="True">
        <xpath expr="//t[@t-call='report_layout.gbs_internal_layout_header']" position="replace">
            <t t-call="stock_transfer_report.internal_layout_header_stsr"/>
        </xpath>
    </template>
    <template id="internal_layout_header_stsr" inherit_id="report_layout.gbs_internal_layout_header" primary="True">
        <xpath expr="//div/div[@class='company-info']" position="inside">
            <h5 class="text-center" style="margin-top:-10px;"><span t-esc="address"/></h5>
        </xpath>
    </template>
    <!-- Main template -->
    <template id="sts_report_temp">
        <t t-call="report.html_container">
            <t t-call="stock_transfer_report.report_transfer_summary_temp">
                <div class="page" style="page-break-inside:auto">
                    <div class="row">
                        <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                        </style>
                        <div class="clearfix">
                            <h4 class="report-title">Stock Consumption Report</h4>
                            <div class="row" style="padding-top:10px;">
                                <div class="col-xs-6" style="padding-bottom:10px;">
                                    <t t-if="record['date_from']">
                                        <strong>Period From : </strong>
                                        <span t-esc="time.strftime('%d-%m-%Y',time.strptime(record['date_from'],'%Y-%m-%d'))"/>
                                    </t>
                                    <t t-if="record['date_to']">
                                        <strong style="padding-left:5px;">To : </strong>
                                        <span t-esc="time.strftime('%d-%m-%Y',time.strptime(record['date_to'],'%Y-%m-%d'))"/>
                                    </t>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <t t-if="record['operating_unit_name']">
                                        <strong>Operating Unit : </strong>
                                        <span t-esc="record['operating_unit_name']"/>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <table class="table table-bordered table-report-xs table-striped" style="margin-bottom: 10px;">
                            <thead>
                                <tr class="odo-bg-gray">
                                    <th class="text-center" style="width:35px;">SL#</th>
                                    <th class="text-center">Name Of Heads</th>
                                    <th class="text-center">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lines" t-as="data">
                                    <t t-if="data_value['categories']">
                                        <tr style="page-break-inside: avoid" class="text-left">
                                            <td></td>
                                            <td colspan="2" style="padding: 0px;">
                                                <strong>
                                                    <t t-esc="data"/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <t t-foreach="data_value['categories']" t-as="line">
                                            <tr>
                                                <td class="text-left">
                                                    <t t-esc="line_index+1"/>
                                                </td>
                                                <td class="text-left">
                                                    <t t-esc="line['category']"/>
                                                </td>
                                                <td class="text-right">
                                                    <t t-esc="line['val_out_tk']"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="data_value['categories']">
                                            <tr style="font-weight: bold; background-color: #E4E4E4; border-bottom: 1px solid black;">
                                                <td colspan="2" class="text-left">
                                                    <t t-esc="data_value['sub-total']['title']"/>
                                                </td>
                                                <td class="text-right">
                                                    <t t-esc="data_value['sub-total']['total_out_val']"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                <tr style="font-weight: bold; background-color: #897d79; border-bottom: 1px solid black;">
                                    <td colspan="2" class="text-left">
                                        <t t-esc="total['title']"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="total['total_out_val']"/>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <t t-call="report_layout.report_signing"></t>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report id="report_stock_consumption"
            model="stock.move"
            string="Stock Consumption Report"
            name="stock_transfer_report.sts_report_temp"
            file="stock_transfer_report.sts_report_temp"
            multi="True"
            menu="False"
            report_type="qweb-pdf"/>

    <record id="report_stock_consumption" model="ir.actions.report.xml">
        <field name="paperformat_id" ref="report_layout.paperformat_backend_portrait"/>
    </record>
</odoo>
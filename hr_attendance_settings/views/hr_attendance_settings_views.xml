<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_attendance_configuration" model="ir.ui.view">
        <field name="name">HR Attendance Settings</field>
        <field name="model">hr.attendance.config.settings</field>
        <field name="arch" type="xml">
            <form string="Settings" class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                </header>
                <separator string="Settings"/>
                <sheet>
                    <group colspan="4">
                        <label for="id" string="Monthly Attendance Rule"/>
                        <div>
                            <p><b>One Day salary will deduct for each
                            <field name="late_salary_deduction_rule" class="oe_inline" nolable="1" style="width: 30px !important"/>
                                day's late.</b></p>
                        </div>

                        <label for="id" string="Attendance Duration Rule"/>
                        <div>
                            <p><strong> Time duration between consucative Check In or Check Out
                            <field name="time_duration" class="oe_inline" nolable="1" style="width: 30px !important"/>
                            seconds.</strong></p>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_attendance_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">hr.attendance.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem
            id="menu_hr_attendance_config"
            name="Settings"
            parent="hr_attendance.menu_hr_attendance_settings"
            sequence="10"
            action="action_hr_attendance_config"
    />

</odoo>

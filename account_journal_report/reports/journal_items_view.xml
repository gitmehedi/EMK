<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="print_journal_items_pdf"
            string="Journal Items"
            model="account.move.line"
            report_type="qweb-pdf"
            file="account_journal_report.journal_items_report"
            name="account_journal_report.journal_items_report"
            paperformat="report_layout.paperformat_voucher"
        />

        <template id="journal_items_report">
            <t t-call="report.html_container">
                 <t t-call="report_layout.gbs_internal_layout">
                     <div class="page" style="page-break-inside:auto;">
                        <div class="row">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                                .font { font-size: 12px; }
                                .single-tab { padding-left: 1.2em; }
                                .double-tab { padding-left: 2.4em; }

                                .table-report-vr > thead > tr > th,
                                .table-report-vr > tbody > tr > th,
                                .table-report-vr > tfoot > tr > th,
                                .table-report-vr > thead > tr > td,
                                .table-report-vr > tbody > tr > td,
                                .table-report-vr > tfoot > tr > td {
                                    padding: 1px 3px !important;
                                    font-size: 13px !important;
                                }

                            </style>
                            <div class="clearfix">
                                <h4 class="report-title"><span t-esc="title"/></h4>
                                <br/>
                                <div class="row" style="padding-bottom:5px;">
                                </div>
                            </div>

                            <table class="table table-report-vr table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th class="text-center" style="width:5%;">SL</th>
                                        <th class="text-center" style="width:20%;">Date</th>
                                        <th class="text-center" style="width:60%;">Account</th>
                                        <th class="text-center" style="width:28%;">Partner</th>
                                        <th class="text-center" style="width:25%;">Particulars</th>
                                        <th class="text-center" style="width:25%;">Journal</th>
                                        <th class="text-right" style="width:10%;">Debit</th>
                                        <th class="text-right" style="width:10%;">Credit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="data['lines']" t-as="line">
                                        <tr>
                                          <td style="line-height: 110%;"><span t-esc="line_index+1"/>
                                          </td>
                                            <td style="line-height: 110%;"><span t-esc="line['date']"/></td>
                                            <td style="line-height: 110%;">
                                                <span t-esc="line['account_name']"/>
                                                <t t-if="line['analytic_account_tag_names']">
                                                    <br/><strong class="text-left"  t-esc="line['analytic_account_tag_names']"/>
                                                </t>
                                                <t t-if="line['analytic_account_name']">
                                                    <br/><strong class="text-left" t-esc="line['analytic_account_name']"/>
                                                </t>
                                                <t t-if="line['department_name']">
                                                    <br/><strong class="text-left" t-esc="line['department_name']"/>
                                                </t>
                                                <t t-if="line['cost_center_name']">
                                                    <br/><strong class="text-left" t-esc="line['cost_center_name']"/>
                                                </t>
                                            </td>
                                            <td style="line-height: 110%;"><span t-esc="line['partner_name']"/></td>
                                            <td style="line-height: 110%;"><span t-esc="line['particulars']"/></td>
                                            <td style="line-height: 110%;"><span t-esc="line['journal']"/></td>
                                            <td class="text-right" style="line-height: 110%;">
                                                <t t-if="line['debit'] != 0">
                                                    <strong t-esc="formatLang(line['debit'])"/>
                                                </t>
                                            </td>
                                            <td class="text-right" style="line-height: 110%;">
                                                <t t-if="line['credit'] != 0">
                                                    <strong t-esc="formatLang(line['credit'])"/>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td class="text-left" colspan="5"></td>
                                        <td class="text-right"><strong>Total</strong></td>
                                        <td class="text-right"><strong t-esc="formatLang(data['sum_of_credit'])"/></td>
                                        <td class="text-right"><strong t-esc="formatLang(data['sum_of_debit'])"/></td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table_word_amount">
                                <div>
                                    <td class="text-left">
                                        <t t-if="data['sum_of_credit'] == data['sum_of_debit']">
                                            <span>In Words : </span> BDT <strong t-esc="data['word_amount']"/> <strong>Only</strong>
                                        </t>
                                    </td>
<!--                                    -->
<!--                                    <td class="text-left">-->
<!--                                        <span>In Words : </span> BDT <strong t-esc="data['word_amount']"/> <strong>Only</strong>-->
<!--                                    </td>-->
                                </div>
                            </table>
                            <table>
                                <div></div>
                            </table>
                            <table class="table" style="margin-top:40px;">
                                <tr>
                                    <td class="text-center">Prepared By</td>
                                    <td class="text-center">Checked By</td>
                                    <td class="text-center">Verified By</td>
                                    <td class="text-center">Authorised By</td>
                                    <td class="text-center">Received By</td>
                                </tr>

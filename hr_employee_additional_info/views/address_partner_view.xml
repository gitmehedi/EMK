<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="home_address_partner_form" model="ir.ui.view">
            <field name="name">home.address.partner.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form id="employee_home_address" string="Home Address">
                    <sheet>
                        <group>
                            <field name="name" string="Name" required="1"/>
                        </group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street" />
                                <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="working_address_partner_form" model="ir.ui.view">
            <field name="name">working.address.partner.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form id="employee_working_address" string="Working Address">
                    <sheet>
                        <group>
                            <field name="name" string="Name" required="1"/>
                        </group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
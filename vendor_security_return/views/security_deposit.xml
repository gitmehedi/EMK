<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--form view-->
        <record id="security_deposit_return_form" model="ir.ui.view">
            <field name="name">security.deposit.return.form</field>
            <field name="model">security.deposit.return</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Security Deposit Return">
                    <header>
	                    <button string="Confirm" name="action_confirm" states="draft"
                                type="object" class="oe_highlight"/>
						<button string="Validate" name="action_done" type="object" class="oe_highlight"
								attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                     	<button string="Cancel" name="action_cancel" states="confirmed" type="object"
                                attrs="{'invisible': [('state', '!=', 'confirm')]}" confirm="Are you sure you want to Cancel this?"/>
                    	<field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                	</header>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"
                                       options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                                <field name="journal_id"
                                       options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                            </group>
                            <group>
                                <field name="agreement_ids" widget="many2many_tags"/>
                                <field name="total_amount"/>
                            </group>
                        </group>
                        <div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers"/>
							<field name="message_ids" widget="mail_thread"/>
	                	</div>
                    </sheet>
                </form>
            </field>
        </record>

        <!--tree view-->
        <record id="security_deposit_return_tree" model="ir.ui.view">
            <field name="name">security.deposit.return.tree</field>
            <field name="model">security.deposit.return</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Security Deposit Return">
                    <field name="name"/>
					<field name="partner_id"/>
                    <field name="total_amount"/>
					<field name="state"/>
                </tree>
            </field>
        </record>
        <!--search view-->
        <record id="security_deposit_return_search" model="ir.ui.view">
            <field name="name">security.deposit.return.filter</field>
            <field name="model">security.deposit.return</field>
            <field name="arch" type="xml">
                <search string="Search SD Return">
                    <filter name="draft_sd" string="Confirmed SDR" domain="[('state','=','confirm')]"/>
                	<separator/>
                    <filter name="confirm_sd" string="Confirmed SDR" domain="[('state','=','confirm')]"/>
                	<separator/>
                    <filter name="approved_sd" string="Approved SDR" domain="[('state','=','done')]"/>
				</search>
            </field>
        </record>

        <!--action view-->
        <record id="action_security_deposit_return_view" model="ir.actions.act_window">
            <field name="name">Security Deposit Return</field>
            <field name="res_model">security.deposit.return</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="security_deposit_return_search"/>
            <field name="context">{}</field>
        </record>
        <!--sequence for name-->
        <record id="seq_security_deposit_return" model="ir.sequence">
            <field name="name">Security Deposit Return</field>
            <field name="code">security.deposit.return</field>
			<field name="active">TRUE</field>
            <field name="prefix">SDR/%(range_year)s/</field>
            <field name="padding">5</field>
			<field name="number_increment">1</field>
        </record>

        <menuitem id="menu_security_deposit_return" name="Vendor SD Return"
                  parent="vendor_agreement.menu_agreements" action="action_security_deposit_return_view" sequence="50"
                  groups="vendor_agreement.group_vendor_agreement_manager,vendor_agreement.group_vendor_agreement_user"/>
    </data>
</odoo>
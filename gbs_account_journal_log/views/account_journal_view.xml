<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Journals Log -->
        <record id="inherit_view_account_journal_form" model="ir.ui.view">
            <field name="name">inherit.account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Bank Accounts Log -->
        <record id="inherit_view_account_bank_journal_form" model="ir.ui.view">
            <field name="name">inherit.account.bank.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_bank_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
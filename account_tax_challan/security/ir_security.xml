<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_category_tax" model="ir.module.category">
            <field name="name">Tax Operation</field>
            <field name="sequence">80</field>
        </record>

        <record id="group_tax_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_tax"/>
            <field name="sequence">10</field>
        </record>

        <record id="group_tax_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_tax"/>
            <field name="implied_ids" eval="[(4, ref('group_tax_user'))]"/>
            <field name="sequence">20</field>
        </record>

        <record id="group_tax_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="module_category_tax"/>
            <field name="implied_ids" eval="[(4, ref('group_tax_manager'))]"/>
            <field name="sequence">30</field>
        </record>
        
    </data>
</odoo>
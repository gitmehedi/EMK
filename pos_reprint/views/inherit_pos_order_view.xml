<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherited_pebbles_pos_sale_order_form" model="ir.ui.view">
        <field name="name">reprint.pos.ticket.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>
            <xpath expr="//button[@name='refund']" position="after">
                <button name="%(action_report_pos_sale_ticket)d" string="Reprint" type="action"
                        states="paid,done,invoiced"/>
            </xpath>
            <xpath expr="//button[@name='refund']" position="replace">
                <button name="%(action_pos_product_return_wizard)d" string="Exchange Products" type="action"
                        attrs="{'invisible':[('state','=','draft')]}"/>
            </xpath>
        </field>
    </record>

    <template id="assets_backend" name="pos_reprint_assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/pos_reprint/static/src/css/pos.css"/>
        </xpath>
    </template>
</odoo>

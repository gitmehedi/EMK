<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="unit_rule_purchase_requisition" model="ir.rule">
        <field name="name">Unit Rule For Purchase Requisition</field>
        <field name="model_id" ref="purchase_requisition.model_purchase_requisition"/>
        <field name="domain_force">[('operating_unit_id.id','in',user.operating_unit_ids.ids)]</field>
        <field name="groups" eval="[(4,ref('stock.group_stock_user')),(4,ref('gbs_application_group.group_head_of_plant')),(4,ref('gbs_application_group.group_head_of_procurement'))]"/>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="rule_indent_purchase_user" model="ir.rule">
        <field name="name">Stock Indent(Purchase User)</field>
        <field name="model_id" ref="stock_indent.model_indent_indent"/>
        <field name="domain_force">[('operating_unit_id.id','in',user.operating_unit_ids.ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('purchase.group_purchase_user'))]"/>
    </record>


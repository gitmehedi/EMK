        <record model="ir.actions.act_window" id="action_commercial_pr">
            <field name="name">Purchase Requisition</field>
            <field name="res_model">purchase.requisition</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','done')]</field>
        </record>

        <menuitem id="menu_pr_commercial" parent="commercial.menu_commercial_root"
            sequence="0" name="Purchase Requisition" />

        <menuitem id="submenu_pr_commercial" name="Approved PR(Local)" parent="menu_pr_commercial"

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="purchase_requisition_type_wizard" model="ir.ui.view">
            <field name="name">purchase.requisition.type.wizard</field>
            <field name="model">purchase.requisition.type.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Please Select Region Type and Purchase By before approve" create="false" edit="false">
                    <group>
                        <group>
                            <field name="region_type" placeholder="Please Select" required="1"/>
                        </group>
                        <group>
                            <field name="purchase_by" placeholder="Please Select" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Save" name="save_type" type="object" class="oe_highlight"  />
                        <button string="Cancel" special="cancel" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
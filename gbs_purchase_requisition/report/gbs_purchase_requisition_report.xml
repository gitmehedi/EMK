<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            string="Call for Tenders"
            id="purchase_requisition.action_report_purchase_requisitions"
            model="purchase.requisition"
            report_type="qweb-pdf"
            name="purchase_requisition.report_purchaserequisitions"
            file="purchase_requisition.report.report_purchaserequisitions"
            menu="False"
         />
        <report
                id="custom_report_purchase_requisition"
                model="purchase.requisition"
                string="Purchase Requisition"
                report_type="qweb-pdf"
                name="gbs_purchase_requisition.report_purchase_requisition"
                file="gbs_purchase_requisition.report_purchase_requisition"
                paperformat="report_layout.paperformat_backend_landscape"
        />
        <template id="report_purchase_order_temp" inherit_id="report_layout.gbs_internal_layout" primary="True">
            <xpath expr="//t[@t-call='report_layout.gbs_internal_layout_header']" position="attributes">
                <attribute name="t-call">gbs_purchase_requisition.external_layout_header_po</attribute>
            </xpath>
        </template>
        <template id="external_layout_header_po" inherit_id="report_layout.gbs_internal_layout_header" primary="True">
            <xpath expr="//div[@class='company-info']" position="after">
                <div class="w100 text-center" style="position:absolute; bottom:2px; " name="company_address">
                    <span t-esc="address"/>
                </div>
            </xpath>
        </template>

        <template id="report_purchase_requisition">
            <t t-call="report.html_container">
                 <t t-call="gbs_purchase_requisition.report_purchase_order_temp">
                    <div class="page clearfix pt-5" style="page-break-inside:auto">
                        <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            .signed-by { display: inline-block; border-top: 1px solid #333; padding: 5px; margin-top: 60px; }
                        </style>
                        <div class="clearfix">
                            <h3 class="report-title mt-0">Purchase Requisition</h3>
                            <div class="row">
                                <div class="col-xs-6 text-left">
                                    <p class="mb-5"><b>PR NO. </b><span t-esc="data['name']"/></p>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <p class="mb-5"><b>Date : </b><span t-esc="requisition_date"/></p>
                                </div>
                            </div>

                            <hr class="hr-xxs m-0"/>

                            <div class="clearfix">
                                <h5>The following materials is required for
                                <span t-esc="data['department_id']"/> department</h5>
                            </div>
                        </div>

                        <!-- Data table -->
                        <table class="table table-report-xs table-bordered table-striped">
                            <thead>
                                <tr class="odo-bg-gray">
                                    <th rowspan="2" class="text-center">SL</th>
                                    <th rowspan="2" class="text-left">Particulars</th>
                                    <th rowspan="2" class="text-center">Store Code</th>
                                    <th rowspan="2" class="text-center">Present Requirement</th>
                                    <th colspan="2" class="text-center">Approx Value</th>
                                    <th colspan="3" class="text-center">Last Purchase</th>
                                    <th rowspan="2" class="text-center">Stock</th>
                                    <th rowspan="2" class="text-left" >Remarks</th>
                                </tr>
                                <tr class="odo-bg-gray report-header">
                                    <th class="text-center">Unit</th>
                                    <th class="text-center">Total TK</th>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-center">Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lists" t-as="l">
                                    <tr style="page-break-inside: avoid" class="text-center">
                                        <td style="width:2%"><span t-esc="l_index+1"/></td>
                                        <td class="text-left"><span t-esc="l['product_id']"/></td>
                                        <td style="width:4%"><span t-esc="l['store_code']"/></td>
                                        <td style="width:4%"><span t-esc="'%.0f'% l['product_ordered_qty']"/></td>
                                        <td style="width:4%"><span t-esc="l['product_uom_id']"/></td>
                                        <td style="width:4%"><span t-esc="l['total']"/></td>
                                        <td style="width:6%"><span t-esc="l['last_purchase_date']" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/></td>
                                        <td style="width:4%"><span t-esc="l['last_qty']"/></td>
                                        <td style="width:4%"><span t-esc="l['last_price_unit']"/></td>
                                        <td style="width:4%"><span t-esc="l['product_qty']"/></td>
                                        <td class="text-left"><span t-esc="l['remark']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="row">
                            <div class="col-xs-3 text-center">
                                <span class="signed-by"><b>Requisition Raised By</b></span>
                            </div>
                            <div class="col-xs-3 text-center">
                                <span class="signed-by"><b>Reviewed By</b></span>
                            </div>
                            <div class="col-xs-3 text-center">
                                <span class="signed-by"><b>Recommended By</b></span>
                            </div>
                            <div class="col-xs-3 text-center">
                                <span class="signed-by"><b>Approved By</b></span>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>

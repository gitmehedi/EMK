<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="custom_report_purchase_requisition"
                model="purchase.requisition"
                string="Purchase Requisition"
                report_type="qweb-pdf"
                name="gbs_purchase_requisition.report_purchase_requisition"
                file="gbs_purchase_requisition.report_purchase_requisition"
                paperformat="custom_report.paperformat_backend_landscape"
        />
        <template id="report_purchase_requisition">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                     <t t-call="custom_report.gbs_internal_layout">
                        <div class="page" style="page-break-inside:auto">
                            <div class="row">
                                <div class="clearfix">
                                    <h3 class="report-title">Purchase Requisition</h3>
                                    <div class="row">
                                        <div class="col-xs-6 text-left">
                                            <h5>
                                                <b>PR NO. </b><span t-field="o.name"/>
                                            </h5>
                                        </div>
                                        <div class="col-xs-6 text-right">
                                            <h5>
                                                <b>Date : </b><span t-field="o.requisition_date"/>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-4 text-left">
                                            <p>The following materials is required for </p>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <p> Admin Vehicle </p>
                                        </div>
                                        <div class="col-xs-4 text-right">
                                            <p> Department </p>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-bordered table-report-xs table-striped" style="margin-bottom: 10px;">
                                    <thead style="text-align: center;">
                                        <tr class="odo-bg-gray" style="text-align: center;">
                                            <th rowspan="2">SL</th>
                                            <th rowspan="2">Particulars</th>
                                            <th rowspan="2">Store Code</th>
                                            <th rowspan="2">Present requirement</th>
                                            <th colspan="2">Approx Value</th>
                                            <th colspan="3">Last Purchase</th>
                                            <th rowspan="2">Stock</th>
                                            <th rowspan="2">Remarks</th>
                                        </tr>
                                        <tr class="odo-bg-gray" style="text-align: center;">
                                            <th>Unit</th>
                                            <th>Total TK</th>
                                            <th>Date</th>
                                            <th>Qty</th>
                                            <th>Rate</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.line_ids" t-as="l">
                                            <tr style="page-break-inside: avoid">
                                                <td><span t-esc="l_index+1"/></td>
                                                <td><span t-esc="l.product_id.name"/></td>
                                                <td><span t-esc="0.00"/></td>
                                                <td><span t-esc="l.product_ordered_qty"/></td>
                                                <td><span t-esc="l.product_uom_id.name"/></td>
                                                <td><span t-esc="0.00"/></td>
                                                <td><span t-esc="0.00"/></td>
                                                <td><span t-esc="l.last_qty"/></td>
                                                <td><span t-esc="l.last_price_unit"/></td>
                                                <td><span t-esc="l.product_qty"/></td>
                                                <td><span t-esc="l.remark"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row mb32" style="margin-top: 10mm;">
                                <div class="col-xs-3 text-center">
                                    <strong style="border-top: 1px solid black; padding-top:5px;">Requisition raised by : </strong>
                                </div>
                                <div class="col-xs-3 text-center">
                                    <strong style="border-top: 1px solid black; padding-top:5px;">Reviewed by : </strong>
                                </div>
                                <div class="col-xs-3 text-center">
                                    <strong style="border-top: 1px solid black; padding-top:5px;">Recommended by : </strong>
                                </div>
                                <div class="col-xs-3 text-center">
                                    <strong style="border-top: 1px solid black; padding-top:5px;">Approved by : </strong>
                                </div>
                            </div>
                        </div>

                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>

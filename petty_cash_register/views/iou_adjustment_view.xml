<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <!-- IOU Adjustment Tree View  -->
    
    <record model="ir.ui.view" id="iou_adjustment_view">
        <field name="name">IOU Adjustment</field>
        <field name="model">iou.adjustment</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
           <tree string=" IOU Adjustment ">
           	  <field name="name"/>	
              <field name="adjustment_date"/>
              <field name="amount"/>	
              <field name="state"/>
           </tree>
        </field>
    </record>
    
    <!-- IOU Adjustment Form View -->
    
    <record id="iou_adjustment_form" model="ir.ui.view">
            <field name="name">IOU Adjustment</field>
            <field name="model">iou.adjustment</field>
            <field name="arch" type="xml">
                <form string=" IOU Adjustment ">
                  <header>
						<button name="action_adjusted" type="object" string="Adjusted" class="oe_highlight" states="draft"/>
						<field name="state" widget="statusbar"/>
				  </header>	
                  <sheet>
                  <h1>
                  		<label string="IOU Adjustment No. "  attrs="{'invisible': [('state','not in',('draft'))]}"/>
                        <field name="name" class="oe_inline" readonly="1"/>
                   </h1>
                  <group>
                  	<group>
	                	<field name="slip_id" options='{"no_open": True, "no_create": True}'/>
	                </group>
	                <group>
	                	<field name="adjustment_date"/>
	                    <field name="amount"/>
	                </group>
	                </group>
                  </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_iou_adjustment_view">
            <field name="name">IOU Adjustments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">iou.adjustment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="act_iou_adjustment_view" id="menu_iou_adjustment" 
          parent="menu_finance_petty_cash" sequence="13"/>
    
    </data>
</openerp>    
        
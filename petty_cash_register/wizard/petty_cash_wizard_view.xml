<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_wizard_petty_cash" model="ir.ui.view">
            <field name="name">Petty Cash Report</field>
            <field name="model">petty.cash.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <field name="start_date"/>
                        <field name="end_date" />
                    </group>
                    <footer>
                        <button name="petty_cash_report" string="Submit" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
                
		<record id="action_wizard_petty_cash" model="ir.actions.act_window">
			<field name="name">Petty Cash Report</field>
			<field name="res_model">petty.cash.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_wizard_petty_cash" />
			<field name="target">new</field>
		</record>

		<menuitem id="menu_action_wizard_petty_cash"
			action="action_wizard_petty_cash" parent="menu_finance_petty_cash"
			sequence="1" />
	</data>
</openerp>
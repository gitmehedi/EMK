<?xml version="1.0" ?>
<odoo>
    <record id="db2_change_password_wizard_view" model="ir.ui.view">
        <field name="name">db.change.password.wizard</field>
        <field name="model">db.change.password.wizard</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Change Password">
                <group>
                    <group>
                        <field name="source_db_user"/>
                        <field name="source_db_pass" password="True"/>
                    </group>
                    <group>
                        <field name="dest_db_user"/>
                        <field name="dest_db_pass" password="True"/>
                    </group>
                </group>

                <footer>
                    <button string="Change Password" name="db_change_password" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="db_change_password_wizard_action"
                name="Change Password"
                src_model="db.operation.manage"
                res_model="db.change.password.wizard"
                view_type="form"
                view_mode="form"
                key2="client_action_multi"
                target="new"/>

</odoo>

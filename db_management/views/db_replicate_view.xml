<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_app_config_form" model="ir.ui.view">
            <field name="name">view.account.app.config.form</field>
            <field name="model">db.replicate</field>
            <field name="arch" type="xml">
                <form string="Duplicate Database" duplicate="0">
                    <header>
                        <button name="action_duplicate" string="Database Duplicate" type="object"
                                class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="source_db"/>
                                <field name="destination_db"/>
                                <field name="operation_type"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_account_app_config_tree" model="ir.ui.view">
            <field name="name">view.db.replicate.tree</field>
            <field name="model">db.replicate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="operation_type"/>
                    <field name="source_db"/>
                    <field name="destination_db"/>
                </tree>
            </field>
        </record>

        <record id="view_account_app_config_search" model="ir.ui.view">
            <field name="name">db.replicate.search</field>
            <field name="model">db.replicate</field>
            <field name="arch" type="xml">
                <search string="Branch">
                    <field name="source_db"/>
                    <field name="destination_db"/>
                </search>
            </field>
        </record>

        <record id="seq_account_app_config" model="ir.sequence">
            <field name="name">Duplicate Database</field>
            <field name="code">db.replicate</field>
            <field name="prefix">App/</field>
            <field name="padding">4</field>
            <field name="number_increment" eval="1"/>
            <field name="company_id" eval="False"/>
        </record>

        <record id="action_account_app_config" model="ir.actions.act_window">
            <field name="name">Duplicate Database</field>
            <field name="res_model">db.replicate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to start a new Duplicate Database.
                </p>
            </field>
        </record>

        <menuitem id="menu_account_app_config" parent="db_management.main_menu_db" action="action_account_app_config"
                  sequence="100"/>
    </data>
</odoo>
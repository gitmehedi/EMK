<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_salary_rule_inherit_form" model="ir.ui.view">
            <field name="name">hr.salary.rule.inherit.form.view</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="bangla_name" required="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_hr_department_inherit_form" model="ir.ui.view">
            <field name="name">hr.department.inherit.form.view</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="bangla_name" required="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_hr_job_inherit_form" model="ir.ui.view">
            <field name="name">hr.job.inherit.form.view</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="before">
                    <field name="bangla_name" required="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_hr_employee_inherit_form" model="ir.ui.view">
            <field name="name">hr.employee.inherit.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='address_id']" position="before">
                    <field name="bangla_name" string="Employee Bangla Name" required="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_date_range_tree" model="ir.ui.view">
        <field name="name">date.range.tree</field>
        <field name="model">date.range</field>
        <field name="inherit_id" ref="date_range.view_date_range_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_date_range_type_tree" model="ir.ui.view">
        <field name="name">date.range.type.tree</field>
        <field name="model">date.range.type</field>
        <field name="inherit_id" ref="date_range.view_date_range_type_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_type_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="date_range.date_range_action" model="ir.actions.act_window">
        <field name="name">Accounting Period</field>
    </record>
    <record id="date_range.date_range_type_action" model="ir.actions.act_window">
        <field name="name">Accounting Period Types</field>
    </record>
    <record id="date_range.date_range_generator_action" model="ir.actions.act_window">
        <field name="name">Generate Accounting Period</field>
    </record>
</odoo>

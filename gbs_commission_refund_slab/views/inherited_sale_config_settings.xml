<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherited_view_sales_config" model="ir.ui.view">
        <field name="name">inherited.sale settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sales_team.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//form/div[@id='main']" position="after">
                <group string="Commission/Refund Top Up">
                    <field name="commission_refund_top_up_account" class="oe_inline"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

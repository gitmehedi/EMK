<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="1">

    <record id="ir_cron_commission_refund_slab_automation_monthly" model="ir.cron">
        <field name="name">Commission/Refund Claiming: Auto calculate slab wise commission/refund amount (Monthly)</field>
        <field name="active">False</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field> <!-- (-1) indicates unlimited -->
        <field name="nextcall"
               eval="(datetime.now() + timedelta(minutes=1)).strftime('%Y-%m-%d 02:00:00')"
        />
        <field name="model">commission.refund.prcntg.config</field>
        <field name="function">pull_automation_monthly</field>
    </record>

    <record id="ir_cron_commission_refund_slab_automation_yearly" model="ir.cron">
        <field name="name">Commission/Refund Claiming: Auto calculate slab wise commission/refund amount (Yearly)</field>
        <field name="active">False</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">12</field>
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field> <!-- (-1) indicates unlimited -->
        <field name="nextcall"
               eval="(datetime.now() + timedelta(minutes=1)).strftime('%Y-%m-%d 02:00:00')"
        />
        <field name="model">commission.refund.prcntg.config</field>
        <field name="function">pull_automation_yearly</field>
    </record>

</odoo>

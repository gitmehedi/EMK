<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="update_lc_number_confirmation_form" model="ir.ui.view">
            <field name="name">update.lc.number.confirmation.wizard</field>
            <field name="model">update.lc.number.confirmation</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="current_lc_number"/>
                        </group>
                        <group></group>
                        <group>
                            <field name="lc_number"/>
                        </group>

                    </group>
                    <footer>
                        <button name="action_yes" string="Yes" type="object" default_focus="1" class="oe_highlight"/>
                        <button name="action_no" string="No" type="object" default_focus="1" class="btn-danger"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
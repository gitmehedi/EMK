<?xml version="1.0"?>
<odoo>
    <record id="inherit_view_payment_session_form" model="ir.ui.view">
        <field name="model">payment.session</field>
        <field name="inherit_id" ref="emk_payment.view_payment_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='act_validate']" position="attributes">
                <attribute name="groups">member_user.group_mem_user_officer,membership_extension.group_membership_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='act_close']" position="attributes">
                <attribute name="groups">member_user.group_mem_user_officer,membership_extension.group_membership_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='act_open']" position="attributes">
                <attribute name="groups">member_user.group_mem_user_officer,membership_extension.group_membership_manager</attribute>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0"?>
<odoo>

    <record id="view_member_payment_form" model="ir.ui.view">
        <field name="name">member.payment.form</field>
        <field name="model">member.payment</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Membership Payment">
                <header>
                    <button string='Register Payment' name="member_payment" type='object' class="oe_highlight"
                            states="open"/>
                    <field name="state" widget="statusbar" statusbar_visible="open,paid" no_label="1"/>
                </header>
                <sheet>
                    <h1 class="oe_title">
                        Session:
                        <field name="session_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="membership_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,}"/>
                            <field name="due_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="journal_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,}"/>
                            <field name="date"/>
                            <field name="payment_ref"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_member_payment_tree" model="ir.ui.view">
        <field name="name">member.payment.tree</field>
        <field name="model">member.payment</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Membership Payment" decoration-bf="state == 'open'"
                  decoration-success="state == 'open'" decoration-muted="state == 'paid'">
                <field name="session_id"/>
                <field name="membership_id"/>
                <field name="payment_ref"/>
                <field name="journal_id"/>
                <field name="date"/>
                <field name="state"/>
                <field name="paid_amount" sum="paid_amount"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_membership_payment">
        <field name="name">Membership Fee</field>
        <field name="res_model">member.payment</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Member's Payment
            </p>
        </field>
    </record>

    <menuitem id="menu_membership_fee" parent="sub_pay_daily_operations"
              action="action_membership_payment" sequence="10"
              groups="membership_user.group_mem_user_officer"/>


</odoo>
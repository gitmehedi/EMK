<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_price_average_wizard_form" model="ir.ui.view">
            <field name="name">purchase.average.price.wizard.form</field>
            <field name="model">purchase.average.price.wizard</field>
            <field name="arch" type="xml">
                <form string="Purchase Price Average">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="operating_unit_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                            <field name="product_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="process_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_purchase_price_average_wizard" model="ir.actions.act_window">
            <field name="name">Purchase Price Average Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.average.price.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                name="Purchase Price Average Report"
                parent="stock.menu_warehouse_report"
                action="action_purchase_price_average_wizard"
                id="menu_purchase_price_average_wizard" groups="stock.group_stock_user"
                sequence="18"/>
    </data>
</odoo>

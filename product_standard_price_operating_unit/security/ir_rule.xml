<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="product_rule_standard_price_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her allowed operating units cost</field>
            <field name="model_id" ref="model_product_standard_price"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">['|', ('operating_unit_id','=',False), ('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        </record>

        <record id="product_rule_standard_price_history_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her allowed operating units cost price history</field>
            <field name="model_id" ref="model_product_price_history"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">['|', ('operating_unit_id','=',False), ('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        </record>
    </data>
</odoo>
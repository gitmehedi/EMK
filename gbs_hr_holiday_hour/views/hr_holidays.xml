<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="inherit_hr_short_leave_form" model="ir.ui.view">
            <field name="name">hr.short.leave.view.form</field>
            <field name="model">hr.short.leave</field>
            <field name="inherit_id" ref="hr_short_leave.edit_holiday_new1"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="holiday_status_id"/>
                </xpath>
            </field>
        </record>

        <record id="edit_holiday_status_form_view" model="ir.ui.view">
        <field name="name">hr_holidays_status_form</field>
            <field name="model">hr.holidays.status</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/group/group/field[@name='limit']" position="after">
                        <field name="short_leave_flag" />
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_holiday_hour_manager" model="ir.rule">
        <field name="name">Half day Leave Holidays Officer</field>
        <field name="model_id" ref="model_hr_holiday_hour"/>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays.group_hr_holidays_user'))]"/>
    </record>

    <record id="hr_holiday_hour_employee" model="ir.rule">
        <field name="model_id" ref="model_hr_holiday_hour"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="name">Short Leave Permission Employee</field>
        <field eval="1" name="perm_unlink"/>
        <field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="1" name="perm_create"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>


</odoo>
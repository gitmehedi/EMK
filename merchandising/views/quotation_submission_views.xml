<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>     
        <record id="quotation_submission_view_form" model="ir.ui.view" >
			<field name="name">quotation.submission.form</field>
			<field name="model">quotation.submission</field>
			<field name="arch" type="xml">
				<form string="Quotation submission Form">
                    <sheet>
			            <group>
				            <group>
				                <field name="submission_date"/>
				                <field name="product_costing_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
				           		<field name="remarks"/>
				            </group>
			            </group>
		            </sheet>
                </form>
            </field>
        </record>
		
		 <!-- quotation submission tree/list view -->
        <record  id="quotation_submission_view_tree" model="ir.ui.view">
            <field name="name">quotation.submission.tree</field>
            <field name="model">quotation.submission</field>
            <field name="arch" type="xml">
                <tree string="Quotation Submission Tree">
                    <field name="submission_date"/>
				    <field name="product_costing_id"/>
				    <field name="remarks"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
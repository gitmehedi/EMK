<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="product_size_group_view_form" model="ir.ui.view">
			<field name="name">Product Size Group</field>
			<field name="model">product.size.group</field>
			<field name="arch" type="xml">
				<form string="Product Size Group Form">
					<sheet>
						<div class="">
							<group>
								<field name="name" class="oe_inline" />
								<field name="buyer_id" string="Buyer" class="oe_inline"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="active" class="oe_inline" />
							</group>
							<separator string="Product Sizes" />
							<div>
								<field name="size_id">
									<tree editable="bottom">
										<field name="name" options='{"no_open": True,"no_create": 1}' />
										<field name="active" />
									</tree>
								</field>
							</div>
							<separator string="Additional Information" />
							<div>
								<field name="description" placeholder="Additional Information" />
							</div>

						</div>
					</sheet>
				</form>
			</field>
		</record>
		<record id="product_size_group_view_tree" model="ir.ui.view">
			<field name="name">Product Size Group</field>
			<field name="model">product.size.group</field>
			<field name="priority" eval="16" />

			<field name="arch" type="xml">
				<tree string="Product Size Group list">
					<field name="name" />
					<field name="description" />
					<field name="active" />
				</tree>
			</field>
		</record>

		<record id="product_size_group_action" model="ir.actions.act_window">
			<field name="name">Product Size Groups</field>
			<field name="res_model">product.size.group</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem name="Product Size Groups" id="product_size_group_menu"
			parent="products_sub_menu" sequence="315" action="product_size_group_action" />

	</data>
</openerp>

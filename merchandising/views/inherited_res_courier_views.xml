<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="inherit_res_courier_form" model="ir.ui.view">
			<field name="name">Courier View Form</field>
			<field name="model">res.partner</field>
			<field name="arch" type="xml">
				<form string="Courier">
					<sheet>
						<div class="oe_title oe_left">
							<div class="oe_edit_only">
								<label for="name"/>
							</div>
							<h1>
								<field name="name" default_focus="1" placeholder="Name"/>
							</h1>
						</div>
						
						<group>
							<group>
								<field name="courier" invisible="1"/>
								<field name="customer" invisible="1"/>
								<field name="is_company" invisible="1"/>
								<field name="parent_id" invisible="1"/>
								<label for="type" attrs="{'invisible': [('parent_id','=', False)]}"/>
								<div attrs="{'invisible': [('parent_id','=', False)]}" name="div_type">
									<field class="oe_inline" name="type"/>
								</div>
								
								<label for="street" string="Address"/>
								<div>
									<div class="oe_edit_only">
										<field name="parent_id" class="oe_inline"  attrs="{'invisible': ['|', ('is_company', '=', True),('parent_id',
											'=', False)]}"/>
										<!--on_change="onchange_address(use_parent_address,parent_id)"-->
										<label for="parent_id" attrs="{'invisible': ['|', ('is_company', '=', True),
											('parent_id', '=', False)]}"/>
									</div>
									<button name="open_parent" type="object" string="(edit company address)" class="oe_link
										oe_edit_only" attrs="{'invisible': ['|',('parent_id','=', False),('parent_id','=',False)]}"/>
									<field name="street" placeholder="Street..." attrs="{'readonly': [('parent_id','=',True)]}"/>
									<field name="street2" attrs="{'readonly': [('parent_id','=',True)]}"/>
									<div class="address_format">
										<field name="city" placeholder="City" style="width: 40%" attrs="{'readonly': [('parent_id','=',True)]}"/>
										<field name="state_visible" invisible="1"/>
										<field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%"
											options="{&quot;no_open&quot;: True}" on_change="onchange_state(state_id)"
											attrs="{'readonly': [('parent_id','=',True)],'invisible': [('state_visible','=',
											False)]}"/>
										<field name="zip" placeholder="ZIP" style="width: 20%" attrs="{'readonly': [('parent_id','=',True)]}"/>
									</div>
									<field name="country_id" placeholder="Country" class="oe_no_button" options="{&quot;no_open&quot;:
										True, &quot;no_create&quot;: True}" attrs="{'readonly': [('parent_id','=',True)]}"/>
								</div>
								<field name="website" widget="url" placeholder="e.g. www.lakhsma.com"/>
							</group>
							<group>
								<field name="function" placeholder="e.g. Sales Director" attrs="{'invisible': [('is_company','=',
									True)]}"/>
								<field name="phone"/>
								<field name="mobile"/>
								<field name="fax"/>
								<field name="user_ids" invisible="1"/>
								<field name="email" widget="email" attrs="{'required': [('user_ids','!=', [])]}"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="action_respartner_form" model="ir.actions.act_window">
			<field name="name">Couriers</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{"default_courier":1,"default_customer":0}</field>
			<field name="search_view_id" ref="base.view_res_partner_filter"/>
			<field name="domain">[('courier','=',True)]</field>
		</record>
		
		<record id="action_partner_form_view2" model="ir.actions.act_window.view">
			<field eval="2" name="sequence"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="inherit_res_courier_form"/>
			<field name="act_window_id" ref="action_respartner_form"/>
		</record>
		
		<record id="action_partner_tree_view1" model="ir.actions.act_window.view">
			<field name="sequence" eval="1"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="base.view_partner_tree"/>
			<field name="act_window_id" ref="action_respartner_form"/>
		</record>
		
		<menuitem name="Couriers" id="inherited_res_courier_menu" parent="configuration_menu"
			sequence="540" action="action_respartner_form"/>
	</data>
</openerp>

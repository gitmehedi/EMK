<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_pack_operation_details_form" model="ir.ui.view">
        <field name="name">stock.pack.operation.details.form.inherit</field>
        <field name="model">stock.pack.operation</field>
        <!--<field name="mode">primary</field>-->
        <field name="inherit_id" ref="stock.view_pack_operation_details_form"/>
        <!--<field eval="15" name="priority"/>-->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="replace">
                <field name="location_id" domain="[('id', 'child_of', picking_source_location_id)]"
                       options="{'no_create': True}" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='location_dest_id']" position="replace">
                <field name="location_dest_id" domain="[('id', 'child_of', picking_source_location_id)]"
                       options="{'no_create': True}" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>

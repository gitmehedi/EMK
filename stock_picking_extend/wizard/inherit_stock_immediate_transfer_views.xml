<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_view_immediate_transfer" model="ir.ui.view">
        <field name="name">stock.immediate.transfer.view</field>
        <field name="model">stock.immediate.transfer</field>
        <field name="inherit_id" ref="stock.view_immediate_transfer" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Confirmation">
                    <group>
                        <p>
                            Are you sure, you want to continue?
                        </p>
                    </group>
                    <footer>
                        <button name="process" string="_Apply" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </xpath>
        </field>
    </record>

</odoo>
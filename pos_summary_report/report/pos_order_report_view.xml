<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Main template -->
        <template id="report_pos_summary_qweb">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">

                        <div class="row mb32">
                            <div class="col-xs-10 text-center">
                                <h3>
                                    <span t-esc="address['name']"></span>
                                </h3>
                                <p>
                                    <span t-raw="address['contact1']"></span>,
                                </p>
                                <p>
                                    <span t-raw="address['contact2']"></span>,
                                    Tel-
                                    <span t-esc="address['phone']"></span>
                                </p>
                                <p>
                                    <strong>Operator Wise Sales(<span t-esc="pos_config"/>)
                                    </strong>
                                </p>
                                <span t-esc="start_date"/>
                                to
                                <span t-esc="end_date"/>
                            </div>
                        </div>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Invoice No</th>
                                    <th class="text-center">Sales Value</th>
                                    <th class="text-center">Vat</th>
                                    <th class="text-center">Discount</th>
                                    <th class="text-center">Net Sales</th>
                                    <th colspan="3" class="text-center">Payment Mode</th>
                                </tr>
                                <tr>
                                    <th colspan="6" class="text-center"></th>
                                    <th class="text-center">Cash</th>
                                    <th class="text-center">Credit Card</th>
                                    <th class="text-center">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>

                                </tr>
                            </tbody>

                            <tbody>
                                <t t-foreach="lines" t-as="line">
                                    <tr>
                                        <td>
                                            <t t-esc="line['date_order']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['pos_reference']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['sales_value']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['amount_tax']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['discount']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['net_sales']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['cash']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['credit_card']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['total']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
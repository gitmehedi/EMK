<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Main template -->
        <template id="report_pos_summary_qweb">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">

                        <div class="row mb32">
                            <div class="col-xs-12 text-center">
                                <h3>
                                    <strong>PEBBLES</strong>
                                </h3>
                                <p>
                                    <span t-raw="address['street']"></span>,
                                </p>
                                <p>
                                    <span t-raw="address['street2']"></span>,
                                    <span t-raw="address['city']"></span>,
                                    Tel-
                                    <span t-esc="address['contact_no']"></span>
                                </p>
                                <p>
                                    <strong>
                                        Operator Wise Sales(<span t-esc="address['name']"/>)
                                    </strong>
                                </p>
                                <br/>
                                <span t-esc="data['start_date']"/>
                                to
                                <span t-esc="data['end_date']"/>
                            </div>
                        </div>

                        <table class="table table-bordered">
                            <thead>
                                <tr style="background-color: #CECBCB;">
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Invoice No</th>
                                    <th class="text-center">Sales Value</th>
                                    <th class="text-center">Vat</th>
                                    <th class="text-center">Discount</th>
                                    <th class="text-center">Net Sales</th>
                                    <th colspan="3" class="text-center">Payment Mode</th>
                                </tr>
                                <tr>
                                    <th colspan="6" class="text-center"></th>
                                    <th class="text-center">Cash</th>
                                    <th class="text-center">Card</th>
                                    <th class="text-center">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lines" t-as="line">
                                    <tr>
                                        <td>
                                            <t t-esc="line['date_order']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['pos_reference']"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="line['sales_value']"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="line['amount_tax']"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="line['discount']"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <t t-esc="line['net_sales']"/>
                                            </strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="line['cash']"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="line['credit_card']"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="line['total']"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="lines">
                                    <tr style="background-color: #EFECEB;">
                                        <td colspan="2">
                                            <strong>Grand Total</strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <t t-esc="total['sales_value']"/>
                                            </strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <t t-esc="total['amount_tax']"/>
                                            </strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <t t-esc="total['discount']"/>
                                            </strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <t t-esc="total['net_sales']"/>
                                            </strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <t t-esc="total['cash']"/>
                                            </strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <t t-esc="total['card']"/>
                                            </strong>
                                        </td>
                                        <td style="text-align: right;">
                                            <strong>
                                                <t t-esc="total['total']"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="category_wise_product_report_wizard_view" model="ir.ui.view">
            <field name="name">Category Wise Product</field>
            <field name="model">category.wise.product.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="shop_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>

                        </group>
                        <group>
                            <field name="category_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="report_print" string="Print Report" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_category_wise_product_report_wizard" model="ir.actions.act_window">
            <field name="name">Category Wise Product</field>
            <field name="res_model">category.wise.product.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="category_wise_product_report_wizard_view"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Category Wise Product" id="category_wise_product_report"
                  action="action_category_wise_product_report_wizard" sequence="2"
                  parent="product_to_shop_distribution" groups="stock.group_stock_manager"/>
    </data>
</openerp>
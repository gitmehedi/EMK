<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_customer_invoice_form_inherit" model="ir.ui.view">
            <field name="name">inherited.customer_invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']"
                       position="after">
                    <field name="manual_invoice" invisible="1"/>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="before">
                    <field name="can_edit_invoice_line" invisible="1"/>
                    <field name="manual_invoice" invisible="1"/>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='uom_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='name']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>

                <xpath expr="//button[@name='invoice_print']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

        <record id="account.action_invoice_tree1" model="ir.actions.act_window">
            <field name="context">
                {'type':'out_invoice',
                'journal_type': 'sale',
                'no_create_edit_button':True
                }
            </field>
        </record>

        <report
            id="account.account_invoices"
            model="account.invoice"
            string="Invoices"
            report_type="qweb-pdf"
            name="account.report_invoice"
            file="account.report_invoice"
            attachment_use="True"
            menu="False"
            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
        />

    </data>
</odoo>
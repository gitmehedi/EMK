<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="inherited_pebbles_pos_sale_order_form" model="ir.ui.view">
            <field name="name">reprint.pos.ticket.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Reprint']" position="replace">
                    <button name="%(action_report_pos_sale_ticket)d" string="Reprint" type="action"
                            states="paid,done,invoiced"/>
                </xpath>
                <xpath expr="//button[@string='Payment']" position="replace">
                    <button name="%(point_of_sale.action_pos_payment)d" string="Payment" class="oe_highlight" type="action"
                            states="draft" context="{'pos_session_id' : session_id}"/>
                    <button name="%(action_pos_proudct_return)d" string="Product Return" class="oe_highlight" type="action"
                            states="draft" context="{'pos_session_id' : session_id}"/>
                    <button string="Product Exchange" class="oe_highlight" type="action"
                            states="draft" context="{'pos_session_id' : session_id}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

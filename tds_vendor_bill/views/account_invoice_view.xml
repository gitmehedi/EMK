<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_supplier_tds_form" model="ir.ui.view">
        <field name="name">account.invoice.tds.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="date_invoice" position="after">
                <field name="is_tds_applicable"/>
                <field name="inapplicable_type"
                       attrs="{'invisible':[('is_tds_applicable','=',True)]}"/>
                <field name="vat_over_tds" invisible="1"/>
            </field>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="account_tds_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                <field name="tds_amount" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='residual']" position="after">
                <field name="total_tds_amount" class="oe_subtotal_footer_separator"
                       attrs="{'invisible': [('is_tds_applicable', '=', False)]}" widget="monetary"/>
            </xpath>
            <xpath expr="//field[@name='tax_line_ids']/tree/field[@name='amount']" position="after">
                <field name="tds_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="inherited_invoice_tds_tree" model="ir.ui.view">
        <field name="name">inherited.invoice.tds.tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="gbs_vendor_bill.inherit_invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_tax']" position="after">
                <field name="total_tds_amount" string="TDS" sum="Total"/>
            </xpath>
        </field>
    </record>
</odoo>


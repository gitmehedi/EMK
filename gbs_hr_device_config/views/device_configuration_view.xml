<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

		<!-- Tree View -->
		<record id="attendance_device_detail_tree" model="ir.ui.view">
			<field name="name">hr.attendance.device.detail.tree</field>
			<field name="model">hr.attendance.device.detail</field>
			<field name="arch" type="xml">
				<tree string="Devices">
					<field name="name"/>
					<field name="operating_unit_id"/>
					<field name="connection_type"/>
					<field name="server"/>
					<field name="database"/>
					<field name="last_update"/>
				</tree>
			</field>
		</record>


		<record id="view_attendance_device_line_tree" model="ir.ui.view">
            <field name="name">hr.attendance.device.line.tree</field>
            <field name="model">hr.attendance.device.line</field>
            <field name="arch" type="xml">
                <tree string="Devices" editable="top">
                    <field name="name"/>
                    <field name="sensor_id"/>
                </tree>
            </field>
        </record>

		<record id="view_attendance_device_line_details_tree" model="ir.ui.view">
            <field name="name">hr.attendance.device.line.details.tree</field>
            <field name="model">hr.attendance.device.line.details</field>
            <field name="arch" type="xml" >
                <tree string="Devices" editable="top">
                    <field name="type_code"/>
                    <field name="type_value"/>
                </tree>
            </field>
        </record>

		<!-- Form View -->
		<record id="attendance_device_detail_form" model="ir.ui.view">
			<field name="name">hr.attendance.device.detail.form</field>
			<field name="model">hr.attendance.device.detail</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Device Details">
					<sheet>

						<group>
							<group>
								<field name="name" />
								<field name="operating_unit_id" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
								<field name="connection_type" placeholder="Please Select"/>
								<field name="last_update"/>
								<field name="duty_date_set_last_update"/>
							</group>
							<group>
								<field name="server"/>
								<field name="database"/>
								<field name="username"/>
								<field name="password"/>
								<field name="is_active"/>
							</group>
						</group>

						<notebook>
                            <page string="Device Details">
								<field name="device_lines">
									<tree editable="top">
										 <field name="name"/>
                        				 <field name="sensor_id"/>
									</tree>
								</field>
	                        </page>
                            <page string="Device Config">
								<field name="device_line_details">
									<tree editable="top">
										 <field name="type_value" />
										 <field name="type_code" placeholder="Please Select"/>
									</tree>
								</field>
	                        </page>
							<page string="Restricted Config">
								<group>
									<group>
										<button name="action_check_connection" type="object" string="Test Connection" class="oe_highlight"/>
									</group>
									<group>
										<button name="action_pull_data" type="object" string="Pull" class="oe_highlight"/>
									</group>
									<group>
										<button name="action_pull_error_data" type="object" string="Pull Error Data" class="oe_highlight"/>
									</group>
									<group>
										<button name="action_set_duty_date" type="object" string="Set Duty Date" class="oe_highlight"/>
									</group>
								</group>
	                        </page>
                        </notebook>
					</sheet>

				</form>
			</field>
		</record>

		<record id="hr_attendance_device_detail_action" model="ir.actions.act_window">
			<field name="name">Attendance Device Configuration</field>
			<field name="res_model">hr.attendance.device.detail</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_hr_attendance_detail_config" name="Device Configuration" parent="hr_attendance.menu_hr_attendance_settings"
					action="hr_attendance_device_detail_action" />

	</data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="1">

    <record id="ir_cron_backup_scheduler_0" model="ir.cron">
        <field name="name">Attendance Scheduler</field>
        <field name="active">0</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(hours=1)).strftime('%Y-%m-%d 02:00:00')"
               />
        <field name="model">hr.attendance.device.detail</field>
        <field name="function">pull_automation</field>
    </record>

</odoo>

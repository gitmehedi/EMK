<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="multi_challan_confirm_wizard_view" model="ir.ui.view">
            <field name="name">multi.challan.confirm.wizard.form</field>
            <field name="model">multi.challan.confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Challan Deposit">
                    <p class="oe_grey">
                        Once pending challan are confirmed, you will not be able
                        to modify them.
                    </p>
                    <footer>
                        <button string="Confirm" name="action_confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_challans_confirm"
                    multi="True"
                    key2="client_action_multi" name="Confirm"
                    res_model="multi.challan.confirm.wizard" src_model="tds.vat.challan"
                    groups="account.group_account_user"
                    view_mode="form" target="new" view_type="form" />
    </data>
</odoo>
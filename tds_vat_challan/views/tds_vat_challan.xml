<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="tds_vat_challan_tree_view">
            <field name="name">tds_vat_challan_list</field>
            <field name="model">tds.vat.challan</field>
            <field name="arch" type="xml">
                <tree delete="false"
                      decoration-info="state == 'draft'" decoration-success="state == 'confirm'"
                      decoration-muted="state in ('approved','cancel') "
                      decoration-bf="state in ('confirm','approved') " create="false" edit="false">
                    <field name="challan_date"/>
                    <field name="challan_no"/>
                    <field name="deposited_bank"/>
                    <field name="bank_branch"/>
                    <field name="total_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tds_vat_challan_form_view">
            <field name="name">tds_vat_challan_from_view</field>
            <field name="model">tds.vat.challan</field>
            <field name="arch" type="xml">
                <form string="TDS/VAT Vendor Challan">
                    <header>
                        <button string="Confirm" name="action_confirm" type="object"
                                groups="account.group_account_user"
                                states="draft" class="oe_highlight"/>
                        <button string="Approve" name="action_approve" type="object"
                                groups="account.group_account_manager"
                                states="confirm" class="oe_highlight"/>
                        <button string="Cancel" name="action_cancel" type="object"
                                groups="account.group_account_manager"
                                states="draft,confirm" class="btn-default"/>
                        <button string="Reset To Draft" name="action_reset_to_draft" type="object"
                                groups="account.group_account_user"
                                states="cancel" class="btn-default"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                    </header>
                    <sheet>
                        <div class="pull-left">
                            <h2>
                                <field name="name" nolabel="1"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="challan_date"/>
                                <field name="challan_no"/>
                                <field name="acc_move_line_ids" invisible="1" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="deposited_bank"/>
                                <field name="bank_branch"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Details">
                                <field name="line_ids" nolabel="1">
                                    <tree string="List" editable="false" create="false" delete="false">
                                        <field name="supplier_id"/>
                                        <field name="product_id"/>
                                        <field name="operating_unit_id"/>
                                        <field name="type_name" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="total_bill" string="Amount" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                                <group>
                                    <group></group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="total_amount" class="oe_subtotal_footer_separator"
                                               widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </group>
                                </group>
                                <div>
                                    <field name="note" placeholder="Additional notes..."/>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="tds_vat_challan_filter" model="ir.ui.view">
            <field name="name">tds.vat.challan.select</field>
            <field name="model">tds.vat.challan</field>
            <field name="arch" type="xml">
                <search string="Search Challan">
                    <field name="challan_date"/>
                    <filter name="approve" string="To Approve" domain="[('state','=','confirm')]"/>
                    <group expand="0" string="Group By">
                        <filter name="status" string="Status" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="challan_date" context="{'group_by':'challan_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tds_vat_challan_action">
            <field name="name">TDS/VAT Challan</field>
            <field name="res_model">tds.vat.challan</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_approve':1}</field>
            <field name="search_view_id" ref="tds_vat_challan_filter"/>
        </record>

        <menuitem name="TDS/VAT Challan" parent="main_menu_tds_vat"
                  action="tds_vat_challan_action" id="tds_challan_menu" sequence="11"
                  groups="account_tds.group_tds_manager,account_tds.group_tds_user"/>

        <record id="account.action_account_unreconcile" model="ir.actions.act_window">
            <field name="name">Unreconcile Entries</field>
            <field name="res_model">account.unreconcile</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="groups_id"
                   eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

        <record id="account.action_view_account_move_line_reconcile" model="ir.actions.act_window">
            <field name="name">Reconcile Entries</field>
            <field name="res_model">account.move.line.reconcile</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.view_account_move_line_reconcile_full"/>
            <field name="target">new</field>
            <field name="groups_id"
                   eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

    </data>
</odoo>
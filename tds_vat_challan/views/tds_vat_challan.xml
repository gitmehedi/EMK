<odoo>
    <data>

        <record model="ir.ui.view" id="tds_vat_challan_tree_view">
            <field name="name">tds_vat_challan_list</field>
            <field name="model">tds.vat.challan</field>
            <field name="arch" type="xml">
                <tree delete="false" create="false" edit="false">
                    <field name="date" string="Bill Date"/>
                    <field name="supplier_id" string="Vendor"/>
                    <field name="operating_unit_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tds_vat_challan_form_view">
            <field name="name">tds_vat_challan_from_view</field>
            <field name="model">tds.vat.challan</field>
            <field name="arch" type="xml">
                <form string="TDS/VAT Vendor Challan" create="false" edit="false">
                    <header>
                        <button string="Deposit" name="action_deposited" type="object"
                                states="draft" class="oe_highlight"/>
                        <button string="Distribute" name="action_distributed" type="object"
                                states="deposited" class="oe_highlight"/>
                        <button string="Cancel" name="action_cancel" type="object"
                                states="draft,deposited" class="btn-default"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,deposited,distributed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="supplier_id" readonly="1"
                                       options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                <field name="operating_unit_id" readonly="1"
                                       options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                <field name="deposit_approver"
                                       attrs="{'invisible': [('state', 'in', ('draft','cancel'))]}"/>
                                <field name="distribute_approver"
                                       attrs="{'invisible': [('state', 'in', ('draft','deposited','cancel'))]}"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="deposit_date"
                                       attrs="{'invisible': [('state', 'in', ('draft','cancel'))]}"/>
                                <field name="distribute_date"
                                       attrs="{'invisible': [('state', 'in', ('draft','deposited','cancel'))]}"/>
                                <field name="total_amount"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Details">
                                <group>
                                    <field name="line_ids" nolabel="1" readonly="1">
                                        <tree string="List" editable="false" create="false" delete="false">
                                            <field name="supplier_id"/>
                                            <field name="total_bill" string="TDS/VAT Amount"/>
                                            <!--<field name="challan_provided"/>-->
                                            <!--<field name="undistributed_bill"/>-->
                                            <field name="state" invisible="1"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="tds_vat_challan_filter" model="ir.ui.view">
            <field name="name">tds.vat.challan.select</field>
            <field name="model">tds.vat.challan</field>
            <field name="arch" type="xml">
                <search string="Search Challan">
                    <field name="supplier_id"/>
                    <field name="operating_unit_id"/>
                    <filter name="deposit" string="To Deposit" domain="[('state','=','draft')]"/>
                    <filter name="distribute" string="To Distribute" domain="[('state','=','deposited')]"/>
                    <group expand="0" string="Group By">
                        <filter name="status" string="Status" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Supplier" context="{'group_by':'supplier_id'}"/>
                        <separator/>
                        <filter string="Branch" context="{'group_by':'operating_unit_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tds_vat_challan_action">
            <field name="name">TDS/VAT Challan</field>
            <field name="res_model">tds.vat.challan</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_deposit':1}</field>
            <field name="search_view_id" ref="tds_vat_challan_filter"/>
        </record>

        <menuitem
                name="TDS/VAT Challan"
                parent="account.menu_finance_payables"
                action="tds_vat_challan_action"
                id="tds_challan_menu"
                sequence="11"/>

        <record id="account.action_account_unreconcile" model="ir.actions.act_window">
            <field name="name">Unreconcile Entries</field>
            <field name="res_model">account.unreconcile</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="groups_id"
                   eval="[(6, 0, [ref('base.group_no_one')])]"/>
        </record>

        <record id="account.action_view_account_move_line_reconcile" model="ir.actions.act_window">
            <field name="name">Reconcile Entries</field>
            <field name="res_model">account.move.line.reconcile</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.view_account_move_line_reconcile_full"/>
            <field name="target">new</field>
            <field name="groups_id"
                   eval="[(6, 0, [ref('base.group_no_one')])]"/>
        </record>

    </data>
</odoo>
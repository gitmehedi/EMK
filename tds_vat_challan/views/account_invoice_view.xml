<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_invoice_vat_challan_form" model="ir.ui.view">
        <field name="name">account.invoice.vat.challan.form</field>
        <field name="model">account.invoice</field>
        <field name="priority" eval="17"/>
        <field name="inherit_id" ref="gbs_vendor_bill.inherit_invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="tds_vat_challan_ids" widget="many2many_tags"
                       readonly="1" attrs="{'invisible': [('tds_vat_challan_ids','=', [])]}"/>
            </xpath>
        </field>
    </record>

    <record id="account_invoice_vat_challan_filter" model="ir.ui.view">
        <field name="name">account.invoice.vat.challan.filter</field>
        <field name="model">account.invoice</field>
        <field name="priority" eval="17"/>
        <field name="inherit_id" ref="gbs_vendor_bill.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="tds_vat_challan_ids" string="Challan No"/>
            </xpath>
        </field>
    </record>
</odoo>

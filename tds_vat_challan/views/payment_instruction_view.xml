<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_tds_payment_instruction_tree">
        <field name="name">Payment Instructions</field>
        <field name="model">payment.instruction</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Payment lines">
                <field name="sequence" widget="handle"/>
                <field name="instruction_date"/>
                <field name="partner_id"/>
                <field name="default_debit_account_id" invisible="1"/>
                <field name="default_credit_account_id" invisible="1"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="state" invisible="1"/>
                <button name="action_approve" string="Approve" type="object"
                        class="oe_highlight" states="draft"/>
            </tree>
        </field>
    </record>

    <record id="action_tds_payment_instruction" model="ir.actions.act_window">
        <field name="name">Payment Instructions</field>
        <field name="res_model">payment.instruction</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_tds_payment_instruction_tree"/>
        <field name="domain">[('is_tax', '=', True)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Payment instruction is empty.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_tds_vat_payment"
            name="Payment Instructions"
            parent="main_menu_tds_vat"
            sequence="5"
            action="action_tds_payment_instruction"
            groups="account_tds.group_tds_manager,account_tds.group_tds_user"/>
</odoo>
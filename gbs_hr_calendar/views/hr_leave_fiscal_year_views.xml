<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- HR Leave Fiscal Year Form Views -->
		<record id="hr_leave_fiscal_year_form_view" model="ir.ui.view">
			<field name="name">hr.leave.fiscal.year.form</field>
			<field name="model">hr.leave.fiscal.year</field>
			<field name="arch" type="xml">
				<form string="HR Leave Fiscal Year">
					<header>
						<button name="action_done" states="draft"
							string="Close Leave Year" type="object" class="oe_highlight" />
						
						<field name="state" widget="statusbar" nolabel="1" />
					</header>
					<group>
						<group>
							<field name="name" attrs="{'readonly': [('state','=','done')]}" />
							<field name="code" attrs="{'readonly': [('state','=','done')]}" />
						</group>
						<group>
							<field name="date_start" attrs="{'readonly': [('state','=','done')]}" />
							<field name="date_stop" attrs="{'readonly': [('state','=','done')]}" />
						</group>
					</group>
				</form>
			</field>
		</record>
	
		<!-- HR Leave Fiscal Year Tree Views -->
		<record id="hr_leave_fiscal_year_tree_view" model="ir.ui.view">
			<field name="name">hr.leave.fiscal.year.tree</field>
			<field name="model">hr.leave.fiscal.year</field>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';gray:state == 'done' "
					string="Fiscalyear">
					<field name="name" />
					<field name="code" />					
					<field name="date_start" />
					<field name="date_stop" />
					<field name="state" />
				</tree>
			</field>
		</record>
		
		<!-- HR Leave Fiscal Year Search Views -->
		<record id="hr_leave_fiscal_year_search_view" model="ir.ui.view">
			<field name="name">hr.leave.fiscal.year.search</field>
			<field name="model">hr.leave.fiscal.year</field>
			<field name="arch" type="xml">
				<search string="HR Leave Fiscal Year Search">
					<field name="name"
						filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"
						string="Leave Fiscal Year" />
					
				</search>
			</field>
		</record>
		
		<!-- HR Leave Fiscal Year Actions -->
		<record id="action_account_fiscalyear" model="ir.actions.act_window">
			<field name="name">Leave Years</field>
			<field name="res_model">hr.leave.fiscal.year</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to start a new HR Leave Year.
				</p>
				<p>
					Define your company's leave year according to your needs. A
					leave year is a period at the end of which a company's
					hr leave are made up (usually 12 months). The leave year is
					usually referred to by the date in which it ends. For example,
					if a company's leave year ends November 30, 2016, then
					everything between December 1, 2010 and November 30, 2016
					would be referred to as LY 2016.
				</p>
			</field>
		</record>
			
		<menuitem action="hr_holidays.open_view_holiday_status" id="menu_hr_holidays_type" name="Leave Types" 
			parent="hr_holidays.menu_hr_holidays_configuration" sequence="5" />	
		
		<menuitem name="Leave Years" action="action_account_fiscalyear"
        	parent="hr_holidays.menu_hr_holidays_configuration" id="menu_hr_leave_fiscal_years" sequence="90"/>
        		

	</data>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="rent_agreement_action_draft" model="ir.actions.act_window">
        <field name="name">Rent Agreements</field>
        <field name="res_model">vendor.advance</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type','=','multi'), ('state', 'in', ('draft', 'cancel'))]</field>
        <field name="context">{'default_type':'multi'}</field>
        <field name="search_view_id" ref="rent_agreement.rent_agreement_search"/>
    </record>

    <record id="rent_agreement_action_draft_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="rent_agreement.rent_agreement_tree"/>
        <field name="act_window_id" ref="rent_agreement_action_draft"/>
    </record>


<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- Tree View-->
		<record id="employee_iou_tree" model="ir.ui.view">
			<field name="name">hr.employee.iou.tree</field>
			<field name="model">hr.employee.iou</field>
			<field name="arch" type="xml">
				<tree string="Employee IOU">
                    <field name="employee_id" />
					<field name="amount" />
					<field name="due" />
				</tree>
			</field>
		</record>

		<!-- Form View-->
		<record id="employee_iou_form" model="ir.ui.view">
			<field name="name">hr.employee.iou.form</field>
			<field name="model">hr.employee.iou</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Employee IOU">
					<header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
						<button string="Repay" name="%(action_employee_iou_wizard)d" states="draft" type="action" class="oe_highlight"/>

						<field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
					</header>
					<sheet>
						<group>
							<field name="employee_id" attrs="{'readonly':[('state','=','confirm')]}"/>
                            <field name="amount" attrs="{'readonly':[('state','=','confirm')]}"/>
                            <field name="due" attrs="{'readonly':[('state','=','confirm')]}"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_hr_employee_iou" model="ir.actions.act_window">
			<field name="name">Employee IOU</field>
			<field name="res_model">hr.employee.iou</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="hr_emp_iou" name="Employee IOU" parent="hr.menu_hr_root" action="action_hr_employee_iou"/>

        <menuitem id="hr_emp_iou_menu_item" name="Employee IOU" parent="hr_emp_iou" action="action_hr_employee_iou"/>

	</data>
</openerp>

<openerp>
    <data>
    
	    <!-- sale.area Tree View  -->
	    
	    <record id="sale_area_tree_view" model="ir.ui.view">
            <field name="name">Sales Area</field>
	        <field name="model">sale.area</field>
            <field name="field_parent">child_id</field>
            <field name="arch" type="xml">
                <tree toolbar="True" string="Sales Area">
                    <field name="name"/>
                </tree>
            </field>
        </record>

		<record id="sale_area_form" model="ir.ui.view">
	            <field name="name">Sale Area.form</field>
	            <field name="model">sale.area</field>
	            <field name="arch" type="xml">
	                <form string=" Sale Area" version="7.0">
	                  <label for="name" class="oe_edit_only"/>
	                  <h1><field name="name"/></h1>
	                    <group>
	                        <group>
	                        	<field name="parent_id"/>
	                            <field name="manager_id"/>
	                        </group>
	                        <group>
	                            <field name="code"/>
	                            <field name="warehouse_id"/>
	                        </group>
	                    </group>
	                </form>
	            </field>
	    </record>

	    
	    <record id="action_sale_area" model="ir.actions.act_window">
            <field name="name">Sales Area</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.area</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="view_type">tree</field>
			<field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale_area_tree_view"/>
        </record>
	    

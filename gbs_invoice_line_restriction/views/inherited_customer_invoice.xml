<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="customer_invoice_form_inherit" model="ir.ui.view">
            <field name="name">inherited.customer_invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="manual_invoice" invisible="1"/>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="before">
                    <field name="can_edit_invoice_line" invisible="1"/>
                    <field name="manual_invoice" invisible="1"/>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='uom_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='name']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_invoice_line', '=', False)]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="account.action_invoice_tree1" model="ir.actions.act_window">
            <field name="context">
                {'type':'out_invoice',
                'journal_type': 'sale',
                'no_create_edit_button':True
                }
            </field>
        </record>

        <record id="action_manual_invoice" model="ir.actions.act_window">
            <field name="name">Manual Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                    (0, 0, {'sequence': 1001, 'view_mode': 'tree', 'view_id': ref('account.invoice_tree')}),
                    (0, 0, {'sequence': 1002, 'view_mode': 'form', 'view_id': ref('account.invoice_form')}),
                ]"/>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field name="domain">[('type','=','out_invoice'),('manual_invoice','=',True)]</field>
            <field name="context">{'type':'out_invoice', 'journal_type': 'sale','default_manual_invoice':True,'create_edit_button':True}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a manual invoice.
                </p>
            </field>
        </record>


        <menuitem action="action_manual_invoice" id="menu_action_manual_invoice"
                  parent="account.menu_finance_receivables" sequence="2"/>


    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_proforma_invoice_form100" model="ir.ui.view">
            <field name="name">proforma.invoice.form100</field>
            <field name="model">proforma.invoice</field>
            <field name="inherit_id" ref="gbs_pi_creation.proforma_invoice_form_view"/>
            <field name="priority" eval="100"/>
            <field name="groups_id" eval="[(6, 0, [ref('gbs_samuda_sales_access.group_proforma_invoice_manager')])]"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
        </field>
        </record>


    </data>
</odoo>
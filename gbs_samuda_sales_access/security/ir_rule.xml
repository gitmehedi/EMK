<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rule_for_all_stock_location" model="ir.rule">
        <field name="name">Stock Location For Sales(All Access)</field>
        <field name="model_id" ref="stock.model_stock_location"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups"
               eval="[(4,ref('gbs_application_group.group_sales_product_manager')),(4,ref('sales_team.group_sale_salesman')),(4,ref('account.group_account_user'))]"/>
    </record>

    <record id="crm_rule_own_salesteam" model="ir.rule">
        <field name="name">Own Salesteam</field>
        <field ref="sales_team.model_crm_team" name="model_id"/>
        <field name="domain_force">[('member_ids', 'in', user.id)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>



    <record id="crm_rule_sale_manager" model="ir.rule">
        <field name="name">Sales Manager from allowed operating units</field>
        <field ref="sales_team.model_crm_team" name="model_id"/>
        <field name="domain_force">['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>


    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'sale'), ('name', '=', 'sale_order_line_comp_rule')]"/>
        </function>
        <value eval="{'noupdate': False}"/>
    </function>

    <record id="sale.sale_order_line_comp_rule" model="ir.rule">
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>


    <!--Name: Only admin can see admin partner-->
    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'hidden_admin'), ('name', '=', 'admin_partner_hidden')]"/>
        </function>
        <value eval="{'noupdate': False}"/>
    </function>

    <record id="hidden_admin.admin_partner_hidden" model="ir.rule">
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">[('user_ids', 'not in', [1])]</field>
    </record>


</odoo>
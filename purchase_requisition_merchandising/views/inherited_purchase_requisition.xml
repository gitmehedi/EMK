<openerp>
	<data>
		<record id="inherited_purchase_requisition_view_form_inherit_bom"
			model="ir.ui.view">
			<field name="name">Purchase Requisition Form</field>
			<field name="model">purchase.requisition</field>
			<field name="inherit_id"
				ref="purchase_requisition.view_purchase_requisition_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='user_id']"
					position="before">
					<field name="bom_id"
						options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' attrs="{'readonly': [('bom_flag1', '=', True)]}" />
					<field name="bom_flag" invisible="1" />
					<field name="bom_flag1" invisible="1" />
				</xpath>
				<xpath expr="//form/header/button[@name='sent_suppliers']"
					position="before">
					<button name="action_line_generate" type="object" string="Generate Line"
						class="oe_highlight"
						attrs="{'invisible': ['|',('bom_flag', '=', False), ('state','in',['in_progress','approved','open','done','cancel'])]}" />
					<button name="action_wizard" type="object" string="BOM Change" attrs="{'invisible': ['|',('bom_flag1', '=', False), ('state','in',['in_progress','approved','open','done','cancel'])]} "/>
				</xpath>
				<xpath expr="//form/header/button[@name='sent_suppliers']"
					position="replace">
					<button name="sent_suppliers" type="object" states="draft" string="Confirm Call" class="oe_highlight"/>
				</xpath>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bank_statement_form_reconciliation" model="ir.ui.view">
            <field name="name">account.bank.statement.reconciliation</field>
            <field name="model">account.bank.statement</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="matched_balance" string="Balance"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="state" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="journal_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="matched_manual" string="Journal Entry">
                                <field name="matched_manual_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="sequence" invisible="1"/>
                                        <field name="name"/>
                                        <field name="account_id" string="Account"/>
                                        <field name="partner_id" optional="show" string="Partner"/>
                                        <field name="cost_center_id"/>
                                        <field name="department_id"/>
                                        <field name="operating_unit_id"/>
                                        <field name="analytic_account_id" optional="show"
                                               groups="analytic.group_analytic_accounting"/>
                                        <field name="analytic_tag_ids" optional="show" widget="many2many_tags"
                                               invisible="1"
                                        />
                                        <field name="balance" invisible="1"/>

                                        <field name="product_id" optional="hide" invisible="1"/>

                                        <field name="tax_ids" context="{'append_type_to_tax_name': True}"
                                               widget="many2many_tags" optional="show" options="{'no_create' : 1}"
                                               invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="auto_tax_line" invisible="1"/>
                                        <field name="tax_tag_ids" invisible="1"/>
                                        <field name="tax_repartition_line_id" invisible="1"/>
                                        <field name="tax_line_id" invisible="1"/>

                                    </tree>
                                    <form>
                                        <field name="name"/>
                                        <field name="account_id"/>
                                        <field name="balance"/>
                                        <field name="partner_id"/>
                                        <field name="product_id"/>
                                        <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                                        <field name="tax_ids" widget="many2many_tags"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="tax_repartition_line_id" invisible="1"/>
                                        <field name="auto_tax_line" invisible="1"/>
                                    </form>
                                </field>
                            </page>
                            <page name="matched_invoices" string="Existing Entry Matching">
                                <field name="matched_move_line_ids" nolabel="1"
                                       context="{'tree_view_ref' : 'gbs_petty_cash.view_move_line_tree_custom'}"
                                       domain="[('amount_residual','=', matched_balance),('reconciled','=', False), ('payment_id','=', False),('amount_residual','!=', 0), ('account_id.internal_type','!=', 'liquidity')]"/>

                            </page>

                        </notebook>
                        <footer>
                            <button name="action_reconcile_stmt" type="object" class="oe_highlight" string="Reconcile"/>
                            <button special="cancel" string="Cancel" class="btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>
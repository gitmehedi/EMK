<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="view_move_line_tree_custom" model="ir.ui.view">
		<field name="name">account.move.line.tree.reconciliation</field>
		<field name="model">account.move.line</field>
		<field name="priority">100</field>
		<field name="arch" type="xml">
			<tree>
				<field name="account_id" options="{'no_open': True}"/>
				<field name="statement_id" invisible="1" />
				<field name="ref" optional="show" />
				<field name="name" optional="show" />
				<field name="amount_residual" optional="show" readonly="1"/>
			</tree>
		</field>
	</record>


</odoo>
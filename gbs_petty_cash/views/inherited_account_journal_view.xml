<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_journal_form_inherit" model="ir.ui.view">
            <field name="name">inherited.account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="petty_cash_journal"/>
                </xpath>
            </field>
        </record>
        <record id="account_journal_form_inherit_op" model="ir.ui.view">
            <field name="name">inherited.account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account_operating_unit.view_account_journal_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="attrs">{'required': [('petty_cash_journal', '!=', False)]}</attribute>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
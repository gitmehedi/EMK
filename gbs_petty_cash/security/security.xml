<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="group_petty_cash_user" model="res.groups">
            <field name="name">Petty Cash User</field>
            <field name="category_id" ref="gbs_application_group.module_category_sale"/>
        </record>
        <record id="group_petty_cash_manager" model="res.groups">
            <field name="name">Petty Cash Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_petty_cash_user'))]"/>
            <field name="category_id" ref="gbs_application_group.module_category_sale"/>
            <field name="sequence">20</field>
        </record>
        <record id="ir_rule_account_journal_allowed_operating_units" model="ir.rule">
            <field name="model_id" ref="account.model_account_journal"/>
            <field name="domain_force">['|', ('operating_unit_id', '=', False),
                ('operating_unit_id', 'in', [g.id for g in user.operating_unit_ids]),('company_id','in',[g.id for g in
                user.company_ids])]
            </field>
            <field name="name">Journal from allowed operating units</field>
            <field name="groups" eval="[(4,ref('gbs_petty_cash.group_petty_cash_user'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>


    </data>
</odoo>
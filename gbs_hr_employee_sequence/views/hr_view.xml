<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        
        
        <!-- Employee Records -->
        
        <record id="hr_employee_view_tree" model="ir.ui.view">
            <field name="name">hr.employee.sequence.tree</field>
            <field name="model">hr.employee.sequence</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='work_phone']" position="before">
                        <field name="employee_sequence"/>
                    </xpath>
                </data>
            </field>
        </record>
        
        <record id="hr_employee_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.seniority</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" groups="hr.group_hr_user"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='active_group']" position="after">
                        <group >
                            <field name="employee_sequence"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
        
    </data>
</openerp>

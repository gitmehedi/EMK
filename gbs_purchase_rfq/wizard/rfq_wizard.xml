<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="rfq_wizard_form" model="ir.ui.view">
            <field name="name">rfq.wizard.form</field>
            <field name="model">rfq.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Please Select Products For RFQ" create="false" edit="false">
                    <group>
                        <field name="pr_ids" string="Select PR" domain="[('state','not in',('draft','cancel'))]" widget="many2many_tags" options="{'no_create': True,'no_open':True}"/>
                        <field name="operating_unit_id" invisible="1"/>
                    </group>
                    <field name="product_lines" widget="one2many">
                        <tree string="Product Lines" editable="bottom">
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom_id" readonly='1'/>
                            <field name="price_unit" invisible="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button string="Save" name="action_save_rfq" type="object" class="oe_highlight"/>
                        <button string="Print" name="print_rfq" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
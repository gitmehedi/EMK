<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="inherit_rfq_purchase_order_form" model="ir.ui.view">
            <field name="name">inherit.rfq.purchase.order.view.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='currency_id']" position="after">
                        <field name="rfq_id"/>
                    </xpath>
                </data>
            </field>
        </record>
        <record model="ir.ui.view" id="inherit_rfq_purchase_order_form1">
            <field name="name">inherit.rfq.purchase.order.view.form1</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="gbs_purchase_order.purchase_req_order_form_inherit"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='requisition_id']" position="attributes">
                        <attribute name="attrs">{'readonly': ['|',('state', 'in', ['purchase','done']),('rfq_id', '!=', False)]}</attribute>
                    </xpath>
                </data>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_rfq_to_quotation">
            <field name="name">Request for Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="domain">[('rfq_id','=',active_id)]</field>
            <field name="context">{"default_rfq_id":active_id}</field>
        </record>

        <record model="ir.actions.act_window" id="action_rfq_to_quotation_list">
            <field name="name">Request for Quotations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('rfq_id','=',active_id)]</field>
            <field name="context">{"default_rfq_id":active_id}</field>
        </record>
    </data>
</odoo>


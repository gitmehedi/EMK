<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="inherit_pr_view_form1" model="ir.ui.view">
            <field name="name">inherit.pr.view.form1</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="gbs_purchase_requisition.inherit_pr_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='action_cancel']" position="after">
                        <button name="action_send_rfq" string="Send RFQ by Email" type="object" class="oe_highlight"/>
                    </xpath>
                </data>
            </field>
        </record>

        <!--Action To SET the Multi PR RFQ-->
        <act_window name="Send RFQ"
                    res_model="rfq.wizard"
                    src_model="purchase.requisition"
                    key2="client_action_multi"
                    view_mode="form" target="new"
                    view_type="form"
                    id="act_send_rfq"/>
    </data>
</odoo>
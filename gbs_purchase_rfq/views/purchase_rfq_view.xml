<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- RFQ Tree View -->
        <record id='view_purchase_rfq_tree' model='ir.ui.view'>
            <field name="name">purchase.rfq.tree</field>
            <field name="model">purchase.rfq</field>
            <field name="arch" type="xml">
                <tree string="RFQ">
                    <field name="name" />
                    <field name="operating_unit_id" />
                    <field name="rfq_date" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>
        <!-- RFQ Form View -->
        <record id='view_purchase_rfq_form' model='ir.ui.view'>
            <field name="name">purchase.rfq.form</field>
            <field name="model">purchase.rfq</field>
            <field name="arch" type="xml">
                <form string="RFQ">
                    <header>
                        <button name="confirm_for_mail" string="Send RFQ by Email" type="object" class="oe_highlight"/>
                        <button name="%(action_rfq_to_quotation)d" type="action"
                                string="New Quotation"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_rfq_to_quotation_list)d" type="action" class="oe_stat_button" icon="fa-list-alt">
                                <field name="order_count" widget="statinfo" string="Quotations"/>
                            </button>
                        </div>
                        <group>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only"/>
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="pr_ids" widget="many2many_tags"/>
                                <field name="rfq_date"/>
                            </group>
                            <group>
                                <field name="operating_unit_id"/>
                                <field name="company_id"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Products">
                                <field name="purchase_rfq_lines">
                                    <tree string="Products" editable="bottom">
                                        <field name="product_id" options="{'no_create': True,'no_open':True}"/>
                                        <field name="product_uom_id" readonly="1" string="UOM"/>
                                        <field name="product_qty" sum="Total Qty"/>
                                        <field name="po_receive_qty" invisible="1"/>
                                        <field name="due_qty" sum="Total Qty"/>
                                        <field name="price_unit" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <!--Search View-->
        <record id="search_purchase_rfq" model="ir.ui.view">
            <field name="name">purchase.rfq.search</field>
            <field name="model">purchase.rfq</field>
            <field name="arch" type="xml">
                <search string="RFQ">
                    <field name="name"/>
                </search>
            </field>
        </record>
        <!-- RFQ Window Action -->
        <record id='action_purchase_rfq' model='ir.actions.act_window'>
            <field name="name">RFQ</field>
            <field name="res_model">purchase.rfq</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new RFQ.
                </p>
            </field>
        </record>

        <!-- RFQ Menu -->
        <menuitem action="action_purchase_rfq" name="RFQ"
                  parent="purchase.menu_procurement_management"
                  id="menu_purchase_rfq" sequence="10"
                  groups="base.group_system"/>
    </data>
</odoo>
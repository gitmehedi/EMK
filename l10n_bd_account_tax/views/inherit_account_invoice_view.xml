<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="inherit_invoice_supplier_form" model="ir.ui.view">
            <field name="name">inherit.account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='invoice_line_tax_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='invoice_line_tax_ids']" position="after">
                    <field name="vat_id" domain="[('is_vat', '=', True)]" options="{'no_create': True, 'no_open': True}"/>
                    <field name="tds_id" domain="[('is_tds', '=', True)]" options="{'no_create': True, 'no_open': True}"/>
                </xpath>
<!--                <xpath expr="//field[@name='tax_line_ids']/tree/field[@name='amount']" position="after">-->
<!--                    <field name="amount"/>-->
<!--                    <field name="abs_amount"/>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='residual']" position="before">
                    <field name="amount_tds" widget="monetary"/>
                    <field name="amount_vat_payable" widget="monetary"/>
                </xpath>

                <field name="reference" position="after">
                    <field name="vat_selection"/>
                </field>
<!--                <field name="amount_tax" position="after">-->
<!--                    <field name="amount_tds" widget="monetary"/>-->
<!--                    <field name="amount_vat_payable" widget="monetary"/>-->
<!--                </field>-->
<!--                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="after">-->
<!--                    <field name="amount_vat_payable" invisible="1"/>-->
<!--                </xpath>-->
            </field>
        </record>

        <record id="view_inherit_invoice_line_form" model="ir.ui.view">
            <field name="name">inherit.invoice.line.form</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="price_subtotal" string="Sub Total"/>
                    <field name="price_tax" string="VAT"/>
                    <field name="price_tds" string="TDS"/>
                    <field name="price_total"/>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_move_form" model="ir.ui.view">
            <field name="name">inherit.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                    <attribute name="default_order">id asc</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="daily_delivery_date_wizard_view" model="ir.ui.view">
            <field name="name">daily.delivery.report.wizard</field>
            <field name="model">daily.delivery.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="report_of_day" placeholder="Select a Day..."/>
                        </group>
                    </sheet>

                    <footer>
                        <button name="process_delivery_report" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_daily_delivery_report" model="ir.actions.act_window">
            <field name="name">Daily Delivered &amp; Undelivered Report of Products</field>
            <field name="res_model">daily.delivery.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="daily_delivery_date_wizard_view"/>
            <field name="target">new</field>
        </record>


        <menuitem name="Daily Delivery Report"
                  action="action_daily_delivery_report"
                  id="daily_delivery_report_id"
                  parent="sales_team.menu_sale_report" sequence="20"/>

    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <report
                id="action_report_monthly_delivery_products"
                string="Monthly Delivery Report"
                model="stock.move"
                report_type="qweb-pdf"
                file="delivery_qty_reports.report_monthly_delivery_products"
                name="delivery_qty_reports.report_monthly_delivery_products"
                menu="False"
        />


        <template id="report_monthly_delivery_products">
            <t t-call="report.html_container">
                <t t-call="custom_report.gbs_internal_layout">
                    <div class="page">
                        <div class="row mb32">
                            <div class="col-xs-12">
                                <h2 class="text-center">Monthly Delivery Report</h2>
                            </div>
                            <hr></hr>
                        </div>

                        <div class="row">
                            <h6>Month:
                                <span t-esc="report_month"/>
                            </h6>
                            <h6>Product Name: <span t-esc="product_name"/>

                            </h6>
                            <table class="table table-report-sm table-bordered table-striped">
                                <thead>
                                    <tr
                                            style="background-color:#B4FDF0;
												border-bottom: 1px solid #030303;">
                                        <th>SL</th>
                                        <th>Date</th>
                                        <th>Party Name</th>
                                        <th>D.O No.</th>
                                        <th>D.O Date</th>
                                        <th>Qty (Kg)</th>
                                        <th>Qty (MT)</th>
                                        <th>Qty (Bag)</th>
                                        <th>D.O Challan ID</th>
                                        <th>Category</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    <t t-foreach="do_list" t-as="k">

                                        <tr>
                                             <td>
                                                <span t-esc="k_index+1"/>
                                            </td>

                                            <td>
                                                <span t-esc="k['create_date']"/>
                                            </td>
                                            <td>
                                                <span t-esc="k['partner_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="k['do_no']"/>
                                            </td>
                                             <td>
                                                <span t-esc="k['do_date']"/>
                                            </td>
                                             <td>
                                                <span t-esc="k['do_qty_kg']"/>
                                            </td>
                                            <td>
                                                <span t-esc="k['do_qty_mt']"/>
                                            </td>
                                            <td>
                                                <span t-esc="k['do_qty_bag']"/>
                                            </td>
                                            <td>
                                                <span t-esc="k['challan_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="k['category']"/>
                                            </td>

                                        </tr>

                                    </t>

                                    <tr style="background-color:#ebebe0;
												border-bottom: 1px solid #030303;">
                                        <td>
                                            <b>Total</b>
                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td></td>

                                        <td class="text-right">
                                            <b>
                                                <span t-esc="issued_do_sum_list"/>
                                            </b>
                                        </td>
                                        <td class="text-right">
                                            <b>
                                                <span t-esc="qty_kg_sum"/>
                                            </b>
                                        </td>
                                        <td class="text-right">
                                            <b>
                                                <span t-esc="qty_mt_sum"/>
                                            </b>
                                        </td>
                                        <td></td><td></td><td></td>
                                    </tr>

                                </tbody>
                            </table>
                             <t t-call="custom_report.report_signing"></t>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <report
                id="action_report_daily_delivery_products"
                string="Daily Delivery Summary Report"
                model="stock.picking"
                report_type="qweb-pdf"
                file="delivery_qty_reports.report_daily_delivery_products"
                name="delivery_qty_reports.report_daily_delivery_products"
                paperformat="report_layout.paperformat_backend_landscape"
                menu="False"/>


        <template id="report_daily_delivery_products">
            <t t-call="report.html_container">
                <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside:auto">
                        <div class="row">
                            <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h3 class="report-title">Daily Delivered &amp; Undelivered Report</h3>
                                <div class="row">
                                    <div class="col-xs-12 text-left">
                                        <h6><b>Date: </b><span t-esc="report_of_day"/></h6>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-bordered table-report-xs table-striped"
                                   style="margin-bottom: 10px;">
                                    <thead>
                                        <tr class="odo-bg-gray">
                                        <th>Customer</th>
                                        <th>D.O No.</th>
                                        <th>D.O Date</th>
                                        <th>UoM</th>
                                        <th>D.O Qty.</th>
                                        <th>Issued D.O</th>
                                        <th>Delivered Qty.</th>
                                        <th>Undelivered Qty</th>
                                        <th>Category</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-foreach="do_list" t-as="rec">
                                        <tr>
                                            <td colspan="10" style="background-color: #b2beb5;">
                                                <span t-esc="rec_value['name']"/>
                                            </td>
                                        </tr>

                                        <t t-foreach="rec_value['details']" t-as="k">
                                            <tr>
                                                <td>
                                                    <span t-esc="k['partner_id']"/>
                                                </td>
                                                <td style="text-align: center;">
                                                    <span t-esc="k['do_no']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="k['do_date']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="k['uom']"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'%.2f'%k['do_qty']"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="k['issued_do_today']"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'%.2f'%k['delivered_qty']"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'%.2f'%k['un_delivered_qty']"/>
                                                </td>
                                                <td style="text-align: center;">
                                                    <span t-esc="k['product']"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr style="background-color:#ebebe0;
												border-bottom: 1px solid #030303;">
                                            <td colspan="4">
                                                <b>Total</b>
                                            </td>
                                            <t t-foreach="rec_value['total']" t-as="total">
                                                <td class="text-right">
                                                    <span t-esc="'%.2f'%total_value"/>

                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <t t-call="report_layout.report_signing"></t>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>

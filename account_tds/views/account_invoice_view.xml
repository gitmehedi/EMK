<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_supplier_tds_form" model="ir.ui.view">
        <field name="name">account.invoice.tds.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="reference" position="after">
                <field name="is_tds_applicable"/>
                <field name="inapplicable_type"
                       attrs="{'invisible':[('is_tds_applicable','=',True)],'required': [('is_tds_applicable', '=', False)]}"/>
            </field>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="account_tds_id" invisible="1"/>
                <field name="tds_amount" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='residual']" position="after">
                <field name="total_tds_amount" class="oe_subtotal_footer_separator"
                       attrs="{'invisible': [('is_tds_applicable', '=', False)]}" widget="monetary"/>
            </xpath>
        </field>
    </record>

    <record id="inherited_invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.inherit.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_analytic_id']"
                   position="attributes">
                <attribute name="string">Cost Center</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>


</odoo>


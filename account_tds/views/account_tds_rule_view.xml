<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_tds_rule_form" model="ir.ui.view">
            <field name="name">tds.rule.form</field>
            <field name="model">tds.rule</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="TDS Rule">
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Name"/>
                            <h1><field name="name" placeholder="Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="current_version"/>
                            </group>
                            <group>
                                <field name="account_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Version Details">
                                <field name="version_ids" ref= "view_tds_rule_version_form">
                                    <tree string="List">
                                        <field name="name"/>
                                        <field name="effective_from"/>
                                        <field name="effective_end"/>
                                        <field name="type_rate"/>
                                        <field name="flat_rate"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
                </form>
            </field>
        </record>

        <record id="view_tds_rule_tree" model="ir.ui.view">
            <field name="name">tds.rule.tree</field>
            <field name="model">tds.rule</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="TDS Rule">
                    <field name="name"/>
                    <field name="current_version"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_tds_rule">
            <field name="name">TDS Rule</field>
            <field name="res_model">tds.rule</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new TDS Rule
                </p>
            </field>
        </record>

        <menuitem id="perent_menu_tds_rule" name="Account TDS" parent="account.account_account_menu"
                  sequence="11"/>
        <menuitem
                action="action_tds_rule"
                id="menu_tds_rule"
                parent="perent_menu_tds_rule"
                sequence="1"
                name="TDS Rule"
        />

        <record id="view_tds_rule_version_form" model="ir.ui.view">
            <field name="name">tds.rule.version.form</field>
            <field name="model">tds.rule.version</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="TDS Version">
                    <sheet>
                        <div class="oe_title">
                            <lebel class="oe_edit_only" for="name" string="Name"/>
                            <h1><field name="name" placeholder="Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="effective_from"/>
                                <field name="type_rate"/>
                                <field name="flat_rate"
                                       attrs="{'invisible':[('type_rate', '!=', 'flat')]}"/> %
                            </group>
                            <group>
                                <field name="effective_end"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook colspan="4" attrs="{'invisible':[('type_rate', '!=', 'slab')]}">
                            <page string="Slab Details">
                                <field name="rule_line_ids">
                                    <tree string="List" editable="bottom">
                                        <field name="range_from"/>
                                        <field name="range_to"/>
                                        <field name="rate"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
                </form>
            </field>
        </record>
        <!--&lt;!&ndash; Sequence Records &ndash;&gt;-->
        <!--<record id="seq_loan_request" model="ir.sequence">-->
            <!--<field name="name">Version</field>-->
            <!--<field name="code">emp_code_id</field>-->
            <!--<field name="prefix">V00</field>-->
            <!--<field name="padding">10</field>-->
        <!--</record>-->

    </data>
</odoo>
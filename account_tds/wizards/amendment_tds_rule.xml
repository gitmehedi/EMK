<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_tds_rule_form_wizard" model="ir.ui.view">
            <field name="name">tds.rule.wizard.form</field>
            <field name="model">tds.rule.wizard</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="TDS Rule">
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="effective_from"/>
                                <field name="type_rate"/>
                                <label for="flat_rate" attrs="{'invisible':[('type_rate', '!=', 'flat')]}"/>
                                <div attrs="{'invisible':[('type_rate', '!=', 'flat')]}">
                                    <field name="flat_rate" class="oe_inline"
                                           attrs="{'required':[('type_rate', '=','flat')]}"/>
                                    <label string="%" class="oe_inline"/>
                                </div>
                                <field name="price_include"
                                       attrs="{'invisible':['|',('type_rate', '!=', 'flat'),
                                       ('price_exclude', '!=', False)]}"/>
                                <field name="price_exclude"
                                       attrs="{'invisible':['|',('type_rate', '!=', 'flat'),
                                       ('price_include', '!=', False)]}"/>
                            </group>
                            <group>
                                <field name="account_id" domain="[('internal_type','=','other')]"
                                       options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                            </group>
                        </group>
                        <notebook colspan="4" attrs="{'invisible':[('type_rate', '!=', 'slab')]}">
                            <page string="Slab Details">
                                <field name="line_ids">
                                    <tree string="List" editable="bottom">
                                        <field name="range_from" placeholder="Enter Numeric Number" required="1"/>
                                        <field name="range_to"  placeholder="Enter Numeric Number" required="1"/>
                                        <field name="rate" required="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Generate" name="generate_rule" type="object"
                                confirm="Are you sure you want to confirm?" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="tds_rule_wizard_action_view" model="ir.actions.act_window">
            <field name="name">TDS Rule</field>
            <field name="res_model">tds.rule.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
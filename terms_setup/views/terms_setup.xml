<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="terms_setup_form_view" model="ir.ui.view">
        <field name="name">terms.setup.form.view</field>
        <field name="model">terms.setup</field>
        <field name="arch" type="xml">
            <form string="Terms Setup">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="days"/>
                        <field name="terms_condition" widget="html" options="{'style-inline': true}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="terms_setup_tree_view" model="ir.ui.view">
        <field name="name">terms.setup.tree.view</field>
        <field name="model">terms.setup</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Terms Setup">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="terms_setup_action" model="ir.actions.act_window">
        <field name="name">Terms Setup</field>
        <field name="res_model">terms.setup</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--<menuitem id="terms_setup_menu" parent="sales_team.menu_sale_config"-->
              <!--action="terms_setup_action" sequence="25"/>-->
</odoo>
<?xml version="1.0"?>
<odoo>
    <data>
        <record id="ir_cron_inherited_view_form" model="ir.ui.view">
            <field name="name">ir.cron.inherit.form</field>
            <field name="model">ir.cron</field>
            <field name="inherit_id" ref="base.ir_cron_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='function']" position="after">
                    <field name="is_success_notification"/>
                    <field name="is_failure_notification"/>
                </xpath>

                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
                </xpath>

                <!--<xpath expr="//button" position="after">-->
                    <!--<button name="mail_reminder" type="object" string="Test Email" class="oe_highlight"/>-->
                <!--</xpath>-->
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="cron_job_success_notification" model="mail.template">
            <field name="name">Cron Job Success Notification</field>
            <field name="subject">${object.name} have successfully executed!!!</field>
            <field name="model_id" ref="base.model_ir_cron"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
	      <p>Dear Concern,</p>
	      <p>Your cron job ${object.name} have successfully execyted</p>
	      <p>The next schedule is at ${object.nextcall}</p>
	    ]]>
            </field>
            <field name="user_signature" eval="False"/>
        </record>

        <record id="cron_job_failure_notification" model="mail.template">
            <field name="name">Cron Job Failure Notification</field>
            <field name="subject">${object.name} have falied to execute!!!</field>
            <field name="model_id" ref="base.model_ir_cron"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
	      <p>Dear Concern,</p>
	      <p>Your cron job scheduled at ${object.name} have failed to execute</p>
	      <p>The next schedule is at ${object.nextcall}</p>
	    ]]>
            </field>
            <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>


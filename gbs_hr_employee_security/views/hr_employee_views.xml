<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <act_window name="Set Approver Level Chain"
                res_model="emp.sub.action.wizard"
                src_model="hr.employee"
                key2="client_action_multi"
                view_mode="form" target="new"
                view_type="form"
                id="act_custome_approver_level_chain" />

        <record id="hr_employee_view_form" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="replace">
                    <field name="department_id" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="replace">
                    <field name="job_id" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="parent_id" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='coach_id']" position="replace">
                    <field name="coach_id" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='calendar_id']" position="replace">
                    <field name="calendar_id" readonly="1"/>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="view_employee_form_invisible">
            <field name="name">view.employee.form.invisible</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('hr.group_hr_user') ])]" />
            <field name="arch" type="xml">
                <field name="department_id" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="job_id" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="parent_id" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="coach_id" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="calendar_id" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
            </field>
        </record>
    </data>

</odoo>
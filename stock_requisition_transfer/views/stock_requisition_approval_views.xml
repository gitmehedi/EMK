<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="stock_requisition_approval_form_view" model="ir.ui.view">
            <field name="name">Stock Requisition Approval Form View</field>
            <field name="model">stock.requisition.transfer</field>
            <field name="arch" type="xml">
                <form string="Stock Requisition Transfer Form">
                    <header>
                        <button name="action_approve" type="object" states="submit"
                                string="Approve" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="to_shop_id" readonly="1" string="My Shop"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="requested_id" readonly="1" string="From Shop"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <field name="product_line_ids">
                            <tree string="Products" editable="top">
                                <field name="product_id" readonly="1"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="store_qty" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="stock_requisition_approval_tree_view" model="ir.ui.view">
            <field name="name">Stock Requisition Approval Tree View</field>
            <field name="model">stock.requisition.transfer</field>
            <field name="arch" type="xml">
                <tree string="Stock Requisition Transfer Tree" decoration-info="state=='draft'"
                      decoration-success="state=='approve'" decoration-danger="state=='confirm'"
                      decoration-muted="state in ('reject')">
                    <field name="to_shop_id"/>
                    <field name="requested_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_requisition_approval_search_view" model="ir.ui.view">
            <field name="name">Stock Requisition Approval Search View</field>
            <field name="model">stock.requisition.transfer</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Stock Requisition Transfer Search">
                    <field name="to_shop_id"/>
                    <field name="requested_id"/>
                </search>
            </field>
        </record>

        <record id="stock_requisition_approval_action" model="ir.actions.act_window">
            <field name="name">Stock Requisition Approval</field>
            <field name="res_model">stock.requisition.transfer</field>
            <field name="domain">[('state','in',('approve','transfer','receive','reject'))]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="stock_requisition_approval_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_requisition_transfer_tree_view"/>
            <field name="act_window_id" ref="stock_requisition_approval_action"/>
        </record>

        <record id="stock_requisition_approval_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_requisition_transfer_form_view"/>
            <field name="act_window_id" ref="stock_requisition_approval_action"/>
        </record>

        <menuitem id="stock_requisition_approval_menu" name="Requisition Approval"
                  sequence="10" action="stock_requisition_approval_action" parent="menu_stock_transfer_root"
                groups="stock_transfer_request.group_stock_transfer_approval_manager"/>
    </data>
</openerp>

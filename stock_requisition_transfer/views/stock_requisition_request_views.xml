<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="stock_requisition_form_view" model="ir.ui.view">
            <field name="name">Stock Requisition Form View</field>
            <field name="model">stock.requisition.transfer</field>
            <field name="arch" type="xml">
                <form string="Stock Requisition Form">
                    <header>
                        <button name="action_draft" type="object" states="submit"
                                string="Draft" class="oe_highlight"/>
                        <button name="action_submit" type="object" states="draft"
                                string="Submit" class="oe_highlight"/>
                        <button name="action_receive" type="object" states="transfer"
                                string="Receive" class="oe_highlight"/>
                        <button name="action_reject" type="object" states="transfer"
                                string="Reject" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="barcode" class="oe_edit_only" string="Add Product Using Barcode"/>
                            <h1>
                                <field name="barcode"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="to_shop_id" string="To Shop"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="requested_id" string="My Shop"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <field name="product_line_ids">
                            <tree string="Products" editable="top">
                                <field name="product_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="store_qty"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="stock_requisition_tree_view" model="ir.ui.view">
            <field name="name">Stock Requisition Tree View</field>
            <field name="model">stock.requisition.transfer</field>
            <field name="arch" type="xml">
                <tree string="Stock Requisition Tree" decoration-info="state=='draft'"
                      decoration-success="state=='approve'" decoration-danger="state=='confirm'"
                      decoration-muted="state in ('reject')">
                    <field name="to_shop_id"/>
                    <field name="requested_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_requisition_search_view" model="ir.ui.view">
            <field name="name">Stock Requisition Search View</field>
            <field name="model">stock.requisition.transfer</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Stock Requisition Search">
                    <field name="to_shop_id"/>
                    <field name="requested_id"/>
                </search>
            </field>
        </record>

        <record id="stock_requisition_action" model="ir.actions.act_window">
            <field name="name">Stock Requisition</field>
            <field name="res_model">stock.requisition.transfer</field>
            <field name="domain">[('state','in',('draft','transfer','receive','reject'))]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="stock_requisition_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_requisition_tree_view"/>
            <field name="act_window_id" ref="stock_requisition_action"/>
        </record>

        <record id="stock_requisition_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_requisition_form_view"/>
            <field name="act_window_id" ref="stock_requisition_action"/>
        </record>

        <menuitem id="stock_requisition_menu" name="Requisition"
                  sequence="5" action="stock_requisition_action" parent="menu_stock_transfer_root"
                groups="pebbles_transfer_user.group_requisition_transfer_user"/>
    </data>
</openerp>

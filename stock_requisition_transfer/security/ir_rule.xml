<?xml version="1.0"?>
<openerp>
    <data>

        <record id="stock_requisition_transfer_rule_for_shop_manager" model="ir.rule">
            <field name="name">Shop Manager Requisition Transfer </field>
            <field name="model_id" ref="model_stock_requisition_transfer"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('requested_id','in', [rec.id for rec in
                user.operating_unit_ids]),('to_shop_id','in', [rec.id for rec in user.operating_unit_ids])]
            </field>
            <!--<field name="groups" eval="[(4,ref('base.group_hr_user'))]"/>-->

        </record>

        <record id="stock_requisition_transfer_line_rule_for_shop_manager" model="ir.rule">
            <field name="name">Shop Manager Requisition Transfer Line</field>
            <field name="model_id" ref="model_stock_requisition_transfer_line"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

    </data>
</openerp>

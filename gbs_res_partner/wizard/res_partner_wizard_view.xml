<?xml version="1.0"?>
<odoo>
    <record id="view_res_partner_wizard" model="ir.ui.view">
        <field name="name">res.partner.wizard</field>
        <field name="model">res.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="Proposed">
                <group>
                    <group>
                        <field name="name"/>
                        <label for="street" string="Address"/>
                        <div class="o_address_format">
                            <field name="street" placeholder="Street..." class="o_address_street"/>
                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="city" placeholder="City" class="o_address_city"/>
                            <field name="state_id" class="o_address_state" placeholder="State"
                                   options='{"no_open": True}'
                                   context="{'country_id': country_id, 'zip': zip}"/>
                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                            <field name="country_id" placeholder="Country" class="o_address_country"
                                   options='{"no_open": True, "no_create": True}'/>
                        </div>

                    </group>
                    <group>
                        <field name="status"/>
                        <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                        <field name="phone" widget="phone"/>
                        <field name="mobile" widget="phone"/>
                        <field name="email"/>
                    </group>
                    <group string="Bank Accounts">
                        <field name="bank_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="act_change_name" string="Change Request" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_res_partner_wizard" model="ir.actions.act_window">
        <field name="name">Request for Name Change</field>
        <field name="res_model">res.partner.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_partner_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
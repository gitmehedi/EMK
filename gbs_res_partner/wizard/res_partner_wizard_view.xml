<?xml version="1.0"?>
<odoo>
    <record id="view_res_partner_wizard" model="ir.ui.view">
        <field name="name">res.partner.wizard</field>
        <field name="model">res.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="Proposed">
                <group>
                    <group>
                        <div class="oe_title">
                            <field name="company_type" widget="radio" class="oe_edit_only"
                                   options="{'horizontal': true}"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                            <div class="o_row">
                                <field name="parent_id" placeholder="Company" domain="[('is_company', '=', True),('state', '=', 'approve')]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                       attrs="{'invisible': [('company_type', '=', 'company')]}"/>
                                <field name="entity_services" placeholder="Services..." widget="many2many_tags"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            </div>
                        </div>
                        <label for="street" string="Address"/>
                        <div class="o_address_format">
                            <field name="street" placeholder="Street..." class="o_address_street"/>
                            <field name="street2" placeholder="etc..." class="o_address_street" widget="text"/>
                            <field name="country_id" placeholder="Country" class="o_address_country"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            <field name="division_id" placeholder="Division"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            <field name="district_id" placeholder="Ditricts"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            <field name="upazila_id" placeholder="Upazila/Thana"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            <field name="postal_code" placeholder="Postal Code"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                        </div>
                    </group>
                    <group>
                        <field name="status"/>
                        <field name="contact_person"/>
                        <field name="designation_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="phone" widget="phone"/>
                        <field name="mobile" widget="phone"/>
                        <field name="fax"/>
                        <field name="email"/>
                        <field name="tax"/>
                        <field name="vat"/>
                        <field name="bin"/>
                        <field name="tin"/>
                        <field name="nid"/>
                    </group>
                </group>
                <notebook>
                    <page string="Accounting">
                        <group>
                            <group>
                                <field name="property_account_receivable_id"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="property_account_payable_id"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="vendor_bank_acc"/>
                            </group>
                            <group></group>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button name="act_change_name" string="Change Request" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_res_partner_wizard" model="ir.actions.act_window">
        <field name="name">Proposed Information</field>
        <field name="res_model">res.partner.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_partner_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
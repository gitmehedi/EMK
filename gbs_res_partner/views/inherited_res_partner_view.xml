<?xml version="1.0"?>
<odoo>
    <record id="inherited_partner_property_form" model="ir.ui.view">
        <field name="name">inherited.partner.property.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="priority" eval="31"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_account_receivable_id']" position="replace">
                <field name="property_account_receivable_id" attrs="{'required': [('customer', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='property_account_payable_id']" position="replace">
                <field name="property_account_payable_id" attrs="{'required': [('supplier', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
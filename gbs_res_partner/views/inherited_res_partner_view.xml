<?xml version="1.0"?>
<odoo>
    <record id="inherited_partner_property_form" model="ir.ui.view">
        <field name="name">inherited.partner.property.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="priority" eval="31"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_account_receivable_id']" position="replace">
                <field name="property_account_receivable_id" attrs="{'required': [('customer', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='property_account_payable_id']" position="replace">
                <field name="property_account_payable_id" attrs="{'required': ['|', ('supplier', '=', True), ('is_cnf', '=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lang']" position="after">
                <field name="tax"/>
                <field name="vat"/>
                <field name="bin"/>
                <field name="tin"/>
            </xpath>
        </field>
    </record>
</odoo>
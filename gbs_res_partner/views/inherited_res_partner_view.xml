<?xml version="1.0"?>
<odoo>
    <record id="inherited_partner_property_form" model="ir.ui.view">
        <field name="name">inherited.partner.property.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="priority" eval="31"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_account_receivable_id']" position="replace">
                <field name="property_account_receivable_id" attrs="{'required': [('customer', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='property_account_payable_id']" position="replace">
                <field name="property_account_payable_id" attrs="{'required': ['|', ('supplier', '=', True), ('is_cnf', '=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lang']" position="after">
                <field name="tax"/>
                <field name="vat"/>
                <field name="bin"/>
                <field name="tin"/>
            </xpath>

            <xpath expr="//button[@name='toggle_active']" position="attributes">
                <attribute name="groups">gbs_application_group.group_sales_vendor_manager,gbs_application_group.group_sales_customer_manager</attribute>
            </xpath>

            <xpath expr="//field[@name='website']" position="after">
                <field name="customer_type"/>
            </xpath>

        </field>
    </record>

    <record id="base.action_partner_form" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('customer','=',True)]</field>
        <field name="context">{'default_customer':1, 'default_supplier':0, 'no_create_edit_button_customer': True}</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
    </record>

    <record id="base.action_partner_supplier_form" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="domain">[('supplier','=',True)]</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_customer':0, 'default_supplier':1, 'no_create_edit_button': True, }</field>
        <field name="filter" eval="True"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
            </p>
            <p>
                Odoo helps you easily track all activities related to
                a supplier: discussions, history of purchases,
                documents, etc.
            </p>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_cost_history_form" model="ir.ui.view">
            <field name="name">product.cost.history.form</field>
            <field name="model">product.cost.price.history</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product Purchase History">
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="uom_id"/>
                            <field name="product_tmpl_id"/>
                        </group>
                        <group>
                            <field name="current_price"/>
                            <field name="old_price"/>
                            <field name="modified_datetime"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_cost_history_tree" model="ir.ui.view">
            <field name="name">product.cost.history.tree</field>
            <field name="model">product.cost.price.history</field>
            <field name="arch" type="xml">
                <tree string="Product Purchase History" create="false" edit="false">
                    <field name="product_id"/>
                    <field name="uom_id"/>
                    <field name="modified_datetime"/>
                    <field name="current_price"/>
                    <field name="old_price"/>
                </tree>
            </field>
        </record>

        <record id="product_cost_price_filter" model="ir.ui.view">
            <field name="name">purchase.price.search</field>
            <field name="model">product.cost.price.history</field>
            <field name="arch" type="xml">
                <search string="Cost Price History">
                    <field name="product_id"/>
                    <filter string="Product" name="product" context="{'group_by': 'product_id'}"/>
                </search>
            </field>
        </record>

        <record id="action_product_cost_price" model="ir.actions.act_window">
            <field name="name">Cost Price History</field>
            <field name="res_model">product.cost.price.history</field>
            <field name="search_view_id" ref="product_cost_price_filter"/>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_product':1}</field>
        </record>

        <menuitem id="menu_product_cost_price"
                  name="Product Cost Price History" sequence="3"
                  parent="stock.menu_stock_inventory_control"
                  groups="stock.group_stock_manager"
                  action="action_product_cost_price"/>


        <record id="product_cost_price_form_view" model="ir.ui.view">
            <field name="name">product.cost.form.view</field>
            <field name="model">product.product</field>
            <field name="priority">4</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[4]" position="after">
                    <page string="Cost Price History" groups="stock.group_stock_user" attrs="{'invisible': [('purchase_ok', '!=', True)]}">
                        <field name="cost_price_history_ids">
                            <tree editable="bottom" string="Price History">
                                <field name="modified_datetime"/>
                                <field name="current_price"/>
                                <field name="old_price"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>



    </data>
</odoo>
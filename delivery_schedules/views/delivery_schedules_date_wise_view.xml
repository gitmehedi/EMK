<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="delivery_schedule_date_wise_form" model="ir.ui.view">
            <field name="name">delivery.schedule.date.wise.form</field>
            <field name="model">delivery.schedule.date.wise</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Schedules Date Wise" create="false" edit="false"
                      options="{'no_open':True,'no_create_edit': True}">
                    <sheet>
                        <group>
                            <field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="pending_do"/>
                            <field name="do_qty"/>
                            <field name="undelivered_qty"/>
                            <field name="uom_id"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="scheduled_qty"/>
                            <field name="remarks"/>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="delivery_schedule_date_wise_tree" model="ir.ui.view">
            <field name="name">delivdelivery.schedule.date.wise.tree</field>
            <field name="model">delivery.schedule.date.wise</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Schedule Date Wise" create="false" edit="false">
                    <field name="partner_id"/>
                    <field name="pending_do"/>
                    <field name="do_qty"/>
                    <field name="undelivered_qty"/>
                    <field name="uom_id"/>
                    <field name="scheduled_qty"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="delivery_schedule_date_wise_action">
            <field name="name">Delivery Schedules Date Wise</field>
            <field name="res_model">delivery.schedule.date.wise</field>
            <field name="view_mode">tree</field>
        </record>


        <!--<menuitem id="delivery_schedule_submenu" name="Delivery Schedules Date Wise"-->
                  <!--parent="delivery_order.delivery_menu"-->
                  <!--groups="delivery_schedules.group_delivery_schedule_manager"-->
                  <!--action="delivery_schedule_date_wise_action" sequence="5"/>-->
    </data>
</odoo>
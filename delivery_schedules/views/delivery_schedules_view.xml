<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="delivery_schedules_form" model="ir.ui.view">
            <field name="name">delivery.schedules.form</field>
            <field name="model">delivery.schedules</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Schedules" delete="false" copy='0'>
                    <style>
						.o-form_delivery_schedules{
							max-width: 100% !important;
							padding-top: 0px !important;
						}

						.o-form_delivery_schedules .o_list_view thead,
						.o-form_delivery_schedules .o_list_view thead th {
							white-space: nowrap;
							position: -webkit-sticky;
							position: sticky;
							top: 0;
						}

						.o-form_delivery_schedules .o_list_view thead th {
							background: #ededed;
							border-left: 1px solid #dfdfdf;
							border-bottom: 2px solid #ddd;
						}

						.o-form_delivery_schedules .o_list_view tbody td {
							white-space: nowrap;
						}
						.o-form_delivery_schedules .o_list_editable {
							max-height: calc(100vh - 255px);
							overflow: auto;
							border: 1px solid #ddd;
						}
						.o-form_delivery_schedules .table-responsive {
							overflow: initial;
						}


					</style>
                    <header>
                        <button name="action_approve" type="object" states="draft,revision" string="Confirm" class="oe_highlight"
                                groups="delivery_schedules.group_delivery_schedule_manager"/>
                        <button string="Revised" name="action_draft"
                                groups="delivery_schedules.group_delivery_schedule_manager"
                                states="approve" type="object"/>
                        <field name="state" statusbar_visible="draft,approve" widget="statusbar"/>

                    </header>
                    <sheet class="o-form_delivery_schedules">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="requested_date"/>
                            </group>
                            <group>
                                <field name="operating_unit_id" options="{'no_open': True, 'no_create': True}"/>
                            </group>
                            <notebook colspan="4">
                                <page string="Customers">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="pending_do" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="do_qty"/>
                                            <field name="undelivered_qty"/>
                                            <field name="uom_id" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="scheduled_qty"/>
                                            <field name="remarks"/>
                                            <field name="state" readonly="1"/>
                                        </tree>
                                        <form string="Schedule Line">
                                            <group>
                                                <group>
                                                    <field name="operating_unit_id"/>
                                                    <field name="partner_id"/>
                                                    <field name="pending_do"/>
                                                    <field name="state"/>
                                                </group>
                                                <group>
                                                    <field name="product_id"/>
                                                    <field name="do_qty"/>
                                                    <field name="undelivered_qty"/>
                                                    <field name="uom_id"/>
                                                    <field name="scheduled_qty"/>
                                                </group>
                                            </group>
                                            <group>
                                                <field name="message_ids" widget="mail_thread" nolabel="1"/>
                                            </group>
                                        </form>
                                    </field>
                                </page>
                                <page string="Other Information">
                                    <group>
                                        <field name="requested_by" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="approved_by"/>
                                        <field name="approve_date"/>
                                        <field name="scheduled_qty" invisible="1"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="delivery_schedule_tree" model="ir.ui.view">
            <field name="name">delivery.schedules.tree</field>
            <field name="model">delivery.schedules</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Schedule">
                    <field name="name"/>
                    <field name="state"/>
                    <!--<field name="requested_by"/>-->
                    <field name="requested_date"/>
                </tree>
            </field>
        </record>

        <!-- Generate automated sequence -->
        <record id="seq_hr_employee" model="ir.sequence">
            <field name="name">DSE Sequences</field>
            <field name="code">delivery.schedules</field>
            <field name="prefix">DS</field>
            <field name="padding">3</field>
        </record>


        <record model="ir.actions.act_window" id="delivery_schedule_action">
            <field name="name">Delivery Schedules</field>
            <field name="res_model">delivery.schedules</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="delivery_schedule_submenu" name="Delivery Schedules" parent="delivery_order.delivery_menu"
              groups="delivery_schedules.group_delivery_schedule_manager"
              action="delivery_schedule_action" sequence="5"/>

        <record id="delivery_schedules_line_tree" model="ir.ui.view">
            <field name="name">delivery.schedules.line.tree</field>
            <field name="model">delivery.schedules.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Instruction" edit="false" create="false" delete="false">
                    <field name="partner_id" readonly="True"/>
                    <field name="pending_do" readonly="True" string="D.O."/>
                    <field name="do_qty"/>
                    <field name="undelivered_qty"/>
                    <field name="scheduled_qty" readonly="True"/>
                    <field name="remarks" readonly="True"/>
                    <field name="state" readonly="True" invisible="1"/>
                    <button name="action_approve" class="oe_highlight" icon="fa-check-square"
                            type="object" attrs="{'invisible': [('state', '!=', 'approve')]}"/>
                </tree>
            </field>
        </record>

        <record id="search_delivery_schedules_line" model="ir.ui.view">
            <field name="name">delivery.schedules.line.search</field>
            <field name="model">delivery.schedules.line</field>
            <field name="arch" type="xml">
                <search string="Delivery Instruction">
                    <filter name="today" string="Today" domain="[('requested_date','=',time.strftime('%%Y-%%m-%%d'))]"/>
                    <separator/>
                    <filter name="pending" string="Pending" domain="[('state','=','approve')]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_delivery_schedules_line">
            <field name="name">Delivery Instruction</field>
            <field name="res_model">delivery.schedules.line</field>
            <field name="context">{
                'search_default_today':1,
                'search_default_pending':1,
                }</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="delivery_schedules_line_tree"/>
            <field name="search_view_id" ref="search_delivery_schedules_line"/>
        </record>

        <menuitem id="main_menu_delivery_schedules_line"
                  name="Delivery"
                  parent="stock.menu_stock_root"
                  sequence="2"
                  groups="stock.delivery_user"/>

        <menuitem id="menu_delivery_schedules_line"
                  name="Delivery Instruction"
                  parent="main_menu_delivery_schedules_line"
                  sequence="1"
                  groups="stock.delivery_user"
                  action="action_delivery_schedules_line"/>
    </data>
</odoo>
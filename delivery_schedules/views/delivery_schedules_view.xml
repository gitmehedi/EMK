<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="delivery_schedules_form" model="ir.ui.view">
            <field name="name">delivery.schedules.form</field>
            <field name="model">delivery.schedules</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Schedules" delete="false" copy='0'>
                    <header>
                        <button name="action_approve" type="object" states="draft" string="Confirm" class="oe_highlight"
                                groups="delivery_schedules.group_delivery_schedule_manager"/>
                        <button name="generate_schedule_letter" string="Send by Email" type="object" states="approve"
                                class="btn-primary" groups="delivery_schedules.group_delivery_schedule_manager"/>
                        <field name="state" statusbar_visible="draft,approve" widget="statusbar"/>

                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>

                                <field name="requested_by" options="{'no_open': True, 'no_create': True}"/>
                                <field name="requested_date"/>
                            </group>
                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="product_id"
                                                   options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="quantity"/>
                                            <field name="uom_id"
                                                   options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="pack_type"
                                                   options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="deli_address"/>
                                            <field name="remarks"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                            <separator string="Notes"/>
                            <field name="notes" nolabel="1" placeholder="Add Notes..................."/>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="delivery_schedule_tree" model="ir.ui.view">
            <field name="name">delivery.schedules.tree</field>
            <field name="model">delivery.schedules</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Schedule">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="requested_by"/>
                    <field name="requested_date"/>
                </tree>
            </field>
        </record>

        <!-- Generate automated sequence -->
        <record id="seq_hr_employee" model="ir.sequence">
            <field name="name">DSE Sequences</field>
            <field name="code">delivery.schedules</field>
            <field name="prefix">DS</field>
            <field name="padding">3</field>
        </record>


        <record model="ir.actions.act_window" id="delivery_schedule_action">
            <field name="name">Delivery Schedules</field>
            <field name="res_model">delivery.schedules</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="delivery_schedule_menu" name="Delivery" parent="sales_team.menu_base_partner"
                  groups="delivery_schedules.group_delivery_schedule_manager" sequence="9" />
        <menuitem id="delivery_schedule_submenu" name="Delivery Schedules" parent="delivery_schedule_menu"
                  groups="delivery_schedules.group_delivery_schedule_manager"
                  action="delivery_schedule_action" sequence="5"/>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="delivery_schedules_form" model="ir.ui.view">
            <field name="name">delivery.schedules.form</field>
            <field name="model">delivery.schedules</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Schedules" delete="false" copy='0'>
                    <header>
                        <button name="action_approve" type="object" states="draft" string="Confirm" class="oe_highlight"
                                groups="delivery_schedules.group_delivery_schedule_manager"/>
                        <!--<button name="generate_schedule_letter" string="Send by Email" type="object" states="approve"-->
                        <!--class="btn-primary" groups="delivery_schedules.group_delivery_schedule_manager"/>-->
                        <button string="Reset to Draft" name="action_draft"
                                groups="base.group_no_one"
                                states="approve" type="object"/>
                        <field name="state" statusbar_visible="draft,approve" widget="statusbar"/>

                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="requested_date"/>
                            </group>
                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="operating_unit_id" invisible="1"/>
                                            <field name="schedule_line_date" invisible="1"/>

                                            <field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="pending_do" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="do_qty"/>
                                            <field name="undelivered_qty"/>
                                            <field name="uom_id"
                                                   options="{'no_open': True, 'no_create': True}"/>
                                            <field name="scheduled_qty"/>
                                            <field name="remarks"/>

                                        </tree>
                                    </field>
                                </page>

                                <page string="Other Information">
                                    <group>
                                        <field name="operating_unit_id"/>
                                        <field name="sales_team_id"/>
                                        <field name="requested_by" options="{'no_open': True, 'no_create': True}"/>
                                    </group>

                                </page>

                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="delivery_schedule_tree" model="ir.ui.view">
            <field name="name">delivery.schedules.tree</field>
            <field name="model">delivery.schedules</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Schedule">
                    <field name="name"/>
                    <field name="state"/>
                    <!--<field name="requested_by"/>-->
                    <field name="requested_date"/>
                </tree>
            </field>
        </record>

        <!-- Generate automated sequence -->
        <record id="seq_hr_employee" model="ir.sequence">
            <field name="name">DSE Sequences</field>
            <field name="code">delivery.schedules</field>
            <field name="prefix">DS</field>
            <field name="padding">3</field>
        </record>


        <record model="ir.actions.act_window" id="delivery_schedule_action">
            <field name="name">Delivery Schedules</field>
            <field name="res_model">delivery.schedules</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="delivery_schedule_menu" name="Delivery" parent="sales_team.menu_base_partner"
                  groups="sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale"
                  sequence="9"/>
        <menuitem id="delivery_schedule_submenu" name="Delivery Schedules" parent="delivery_schedule_menu"
                  groups="sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale"
                  action="delivery_schedule_action" sequence="5"/>

        <!--Line View For delivery Operations -->
        <record id="delivery_schedules_line_tree" model="ir.ui.view">
            <field name="name">delivery.schedules.line.tree</field>
            <field name="model">delivery.schedules.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Instruction" editable="bottom" create="false">
                    <field name="partner_id" readonly="True"/>
                    <field name="pending_do" readonly="True" string="D.O."/>
                    <field name="do_qty"/>
                    <field name="undelivered_qty"/>
                    <field name="scheduled_qty" readonly="True"/>
                    <field name="remarks" readonly="True"/>
                    <field name="state" readonly="True" invisible="1"/>
                    <button name="action_approve" string="Done"
                            type="object" attrs="{'invisible': [('state', '!=', 'approve')]}"/>
                </tree>
            </field>
        </record>

        <record id="search_delivery_schedules_line" model="ir.ui.view">
            <field name="name">delivery.schedules.line.search</field>
            <field name="model">delivery.schedules.line</field>
            <field name="arch" type="xml">
                <search string="Delivery Authorization">
                    <filter name="today" string="Today" domain="[('requested_date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                    <separator/>
                    <filter name="pending" string="Pending" domain="[('state','=','approve')]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_delivery_schedules_line">
            <field name="name">Delivery Instruction</field>
            <field name="res_model">delivery.schedules.line</field>
            <field name="context">{
                'search_default_today':1,
                'search_default_pending':1,
                }</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="main_menu_delivery_schedules_line"
                  name="Delivery"
                  parent="stock.menu_stock_root"
                  sequence="2"
                  groups="stock.delivery_user"/>

        <menuitem id="menu_delivery_schedules_line"
                  name="Delivery Instruction"
                  parent="main_menu_delivery_schedules_line"
                  sequence="1"
                  groups="stock.delivery_user"
                  action="action_delivery_schedules_line"/>
    </data>
</odoo>
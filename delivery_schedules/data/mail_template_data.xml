<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Email template -->
        <record id="schedule_email_template" model="mail.template">
            <field name="name">Delivery Schedule Email Template</field>
            <field name="subject">${object.name}</field>
            <field name="model_id" ref="delivery_schedules.model_delivery_schedules"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="delivery_schedules_report"/>
            <field name="report_name">${(object.name or '').replace('/','_')}${object.state == 'approve'}</field>
            <field name="lang">${user.lang}</field>
            <field name="body_html"><![CDATA[
<p>Hello,</p>
<p>
    You have been assign to approve new delivery challan.Please Find the attachment below for details information.
</p>
<p>
    If any further information is required, do not hesitate to reply to this message.
</p>

]]></field>
        </record>
    </data>
</odoo>

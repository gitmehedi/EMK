<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_sales_pricelist_commission_refund_view_form" model="ir.ui.view">
            <field name="name">product.sales.pricelist.form.inherit</field>
            <field name="model">product.sales.pricelist</field>
            <field name="inherit_id" ref="product_sales_pricelist.sale_price_change_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="inside">
                    <group>
                        <field name="customer_type" required="1"/>

                        <!--coorporate-->
                        <separator colspan="2" string="Commission" class="mt5" attrs="{'invisible':[('customer_type','!=','coorporate')]}"/>
                        <field name="coorporate_commssion_per_unit" attrs="{'invisible':[('customer_type','!=','coorporate')]}"/>
                        <field name="coorporate_commssion_tolerable" attrs="{'invisible':[('customer_type','!=','coorporate')]}"/>

                        <separator colspan="2" string="Refund" class="mt5" attrs="{'invisible':[('customer_type','!=','coorporate')]}"/>
                        <field name="coorporate_refund_per_unit" attrs="{'invisible':[('customer_type','!=','coorporate')]}"/>
                        <field name="coorporate_refund_tolerable" attrs="{'invisible':[('customer_type','!=','coorporate')]}"/>

                        <!--delaer-->
                        <separator colspan="2" string="Commission &amp; Refund" class="mt5" attrs="{'invisible':[('customer_type','!=','dealer')]}"/>
                        <field name="dealer_commission_applicable" attrs="{'invisible':[('customer_type','!=','dealer')]}"/>
                        <field name="dealer_refund_applicable" attrs="{'invisible':[('customer_type','!=','dealer')]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
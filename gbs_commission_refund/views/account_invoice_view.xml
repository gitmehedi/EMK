<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_invoice_commission_refund_view_form" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_id']" position="after">
                    <field name="commission_move_id" attrs="{'invisible':[('commission_move_id','=',False)]}"/>
                    <field name="refund_move_id" attrs="{'invisible':[('refund_move_id','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_config" model="ir.ui.view">
        <field name="name">sale settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sales_team.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//form/div[@id='main']" position="after">
                <div id="commission_refund_div">
                    <group string="Commission/Refund Configurations" name="commission_refund_section">
                        <group>
                            <field name="commission_refund_default_ap_parent_id" class="oe_inline"/>
                            <field name="commission_journal_id" class="oe_inline"/>
                            <field name="refund_journal_id" class="oe_inline"/>
                            <field name="commission_start_date" class="oe_inline"/>
                        </group>
                    </group>

                </div>

            </xpath>
        </field>
    </record>
</odoo>

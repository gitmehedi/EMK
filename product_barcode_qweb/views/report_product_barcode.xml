<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_product_barcode">
            <t t-name="product_barcode_qweb.report_product_barcode">
                <div class="page" style="margin-left: 0mm">
                    <table style="font-size:8.0px;" cellspacing="1">
                        <tr style="height: 23.25mm" t-foreach="getLabelRows(data['form'])" t-as="label_row">
                            <td align="center" style="width: 45mm;padding: 0mm 0mm 0mm 0mm" t-foreach="label_row"
                                t-as="label_data">
                                <span t-esc="label_data['company_name']"/>
                                <br/>
                                <span t-esc="label_data['name']"/>
                                <br/>
                                <span>
                                    <img style="width: 35mm;height: 7mm;"
                                         t-att-src="'data:image/png;base64,'+generateBarcode(label_data['default_code'])"/>
                                </span>
                                <br/>
                                <span t-esc="label_data['default_code']"/>
                                <br/>
                                Price:
                                <span style="font-size:14.0px;font-weight:bold" t-esc="res_company.currency_id.symbol"/>
                                <span style="font-size:14.0px;font-weight:bold" t-esc="'%.2f'% label_data['price']"/>
                                <span style="font-size:14.0px;font-weight:bold">+ VAT</span>
                                <br/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </template>
    </data>
</openerp>

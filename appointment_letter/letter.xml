<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="app_letter_from_view" model="ir.ui.view">
            <field name="name">app.letter.form</field>
            <field name="model">app.letter</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="letter">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_app_letter" model="ir.actions.act_window">
            <field name="name">App Letter</field>
            <field name="res_model">app.letter</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="hr_arrear_menu" name="Appointment Letter"/>
        <menuitem id="hr_arrear_submenu" name="Appointment Letter" parent="hr_arrear_menu"
                  action="action_app_letter"/>
    </data>
</odoo>

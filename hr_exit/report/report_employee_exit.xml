<?xml version="1.0" encoding="utf-8"?>
<!--Custom report. -->
<odoo>
	<data>
		<report
			id="custom_report_employee_exit"
			model="employee.exit.req"
			string="Employee Exit Report"
			report_type="qweb-pdf"
			name="hr_exit.report_employee_exit"
			attachment_use="False"
			file="hr_exit.report_employee_exit"
		/>
		<template id="report_employee_exit_document">
			<t t-call="report.external_layout">
				<div class="page">
					<div class="row">
						<h3>Title</h3>
					</div>
				</div>
			</t>
		</template>

		<template id="report_employee_exit">
			<t t-call="report.html_container">
				<t t-foreach="doc_ids" t-as="doc_id">
					<t
						t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'hr_exit.report_employee_exit_document')" />
				</t>
			</t>
		</template>
	</data>
</odoo>
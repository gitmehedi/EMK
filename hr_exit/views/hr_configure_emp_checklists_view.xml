<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="checklist_line_form_view" model="ir.ui.view">
            <field name="name">checklist_line_form_view</field>
            <field name="model">hr.configure.emp.checklists</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string=" Checklist View">
                    <header>
                        <button string="confirm" name="exit_submit" groups="base.group_user" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,validate"
                               statusbar_colors='{"draft":"blue"}'/>
                    </header>
                    <sheet>
                        <group>
                            <field name="emp_name"/>
                            <field name="department"/>
                            <!--<field name="status"/>-->
                        </group>

                        <separator string="Check Lists" colspan="4"/>
                        <newline/>
                        <field name="check_list_item_ids" nolabel="1"/>

                       <!--  <notebook>
                            <page string="Check Lists">
                                <field name="check_list_line_ids">
                                    <tree editable="top">
                                        <field name="check_list_item_id"
                                               options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>-->

                    </sheet>

                </form>
            </field>
        </record>
        <record id="checklist_line_tree_view" model="ir.ui.view">
            <field name="name">checklist_line_tree_view</field>
            <field name="model">hr.configure.emp.checklists</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Checklist Tree View">
                    <!--<field name="checklist_name"/>-->
                    <field name="emp_name"/>
                    <field name="department"/>
                    <field name="check_list_item_ids"/>
                    <!--<field name="checklists_id"/>-->
                    <!--<field name="status"/>-->
                </tree>
            </field>
        </record>

        <!-- Checklist Type Action Views -->
        <record id="action_checklist_Line_view" model="ir.actions.act_window">
            <field name="name"> Employee Checklist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.configure.emp.checklists</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="checklist_line_tree_view"/>
        </record>

        <!-- Checklist Type Menu -->
        <menuitem id="checklist_line_menu" name="Employee Checklists" parent="exit_checklist_menu"
                  sequence="9" action="action_checklist_Line_view"/>

    </data>
</openerp>
<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data>

        <record id="exit_req_form_view" model="ir.ui.view">
            <field name="name">hr.exit.req.form</field>
            <field name="model">employee.exit.req</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Exit Request">
                    <header>
                        <button string="Confirm" name="confirm"/>
                        <button string="Approve" name="validate"/>
                        <button string="Validate" name="second_validate"/>
                        <button string="Refuse" name="refuse"/>
                        <button string="Reset to Draft" name="reset"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"
                               statusbar_colors='{"confirm":"blue","validate1":"blue","refuse":"red"}'/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="descriptions"/>
                                <field name="req_date"/>
                                <field name="last_date"/>
                            </group>
                            <group>

                                <field name="employee_id" string="Employee"/>
                                <field name="manager_id" string="manager"/>
                                <field name="category_id" string="Category"/>
                                <field name="job_id" string="Job Descriptions"/>
                                <field name="department_id" string="Department"/>
                            </group>
                            <field name="note" nolabel="1" colspan="4" placeholder="Add a reason..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="checklist_item_tree_view" model="ir.ui.view">
            <field name="name">hr.exit.req.tree</field>
            <field name="model">employee.exit.req</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Exit Request">
                    <field name="descriptions"/>
                    <field name="req_date"/>
                    <field name="req_date"/>
                </tree>
            </field>
        </record>

        <!-- Checklist Item Action Views -->
        <record id="action_exit_req_view" model="ir.actions.act_window">
            <field name="name">Exit Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.exit.req</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="checklist_item_tree_view"/>
        </record>





        <!-- Checklist Item Menu -->
        <menuitem id="menu_exit_management" name="Employee Exit" parent="hr.menu_hr_root"
                  sequence="0"/>
        <menuitem name="Exit Request" parent="menu_exit_management" id="menu_exit_req"
                  action="action_exit_req_view"/>


<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>

        <record id="exit_req_form_view" model="ir.ui.view">
            <field name="name">hr.exit.req.form</field>
            <field name="model">hr.emp.exit.req</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Exit Request">
                    <!--<field name="can_reset" invisible="1"/>-->
                    <header>
                        <button string="Confirm" name="exit_confirm" states="draft" type="object" class="oe_highlight"/>
                        <button string="Approve" name="exit_validate" groups ="hr.group_hr_user" states="confirm"  type="object" class="oe_highlight"/>
                        <button string="First Validate" name="exit_first_validate" groups ="gbs_application_group.group_dept_manager" states="validate1" type="object"
                                class="oe_highlight" />
                        <!--<button string="Second Validate" name="exit_second_validate" groups ="hr.group_hr_manager" states="validate2" type="object"-->
                                <!--class="oe_highlight"/>-->

                        <button string="Refuse" name="exit_refuse" groups ="gbs_application_group.group_dept_manager,hr.group_hr_manager" states="validate1,validate2"
                                type="object" />
                        <button string="Reset to Draft" name="exit_reset" groups ="gbs_application_group.group_dept_manager,hr.group_hr_manager"
                                attrs="{'invisible': [('state', 'not in', ['confirm', 'refuse'])]}"
                                type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate1,validate"
                               statusbar_colors='{"confirm":"blue","validate1":"blue","refuse":"red"}'/>
                    </header>
                    <sheet>
                        <h2><field name="employee_id"  required="True" nolable="1" context="{'employee_id':employee_id}" on_change="onchange_employee(employee_id)" placeholder="Select an employee..." options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/></h2>
                        <group>
                            <group>

                                <!--<field name="descriptions" required="True"/>-->
                                <field name="req_date" required="True" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                <field name="last_date" required="True" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            </group>
                            <group>
                                <field name="manager_id" string="Department Manager" readonly="1"/>
                                <field name="department_id" string="Department" readonly="1"/>
                                <field name="job_id" string="Job Title" readonly="1"/>
                                <field name="user_id" string="User" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="confirm_date"/>
                                <field name="approved1_date"/>
                                <field name="approved2_date"/>
                            </group>
                            <group>
                                <field name="confirm_by"/>
                                <field name="approver1_by"/>
                                <field name="approver2_by"/>
                            </group>
                        </group>

                        <notebook>
                            <page string ="Information">
                                <separator string="Reason for Exit"/>
                                <group>
                                    <field name="reason_for_exit"  attrs="{'readonly': [('state', 'not in', ['draft'])]}" placeholder="Add a reason..."/>
                                    <field name="emp_notes" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                </group>
                            </page>
                            <!--<page string="Notes">-->
                                <!--<group attrs="{'invisible': [('state', 'in', ['draft'])]}">-->
                                    <!--<group name="department_notes" string="Department Manager Notes">-->
                                        <!--<field name="department_notes" colspan="4" attrs="{'readonly': [('state', 'not in', ['draft','confirm'])]}" nolabel="1" placeholder="Add a reason..."/>-->
                                    <!--</group>-->

                                <!--</group>-->
                                <!--<group  attrs="{'invisible': [('state', 'in', ['draft','confirm'])]}">-->
                                    <!--<group name="hr_notes" string="HR Manager Notes">-->
                                        <!--<field name="hr_notes" colspan="4" attrs="{'readonly': [('state', 'not in', ['draft','validate1'])]}" nolabel="1" placeholder="Add a reason..."/>-->
                                    <!--</group>-->

                                <!--</group>-->
                                <!--<group  attrs="{'invisible': [('state', 'in', ['draft','validate1', 'confirm'])]}">-->
                                    <!--<group name="manager_notes" string="General Manager Notes">-->
                                        <!--<field name="manager_notes" colspan="4" attrs="{'readonly': [('state', 'not in', ['draft','validate2'])]}"  nolabel="1" placeholder="Add a reason..."/>-->
                                    <!--</group>-->

                                <!--</group>-->
                            <!--</page>-->
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="emp_req_tree_view" model="ir.ui.view">
            <field name="name">hr.exit.req.tree</field>
            <field name="model">hr.emp.exit.req</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Exit Request">
                    <!--<field name="descriptions"/>-->
                    <field name="emp_notes"/>
                    <field name="req_date"/>
                    <field name="last_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Checklist Item Action Views -->
        <record id="action_exit_req_view" model="ir.actions.act_window">
            <field name="name">Exit Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.emp.exit.req</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="emp_req_tree_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a exit request.
                </p>
                <p>
                    Once you have recorded your exit request, it will be sent
                    to a manager for validation.
                </p>
            </field>
        </record>

        <!-- Checklist Item Menu -->

        <menuitem name="Exit Requests" parent="menu_exit_management" id="menu_exit_req"
                  action="action_exit_req_view"/>


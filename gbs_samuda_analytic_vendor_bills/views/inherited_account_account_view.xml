<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_account_form_inherit" model="ir.ui.view">
            <field name="name">inherit.account.account.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <label for="reconcile" position="replace">
                    <label for="reconcile" attrs="{'invisible': [('internal_type','=','liquidity')]}"
                           groups="base.group_private_addresses"/>
                </label>

                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="analytic_account_required"/>
                    <field name="cost_center_required"/>
                </xpath>

                <xpath expr="//field[@name='reconcile']" position="attributes">
                    <attribute name="groups">base.group_private_addresses</attribute>
                </xpath>

                <xpath expr="//field[@name='compacted']" position="attributes">
                    <attribute name="groups">base.group_private_addresses</attribute>
                </xpath>
                <xpath expr="//field[@name='type_third_parties']" position="attributes">
                    <attribute name="groups">base.group_private_addresses</attribute>
                </xpath>
                <xpath expr="//field[@name='centralized']" position="attributes">
                    <attribute name="groups">base.group_private_addresses</attribute>
                </xpath>

            </field>
        </record>

        <record id="account.action_view_account_move_line_reconcile" model="ir.actions.act_window">
            <field name="groups_id" eval="[(6, 0, [ref('account.group_account_manager')])]"/>
        </record>
        <record id="account.action_account_unreconcile" model="ir.actions.act_window">
            <field name="groups_id" eval="[(6, 0, [ref('account.group_account_manager')])]"/>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="inherited_product_template_view_form" model="ir.ui.view">
			<field name="name">Product View Form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name="arch" type="xml">
				<xpath
					expr="//form/sheet/notebook/page[@string='Information']/group/group/field[@name='type']"
					position="after">
					<field name="report_type"/>
				</xpath>
			</field>
		</record>
		
		<record model="ir.ui.view" id="product_template_kanban_csl_view">
            <field name="name">Product Template Kanban CSL</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_kanban_stock_view"/>
            <field name="arch" type="xml">
            	 <xpath expr='//ul/li' position="inside">
                 	<li t-if="record.type.raw_value != 'service'">Upcoming Qty: <field name="incoming_qty"/> <field name="uom_id"/></li>
                 </xpath>
            </field>
        </record>
		
		<record model="ir.ui.view" id="product_template_kanban_csl2_view">
            <field name="name">Product Template Kanban CSL2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
            	<xpath expr='//div[@class="oe_kanban_details"]/ul/li' position="replace">
                	<li>Unit Price: <field name="lst_price"></field></li>
            	</xpath>
            </field>
        </record>
		
		<record model="ir.ui.view" id="product_product_kanban_csl2_view">
            <field name="name">Product Kanban CSL2</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="arch" type="xml">
            	<xpath expr='//div[@class="oe_kanban_details"]/ul/li' position="replace">
                	<li>Unit Price: <field name="lst_price"></field></li>
            	</xpath>
            </field>
        </record>
		
		
	</data>
</odoo>

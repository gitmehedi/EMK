<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="report_voucher_menu"
            string="Voucher"
            model="account.move"
            report_type="qweb-pdf"
            file="gbs_voucher.voucher_report"
            name="gbs_voucher.voucher_report"
            paperformat="report_layout.paperformat_voucher"
        />

        <template id="voucher_report">
            <t t-call="report.html_container">
                 <t t-call="report_layout.gbs_internal_layout">
                     <div class="page" style="page-break-inside:auto;">
                        <div class="row">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                                .font { font-size: 12px; }
                                .single-tab { padding-left: 1.2em; }
                                .double-tab { padding-left: 2.4em; }

                                .table-report-vr > thead > tr > th,
                                .table-report-vr > tbody > tr > th,
                                .table-report-vr > tfoot > tr > th,
                                .table-report-vr > thead > tr > td,
                                .table-report-vr > tbody > tr > td,
                                .table-report-vr > tfoot > tr > td {
                                    padding: 1px 3px !important;
                                    font-size: 13px !important;
                                }

                            </style>
                            <div class="clearfix">
                                <h4 class="report-title"><span t-esc="title"/></h4>
                                <br/>
                                <div class="row" style="padding-bottom:5px;">
                                    <div class="col-xs-6">
                                        <span>No : </span>
                                        <strong t-esc="data['name']"/>
                                        <br/>
                                        <span>Reference : </span>
                                        <strong t-esc="data['ref']"/>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <span>Date : </span>
                                        <strong t-esc="time.strftime('%d-%b-%Y',time.strptime(data['date'],'%Y-%m-%d'))"/>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-report-vr table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th class="text-center" style="width:32%;">Account</th>
                                        <th class="text-center" style="width:20%;">Partner</th>
                                        <th class="text-center" style="width:28%;">Particulars</th>
                                        <th class="text-right" style="width:10%;">Debit</th>
                                        <th class="text-right" style="width:10%;">Credit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="data['lines']" t-as="line">
                                        <tr>
                                            <td style="line-height: 110%;">
                                                <span t-esc="line['account_name']"/>
                                                <t t-if="line['analytic_account_tag_names']">
                                                    <br/><strong class="single-tab font" t-esc="line['analytic_account_tag_names']"/>
                                                </t>
                                                <t t-if="line['analytic_account_name']">
                                                    <br/><strong class="double-tab font" t-esc="line['analytic_account_name']"/>
                                                </t>
                                                <t t-if="line['department_name']">
                                                    <br/><strong class="double-tab font" t-esc="line['department_name']"/>
                                                </t>
                                                <t t-if="line['cost_center_name']">
                                                    <br/><strong class="double-tab font" t-esc="line['cost_center_name']"/>
                                                </t>
                                            </td>
                                            <td style="line-height: 110%;"><span t-esc="line['partner_name']"/></td>
                                            <td style="line-height: 110%;"><span t-esc="line['particulars']"/></td>
                                            <td class="text-right" style="line-height: 110%;">
                                                <t t-if="line['debit'] != 0">
                                                    <strong t-esc="formatLang(line['debit'])"/>
                                                </t>
                                            </td>
                                            <td class="text-right" style="line-height: 110%;">
                                                <t t-if="line['credit'] != 0">
                                                    <strong t-esc="formatLang(line['credit'])"/>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td class="text-left" colspan="2">
                                            <strong>On Account of : </strong><span t-esc="data['narration']"/>
                                        </td>
                                        <td class="text-right"><strong>Total</strong></td>
                                        <td class="text-right"><strong t-esc="formatLang(data['amount'])"/></td>
                                        <td class="text-right"><strong t-esc="formatLang(data['amount'])"/></td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table_word_amount">
                                <div>
                                    <td class="text-left">
                                        <span>In Words : </span> BDT <strong t-esc="data['word_amount']"/> <strong>Only</strong>
                                    </td>
                                </div>
                            </table>
                            <table>
                                <div></div>
                            </table>
                            <table class="table_word_amount">
                                <div t-if="data['sum_of_credit']>0">
                                    <td class="text-left">
                                        <span>In Words (Bank Payment) : </span> BDT <strong t-esc="data['bank_word_amount']"/> <strong>Only</strong>
                                    </td>
                                </div>
                            </table>

                            <table class="table" style="margin-top:20px;">
                                <tr>
                                    <td class="text-center">Prepared By</td>
                                    <td class="text-center">Checked By</td>
                                    <td class="text-center">Verified By</td>
                                    <td class="text-center">Authorised By</td>
                                    <td class="text-center">Received By</td>

                                </tr>
                                <tr>
                                    <td class="text-center" style="padding-top:1cm">
                                        ....................
                                    </td>
                                    <td class="text-center" style="padding-top:1cm">
                                        ....................
                                    </td>
                                    <td class="text-center" style="padding-top:1cm">
                                        ....................
                                    </td>
                                    <td class="text-center" style="padding-top:1cm">
                                        ....................
                                    </td>
                                    <td class="text-center" style="padding-top:1cm">
                                        ....................
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
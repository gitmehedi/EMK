<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_stock_indent_commercial_user" model="ir.rule">
        <field name="name">Stock Indent(Commercial)</field>
        <field name="model_id" ref="stock_indent.model_indent_indent"/>
        <field name="domain_force">[('operating_unit_id.id','in',user.operating_unit_ids.ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('commercial.group_commercial_user'))]"/>
    </record>


    <record id="rule_for_emp_stock_location" model="ir.rule">
        <field name="name">Stock Location(Employee)</field>
        <field name="model_id" ref="stock.model_stock_location"/>
        <field name="domain_force">[('id','in',user.location_ids.ids)]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

    <record id="rule_for_ho_procure_stock_location" model="ir.rule">
        <field name="name">Stock Location(All Access)</field>
        <field name="model_id" ref="stock.model_stock_location"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('gbs_application_group.group_head_of_procurement')),(4,ref('purchase.group_purchase_manager')),(4,ref('commercial.group_commercial_user')),(4,ref('stock.group_stock_user')),(4,ref('commercial.group_commercial_user_export'))]"/>
    </record>


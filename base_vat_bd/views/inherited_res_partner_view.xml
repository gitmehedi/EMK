<?xml version="1.0"?>
<odoo>

    <record id="inherited_res_partner_form_view" model="ir.ui.view">
        <field name="name">inherited.res.partner.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lang']" position="after">
                <field name="tax"
                       groups="sales_team.group_sale_salesman,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_manager"/>
                <field name="vat"
                       groups="sales_team.group_sale_salesman,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_manager"/>
                <field name="bin"
                       groups="sales_team.group_sale_salesman,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_manager"/>
            </xpath>
        </field>
    </record>

</odoo>
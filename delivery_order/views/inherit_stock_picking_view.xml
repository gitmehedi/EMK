<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_stock_picking_for_delivery_order">
            <field name="name">Stock.picking.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="delivery_order_id"/>
                </xpath>

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="lc_id"/>
                </xpath>

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="transport_id"/>
                </xpath>


                <xpath expr="//button[@name='do_new_transfer']" position="replace">

                    <button name="do_new_transfer"
                            states="draft,partially_available,assigned"
                            string="Validate"
                            groups="stock.group_stock_user,account.group_account_user"
                            type="object" class="oe_highlight"/>

                </xpath>

                 <xpath expr="//button[@name='force_assign']" position="replace">

                      <button name="force_assign" states="confirmed,waiting,partially_available" string="Force Availability"
                        type="object" groups="stock.group_stock_user,stock.group_stock_manager,account.group_account_user"/>

                </xpath>

            </field>
        </record>


        <record model="ir.ui.view" id="inherit_stock_move_for_delivery_order">
            <field name="name">Stock.move.form.view</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="delivery_order_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
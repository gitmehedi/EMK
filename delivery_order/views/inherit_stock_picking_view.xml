<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_stock_picking_for_delivery_order">
            <field name="name">Stock.picking.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="region_type" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="so_type" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="delivery_order_id" options="{'no_open': True, 'no_create': True}"
                           attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>
                <xpath expr="//field[@name='delivery_order_id']" position="after">
                    <field name="vat_challan_id" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>

                <xpath expr="//field[@name='pack_operation_product_ids']/tree/field[@name='product_uom_id']" position="after">
                    <field name="price_unit" groups="stock.group_stock_manager"/>
                </xpath>

                <xpath expr="//field[@name='pack_operation_product_ids']/tree/button[@name='show_details']" position="replace">
                    <button name="show_details" string="Modify" type="object" icon="fa-pencil" groups="stock.group_stock_multi_locations,stock.delivery_user"
                                            states="confirmed,assigned,waiting,partially_available"/>
                </xpath>

                <xpath expr="//field[@name='vat_challan_id']" position="after">
                    <field name="pack_type" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="delivery_mode" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>

                <xpath expr="//field[@name='location_dest_id']" position="after">
                    <field name="vat_mode" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="bonded_mode" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="show_transport_info" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>
                <xpath expr="//field[@name='show_transport_info']" position="after">
                    <field name="transport_details" widget="radio" options="{'horizontal': true}"
                           attrs="{'invisible': [('show_transport_info','=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='transport_details']" position="after">
                    <field name="vehicle_no" attrs="{'invisible': [('show_transport_info','=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='vehicle_no']" position="after">
                    <field name="driver_no" attrs="{'invisible': [('show_transport_info','=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='driver_no']" position="after">
                    <field name="driver_mob" attrs="{'invisible': [('show_transport_info','=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='driver_mob']" position="after">
                    <field name="transport_name" attrs="{'invisible': [('show_transport_info','=', False)]}"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="customer_name" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>

                <xpath expr="//field[@name='customer_name']" position="after">
                    <field name="shipping_address_print" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>

                <xpath expr="//form/sheet/group" position="after">
                    <div attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}">
                        <separator string="LC/TT/SC Information" attrs="{'invisible': [('so_type', 'not in', ('lc_sales', 'tt_sales', 'contract_sales'))]}"/>
                    </div>

                    <group attrs="{'invisible': [('so_type', 'not in', ('lc_sales', 'tt_sales', 'contract_sales'))]}">
                        <group>
                            <field name="lc_id" options="{'no_open': True, 'no_create': True}"
                               attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                            <field name="issue_date" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                            <field name="expiry_date" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                        </group>
                        <group>
                            <field name="shipment_date" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                            <field name="bank_code" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                        </group>
                    </group>

                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
                </xpath>
                <xpath expr="//button[@name='%(stock.action_report_delivery)d']" position="replace">
                    <button name="%(stock.action_report_delivery)d" string="Print" states="done" type="action"
                            groups="base.group_user" invisible="1"/>
                </xpath>

                <xpath expr="//button[@name='do_print_picking']" position="replace">
                    <button name="do_print_delivery_challan" string="Print"
                            groups="stock.delivery_user,stock.group_stock_user"
                            type="object"
                            attrs="{'invisible': ['|',('state', 'in', ('assigned', 'confirmed','waiting','cancel')),('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>

                <xpath expr="//button[@name='do_new_transfer']" position="replace">
                    <button name="do_new_transfer"
                            states="draft,partially_available,assigned"
                            string="Validate"
                            groups="stock.delivery_user,stock.group_stock_user,account.group_account_user"
                            type="object" class="oe_highlight"/>
                </xpath>

                <xpath expr="//button[@name='force_assign']" position="replace">
                    <button name="force_assign" states="confirmed,waiting,partially_available"
                            string="Force Availability"
                            type="object"
                            groups="base.group_system"/>

                </xpath>

                <xpath expr="//button[@name='button_scrap']" position="replace">
                    <button name="button_scrap" type="object" string="Scrap" invisible="1"/>
                </xpath>

                <xpath expr="//button[@name='action_assign']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//button[@name='force_assign']" position="after">
                    <button name="action_assign" states="confirmed" string="Check Availability" type="object"
                            groups="stock.group_stock_user,stock.delivery_user"/>
                </xpath>
                <xpath expr="//button[@name='do_unreserve']" position="replace">
                    <button name="do_unreserve" string="Unreserve" groups="base.group_system,stock.delivery_user" type="object" attrs="{'invisible': [('quant_reserved_exist', '=', False)]}"/>
                </xpath>

            </field>
        </record>


        <record model="ir.ui.view" id="inherit_stock_move_for_delivery_order">
            <field name="name">Stock.move.form.view</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="delivery_order_id"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_acc_iaanvoice_frm">
            <field name="name">Acc.invoice.view</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="replace">
                    <field string="Customer" name="partner_id"
                           context="{'search_default_customer':1, 'show_address': 1}"
                           options='{"always_reload": True}'
                           domain="[('customer', '=', True),('parent_id', '=', False)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
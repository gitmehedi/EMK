<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="delivery_order_form" model="ir.ui.view">
            <field name="name">delivery.order.form</field>
            <field name="model">delivery.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Order" delete="false" copy='0'>
                    <header>
                        <button name="action_validate" type="object" states="draft" string="Confirm" class="oe_highlight"
                        groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"/>

                        <button name="action_draft" type="object"
                                states="validate" string="Reset to Draft"
                                groups="gbs_application_group.group_head_account,gbs_application_group.group_cxo"/>

                        <button name="action_approve" type="object" states="validate"
                                string="Validate" class="oe_highlight"
                                groups="gbs_application_group.group_cxo,gbs_application_group.group_head_account"/>

                        <button name="action_close" type="object" states="approve"
                                string="Approve" class="oe_highlight"
                                groups="gbs_application_group.group_cxo,gbs_application_group.group_head_account"/>

                        <button name="action_draft" type="object" states="approve,validate"
                                string="Refuse"
                                groups="gbs_application_group.group_head_account,gbs_application_group.group_cxo"/>

                        <button string="Tag LC" name="%(action_view_lc_wizard)d" type="action"
                                states="validate" attrs="{'invisible':['|', ('so_type','!=','lc_sales'), ('lc_no', '!=', False)]}"
                                groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                                class="oe_highlight"/>

                        <field name="state" statusbar_visible="draft,validate,close" widget="statusbar"/>

                    </header>
                    <sheet>
                         <div class="oe_button_box" name="button_box">
                            <button type="object" string="Process Payments"
                                    name="action_process_unattached_payments"
                                    groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                                    class="oe_stat_button"
                                    attrs="{'invisible':['|', ('state','=','close'), ('so_type', '!=', 'cash')]}"
                                    icon="fa-usd">
                            </button>
                         </div>

	                    <h1>
	                        <field name="name"/>
                            <field name="da_button_show" invisible="1"/>
	                    </h1>
                        <group>
                            <group>
                                <field name="sale_order_id"/>
                                <field name="deli_address"/>
                            </group>
                            <group>
                                <field name="parent_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="so_type"/>
                                <field name="company_id" invisible="1"/>
                                <field name="so_date"/>

                                <field name="pi_no" attrs="{'invisible':[('so_type', '!=', 'lc_sales')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="lc_no" attrs="{'invisible':[('so_type', '!=', 'lc_sales')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>

                            </group>

                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="product_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="quantity" string="Ordered Qty"/>
                                            <field name="uom_id" string="UoM" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="pack_type"/>
                                            <field name="deli_mode" invisible="1"/>
                                            <field name="commission_rate"/>
                                            <field name="price_unit"/>
                                            <field name="price_subtotal"/>

                                        </tree>
                                    </field>
                                </page>

                                <page string="Other Information">
                                    <group>
                                        <group>
                                            <field name="warehouse_id"/>
                                            <field name="requested_by" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="requested_date"/>
                                        </group>
                                        <group>
                                            <field name="approver1_id" attrs="{'invisible': [('state','in',('draft','validate','approve'))]}" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="confirmed_date" attrs="{'invisible': [('state','in',('draft','validate','approve'))]}"/>
                                            <field name="approver2_id" attrs="{'invisible':['|', ('state','=','draft'),('state','=','validate')]}" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="approved_date"/>
                                        </group>
                                    </group>
                                </page>

                                <page string="Cash" attrs="{'invisible':[('so_type', '!=', 'cash')]}">
                                    <field name="cash_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="account_payment_id"/>
                                            <field name="amount"/>
                                            <field name="dep_bank"/>
                                            <field name="branch"/>
                                            <field name="validity"/>
                                            <field name="payment_date" string="Payment Date"/>

                                        </tree>
                                    </field>
                                </page>
                                <page string="Cheque" attrs="{'invisible':[('so_type', '!=', 'cash')]}">
                                    <field name="cheque_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="account_payment_id"/>
                                            <field name="number"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="amount"/>
                                            <field name="payment_date" string="Payment Date"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="T.T" attrs="{'invisible':[('so_type', '!=', 'cash')]}">
                                    <field name="tt_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="ref_num"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="amount"/>
                                             <field name="date"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="L/C" attrs="{'invisible':[('so_type', '!=', 'lc_sales')]}">
                                    <field name="lc_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="number"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="amount"/>
                                            <field name="date"/>
                                            <field name="tenure"/>
                                            <field name="transportation"/>
                                            <field name="lc_type"/>
                                            <field name="pi_no"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="delivery_order_tree" model="ir.ui.view">
            <field name="name">delivery.order.tree</field>
            <field name="model">delivery.order</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Order">
                    <field name="sale_order_id"/>
                    <!--<field name="type_id"/>-->
                    <field name="name" string="Delivery Authorization"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Generate automated sequence -->
        <record id="seq_hr_employee" model="ir.sequence">
            <field name="name">DA Sequences</field>
            <field name="code">delivery.order</field>
            <field name="prefix">DA</field>
            <field name="padding">6</field>
        </record>


        <record model="ir.actions.act_window" id="delivery_order_action">
            <field name="name">Delivery Order</field>
            <field name="res_model">delivery.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="delivery_order_menu" name="Delivery Authorization" parent="sales_team.menu_base_partner"
                  groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  sequence="12" action="delivery_order_action"/>
        <menuitem id="delivery_order_submenu" name="Delivery Authorization" parent="delivery_order_menu"
                  groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  action="delivery_order_action"/>
    </data>
</odoo>
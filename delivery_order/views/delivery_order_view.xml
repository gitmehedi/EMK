<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="delivery_order_form" model="ir.ui.view">
            <field name="name">delivery.order.form</field>
            <field name="model">delivery.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Order" delete="false">
                    <header>
                        <button name="action_confirm" type="object"
                                string="Apply" states="draft"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="Approve" states="applied"
                                class="oe_highlight"/>
                        <button name="action_draft" type="object"
                                string="Reject"
                                states="applied"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
	                    <h1>
	                        <field name="name"/>
	                    </h1>
                        <group>
                            <group>
                                <field name="sale_order_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="parent_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="payment_term_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="warehouse_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="so_type"/>
                                <field name="so_date"/>

                            </group>
                            <group>
                                <field name="deli_address"/>
                                <field name="approve_date"/>
                                <field name="approve_by"/>

                            </group>
                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="product_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="quantity"/>
                                            <field name="pack_type"/>
                                            <field name="deli_mode"/>
                                            <field name="uom_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Payment Terms:Cash">
                                    <field name="cash_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="amount"/>
                                            <field name="dep_bank"/>
                                            <field name="branch"/>
                                            <field name="validity"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Payment Terms:Cheque">
                                    <field name="cheque_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="number"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="amount"/>
                                             <field name="date"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Payment Terms:T.T">
                                    <field name="tt_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="ref_num"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="amount"/>
                                             <field name="date"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Payment Terms:L/C">
                                    <field name="lc_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="number"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="amount"/>
                                            <field name="date"/>
                                            <field name="tenure"/>
                                            <field name="transportation"/>
                                            <field name="lc_type"/>
                                            <field name="pi_no"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="delivery_order_tree" model="ir.ui.view">
            <field name="name">delivery.order.tree</field>
            <field name="model">delivery.order</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Order">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="delivery_order_action">
            <field name="name">Delivery Order</field>
            <field name="res_model">delivery.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="delivery_order_menu" name="Delivery Authorization" parent="sales_team.menu_base_partner"
            sequence="12" action="delivery_order_action"/>
        <menuitem id="delivery_order_submenu" name="Delivery Authorization" parent="delivery_order_menu"
                  action="delivery_order_action"/>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="delivery_order_layer_form" model="ir.ui.view">
            <field name="name">delivery.order.layer.form</field>
            <field name="model">delivery.order.layer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Order Layer" delete="false" copy='0'>
                    <header>
                        <button name="action_approve" type="object" states="draft" string="Confirm" class="oe_highlight"
                        groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"/>

                        <field name="state" statusbar_visible="draft,approved" widget="statusbar"/>
                    </header>
                    <sheet>
                         <div class="oe_button_box oe_right" name="button_box">
                            <button type="object"
                                name="action_view_delivery"
                                class="oe_stat_button"
                                icon="fa-truck"
                                attrs="{'invisible': [('state','!=','approved')]}"
                                groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo">
                                <field name="delivery_count" widget="statinfo" string="Delivery"/>
                            </button>
                         </div>

	                    <h1>
	                        <field name="name"/>
	                    </h1>
                        <group>
                            <group>
                                <field name="delivery_order_id"/>
                                <field name="sale_order_id"/>
                                <field name="deli_address"/>
                            </group>
                            <group>
                                <field name="parent_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="so_type"/>
                                <field name="company_id" invisible="1"/>
                                <field name="so_date"/>

                                <field name="pi_no" attrs="{'invisible':[('so_type', '!=', 'lc_sales')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="lc_no" attrs="{'invisible':[('so_type', '!=', 'lc_sales')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>

                            </group>

                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="product_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="quantity" string="Ordered Qty"/>
                                            <field name="uom_id" string="UoM" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="pack_type"/>
                                            <field name="deli_mode" invisible="1"/>
                                            <field name="commission_rate"/>
                                            <field name="tax_id"/>
                                            <field name="price_unit"/>
                                            <field name="price_subtotal"/>

                                        </tree>
                                    </field>
                                </page>

                                <page string="Other Information">
                                    <group>
                                        <group>
                                            <field name="warehouse_id"/>
                                            <field name="requested_by" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="requested_date"/>
                                        </group>
                                        <group>
                                            <field name="approver1_id" attrs="{'invisible': [('state','in',('draft','validate','approve'))]}" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="confirmed_date" attrs="{'invisible': [('state','in',('draft','validate','approve'))]}"/>
                                            <field name="approver2_id" attrs="{'invisible':['|', ('state','=','draft'),('state','=','validate')]}" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="approved_date"/>
                                        </group>
                                    </group>
                                </page>

                                <page string="Cash" attrs="{'invisible':[('so_type', '!=', 'cash')]}">
                                    <field name="cash_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="account_payment_id"/>
                                            <field name="amount"/>
                                            <field name="dep_bank"/>
                                            <field name="branch"/>
                                            <field name="validity"/>
                                            <field name="payment_date" string="Payment Date"/>

                                        </tree>
                                    </field>
                                </page>
                                <page string="Cheque" attrs="{'invisible':[('so_type', '!=', 'cash')]}">
                                    <field name="cheque_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="account_payment_id"/>
                                            <field name="amount"/>
                                            <field name="number"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="payment_date" string="Payment Date"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="T.T" attrs="{'invisible':[('so_type', '!=', 'cash')]}">
                                    <field name="tt_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="ref_num"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="amount"/>
                                             <field name="date"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="L/C" attrs="{'invisible':[('so_type', '!=', 'lc_sales')]}">
                                    <field name="lc_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="number"/>
                                            <field name="bank"/>
                                            <field name="branch"/>
                                            <field name="amount"/>
                                            <field name="date"/>
                                            <field name="tenure"/>
                                            <field name="transportation"/>
                                            <field name="lc_type"/>
                                            <field name="pi_no"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="tax_value" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="total_amount" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                         </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="delivery_order_tree" model="ir.ui.view">
            <field name="name">delivery.order.layer.tree</field>
            <field name="model">delivery.order.layer</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Orders ">
                    <field name="name" string="Delivery Order"/>
                    <field name="delivery_order_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Generate automated sequence -->
        <record id="do_seqs" model="ir.sequence">
            <field name="name">DO Sequences</field>
            <field name="code">delivery.order.layer</field>
            <field name="prefix">DO</field>
            <field name="padding">6</field>
        </record>


        <record model="ir.actions.act_window" id="delivery_order_layer_action">
            <field name="name">Delivery Order</field>
            <field name="res_model">delivery.order.layer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="delivery_order_layer_menu" name="Delivery Order" parent="sales_team.menu_base_partner"
                  groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  sequence="12" action="delivery_order_layer_action"/>

        <menuitem id="delivery_order_layer_submenu" name="Delivery Order" parent="delivery_order_layer_menu"
                  groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  action="delivery_order_layer_action"/>





    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rule_for_stock_delivery_user" model="ir.rule">
        <field name="name">Stock Location(All Access) For Delivery Operation</field>
        <field name="model_id" ref="stock.model_stock_location"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('stock.delivery_user'))]"/>
    </record>

    <record id="rule_for_stock_delivery_user_dashboard" model="ir.rule">
        <field name="name">For Delivery Operation (Only Get Delivery Order In Dashboard)</field>
        <field name="model_id" ref="stock.model_stock_picking_type"/>
        <field name="domain_force">[('operating_unit_id','in',user.operating_unit_ids.ids),('code', 'in',['outgoing','outgoing_return'])]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('stock.delivery_user'))]"/>
    </record>

</odoo>
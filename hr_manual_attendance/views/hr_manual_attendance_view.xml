<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- Tree View -->
		<record id="hr_manual_attendance_tree" model="ir.ui.view">
			<field name="name">hr_manual_attendance_tree</field>
			<field name="model">hr.manual.attendance</field>
			<field name="arch" type="xml">
				<tree string="HR Manual Attendance">
					<!-- <field name= "name" /> -->
					<field name= "employee_id" />					
					<field name="department_id" />
					<field name="sign_type" />
					<field name="reason" />
					<field name="check_in_time_full_day" />
					<field name="check_out_time_full_day" />
					<field name="check_in_time_sign_in" />
					<field name="check_in_time_sign_out" />
					<field name="is_it_official" />
					<field name="state" />
				</tree>
			</field>
		</record>
		
		<!-- Form View -->
		<record id="hr_manual_attendance_form" model="ir.ui.view">
			<field name="name">hr_manual_attendance_form</field>
			<field name="model">hr.manual.attendance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="HR Manual Attendance">
				 	<header>
	                    <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
                    	<button string="Approve" name="action_approve" states="confirm" type="object" class="oe_highlight"/>
                     	<button string="Refuse" name="action_refuse" states="confirm,validate" type="object" />
                    	<button string="Reset to Draft" name="action_draft" type="object"
                            attrs="{'invisible': ['|', ('state', 'not in', ['confirm', 'refuse'])]}"/> 

                    	<field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
                    	
                	</header>				
                	
					<sheet>
						<group>
							<group>
								<field name= "name" />
								<field name="employee_id" />
								<field name="department_id" />
							</group>
							<group>
								<field name="sign_type"/>
								<field name="check_out_time_full_day" attrs="{'invisible':[('sign_type','!=','full_day')]}" />				
								<field name="check_in_time_full_day" attrs="{'invisible':[('sign_type','!=','full_day')]}" />							
								<field name="check_in_time_sign_in" attrs="{'invisible':[('sign_type','!=','sign_in')]}" />
								<field name="check_in_time_sign_out" attrs="{'invisible':[('sign_type','!=','sign_out')]}" />
								<field name="is_it_official" />							
							</group>
	                        <field name="reason" nolabel="1" colspan="4" placeholder="Add a reason..."/>	
						</group>
	                </sheet>
	                					
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
	                
				</form>
			</field>
		</record>
		<record id="hr_manual_attendance" model="ir.actions.act_window">
			<field name="name">HR Manual Attendance</field>
			<field name="res_model">hr.manual.attendance</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_hr_manual_attendance" name="HR Manual Attendance"
			parent="hr_holidays.menu_hr_holidays_configuration" sequence="7"
			action="hr_manual_attendance" />
	</data>
</openerp>

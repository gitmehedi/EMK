<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>

		<menuitem id="hr_attendance.menu_hr_attendance_root" name="Attendances" sequence="90" groups="hr.group_hr_attendance,base.group_user" web_icon="hr_attendance,static/description/icon.png"/>

		<menuitem id="hr_attendance.menu_hr_attendance_manage_attendances" name="Manage Attendances" parent="hr_attendance.menu_hr_attendance_root" sequence="2" groups="hr.group_hr_manager"/>


		<!-- Tree View -->
		<record id="hr_manual_attendance_tree" model="ir.ui.view">
			<field name="name">hr_manual_attendance_tree</field>
			<field name="model">hr.manual.attendance</field>
			<field name="arch" type="xml">
				<tree string="HR Manual Attendance" create="false" edit="false">
					<field name= "employee_id" />
					<field name="department_id" />
					<field name="check_in" />
					<field name="check_out" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Form View -->
		<record id="hr_manual_attendance_form" model="ir.ui.view">
			<field name="name">hr_manual_attendance_form</field>
			<field name="model">hr.manual.attendance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="HR Manual Attendance" delete ="0" create="false" edit ="false">
					<header>
						<button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight" />
						<field name="current_user_is_approver" invisible="True" />
						<button string="Approve" name="action_approve" type="object" class="oe_highlight"
								attrs="{'invisible': ['|',('current_user_is_approver', '!=', True),('state', '!=', 'confirm')]}"/>
						<button string="Validate" name="action_validate" states="confirm" class="oe_highlight" type="object"
								groups="hr_attendance.group_hr_attendance_user"/>
						<button string="Refuse" name="action_refuse" type="object"
								attrs="{'invisible': ['|',('current_user_is_approver', '!=', True),('state', '!=', 'confirm')]}"/>
						<button string="Reset to Draft" name="action_draft" type="object" states="confirm"
								groups="gbs_application_group.group_dept_manager,hr_attendance.group_hr_attendance_user"/>
						<button string="Reset to Draft" name="action_draft" states="validate" type="object" groups="base_technical_features.group_technical_features"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
					</header>

					<sheet>
						<group>
							<group>
								<field name="employee_id"   attrs="{'readonly':['|', ('state','!=','draft'),('my_menu_check','=',True)]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
								<field name="department_id" attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm'),('state','=','draft')]}" readonly="1" />
							</group>
							<group>
								<field name="sign_type" attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')]}"/>
								<field name="check_in"  attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')] ,
																'invisible': [('sign_type', '=','sign_out')],'required': [('sign_type', '!=', 'sign_out')]}"/>}"/>
								<field name="check_out" attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')] ,
																'invisible': [('sign_type', '=','sign_in')],
																'required': [('sign_type', '!=', 'sign_in')]}"/>

								<field name="is_it_official" attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')]}"/>
								<field name="my_menu_check" invisible="1"/>
								<field name="pending_approver" groups="hr.group_hr_user"/>
							</group>
							<field name="reason" nolabel="1" colspan="4" placeholder="Add a reason..."
								   attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')]}"/>
						</group>
						<notebook>
							<page string="Approbations" groups="hr.group_hr_user">
								<field name="approbations_ids" groups="hr.group_hr_user">
									<tree>
										<field name="approver" />
										<field name="date" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>

					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>

				</form>
			</field>
		</record>
		<!--search view-->
		<record id="view_hr_manual_attendance_filter" model="ir.ui.view">
            <field name="name">hr.manual.attendance.filter</field>
            <field name="model">hr.manual.attendance</field>
			<field name="arch" type="xml">
				<search string="Search Pending Manual Attendances">
					<field name="employee_id"/>
                    <field name="department_id"/>
					<filter name ='my_approval' string="My Approval" domain="[('pending_approver.user_id','=',uid)]"/>
				</search>
            </field>
        </record>

		<record id="hr_manual_attendance" model="ir.actions.act_window">
			<field name="name">Manual Attendances</field>
			<field name="res_model">hr.manual.attendance</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="hr_my_attendance" model="ir.actions.act_window">
			<field name="name">My Attendances</field>
			<field name="res_model">hr.manual.attendance</field>
			<field name="domain">[('employee_id.user_id', '=', uid)]</field>
			<field name="context">{'default_my_menu_check': True}</field>
			<field name="create">false</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="hr_pandding_attendance" model="ir.actions.act_window">
			<field name="name">Pending Manual Attendances</field>
			<field name="res_model">hr.manual.attendance</field>
			<field name="domain">[('state','in',['confirm'])]</field>
			<field name="view_mode">tree,form</field>
			<field name="context" eval="{'search_default_my_approval':1}"/>
            <field name="search_view_id" ref="view_hr_manual_attendance_filter" />
		</record>

		<!-- Menu Item -->
		<menuitem id="menu_hr_manual_attendance" name="Manual Attendances" parent="hr_attendance.menu_hr_attendance_root"
				  sequence="15"/>
		<!--<menuitem id="menu_my_attendance" name="My Attendances" parent="menu_hr_manual_attendance"-->
				  <!--sequence="5" action="hr_my_attendance"/>-->
		<!--<menuitem id="menu_pending_attendance" name="Pending Approvals" parent="menu_hr_manual_attendance"-->
				  sequence="10" action="hr_pandding_attendance" groups="base.group_user"/>
		<menuitem id="menu_manual_attendance" name="Manual Attendances" parent="menu_hr_manual_attendance"
				  sequence="15" action="hr_manual_attendance" groups="gbs_application_group.group_dept_manager" />
	</data>
</odoo>

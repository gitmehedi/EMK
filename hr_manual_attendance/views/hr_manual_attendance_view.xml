<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		
		<menuitem id="hr_attendance.menu_hr_attendance_root" name="Attendances" sequence="90" groups="hr.group_hr_attendance,base.group_user" web_icon="hr_attendance,static/description/icon.png"/>
		
		<menuitem id="hr_attendance.menu_hr_attendance_manage_attendances" name="Manage Attendances" parent="hr_attendance.menu_hr_attendance_root" sequence="20" groups="hr.group_hr_manager"/>
		
		<!-- Tree View -->
		<record id="hr_manual_attendance_tree" model="ir.ui.view">
			<field name="name">hr_manual_attendance_tree</field>
			<field name="model">hr.manual.attendance</field>
			<field name="arch" type="xml">
				<tree string="HR Manual Attendance">
					<field name= "employee_id" />					
					<field name="department_id" />
					<field name="check_in" />
					<field name="check_out" />
					<field name="state" />
				</tree>
			</field>
		</record>
		
		<!-- Form View -->
		<record id="hr_manual_attendance_form" model="ir.ui.view">
			<field name="name">hr_manual_attendance_form</field>
			<field name="model">hr.manual.attendance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="HR Manual Attendance" delete ="0" create = "0">
				 	<header>
	                    <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight" />
                    	<button string="Approve" name="action_approve" states="confirm" type="object" class="oe_highlight" groups="hr.group_hr_manager"/>
                     	<button string="Refuse" name="action_refuse" states="confirm" type="object" groups="hr.group_hr_manager"/>
                    	<button string="Reset to Draft" name="action_draft" type="object" states="confirm" groups="hr.group_hr_manager"/>
                    	<field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>                    	
                	</header>				
                	
					<sheet>
						<group>
							<group>
								<field name="employee_id"   attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')]}"/>
								<field name="department_id" attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm'),('state','=','draft')]}"/>
							</group>
							<group>
								<field name="sign_type" attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')]}"/>
								<field name="check_in"  attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')] ,'invisible': [('sign_type', '=','sign_out')]}"/>
								<field name="check_out" attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')] ,'invisible': [('sign_type', '=','sign_in')]}"/>
								
								<field name="is_it_official" attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')]}"/>							
							</group>
	                        <field name="reason" nolabel="1" colspan="4" placeholder="Add a reason..." attrs="{'readonly':['|', ('state','=','validate'),('state','=','confirm')]}"/>	
						</group>
	                </sheet>
	                
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
	                
				</form>
			</field>
		</record>
		
		<record id="hr_manual_attendance" model="ir.actions.act_window">
			<field name="name">Manual Attendances</field>
			<field name="res_model">hr.manual.attendance</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<!-- Menu Item -->
		<menuitem id="menu_hr_manual_attendance" name="Manual Attendances" parent="hr_attendance.menu_hr_attendance_manage_attendances" 
					 sequence="7" action="hr_manual_attendance" />
	</data>
</openerp>

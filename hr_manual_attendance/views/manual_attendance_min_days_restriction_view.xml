<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		
		<!-- Tree View -->
		<record id="hr_manual_attendance_min_day_tree" model="ir.ui.view">
			<field name="name">hr_manual_attendance_min_day_tree_view</field>
			<field name="model">hr.manual.attendance.min.days</field>
			<field name="arch" type="xml">
				<tree string="Minimum Days Restriction">
					<field name="min_days_restriction" />
				</tree>
			</field>
		</record>
		
		<!-- Form View -->
		<record id="hr_manual_attendance_min_day_form" model="ir.ui.view">
			<field name="name">hr_manual_attendance_min_day_form_view</field>
			<field name="model">hr.manual.attendance.min.days</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Minimum Days Restriction">
					<sheet>
						<group>
							<field name="min_days_restriction" />
						</group>
			        </sheet>
				</form>
			</field>
		</record>
		
		<record id="hr_manual_attendance_min_day_ac" model="ir.actions.act_window">
			<field name="name">Minimum Days Restriction</field>
			<field name="res_model">hr.manual.attendance.min.days</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<!-- Menu Item -->
		<menuitem id="menu_hr_manual_attendance_min_day" name="Minimum Days Restriction" parent="hr_attendance.menu_hr_attendance_settings"  
					groups="hr.group_hr_attendance,base.group_system" sequence="7" action="hr_manual_attendance_min_day_ac" />
		
	</data>
</odoo>

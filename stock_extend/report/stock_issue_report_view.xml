<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Main template -->
		<template id="report_stock_issue_qweb">
			<t t-call="report.html_container">
				<t t-call="report.external_layout">
					<div class="page">
						<h2 class="text-center">
							Stock
							<t t-if="form['stock_type']=='1'">Issue</t>
							<t t-if="form['stock_type']=='2'">Return</t>
							<t t-if="form['stock_type']=='3'">Transfer</t>
							Report
						</h2>

						<div class="row">
							<div class="col-xs-2">
								<strong>From Date:</strong>
								<p t-esc="form['start_date']" />
							</div>
							<div class="col-xs-2">
								<strong>To Date:</strong>
								<p t-esc="form['end_date']" />
							</div>
							<t t-if="other['source_location'] !=''">
								<div class="col-xs-2">
									<strong>Source:</strong>
									<p t-esc="other['source_location']" />
								</div>
							</t>
							<t t-if="other['desti_location'] !=''">
								<div class="col-xs-3">
									<strong>Destination:</strong>
									<p t-esc="other['desti_location']" />
								</div>
							</t>
							<!--<div class="col-xs-3"> <strong>Period From:</strong> <p t-esc="get_start_date(data)" 
								/> </div> <div class="col-xs-3"> <strong>Period To: </strong> <p t-esc="get_end_date(data)" 
								/> </div> -->

							<div class="col-xs-3">
								<strong>Printing Date:</strong>
								<p t-esc="time.strftime('%Y-%m-%d %H:%M:%S')" />
							</div>
						</div>
						<table class="table table-bordered">
							<thead>
								<tr>
									<th>Product Name</th>
									<th>Quantity</th>
									<th>UOM</th>
									<t t-if="other['source_location'] ==''">
										<th>Source</th>
									</t>
									<t t-if="other['desti_location'] ==''">
										<th>Destination</th>
									</t>
								</tr>
							</thead>
							<tbody>
								<tr t-foreach="docs" t-as="line">
									<td>
										<span t-esc="line['product_name']" />
									</td>
									<td>
										<span t-esc="line['product_qty']" />
									</td>
									<td>
										<span t-esc="line['product_uom']" />
									</td>
									<t t-if="other['source_location'] ==''">
										<td>
											<span t-esc="line['source_loc']" />
										</td>
									</t>
									<t t-if="other['desti_location'] ==''">
										<td>
											<span t-esc="line['dest_loc']" />
										</td>
									</t>
								</tr>
								<!--<tr t-foreach="lines(data['ids'])" t-as="line"> <td> <span t-esc="line['product_name']" 
									/> </td> <td> <span t-esc="line['product_qty']" /> </td> <td> <span t-esc="line['product_uom']" 
									/> </td> <td> <span t-esc="line['source_loc']" /> </td> <td> <span t-esc="line['dest_loc']" 
									/> </td> </tr> -->
							</tbody>
						</table>
					</div>
				</t>
			</t>
		</template>


	</data>
</openerp>
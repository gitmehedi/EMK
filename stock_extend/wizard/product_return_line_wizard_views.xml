<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="product_return_wizard_view_form" model="ir.ui.view">
			<field name="name">product return Wizard</field>
			<field name="model">product.return.wizard</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<form string="product return">
					<sheet>
						<group>
							<group >
								<field name="purchase_type" widget="radio" class="oe_inline"/>
								<field name="order_no" class="oe_inline"/>
							</group>
						</group>
					</sheet>
					<footer>
						<button name="action_submit" type="object" string="Submit" class="oe_highlight"/>
						<button string="Cancel" special="cancel" class="oe_link"/>
					</footer>
				</form>
			</field>
		</record>
		
		<record id="product_return_wizard_action" model="ir.actions.act_window">
			<field name="name">product return wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="src_model">stock.picking</field>
			<field name="res_model">product.return.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="product_return_wizard_view_form" />
			<field name="target">new</field>
		</record>
		
		
	</data>
</openerp>
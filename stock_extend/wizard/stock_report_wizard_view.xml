<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Stock Transfer Menu -->
					
		<record id="view_wizard_stock_report_history" model="ir.ui.view">
            <field name="name">Stock Report</field>
            <field name="model">stock.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <field name="start_date"/>
                        <field name="end_date" />
                        <field name="stock_type" invisible='1'/>
                        <field name="source_loc" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'></field>
                        <field name="desti_loc" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'></field>
                    </group>
                    <footer>
                        <button name="stock_report" string="Submit" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
                
		<record id="action_wizard_stock_issue_report_history" model="ir.actions.act_window">
			<field name="name">Stock Issue</field>
			<field name="res_model">stock.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_wizard_stock_report_history" />
			<field name="context">{'default_stock_type': '1'}</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_action_wizard_stock_issue_report_history"
			action="action_wizard_stock_issue_report_history" parent="sub_group_menu_indent_stock_report"
			sequence="1" />
		
		<record id="action_wizard_stock_return_report_history" model="ir.actions.act_window">
			<field name="name">Stock Return </field>
			<field name="res_model">stock.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_wizard_stock_report_history" />
			<field name="context">{'default_stock_type': '2'}</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_action_wizard_stock_return_report_history"
			action="action_wizard_stock_return_report_history" parent="sub_group_menu_indent_stock_report"
			sequence="2" />
		
		<record id="action_wizard_stock_transfer_report_history" model="ir.actions.act_window">
			<field name="name">Stock Transfer</field>
			<field name="res_model">stock.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_wizard_stock_report_history" />
			<field name="context">{'default_stock_type': '3'}</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_action_wizard_stock_transfer_report_history"
			action="action_wizard_stock_transfer_report_history" parent="sub_group_menu_indent_stock_report"
			sequence="3" />
        
	</data>
</openerp>
<?xml version="1.0" encoding='utf-8'?>
<odoo>
    <data noupdate="0">

        <record id="point_of_sale.group_pos_user" model="res.groups">
            <field name="name">POS: Officers</field>
            <field name="category_id" ref="base.module_category_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user')),(4,ref('account.group_account_invoice'))]"/>
        </record>

        <record id="group_pos_gen_user" model="res.groups">
            <field name="name">POS: General User</field>
            <field name="category_id" ref="base.module_category_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="point_of_sale.group_pos_manager" model="res.groups">
            <field name="name">POS: Manager</field>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>
    </data>
</odoo>
<?xml version="1.0"?>
<odoo>

    <record id="view_renew_request_form" model="ir.ui.view">
        <field name="name">renew.request.form</field>
        <field name="model">renew.request</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Renew Request">
                <header>
                    <button string='Invoice' name="act_invoice" type='object' class="oe_highlight"
                            states="request" groups="member_user.group_mem_user_officer"/>
                    <button string='Reject' name="act_reject" type='object'
                            states="request" groups="member_user.group_mem_user_officer"/>
                    <field name="state" widget="statusbar" statusbar_visible="request,invoice,done"/>
                </header>
                <sheet>
                    <label for="membership_id"/>
                    <h1>
                        <field name="membership_id" options="{'no_create':True,'no_create_edit':True}"/>
                    </h1>
                    <group>
                        <group string="Membership Duration">
                            <field name="membership_type_id"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            <field name="membership_duration"/>
                            <field name="membership_state_date"/>
                            <field name="membership_end_date"/>
                        </group>
                        <group string="Payment Information" >
                            <field name="renew_amount"/>
                            <field name="request_date" readonly="1"/>
                            <field name="invoice_id" states="invoice"
                                   options="{'no_create':True,'no_create_edit':True}"/>
                            <field name="payment_ids" widget="many2many_tags" states="done"/>
                            <field name="payment_amount" states="done"/>
                            <field name="approve_date" states="done"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_renew_request_tree" model="ir.ui.view">
        <field name="name">renew.request.tree</field>
        <field name="model">renew.request</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Renew Request"
                  colors="green:state=='request'; gray:state=='done';blue:state=='invoice';red:state=='done';">
                <field name="name"/>
                <field name="membership_id"/>
                <field name="membership_state_date"/>
                <field name="membership_end_date"/>
                <field name="request_date"/>
                <field name="approve_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_renew_request">
        <field name="name">Renew Request</field>
        <field name="res_model">renew.request</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Renew Request for Member
            </p>
        </field>
    </record>

    <menuitem name="General Operation" id="menu_general" sequence="3" parent="membership.menu_association"
              groups="member_user.group_mem_user_officer,member_user.group_user_member,membership_extension.group_membership_manager"/>

    <menuitem id="sub_renew_request" parent="menu_general" action="action_renew_request"
              groups="member_user.group_mem_user_officer,member_user.group_user_member,membership_extension.group_membership_manager"/>
</odoo>
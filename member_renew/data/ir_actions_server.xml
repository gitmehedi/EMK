<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_send_notification_for_expiration" model="ir.actions.server">
        <field name="name">Send Email Notification</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="state">code</field>
        <field name="condition">True</field>
        <field name="code">record.notify_expiration()</field>
        <field name="groups_id" eval="[(4, ref('membership_user.group_mem_user_officer'))]"/>
    </record>
    <record id="action_notificationres_partner" model="ir.values">
        <field name="name">name</field>
        <field name="model">res.partner</field>
        <field name="key">action</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.server,%d'%action_send_notification_for_expiration"/>
    </record>

    <record id="ir_mail_notification_and_invoice" model="ir.cron">
        <field name="name">Send Invoice or Mail Notification</field>
        <field name="active">1</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(hours=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">res.partner</field>
        <field name="function">send_invoice_mail_notify</field>
    </record>

    <record id="ir_mail_notification_after_grace_period" model="ir.cron">
        <field name="name">Membership Inactive after Grace Period</field>
        <field name="active">1</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(hours=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">res.partner</field>
        <field name="function">inactive_user</field>
    </record>

</odoo>

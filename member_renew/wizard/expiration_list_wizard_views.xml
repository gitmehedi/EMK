<?xml version="1.0"?>
<odoo>
    <record id="view_expiration_list_form" model="ir.ui.view">
        <field name="name">expiration.list.wizard.form</field>
        <field name="model">expiration.list.wizard</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Expiration Lists">
                <group>
                    <group>
                        <field name="no_of_days"/>
                    </group>
                </group>
                <footer>
                    <button string='Send Email' name="send_mail" type='object' class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_expiration_list" model="ir.actions.act_window">
        <field name="name">Expiration</field>
        <field name="type">ir.actions.act_window</field>

        <field name="res_model">expiration.list.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem name="Expiration" id="menu_expiration_list" parent="membership.menu_association"/>
    <menuitem id="sub_expiration_list" parent="menu_expiration_list"
              action="action_expiration_list"/>


    <record id="action_send_notification_for_expiration" model="ir.actions.server">
        <field name="name">Expire Notification</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="state">code</field>
        <field name="condition">True</field>

        <field name="code">record.notify_expiration()</field>
    </record>
    <record id="action_res_partner" model="ir.values">
        <field name="name">name</field>
        <field name="model">res.partner</field>
        <field name="key">action</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.server,%d'%action_send_notification_for_expiration"/>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <record id="account_check_reject_view_form" model="ir.ui.view">
            <field name="name">account.check.reject.form</field>
            <field name="model">account.check.deposit</field>
            <field name="arch" type="xml">
                <form string="Checks Reject">
                    <header>
                        <button name="validate_reject" states="posting"
                                string="Reject"
                                type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="posting,reject" />
                    </header>
                    <sheet>
                        <h1>
                            <label string="Check Reject" />
                            <field name="name" class="oe_inline" />
                        </h1>
                        <group name="main">
                            <group name="left">
                                <field name="deposit_date" />
                                <field name="journal_id"
                                    widget="selection"/>
                                <field name="journal_default_account_id"
                                    invisible="1"/>
                                <field name="currency_id"
                                    groups="base.group_multi_currency"/>
                                <field name="partner_bank_id"/>
                            </group>
                            <group name="right">
                                <field name="company_id"
                                       groups="base.group_multi_company"/>
                                <field name="currency_none_same_company_id"
                                    invisible="1"/>
                                <field name="check_count"/>
                                <field name="total_amount" widget="monetary"
                                    options="{'currency_field': 'currency_id'}"/>
                                <field name="move_id"/>
                            </group>
                        </group>
                        <group string="Check Payments" name="check_payments">
                            <field name="check_payment_ids" nolabel="1"
                                   widget="many2many"
                                   domain="[('reconcile_id', '=', False),
                                            ('debit', '>', 0),
                                            ('check_deposit_id', '=', False),
                                            ('currency_id', '=', currency_none_same_company_id),
                                            ('account_id', '=', journal_default_account_id)]"
                                    context="{'currency': currency_id,
                                        'journal_id': journal_id}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_check_reject_view_tree" model="ir.ui.view">
            <field name="name">account.check.reject.tree</field>
            <field name="model">account.check.deposit</field>
            <field name="arch" type="xml">
                <tree string="Checks Reject" colors="blue:state=='draft';">
                    <field name="name"/>
                    <field name="deposit_date"/>
                    <field name="journal_id"/>
                    <field name="partner_bank_id"/>
                    <field name="check_count"/>
                    <field name="total_amount"/>
                    <field name="currency_id" groups="base.group_multi_currency"/>
                    <field name="is_reconcile"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_check_reject_search" model="ir.ui.view">
            <field name="name">account.check.reject.search</field>
            <field name="model">account.check.deposit</field>
           	<field name="mode">primary</field>
			<field name="priority" eval="20" />
			<field name="inherit_id" ref="account_check_deposit.view_check_deposit_search" />
            <field name="arch" type="xml">
            <!-- add your filter at the end -->
				<xpath expr="filter[@string='Done']" position="replace">
					<filter string="Deposit" domain="[('state','=','deposit')]" />
				</xpath>
				
				<xpath expr="filter[@string='Draft']" position="replace">
					<filter string="Posting" domain="[('state','=','posting')]" />
				</xpath>
	
				<!-- add your group at the end -->
<!-- 				<xpath expr="//filter[@string='Creation']" position="after">
					<filter string="My Groupe" domain="[]" context="{'group_by':'name'}" />
				</xpath> -->
            </field>
        </record>

		<record id="action_check_reject_tree" model="ir.actions.act_window">
            <field name="name">Checks Reject</field>
            <field name="res_model">account.check.deposit</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_check_reject_search" />
           	<field name="domain">[('state','in',['deposit','posting'])]</field>
        </record>
	
		<record id="action_check_reject_form_view_extend" model="ir.actions.act_window.view">
			<field eval="2" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="account_check_reject_view_form" />
			<field name="act_window_id" ref="action_check_reject_tree" />
		</record>

		<record id="action_check_reject_tree_view_extend" model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="account_check_reject_view_tree" />
			<field name="act_window_id" ref="action_check_reject_tree" />
		</record>
		
        <menuitem action="action_check_reject_tree" name="Checks Reject"
                  id="menu_check_reject_tree"
                  parent="account.menu_finance_bank_and_cash"
                  sequence="23"/>

    </data>
</openerp>

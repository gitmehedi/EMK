<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>
		<record id="view_move_line_tree_extend" model="ir.ui.view">
			<field name="name">account_check_deposit_extend.view_move_line_tree_extend</field>
			<field name="model">account.move.line</field>
			<field name="inherit_id" ref="account.view_move_line_tree" />
			<field name="arch" type="xml">
				<field name="reconcile_ref" position="after">
					<field name="cheque_date" />
					<field name="cheque_number" />
				</field>
			</field>
		</record>
		
		<record id="view_account_move_line_filter_extend" model="ir.ui.view">
            <field name="name">account_check_deposit_extend.view_account_move_line_filter_extend</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter" />
            <field eval="10" name="priority" />
            <field name="arch" type="xml">
				<!-- add your filter at the end -->
				<xpath expr="//field[@name='date']" position="after">
					<field string="Cheque Date" name="cheque_date" filter_domain="[('cheque_date','=', 'cheque_date')]" />
 					<field string="Cheque Number" name="cheque_number" filter_domain="[('cheque_number','ilike', 'cheque_number')]" />
 				</xpath>
           	</field>
        </record>
	</data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_shift_employee_batch_form" model="ir.ui.view">
			<field name="name">hr.shift.employee.batch.form</field>
			<field name="model">hr.shift.employee.batch</field>
			<field name="arch" type="xml">
				<form string="Shifting Batch">
					<header>
						<button name="%(action_hr_batch_employees)d" type="action" string="Assign Employee" class="oe_highlight"/>
					</header>
                    <sheet>
						<label for="name"/>
                    	<h1>
                        	<field name="name"/>
                    	</h1>
						<group col="4">
							<field name="shift_id" readonly="1"/>
							<label for="effective_from" string="Period"/>
							<div>
							   <field name="effective_from" class="oe_inline" readonly="1"/> - <field name="effective_end" class="oe_inline" readonly="1"/>
							</div>
	                    </group>
						<separator string="Employees"/>
						<field name="shift_emp_ids" readonly="1"/>
                    </sheet>
				</form>
			</field>
		</record>

        <record id="hr_shift_employee_batch_tree" model="ir.ui.view">
			<field name="name">hr.shift.employee.batch.tree</field>
			<field name="model">hr.shift.employee.batch</field>
			<field name="arch" type="xml">
				<tree string="Shifting History">
					<field name="name"/>
					<field name= "shift_id" />
					<field name="effective_from" />
					<field name="effective_end"/>
				</tree>
			</field>
		</record>

        <record id="action_hr_shift_batch" model="ir.actions.act_window">
			<field name="name">Employee Shifting Batch</field>
			<field name="res_model">hr.shift.employee.batch</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem id="main_menu_hr_shifting" name="Rostering"
				  parent="hr_attendance.menu_hr_attendance_root"
				  sequence="29" groups="hr.group_hr_user"/>

		<menuitem id="menu_hr_shift_employee_batch"
				  name="Employee Shifting Batch"
				  parent="main_menu_hr_shifting"
				  sequence="2" action="action_hr_shift_batch"
				  groups="hr.group_hr_user"/>
    </data>
</odoo>
		<!-- Tree View -->
		<record id="hr_shift_alter_tree" model="ir.ui.view">
			<field name="name">hr_shift_alter_tree</field>
			<field name="model">hr.shift.alter</field>
			<field name="arch" type="xml">
				<tree string="Alter Rostering">
					<field name="employee_id" />					
					<field name="alter_date" />
					<field name="duty_start" />
					<field name="duty_end" />
					<field name="is_included_ot" />
					<field name="ot_start" />
					<field name="ot_end" />
					<field name="grace_time" />
					<field name="state" />
				</tree>
			</field>
		</record>
		
		<!-- Form View -->
		<record id="hr_shift_alter_form" model="ir.ui.view">
			<field name="name">hr_shift_alter_form</field>
			<field name="model">hr.shift.alter</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Alter Rostering" delete ="0" create = "0">
				 	<header>
	                    <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
                    	<button string="Approve" name="action_approve" type="object" class="oe_highlight"
								groups="gbs_base_package.group_dept_manager,hr_attendance.group_hr_attendance_user" attrs="{'invisible':[('first_approval','=',False)]}"/>
                     	<button string="Refuse" name="action_refuse" states="confirmed" type="object" groups="hr_attendance.group_hr_attendance_user"/>
                    	<button string="Reset to Draft" name="action_draft" type="object" states="confirmed" groups="hr_attendance.group_hr_attendance_user"/>
                    	<field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved"/>
                	</header>	
					<sheet>
						<group>
							<group>
								<field name="employee_id" attrs="{'readonly':['|',('my_menu_check','=',True),('state','!=','draft')]}"
									   options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
								<field name="department_id" invisible="1"/>
								<field name="alter_date" attrs="{'readonly':['|', ('state','=','approved'),('state','=','confirmed')]}"/>
								<field name="duty_start" attrs="{'readonly':['|', ('state','=','approved'),('state','=','confirmed')]}"/>
								<field name="duty_end" attrs="{'readonly':['|', ('state','=','approved'),('state','=','confirmed')]}"/>
								<field name="my_menu_check" invisible="1"/>
								<field name="first_approval" invisible="1"/>
							</group>
							<group>
								<field name="is_included_ot" attrs="{'readonly':['|', ('state','=','approved'),('state','=','confirmed')]}"/>
								<field name="ot_start" attrs="{'readonly':['|', ('state','=','approved'),('state','=','confirmed')]}"/>
								<field name="ot_end" attrs="{'readonly':['|', ('state','=','approved'),('state','=','confirmed')]}"/>
								<field name="grace_time" attrs="{'readonly':['|', ('state','=','approved'),('state','=','confirmed')]}"/>
							</group>
						</group>
						<div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers"/>
							<field name="message_ids" widget="mail_thread"/>
	                	</div>
	                </sheet>
				</form>
			</field>
		</record>
		
		<record id="hr_shift_alter_action" model="ir.actions.act_window">
			<field name="name">Alter Rostering</field>
			<field name="res_model">hr.shift.alter</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="hr_my_shift_alter" model="ir.actions.act_window">
			<field name="name">My Shift Alter</field>
			<field name="res_model">hr.shift.alter</field>
			<field name="domain">[('employee_id.user_id', '=', uid)]</field>
			<field name="context">{'default_my_menu_check': True}</field>
			<field name="view_mode">tree,form</field>
		</record>

		
		<!-- Menu Item -->
		<menuitem id="menu_hr_alter" name="Alter Rostering" parent="hr_attendance.menu_hr_attendance_root"
					 sequence="16"/>
		<menuitem id="menu_hr_my_alter" name="My Alter Rostering" parent="menu_hr_alter"
					 sequence="5" action="hr_my_shift_alter" groups="base.group_user"/>
		<menuitem id="menu_hr_sh_alter" name="Alter Rostering" parent="menu_hr_alter"
					 sequence="10" action="hr_shift_alter_action" groups="gbs_base_package.group_dept_manager,hr_attendance.group_hr_attendance_user"/>
	</data>
</openerp>

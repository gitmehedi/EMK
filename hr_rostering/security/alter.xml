    <record id="hr_shift_alter_rule_holidays_officer" model="ir.rule">
        <field name="name">HR Shift Alter(Multi Operating Unit)</field>
        <field name="model_id" ref="model_hr_shift_alter"/>
        <field name="domain_force">[('employee_id.operating_unit_id.id','in',user.operating_unit_ids.ids)]</field>

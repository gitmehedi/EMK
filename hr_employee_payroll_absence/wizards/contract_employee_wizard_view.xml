<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<record id="contract_employee_wizard_view" model="ir.ui.view">
			<field name="name">contract.employee.wizard</field>
			<field name="model">contract.employee.wizard</field>
			<field name="arch" type="xml">
				<form string="HR Contract Employee">
                    <header>
                        <button icon="fa-cogs" string="Process" name="process_employee_line" type="object" class="oe_highlight"/>
                    </header>
                    <group>
                        <label colspan="4" nolabel="1" string="This form will process for all selected employee(s)"/>
                    </group>
                    <group colspan="4" >
                        <separator string="Employees" colspan="4"/>
                        <newline/>
                        <field name="employee_ids" nolabel="1" >
                        	<tree string="List" editable="bottom">
                        		<field name="name"/>
                        		<field name="work_phone"/>
                        	</tree>
                        </field>
                    </group>
					<footer>
						<button special="cancel" string="Cancel" />
                    </footer>
               </form>
			</field>
		</record>
		
		<record id="contract_employee_wizard_action_view" model="ir.actions.act_window">
			<field name="name">contract_employee_wizard_view</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">contract.employee.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

	</data>
</openerp>

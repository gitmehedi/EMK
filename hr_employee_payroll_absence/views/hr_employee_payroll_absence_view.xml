<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_employee_payroll_absence_form" model="ir.ui.view">
            <field name="name">hr.employee.payroll.absence.form</field>
            <field name="model">hr.employee.payroll.absence</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Payroll Absence" delete="false">
                    <header>
                        <button name="%(contract_employee_wizard_action_view)d"
                                type="action" string="Employee" class="oe_highlight" states="draft"/>
						<button name="action_confirm" type="object" string="Approve" states="draft"
                                class="oe_highlight"/>
                        <button name="action_done" type="object" groups="hr.group_hr_manager"
                                string="Done" states="approve" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Payroll Absence">
                                <field name="line_ids">
                                    <tree string="List" editable="bottom">
                                        <field name="employee_id"
                                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                        <field name="days"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_employee_payroll_absence_tree" model="ir.ui.view">
            <field name="name">hr.employee.payroll.absence.tree</field>
            <field name="model">hr.employee.payroll.absence</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Payroll Absence" decoration-info="state=='draft'"
                      decoration-success="state=='approve'" decoration-mute="state=='done'"
                      decoration-bf="state in ('approve',)">
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="hr_employee_payroll_absence_action">
            <field name="name">Payroll Absence</field>
            <field name="res_model">hr.employee.payroll.absence</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_employee_payroll_absence_menu" name="Payroll Absence Operation"
                  parent="hr_attendance.menu_hr_attendance_root"
                  action="hr_employee_payroll_absence_action" groups="hr.group_hr_user" sequence="30"/>
        <menuitem id="hr_employee_payroll_absences_menu" name="Payroll Absence"
                  parent="hr_employee_payroll_absence_menu"
                  action="hr_employee_payroll_absence_action" groups="hr.group_hr_user"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_return_picking_form" model="ir.ui.view">
        <field name="name">Return lines</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group/field[@name='location_id']" position="before">
                <field name="price_unit" required="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_return_picking_form_inherit_sale_stock" model="ir.ui.view">
        <field name="name">stock.return.picking.sale.stock.form</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="sale_stock.view_stock_return_picking_form_inherit_sale_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='to_refund_so']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_return_picking_form_duplicate" model="ir.ui.view">
            <field name="name">Return lines</field>
            <field name="model">stock.return.picking</field>
            <field name="arch" type="xml">
                <form>

                    <field name="move_dest_exists" invisible="1"/>
                    <group attrs="{'invisible': [('move_dest_exists', '=', False)]}">
                        <div class="oe_grey">
                            <p>This picking appears to be chained with another operation. Later, if you receive the
                                goods you are returning now, make sure to <b>reverse</b> the returned picking in order
                                to avoid logistic rules to be applied again (which would create duplicated operations)
                            </p>
                        </div>
                    </group>
                    <group>
                        <field name="product_return_moves" nolabel="1">
                            <tree editable="top" create="0">
                                <field name="product_id" readonly="1"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <field name="return_reason" required="1"/>
                    </group>
                    <group>
                        <field name="return_date" required="1"/>
                        <field name="cogs_move" invisible="1"/>
                        <field name="price_unit" readonly="1" attrs="{'invisible':[('cogs_move','=',False)]}"/>
                        <field name="price_unit_text" attrs="{'invisible':[('cogs_move','!=',False)]}"/>
                    </group>
                    <group>
                        <field name="parent_location_id" invisible="1"/>
                        <field name="original_location_id" invisible="1"/>
                        <field name="location_id" options="{'no_create': True, 'no_open': True}"
                               groups="stock.group_stock_multi_locations"/>
                    </group>
                    <footer>
                        <button name="create_return_obj" string="Return" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_stock_return_picking_duplicate">
            <field name="name">Reverse Transfer</field>
            <field name="res_model">stock.return.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_stock_return_picking_form_duplicate"/>
            <field name="target">new</field>
        </record>

        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="204"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="type_code" invisible="1"/>
                </xpath>

                <xpath expr="//header/button[@name='%(stock.act_stock_return_picking)d']" position="replace">
                    <button name="%(stock.act_stock_return_picking)d" string="Return(Default)" states="done"
                            type="action" groups="base.group_private_addresses"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="%(gbs_samuda_sales_return.act_stock_return_picking_duplicate)d" string="Return"
                            class="btn-danger" type="action"
                            attrs="{'invisible': ['|','|',('state', '!=', 'done'),('type_code','=','outgoing_return'),('type_code','=','incoming_return')]}"
                            groups="gbs_application_group.group_sale_return"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
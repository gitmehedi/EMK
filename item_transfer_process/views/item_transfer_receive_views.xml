<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Item Receiving Tree View -->
        <record id='view_item_transfer_receive_tree' model='ir.ui.view'>
            <field name="name">view.item.transfer.receive.tree</field>
            <field name="model">item.borrowing</field>
            <field name="arch" type="xml">
                <tree string="Receive Item" create="false" default_order="request_date desc" ecoration-bf="message_needaction == True"
                      colors="gray:state=='approved';green:state=='waiting_approval';red:state=='reject';">
                    <field name="name"/>
                    <field name="item_transfer_send_id"/>
                    <field name="issuer_id"/>
                    <field name="request_date"/>
                    <field name="receive_date"/>
                    <field name="operating_unit_id"/>
                    <field name="state"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- Item Receiving Form View -->
        <record id='view_item_transfer_receive_form' model='ir.ui.view'>
            <field name="name">view.item.transfer.receive.form</field>
            <field name="model">item.borrowing</field>
            <field name="arch" type="xml">
                <form string="Receive Item" create="false">
                    <header>
                        <button name="button_confirm_receive" string="Confirm" states="draft"
                                class="oe_highlight" type="object" groups="stock.group_stock_user"/>
                        <button name="button_approve_receive" string="Approve" states="waiting_approval" type="object"
                                class="oe_highlight" groups="stock.group_stock_manager"/>
                        <button name="button_reject" string="Reject" states="waiting_approval" type="object"
                                groups="stock.group_stock_manager"/>
                        <button string="Reset to Draft" name="action_draft"
                                states="waiting_approval" type="object"
                                groups="stock.group_stock_manager"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,waiting_approval,approved"
                               statusbar_colors='{"reject":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_get_stock_picking"
                                    string="Stock Operation" type="object"
                                    attrs="{'invisible':[('picking_id','=',False)]}" icon="fa-cogs"/>
                            <field name="picking_id" invisible="1"/>
                            <!--<button class="oe_stat_button" name="action_get_adjustment_picking"-->
                            <!--string="Adjustment Operation" type="object"-->
                            <!--attrs="{'invisible':[('return_picking_id','=',False)]}" icon="fa-cogs"/>-->
                        </div>
                        <group col="2">
                            <group>
                                <field name="is_transfer" invisible="1"/>
                                <field name="issuer_id" readonly="1"/>
                                <field name="request_date"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="receive_date" readonly="1"
                                       attrs="{'invisible': [('state', '=', 'draft')]}"/>
                                <field name="item_transfer_send_id" readonly="1"/>
                                <field name="approved_date" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                                <field name="approver_id" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Items">
                                <field name="item_lines" context="{'operating_unit_id': operating_unit_id}">
                                    <tree string="Items" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="product_uom" string="UOM"/>
                                        <field name="product_uom_qty" sum="Total Qty"/>
                                        <field name="received_qty" sum="Total Received" invisible="1" readonly="1"/>
                                        <field name="given_qty" sum="Total Given" invisible="1" readonly="1"/>
                                        <field name="due_qty" sum="Total Due" invisible="1" readonly="1"/>
                                        <field name="price_unit" invisible="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                                <div class="oe_clear">
                                    <label for="description"/>
                                </div>
                                <field name="description" class="oe_inline" placeholder="The material ..."/>
                            </page>
                            <page string="Other">
                                <group>
                                    <group>
                                        <field name="location_id" readonly="1"/>
                                        <field name="item_loan_borrow_location_id"
                                               options="{'no_create': True,'no_open':True}"/>
                                        <field name="picking_type_id"/>
                                    </group>
                                    <group>
                                        <field name="company_id" groups="base.group_multi_company"
                                               options="{'no_create': True,'no_open':True}"/>
                                        <field name="operating_unit_id" options="{'no_create': True,'no_open':True}"
                                               groups="operating_unit.group_multi_operating_unit"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="view_item_transfer_receive_search" model="ir.ui.view">
            <field name="name">view.item.transfer.receive.search</field>
            <field name="model">item.borrowing</field>
            <field name="arch" type="xml">
                <search string="Receive Items">
                    <field name="item_transfer_send_id"/>
                    <field name="name"/>
                    <field name="issuer_id"/>
                    <field name="request_date"/>
                    <field name="receive_date"/>
                    <field name="operating_unit_id"/>
                    <filter string="Draft" domain="[('state', '=', 'draft')]"
                            name="draft_state"></filter>
                    <filter string="Waiting Approval" domain="[('state', '=', 'waiting_approval')]"
                            name="waiting_approval_state"></filter>
                    <filter string="Approved" domain="[('state', '=', 'approved')]"
                            name="approved_state"></filter>
                    <filter string="Reject" domain="[('state', '=', 'reject')]"
                            name="reject_state"></filter>
                </search>
            </field>
        </record>


        <!-- Item Receiving Window Action -->
        <record id='action_item_transfer_receive' model='ir.actions.act_window'>
            <field name="name">Receive Items</field>
            <field name="res_model">item.borrowing</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_transfer', '=', True)]</field>
            <field name="context">{'default_is_transfer': True, 'search_default_draft_state': 1,
                'search_default_waiting_approval_state': 1}
            </field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                    (0, 0, {'sequence': 1001, 'view_mode': 'tree', 'view_id': ref('view_item_transfer_receive_tree')}),
                    (0, 0, {'sequence': 1002, 'view_mode': 'form', 'view_id': ref('view_item_transfer_receive_form')}),
                ]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new record for receiving items.
                </p>
            </field>
            <field name="search_view_id" ref="view_item_transfer_receive_search"/>
        </record>


        <!--Inherit existing loan lending action to add context-->
        <record id="item_loan_process.action_item_borrowing" model="ir.actions.act_window">
            <field name="domain">[('is_transfer', '=', False)]</field>
            <field name="context">{'default_is_transfer': False}</field>
        </record>

        <record id="item_loan_process.action_pending_item_borrowing" model="ir.actions.act_window">
            <field name="domain">[('is_transfer', '=', False)]</field>
            <field name="context">{'default_is_transfer': False}</field>
        </record>


        <menuitem name="Receive Items"
                  parent="main_menu_item_transfer" id="receive_items_menu" sequence="2"
                  groups="stock.group_stock_user"/>


        <menuitem action="action_item_transfer_receive" name="All Records"
                  parent="receive_items_menu" id="receive_items_all_records_menu" sequence="1"
                  groups="stock.group_stock_user"/>


    </data>
</odoo>
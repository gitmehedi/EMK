<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Item Sending Tree View -->
        <record id='view_item_transfer_send_tree' model='ir.ui.view'>
            <field name="name">view.item.transfer.send.tree</field>
            <field name="model">item.loan.lending</field>
            <field name="arch" type="xml">
                <tree string="Send Item" default_order="request_date desc" ecoration-bf="message_needaction == True"
                      colors="gray:state=='approved';green:state=='waiting_approval';red:state=='reject';">
                    <field name="name"/>
                    <field name="issuer_id"/>
                    <field name="request_date"/>
                    <field name="operating_unit_id"/>
                    <field name="receiving_operating_unit_id"/>
                    <field name="is_transfer" invisible="1"/>
                    <field name="state"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- Item Sending Form View -->
        <record id='view_item_transfer_send_form' model='ir.ui.view'>
            <field name="name">view.item.transfer.send.form</field>
            <field name="model">item.loan.lending</field>
            <field name="arch" type="xml">
                <form string="Send Item">
                    <header>
                        <button name="print_challan" string="Print Transfer Challan"
                          class="oe_highlight" type="object" groups="stock.group_stock_user"
                            attrs="{'invisible': [('is_picking_done', '=', False)]}"/>

                        <button name="button_confirm_for_sending" string="Confirm" states="draft"
                                class="oe_highlight" type="object" groups="stock.group_stock_user"/>

                        <button name="button_approve_for_sending" string="Approve for Sending" states="waiting_approval"
                                type="object"
                                class="oe_highlight" groups="stock.group_stock_manager"/>
                        <button name="button_reject" string="Reject" states="waiting_approval" type="object"
                                groups="stock.group_stock_manager"/>
                        <button string="Reset to Draft" name="action_draft"
                                groups="stock.group_stock_manager"
                                states="waiting_approval" type="object"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,waiting_approval,approved"
                               statusbar_colors='{"reject":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_get_stock_picking"
                                    string="Stock Operation" type="object"
                                    attrs="{'invisible':[('picking_id','=',False)]}" icon="fa-cogs"/>
                            <field name="picking_id" invisible="1"/>
                        </div>
                        <group>
                            <group>
                                <field name="is_transfer" invisible="1"/>
                                <field name="issuer_id"/>
                                <field name="request_date" readonly="0"/>


                                <field name="borrower_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="operating_unit_id" string='Sending Unit'
                                       options="{'no_create': True,'no_open':True}"
                                       groups="operating_unit.group_multi_operating_unit"/>

                                <field name="receiving_operating_unit_id" string='Receiver Unit'
                                       options="{'no_create': True,'no_open':True}"
                                       groups="operating_unit.group_multi_operating_unit"
                                       attrs="{'required': [('is_transfer', '=', True)]}"
                                />
                                <field name="approved_date" invisible="1"/>
                                <field name="approver_id" invisible="1"/>

                            </group>

                        </group>
                        <notebook>
                            <page string="Items">
                                <field name="item_lines" context="{'operating_unit_id': operating_unit_id}">
                                    <tree string="Items" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="qty_available" readonly="1"/>
                                        <field name="product_uom" string="UOM"/>
                                        <field name="product_uom_qty" sum="Total Qty"/>
                                        <field name="given_qty" sum="Total Given Qty" invisible="1" readonly="1"/>
                                        <field name="received_qty" sum="Total Receive Qty" invisible="1" readonly="1"/>
                                        <field name="due_qty" sum="Total Due" invisible="1" readonly="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                                <div class="oe_clear">
                                    <label for="description"/>
                                </div>
                                <field name="description" placeholder="The material ..."/>
                            </page>
                            <page string="Others">
                                <group>
                                    <group>
                                        <field name="location_id" readonly="1"
                                               options="{'no_create': True,'no_open':True}"/>
                                        <field name="picking_type_id" invisible="1"/>
                                        <field name="is_picking_done" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="item_loan_location_id" readonly="1"/>

                                        <field name="company_id" readonly="1" groups="base.group_multi_company"
                                               options="{'no_create': True,'no_open':True}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="view_item_transfer_send_search" model="ir.ui.view">
            <field name="name">view.item.transfer.send.search</field>
            <field name="model">item.loan.lending</field>
            <field name="arch" type="xml">
                <search string="Send Items">
                    <field name="name"/>
                    <field name="issuer_id"/>
                    <field name="request_date"/>
                    <field name="operating_unit_id"/>
                    <field name="receiving_operating_unit_id"/>
                    <filter string="Draft" domain="[('state', '=', 'draft')]"
                            name="draft_state"></filter>
                    <filter string="Waiting Approval" domain="[('state', '=', 'waiting_approval')]"
                            name="waiting_approval_state"></filter>
                    <filter string="Approved" domain="[('state', '=', 'approved')]"
                            name="approved_state"></filter>
                    <filter string="Reject" domain="[('state', '=', 'reject')]"
                            name="reject_state"></filter>
                </search>
            </field>
        </record>

        <!-- Item Sending Window Action -->
        <record id='action_item_transfer_send' model='ir.actions.act_window'>
            <field name="name">Send Items</field>
            <field name="res_model">item.loan.lending</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_transfer', '=', True)]</field>
            <field name="context">{'default_is_transfer': True, 'search_default_draft_state': 1,
                'search_default_waiting_approval_state': 1}
            </field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                    (0, 0, {'sequence': 1001, 'view_mode': 'tree', 'view_id': ref('view_item_transfer_send_tree')}),
                    (0, 0, {'sequence': 1002, 'view_mode': 'form', 'view_id': ref('view_item_transfer_send_form')}),
                ]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new record for sending items.
                </p>
            </field>
            <field name="search_view_id" ref="view_item_transfer_send_search"/>
        </record>


        <!--Inherit existing loan lending action to add context-->
        <record id="item_loan_process.action_item_loan_lending" model="ir.actions.act_window">
            <field name="domain">[('is_transfer', '=', False)]</field>
            <field name="context">{'default_is_transfer': False}</field>
        </record>

        <record id="item_loan_process.action_pending_item_loan_lending" model="ir.actions.act_window">
            <field name="domain">[('is_transfer', '=', False)]</field>
            <field name="context">{'default_is_transfer': False}</field>
        </record>

        <!-- Item Transfer Main Menu -->

        <menuitem name="Item Transfer Process" parent="stock.menu_stock_root" id="main_menu_item_transfer"
                  sequence="5" groups="stock.group_stock_user"/>

        <menuitem name="Send Items"
                  parent="main_menu_item_transfer" id="send_items_menu" sequence="1"
                  groups="stock.group_stock_user"/>

        <menuitem action="action_item_transfer_send" name="All Records"
                  parent="send_items_menu" id="send_items_all_records_menu" sequence="1"
                  groups="stock.group_stock_user"/>


    </data>
</odoo>
    <data>
        <record id="action_sale_order_comm" model="ir.actions.act_window">
            <field name="name">Sales Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','done'),('type_id.sale_order_type','=','lc_sales')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Approved list of the sales orders are show in here
                </p>
            </field>
        </record>

        <record id="action_sale_pi_comm" model="ir.actions.act_window">

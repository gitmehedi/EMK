<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_letter_credit_export_filter" model="ir.ui.view">
            <field name="name">letter.credit.filter</field>
            <field name="model">letter.credit</field>
            <field name="arch" type="xml">
                <search string="Search Letter of Credit">
                    <field name="name"/>
                    <filter name="active" string="Active" domain="[('state', 'in', ('draft','open','confirmed','amendment','progress'))]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="lc_export_foreign_creation_action">
            <field name="name">Letter of Credit: Export</field>
            <field name="res_model">letter.credit</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','export'),('region_type','=','foreign')]</field>
            <field name="context">{'default_type': 'export','default_region_type': 'foreign','search_default_active':1}</field>
            <field name="view_id" ref="export_letter_credit_tree_view"/>
            <field name="search_view_id" ref="view_letter_credit_export_filter"/>
        </record>

        <record model="ir.actions.act_window" id="lc_export_local_creation_action">
            <field name="name">Letter of Credit: Export</field>
            <field name="res_model">letter.credit</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','export'),('region_type','=','local')]</field>
            <field name="context">{'default_type': 'export','default_region_type': 'local','search_default_active':1}</field>
            <field name="view_id" ref="export_letter_credit_tree_view"/>
            <field name="search_view_id" ref="view_letter_credit_export_filter"/>
        </record>

        <record id="action_cnf_quotation_view1" model="ir.actions.act_window.view">
            <field eval="111" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="export_letter_credit_tree_view"/>
            <field name="act_window_id" ref="lc_export_local_creation_action"/>
        </record>
        <record id="action_cnf_quotation_view2" model="ir.actions.act_window.view">
            <field eval="112" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_lc_export_form"/>
            <field name="act_window_id" ref="lc_export_local_creation_action"/>
        </record>

        <record id="action_cnf_quotation_view3" model="ir.actions.act_window.view">
            <field eval="111" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="export_letter_credit_tree_view"/>
            <field name="act_window_id" ref="lc_export_foreign_creation_action"/>
        </record>
        <record id="action_cnf_quotation_view4" model="ir.actions.act_window.view">
            <field eval="112" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_lc_export_form"/>
            <field name="act_window_id" ref="lc_export_foreign_creation_action"/>
        </record>

        <menuitem id="lc_export_creation_menu" parent="sales_team.menu_base_partner"
            sequence="10" name="Letter of Credit" groups="group_export_lc_local,group_export_lc_foreign"/>

        <menuitem id="lc_export_foreign_submenu" name="Export LC(Foreign)" parent="lc_export_creation_menu"
                  action="lc_export_foreign_creation_action" groups="group_export_lc_foreign"/>

        <menuitem id="lc_commercial_export_foreign_creation_submenu" name="Export LC(Foreign)" parent="letter_of_credit.lc_commercial_creation_menu"
                sequence="1" action="lc_export_foreign_creation_action" groups="group_export_lc_foreign"/>

        <menuitem id="lc_export_local_submenu" name="Export LC(Local)" parent="lc_export_creation_menu"
                  action="lc_export_local_creation_action" groups="group_export_lc_local"/>

        <menuitem id="lc_commercial_export_local_creation_submenu" name="Export LC(Local)" parent="letter_of_credit.lc_commercial_creation_menu"
                sequence="3" action="lc_export_local_creation_action" groups="group_export_lc_local"/>

    </data>
</odoo>
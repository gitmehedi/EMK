<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <act_window name="Print Reports"
                res_model="lc.sales.report.wizard"
                src_model="purchase.shipment"
                view_mode="form" target="new"
                view_type="form"
                groups="commercial.group_commercial_user_export"
                id="act_lc_sales_report"/>

        <record id="view_shipment_export_form" model="ir.ui.view">
            <field name="name">purchase.shipment.form</field>
            <field name="model">purchase.shipment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Shipment" delete="false" copy='0' create="false">
                    <link rel="stylesheet" href="/lc_sales_product/static/src/css/lc_style.css"></link>
                    <header>

                        <button string="Reset to Draft" name="action_draft" type="object" attrs="{'invisible': [('state', 'in', ('draft'))]}" groups="base_technical_features.group_technical_features"/>
                        <button string="Delivery Goods" name="action_doc_receive_export" states="draft" type="object" class="oe_highlight"/>
                        <button string="Send to Email" name="action_email_temp" states="draft,receive_doc,done" type="object" class="oe_read_only"/>
                        <button string="Done" name="action_done_export" states="receive_doc" type="object" class="oe_highlight"/>
                        <button string="Cancel" name="action_cancel" class="oe_read_only" type="object" states="draft,on_board"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,receive_doc,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"></div>
                        <group name="details">
                            <group string="Shipment Details" colspan="4">
                                <group>
                                    <field name="lc_id" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    <field name="name" attrs="{'readonly': [('state','=','done')]}"/>
                                </group>
                                <group>
                                    <field name="arrival_date" required="1" string="Dispatch Date" attrs="{'readonly': [('state','=','done')]}"/>
                                </group>
                                <!--<separator string="Comments"/>-->
                                <!--<field name="comment" nolabel="1" attrs="{'readonly': [('state','=','done')]}"/>-->
                            </group>

                            <group string="Invoice">
                                <field name="invoice_id" required="1" attrs="{'readonly': [('state','=','done')]}" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="invoice_value" required="1" attrs="{'readonly': [('state','=','done')]}"/>
                            </group>
                            <group string="Transport Information">
                                <field name="transport_by" attrs="{'readonly': [('state','=','done')]}"/>
                                <field name="vehical_no" attrs="{'readonly': [('state','=','done')]}"/>
                            </group>
                            <group string="Packing Details" colspan="4">
                                <group>
                                    <field name="gross_weight" required="1" attrs="{'readonly': [('state','=','done')]}"/>
                                    <field name="net_weight" required="1" attrs="{'readonly': [('state','=','done')]}"/>
                                </group>
                                <group>
                                    <field name="weight_uom" required="1" attrs="{'readonly': [('state','=','done')]}"
                                        options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                </group>
                            </group>
                            <group colspan="4">
                                <p><b>Total(Jar/Drum/Bag/Balk): &#x2063;&#x2063;</b>
                                <field name="count_qty" required="1" class="oe_inline" nolable="1" style="width: 70px !important" attrs="{'readonly': [('state','=','done')]}"/>
                                &#x2063;&#x2063;<field name="count_uom" required="1" class="oe_inline" nolable="1"
                                       style="width: 80px !important" attrs="{'readonly': [('state','=','done')]}"
                                         options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    </p>
                            </group>

                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="shipment_product_lines">
                                        <tree string="Purchase Order Lines" create="false" delete="false" editable="false">
                                            <field name="product_id" readonly='1'/>
                                            <field name="name" readonly='1'/>
                                            <field name="date_planned" readonly='1'/>
                                            <field name="product_qty" string="Qty" readonly='1' />
                                            <field name="product_uom" string="UOM" readonly='1'/>
                                            <field name="price_unit" invisible='1'/>
                                        </tree>

                                    </field>
                                    <div class="oe_clear"/>
                                </page>
                                <page string="Attachments">
                                    <field name="shipment_attachment_ids" widget="one2many" class="lc_attachment">
                                        <tree string="Attachments" editable="top">
                                            <field name="name" string="Title"/>
                                            <field name="datas_fname" invisible="1"/>
                                            <field name="db_datas" filename="datas_fname"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Remarks">
                                    <field name="comments" widget="html" options="{'style-inline': true}" attrs="{'readonly': [('state','=','done')]}"/>
                                </page>

                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>
    </data>
</odoo>
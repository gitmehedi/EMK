<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_shipment_export_form" model="ir.ui.view">
            <field name="name">purchase.shipment.form</field>
            <field name="model">purchase.shipment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Shipment" delete="false" copy='0' create="false">
                    <link rel="stylesheet" href="/lc_sales_product/static/src/css/lc_style.css"></link>
                    <header>

                        <button string="Reset to Draft" name="action_draft" type="object" attrs="{'invisible': [('state', 'in', ('draft'))]}" groups="base_technical_features.group_technical_features"/>
                        <button string="Delivery GoodsB" name="action_doc_receive_export" states="draft" type="object" class="oe_highlight"/>
                        <button string="Send to Email" name="action_email_temp" states="draft,on_board,receive_doc,send_to_cnf,eta,cnf_quotation,approve_cnf_quotation,cnf_clear,gate_in,done" type="object" class="oe_read_only"/>
                        <button string="Done" name="action_done_export" states="gate_in" type="object" class="oe_highlight"/>
                        <button string="Cancel" name="action_cancel" class="oe_read_only" type="object" states="draft,on_board"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,receive_doc,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"></div>
                        <group name="details">
                            <group string="Shipment Details" colspan="4">
                                <group>
                                    <field name="name"/>
                                    <field name="etd_date"/>
                                    <field name="eta_date"/>
                                </group>
                                <group>
                                    <field name="lc_id" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    <field name="arrival_date"/>
                                </group>
                                <separator string="Comments"/>
                                <field name="comment" nolabel="1"/>
                            </group>

                            <group string="Invoice">
                                <field name="invoice_number"/>
                                <field name="invoice_value"/>
                            </group>
                            <group string="Transport Information">
                                <field name="transport_by"/>
                                <field name="vehical_no"/>
                                <!--<field name="employee_ids" widget="many2many_tags"/>-->
                            </group>
                            <group string="Bill Of Lading">
                                <field name="bill_of_lading_number"/>
                                <field name="shipment_date"/>
                            </group>
                            <group string="Packing List">
                                <field name="net_weight"/>
                                <field name="gross_weight"/>
                            </group>

                            <notebook colspan="4">
                                <page string="Products" attrs="{'invisible': [('state', 'in', ('draft','on_board'))]}">
                                    <field name="shipment_product_lines">
                                        <tree string="Purchase Order Lines" create="false" delete="false" editable="false">
                                            <field name="product_id" readonly='1'/>
                                            <field name="name" readonly='1'/>
                                            <field name="date_planned" readonly='1'/>
                                            <field name="product_qty" readonly='1' />
                                            <field name="product_uom" readonly='1'/>
                                            <field name="price_unit" invisible='1'/>
                                        </tree>

                                    </field>
                                    <div class="oe_clear"/>
                                </page>
                                <page string="Attachments">
                                    <field name="shipment_attachment_ids" widget="one2many" class="lc_attachment">
                                        <tree string="Attachments" editable="top">
                                            <field name="name" string="Title"/>
                                            <field name="datas_fname" invisible="1"/>
                                            <field name="db_datas" filename="datas_fname"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Remarks">
                                    <field name="comments" widget="html" options="{'style-inline': true}"/>
                                </page>

                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>
    </data>
</odoo>
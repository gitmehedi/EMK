<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="lc_amendment_wizard" model="ir.ui.view">
            <field name="name">lc.amendment.wizard</field>
            <field name="model">lc.amendment.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Please Enter The Information" create="false" edit="false">
                    <group>
                        <group>
                            <field name="amendment_date"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Save" name="save_action" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
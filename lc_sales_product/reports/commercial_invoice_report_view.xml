<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <report
                id="action_commercial_invoice"
                string="Commercial Invoice"
                model="purchase.shipment"
                report_type="qweb-pdf"
                file="lc_sales_product.report_commercial_invoice"
                name="lc_sales_product.report_commercial_invoice"
                paperformat="custom_report.paperformat_backend_portrait"

        />

        <template id="report_commercial_invoice">
            <t t-call="report.html_container">
                <t t-call="custom_report.gbs_internal_layout">
                    <div class="page" style="page-break-inside: auto">
                        <style>
                            .table-caption {
                            border: 1px solid #ddd;
                            border-bottom: none;
                            font-size: 14px;
                            font-weight: bold;
                            margin: 0;
                            padding: 5px 5px;
                            }
                        </style>
                        <div class="row">
                            <div class="clearfix">
                                <h3 class="report-title">Commercial Invoice</h3>

                            </div>
                            <style>
                                table, th, td {
                                border: 1px solid black;
                                border-collapse: collapse;
                                }
                                th, td {
                                padding: 5px;
                                }
                            </style>
                            <table>
                                <tr>
                                    <td>
                                        <p>
                                            <u>Exporter</u>
                                        </p>
                                        <b>
                                            <p>
                                                <span t-esc="data['company_id']"/>
                                            </p>
                                        </b>
                                        <p>
                                            <b>Facory:</b>
                                            <span t-esc="data['factory']"/>
                                        </p>
                                    </td>

                                    <td>
                                        <table>
                                            <tr>
                                                <td>Invoice No:
                                                    <b>
                                                        <span t-esc="data['invoice_id']"/>
                                                    </b>
                                                </td>
                                                <td>Invoice Date:
                                                    <b>
                                                        <span t-esc="data['invoice_date']"/>
                                                    </b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <u>Terms of Delivery:</u>
                                                    <p>PI No:
                                                        <b>
                                                            <span t-esc="data['pi_id']"/>
                                                        </b>
                                                    </p>
                                                    <p>PI Date:
                                                        <b>
                                                            <span t-esc="data['pi_date']"
                                                                  t-options='{"widget": "date"}'/>
                                                        </b>
                                                    </p>

                                                </td>

                                                <td>
                                                    <u>Loading</u>
                                                    <p>
                                                        <span t-esc="data['factory']"/>
                                                    </p>
                                                </td>
                                            </tr>
                                            <td>Packing: Export Standard</td>
                                            <td>
                                                <u>Destination</u>
                                                <p>Applicant' Factory</p>
                                            </td>
                                        </table>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <p>
                                            <u>Buyer</u>
                                        </p>
                                        <b>
                                            <p>
                                                <span t-esc="data['buyer']"/>
                                            </p>
                                            <p><span t-esc="data['buyer_address']"/></p>
                                        </b>
                                    </td>
                                    <td>
                                        <table>
                                            <p>Drawn under the Documentary Credit No.:</p>
                                            <b>
                                                <span t-esc="data['lc_id']"/>
                                            </b>
                                            Date:
                                            <b>
                                                <span t-esc="data['lc_date']"/>
                                            </b>
                                            <p>
                                                <center>of</center>
                                            </p>
                                            <b>
                                                <span t-esc="data['second_party_bank']"/>
                                            </b>

                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p t-raw="data['terms_condition']"/>
                                    </td>
                                    <td>
                                        <table>
                                            <p>We certify that the goods supplied are of Bangladesh origin and strictly
                                                in
                                                accordance
                                                with the Proforma Invoice No.
                                            </p>
                                            <p>
                                                <b>
                                                    <span t-esc="data['pi_id']"/>
                                                </b>
                                            </p>
                                            <p>PI Date:
                                                <b>
                                                    <span t-esc="data['pi_date']" t-options='{"widget": "date"}'/>
                                                </b>
                                            </p>

                                        </table>
                                    </td>
                                </tr>

                            </table>

                            <table class="table table-report-xs table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>SL</th>
                                        <th>Product</th>
                                        <th>H.S Code No</th>
                                        <th class="text-right">Quantity (MT)</th>
                                        <th class="text-right">Unit Price (Per MT)</th>
                                        <th class="text-right">Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <br/>
                                    <center>
                                        <u>Description of Goods</u>
                                    </center>

                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid" class="text-center">
                                            <td style="width:2%">
                                                <span t-esc="l_index+1"/>
                                            </td>
                                            <td>
                                                <span t-esc="l['name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="l['hs_code']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="l['quantity']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'%.2f'% l['unit_price']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'%.2f'% l['total_price']"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td></td>
                                        <td>Total</td>
                                        <td></td>
                                        <td class="text-right">
                                            <span t-esc="total_qty"/>
                                        </td>
                                        <td></td>
                                        <td class="text-right">
                                            <span t-esc="'%.2f'% total_price"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <p>
                                In Words:
                                <b>
                                    <span t-esc="amt_to_word"/>
                                </b>
                            </p>
                            <div class="text-right">

                                <p>For and on behalf of</p>
                                <p>
                                    <span t-esc="data['company_id']"/>
                                </p>
                                <br/>
                                <br/>
                                <p>Authorised Signature</p>
                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
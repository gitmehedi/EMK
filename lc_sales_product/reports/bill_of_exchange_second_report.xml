<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <report
                id="action_bill_exchange_second"
                string="Bill OF Exchange(Second)"
                model="purchase.shipment"
                report_type="qweb-pdf"
                file="lc_sales_product.report_bill_exchange_second"
                name="lc_sales_product.report_bill_exchange_second"
                paperformat="custom_report.paperformat_backend_portrait"
                menu="False"

        />

        <template id="report_bill_exchange_second">
            <t t-call="report.html_container">
                <div class="page" style="page-break-inside: auto">
                    <h4 class="text-center"><b>Bill Of Exchange(Second)</b></h4>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-xs-9">
                            <p>For <span t-esc="data['currency_id']"/> <strong t-esc="data['invoice_value']"/> </p>
                        </div>
                        <div class="col-xs-3">
                            <p>No.: <strong t-esc="data['invoice_id']"/></p>
                            <p>Date: <strong t-esc="data['invoice_date']"/></p>
                        </div>
                    </div>
                    <br/>
                    <div>
                        <p><strong>Second</strong> Bill of Exchange(<b>First</b> Unpaid)</p>
                        <br/>
                        <p>Tenure: <strong t-esc="data['tenure']"/></p>
                        <p>Pay to the order of: <strong t-esc="data['first_party_bank']"/>. <strong t-esc="data['first_party_bank_add']"/></p>
                        <p>Sum of <span t-esc="data['currency_id']"/> Dollar: <span t-esc="amt_to_word"/></p>
                    </div>
                    <hr class="hr-sm mb-0"/>
                    <div class="row">
                        <table class="table table-report table-bordered table-striped">
                            <thead>
                                <p>Value received against <b><strong t-esc="price_total"/></b> delivery of</p>
                                <tr class="odo-bg-gray">
                                    <th>Sl#</th>
                                    <th>Products</th>
                                    <th>Quantity</th>
                                    <th>Unit</th>
                                    <th>Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lists" t-as="l">
                                    <tr style="page-break-inside: avoid">
                                        <td><span t-esc="l_index+1"/></td>
                                        <td><span t-esc="l['product_id']"/></td>
                                        <td><span t-esc="l['uom']"/></td>
                                        <td><span t-esc="l['quantity']"/></td>
                                        <td><span t-esc="'%.2f'% l['price_unit']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <p>Proforma Invoice No: <b><strong t-esc="data['invoice_value']"/></b> Date: <b><strong t-esc="data['invoice_date']"/></b></p>
                    </div>

                    <hr class="hr-sm mb-0"/>
                    <div class="row">
                        <div class="col-xs-8">
                            <p t-raw="data['terms_condition']"/>
                        </div>
                        <div class="col-xs-4">
                            <p>Drawn under the Document Credit No:</p>
                            <p><strong t-esc="data['lc_id']"/> Date: <strong t-esc="data['issue_date']"/> of</p>
                            <p t-raw="data['second_party_bank']"/>
                        </div>
                    </div>
                    <hr class="hr-sm mb-0"/>
                    <div class="row">
                        <div class="col-xs-6">
                            <p>To:      <strong t-esc="data['second_party_bank']"/></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <p>A/C:     <strong t-esc="data['second_party_applicant']"/>,</p>
                            <p>         <strong>Office: </strong><strong t-esc="data['delivery_address']"/></p>
                            <p>         <strong>Factory: </strong><strong t-esc="data['invoice_address']"/></p>
                        </div>
                    </div>
                    <hr class="hr-sm mb-0"/>
                    <div class="row mb32 text-right" style="margin-top:10mm;">
                        <div class="col-xs-10 text-left">
                            <p>For and on behalf of <span t-esc="data['first_party']"/></p>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <p style="border-top: 1px solid black;width: 20%;">Authorized Signature</p>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
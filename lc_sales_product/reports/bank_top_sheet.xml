<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <report
                id="action_top_sheet"
                string="BankTopSheet"
                model="purchase.shipment"
                report_type="qweb-pdf"
                file="lc_sales_product.report_top_sheet"
                name="lc_sales_product.report_top_sheet"
                paperformat="custom_report.paperformat_backend_portrait"
                menu="False"

        />

        <template id="report_top_sheet">
            <t t-call="report.html_container">
                <t t-call="custom_report.gbs_custom_pad_report_template">
                    <div class="page" style="page-break-inside: auto">
                        <style>
                            .table-caption {
                            border: 1px solid #ddd;
                            border-bottom: none;
                            font-size: 14px;
                            font-weight: bold;
                            margin: 0;
                            padding: 5px 5px;
                            }
                        </style>
                        <div class="row">
                            <p>Date: </p>
                            <br/>
                            <br/>
                            <p>To</p>
                            <p>The Manager,</p>
                            <p t-esc="data['first_party_bank']"/>
                            <p t-raw="data['first_party_bank_add']"/>
                            <br/>
                            <p>Sub: Request for negotiation/collection of Export document amounting to <strong t-esc="data['currency_id']"/> <strong t-esc="data['invoice_value']"/> against L/C No: <strong t-esc="data['lc_id']"/> Date: <b><span t-esc="data['issue_date']"/></b></p>
                            <br/>
                            <p>Dear Sir,</p>
                            <p>With reference to above, we are pleased to submit/enclose herewith the following document for your negotiation.</p>
                            <br/>
                        </div>
                        <p><b>The enclosed documents are:</b></p>

                        <table style="border: none !important;">
                            <tbody>
                                <tr>
                                    <td>Draft : </td>
                                    <td>1 Set</td>
                                </tr>
                                <t t-foreach="lists" t-as="l">
                                    <tr style="page-break-inside: avoid; border-top: none !important;" class="text-left">
                                        <td><span t-esc="l['name']"/> :  </td>
                                        <td><span t-esc="l['original']"/> Original+    <span t-esc="l['copy']"/> Copies</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <br/>
                        <p>Your prompt action in this respect is solicited.</p>
                        <br/>
                        <br/>
                        <p>Thank you.</p>
                        <br/>
                        <br/>
                        <p>For and on behalf of</p>
                        <p><span t-esc="data['company']"/></p>
                        <br/>
                        <br/>
                        <p>Authorised Signature</p>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
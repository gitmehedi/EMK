<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <report
                id="action_bill_exchange"
                string="Bill OF Exchange(First)"
                model="purchase.shipment"
                report_type="qweb-pdf"
                file="lc_sales_product.report_bill_exchange"
                name="lc_sales_product.report_bill_exchange"
                paperformat="custom_report.paperformat_backend_portrait"
                menu="False"

        />

        <template id="report_bill_exchange">
            <t t-call="report.html_container">
                <t t-call="custom_report.gbs_custom_pad_report_template">
                    <div class="page" style="page-break-inside: auto">
                        <style>
                            .bill-ofexchange {}
                        </style>
                        <h4 class="text-center"><b>Bill Of Exchange(First)</b></h4>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-xs-9">
                                <p>For <span t-esc="data['currency_id']"/> <strong t-esc="data['invoice_value']"/> </p>
                            </div>
                            <div class="col-xs-3">
                                <p>No.: <strong t-esc="data['invoice_id']"/> <br/>
                                   Date: <strong t-esc="data['invoice_date']"/></p>
                            </div>
                        </div>
                        <br/>
                        <div>
                            <p><strong>First</strong> Bill of Exchange(<b>Second</b> Unpaid)</p>
                            <br/>
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="w20">Tenure:</td>
                                        <td><span t-esc="data['tenure']"/></td>
                                    </tr>
                                    <tr>
                                        <td class="w20">Pay to the order of:</td>
                                        <td><span t-esc="data['first_party_bank']"/>. <strong t-esc="data['first_party_bank_add']"/></td>
                                    </tr>
                                    <tr>
                                        <td class="w20">Sum of <span t-esc="data['currency_id']"/>:</td>
                                        <td><strong t-esc="amt_to_word"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <hr class="hr-sm mb-0"/>

                        <div class="clearfix">
                            <table class="table table-report table-bordered table-striped">
                                <thead>
                                    <p>Value received against <b><strong t-esc="price_total"/></b> delivery of</p>
                                    <tr class="odo-bg-gray">
                                        <th>Sl#</th>
                                        <th>Products</th>
                                        <th>Quantity</th>
                                        <th>Unit</th>
                                        <th>Rate</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid">
                                            <td><span t-esc="l_index+1"/></td>
                                            <td><span t-esc="l['product_id']"/></td>
                                            <td><span t-esc="l['uom']"/></td>
                                            <td><span t-esc="l['quantity']"/></td>
                                            <td><span t-esc="'%.2f'% l['price_unit']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <div class="text-center">Proforma Invoice No:
                                <t t-foreach="pi_list" t-as="p">
                                    <strong t-esc="p['number']"/> Date: <strong t-esc="p['date']"/>
                                </t>
                            </div>
                        </div>

                        <hr class="hr-sm mb-0"/>

                        <div class="row">
                            <div class="col-xs-6 text-center">
                                <p t-raw="data['terms_condition']"/>
                            </div>
                            <div class="col-xs-6 text-center">
                                <p>Drawn under the Document Credit No:</p>
                                <p><strong t-esc="data['lc_id']"/> Date: <strong t-esc="data['issue_date']"/></p>
                                <p>of</p>
                                <p t-raw="data['second_party_bank']"/>
                            </div>
                        </div>
                        <hr class="hr-sm mb-0"/>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="w75px">To: </td>
                                    <td><span t-esc="data['second_party_bank']"/></td>
                                </tr>
                                <tr>
                                    <td>A/C: </td>
                                    <td><span t-esc="data['second_party_applicant']"/></td>
                                </tr>
                                <tr>
                                    <td>Office: </td>
                                    <td><span t-esc="data['invoice_address']"/></td>
                                </tr>
                                <tr>
                                    <td>Factory: </td>
                                    <td><span t-esc="data['delivery_address']"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <hr class="hr-sm mb-0"/>

                        <div class="row mb32 text-right">
                            <div class="col-xs-12 text-right">
                                <p>For and on behalf of <span t-esc="data['first_party']"/></p>
                                <br/>
                                <br/>
                                <br/>
                                <p>-------------------------------</p>
                                <p>Authorized Signature</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
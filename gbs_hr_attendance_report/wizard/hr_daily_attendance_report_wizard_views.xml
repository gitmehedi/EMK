<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report
                id="custom_report_of_daily_attendance"
                model="daily.attendance.report.wizard"
                string="Daily Attendance Report"
                report_type="qweb-pdf"
                name="gbs_hr_attendance_report.report_daily_att_doc"
                file="gbs_hr_attendance_report.report_daily_att_doc"
        />

        <record id="daily_attendance_report_form" model="ir.ui.view">
            <field name="name">daily.attendance.report.wizard.form</field>
            <field name="model">daily.attendance.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Daily Attendance Report">
                    <sheet>
                        <group>
                            <field name="required_date"/>
                            <field name="operating_unit_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}' groups="operating_unit.group_multi_operating_unit"/>
                            <field name="department_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                        </group>
                        <footer>
                            <button name ="process_report" string="Print" type="object" class="oe_highlight"  />
                            <button special="cancel" string="Cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_daily_attendance_report_wizard" model="ir.actions.act_window">
            <field name="name">Daily Attendance Summary</field>
            <field name="res_model">daily.attendance.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="daily_attendance_report_menu"
				  name="Daily Attendance Summary Report"
                  action="action_daily_attendance_report_wizard"
                  parent="hr_attendance.menu_hr_attendance_report"
                  groups="hr_attendance.group_hr_attendance_user"
		/>

    </data>
</openerp>
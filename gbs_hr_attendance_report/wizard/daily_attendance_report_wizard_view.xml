<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
		<!-- Form View -->
		<record id="hr_daily_attendance_form" model="ir.ui.view">
			<field name="name">hr.daily.attendance.form</field>
			<field name="model">hr.daily.attendance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Daily Attendance">
					<sheet>
						<group>
							<field name="report_type" placeholder="Please Select" />
							<field name="department_id" options="{'no_open': True}"
								   attrs="{'invisible': [('report_type', '!=', 'department_type')]}" />
							<field name="employee_id" options="{'no_open': True}"
								   attrs="{'invisible': [('report_type', '!=', 'employee_type')]}" />
							<field name="date" options="{'no_create': True, 'no_create_edit':True}" />
                    	</group>
						<footer>
							<button name ="process_report" string="Print" type="object" class="oe_highlight"  />
                    		<button special="cancel" string="Cancel" />
						</footer>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Menu Action -->
		<record id="daily_attendance_action" model="ir.actions.act_window">
			<field name="name">Daily Attendance</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.daily.attendance</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

        <!--Menu Item-->
		<menuitem id="daily_attendance_menu" name="Daily Attendance"
				  parent="hr_attendance.menu_hr_attendance_manage_attendances"
				  action="daily_attendance_action" />
    </data>
</openerp>
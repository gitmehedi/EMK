<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<record id="hr_bank_selection_wizard_view" model="ir.ui.view">
			<field name="name">hr.attendance.report.wizard.View</field>
			<field name="model">hr.attendance.report.wizard</field>
			<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="check_in_out" options="{'no_create': True, 'no_create_edit':True}" />
						<field name="from_date"/>
						<field name="to_date"/>
						<field name="type" placeholder="Please Select" />
						<field name="operating_unit_id"
                                   options='{"no_open": True,"no_create": 1, "no_create_edit":1}'
                                   groups="operating_unit.group_multi_operating_unit"
							   attrs="{'invisible': [('type', '!=', 'op_type')]}"/>
						<field name="department_id" placeholder="Please Select"
									   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
									   attrs="{'invisible': [('type', '!=', 'department_type')]}" />
						<field name="employee_id" placeholder="Please Select"
									   options="{'no_create_edit': True, 'no_open': True}"
									   attrs="{'invisible': [('type', '!=', 'employee_type')]}" />
                    </group>
				</sheet>
				<footer>
					<button name ="process_report" string="Print" type="object" class="oe_highlight"  />
                    <button special="cancel" string="Cancel" />
				</footer>
               </form>
			</field>
		</record>

		<record id="action_hr_attendance_report_wizard" model="ir.actions.act_window">
			<field name="name">Attendance Report Generation</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.attendance.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem id="attendance_report_menu"
				  name="Attendance Report"
				  groups="hr_attendance.group_hr_attendance_user"
				  parent="hr_attendance.menu_hr_attendance_report"
                  action="action_hr_attendance_report_wizard"
		/>

		<menuitem id="menu_hr_attendance_report_custom"
				  name="Attendance Analysis"
				  parent="hr_attendance.menu_hr_attendance_report"
				  sequence="30"
				  groups="hr_attendance.group_hr_attendance_user"
				  action="hr_attendance.hr_attendance_action_graph"
		/>

	</data>
</openerp>

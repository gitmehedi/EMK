<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<template id="report_individual_payslip2">
			<t t-call="report.external_layout">
				<t t-call="report.html_container">
					<t t-name="report.external_layout">
						<div class="page">
							<div class="row">
								<table class="table table-bordered">
									<thead>
										<th>Employee</th>
										<th>Department</th>
										<th>Designation</th>
										<t t-foreach="all_val_list[0]" t-as="r">
											<th>
												<span t-esc="r"></span>

											</th>
										</t>

									</thead>

									  <tbody>
										  <t t-foreach="all_val_list" t-as="val">
											  <th>
												<span t-esc="val['emp_name']"></span>
											  </th>

											  <th>
												<span t-esc="val['designation']"></span>
											  </th>

											  <th>
												<span t-esc="val['dept']"></span>
											  </th>

											 <t t-foreach="all_val_list[0]" t-as="r">
											<th>
												<span t-esc="r_value"></span>
											</th>
										</t>
										</t>


									</tbody>


								</table>
							</div>
						</div>
					</t>
				</t>
			</t>

		</template>
	</data>
</openerp>
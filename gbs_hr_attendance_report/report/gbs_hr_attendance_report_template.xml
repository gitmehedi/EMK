<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<report
                id="attendance_report"
                string="Attendance Report"
                model="hr.attendance"
                report_type="qweb-pdf"
                file="gbs_hr_attendance_report.report_attendance_doc"
                name="gbs_hr_attendance_report.report_attendance_doc"
                menu="False"
                paperformat="report_layout.paperformat_backend_landscape"
        />
		<template id="report_attendance_doc">
			<t t-call="report.html_container">
				<t t-call="report_layout.gbs_internal_layout">
					<div class="page">
						<div class="row" style="page-break-inside: auto">
							<h3>Attendance Report for  <span t-esc="check_type_friendly_str "></span> </h3>
							<table class="table table-report-xs table-bordered table-striped">
								<thead>
									<tr style="background-color:#f5f5f5;">
										<th>Name</th>
										<th>Department</th>
										<th>Designation</th>
										<t t-foreach="dynamic_col_list" t-as="c">
											<th>
												<span t-esc="c"></span>
											</th>
										</t>
									</tr>
								</thead>
								<tbody>
									<t t-foreach="all_val_list" t-as="emp">
										<tr>
											<td>
												<span class="text-nowrap" t-esc="emp['emp_name']"></span>
											</td>
											<td>
												<span class="text-nowrap" t-esc="emp['dept']"></span>
											</td>
											<td>
												<span class="text-nowrap" t-esc="emp['designation']"></span>
											</td>

											<t t-foreach="dynamic_col_list" t-as="c">
												<td class="text-right">
													<span t-esc="emp[c]"></span>
												</td>
											</t>

										</tr>
									</t>
								</tbody>
							</table>
						</div>
						<t t-call="report_layout.report_signing"></t>
					</div>
				</t>
			</t>
		</template>
	</data>
</odoo>
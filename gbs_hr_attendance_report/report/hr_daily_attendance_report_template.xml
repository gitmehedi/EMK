<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>
        <report
                id="custom_report_of_daily_attendance"
                model="daily.attendance.report.wizard"
                string="Daily Attendance Report"
                report_type="qweb-pdf"
                name="gbs_hr_attendance_report.report_daily_att_doc"
                file="gbs_hr_attendance_report.report_daily_att_doc"
                paperformat="custom_report.paperformat_backend_portrait"
        />
        <template id="report_daily_att_doc">
            <t t-call="report.html_container">
                <t t-call="custom_report.gbs_internal_layout">
                    <!--<t t-foreach="docs" t-as="o">-->
                    <div class="page" style="page-break-inside: auto">
                        <style>
                            .unit-title {
                                position: relative;
                                border-bottom:1px solid #ededed;
                                padding-bottom:10px;
                            }

                        </style>
                        <div class="row">
                            <div class="col-xs-12">
                                <h4 class="text-center">Daily Attendance Summary Report</h4>
                                <hr/>
                            </div>
                        </div>
                        <div>
                            <div class="row">
                                <div class="col-xs-8">
                                    <div class="col-xs-8"><strong>Report Date : </strong><span t-esc="required_date"/></div>
                                    <!--<div class="col-xs-5"><span t-esc="required_date"/></div>-->
                                </div>
                                <div class="col-xs-4">
                                    <div class="row">
                                        <div class="col-xs-12"><strong>Printing Time : </strong><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></div>
                                        <!--<div class="col-xs-5"><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></div>-->
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12"><strong>Printed By : </strong><span t-esc="user.name"/></div>
                                        <!--<div class="col-xs-5"><span t-esc="user.name"/></div>-->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <t t-if="not operating_unit">
                            <div class="clearfix">
                                <hr/>
                                <h4 class="text-primary">
                                    <strong>Company Name :</strong> <span t-esc="company_name"/>
                                </h4>
                                <!--<div class="col-xs-6"><span t-esc="company_name"/></div>-->
                                <div class="row">
                                    <div class="col-xs-4">
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Total Employee:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(l['total_emp'] for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>On Time Present:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['on_time_present']) for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Late:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['late']) for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Absent:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['absent']) for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Leave:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['leave']) for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Alter Roster:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['alter_roster']) for l in att_summary_list)"/></div>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 col-xs-offset-4">
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Short Leave:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['short_leave']) for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Rest:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['rest']) for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Roster Not Mapped:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['roster_obligation']) for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Duty Not Start:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['unworkable']) for l in att_summary_list)"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Holidays:</strong></div>
                                            <div class="col-xs-3"><span t-esc="sum(len(l['holidays']) for l in att_summary_list)"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div><br/>
                        </t>
                        <t t-foreach="att_summary_list" t-as="att_summary">
                            <div class="clearfix">
                                <h4 class="text-primary unit-title">
                                    <span>Operating Unit :</span> <span t-esc="att_summary['unit_name']"/>
                                </h4>
                                <!--<div class="col-xs-3"><span t-esc="att_summary['unit_name']"/></div>-->
                                <div class="row">
                                    <div class="col-xs-4">
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Total Employee:</strong></div>
                                            <div class="col-xs-3"><span t-esc="att_summary['total_emp']"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>On Time Present:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['on_time_present'])"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Late Present:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['late'])"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Absent:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['absent'])"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Leave:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['leave'])"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Alter Roster:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['alter_roster'])"/></div>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 col-xs-offset-4">
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Short Leave:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['short_leave'])"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Rest:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['rest'])"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Roster Not Mapped:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['roster_obligation'])"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Duty Not Start:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['unworkable'])"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-9"><strong>Holidays:</strong></div>
                                            <div class="col-xs-3"><span t-esc="len(att_summary['holidays'])"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <t t-if="att_summary['late']">
                                <div>
                                    <div style="margin:15px 0 5px 0">
                                        <h4 class="text-center">Late Employee List</h4>
                                    </div>
                                    <table class="table table-bordered table-striped table-condensed">
                                        <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>Name</th>
                                                <th>Department</th>
                                                <th>Designation</th>
                                                <th>Check In Time</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="att_summary['late']" t-as="l">
                                                <tr style="page-break-inside: avoid">
                                                    <td><span t-esc="l_index+1"/></td>
                                                    <td><span t-esc="att_summary['late'][l_index].name"/></td>
                                                    <td><span t-esc="att_summary['late'][l_index].dept"/></td>
                                                    <td><span t-esc="att_summary['late'][l_index].designation"/></td>
                                                    <td><span t-esc="att_summary['late'][l_index].check_in"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </t>

                            <t t-if="att_summary['absent']">
                                <div class="clearfix">
                                    <div style="margin:15px 0 5px 0">
                                        <h4 class="text-center">Absent Employee List</h4>
                                    </div>
                                    <table class="table table-bordered table-striped table-condensed">
                                        <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>Name</th>
                                                <th>Department</th>
                                                <th>Designation</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="att_summary['absent']" t-as="l">
                                                <tr style="page-break-inside: avoid">
                                                    <td><span t-esc="l_index+1"/></td>
                                                    <td><span t-esc="att_summary['absent'][l_index].name"/></td>
                                                    <td><span t-esc="att_summary['absent'][l_index].dept"/></td>
                                                    <td><span t-esc="att_summary['absent'][l_index].designation"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </t>

                            <t t-if="att_summary['roster_obligation']">
                                <div class="clearfix">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <h4 class="text-primary">Roster Not Mapped</h4>
                                        </div>
                                    </div>
                                    <table class="table table-bordered table-striped table-condensed">
                                        <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>Name</th>
                                                <th>Department</th>
                                                <th>Designation</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="att_summary['roster_obligation']" t-as="l">
                                                <tr style="page-break-inside: avoid">
                                                    <td><span t-esc="l_index+1"/></td>
                                                    <td><span t-esc="att_summary['roster_obligation'][l_index].name"/></td>
                                                    <td><span t-esc="att_summary['roster_obligation'][l_index].dept"/></td>
                                                    <td><span t-esc="att_summary['roster_obligation'][l_index].designation"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                            <br/>
                        </t>
                        <t t-call="custom_report.report_signing"></t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
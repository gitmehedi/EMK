<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>
        <template id="report_daily_att_doc">
            <t t-call="report.internal_layout">
                <t t-call="report.html_container">
                    <t t-call="report.external_layout">
                        <!--<t t-foreach="docs" t-as="o">-->

                        <div class="page">
                            <div class="row">
                                <div class="col-xs-12" style="text-align:center;">
                                    <h2 ><strong >Daily Attendance</strong></h2>
                                    <hr></hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Selected Date:</div>
                                <div class="col-xs-3"><span t-esc="required_date"/></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Total Present Employee  :</div>
                                <div class="col-xs-3"><span t-esc="total_present_employee"/></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Total Absent Employee  :</div>
                                <div class="col-xs-3"><span t-esc="total_absent_employee"/></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Total Late Employee  :</div>
                                <div class="col-xs-3"><span t-esc="total_late_employee"/></div>
                            </div>
                            <!--<div class="row">-->
                            <!--<t t-if="source_department_name">-->
                            <!--<div class="col-xs-3">From Department :</div>-->
                            <!--<div class="col-xs-3"><span t-esc="source_department_name"/></div>-->
                            <!--</t>-->
                            <!--</div>-->
                            <br></br>
                            <div>
                                <div class="row">
                                    <div class="col-xs-3">Absent List :</div>
                                </div>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Department</th>
                                            <th>Designation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="absent_list" t-as="o">
                                            <tr>
                                                <td><span t-esc="o[0]"/></td>
                                                <td><span t-esc="o[1]"/></td>
                                                <td><span t-esc="o[2]"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div>
                                <div class="row">
                                    <div class="col-xs-3">Late List :</div>
                                </div>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Department</th>
                                            <th>Designation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="late_list" t-as="o">
                                            <tr>
                                                <td><span t-esc="o[0]"/></td>
                                                <td><span t-esc="o[1]"/></td>
                                                <td><span t-esc="o[2]"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--</t>-->
                    </t>
                </t>
            </t>

        </template>

    </data>
</openerp>
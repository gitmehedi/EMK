                        <br></br>
                        <t t-foreach="att_summary_list" t-as="att_summary">
                            <div class="row">
                                <div class="col-xs-3"><strong>Operating Unit:</strong></div>
                                <div class="col-xs-3"><span t-esc="att_summary['unit_name']"/></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="row">
                                        <div class="col-xs-5"><strong>Total Employee :</strong></div>
                                        <div class="col-xs-2"><span t-esc="att_summary['total_emp']"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-5"><strong>On Time Present:</strong></div>
                                        <div class="col-xs-2"><span t-esc="len(att_summary['on_time_present'])"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-5"><strong>Late Present:</strong></div>
                                        <div class="col-xs-2"><span t-esc="len(att_summary['late'])"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-5"><strong>Absent:</strong></div>
                                        <div class="col-xs-2"><span t-esc="len(att_summary['absent'])"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-5"><strong>Leave:</strong></div>
                                        <div class="col-xs-2"><span t-esc="len(att_summary['leave'])"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-5"><strong>Alter Roster:</strong></div>
                                        <div class="col-xs-3"><span t-esc="len(att_summary['alter_roster'])"/></div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="row">
                                        <div class="col-xs-4"><strong>Short Leave:</strong></div>
                                        <div class="col-xs-3"><span t-esc="len(att_summary['short_leave'])"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-4"><strong>Rest:</strong></div>
                                        <div class="col-xs-3"><span t-esc="len(att_summary['rest'])"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-4"><strong>Roster Not Mapped:</strong></div>
                                        <div class="col-xs-3"><span t-esc="len(att_summary['roster_obligation'])"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-4"><strong>Duty Not Start:</strong></div>
                                        <div class="col-xs-3"><span t-esc="len(att_summary['unworkable'])"/></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-4"><strong>Holidays:</strong></div>
                                        <div class="col-xs-3"><span t-esc="len(att_summary['holidays'])"/></div>
                                    </div>
                                </div>
                            </div>
                            <br></br>
                            <t t-if="att_summary['late']">
                                <div>
                                    <div class="row">
                                        <div class="col-xs-12" style="text-align:center;">
                                            <h4><strong>Late Employee List</strong></h4>
                                        </div>
                                    </div>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>Name</th>
                                                <th>Department</th>
                                                <th>Designation</th>
                                                <th>Check In Time</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="att_summary['late']" t-as="l">
                                                <tr style="page-break-inside: avoid">
                                                    <td><span t-esc="l_index+1"/></td>
                                                    <td><span t-esc="att_summary['late'][l_index].name"/></td>
                                                    <td><span t-esc="att_summary['late'][l_index].dept"/></td>
                                                    <td><span t-esc="att_summary['late'][l_index].designation"/></td>
                                                    <td><span t-esc="att_summary['late'][l_index].check_in"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                            <br></br>
                            <t t-if="att_summary['absent']">
                                <div>
                                    <div class="row">
                                        <div class="col-xs-12" style="text-align:center;">
                                            <h4><strong>Absent Employee List</strong></h4>
                                        </div>
                                    </div>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>Name</th>
                                                <th>Department</th>
                                                <th>Designation</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="att_summary['absent']" t-as="l">
                                                <tr style="page-break-inside: avoid">
                                                    <td><span t-esc="l_index+1"/></td>
                                                    <td><span t-esc="att_summary['absent'][l_index].name"/></td>
                                                    <td><span t-esc="att_summary['absent'][l_index].dept"/></td>
                                                    <td><span t-esc="att_summary['absent'][l_index].designation"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                            <br></br>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
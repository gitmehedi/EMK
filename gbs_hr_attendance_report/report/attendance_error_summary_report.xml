<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_att_error_summary">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <style>
                        .table th {
                        padding: 2px !important;
                        }
                        .table td {
                        padding: 2px !important;
                        font-size: 12px !important;
                        }
                    </style>
                    <div class="page" style="page-break-inside: auto">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2 class="text-center">Attendance Error Summary</h2>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-xs-6">
                                    <strong>Operating Unit:</strong>
                                    <span t-esc="data['operating_unit_name']"/>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <div>
                                        <strong>Department:</strong>
                                        <t t-if="not data['department_name']">
                                            <span>All</span>
                                        </t>
                                        <span t-esc="data['department_name']"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>

                        <div class="row">
                            <table class="table table-bordered" style="padding: 0px;">
                                <thead>
                                    <thead>
                                        <tr style="background-color:#B4FDF0;
											border-bottom: 1px solid #030303;">
                                            <th>SN</th>
                                            <th>Employee</th>
                                            <th>Acc No</th>
                                            <th>Emp. Type</th>
                                            <th>Designation</th>
                                            <th style="min-width:90px">Check_in</th>
                                            <th style="min-width:90px">Check_out</th>
                                        </tr>
                                    </thead>
                                </thead>
                                <tbody>
                                    <t t-foreach="data_list" t-as="k">
                                        <t t-if="k['val']">
                                            <td
                                                    style="background-color:#DDDBDB; text-align:center;
												border-bottom: 1px solid #030303; color:#000000;"
                                                    t-att-colspan="data_list_len">
                                                <strong t-esc="k['name']"></strong>
                                            </td>

                                            <t t-foreach="k['val']" t-as="o">
                                                <tr>
                                                    <td class="text-center">
                                                        <span t-esc="o_index+1"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="o['name']"/>
                                                    </td>
                                                    <td class="text-left">
                                                        <span t-esc="o['acc_no']"/>
                                                    </td>
                                                     <td class="text-left">
                                                        <span t-esc="o['is_executive']"/>
                                                    </td>
                                                    <td class="text-left">
                                                        <span t-esc="o['designation']"/>
                                                    </td>
                                                    <td class="text-left">
                                                        <span t-esc="o['check_in']"/>
                                                    </td>
                                                    <td class="text-left">
                                                        <span t-esc="o['check_out']"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
        <report id="att_error_summary_report"
                string="Error Summary"
                model="hr.attendance"
                report_type="qweb-pdf"
                name="gbs_hr_attendance_report.report_att_error_summary"
                file="gbs_hr_attendance_report.report_att_error_summary"
                menu="False"
                paperformat="custom_report.paperformat_backend_landscape"
        />
    </data>
</odoo>

						<div class="page">
							<div class="row">
								<table class="table table-bordered">
									<thead>
										<tr>
                                            <th>Employee</th>
											<th>Check In</th>
											<th>Check Out</th>
                                            <th>Duration</th>
										</tr>
									</thead>

                                    <tbody>
										<span t-esc="period"></span>
                                           <t t-foreach="docs" t-as="o">

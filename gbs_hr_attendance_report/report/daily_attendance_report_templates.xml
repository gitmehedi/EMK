<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<template id="report_hr_daily_att">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-name="report.external_layout">
						<div class="page">
							<div class="row">
								<div class="col-xs-12" style="text-align:center;">
                                    <h2 ><strong >Employee Meal Bills Report</strong></h2>
                                    <p><span t-field="o.report_type"/></p>
                                </div>
							</div>
							<div class="row">
								<table class="table table-bordered">
									<thead>
										<tr>
                                            <th>Employee</th>
											<th>Check In</th>
											<th>Check Out</th>
                                            <th>Date</th>
										</tr>
									</thead>

                                    <tbody>
										<span t-esc="date"></span>
                                           <t t-foreach="docs" t-as="o">
                                               <tr>
                                                   <td>
                                                       <span t-esc="o.employee_id.name"></span>
                                                   </td>
                                                   <td>
														<span t-esc="o.check_in"></span>
                                                   </td>
                                                   <td>
                                                       <span t-esc="o.check_out"></span>
                                                   </td>
												   <td>
                                                       <span t-esc="o.date"></span>
                                                   </td>

                                               </tr>
                                           </t>
									</tbody>
								</table>
							</div>
						</div>
					</t>
				</t>
			</t>

		</template>
	</data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_daily_attendance">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <div>
                                <!--<span style="font-size: 18px;">Employee</span> : <span style="font-size: 16px;" t-esc="docs.employee_id.name"/>-->
                            </div>
                            <div class="row mt32 mb32">
                                <div class="col-xs-4">
                                    <p>
                                        <!--<t t-if="docs.date"><strong>Date:</strong> <span t-esc="docs.date"/><br/></t>-->
                                    </p>
                                </div>
                            </div>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Employee</th>
                                        <th class="text-right">Date</th>
                                        <th class="text-right">Check In</th>
                                        <th class="text-right">Check Out</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="orders" t-as="a">
                                        <tr>
                                            <td>
                                                <span t-esc="a.employee_id.name" />
                                            </td>
                                            <td class="text-right" style="white-space: text-nowrap;">
                                                <span t-esc="a.date" />
                                            </td>
                                            <td class="text-right" style="white-space: text-nowrap;">
                                                <span t-esc="a.check_in" />
                                            </td>
                                            <td class="text-right" style="white-space: text-nowrap;">
                                                <span t-esc="a.check_out" />
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>

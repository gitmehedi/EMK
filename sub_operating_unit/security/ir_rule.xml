<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

    <record id="ir_rule_sub_operating_unit_allowed_user" model="ir.rule">
        <field name="model_id" ref="model_sub_operating_unit"/>
        <field name="domain_force">[('operating_unit_id','in',user.operating_unit_ids.ids)]</field>
        <field name="name">Allowed sub operating units to User</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

    <record id="ir_rule_sub_op_unit_allowed_sys_admin" model="ir.rule">
        <field name="model_id" ref="model_sub_operating_unit"/>
        <field name="domain_force">[(1 ,'=', 1)]</field>
        <field name="name">Allowed sub operating units to Admin</field>
        <field name="groups" eval="[(4,ref('mtbl_access.group_mtbl_sys_admin'))]"/>
        <field eval="1" name="perm_unlink"/>
        <field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="1" name="perm_create"/>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sub_operating_unit_form" model="ir.ui.view">
        <field name="name">sub.operating.unit.form</field>
        <field name="model">sub.operating.unit</field>
        <field name="arch" type="xml">
            <form string="Sub Operating Unit" version="7.0">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="operating_unit_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="partner_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sub_operating_unit_tree" model="ir.ui.view">
        <field name="name">sub.operating.unit.tree</field>
        <field name="model">sub.operating.unit</field>
        <field name="arch" type="xml">
            <tree string="Sub Operating Unit">
                <field name="code"/>
                <field name="name"/>
                <field name="operating_unit_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    <record id="view_sub_operating_unit_search" model="ir.ui.view">
        <field name="name">sub.operating.unit.search</field>
        <field name="model">sub.operating.unit</field>
        <field name="arch" type="xml">
            <search string="Search Operating Unit">
                <field name="name" string="Sub Operating Unit"/>
                <field name="operating_unit_id" string="Operating Unit"/>
                <field name="code" string="Code"/>
            </search>
        </field>
    </record>

    <record id="action_sub_operating_unit_tree" model="ir.actions.act_window">
        <field name="name">Sub Operating Units</field>
        <field name="res_model">sub.operating.unit</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new Sub Operating Unit.
            </p>
        </field>
    </record>

    <menuitem action="action_sub_operating_unit_tree"
              id="menu_action_sub_operating_unit_tree"
              parent="base.menu_users"
              groups="operating_unit.group_multi_operating_unit"/>
</odoo>

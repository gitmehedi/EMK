<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_config" model="ir.ui.view">
        <field name="name">sale settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sales_team.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//form/div[@id='main']" position="after">
                <group string="Delivery Order">
                    <field name="delivery_order_auto_generate" class="oe_inline" widget="radio"/>
                </group>
                <group string="Reports">
                    <label string="Delivery Report For Factory"/>
                    <div>
                        <field name="delivery_report_factory" class="oe_inline" />
                        <label for="delivery_report_factory"/>
                    </div>
                    <label string="Undelivered Report For Factory"/>
                    <div>
                        <field name="undelivered_report_factory" class="oe_inline" />
                        <label for="undelivered_report_factory"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_sales_config_sale_terms_condition" model="ir.ui.view">
        <field name="name">sale settings sale terms</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale.view_sales_config"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='sale']/field[@name='sale_note']" position="after">
                <field name="sale_terms_condition" widget="html"/>
            </xpath>
        </field>
    </record>
</odoo>

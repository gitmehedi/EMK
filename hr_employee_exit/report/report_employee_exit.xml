<?xml version="1.0" encoding="utf-8"?>
<!--Custom report. -->
<odoo>
	<data>
		<report
			id="action_report_employee_exit"
			model="hr.emp.exit.req"
			string="Exit Report"
			report_type="qweb-pdf"
			name="hr_employee_exit.report_employee_exit"
			file="hr_employee_exit.report_employee_exit"
            paperformat="report_layout.paperformat_backend_portrait"
		/>

		<template id="report_employee_exit">
			<t t-call="report.html_container">
				<t t-call="report_layout.gbs_internal_layout">
					<div class="page" style="page-break-inside:auto">
						<div class="row" style="padding-top:5px;">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h3 class="report-title">Employee Exit Report</h3>
                                <br/>

                                <h3>General Information</h3>
                                <div class="row">
                                    <div class="col-xs-6 text-left">
                                        <h6><b>Employee Name :  </b><span t-esc="data['employee_id']"/></h6>
                                        <h6><b>Department :  </b><span t-esc="data['department_id']"/></h6>
                                        <h6><b>Job Title :  </b><span t-esc="data['job_id']"/></h6>
                                    </div>
                                    <div class="col-xs-6 text-left">
                                        <h6><b>Request Date :  </b><span t-esc="data['req_date']"  t-options='{"widget": "date"}'/></h6>
                                        <h6><b>Last Days of work :  </b><span t-esc="data['last_date']"/></h6>
                                        <h6><b>Department Manager :  </b><span t-esc="data['manager_id']"/></h6>

                                    </div>
                                </div>
                                <br/>
                                <h3>Dates</h3>
                                <div class="row">
                                    <div class="col-xs-6 text-left">
                                        <h6><b>Confirm Date (Employee) :  </b><span t-esc="data['confirm_date']"  t-options='{"widget": "date"}'/></h6>
                                        <h6><b>Approved Date (Department Manager) :  </b><span t-esc="data['approved1_date']"/></h6>
                                        <h6><b>Approved Date (HR Manager) :  </b><span t-esc="data['approved2_date']"/></h6>
                                    </div>
                                    <div class="col-xs-6 text-left">
                                        <h6><b>Confirm By :  </b><span t-esc="data['confirm_by']"/></h6>
                                        <h6><b>Approved By Department Manager :  </b><span t-esc="data['approver1_by']"/></h6>
                                        <h6><b>Approved By HR Manager :  </b><span t-esc="data['approver2_by']"/></h6>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <h3>Checklist</h3>
                            <table class="table table-report-xs table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>Checklist Item</th>
                                        <th>Responsible User</th>
                                        <th>Responsible Department</th>
                                        <th>Remarks</th>
                                        <th>State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid">
                                            <td><span t-esc="l['checklist_item']"/></td>
                                            <td><span t-esc="l['responsible_employee']"/></td>
                                            <td><span t-esc="l['responsible_department']"/></td>
                                            <td><span t-esc="l['remarks']"/></td>
                                            <t t-if="l['state'] == 'received'"><td>Received</td></t>
                                            <t t-elif="l['state'] == 'not_received'"><td>Not Received</td></t>
                                            <t t-else=""><td></td></t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
					</div>
				</t>
			</t>
		</template>
	</data>
</odoo>
<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>

        <record id="exit_req_form_view" model="ir.ui.view">
            <field name="name">hr.exit.req.form</field>
            <field name="model">hr.emp.exit.req</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Exit Request">
                    <header>
                        <!--<button name="send_mail_template" string="Send e-mail" type="object" class="oe_highlight"/>-->
                        <button string="Confirm" name="exit_confirm" states="draft" type="object" class="oe_highlight"/>
                        <button string="Approve" name="exit_validate"
                                states="confirm"  type="object" class="oe_highlight"/>
                        <!--attrs="{'invisible': ['|', ('current_user_is_approver', '!=', True)]}"-->
                        <button string="Validate" name="exit_done" groups ="hr.group_hr_manager" states="validate1" type="object"
                                class="oe_highlight" />
                        <button string="Refuse" name="exit_refuse" groups="gbs_application_group.group_dept_manager,hr.group_hr_manager"
                                states="confirm,validate1" type="object" />
                        <button string="Reset to Draft" name="exit_reset" groups ="hr.group_hr_manager"
                                attrs="{'invisible': [('state', 'not in', ['validate1', 'refuse'])]}"
                                type="object"/>
                        <button string="Reset to Draft" name="exit_reset" groups="base_technical_features.group_technical_features"
                                attrs="{'invisible': [('state', 'not in', ['validate'])]}"
                                type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate1,validate"
                               statusbar_colors='{"confirm":"blue","validate1":"blue","refuse":"red"}'/>
                    </header>
                    <sheet>
                        <h2><field name="employee_id"  required="True" nolable="1" attrs="{'readonly': [('state', 'not in', ['draft'])]}"
                                   placeholder="Select an employee..." options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/></h2>
                        <group>
                            <group>
                                <field name="current_user_is_approver" invisible="True" />
                                <field name="req_date" readonly="True" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                <field name="last_date" required="True" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            </group>
                            <group>
                                <field name="manager_id" string="Department Manager" readonly="1"/>
                                <field name="department_id" string="Department" readonly="1"/>
                                <field name="job_id" string="Job Title" readonly="1"/>
                                <field name="user_id" string="User" readonly="1"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('state', 'in', ['draft'])]}">
                            <group>
                                <field name="confirm_date" attrs="{'invisible': [('state', 'in', ['draft'])]}"/>
                                <field name="approved1_date" attrs="{'invisible': [('state', 'in', ['draft','confirm'])]}"/>
                                <field name="approved2_date" attrs="{'invisible': [('state', 'not in', ['validate'])]}"/>
                            </group>
                            <group>
                                <field name="confirm_by" attrs="{'invisible': [('state', 'in', ['draft'])]}"/>
                                <field name="approver1_by"  attrs="{'invisible': [('state', 'in', ['draft','confirm'])]}"/>
                                <field name="approver2_by" attrs="{'invisible': [('state', 'not in', ['validate'])]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string ="Information">
                                <group>
                                    <field name="reason_for_exit"  required="True" attrs="{'readonly': [('state', 'not in', ['draft'])]}" placeholder="Add a reason..."/>
                                    <field name="emp_notes" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                </group>
                            </page>
                            <page string ="Check List" attrs="{'invisible': [('state', 'in', ['draft'])]}">
                                <field name="checklists_ids" string='Employee Exit Checklists' attrs="{'invisible': [('state', 'in', ['draft'])],'readonly': [('state', 'in', ['validate'])]}">
                                    <!--attrs="{'invisible': [('state', 'in', ['draft'])],'readonly': [('state', 'in', ['validate'])]}"-->
									<tree editable="top">
										<field name="checklist_item_id"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
									    <field name="responsible_department" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
									    <field name="responsible_emp" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
									    <field name="remarks"/>
									    <field name="state"/>
                                    </tree>
								</field>
                            </page>
                            <!--<page string ="Information">-->
                                <!--<separator string="Check List"/>-->
                                <!--<field name="pen_checklists_ids" string='Employee Exit Checklists'>-->
									<!--<tree editable="top">-->
										<!--<field name="checklist_item_id"-->
											<!--options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />-->
									    <!--<field name="responsible_department" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>-->
									    <!--<field name="responsible_emp" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>-->
									    <!--<field name="remarks"/>-->
									    <!--<field name="state"/>-->
                                    <!--</tree>-->
								<!--</field>-->
                            <!--</page>-->
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="emp_req_tree_view" model="ir.ui.view">
            <field name="name">hr.exit.req.tree</field>
            <field name="model">hr.emp.exit.req</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Exit Request">
                    <field name="employee_id"/>
                    <field name="reason_for_exit"/>
                    <field name="req_date"/>
                    <field name="last_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="exit_req_search_view" model="ir.ui.view">
			<field name="name">hr.emp.exit.req.search</field>
			<field name="model">hr.emp.exit.req</field>
			<field name="arch" type="xml">
				<search string="Search">
					<field name="employee_id"/>
					<field name="state"/>
                    <!--<filter name ='my_approval' string="My Approval" domain="[('state','=','validate1')]"/>-->
				</search>
			</field>
		</record>

        <!-- Checklist Item Action Views -->
        <record id="action_exit_req_view" model="ir.actions.act_window">
            <field name="name">Exit Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.emp.exit.req</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="emp_req_tree_view"/>
            <!--<field name="context" eval="{'search_default_my_approval': 1}"/>-->
            <!--<field name="search_view_id" ref="exit_req_search_view"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a exit request.
                </p>
                <p>
                    Once you have recorded your exit request, it will be sent
                    to a manager for validation.
                </p>
            </field>
        </record>

        <!-- Checklist Item Menu -->

        <menuitem name="Exit Requests" parent="menu_exit_management" id="menu_exit_req"
                  action="action_exit_req_view"/>
    </data>
</odoo>

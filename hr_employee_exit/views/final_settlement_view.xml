<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="final_settlement_form_view" model="ir.ui.view">
            <field name="name">final.settlement.form.view</field>
            <field name="model">final.settlement</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Full &amp; Final Settlement">
                    <header>
                        <button name="action_submit" states="draft" type="object" string="Apply" groups ="hr.group_hr_manager" class="oe_highlight"/>
                        <!--<button string="Reset to Draft" name="action_reset"-->
                                <!--attrs="{'invisible': [('state', 'in', ['draft','submit'])]}"-->
                                <!--type="object"/>-->
                        <!--<button string="Submit" name="action_validate"-->
                                <!--attrs="{'invisible': [('state', 'not in', ['submit'])]}"-->
                                <!--type="object" class="oe_highlight"/>-->
                        <!--<button string="Validate" name="action_approved" groups="gbs_application_group.group_dept_manager"-->
                                <!--attrs="{'invisible': [('state','not in',['validate'])]}"-->
                                <!--type="object" class="oe_highlight"/>-->
                        <!--<button string="Approved" name="action_done"-->
                                <!--attrs="{'invisible': [('state','not in',['approved'])]}" groups ="hr.group_hr_manager"-->
                                <!--type="object" class="oe_highlight"/>-->
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submit,validate,approved,done"/>
                    </header>
                    <sheet>
                        <group>
                            <separator string="Employee Details" colspan="2"/>
                            <group>
                                <field name="employee_id"/>
                                <field name="emp_designation"/>
                                <field name="joining_date"/>
                            </group>
                            <group>
                                <field name="employee_code"/>
                                <field name="leaving_date"/>
                            </group>
                        </group>
                        <field name="emp_payslip_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="total"/>
                            </tree>
                        </field>
                        <notebook>
                            <page string ="Payments">
                                <field name="payment_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string ="Deductions">
                                <field name="deduction_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="final_settlement_tree_view" model="ir.ui.view">
            <field name="name">final.settlement.tree</field>
            <field name="model">final.settlement</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Exit Interview">
                    <field name="employee_id"/>
                    <field name="emp_designation"/>
                    <field name="joining_date"/>
                    <field name="leaving_date"/>
                </tree>
            </field>
        </record>

        <record id="action_final_settlement" model="ir.actions.act_window">
            <field name="name">Final Settlement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">final.settlement</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
				name="Full &amp; Final Settlement"
				id="final_settlement_menu"
                parent="menu_exit_management"
				sequence="21"
                action="action_final_settlement"
        />
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Checklist Type Form Views -->
		<record id="checklist_item_form_view" model="ir.ui.view">
			<field name="name">checklist.item.form</field>
			<field name="model">hr.exit.checklist.item</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Checklist Item Form" duplicate="0">
					<header>
                        <button name="act_approve" string="Approve" states="draft" type="object" class="oe_highlight"/>
                        <button name="act_draft" string="Draft" states="reject" type="object" class="oe_highlight"/>
                        <button name="act_reject" string="Reject" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"cancel":"red"}'/>
						<field name="id" invisible="1" />
                    </header>
					<sheet>
						<group>
							<field name="checklist_type" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
							<field name="name" />
							<field name="description" />
						</group>
					</sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>

		<!-- Checklist Item Tree Views -->
		<record id="checklist_item_tree_view" model="ir.ui.view">
			<field name="name">checklist.item.tree</field>
			<field name="model">hr.exit.checklist.item</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Checklist Item Tree" decoration-info="state=='draft'"
                      decoration-success="state=='approve'"
                      decoration-danger="state=='reject'"
                      decoration-bf="state in ('approve',)">
					<field name="checklist_type" />
					<field name="name" />
					<field name="description" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Checklist Item Search Views -->
		<record id="checklist_item_search_view" model="ir.ui.view">
			<field name="name">checklist.item.search</field>
			<field name="model">hr.exit.checklist.item</field>
			<field name="arch" type="xml">
				<search string="Search">
					<field name="name" string="Name" filter_domain="[('name','ilike','self')]" />
					<group string="Group By">
                        <filter string="Pending" name="pending" icon="terp-personal"
                                domain="[('state','in',('draft','approve')),('pending','=',1),'|',('active','=',0),('active','=',1)]"/>
                        <filter string="Rejected" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','reject')]"/>
                        <filter string="In-Active" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','approve')]"/>
						<filter string="Type" icon="terp-personal" domain="[]" context="{'group_by':'checklist_type'}"/>
                    </group>
				</search>
			</field>
		</record>


		<!-- Checklist Item Action Views -->
		<record id="action_checklist_item_view" model="ir.actions.act_window">
			<field name="name">Checklist Item</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.exit.checklist.item</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="checklist_item_tree_view" />
			<field name="context">
                {"search_default_active":'False',"search_default_pending":'True'}
            </field>
		</record>

		<!-- Checklist Item Menu -->
		<menuitem id="checklist_item_menu" name="Checklist Item"
			parent="exit_checklist_menu" sequence="7"
			action="action_checklist_item_view" />
	</data>
</odoo>
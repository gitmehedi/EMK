<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="variant_wise_inventory_report_wizard_view" model="ir.ui.view">
            <field name="name">variant.wise.inventory.report.wizard.view</field>
            <field name="model">variant.wise.inventory.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Variant Wise Ledger Report">
                    <group>
                        <group>
                            <field name="product_categ_id" placeholder="Select Product Category"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>

                            <field name="product_tmpl_id"  placeholder="Select Product" domain="[('categ_id', '=', product_categ_id)]"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>

                            <field name="product_id" placeholder="Select Variant" domain="[('product_tmpl_id', '=', product_tmpl_id)]"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>


                        </group>
                        <group>
                            <field name="operating_unit_id" placeholder="Select Operating Unit"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>

                        </group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <button name="export_excel" string="Export Excel" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="variant_wise_inventory_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Variant Wise Ledger Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">variant.wise.inventory.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="variant_wise_inventory_report_wizard_view"/>
            <field name="target">new</field>
        </record>


        <menuitem id="menu_variant_wise_inventory_report"
                  name="Variant Wise Ledger"
                  groups="stock.group_stock_user"
                  parent="stock.menu_warehouse_report"
                  action="variant_wise_inventory_report_wizard_action"
                  sequence="12"/>


    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="leave_encashment_tree" model="ir.ui.view">
			<field name="name">hr.leave.encashment.tree</field>
			<field name="model">hr.leave.encashment</field>
			<field name="arch" type="xml">
				<tree string="Leave Encashment">
					<field name="name" />
					<field name="encashment_year" />
					<field name="leave_type" />
				</tree>
			</field>
		</record>
		
	
		<record id="leave_encashment_form" model="ir.ui.view">
			<field name="name">hr.leave.encashment.form</field>
			<field name="model">hr.leave.encashment</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Leave Encashment" delete="false" copy='0'>
					<header>
						<button name="%(hr_earned_leave_encashment_wizard_action_view)d"
								type="action" string="Generate" /> 
					</header>
					<sheet>
						<group>
							<field name="name" />
							<field name="encashment_year" />
							<field name="leave_type" />
						</group>
						<notebook colspan="4">
							<page string="Encashment">
								<field name="line_ids">
									<tree string="List" editable="bottom">
										<field  name="employee_id"  readonly='1'/>
										<field  name="pending_leave" />
										<field  name="leave_days_to_be_encashed" />
										<field  name="want_to_encash" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
	
		<record id="hr_holidays_leave_encashment" model="ir.actions.act_window">
			<field name="name">Leave Encashment</field>
			<field name="res_model">hr.leave.encashment</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_hr_leave_encashment" name="Leave Encashment"
			parent="hr_holidays.menu_hr_holidays_root" sequence="7"
			action="hr_holidays_leave_encashment" groups="hr.group_hr_user"/>
		<menuitem id="hr_leave_encashment" name="Leave Encashment"
			parent="menu_hr_leave_encashment"
			action="hr_holidays_leave_encashment" groups="hr.group_hr_user"/>
	</data>
</odoo>

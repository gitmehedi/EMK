<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_invoice_create" model="ir.ui.view">
            <field name="name">pebbles.account.invoice.wizard.form</field>
            <field name="model">pebbles.account.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Credit Note">
                    <group>
                    	<group>
                        	<field name="category_id"
                            		options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/> 
                            <field name="product_id"
                                    options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                            <field name="partner_id"
                                    options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>
                    <footer>
                        <button string='Create Invoice Report' name="invoice_create" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="pebbles_action_account_invoice_report_wizard" model="ir.actions.act_window">
            <field name="name">Custom Invoices Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pebbles.account.invoice.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    <menuitem action="pebbles_action_account_invoice_report_wizard" id="pebbles_menu_action_account_invoice_report_all" parent="account.menu_finance_reporting" sequence="0"/>

    </data>
</openerp>

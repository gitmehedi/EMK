<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rule_stock_inventory_unit" model="ir.rule">
        <field name="name">Stock Inventory(Unit Wise)</field>
        <field name="model_id" ref="stock.model_stock_inventory"/>
        <field name="domain_force">[('operating_unit_id.id','in',user.operating_unit_ids.ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('stock.group_stock_user')),(4,ref('stock.group_stock_manager'))]"/>
    </record>
</odoo>


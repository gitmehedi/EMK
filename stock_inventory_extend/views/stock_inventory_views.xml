<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherit_view_inventory_form">
        <field name="name">inherit_view_inventory_form</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="operating_unit_id"
                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
            </xpath>
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="replace">
            </xpath>

            <xpath expr="//field[@name='operating_unit_id']" position="after">
                <field name="location_id"
                       options="{'no_quick_create':True,'no_create_edit':True}"/>
            </xpath>

            <xpath expr="//field[@name='operating_unit_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="inherit_view_stock_account_inventory_form">
        <field name="name">inherit_view_stock_account_inventory_form</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock_account.view_inventory_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='accounting_date']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- inherited tree view -->
    <record id="inherit_view_stock_picking_tree2" model="ir.ui.view">
        <field name="name">inherit.view.picking.tree2</field>
        <field name="model">stock.picking</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="stock_picking_extend.view_stock_picking_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="/tree/field[@name='name']" position="after">
                <field name="mrr_no"/>
            </xpath>
        </field>
    </record>

    <!-- inherited search view -->
    <record id="view_picking_internal_search2" model="ir.ui.view">
        <field name="name">stock.picking.internal.search2</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='name']" position="after">
                <field name="mrr_no"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_picking_form_inherit_mrr">
        <field name="name">stock.picking.inherit.mrr.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='%(stock.act_stock_return_picking)d']" position="after">

                <field name="check_mrr_button" invisible="1"/>
                <field name="check_approve_button" invisible="1"/>
                <field name="check_ac_approve_button" invisible="1"/>

                <button name="button_approve" string="Approve" attrs="{'invisible': [('check_approve_button','=',False)]}"
                        type="object" class="oe_highlight" groups="gbs_application_group.group_head_of_plant"/>

                <button name="button_ac_approve" string="AC Approve" attrs="{'invisible': [('check_ac_approve_button','=',False)]}"
                        type="object" class="oe_highlight" groups="account.group_account_user"/>

                <button name="button_print_mrr" string="Print MRR" attrs="{'invisible': [('check_mrr_button', '=', False)]}"
                        type="object" class="oe_highlight" groups="stock.group_stock_user,gbs_application_group.group_head_of_plant"/>
            </xpath>
            <xpath expr="//sheet/group/group/field[@name='backorder_id']" position="after">
                <field name="approval_comment" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_stock_picking_approval">
        <field name="name">Pending Approval</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="stock_picking_extend.view_stock_picking_tree2"/>
        <field name="domain">[('check_approve_button', '=', 'True')]</field>
        <field name="help" type="html">
            <p>
                Here you can see pending approval list.
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_stock_picking_mrr">
        <field name="name">Print MRR</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="stock_picking_extend.view_stock_picking_tree2"/>
        <field name="domain">[('check_mrr_button', '=', 'True')]</field>
        <field name="help" type="html">
            <p>
                Here you can see MRR list.
            </p>
        </field>
    </record>

    <menuitem id="menu_approval_picking"
              name="Pending Approval"
              parent="stock.menu_stock_warehouse_mgmt"
              sequence="5"
              action="action_stock_picking_approval"
              groups="gbs_application_group.group_head_of_plant"/>

    <menuitem id="menu_picking_mrr"
              name="Print MRR"
              parent="stock.menu_stock_warehouse_mgmt"
              sequence="6"
              action="action_stock_picking_mrr"
              groups="stock.group_stock_user"/>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<odoo>
    <data>
        <report
                id="custom_report_mrr"
                model="stock.picking"
                string="Material Requisition Report"
                report_type="qweb-pdf"
                name="stock_picking_mrr.report_mrr_doc"
                file="stock_picking_mrr.report_mrr_doc"
                menu = "False"
                paperformat="report_layout.paperformat_backend_portrait"
        />
        <template id="report_mrr_temp" inherit_id="report_layout.gbs_internal_layout" primary="True">
            <xpath expr="//t[@t-call='report_layout.gbs_internal_layout_header']" position="attributes">
                <attribute name="t-call">stock_picking_mrr.external_layout_header_po</attribute>
            </xpath>
        </template>
        <template id="external_layout_header_po" inherit_id="report_layout.gbs_internal_layout_header" primary="True">
            <xpath expr="//div[@class='company-info']" position="after">
                <div class="w100 text-center" style="position:absolute; bottom:2px; " name="company_address">
                    <span t-esc="address"/>
                </div>
            </xpath>
        </template>

        <template id="report_mrr_doc">
            <t t-call="report.html_container">
                <t t-call="stock_picking_mrr.report_mrr_temp">
                    <div class="page" style="page-break-inside: auto">
                        <style>
                            .table-caption {
                            border: 1px solid #ddd;
                            border-bottom: none;
                            font-size: 14px;
                            font-weight: bold;
                            margin: 0;
                            padding: 5px 5px;
                            }
                        </style>
                        <div class="row">
                            <h4 class="text-center">Material Receiving Report</h4>
                            <hr class="hr-sm mb-0"/>
                            <div class="row">
                                <div class="col-xs-8">
                                    <h6><b>MRR No : </b><span t-esc="mrr_no"/></h6>
                                    <h6><b>Purchase Order No : </b><span t-esc="po_no"/></h6>
                                    <h6><b>Supplier : </b><span t-esc="customer"/></h6>
                                    <h6><b>Challan No : </b><span t-esc="challan"/></h6>
                                </div>
                                <div class="col-xs-4 text-left" style="padding-left:58px;">
                                    <h6><b>MRR Date : </b><span t-esc="mrr_date"/></h6>
                                    <h6><b>PO Date : </b><span t-esc="po_date"/></h6>
                                    <h6><b>Challan Date : </b><span t-esc="challan_date"/></h6>
                                </div>
                            </div>
                            <hr class="hr-xs"/>
                        </div>
                        <div class="row">
                            <table class="table table-report table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th class="text-center">Sl#</th>
                                        <th class="text-center">Code &amp; Item Description</th>
                                        <th class="text-center">PR No</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Unit</th>
                                        <th class="text-center">Rate</th>
                                        <th class="text-center">Discount (%)</th>
                                        <th class="text-center">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid">
                                            <td><span t-esc="l_index+1"/></td>
                                            <td><span t-esc="l['product_id']"/></td>
                                            <td><span t-esc="l['pr_no']"/></td>
                                            <td class="text-right"><span t-esc="l['mrr_quantity']"/></td>
                                            <td><span t-esc="l['product_uom_id']"/></td>
                                            <td class="text-right"><span t-esc="l['price_unit']"/></td>
                                            <td class="text-right"><span t-esc="l['discount']"/></td>
                                            <td class="text-right"><span t-esc="l['sub_amount']"/></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="7"><strong>Amount in words : </strong> <span t-esc="amt_to_word"/></td>
                                        <!--<td class="text-right"><strong>Total</strong></td>-->
                                        <td class="text-right"><strong>Total : </strong><span t-esc="total_amount"/></td>
                                    </tr>
                                </tbody>
                            </table>


                        </div>
                        <div class="row mb32 text-left" style="margin-top: 10mm;">
                            <div class="col-xs-4 text-left">
                                <strong>Quality Certified By:</strong>
                                <br/>
                                <br/>
                                <br/>
                                <br/><strong>----------------------</strong>
                            </div>
                            <div class="col-xs-4 text-center">
                                <strong>Received By:</strong>
                                <br/>
                                <br/>
                                <br/>
                                <br/><strong>----------------------</strong>

                            </div>
                            <div class="col-xs-4 text-right">
                                <strong>Approved By:</strong>
                                <br/>
                                <br/>
                                <br/>
                                <br/><strong>----------------------</strong>

                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
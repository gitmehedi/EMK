<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<odoo>
    <data>
        <report
                id="custom_report_mrr"
                model="stock.picking"
                string="Material Requisition Report"
                report_type="qweb-pdf"
                name="stock_picking_mrr.report_mrr_doc"
                file="stock_picking_mrr.report_mrr_doc"
                menu = "False"
                paperformat="custom_report.paperformat_backend_portrait"
        />

        <template id="report_mrr_doc">
            <t t-call="report.html_container">
                <t t-call="custom_report.gbs_internal_layout">

                    <div class="page" style="page-break-inside: auto">
                        <style>
                            .table-caption {
                            border: 1px solid #ddd;
                            border-bottom: none;
                            font-size: 14px;
                            font-weight: bold;
                            margin: 0;
                            padding: 5px 5px;
                            }
                        </style>
                        <div class="row">
                            <h4 class="text-center">Material Requisition Report</h4>
                            <hr class="hr-sm mb-0"/>
                            <div class="row">
                                <div class="col-xs-9">
                                    <h6><b>MRR No : </b><span t-esc="mrr_no"/></h6>
                                    <h6><b>Purchase Order No : </b><span t-esc="po_no"/></h6>
                                    <h6><b>Supplier : </b><span t-esc="customer"/></h6>
                                    <h6><b>Challan No : </b><span t-esc="challan"/></h6>
                                </div>
                                <div class="col-xs-3 text-left" style="padding-left:65px;">
                                    <h6><b>MRR Date : </b><span t-esc="mrr_date"/></h6>
                                    <h6><b>PO Date : </b><span t-esc="po_date"/></h6>
                                    <h6><b>Challan Date : </b><span t-esc="challan_date"/></h6>
                                </div>
                            </div>
                            <hr class="hr-xs"/>
                        </div>
                        <div class="row">
                            <table class="table table-report table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>Sl#</th>
                                        <th>Code &amp; Item Description</th>
                                        <t t-if="pr_no">
                                            <th>PR No</th>
                                        </t>
                                        <th>Quantity</th>
                                        <th>Unit</th>
                                        <th>Rate</th>
                                        <th>Discount</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid">
                                            <td><span t-esc="l_index+1"/></td>
                                            <td><span t-esc="l['product_id']"/></td>
                                            <t t-if="pr_no">
                                                <td><span t-esc="pr_no"/></td>
                                            </t>
                                            <td><span t-esc="l['mrr_quantity']"/></td>
                                            <td><span t-esc="l['product_uom_id']"/></td>
                                            <td><span t-esc="l['price_unit']"/></td>
                                            <td></td>
                                            <td><span t-esc="l['amount']"/></td>

                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="6" ><strong>Amount in words : </strong><span t-esc="amt_to_word"/></td>
                                        <td colspan="2"><strong>Total : </strong><span t-esc="total_amount"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row mb32 text-left" style="margin-top: 10mm;">
                            <div class="col-xs-4 text-left">
                                <strong>Quality Certified By:</strong>
                                <br/>
                                <br/>
                                <br/>
                                <br/><strong>----------------------</strong>
                            </div>
                            <div class="col-xs-4 text-center">
                                <strong>Received By:</strong>
                                <br/>
                                <br/>
                                <br/>
                                <br/><strong>----------------------</strong>

                            </div>
                            <div class="col-xs-4 text-right">
                                <strong>Approved By:</strong>
                                <br/>
                                <br/>
                                <br/>
                                <br/><strong>----------------------</strong>

                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
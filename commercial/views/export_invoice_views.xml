<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Export Invoice Tree or List view -->
		<record model="ir.ui.view" id="export_invoice_tree_view_extend">
			<field name="name">export.invoice.tree</field>
			<field name="model">account.invoice</field>
			<field name="arch" type="xml">
				<tree string="Export Invoice Tree">
					<field name="partner_id" string="Customer"/>
					<field name="ei_name" />
					<field name="invoice_against" />
					<field name="ei_date" />
					<field name="invoice_value_bdt" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Export Invoice Form Views -->
		<record model="ir.ui.view" id="export_invoice_form_view_extend">
			<field name="name">account.invoice.form</field>
			<field name="model">account.invoice</field>
			<field name="priority" eval="20"/>
			<field name="mode">primary</field>
			<field name="arch" type="xml">
				<form string="Export Invoice Form">
					<header>
						<!--<button name="action_confirm" type="object" ei_states="draft"-->
							<!--string="Confirm" class="oe_highlight" />-->

						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<h1>
							<field name="ei_name" string="Serial No" />
						</h1>
						<group>
							<group>
								<field name="invoice_against"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="partner_id" domain="[('customer', '=', 'True')]" string="Customer"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="lc_id" attrs="{'invisible':[('invoice_against','=','lc')]}"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
								<field name="tt_id" attrs="{'invisible':[('invoice_against','=','tt')]}"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />

								<field name="journal_id" invisible="1"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="account_id" invisible="1"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="export_invoice_no" />

								<field name="ei_date" />
								<field name="consignee"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="notify_party"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="port_of_loading"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="port_of_discharge"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="mother_vessel" />
								<field name="feader_vessel" />
								<field name="destination" />
								<field name="inco_term_place" />
							</group>
							<group>
								<field name="inco_term_id"
                                    options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="shipment_mode"
                                    options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="shipping_mark" />
								<field name="no_of_container" />
								<field name="etd" />
								<field name="bill_of_living_no" />
                                <field name="acceptace_date" />
								<field name="invoice_value" />
								<field name="discount" />
								<field name="discount_amount" />
								<field name="net_invoice_value" />
								<field name="currency"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="conversion_rate" />
								<field name="invoice_value_bdt" />
								<field name="buying_house_com" />
							</group>
						</group>

						<separator string="Remarks" />
						<field name="remarks" placeholder="Put an remarks..................." />
					</sheet>
				</form>
			</field>
		</record>

		<!-- Export Invoice Search View -->
		<record model="ir.ui.view" id="export_invoice_view_search">
			<field name="name">account.invoice.search</field>
			<field name="model">account.invoice</field>
			<field eval="10" name="priority" />
			<field name="arch" type="xml">
				<search string="Product Costing">
					<field name="name" />
					<field name="invoice_against" />
					<field name="lc_id" />
					<field name="tt_id" />
					<field name="ei_date" />
					<field name="invoice_value" />
					<field name="invoice_value" />
				</search>
			</field>
		</record>

		<!-- Sequences for Export Invoice -->

		<record id="seq_export_invoice" model="ir.sequence">
			<field name="name">Export Invoice</field>
			<field name="code">ei_code</field>
			<field name="prefix">EI-</field>
			<field name="padding">10</field>
		</record>


		<!-- Export Invoice Menu and Action -->
		<record id="export_invoice_list_action" model="ir.actions.act_window">
			<field name="name">Export Invoice</field>
			<field name="res_model">account.invoice</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>


		<record id="action_export_invoice_form_view_extend" model="ir.actions.act_window.view">
			<field eval="2" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="export_invoice_form_view_extend" />
			<field name="act_window_id" ref="export_invoice_list_action" />
		</record>

		<record id="action_export_invoice_tree_view_extend" model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="export_invoice_tree_view_extend" />
			<field name="act_window_id" ref="export_invoice_list_action" />
		</record>


		<menuitem id="export_invoice_main_menu" name="Export Invoice"
			parent="commercial_menu" sequence="120" action="export_invoice_list_action" />
	</data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Export Invoice Realization Form Views -->
		<record model="ir.ui.view" id="export_invoice_realization_form_view">
			<field name="name">export.invoice.realization.form</field>
			<field name="model">export.invoice.realization</field>
			<field name="arch" type="xml">
				<form string="Export Invoice Realization Form">
					<header>
						<button name="action_confirm" type="object" states="draft"
							string="Confirm" class="oe_highlight" />

						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<h1>
							<field name="name" string="Serial No" />
						</h1>
						<group>
							<group>

								<field name="bank_ref_no" />
								<field name="invoice_value" />
							</group>
							<group>
								<field name="realization_date" />
							</group>
						</group>
						<notebook colspan="4">
							<page string="Distribution Head">
								<field name="inv_real_distribution_head_ids">
									<tree string="" editable="bottom">
										<field name="account_id"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
										<field name="fc_value" />
										<field name="lc_value" />
										<field name="exchange_rate" />
									</tree>
								</field>
							</page>
							<page string="Deduction Head">
								<field name="inv_real_deduction_head_ids">
									<tree string="" editable="bottom">
										<field name="account_id"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
										<field name="fc_value" />
										<field name="lc_value" />
										<field name="exchange_rate" />
									</tree>
								</field>
							</page>
							<page string="Deduction Head">
								<field name="inv_real_charge_head_ids">
									<tree string="" editable="bottom">
										<field name="account_id"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
										<field name="fc_value" />
										<field name="lc_value" />
										<field name="exchange_rate" />
									</tree>
								</field>
							</page>
						</notebook>
						<separator string="Remarks" />
						<field name="remarks" placeholder="Put an remarks..................." />
					</sheet>
				</form>
			</field>
		</record>


		<!-- Export Invoice Realization Tree or List view -->
		<record id="export_invoice_realization_tree_view" model="ir.ui.view">
			<field name="name">export.invoice.realization.tree</field>
			<field name="model">export.invoice.realization</field>
			<field name="arch" type="xml">
				<tree string="Export Invoice Realization Tree">
					<field name="bank_ref_no" />
					<field name="invoice_value" />
					<field name="realization_date" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Export Invoice Realization Search View -->
		<record id="export_invoice_realization_view_search" model="ir.ui.view">
			<field name="name">export.invoice.realization.search</field>
			<field name="model">export.invoice.realization</field>
			<field eval="10" name="priority" />
			<field name="arch" type="xml">
				<search string="Product Costing">
					<field name="bank_ref_no" />
				</search>
			</field>
		</record>

		<!-- Sequences for Export Invoice Realization -->
		<record id="seq_type_export_invoice_realization" model="ir.sequence.type">
			<field name="name">Export Invoice Realization Type</field>
			<field name="code">eirel_code</field>
		</record>

		<record id="seq_export_invoice_realization" model="ir.sequence">
			<field name="name">Export Invoice Realization</field>
			<field name="code">eirel_code</field>
			<field name="prefix">EIREA-</field>
			<field name="padding">10</field>
		</record>


		<!-- Export Invoice Realization Menu and Action -->
		<record id="export_invoice_realization_list_action" model="ir.actions.act_window">
			<field name="name">Export Invoice Realization</field>
			<field name="res_model">export.invoice.realization</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="export_invoice_realization_main_menu" name="Export Invoice Realization"
			parent="commercial_menu" sequence="125"
			action="export_invoice_realization_list_action" />
	</data>
</openerp>

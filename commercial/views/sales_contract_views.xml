<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Sales Contract Tree or List view -->
		<record model="ir.ui.view" id="sales_contract_tree_view">
			<field name="name">sales.contract.tree</field>
			<field name="model">sales.contract</field>
			<field name="arch" type="xml">
				<tree string="Sales Contract Tree">
					<field name="name" />
					<field name="buyer_id" />
					<field name="sc_no" />
					<field name="sc_date" />
					<field name="sc_bank_id" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Sales Contract Form Views -->
		<record model="ir.ui.view" id="sales_contract_form_view">
			<field name="name">sales.contract.form</field>
			<field name="model">sales.contract</field>
			<field name="arch" type="xml">
				<form string="Sales Contract Form">
					<header>
						<button name="action_confirm" type="object" states="draft"
							string="Confirm" class="oe_highlight" />

						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<h1>
							<field name="name" string="Serial No" />
						</h1>
						<group>
							<group>
								<field name="buyer_id"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="sc_no" />
								<field name="sc_date" />
								<field name="sc_bank_id"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
							</group>
							<group>
								<label for="sc_value" string="SC Value" />
								<div>
									<div class="col-md-5 multifield_combination">
										<field name="sc_value" />
									</div>
									<div class="col-md-5 multifield_combination">
										<field name="sc_currency_id"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
									</div>
								</div>

								<field name="payment_term_id"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="inco_term"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="inco_term_place" />

							</group>
						</group>
						<notebook colspan="4">
							<page string="Sales Contract Details">
								<field name="sales_contract_details_ids">
									<tree string="" editable="top">
										<field name="po_related_id"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
										<field name="tagged_po_id"
											options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
									</tree>
								</field>
							</page>
						</notebook>
						<separator string="Remarks" />
						<field name="remarks" placeholder="Put an remarks..................." />
					</sheet>
				</form>
			</field>
		</record>

		<!-- Sales Contract Search View -->
		<record model="ir.ui.view" id="sales_contract_view_search">
			<field name="name">sales.contract.search</field>
			<field name="model">sales.contract</field>
			<field eval="10" name="priority" />
			<field name="arch" type="xml">
				<search string="Commercial Term">
					<field name="name" />
					<field name="buyer_id" />
					<field name="sc_no" />
					<field name="sc_date" />
					<field name="sc_bank_id" />
					<field name="payment_term_id" />
				</search>
			</field>
		</record>

		<!-- Sales Contract for Sequences -->

		<record id="seq_sales_contract" model="ir.sequence">
			<field name="name">Sales Contract</field>
			<field name="code">sc_code</field>
			<field name="prefix">SC-</field>
			<field name="padding">10</field>
		</record>


		<!-- Sales Contract Menu and Action -->
		<record id="sales_contract_list_action" model="ir.actions.act_window">
			<field name="name">Sales Contract</field>
			<field name="res_model">sales.contract</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="sales_contract_main_menu" name="Sales Contract"
			parent="commercial_menu" sequence="110" action="sales_contract_list_action" />
	</data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Export Invoice Submission Tree or List view -->
		<record model="ir.ui.view" id="export_invoice_submission_tree_view" >
			<field name="name">export.invoice.submission.tree</field>
			<field name="model">export.invoice.submission</field>
			<field name="arch" type="xml">
				<tree string="Export Invoice Submission Tree">
					<field name="name" />
					<field name="submission_date" />
					<field name="bank_ref_no" />
					<field name="submission_type" />
					<field name="currency_id" />
					<field name="state" />
				</tree>
			</field>
		</record>
		<!-- Export Invoice Submission Form Views -->
		<record model="ir.ui.view" id="export_invoice_submission_form_view">
			<field name="name">export.invoice.submission.form</field>
			<field name="model">export.invoice.submission</field>
			<field name="arch" type="xml">
				<form string="Export Invoice Submission Form">
					<header>
						<button name="action_draft" type="object" states="submission"
							string="Draft" />
                        <button name="action_submission" type="object" states="draft"
							string="Submission" class="oe_highlight" />
						<button name="action_accepted" type="object" states="submission"
							string="Accepted"  class="oe_highlight" />

						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<h1>
							<field name="name" string="Serial No" />
						</h1>
						<group>
							<group>
								<field name="buyer_id"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
                                <field name="lc_no_id"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="submission_date"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="bank_ref_no" />
								<field name="bank_id"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />

							</group>
							<group>
                                <field name="submission_type"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
                                <field name="currency_id"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="lc_type"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="payment_term_id"
									options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
								<field name="acceptance_date" />
								<field name="realization_date" />

							</group>
						</group>


                        <field name="invoice_submission_details_ids">
                            <tree string="" editable="bottom">
                                <field name="invoice_id"
                                    options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' domain="[('id', '=', parent.lc_no_id)]"/>
                                <field name="value" />
                            </tree>
                        </field>

						<separator string="Remarks" />
						<field name="remarks" placeholder="Put an remarks..................." />
					</sheet>
				</form>
			</field>
		</record>




		<!-- Export Invoice Submission Search View -->
		<record model="ir.ui.view" id="export_invoice_submission_view_search" >
			<field name="name">Export Invoice Submission Search</field>
			<field name="model">export.invoice.submission</field>
			<field eval="10" name="priority" />
			<field name="arch" type="xml">
				<search string="Export Invoice Submission">
					<field name="name" />
					<field name="submission_date" />
					<field name="bank_ref_no" />
					<field name="submission_type" />
				</search>
			</field>
		</record>

		<!-- Sequences for Export Invoice Submission -->

		<record model="ir.sequence" id="seq_export_invoice_submission" >
			<field name="name">Export Invoice Submission</field>
			<field name="code">eis_code</field>
			<field name="prefix">EIS-</field>
			<field name="padding">10</field>
		</record>


		<!-- Export Invoice Submission Menu and Action -->
		<record model="ir.actions.act_window" id="export_invoice_submission_list_action" >
			<field name="name">Export Invoice Submission</field>
			<field name="res_model">export.invoice.submission</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="export_invoice_submission_main_menu" name="Export Invoice Submission"
			parent="commercial_menu" sequence="122"
			action="export_invoice_submission_list_action" />
	</data>
</openerp>

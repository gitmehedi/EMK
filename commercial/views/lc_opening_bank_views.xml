<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- LC Opening Bank Tree Views -->
		<record model="ir.ui.view" id="lc_opening_bank_tree_view">
			<field name="name">lc.opening.bank.tree</field>
			<field name="model">lc.opening.bank</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="LC Opening Bank">
					<field name="name" />
				</tree>
			</field>
		</record>
		
		<!-- LC Opening Bank Form Views -->
		<record model="ir.ui.view" id="lc_opening_bank_form_view">
			<field name="name">lc.opening.bank.form</field>
			<field name="model">lc.opening.bank</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="LC Opening Bank">
					<sheet>
						<group>
							<field name="name" select="1" class="oe_inline" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Bank Account Action Views -->
		<record model="ir.actions.act_window" id="action_lc_opening_bank_tree_view">
			<field name="name">LC Opening Bank</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">lc.opening.bank</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="lc_opening_bank_tree_view" />
		</record>
		
		<!-- Bank Account Menu -->
		<menuitem id="lc_opening_bank_menu" name="LC Opening Bank" parent="commercial_configuration_menu"
		sequence="297" action="action_lc_opening_bank_tree_view" />
	</data>
</openerp>
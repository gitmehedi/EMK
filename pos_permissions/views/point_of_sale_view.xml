<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_permission_form" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='refund']" position="attributes">
                <attribute name="groups">point_of_sale.group_pos_user,point_of_sale.group_pos_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='action_pos_order_invoice']" position="attributes">
                <attribute name="groups">point_of_sale.group_pos_user,point_of_sale.group_pos_manager</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_pos_permission_session_form" model="ir.ui.view">
        <field name="name">pos.session.form.view</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_pos_session_open']" position="attributes">
                <attribute name="groups">point_of_sale.group_pos_user,point_of_sale.group_pos_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='open_frontend_cb']" position="attributes">
                <attribute name="groups">point_of_sale.group_pos_user,point_of_sale.group_pos_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='action_pos_session_closing_control']" position="attributes">
                <attribute name="groups">point_of_sale.group_pos_user,point_of_sale.group_pos_manager</attribute>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="attributes">
                <attribute name="groups">point_of_sale.group_pos_user,point_of_sale.group_pos_manager</attribute>
            </xpath>
        </field>
    </record>

    <act_window
            id="point_of_sale.action_pos_box_in"
            name="Put Money In"
            res_model="cash.box.in"
            src_model="pos.session"
            view_mode="form"
            target="new"
            groups="point_of_sale.group_pos_user,point_of_sale.group_pos_manager"
            key2="client_action_multi"/>

    <act_window
            id="point_of_sale.action_pos_box_out"
            name="Take Money Out"
            res_model="cash.box.out"
            src_model="pos.session"
            view_mode="form"
            target="new"
            groups="point_of_sale.group_pos_user,point_of_sale.group_pos_manager"
            key2="client_action_multi"/>

    <record id="product_temp_from_view" model="ir.ui.view">
        <field name="name">product.temp.from.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='property_account_income_id']" position="attributes">
                    <attribute name="groups">account.group_account_user,point_of_sale.group_pos_user,point_of_sale.group_pos_manager</attribute>
                </xpath>
                <xpath expr="//field[@name='property_account_expense_id']" position="attributes">
                    <attribute name="groups">account.group_account_user,point_of_sale.group_pos_user,point_of_sale.group_pos_manager</attribute>
                </xpath>
            </data>
        </field>
    </record>
</odoo>

<?xml version="1.0"?>
<openerp>
    <data>

        <record id="transfer_request_rule_for_shop_manager" model="ir.rule">
            <field name="name">Shop Manager Transfer Request</field>
            <field name="model_id" ref="model_stock_transfer_request"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('my_shop_id','in', [rec.id for rec in
                user.operating_unit_ids]),('transfer_shop_id','in', [rec.id for rec in user.operating_unit_ids])]
            </field>
            <!--<field name="groups" eval="[(4,ref('base.group_hr_user'))]"/>-->

        </record>

        <record id="transfer_request_line_rule_for_shop_manager" model="ir.rule">
            <field name="name">Shop Manager Transfer Request Line</field>
            <field name="model_id" ref="model_stock_transfer_request_line"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <record model="ir.rule" id="stock-transfer-request_comp_rule">
            <field name="name">Stock Transfer Request multi-company</field>
            <field name="model_id" ref="model_stock_transfer_request"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
            </field>
        </record>

    </data>
</openerp>

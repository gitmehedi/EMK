<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="stock_approval_request_form_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Form View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <form string="Stock Transfer Request Form"  create="false" edit="false">
                    <header>
                        <button name="action_draft" type="object" states="submit"
                                string="Draft" class=""/>
                        <button name="action_approve" type="object" states="submit"
                                string="Approve" class="oe_highlight"/>
                        <button name="action_reject" type="object" states="reject"
                                string="Reject" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="my_shop_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="transfer_shop_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <field name="product_line_ids">
                            <tree string="Products" editable="top">
                                <field name="product_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="store_qty"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="stock_approval_request_tree_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Tree View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <tree string="Stock Transfer Request Tree"  create="false" edit="false"
                      colors="blue:state == 'draft';red:state == 'submit';gray:state in ('receive','reject');green:state in ('approve','transfer');black:state in ('transfer')">
                    <field name="my_shop_id"/>
                    <field name="transfer_shop_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_approval_request_search_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Search View</field>
            <field name="model">stock.transfer.request</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Stock Transfer Request Search">
                    <field name="my_shop_id"/>
                    <field name="transfer_shop_id"/>
                </search>
            </field>
        </record>

        <record id="stock_transfer_approval_request_action" model="ir.actions.act_window">
            <field name="name">Transfer Approval</field>
            <field name="res_model">stock.transfer.request</field>
            <field name="domain">[('state','in',('submit','approve','transfer','receive','reject'))]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="stock_transfer_approval_request_action_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_approval_request_tree_view"/>
            <field name="act_window_id" ref="stock_transfer_approval_request_action"/>
        </record>

        <record id="stock_transfer_approval_request_action_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_approval_request_form_view"/>
            <field name="act_window_id" ref="stock_transfer_approval_request_action"/>
        </record>

        <menuitem id="stock_approval_request_menu" name="Approval"
                  sequence="10" action="stock_transfer_approval_request_action" parent="menu_stock_transfer_root"
                  groups="pebbles_transfer_user.group_requisition_transfer_approval_manager"/>
    </data>
</openerp>

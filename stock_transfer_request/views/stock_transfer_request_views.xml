<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="stock_transfer_request_form_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Form View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <form string="Stock Transfer Request Form">
                    <header>
                        <button name="action_draft" type="object" states="draft"
                                string="Draft" class="oe_highlight"/>
                        <button name="action_submit" type="object" states="draft"
                                string="Submit" class="oe_highlight"/>
                        <button name="action_approve" type="object" states="draft"
                                string="Approve" class="oe_highlight"/>
                        <button name="action_confirm" type="object" states="draft"
                                string="Confirm" class="oe_highlight"/>
                        <button name="action_reject" type="object" states="draft"
                                string="Reject" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="barcode" string="Add Product Using Barcode"/>
                            <h1>
                                <field name="barcode"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="to_shop_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="requested_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <field name="product_line_ids">
                            <tree string="Products" editable="top">
                                <field name="product_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="stock_transfer_request_tree_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Tree View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <tree string="Stock Transfer Request Tree" decoration-info="state=='draft'"
                      decoration-success="state=='approve'" decoration-danger="state=='confirm'"
                      decoration-muted="state in ('reject')">
                    <field name="barcode"/>
                    <field name="to_shop_id"/>
                    <field name="requested_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_transfer_request_search_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Search View</field>
            <field name="model">stock.transfer.request</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Stock Transfer Request Search">
                    <field name="barcode"/>
                    <field name="to_shop_id"/>
                    <field name="requested_id"/>
                </search>
            </field>
        </record>

        <record id="stock_transfer_request_action" model="ir.actions.act_window">
            <field name="name">Stock Transfer Request</field>
            <field name="res_model">stock.transfer.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="stock_transfer_request_menu" name="Stock Transfer Request"
                  sequence="580" action="stock_transfer_request_action"/>
    </data>
</openerp>

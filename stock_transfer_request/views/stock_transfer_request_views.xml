<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="stock_transfer_request_form_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Form View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <form string="Stock Transfer Request Form">
                    <header>
                        <button name="action_draft" type="object" states="submit"
                                string="Draft" class=""/>
                        <button name="action_submit" type="object" states="draft"
                                string="Submit" class="oe_highlight"/>
                        <button name="action_transfer" type="object" states="approve"
                                string="Transfer" class="oe_highlight"/>
                        <button name="action_reject" type="object" states="reject"
                                string="Reject" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="my_shop_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="transfer_shop_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="approve_date"
                                       attrs="{'invisible': [('state','in',('draft','submit'))]}"/>
                                <field name="transfer_date"
                                       attrs="{'invisible': [('state','in',('draft','submit','approve'))]}"/>
                                <field name="receive_date"
                                       attrs="{'invisible': [('state','in',('draft','submit','approve','transfer'))]}"/>
                            </group>
                        </group>
                        <field name="product_line_ids">
                            <tree string="Products" editable="bottom">
                                <field name="product_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="store_qty"/>
                                <field name="quantity" sum="quantity"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="stock_transfer_request_tree_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Tree View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <tree string="Stock Transfer Request Tree"
                      colors="blue:state == 'draft';red:state == 'submit';gray:state in ('receive','reject');green:state in ('approve','transfer');black:state in ('transfer')">
                    <field name="name"/>
                    <field name="my_shop_id"/>
                    <field name="transfer_shop_id"/>
                    <field name="approve_date"/>
                    <field name="transfer_date"/>
                    <field name="receive_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_transfer_request_search_view" model="ir.ui.view">
            <field name="name">Stock Transfer Request Search View</field>
            <field name="model">stock.transfer.request</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Stock Transfer Request Search">
                    <field name="name"
                           filter_domain="[('name', 'ilike', self)]"/>
                    <field name="my_shop_id" string="My Shop"
                           filter_domain="[('my_shop_id', 'ilike', self)]"/>
                    <field name="transfer_shop_id" string="To Shop"
                           filter_domain="[('transfer_shop_id', 'ilike', self)]"/>
                    <field name="approve_date"/>
                    <field name="transfer_date"/>
                    <field name="receive_date"/>
                    <field name="state"
                           filter_domain="[('state', 'ilike', self)]"/>
                </search>
            </field>
        </record>

        <record id="stock_transfer_request_action" model="ir.actions.act_window">
            <field name="name">Stock Transfer Request</field>
            <field name="res_model">stock.transfer.request</field>
            <field name="domain">[('state','in',('draft','submit','approve','transfer','receive','reject'))]</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="stock_transfer_request_search_view"/>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="stock_transfer_request_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_transfer_request_tree_view"/>
            <field name="act_window_id" ref="stock_transfer_request_action"/>
        </record>

        <record id="stock_transfer_request_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_transfer_request_form_view"/>
            <field name="act_window_id" ref="stock_transfer_request_action"/>
        </record>

        <record id="seq_type_stock_transfer_request" model="ir.sequence.type">
            <field name="name">Stock Transfer Request</field>
            <field name="code">stock.transfer.request</field>
        </record>

        <record id="seq_stock_transfer_request" model="ir.sequence">
            <field name="name">Stock Transfer Request</field>
            <field name="code">stock.transfer.request</field>
            <field name="prefix">TM/CN/</field>
            <field name="padding">5</field>
        </record>

        <menuitem id="stock_transfer_request_menu" name="Request"
                  sequence="5" action="stock_transfer_request_action" parent="menu_stock_transfer_root"
                  groups="pebbles_transfer_user.group_requisition_transfer_user"/>
    </data>
</openerp>

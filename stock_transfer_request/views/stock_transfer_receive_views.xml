<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="stock_transfer_receive_form_view" model="ir.ui.view">
            <field name="name">Stock Transfer Receive Form View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <form string="Stock Transfer Receive Form" create="false">
                    <header>
                        <button name="action_receive" type="object" states="transfer"
                                string="Receive" class="oe_highlight"/>
                        <button class="oe_highlight" states="receive"
                                name="%(action_generate_sales_order)d" groups="stock.group_stock_manager"
                                type="action" string="Generate Sales Order"/>
                        <field name="state" widget="statusbar" statusbar_visible="submit,approve,transfer,receive,sold,reject"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="my_shop_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="transfer_shop_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="approve_date"
                                       attrs="{'invisible': [('state','in',('draft','submit'))]}"/>
                                <field name="transfer_date"
                                       attrs="{'invisible': [('state','in',('draft','submit','approve'))]}"/>
                                <field name="receive_date"
                                       attrs="{'invisible': [('state','in',('draft','submit','approve','transfer'))]}"/>
                            </group>
                        </group>
                        <field name="product_line_ids">
                            <tree string="Products" editable="top">
                                <field name="product_id" readonly="1"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="quantity" sum="quantity" readonly="1" string="Transfer Quantity"/>
                                <field name="receive_quantity" sum="receive_quantity" required="1"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="stock_transfer_receive_tree_view" model="ir.ui.view">
            <field name="name">Stock Transfer receive Tree View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <tree string="Stock Transfer receive Tree" create="false" edit="false"
                      colors="blue:state == 'draft';red:state == 'submit';gray:state in ('receive','reject');green:state in ('approve','transfer');black:state in ('transfer')">
                    <field name="name"/>
                    <field name="my_shop_id" string="From Shop"/>
                    <field name="transfer_shop_id" string="My Shop"/>
                    <field name="approve_date"/>
                    <field name="transfer_date"/>
                    <field name="receive_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_transfer_receive_search_view" model="ir.ui.view">
            <field name="name">Stock Transfer Receive Search View</field>
            <field name="model">stock.transfer.request</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Stock Transfer Receive Search">
                    <field name="name"
                           filter_domain="[('name', 'ilike', self)]"/>
                    <field name="my_shop_id" string="From Shop"
                           filter_domain="[('my_shop_id', 'ilike', self)]"/>
                    <field name="transfer_shop_id" string="My Shop"
                           filter_domain="[('transfer_shop_id', 'ilike', self)]"/>
                    <field name="approve_date"/>
                    <field name="transfer_date"/>
                    <field name="receive_date"/>
                    <field name="state"
                           filter_domain="[('state', 'ilike', self)]"/>
                </search>
            </field>
        </record>

        <record id="stock_transfer_receive_action" model="ir.actions.act_window">
            <field name="name">Stock Transfer Receive</field>
            <field name="res_model">stock.transfer.request</field>
            <field name="domain">[('is_transfer','=','1')]</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="stock_transfer_receive_search_view"/>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="stock_transfer_receive_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_transfer_receive_tree_view"/>
            <field name="act_window_id" ref="stock_transfer_receive_action"/>
        </record>

        <record id="stock_transfer_receive_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_transfer_receive_form_view"/>
            <field name="act_window_id" ref="stock_transfer_receive_action"/>
        </record>

        <record id="action_send_to_loss_inventory" model="ir.actions.server">
            <field name="name">Send To Loss Inventory</field>
            <field name="model_id" ref="model_stock_transfer_request"/>
            <field name="state">code</field>
            <field name="condition">True</field>
            <field name="code">if object: self.browse(cr,uid,context.get('active_ids', [])).action_send_loss_inventory()
            </field>
        </record>
        <record id="action_send_to_loss" model="ir.values">
            <field name="name">name</field>
            <field name="model">stock.transfer.request</field>
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,%d'%action_send_to_loss_inventory"/>
        </record>

        <menuitem id="stock_transfer_receive_menu" name="Receive"
                  sequence="15" action="stock_transfer_receive_action" parent="menu_stock_transfer_root"
                  groups="pebbles_transfer_user.group_requisition_transfer_user"/>
    </data>
</openerp>

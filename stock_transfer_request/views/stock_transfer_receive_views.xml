<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="stock_transfer_receive_form_view" model="ir.ui.view">
            <field name="name">Stock Transfer Receive Form View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <form string="Stock Transfer Receive Form">
                    <header>
                        <button name="action_receive" type="object" states="transfer"
                                string="Receive" class="oe_highlight"/>
                        <button name="action_reject" type="object" states="transfer"
                                string="Reject" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="to_shop_id" readonly="1" string="My Shop"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="requested_id" readonly="1" string="From Shop"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <field name="product_line_ids">
                            <tree string="Products" editable="top">
                                <field name="product_id" readonly="1"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="store_qty" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="receive_quantity" required="1"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="stock_transfer_receive_tree_view" model="ir.ui.view">
            <field name="name">Stock Transfer receive Tree View</field>
            <field name="model">stock.transfer.request</field>
            <field name="arch" type="xml">
                <tree string="Stock Transfer receive Tree" decoration-info="state=='draft'"
                      decoration-success="state=='approve'" decoration-danger="state=='confirm'"
                      decoration-muted="state in ('reject')">
                    <field name="to_shop_id"/>
                    <field name="requested_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_transfer_receive_search_view" model="ir.ui.view">
            <field name="name">Stock Transfer Receive Search View</field>
            <field name="model">stock.transfer.request</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Stock Transfer Receive Search">
                    <field name="to_shop_id"/>
                    <field name="requested_id"/>
                </search>
            </field>
        </record>

        <record id="stock_transfer_receive_action" model="ir.actions.act_window">
            <field name="name">Stock Transfer Receive</field>
            <field name="res_model">stock.transfer.request</field>
            <field name="domain">[('is_transfer','=','1'),('to_shop_id','=', user.id)]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="stock_transfer_receive_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_transfer_receive_tree_view"/>
            <field name="act_window_id" ref="stock_transfer_receive_action"/>
        </record>

        <record id="stock_transfer_receive_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_transfer_receive_form_view"/>
            <field name="act_window_id" ref="stock_transfer_receive_action"/>
        </record>

        <menuitem id="stock_transfer_receive_menu" name="Transfer Receive"
                  sequence="15" action="stock_transfer_receive_action" parent="menu_stock_transfer_root"
                groups="pebbles_transfer_user.group_requisition_transfer_user"/>
    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="inherit_hr_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_number']" position="attributes">
                    <field name="employee_number">
                        <attribute name="required">True</attribute>
                    </field>
                </xpath>
                <field name="coach_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='mobile_phone']" position="attributes">
                    <attribute name="placeholder">8801900000000</attribute>
                </xpath>
                <xpath expr="//field[@name='work_phone']" position="attributes">
                    <attribute name="placeholder">8801900000000</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>

                <xpath expr="//field[@name='calendar_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[2]/group/group[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>
        <record model="ir.ui.view" id="view_employee_form_experience">
            <field name="name">hr.experience.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_experience.view_employee_form_inherit"/>
            <field name="arch" type="xml">

                <xpath expr="//form/sheet/notebook/page/field[@name='academic_ids']" position="replace">
                    <field name="academic_ids"></field>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='experience_ids']" position="replace">
                    <field name="experience_ids"></field>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='certification_ids']" position="replace">
                    <field name="certification_ids"></field>
                </xpath>
            </field>
        </record>


        <record id="inherit_hr_employee_view_form2" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bank_account_id']" position="replace">
                    <!--                    <field name="bank_account_id" context="{'default_partner_id': address_home_id}"-->
                    <!--                           options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>-->
                    <field name="bank_account_number"></field>
                </xpath>

                <xpath expr="//field[@name='category_ids']" position="attributes">
                    <attribute name="string">Employee Tag</attribute>
                </xpath>
                <xpath expr="//field[@name='gender']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="int_hr_emp" model="ir.ui.view">
            <field name="name">hr.employee.from.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2"/>
            <field name="arch" type="xml">
                <field name="vehicle_distance" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.from.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_attendance.view_employee_form_inherit_hr_attendance"/>
            <field name="arch" type="xml">
                <field name="barcode" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

        <record id="hr_emp_view_form2" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='active_group']" position="after">
                    <group string="Tax Information">
                        <field name="tax_zone"/>
                        <field name="tax_circle"/>
                        <field name="tax_location"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_res_company_da1" model="ir.ui.view">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="l10n_in_hr_payroll.view_res_company_da"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='indian_payroll']" position="replace">
                        <page name="indian_payroll" string="Indian Payroll" groups="base.group_system">
                            <group>
                                <field name="dearness_allowance"/>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_operating_unit_form_inherit1" model="ir.ui.view">
            <field name="name">operating.unit.form.view</field>
            <field name="model">operating.unit</field>
            <field name="inherit_id" ref="operating_unit.view_operating_unit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_users_form_int1" model="ir.ui.view">
            <field name="name">res.users.form.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="operating_unit.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_operating_unit_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_users_form_inherit1" model="ir.ui.view">
            <field name="name">res.users.form.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="date_range_tree_inherit1" model="ir.ui.view">
            <field name="name">date.range.tree.view</field>
            <field name="model">date.range</field>
            <field name="inherit_id" ref="date_range.view_date_range_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='type_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="date_range_type_tree_inherit1" model="ir.ui.view">
            <field name="name">date.range.type.view</field>
            <field name="model">date.range.type</field>
            <field name="inherit_id" ref="date_range.view_date_range_type_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_company_form_inherit" model="ir.ui.view">
            <field name="name">view.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="survey_survey_view_form2" model="ir.ui.view">
            <field name="name">survey.survey.view.form</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page" position="replace">
                    <page string="Edit Pages and Questions">
                        <field name="page_ids" widget="many2many" mode="tree" context="{'default_survey_id': active_id}"
                               nolabel="1">
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="title"/>
                                <field name="question_ids"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="survey_page_view_form2" model="ir.ui.view">
            <field name="name">survey.page.view.form</field>
            <field name="model">survey.page</field>
            <field name="inherit_id" ref="survey.survey_page_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='question_ids']" position="replace">
                    <field name="question_ids" nolabel="1" widget="many2many" mode="tree"
                           context="{'default_page_id': active_id}">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="question"/>
                            <field name="type"/>
                            <field name="constr_mandatory"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

        <record id="inherited_hr_payslip_run_view1" model="ir.ui.view">
            <field name="name">Inherited HR Payslip Run</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='draft_payslip_run']" position="replace">
                    <button string="Set to Draft" name="draft_payslip_run" type="object" invisible='1' states="close"/>
                </xpath>
            </field>
        </record>

        <record id="view_hr_job_form_website_published_button1" model="ir.ui.view">
            <field name="name">hr.job.form.inherit.published.button</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr_recruitment.hr_job_survey"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>

            </field>
        </record>

        <record id="view_hr_job_survey_inherit" model="ir.ui.view">
            <field name="name">hr.job.form.inherit.published.button</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr_recruitment_survey.hr_job_survey_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='survey_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_recruitment_stage_form_inherit" model="ir.ui.view">
            <field name="name">hr.recruitment.stage</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='job_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='template_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="wizard_employee_form_inherit">
            <field name="name">wizard.employee.form.inherit</field>
            <field name="model">wizard.employee.stage</field>
            <field name="inherit_id" ref="employee_stages.wizard_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='related_user']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

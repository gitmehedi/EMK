<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="inherit_hr_academic_exp_form" model="ir.ui.view">
            <field name="name">inherit.hr.academic.exp.form</field>
            <field name="model">hr.academic</field>
            <field name="inherit_id" ref="hr_experience.view_academic_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='start_date']" position="before">
                    <field name="passed_date"></field>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Institution</attribute>
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

         <record id="inherit_hr_professional_exp_form" model="ir.ui.view">
            <field name="name">inherit.hr.professional.exp.form</field>
            <field name="model">hr.experience</field>
            <field name="inherit_id" ref="hr_experience.view_professional_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='start_date']" position="before">
                    <field name="passed_date"></field>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Employer</attribute>
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="inherit_hr_certification_exp_form" model="ir.ui.view">
            <field name="name">inherit.hr.certification.exp.form</field>
            <field name="model">hr.certification</field>
            <field name="inherit_id" ref="hr_experience.view_certification_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='start_date']" position="before">
                    <field name="passed_date"></field>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

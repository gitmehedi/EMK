<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="inherit_hr_academic_exp_form" model="ir.ui.view">
            <field name="name">inherit.hr.academic.exp.form</field>
            <field name="model">hr.academic</field>
            <field name="inherit_id" ref="hr_experience.view_academic_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Academic Experience">
                        <sheet>
                            <group name="main">
                                <group>
                                    <field name="employee_id"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="name"/>
                                    <field name="passed_institute"/>

                                </group>
                                <group>
                                    <field name="passed_date"></field>
                                    <field name="start_date"/>
                                    <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                                    <field name="expire"/>
                                </group>
                            </group>
                            <group name="Details">
                                <group>
                                    <field name="location"/>
                                    <field name="diploma"/>
                                    <field name="study_field"/>
                                </group>
                            </group>
                            <field name="activities"/>
                            <field name="description"/>
                        </sheet>
                    </form>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_hr_academic_tree" model="ir.ui.view">
            <field name="name">inherit.view.hr.academic.tree</field>
            <field name="model">hr.academic</field>
            <field name="inherit_id" ref="hr_experience.view_academic_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="passed_institute"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

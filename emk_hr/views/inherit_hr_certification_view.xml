<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_hr_certification_exp_form" model="ir.ui.view">
            <field name="name">inherit.hr.certification.exp.form</field>
            <field name="model">hr.certification</field>
            <field name="inherit_id" ref="hr_experience.view_certification_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="certification">
                        <sheet>
                            <group name="main">
                                <group>
                                    <field name="employee_id"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="name" string="Certification"/>
                                    <field name="issued_by"></field>
                                    <field name="location"/>
                                </group>
                                <group>
                                    <field name="passed_date"></field>
                                    <field name="start_date"/>
                                    <field name="expire"/>
                                    <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                                </group>
                            </group>
                            <group colspan="4">
                                <separator string="Certification information" colspan="4"/>
                                <field name="certification"/>
                            </group>
                            <separator string="Description" colspan="4"/>
                            <field name="description" colspan="4" nolabel="1"/>
                        </sheet>
                    </form>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_hr_certifications_tree" model="ir.ui.view">
            <field name="name">inherit.view.hr.certifications.tree</field>
            <field name="model">hr.certification</field>
            <field name="inherit_id" ref="hr_experience.view_certification_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="issued_by"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

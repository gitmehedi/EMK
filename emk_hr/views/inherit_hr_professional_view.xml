<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_hr_professional_exp_form" model="ir.ui.view">
        <field name="name">inherit.hr.professional.exp.form</field>
        <field name="model">hr.experience</field>
        <field name="inherit_id" ref="hr_experience.view_professional_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Professional Experience">
                    <sheet>
                        <group name="main">
                            <group>
                                <field name="name" string="Position"/>
                                <field name="employee_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="employer_name"/>
                                <field name="location"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="expire"/>
                                <field name="end_date" attrs="{'invisible':[('expire', '=', False)]}"/>
                            </group>
                        </group>
                        <separator string="Description" colspan="4"/>
                        <field name="description" colspan="4" nolabel="1"/>
                    </sheet>
                </form>
            </xpath>
        </field>
    </record>

    <record id="inherit_view_hr_professional_tree" model="ir.ui.view">
        <field name="name">inherit.view.hr.professional.tree</field>
        <field name="model">hr.experience</field>
        <field name="inherit_id" ref="hr_experience.view_professional_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="employer_name"/>
            </xpath>
        </field>
    </record>
</odoo>

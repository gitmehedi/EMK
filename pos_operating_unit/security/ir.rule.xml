<?xml version="1.0"?>
<openerp>
    <data>
        <record id="inherited_pos_config_operating_unit" model="ir.rule">
            <field name="name">Inherited Pos Config Operating Unit</field>
            <field name="model_id" ref="model_pos_config"/>
            <field name="domain_force">[('operating_unit_id','in',[o.id for o in user.operating_unit_ids])]</field>
            <field name="global" eval="True"/>
            <field eval="1" name="perm_read"/>
            <field eval="1" name="perm_write"/>
            <field eval="1" name="perm_create"/>
            <field eval="0" name="perm_unlink"/>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record id="inherited_pos_config_company_rule" model="ir.rule">
            <field name="name">PoS Config multi-company</field>
            <field name="model_id" ref="model_pos_config"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
            </field>
        </record>

        <record id="inherited_pos_order_operating_unit" model="ir.rule">
            <field name="name">Inherited Pos Order Operating Unit</field>

            <field eval="1" name="perm_write"/>
            <field eval="1" name="perm_create"/>
            <field eval="0" name="perm_unlink"/>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record model="ir.rule" id="inherited_pos_order_company_rule">
            <field name="name">PoS Order multi-company</field>
            <field name="model_id" ref="model_pos_order"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
            </field>
        </record>

        <record id="inherited_pos_session_operating_unit" model="ir.rule">
            <field name="name">Inherited Pos Session Operating Unit</field>
            <field name="model_id" ref="model_pos_session"/>
            <field name="domain_force">[('operating_unit_id','in',[o.id for o in user.operating_unit_ids])]</field>
            <field name="global" eval="True"/>
            <field eval="1" name="perm_read"/>

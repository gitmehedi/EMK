<?xml version="1.0"?>
<openerp>
    <data>
        <record id="inherited_pos_config_operating_unit" model="ir.rule">
            <field name="name">Inherited Pos Config Operating Unit</field>
            <field name="model_id" ref="model_pos_config"/>
            <field name="domain_force">[('operating_unit_id','=',user.default_operating_unit_id.id)]</field>
            <field name="global" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record id="inherited_pos_order_operating_unit" model="ir.rule">
            <field name="name">Inherited Pos Order Operating Unit</field>

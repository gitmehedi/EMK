<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="inherited_stock_indent_form_flag"
			model="ir.ui.view">
			<field name="name">Stock Indent</field>
			<field name="model">indent.indent</field>
			<field name="inherit_id" ref="stock_indent.view_stock_indent_indent_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='picking_type_id']" position="after">
					<field name="bom_flag"  invisible="1" ></field>					
					<field name="analytic_account_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'
					attrs="{'invisible':[('bom_flag','=',False)]}"/>
				</xpath>
				<xpath expr="//page/field/tree/field[@name='product_id']" position="replace">
					<field name="indent_type_bom_flag" invisible="1"  />
					<field name="product_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'
										 domain="['|',('general_item', '=',indent_type_gen_flag), ('bom_item', '=', indent_type_bom_flag)
										  ,('gen_bom_flag', '!=', False)]"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp>

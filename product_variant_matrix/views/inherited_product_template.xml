<openerp>
	<data>
		<record id="inherited_product_template_form_view_extend" model="ir.ui.view">
			<field name="name">product.template.product.form.extend.inharit
			</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//field[@name='attribute_line_ids']" position="replace">
						<!-- <field name="attribute_line_ids" widget="one2many_list"
							context="{'show_attribute': False}" attrs="{'invisible':[('available_in_pos','=',True)]}"> -->
						<field name="attribute_line_ids" widget="one2many_list"
							context="{'show_attribute': False}" >
							<tree string="Variants" editable="bottom">
								<field name="attribute_id" />
								<field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}"
									domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}" />
							</tree>
						</field>
					</xpath>
					<xpath expr="//field[@name='attribute_line_ids']" position="after">
						<!-- <group name="product_variant_matrix" string="Matrix"
							attrs="{'invisible':[('available_in_pos','=',False)]}"> -->
						<group name="product_variant_matrix" string="Matrix">
							<div>
								<field name="attribute_line_extend_ids" widget="x2many_2d_matrix_checkbox"
									field_x_axis="size_value_id" field_y_axis="color_value_id"
									field_value="is_active" />
							</div>
						</group>
					</xpath>
				</data>
			</field>
		</record>
		<record id="inherited_product_template_form_view_extend_2" model="ir.ui.view">
			<field name="name">product.template.form.inherit.2</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="account.product_template_form_view" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//field[@name='categ_id']" position="replace">
						<field name="id" invisible="1" />
						<field name="categ_id" attrs="{'readonly': [('id', '!=', False)]}" />
					</xpath>
				</data>
			</field>
		</record>
		<!-- <record id="inherited_product_template_form_view_extend_3"
			model="ir.ui.view">
			<field name="name">product.template.product.form.extend.inharit.3
			</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="point_of_sale.product_template_form_view" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//field[@name='available_in_pos']" position="replace">
						<field name="id" invisible="1" />
						<field name="available_in_pos" attrs="{'readonly': [('id', '!=', False)]}" />
					</xpath>
				</data>
			</field>
		</record> -->
	</data>
</openerp>
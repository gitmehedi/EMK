<openerp>
	<data>
	
		<record id="view_category_property_form" model="ir.ui.view">
            <field name="name">product.category.property.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='parent']" position="inside">
                    	<br />
                        <group name="product_variant_matrix" string="Applicable Variant Properties" colspan="4">
							<group col="4">
								<field name="color_ids" widget="many2many_checkboxes"
									options="{'no_create_edit': True}" string="Applicable Color" />

								<field name="size_ids" widget="many2many_checkboxes"
									options="{'no_create_edit': True}" string="Applicable Size"/>
							</group>
						</group>
                    </xpath>
                </data>
            </field>
        </record>
        
	</data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tds_vat_account_config" model="ir.ui.view">
        <field name="name">view.tds.vat.account.config</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="account.view_account_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting']" position="after">
                <group string="Security Deposit" name="security_deposit_account">
                    <label for="security_deposit_account_id" string="Security Deposit"
                           groups="account.group_account_user"/>
                    <div name="security_deposit_account">
                        <div>
                            <field name="security_deposit_account_id" domain="[('level_id.name','=','Layer 5')]"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                   class="oe_inline"/>
                        </div>
                    </div>
                    <label for="head_branch_id" string="Head Branch" groups="account.group_account_user"/>
                    <div name="head_branch_id">
                        <div>
                            <field name="head_branch_id" class="oe_inline" required="True"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gbs_invoice_merge" model="ir.ui.view">
        <field name="name">GBS Merger Partner Invoice</field>
        <field name="model">invoice.merge</field>
        <field name="inherit_id" ref="account_invoice_merge.view_invoice_merge" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='keep_references']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherit_invoice_merge_ou" model="ir.ui.view">
        <field name="name">inherit.invoice.merge.ou</field>
        <field name="model">invoice.merge</field>
        <field name="inherit_id" ref="account_invoice_merge_operating_unit.view_invoice_merge_ou"/>
        <field name="priority" eval="18"/>
        <field name="arch" type="xml">
            <xpath expr="//p[1]" position="replace">
                <p>
                    Please note that:
                    <br/><br/>
                    Invoices will only be merged if:
                    <br/>
                    * Invoices are in draft
                    <br/>
                    * Invoices belong to the same partner
                    <br/><br/>
                    Lines will only be merged if:
                    <br/>
                    * Invoice lines are exactly the same except Description &amp; Quantity.
                    <br/>
                </p>
            </xpath>
        </field>
    </record>
</odoo>


<?xml version="1.0"?>
<odoo>
    <record id="view_bill_payment_instruction_wizard" model="ir.ui.view">
        <field name="name">bill.payment.instruction.wizard.form</field>
        <field name="model">bill.payment.instruction.wizard</field>
        <field name="arch" type="xml">
            <form string="Payment Instruction">
                <sheet>
                    <group>
                        <group>
                            <field name="invoice_id"/>
                            <field name="invoice_amount"/>
                            <field name="instructed_amount" invisible="1"/>
                        </group>
                        <group>
                            <field name="instruction_date"/>
                            <field name="amount"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Validate" name="action_validate" type="object"
                            confirm="Are you sure to generate payment instruction?" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_server_file_error_form">
        <field name="name">GLIF Error</field>
        <field name="model">server.file.error</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="GLIF Error" edit="0" create="0" delete="0" duplicate="0">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="process_date"/>

                            <field name="file_path" invisible="1"/>
                        </group>
                        <group>
                            <field name="ftp_ip" invisible="1"/>
                            <field name="error_count"/>
                            <field name="status"  invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Error Details">
                            <field name="line_ids">
                                <tree>
                                    <field name="line_no"/>
                                    <field name="details"/>
                                    <field name="process_date"/>
                                </tree>
                                <form>
                                    <field name="line_no"/>
                                    <field name="details"/>
                                    <field name="process_date"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_server_file_error_tree">
        <field name="name">GLIF Process</field>
        <field name="model">server.file.error</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="GLIF Error" edit="0" create="0" delete="0" duplicate="0"
                  decoration-danger="state=='issued'" decoration-muted="state=='resolved'">
                <field name="name"/>
                <field name="error_count"/>
                <field name="process_date"/>
                <field name="status" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_server_file_error_search">
        <field name="name">GLIF Process</field>
        <field name="model">server.file.error</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="GLIF Error Search">
                <field name="process_date"/>
                <group name="group_by">
                    <filter string="Issued" name="state" icon="terp-personal"
                            domain="[('state','=','issued')]"/>
                    <filter string="Resolved" icon="terp-personal"
                            domain="[('state','=','resolved')]"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_server_file_error_form" model="ir.actions.act_window">
        <field name="name">GLIF Error</field>
        <field name="res_model">server.file.error</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {"search_default_state":'issued'}
        </field>
        <field name="search_view_id" ref="view_server_file_error_search"/>
    </record>

    <menuitem parent="main_error_api_interface" action="action_server_file_error_form" id="server_file_error_menu"
              sequence="20" groups="grp_api_interface_manager,grp_api_group_finance"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gbs_file_import_tree" model="ir.ui.view">
            <field name="name">gbs.file.import.tree</field>
            <field name="model">gbs.file.import</field>
            <field name="arch" type="xml">
                <tree string="Import Data"
                      decoration-success="state=='draft'" decoration-muted="state=='processed'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="gbs_file_import_form" model="ir.ui.view">
            <field name="name">gbs.file.import.form</field>
            <field name="model">gbs.file.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Data">
                    <header>
                        <button name="gbs_ogl_cbs_interface.action_gbs_file_import_wizard"
                                groups="mtbl_access.group_mtbl_sys_admin"
                                attrs="{'invisible': ['|',('import_lines','!=', []),('state','=', 'processed')]}"
                                type="action" string="Upload" class="oe_highlight"/>
                        <button name="action_process"
                                groups="mtbl_access.group_mtbl_sys_admin"
                                attrs="{'invisible': ['|',('import_lines','=', []),('state','=', 'processed')]}"
                                type="object" string="Process" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Imported Data">
                                <field name="import_lines">
                                    <tree string="List" editable="bottom" create="0" edit="0" delete="0">
                                        <field name="type"/>
                                        <field name="name" invisible="1"/>
                                        <field name="account_no"/>
                                        <field name="amount"/>
                                        <field name="narration"/>
                                        <field name="reference_no"/>
                                        <field name="value"/>
                                        <field name="date"/>
                                        <field name="state"/>
                                    </tree>
                                    <form string="List" editable="bottom" create="0" edit="0" delete="0">
                                        <group>
                                            <group>
                                                <field name="type"/>
                                                <field name="name" invisible="1"/>
                                                <field name="account_no"/>
                                                <field name="amount"/>
                                                <field name="narration"/>
                                            </group>
                                            <group>
                                                <field name="reference_no"/>
                                                <field name="value"/>
                                                <field name="date"/>
                                                <field name="state"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_generate_cbs_journal_success_search">
            <field name="name">gbs.file.import.form</field>
            <field name="model">gbs.file.import</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Import Data Search">
                    <field name="name"/>
                    <field name="date"/>
                    <group name="group_by">
                        <filter string="Draft" name="state" icon="terp-personal"
                                domain="[('state','=','draft')]"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_gbs_file_import" model="ir.actions.act_window">
            <field name="name">Import Data</field>
            <field name="res_model">gbs.file.import</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {"search_default_state":'draft'}
            </field>
        </record>

        <menuitem id="menu_gbs_file_import" name="Import Data"
                  parent="main_error_api_interface" sequence="50"
                  action="action_gbs_file_import"
                  groups="mtbl_access.group_mtbl_sys_admin"/>
    </data>
</odoo>
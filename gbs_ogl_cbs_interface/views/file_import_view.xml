<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gbs_file_import_form" model="ir.ui.view">
            <field name="name">gbs.file.import.form</field>
            <field name="model">gbs.file.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bulk / Manual Journal" delete="0" duplicate="0">
                    <header>
                        <button name="gbs_ogl_cbs_interface.action_gbs_file_import_wizard"
                                groups="mtbl_access.group_mtbl_sys_admin,account.group_account_user"
                                attrs="{'invisible': ['|',('import_lines','!=', []),('state','=', 'processed')]}"
                                type="action" string="Upload" class="oe_highlight"/>
                        <button name="action_process"
                                groups="mtbl_access.group_mtbl_sys_admin,account.group_account_user"
                                attrs="{'invisible': ['|',('import_lines','=', []),('state','=', 'processed')]}"
                                type="object" string="Process" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div>
                            <h1>
                                <field name="code"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" readonly="1"/>
                                <field name="file_name" invisible="1"/>
                                <field name="upload_file" filename="file_name" readonly="1"/>
                            </group>
                            <group>
                                <field name="debit"/>
                                <field name="credit"/>
                                <field name="mismatch_amount"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Values">
                                <field name="import_lines">
                                    <tree string="List" editable="bottom">
                                        <field name="type_journal"/>
                                        <field name="name" invisible="1"/>
                                        <field name="account_no"/>
                                        <field name="narration"/>
                                        <field name="debit" sum="debit"
                                               attrs="{'readonly':[('type_journal','=','cr')],'required':[('type_journal','=','dr')]}"/>
                                        <field name="credit"
                                               attrs="{'readonly':[('type_journal','=','dr')],'required':[('type_journal','=','cr')]}"
                                               sum="credit"/>
                                        <field name="date"/>
                                    </tree>
                                    <form string="Values">
                                        <header>
                                            <filed name="state"/>
                                        </header>
                                        <group>
                                            <group>
                                                <field name="type_journal"/>
                                                <field name="account_no"/>
                                                <field name="narration"/>
                                            </group>
                                            <group>
                                                <field name="debit"
                                                       attrs="{'readonly':[('type_journal','=','cr')],'required':[('type_journal','=','dr')]}"/>
                                                <field name="credit"
                                                       attrs="{'readonly':[('type_journal','=','dr')],'required':[('type_journal','=','cr')]}"/>
                                                <field name="date"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="gbs_file_import_tree" model="ir.ui.view">
            <field name="name">gbs.file.import.tree</field>
            <field name="model">gbs.file.import</field>
            <field name="arch" type="xml">
                <tree string="Bulk / Manual Journal"
                      decoration-success="state=='draft'" decoration-muted="state=='processed'">
                    <field name="code"/>
                    <field name="file_name" invisible="1"/>
                    <field name="date"/>
                    <field name="upload_file" filename="file_name" readonly="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_generate_cbs_journal_success_search">
            <field name="name">gbs.file.import.search</field>
            <field name="model">gbs.file.import</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Bulk / Manual Journal">
                    <field name="date"/>
                    <group name="group_by">
                        <filter string="Draft" name="state" icon="terp-personal"
                                domain="[('state','=','draft')]"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_gbs_file_import" model="ir.actions.act_window">
            <field name="name">Bulk / Manual Journal</field>
            <field name="res_model">gbs.file.import</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {"search_default_state":'draft'}
            </field>
        </record>

        <menuitem id="menu_gbs_file_import" name="Bulk / Manual Journal"
                  parent="account.menu_finance_payables" sequence="50"
                  action="action_gbs_file_import"
                  groups="mtbl_access.group_mtbl_sys_admin"/>
    </data>
</odoo>
<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_generate_cbs_journal_success_form">
        <field name="name">MDC Success</field>
        <field name="model">generate.cbs.journal.success</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="CBS Batch Success" edit="0" create="0" delete="0" duplicate="0">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="upload_file" filename="name"/>
                            <field name="date"/>
                            <field name="journal_count"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="stop_date"/>
                            <field name="time"/>
                            <field name="status" invisible="1"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="line_ids">
                                <tree edit="0" create="0" delete="0" duplicate="0">
                                    <field name="move_id"/>
                                </tree>
                                <form edit="0" create="0" delete="0" duplicate="0">
                                    <field name="move_id"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_generate_cbs_journal_success_tree">
        <field name="name">MDC Success</field>
        <field name="model">generate.cbs.journal.success</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="CBS Batch Success" edit="0" create="0" delete="0" duplicate="0"
                  decoration-success="state=='issued'" decoration-muted="state=='resolved'">
                <field name="name"/>
                <field name="date"/>
                <field name="journal_count"/>
                <field name="start_date"/>
                <field name="stop_date"/>
                <field name="time"/>
                <field name="status" invisible="1"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_generate_cbs_journal_success_search">
        <field name="name">MDC Success</field>
        <field name="model">generate.cbs.journal.success</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="CBS Batch Success Search">
                <field name="date"/>
                <field name="start_date"/>
                <field name="stop_date"/>
                <field name="file_name"/>
            </search>
        </field>
    </record>

    <record id="action_generate_cbs_journal_success_form" model="ir.actions.act_window">
        <field name="name">MDC Success</field>
        <field name="res_model">generate.cbs.journal.success</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_generate_cbs_journal_success_search"/>
    </record>

    <menuitem parent="main_error_api_interface" action="action_generate_cbs_journal_success_form"
              id="generate_cbs_journal_success_menu" sequence="10" groups="grp_api_interface_manager"/>
</odoo>

<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_mdc_process_form">
        <field name="name">MDC Process</field>
        <field name="model">generate.cbs.journal.success</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="MDC Process" edit="0" create="0" delete="0" duplicate="0">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="upload_file" filename="name"/>
                            <field name="date"/>
                            <field name="time"/>
                            <field name="journal_count"/>
                        </group>
                        <group>
                            <field name="mdc_report_file" filename="name"/>
                            <field name="mdc_report_process_time"/>
                            <field name="status" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Journals">
                            <field name="line_ids">
                                <tree edit="0" create="0" delete="0" duplicate="0">
                                    <field name="move_id"/>
                                </tree>
                                <form edit="0" create="0" delete="0" duplicate="0">
                                    <field name="move_id"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_mdc_process_tree">
        <field name="name">MDC Process</field>
        <field name="model">generate.cbs.journal.success</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="CBS Batch Success" edit="0" create="0" delete="0" duplicate="0"
                  decoration-success="state=='mdc'" decoration-muted="state=='report'">
                <field name="name"/>
                <field name="journal_count"/>
                <field name="date" string="MDC Process Time"/>
                <field name="mdc_report_process_time" string="Report Process Time"/>
                <field name="state"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_mdc_process_search">
        <field name="name">MDC Process</field>
        <field name="model">generate.cbs.journal.success</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="MDC Process Search">
                <field name="name"/>
                <group name="group_by">
                    <filter string="MDC" name="state" icon="terp-personal"
                            domain="[('state','=','mdc')]"/>
                    <filter string="Report" icon="terp-personal"
                            domain="[('state','=','report')]"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_mdc_process_form" model="ir.actions.act_window">
        <field name="name">MDC Process</field>
        <field name="res_model">generate.cbs.journal.success</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_state":'mdc'}</field>
        <field name="search_view_id" ref="view_mdc_process_search"/>
    </record>

    <menuitem parent="main_error_api_interface" action="action_mdc_process_form"
              id="mdc_process_menu" sequence="10" groups="grp_api_interface_manager,grp_api_group_finance,grp_api_branc_user"/>
</odoo>

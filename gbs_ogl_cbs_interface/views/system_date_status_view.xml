<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_system_date_status_form">
        <field name="name">System Date Status</field>
        <field name="model">system.date.status</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="System Date Status" edit="0" create="0" delete="0" duplicate="0">
                <header>
                    <field name="state"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="create_date"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="current_date"/>
                            <field name="previous_date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_system_date_status_tree">
        <field name="name">System Date Status</field>
        <field name="model">system.date.status</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="System Date Status" edit="0" create="0" delete="0" duplicate="0"
                  decoration-success="state=='success'" decoration-muted="state=='fail'">
                <field name="create_date"/>
                <field name="current_date"/>
                <field name="previous_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_system_date_status_search">
        <field name="name">System Date Status</field>
        <field name="model">system.date.status</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="System Date Status Search">
                <field name="create_date"/>
                <field name="state"/>
                <field name="current_date"/>
                <field name="previous_date"/>
                <group name="group_by">
                    <filter string="Success" name="state" icon="terp-personal"
                            domain="[('state','=','success')]"/>
                    <filter string="Failed" name="state" icon="terp-personal"
                            domain="[('state','=','fail')]"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_system_date_status_form" model="ir.actions.act_window">
        <field name="name">System Date Status</field>
        <field name="res_model">system.date.status</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_system_date_status_search"/>
        <field name="context">
            {"search_default_state":'success'}
        </field>
    </record>

    <menuitem parent="main_error_api_interface" action="action_system_date_status_form"
              id="system_date_status_menu" sequence="50"
              groups="grp_api_interface_manager"/>
</odoo>

<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_server_file_success_form">
        <field name="name">GLIF Success</field>
        <field name="model">server.file.success</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="GLIF Success" edit="0" create="0" delete="0" duplicate="0">
                <header>
                    <button name="unlink_glif" groups="gbs_ogl_cbs_interface.grp_api_interface_manager"
                            confirm="Are you sure to delete current GLIF which will also delete related CBS Journal?"
                            type="object" string="DELETE GLIF"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="upload_file" filename="name" invisible="1"/>
                            <field name="name"/>
                            <field name="move_id"/>
                        </group>
                        <group>
                            <field name="glif_date"/>
                            <field name="start_date"/>
                            <field name="stop_date"/>
                            <field name="time"/>
                            <field name="status" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_server_file_success_tree">
        <field name="name">GLIF Success</field>
        <field name="model">server.file.success</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="GLIF Success" edit="0" create="0" delete="0" duplicate="0"
                  decoration-danger="state=='pending'" decoration-bf="state=='pending'"
                  decoration-muted="state=='success'">
                <field name="name"/>
                <field name="glif_date"/>
                <field name="start_date"/>
                <field name="stop_date"/>
                <field name="time"/>
                <field name="move_id"/>
                <field name="state"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_server_file_success_search">
        <field name="name">GLIF Success</field>
        <field name="model">server.file.success</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="GLIF Success Search">
                <field name="glif_date"/>
                <field name="name"/>
                <field name="start_date"/>
                <field name="stop_date"/>
            </search>
        </field>
    </record>

    <record id="action_server_file_success_form" model="ir.actions.act_window">
        <field name="name">GLIF Success</field>
        <field name="res_model">server.file.success</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_server_file_success_search"/>
    </record>

    <menuitem parent="main_error_api_interface" action="action_server_file_success_form"
              id="server_file_success_menu" sequence="30" groups="grp_api_interface_manager,grp_api_group_finance"/>
</odoo>

<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_soap_process_error_form">
        <field name="name">API Error</field>
        <field name="model">soap.process.error</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="API Error" edit="0" create="0" delete="0" duplicate="0">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="name"/>
                    <group>
                        <group>
                            <field name="process_date"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="error_message"/>
                            <field name="error_code"/>
                        </group>
                    </group>
                    <separator string="Request Details"/>
                    <field name="request_body"/>
                    <separator string="Response Details"/>
                    <field name="response_body"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_soap_process_error_tree">
        <field name="name">API Process</field>
        <field name="model">soap.process.error</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="API Error" edit="0" create="0" delete="0" duplicate="0"
                  decoration-danger="state=='issued'" decoration-muted="state=='resolved'">
                <field name="name"/>
                <field name="process_date"/>
                <field name="status"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_soap_process_error_search">
        <field name="name">API Process</field>
        <field name="model">soap.process.error</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="API Error Search">
                <field name="process_date"/>
                <field name="status"/>
                <group name="group_by">
                    <filter string="Issued" name="state" icon="terp-personal"
                            domain="[('state','=','issued')]"/>
                    <filter string="Resolved" icon="terp-personal"
                            domain="[('state','=','resolved')]"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_soap_process_error_form" model="ir.actions.act_window">
        <field name="name">API Error</field>
        <field name="res_model">soap.process.error</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {"search_default_state":'issued'}
        </field>
        <field name="search_view_id" ref="view_soap_process_error_search"/>
    </record>

    <menuitem parent="main_error_api_interface" action="action_soap_process_error_form" id="soap_process_error_menu"
              sequence="15" groups="grp_api_interface_manager"/>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="1">
    <record id="ir_cron_server_file_process_scheduler" model="ir.cron">
        <field name="name">GLIF Processing Scheduler</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="priority">100</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">server.file.process</field>
        <field name="function">action_backup_all</field>
    </record>

    <record id="ir_cron_payment_instruction_scheduler" model="ir.cron">
        <field name="name">API Processing Scheduler</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="priority">120</field>
        <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">soap.process</field>
        <field name="function">action_payment_instruction</field>
    </record>

    <record id="ir_cron_generate_cbs_journal_scheduler" model="ir.cron">
        <field name="name">CBS Batch Processing Scheduler</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="priority">110</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">generate.cbs.journal</field>
        <field name="function">generate_journal</field>
    </record>
</odoo>

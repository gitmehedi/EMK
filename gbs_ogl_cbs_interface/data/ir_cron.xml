<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="1">
    <record id="ir_cron_server_file_process_scheduler" model="ir.cron">
        <field name="name">OGL-CBS GLIF Process Scheduler</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="priority">5</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">server.file.process</field>
        <field name="function">action_backup_all</field>
    </record>

    <record id="ir_cron_generate_cbs_journal_scheduler" model="ir.cron">
        <field name="name">OGL-CBS Batch Process Scheduler</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="priority">5</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">generate.cbs.journal</field>
        <field name="function">generate_journal</field>
    </record>

    <record id="ir_cron_invalidate_payment_scheduler" model="ir.cron">
        <field name="name">Invalidate Payment Cache</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="active">True</field>
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="priority">5</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">payment.instruction</field>
        <field name="function">invalidate_payment_cache</field>
    </record>
</odoo>

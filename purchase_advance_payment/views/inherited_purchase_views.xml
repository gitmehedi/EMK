<?xml version="1.0" encoding='utf-8' ?>
<openerp>
    <data>
        <record id="inherited_advance_payment_purchase_order_form" model="ir.ui.view">
            <field name="name">inherited.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="before">
                    <field name="invoice_status" invisible="1"/>
                    <button name="%(action_view_purchase_advance_payment_inv)d" string="Create Invoice"
                            attrs="{'invisible': ['|',('invoice_status', '=', True),('state', '!=', 'approved')]}"
                            type="action" class="oe_highlight" groups="base.group_user"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

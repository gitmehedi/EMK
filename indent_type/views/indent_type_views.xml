<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_form_indent_type" model="ir.ui.view">
            <field name="name">indent.type.form</field>
            <field name="model">indent.type</field>
            <field name="arch" type="xml">
                <form string="Leave Request">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group></group>
                    </group>
                </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_indent_type" model="ir.ui.view">
            <field name="name">indent.type.tree</field>
            <field name="model">indent.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_indent_type">
            <field name="name">Indent Type</field>
            <field name="res_model">indent.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_indent_type" name="Indent Type" parent="stock_indent.menu_indent_indent_main"
                  action="action_indent_type" sequence="100"/>

    </data>
</odoo>
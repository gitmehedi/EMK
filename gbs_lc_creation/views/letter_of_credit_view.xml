<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="local_credit_form_view" model="ir.ui.view">
            <field name="name">letter.credit.form</field>
            <field name="model">letter.credit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Letter Credit" delete="false" copy='0'>
                    <header>
                        <button name="action_confirm" type="object" states="confirm" string="Confirm" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>

                        <group>
                            <group colspan="4">
                                <group>
                                    <field name="name"/>
                                    <field name="type" widget="radio"/>
                                </group>
                            </group>
                            <group string="Applicant">
                               <field name="first_party"/>
                               <field name="first_party_bank"/>
                            </group>
                            <group string="Beneficiary">
                               <field name="second_party"/>
                               <field name="second_party_bank"/>
                            </group>
                            <group string="LC Value">
                                <field name="lc_value"/>
                                <field name="currency_id" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="tolerance"/>
                            </group>
                            <group string="LC Dateline">
                                <field name="issue_date"/>
                                <field name="expiry_date"/>
                                <field name="shipment_date"/>
                            </group>
                            <group string="Others Info" colspan="4">
                                    <group>
                                        <field name="hs_code"/>
                                        <field name="lc_mode"/>
                                        <field name="payment_terms"/>
                                        <field name="period_of_presentation"/>
                                        <field name="trans_shipment"/>
                                    </group>
                                    <group>
                                        <field name="master_lc_number"/>
                                        <field name="ship_mode"/>
                                        <field name="inco_terms"/>
                                        <field name="partial_shipment"/>
                                    </group>
                            </group>
                            <notebook colspan="4">
                                  <page string="Port Info">
                                    <group>
                                        <group>
                                        <field name="landing_port"/>
                                        <field name="discharge_port"/>
                                        <field name="cnf_agent"/>
                                        </group>
                                    </group>
                                  </page>
                                  <page string="Lien Bank">
                                      <group>
                                          <group>
                                        <field name="require_lien"/>
                                        <field name="lien_bank" attrs="{'invisible': [('require_lien','=',False)]}"/>
                                        <field name="lien_date" attrs="{'invisible': [('require_lien','=',False)]}"/>
                                          </group>
                                      </group>
                                  </page>
                                  <page string="Insurance">
                                      <group>
                                          <group>
                                        <field name="insurance_company_name"/>
                                        <field name="insurance_number"/>
                                        <field name="insurance_bill"/>
                                          </group>
                                      </group>
                                  </page>
                                  <page string="Terms &amp; Condition">
                                      <group>
                                         <field name="terms_condition" widget="html" options="{'style-inline': true}"/>
                                      </group>
                                  </page>
                                  <page string="Remarks">
                                      <group>
                                         <field name="remarks" widget="html" options="{'style-inline': true}"/>
                                      </group>
                                  </page>

                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="letter_credit_tree_view" model="ir.ui.view">
            <field name="name">local.credit.tree</field>
            <field name="model">letter.credit</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Letter of Credit">
                    <field name="name"/>
                    <field name="first_party"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="first_party_bank"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Generate automated sequence -->
        <record id="seq_letter_credit" model="ir.sequence">
            <field name="name">LC Sequences</field>
            <field name="code">letter.credit</field>
            <field name="prefix">MLC-</field>
            <field name="padding">9</field>
        </record>


        <record model="ir.actions.act_window" id="lc_creation_action">
            <field name="name">Letter of Credit</field>
            <field name="res_model">letter.credit</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="lc_creation_menu" parent="sales_team.menu_base_partner"
            sequence="10" action="lc_creation_action"/>
        <menuitem id="lc_creation_submenu" name="Letter of Credit (LC)" parent="lc_creation_menu"
                  action="lc_creation_action"/>
    </data>
</odoo>
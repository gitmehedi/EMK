<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inherited_pos_config_form" model="ir.ui.view">
            <field name="name">inherited.pos.config.form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tip_product_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='iface_start_categ_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>

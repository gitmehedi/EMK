<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inherited_account_journal_form" model="ir.ui.view">
            <field name="name">inherited.account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='profit_account_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='loss_account_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='default_debit_account_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='default_credit_account_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='type_control_ids']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='account_control_ids']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>

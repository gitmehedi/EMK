<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_picking_form_inherit2">
        <field name="name">stock.picking.inherit2.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_picking_extend.view_stock_picking_form1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='receive_type']" position="after">
                <field name="shipment_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                       attrs="{'invisible': [('receive_type', '!=', 'lc')],'required':[('receive_type', '=','lc')]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="challan_bill_no" attrs="{'required':[('receive_type', 'in',['lc','loan','other'])]}"/>
            </xpath>
            <!--<xpath expr="//field[@name='move_lines']/kanban/field[@name='product_id']" position="after">-->
                <!--<field name="price_unit"/>-->
            <!--</xpath>-->
        </field>
    </record>
    <record id="view_move_picking_tree1" model="ir.ui.view">
        <field name="name">stock.move.product.price.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_tree"/>
        <field eval="16" name="priority"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="price_unit" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
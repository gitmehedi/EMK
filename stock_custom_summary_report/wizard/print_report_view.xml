<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_stock_inventory_report" model="ir.ui.view">
            <field name="name">wizard.stock.inventory.report</field>
            <field name="model">stock.inventory.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="operating_unit_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                        </group>
                        <group>
                            <field name="report_type_ids" widget="many2many_tags"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                            <field name="category_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                            <field name="product_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"
                                   domain="[('product_tmpl_id.categ_id.id', 'child_of', category_id)]"/>
                        </group>
                    </group>
                    <footer>
                        <button name="report_print" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_wizard_stock_inventory_report" model="ir.actions.act_window">
            <field name="name">Stock Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.inventory.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_wizard_stock_inventory_report"
                  id="menu_action_wizard_report_inventory"
                  parent="stock.menu_warehouse_report" groups="stock.group_stock_user"
                  sequence="10"/>

        <menuitem id="stock.menu_warehouse_report"
                  name="Reports" sequence="99"
                  parent="stock.menu_stock_root"
                  groups="stock.group_stock_user"/>


    </data>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Stock Transfer Menu -->
					
		<record id="view_wizard_stock_report_history" model="ir.ui.view">
            <field name="name">Stock Report</field>
            <field name="model">stock.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <field name="start_date"/>
                        <field name="end_date" />
                        <field name="warehouse_id" widget="selection"/>
                        <field name="category_id" widget="selection"/>
                        <field name="product_id" widget="selection"/>
                        
                    </group>
                    <footer>
                        <button name="stock_report" string="Submit" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
                
		
		
		<record id="action_wizard_stock_summary_report_history" model="ir.actions.act_window">
			<field name="name">Stock Summary</field>
			<field name="res_model">stock.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_wizard_stock_report_history" />
			<field name="context">{'default_stock_type': '4'}</field>
			<field name="target">new</field>
		</record>

		<!--<menuitem id="menu_action_wizard_stock_summary_report_history"-->
			<!--action="action_wizard_stock_summary_report_history" -->
			<!--parent="stock_extend.sub_group_menu_indent_stock_report"-->
			<!--sequence="4" />-->
        
	</data>
</openerp>
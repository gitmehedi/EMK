<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="mrp_daily_production_form" model="ir.ui.view">
            <field name="name">mrp.daily.production.form</field>
            <field name="model">mrp.daily.production</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="MRP Daily Production" delete="false">
                    <header>
                        <button name="action_confirm" type="object"
                                string="Apply" states="draft"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="Approve" states="applied"
                                class="oe_highlight"/>
                        <button name="action_refuse" type="object"
                                string="Refuse"
                                states="applied"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="production_date" groups="base.group_multi_company" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            </group>
                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="product_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="quantity"/>
                                            <field name="uom_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hr_meal_bill_tree" model="ir.ui.view">
            <field name="name">mrp.daily.production.tree</field>
            <field name="model">mrp.daily.production</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="MRP Daily Production">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mrp_daily_action">
            <field name="name">Daily Production</field>
            <field name="res_model">mrp.daily.production</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="mrp_daily_production_submenu" sequence="15" name="Daily Production Entry" parent="product_sales_pricelist.custom_menu_products"
                  action="mrp_daily_action"/>
    </data>
</odoo>
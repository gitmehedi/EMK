<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.sales.deprecation</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[@name='sales_purchases']/group/group/field[@name='company_id']" position="after">
                    <field name="is_deprecated" attrs="{'invisible': [('customer', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" ?>
<odoo>
  <data>

    <record id="aml_import_view_form" model="ir.ui.view">
      <field name="name">hr.attendance.import.wizard.form</field>
      <field name="model">hr.attendance.import.wizard</field>
      <field name="priority">1</field>
      <field name="arch" type="xml">
        <form string="Import File">
            <group>
                <group>
                    <field name="aml_data" filename="aml_fname"/>
                    <field name="aml_fname" readonly="1"/>
                </group>
                <group>
                    <field name="operating_unit_id" readonly="1"/>
                    <field name="company_id" readonly="1"/>
                    <field name="attendance_id" invisible="1"/>
                </group>
            </group>
            <footer>
                <button name="attendance_import" string="Import" type="object" class="oe_highlight"/>
                or
                <button string="Cancel" class="oe_link" special="cancel"/>
                <div style="float:right;">
                    <strong>Download Sample:</strong>
                    <a role="button" href="/hr_attendance_import/static/sample_import_data/import_attendance_template.xls"
                       class="btn-primary"
                       style="font-size: 12px;line-height: 1.5;border-radius: 3px;padding: 8px 10px;color: #FFFFFF;">
                        <i class="fa fa-download"/>
                        Excel file
                    </a>
                </div>
            </footer>
        </form>
      </field>
    </record>

    <record id="aml_import_view_form_result" model="ir.ui.view">
      <field name="name">hr.attendance.import.wizard.result</field>
      <field name="model">hr.attendance.import.wizard</field>
      <field name="priority">2</field>
      <field name="arch" type="xml">
        <form string="Import File">
          <separator colspan="4" string="Results :"/>
          <field name="note" colspan="4" nolabel="1" width="850" height="400"/>
          <footer>
            <button string="Close" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record> 
    
    
	<record id="hr_import_attendance_wizard_action_view" model="ir.actions.act_window">
			<field name="name">Attendance Import</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.attendance.import.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
	</record>

  </data>
</odoo>

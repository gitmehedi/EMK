    <!-- Tree View -->
	<record id="hr_import_attendance_tree" model="ir.ui.view">
			<field name="name">hr_import_attendance_tree</field>
			<field name="model">hr.attendance.import</field>
			<field name="arch" type="xml">
				<tree string="Import Attendance">
					<field name= "name" />					
					<field name="import_creation_date_time" />
					<field name="file_name" />
				</tree>
			</field>
		</record>
		
		<!-- Form View -->
		<record id="hr_import_attendance_form" model="ir.ui.view">
			<field name="name">hr_import_attendance_form</field>
			<field name="model">hr.attendance.import</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Import Attendance">
				 	<header>
	                    <button name="hr_attendance_import.hr_earned_leave_encashment_wizard_action_view"
									type="action" string="Import Attendance" /> 
                    	<button name="process_imported_data" string="Process" class="oe_highlight"/>                                  	
                	</header>				
                	
					<sheet>
						<group>
							<group>
								<field name="name" />					
								<field name="import_creation_date_time" />
								<field name="file_name" />
							</group>								
						</group>
						<notebook position="inside">
							<page string="Raw Data">
								<group col="4">
                                   <!--  <field name="file_name"/> -->
                                </group>	
							</page>
							<page string="Malformed Data">
								<!-- <field name="file_name"/> -->	
							</page>
							<page string="Ready to Import">
								<!-- <field name="file_name"/> -->		
							</page>
					</notebook>
	                </sheet>	                
				</form>
			</field>
		</record>
    
    
    <record id="hr_attendance_import_ac" model="ir.actions.act_window">
			<field name="name">Attendance Import</field>
			<field name="res_model">hr.attendance.import</field>
			<field name="view_mode">tree,form</field>
	</record>
	
	
    <!-- Menu Item -->
	<menuitem id="menu_hr_attendance_import" name="Import Attendance" parent="hr_attendance.menu_hr_attendance_manage_attendances"
					action="hr_attendance_import_ac" />
    

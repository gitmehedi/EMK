<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- Tree View -->
	<record id="hr_import_attendance_tree" model="ir.ui.view">
			<field name="name">hr_import_attendance_tree</field>
			<field name="model">hr.attendance.import</field>
			<field name="arch" type="xml">
				<tree string="Import Attendance">
					<field name= "name" />					
					<field name="import_creation_date_time" />
					<field name="file_name" />
				</tree>
			</field>
		</record>
		
		<!-- Form View -->
		<record id="hr_import_attendance_form" model="ir.ui.view">
			<field name="name">hr_import_attendance_form</field>
			<field name="model">hr.attendance.import</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Import Attendance">
				 	<header>
	                    <button name="hr_attendance_import.hr_earned_leave_encashment_wizard_action_view"
									type="action" string="Import Attendance" /> 
                	</header>				
                	
					<sheet>
						<group>
							<group>
								<field name="name" />					
								<field name="import_creation_date_time" />
								<field name="file_name" />
							</group>								
						</group>
						<notebook position="inside">
							<page string="Raw Input">
								<field name="import_temp">
									<tree string="List" editable="bottom">
										<field name="employee_code"/>
										<field name="check_in"/>
										<field name="check_out"/>				
									</tree>
								</field>	
							</page>
							<page string="Error Data">
								<field name="import_error_lines">
									<tree string="List" editable="bottom">
										<field name="employee_code"/>
										<field name="check_in"/>
										<field name="check_out"/>				
									</tree>
								</field>
							</page>
							<page string="Imported from CSV">
								<field name="lines">
									<tree string="List" editable="bottom">
										<field name="employee_id"/>
										<field name="check_in"/>
										<field name="check_out"/>				
									</tree>
								</field>	
							</page>
					</notebook>
	                </sheet>	                
				</form>
			</field>
		</record>
    
    
    <record id="hr_attendance_import_ac" model="ir.actions.act_window">
			<field name="name">Attendance Import</field>
			<field name="res_model">hr.attendance.import</field>
			<field name="view_mode">tree,form</field>
	</record>
	
	
    <!-- Menu Item -->
	<menuitem id="menu_hr_attendance_import" name="Attendance Import" parent="hr_attendance.menu_hr_attendance_manage_attendances"
				groups="hr.group_hr_user" action="hr_attendance_import_ac" />
    
  </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
          <record id="inherited_vendor_bill_form" model="ir.ui.view">
            <field name="name">inherit.vendor.bill.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="from_po_form" invisible="1"/>
                </xpath>

                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="before">
                    <field name="mrr_qty" string="MRR Qty" invisible="1"/>
                    <field name="available_qty" string="Available Qty" invisible="1"/>
                    <field name="can_edit_bill_line" invisible="1"/>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_bill_line', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('can_edit_bill_line', '=', False)]}</attribute>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
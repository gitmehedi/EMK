<?xml version="1.0" ?>
<odoo>
  <data>

    <record id="data_import_view_form" model="ir.ui.view">
      <field name="name">data.import.wizard.form</field>
      <field name="model">data.import.wizard</field>
      <field name="priority">1</field>
      <field name="arch" type="xml">
        <form string="Import File">
          <group col="4">
            <separator string="SELECT YOUR FILE" colspan="4"/>
            <field name="aml_data" filename="aml_fname"/>
            <field name="aml_fname" readonly="1"/>
            <newline/>
            <field name="csv_separator" invisible="1"/>
            <field name="decimal_separator" invisible="1"/>
            <field name="codepage" invisible="1"/>
          </group>
          <footer>
            <button name="aml_import" string="_Import" type="object" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="data_import_view_form_result" model="ir.ui.view">
      <field name="name">data.import.wizard.result</field>
      <field name="model">data.import.wizard</field>
      <field name="priority">2</field>
      <field name="arch" type="xml">
        <form string="Import File">
          <separator colspan="4" string="Results :"/>
          <field name="note" colspan="4" nolabel="1" width="850" height="400"/>
          <footer>
            <button string="Close" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record> 

    <record id="data_import_wizard_action_view" model="ir.actions.act_window">
			<field name="name">Import Data</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">data.import.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
	</record>

  </data>
</odoo>
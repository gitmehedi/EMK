<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_local_credit_form" model="ir.ui.view">
            <field name="name">letter.credit.form</field>
            <field name="model">letter.credit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Letter Credit" delete="false" copy='0'>
                    <link rel="stylesheet" href="/letter_of_credit/static/src/css/lc_style.css"></link>
                    <header>
                        <button string="Open" name="action_open" states="draft" type="object" class="oe_highlight"/>
                        <button string="Confirm" name="action_confirm" states="open" type="object" class="oe_highlight"/>
                        <button string="Reset to Draft" name="action_draft" type="object" states="confirmed" class="oe_read_only" groups="base_technical_features.group_technical_features"/>
                        <button string="Amendment" name="action_revision" class="oe_read_only" type="object" attrs="{'invisible': [('state', 'in', ('draft', 'open', 'done','cancel'))]}"/>
                        <button string="Cancel" name="action_cancel" class="oe_read_only" type="object" states="confirmed,progress" confirm="Are you sure you want to cancel shipment?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,confirmed,progress,done"/>

                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box"></div>
                        <group>
                            <group colspan="2">
                                <group>
                                    <field name="name"/>
                                    <field name="type" attrs="{'invisible': '1'}" />
                                </group>
                                <group>
                                    <field name="region_type" widget="radio" options="{'horizontal': true}"/>
                                </group>
                            </group>
                            <group colspan="4">
                                <field name="title" class="gbs-text-area"/>
                            </group>

                            <group>
                                <separator string="Beneficiary" colspan="2" attrs="{'invisible': [('type', '=', 'import')]}"/>
                                <separator string="Applicant" colspan="2" attrs="{'invisible': [('type', '=', 'export')]}"/>
                                <field name="first_party"/>
                                <field name="first_party_bank_acc"/>
                                <field name="operating_unit_id" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>

                            </group>

                            <group>
                                <separator string="Beneficiary" colspan="2" attrs="{'invisible': [('type', '=', 'export')]}"/>
                                <separator string="Applicant" colspan="2" attrs="{'invisible': [('type', '=', 'import')]}"/>
                                <field name="second_party_applicant" attrs="{'invisible': [('type', '=', 'import')], 'required': [('type', '=', 'export')]}"/>
                                <field name="second_party_beneficiary" attrs="{'invisible': [('type', '=', 'export')], 'required': [('type', '=', 'import')]}"/>
                                <field name="second_party_bank" required="0"/>
                            </group>


                            <!--Same Group-->
                            <group string="LC Value">
                                <field name="lc_value"/>
                                <field name="currency_id" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="tolerance"/>
                            </group>
                            <group string="LC Dateline">
                                <field name="issue_date"/>
                                <field name="shipment_date"/>
                                <field name="expiry_date"/>
                            </group>
                            <group string="Others Info" colspan="4">
                                <group>
                                    <field name="hs_code" invisible="1"/>
                                    <field name="lc_mode" invisible="1"/>
                                    <field name="payment_terms"/>
                                    <field name="period_of_presentation"/>
                                    <field name="trans_shipment"/>
                                </group>
                                <group>
                                    <field name="master_lc_number"/>
                                    <field name="ship_mode"/>
                                    <field name="inco_terms"/>
                                    <field name="partial_shipment"/>
                                </group>
                            </group>
                            <notebook colspan="4">
                                <page string="Additional Info">
                                    <group>
                                        <group string="Port Info">
                                            <field name="landing_port"/>
                                            <field name="discharge_port"/>
                                            <field name="cnf_agent"/>
                                        </group>
                                        <group string="Lien Bank">
                                            <field name="require_lien"/>
                                            <field name="lien_bank" attrs="{'invisible': [('require_lien','=',False)]}"/>
                                            <field name="lien_date" attrs="{'invisible': [('require_lien','=',False)]}"/>
                                        </group>
                                        <group string="Insurance">
                                            <field name="insurance_company_name"/>
                                            <field name="insurance_number"/>
                                            <label for="insurance_bill"/>
                                            <div name="currency" class="o_row">
                                                <field name="insurance_bill" style="width:50%;"/>
                                                <label string="BDT"/>
                                            </div>
                                        </group>
                                    </group>

                                </page>
                                <page string="Terms &amp; Condition">
                                    <field name="terms_condition" widget="html" options="{'style-inline': true}"/>
                                </page>
                                <page string="Remarks">
                                    <field name="remarks" widget="html" options="{'style-inline': true}"/>
                                </page>
                                <page string="Attachments">
                                    <field name="attachment_ids" widget="one2many_list" class="lc_attachment" context="{'default_res_id': id, 'default_res_model': 'letter.credit'}">
                                        <tree string="Attachments" editable="top">
                                            <field name="res_id" invisible="1"/>
                                            <field name="res_model" invisible="1"/>
                                            <field name="name" string="Title"/>
                                            <field name="datas_fname" invisible="1"/>
                                            <field name="db_datas" filename="datas_fname" string="File"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Amendment">
                                    <field name="old_revision_ids" >
                                        <tree>
                                            <field name='name'/>
                                            <field name='create_date' string="Superseeded on"/>
                                            <field name='create_uid' string="Superseeded by"/>
                                            <field name='state' invisible='1'/>
                                        </tree>
                                    </field>
                                    <group attrs="{'invisible': [('active', '=', True)]}">
                                        <field name="current_revision_id"/>
                                        <field name="active" invisible="1"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="import_letter_credit_tree_view" model="ir.ui.view">
            <field name="name">import.local.credit.tree</field>
            <field name="model">letter.credit</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Letter of Credit">
                    <field name="name"/>
                    <field name="second_party_beneficiary" string="Beneficiary Name"/>
                    <field name="second_party_bank" string="Beneficiary Bank"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="shipment_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
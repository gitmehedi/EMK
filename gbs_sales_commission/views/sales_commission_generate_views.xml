<?xml version="1.0"?>
<odoo>

    <record id="sales_commission_generate_form_views" model="ir.ui.view">
        <field name="name">Sales Commission Generate</field>
        <field name="model">sales.commission.generate</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_sales_commission" string="Generate" type="object" states="draft"
                            class="oe_highlight" attrs="{'invisible': [('state','=','approved')]}"/>
                    <button name="action_approve_sales_commission" states="draft" string="Approve"
                            attrs="{'invisible': [('state','=','approved')]}" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="till_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Commissions">
                            <field name="line_ids">
                                <tree>
                                    <field name="partner_id"/>
                                    <field name="total_invoiced_amount"/>
                                    <field name="total_com_amount"/>
                                </tree>
                                <form>
                                    <field name="invoice_line_ids">
                                        <tree>
                                            <field name="invoice_id"/>
                                            <!---->
                                            <field name="commission_amount"/>
                                            <field name="invoiced_amount"/>
                                            <field name="product_id"/>

                                        </tree>
                                        <form>
                                            <group>
                                                <group>
                                                    <field name="invoice_id"/>
                                                    <field name="commission_amount"/>
                                                </group>
                                                <group>
                                                    <!--<field name="invoice_line_id"/>-->
                                                    <field name="invoiced_amount"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>

                                </form>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sales_commission_generate_tree_view" model="ir.ui.view">
        <field name="name">sales commission generate tree</field>
        <field name="model">sales.commission.generate</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Sales Commission Generate Tree">
                <field name="name"/>
                <field name="till_date"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_sales_commission_generate">
        <field name="name">Generate Commission</field>
        <field name="res_model">sales.commission.generate</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
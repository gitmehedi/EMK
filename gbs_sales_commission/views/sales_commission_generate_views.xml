<?xml version="1.0"?>
<odoo>

    <record id="sales_commission_generate_form_views" model="ir.ui.view">
        <field name="name">Sales Commission Generate</field>
        <field name="model">sales.commission.generate</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_sales_commission" string="Generate" type="object" states="draft"
                            class="oe_highlight"/>
                    <button name="action_approve_sales_commission" states="validate" string="Approve" type="object"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="till_date"/>
                        </group>
                    </group>

                    <notebook colspan="4">
                        <page string="Generated Commissions">
                            <field name="line_ids">
                                <tree>
                                    <field name="partner_id"/>
                                    <field name="invoice_id"/>
                                    <field name="invoiced_amount"/>
                                    <field name="amount_due"/>
                                    <field name="commission_amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sales_commission_generate_tree_view" model="ir.ui.view">
        <field name="name">sales commission generate tree</field>
        <field name="model">sales.commission.generate</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Sales Commission Generate Tree">
                <field name="name"/>
                <field name="till_date"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_sales_commission_generate">
        <field name="name">Generate Commission</field>
        <field name="res_model">sales.commission.generate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sales_commission_generate_menu"
              parent="sales_team.menu_sales" sequence="12"
              action="action_sales_commission_generate"/>
</odoo>
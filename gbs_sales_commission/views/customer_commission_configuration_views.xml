    <record id="sale_customer_commission_configuration_tree" model="ir.ui.view">
        <field name="name">Customer Commission Configuration Tree</field>
        <field name="model">customer.commission.configuration</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Customer Commission Configuration Tree">
                <field name="name"/>
                <field name="product_id"/>
                <field name="customer_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="seq_creadit_limits" model="ir.sequence">
        <field name="name">Sequence</field>
        <field name="code">customer.commission.configuration</field>
        <field name="prefix">CC</field>
        <field name="padding">3</field>
    </record>


    <record id="sale_customer_commission_configuration_search" model="ir.ui.view">
        <field name="name">Customer Commission Configuration Search</field>
        <field name="model">customer.commission.configuration</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <search string="Customer Commission Configuration Search">
                <field name="product_id"/>
                <field name="customer_id"/>
                <filter name="validate" string="To Approve" domain="[('state','=','validate')]"/>

            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sale_customer_commission_configuration_action">
        <field name="name">Customer Commission</field>
        <field name="res_model">customer.commission.configuration</field>
        <field name="context">{'search_default_validate':1}</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="sale_customer_commission_configuration_menu" name="Customer Commission"
              parent="gbs_sale_order_approval.menu_customer" sequence="3"
              groups="account.group_account_user,sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_account,gbs_application_group.group_head_sale,gbs_application_group.group_cxo"
              action="sale_customer_commission_configuration_action"/>

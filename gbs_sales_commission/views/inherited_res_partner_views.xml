<?xml version="1.0"?>
<odoo>

    <record id="sale_inherited_res_partner_form_view" model="ir.ui.view">
        <field name="name">inherited.res.partner.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="30"/>
        <!--<field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>-->
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page groups="gbs_application_group.group_sales_customer_manager,sales_team.group_sale_salesman,account.group_account_user" name="customer_commision" string="Commissions">
                    <field name="commission_ids">
                        <tree readonly="1">
                            <field name="product_id"/>
                            <field name="commission_rate"/>
                             <field name="currency_id"/>
                        </tree>
                        <form>
                            <group>
                                <group>

                                    <field name="product_id"/>
                                </group>
                                <group>
                                    <field name="commission_rate"/>
                                </group>
                            </group>
                            <page>
                                <field name="line_ids">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="commission_rate"/>
                                        <field name="effective_date"/>
                                        <field name="status"/>

                                    </tree>
                                </field>
                            </page>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
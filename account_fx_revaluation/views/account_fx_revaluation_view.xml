<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_account_fx_revaluation_tree" model="ir.ui.view">
            <field name="name">account.fx.revaluation.tree</field>
            <field name="model">account.fx.revaluation</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="FX Revaluation" duplicate="0">
                    <field name="name" string="REF #"/>
                    <field name="date"/>
                    <field name="total_revaluation_amount" sum="total_revaluation_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_account_fx_revaluation_form" model="ir.ui.view">
            <field name="name">account.fx.revaluation.form</field>
            <field name="model">account.fx.revaluation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="FX Revaluation">
                    <header>
                        <button name="action_revaluate" type="object"
                                string="Revaluate" states="draft"
                                class="oe_highlight"/>
                        <button name="action_re_revaluate" type="object"
                                string="Re-Revaluate" states="revaluate"/>
                        <button name="action_confirm" type="object"
                                string="Confirm" states="revaluate"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,revaluate,confirmed"/>
                    </header>
                    <sheet>
                        <div class="pull-left">
                            <h1>
                                <field name="name" readonly="1" nolabel="1"/>
                            </h1>
                        </div>
                        <group name="main">
                            <group>
                                <field name="date"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="total_revaluation_amount" readonly="1"/>
                                <field name="total_fcy_amount" readonly="1"/>
                                <field name="total_lcy_amount" readonly="1"/>
                                <field name="move_id" attrs="{'invisible': [('move_id', '=', False)]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Branch-wise Details" class="oe_page_title">
                                <field name="account_fx_revaluation_line_ids" nolabel="1" readonly="1">
                                    <tree string="Branch-wise Details">
                                        <field name="operating_unit_id" readonly="1"/>
                                        <field name="total_fcy_amount" sum="Total FCY" readonly="1"/>
                                        <field name="total_lcy_amount" sum="Total LCY" readonly="1"/>
                                        <field name="revaluation_amount" sum="Total Profit/Loss" readonly="1"/>
                                    </tree>
                                    <form string="FX Revaluation Line Details">
                                        <group>
                                            <group>
                                                <field name="operating_unit_id" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="revaluation_amount" readonly="1"/>
                                                <field name="total_fcy_amount" readonly="1"/>
                                                <field name="total_lcy_amount" readonly="1"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Details">
                                                <field name="account_fx_revaluation_line_details_ids" nolabel="1"
                                                       readonly="1" string="Revaluation Details">
                                                    <tree>
                                                        <field name="account_id" readonly="1"/>
                                                        <field name="currency_id" readonly="1"/>
                                                        <field name="fc_amount" readonly="1"/>
                                                        <field name="lcy_amount" readonly="1"/>
                                                        <field name="holding_rate" readonly="1"/>
                                                        <field name="revaluation_rate" readonly="1"/>
                                                        <field name="mtm_amount" readonly="1"/>
                                                        <field name="profit_loss_amount" readonly="1"/>
                                                    </tree>
                                                </field>
                                            </page>
                                        </notebook>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_account_fx_revaluation_search" model="ir.ui.view">
            <field name="name">account.fx.revaluation.search</field>
            <field name="model">account.fx.revaluation</field>
            <field name="arch" type="xml">
                <search string="Search FX Revaluation">
                    <field name="name" filter_domain="['|', ('name', 'ilike', self)]"/>
                    <separator/>
                    <filter name="inactive" string="Inactive" domain="[('active','=', False)]"/>
                    <separator/>
                    <filter name="pending" string="Pending" domain="[('state','=', 'draft')]"/>
                    <separator/>
                    <filter name="revaluated" string="Revaluated" domain="[('state','=', 'revaluate')]"/>
                    <separator/>
                    <group name="groupby">
                        <filter string="By Status" name="state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action for Tree and Form View -->
        <record id="account_fx_revaluation_action" model="ir.actions.act_window">
            <field name="name">FX Revaluation</field>
            <field name="res_model">account.fx.revaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="account_fx_revaluation_main" sequence="24"
                  parent="account.menu_finance" name="Fx Revaluation"
                  groups="base.group_fx_revaluation_user"/>

        <menuitem id="account_fx_revaluation_menu" action="account_fx_revaluation_action"
                  name="Fx Revaluations" sequence="50" groups="base.group_fx_revaluation_user"
                  parent="account_fx_revaluation_main"/>

        <!-- Pivot View -->
        <record id="view_account_fx_revaluation_details_report_pivot" model="ir.ui.view">
            <field name="name">account.fx.revaluation.details.report.pivot</field>
            <field name="model">account.fx.revaluation.details.report</field>
            <field name="arch" type="xml">
                <pivot string="FX Revaluation Details" disable_linking="True">
                    <field name="account_id" type="row"/>
                    <field name="date" type="col"/>
                    <field name="fc_amount" type="measure"/>
                    <field name="lcy_amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_account_fx_revaluation_details_report_search" model="ir.ui.view">
            <field name="name">account.fx.revaluation.details.report.search</field>
            <field name="model">account.fx.revaluation.details.report</field>
            <field name="arch" type="xml">
                <search string="Revaluation Analysis">
                    <field name="date"/>
                    <separator/>
                    <filter string="To Revaluate" domain="[('state','=','draft')]"/>
                    <filter string="Revaluated" name="current" domain="[('state','!=', 'draft')]"/>
                    <separator/>
                    <field name="account_id"/>
                    <field name="operating_unit_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Branch" name="opeating_unit" context="{'group_by':'operating_unit_id'}"/>
                        <filter string="GL Account" name='gl_account' context="{'group_by':'account_id'}"/>
                        <filter string="Currency" name="currency" context="{'group_by':'currency_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.actions.server" id="action_account_fx_revaluation_details">
            <field name="name">FX Revaluation Details</field>
            <field name="model_id" ref="account_fx_revaluation.model_account_fx_revaluation"/>
            <field name="code">
                if records:
                    action = records.action_revaluation_details()
            </field>
        </record>

        <record model="ir.values" id="account_fx_revaluation_details">
            <field name="model_id" ref="account_fx_revaluation.model_account_fx_revaluation" />
            <field name="name">FX Revaluation Details</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,' +str(ref('action_account_fx_revaluation_details'))" />
            <field name="key">action</field>
            <field name="model">account.fx.revaluation</field>
        </record>
    </data>
</odoo>
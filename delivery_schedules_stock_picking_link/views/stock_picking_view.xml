<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_picking_form1" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.link</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='do_unreserve']" position="attributes">
                    <attribute name="invisible">context.get('active_model', False)=='delivery.schedules.line'</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='pack_operation_product_ids']/tree/field[@name='qty_done']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_picking_form2" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.link</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="priority" eval="101"/>
            <field name="groups_id" eval="[(6, 0, [ref('stock.group_stock_user')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/field[@name='pack_operation_product_ids']/tree/field[@name='qty_done']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_picking_form3" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.link</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="delivery_order.inherit_stock_picking_for_delivery_order"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='show_details']" position="replace">
                    <button name="show_details" string="Modify" type="object" icon="fa-pencil" groups="stock.group_stock_multi_locations,-stock.delivery_user"
                                            states="confirmed,assigned,waiting,partially_available"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
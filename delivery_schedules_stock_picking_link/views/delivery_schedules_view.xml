<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_delivery_schedules_line_tree" model="ir.ui.view">
            <field name="name">delivery.schedules.line.tree</field>
            <field name="model">delivery.schedules.line</field>
            <field name="inherit_id" ref="delivery_schedules.view_delivery_schedules_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="stock_picking_id" invisible="1"/>
                    <button name="action_delivery_detail" string="Delivery Details" class="oe_stat_button" icon="fa-eye"
                            type="object" groups="stock.delivery_user" attrs="{'invisible': ['|', ('state', '!=', 'done'), ('stock_picking_id', '=', False)]}"/>
                    <button name="action_delivery" string="Delivery" class="oe_stat_button" icon="fa-truck"
                            type="object" groups="stock.delivery_user" attrs="{'invisible': [('state', '!=', 'approve')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
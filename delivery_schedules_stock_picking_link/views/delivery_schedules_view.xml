<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_delivery_schedules_line_tree" model="ir.ui.view">
            <field name="name">delivery.schedules.line.tree</field>
            <field name="model">delivery.schedules.line</field>
            <field name="inherit_id" ref="delivery_schedules.view_delivery_schedules_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <button name="action_delivery" string="Delivery" class="oe_highlight" icon="fa-external-link"
                            type="object" attrs="{'invisible': [('state', '!=', 'approve')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
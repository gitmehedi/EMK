                <!--<search string="Delivery Order">-->
                    <!--<filter name="draft" string="To Confirm" domain="[('state','=','draft')]"/>-->
                <!--</search>-->
            <!--</field>-->
        <!--</record>-->


        <record model="ir.actions.act_window" id="delivery_order_layer_action">
            <field name="name">Delivery Order</field>
            <field name="res_model">delivery.order</field>
            <field name="context">{'search_default_draft':1}</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!--Parent Menu-->
        <menuitem id="delivery_menu" name="Delivery" parent="sales_team.menu_base_partner"
                  groups="sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale"
                  sequence="9"/>

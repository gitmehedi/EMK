<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="delivery_order_layer_form" model="ir.ui.view">
            <field name="name">delivery.order.layer.form</field>
            <field name="model">delivery.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Order" delete="false" copy='0'>
                    <header>
                        <button name="action_approve" type="object" states="draft" string="Confirm" class="oe_highlight"
                                groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"/>

                        <field name="state" statusbar_visible="draft,approved" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box oe_right" name="button_box">
                            <button type="object"
                                    name="action_view_delivery"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    attrs="{'invisible': [('state','!=','approved')]}"
                                    groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo">
                                <field name="delivery_count" widget="statinfo" string="Delivery"/>
                            </button>
                        </div>

                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="delivery_order_id"/>
                                <field name="sale_order_id"/>
                                <field name="deli_address"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="parent_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="so_type"/>
                                <field name="company_id" invisible="1"/>
                                <field name="so_date" widget="date"/>

                                <field name="pi_id" attrs="{'invisible':[('so_type', 'not in', ['lc_sales','tt_sales','contract_sales'])]}"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="lc_id" attrs="{'invisible':[('so_type', 'not in', ['lc_sales','tt_sales','contract_sales'])]}"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>

                            </group>

                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="product_id"
                                                   options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="quantity"/>
                                            <field name="delivery_qty"/>
                                            <field name="qty_delivered"/>
                                            <field name="uom_id" string="UoM"
                                                   options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="pack_type"/>
                                        </tree>
                                    </field>
                                </page>

                                <page string="Other Information">
                                    <group>
                                        <group>
                                            <field name="operating_unit_id"/>
                                            <field name="requested_by" options="{'no_open': True, 'no_create': True}"/>
                                            <field name="requested_date"/>
                                        </group>

                                    </group>
                                </page>

                            </notebook>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="delivery_order_tree" model="ir.ui.view">
            <field name="name">delivery.order.layer.tree</field>
            <field name="model">delivery.order</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Delivery Orders ">
                    <field name="name" string="Delivery Order"/>
                    <field name="delivery_order_id"/>
                    <field name="parent_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


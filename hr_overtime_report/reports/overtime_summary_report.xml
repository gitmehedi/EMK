<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="overtime_summary_report">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <style>
                        .table th {
                        padding: 2px !important;
                        }
                        .table td {
                        padding: 2px !important;
                        font-size: 12px !important;
                        }
                    </style>
                    <div class="page" style="page-break-inside: auto">
                        <div class="row">
                            <div class="col-xs-12">
                                <h3 class="text-center">Overtime Summary</h3>
                            </div>
                            <hr></hr>
                            <br/>
                            <div class="row">
                                <div class="col-xs-6">
                                    <t t-if="data['from_date']">
                                        <strong>Date:</strong>
                                        <span t-esc="data['from_date']"/>
                                    </t>
                                    <t t-if="data['to_date']">
                                        <strong>To:</strong>
                                        <span t-esc="data['to_date']"/>
                                    </t>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <t t-if="data['operating_unit_name']">
                                        <strong>Operating Unit:</strong>
                                        <span t-esc="data['operating_unit_name']"/>
                                    </t>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <t t-if="data['emp_name']">
                                        <strong>Employee Name:</strong>
                                        <span t-esc="data['emp_name']"/>
                                    </t>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <t t-if="data['device_no']">
                                        <strong>ID Number:</strong>
                                        <span t-esc="data['device_no']"/>
                                    </t>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <t t-if="data['emp_department_name']">
                                        <strong>Department:</strong>
                                        <span t-esc="data['emp_department_name']"/>
                                    </t>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <t t-if="data['emp_job_name']">
                                        <strong>Designation:</strong>
                                        <span t-esc="data['emp_job_name']"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <table class="table table-bordered" style="padding: 0px;">
                                <thead>
                                    <tr style="background-color:#EFECEB;">
                                        <th class="text-center">Date</th>
                                        <th class="text-center">From</th>
                                        <th class="text-center">To</th>
                                        <th class="text-center">Schedule OT Hours</th>
                                        <th class="text-center">Reason for overtime</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="data_list" t-as="o">
                                        <tr>
                                            <td class="text-center">
                                                <span t-esc="o['date']"/>
                                            </td>
                                            <td>
                                                <span t-esc="o['from_date']"/>
                                            </td>
                                            <td>
                                                <span t-esc="o['to_date']"/>
                                            </td>

                                            <td>
                                                <span t-esc="o['hours']"/>
                                            </td>
                                            <td>
                                                <span t-esc="o['note']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <t t-call="custom_report.report_signing"></t>
                    </div>
                </t>
            </t>
        </template>
        <report id="action_overtime_summary_report"
                string="Overtime Summary"
                model="report.hr_overtime_report.overtime_summary_report"
                report_type="qweb-pdf"
                name="hr_overtime_report.overtime_summary_report"
                file="hr_overtime_report.overtime_summary_report"
                menu="False"
        />
    </data>
</odoo>

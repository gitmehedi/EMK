<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add intrastat field on res_country -->
        <record id="view_res_country_tree" model="ir.ui.view">
            <field name="name">sales.country.tree</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_tree" />
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="is_sales_country" />
                </field>
            </field>
        </record>

        <record id="view_res_country_form" model="ir.ui.view">
            <field name="name">sales.country.form</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form" />
            <field name="arch" type="xml">
                <field name="phone_code" position="after">
                    <field name="is_sales_country" />
                </field>
            </field>
        </record>
    </data>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="action_report_pending_purchase"
                model="hr.employee.loan"
                string="Purchase report"
                report_type="qweb-pdf"
                menu="False"
                name="purchase_reports.report_pending_purchase"
                file="purchase_reports.report_pending_purchase"
                paperformat="report_layout.paperformat_backend_portrait"
        />
        <template id="report_pending_purchase">
            <t t-call="report.html_container">
                 <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside:auto;">
                        <div class="row">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h4 class="report-title"><span t-esc="report_title"/></h4>
                            </div>
                            <br/>
                            <table class="table table-bordered table-report-xs table-striped"
                                        style="margin-bottom: 10px; table-layout: fixed;">
                                <thead>
                                    <tr class="odo-bg-gray text-center">
                                        <th class="text-center" style="width:18%;">PR.No.</th>
                                        <th class="text-center" style="width:30%;">Description/Items</th>
                                        <th class="text-center" style="width:8%;">Req Qty</th>
                                        <th class="text-center" style="width:5%;">Unit</th>
                                        <th class="text-center" style="width:6%;">Last Rate</th>
                                        <th class="text-center" style="width:18%;">PO.No.</th>
                                        <th class="text-center" style="width:6%;">PO Qty</th>
                                        <th class="text-center" style="width:6%;">MRR Qty</th>
                                        <th class="text-center" style="width:8%;">Rem Qty</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid">
                                            <td class="text-left"><span t-esc="l['pr_no']"/></td>
                                            <td class="text-left"><span t-esc="l['items']"/></td>
                                            <td class="text-right"><span t-esc="l['qty']"/></td>
                                            <td class="text-left"><span t-esc="l['unit']"/></td>
                                            <td class="text-right"><span t-esc="l['last_rate']"/></td>
                                            <td class="text-left"><span t-esc="l['po_no']"/></td>
                                            <td class="text-right"><span t-esc="l['po_qty']"/></td>
                                            <td class="text-right"><span t-esc="l['mrr_qty']"/></td>
                                            <td class="text-right"><span t-esc="l['remaining_qty']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
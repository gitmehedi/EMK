<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main template -->
    <template id="purchase_summary_template">
        <t t-call="report.html_container">
            <t t-call="report_layout.gbs_internal_layout">
                <div class="page" style="page-break-inside:auto">
                    <div class="row">
                        <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                        </style>
                        <div class="clearfix">
                            <h4 class="report-title">Summary of Purchase Statement</h4>
                            <div class="row" style="padding-top:40px; padding-bottom:5px;">
                                <div class="col-xs-6 text-left">
                                    <strong>Month : </strong>
                                    <t t-esc="data['pur_month']"/>
                                    <strong>Year : </strong>
                                    <t t-esc="data['pur_year']"/>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <strong>Operating Unit : </strong>
                                    <t t-if="not data['operating_unit']">All</t>
                                    <t t-elif="data['operating_unit']"><t t-esc="data['operating_unit']"/></t>                                </div>
                            </div>
                        </div>
                        <table class="table table-bordered table-report-xs table-striped"
                               style="margin-bottom: 10px;table-layout: fixed;">
                            <thead>
                                <tr class="odo-bg-gray">
                                    <th class="text-center" style="width:2%;">SL</th>
                                    <th class="text-center" style="width:18%;">Department</th>
                                    <t t-foreach="lists" t-as="data">
                                        <t t-foreach="data['month']" t-as="month">
                                            <td class="text-center" style="width:20%;">
                                                <strong t-esc="month"/>
                                            </td>
                                        </t>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lists" t-as="data">
                                    <t t-if="data['ou']">
                                        <t t-foreach="data['ou']" t-as="ou">
                                            <tr style="page-break-inside: avoid" class="text-left">
                                                <td colspan="6" style="padding: 0px;">
                                                    <strong>
                                                        <t t-esc="ou"/>
                                                    </strong>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">
                                                    <span t-esc="data_index+1"/>
                                                </td>
                                                <td>
                                                    <span t-esc="data['department']"/>
                                                </td>
                                                <t t-foreach="data['value']" t-as="value">
                                                    <td class="text-right">
                                                        <t t-esc="value"/>
                                                    </td>
                                                </t>
                                            </tr>
                                            <tr>
                                                <td colspan="6">Total</td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report
                id="action_purchase_summary_template"
                model="hr.employee"
                string="Purchase Summary"
                report_type="qweb-pdf"
                menu="False"
                name="purchase_reports.purchase_summary_template"
                file="purchase_reports.purchase_summary_template"
                paperformat="report_layout.paperformat_backend_landscape"
        />
</odoo>
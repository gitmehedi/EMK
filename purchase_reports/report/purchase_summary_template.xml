<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main template -->
    <template id="purchase_summary_template">
        <t t-call="report.html_container">
            <t t-call="report_layout.gbs_internal_layout">
                <div class="page" style="page-break-inside:auto">
                    <div class="row">
                        <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                        </style>
                        <div class="clearfix">
                            <h4 class="report-title">Summary of Purchase Statement</h4>
                            <div class="row" style="padding-top:10px;">
                                <div class="col-xs-8 text-left">
                                    <strong>Period From : </strong>
                                    <t t-esc="time.strftime('%d-%m-%Y',time.strptime(data['date_from'],'%Y-%m-%d'))"/>
                                </div>
                                <div class="col-xs-4 text-right">
                                    <strong style="padding-left:10px;">To : </strong>
                                    <t t-esc="time.strftime('%d-%m-%Y',time.strptime(data['date_to'],'%Y-%m-%d'))"/>
                                </div>
                            </div>
                        </div>
                        <table class="table table-report-xs table-bordered table-striped">
                            <thead>
                                <tr class="odo-bg-gray">
                                    <th class="text-center">SL</th>
                                    <th class="text-center">Department</th>
                                    <t t-foreach="lists" t-as="data">
                                        <t t-foreach="data['month']" t-as="month">
                                            <td>
                                                <t t-esc="month"/>
                                            </td>
                                        </t>
                                    </t>
                                    <th class="text-center">Remark</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lists" t-as="data">
                                    <t t-if="data['ou']">
                                        <t t-foreach="data['ou']" t-as="ou">
                                            <tr style="page-break-inside: avoid" class="text-left">
                                                <td colspan="9" style="padding: 0px;">
                                                    <strong>
                                                        <t t-esc="ou"/>
                                                    </strong>
                                                </td>
                                            </tr>
                                            <!--<t t-foreach="data['value']" t-as="value">-->
                                                <tr>
                                                    <td>
                                                        <span t-esc="data_index+1"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="data['department']"/>
                                                    </td>
                                                    <t t-foreach="data['value']" t-as="value">
                                                        <td>
                                                            <t t-esc="value"/>
                                                        </td>
                                                    </t>
                                                    <td>
                                                        <t t-esc="data['remarks']"/>
                                                    </td>
                                                </tr>
                                            <!--</t>-->
                                            <tr>
                                                <td colspan="9">Total</td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report
                id="action_purchase_summary_template"
                model="hr.employee"
                string="Purchase Summary"
                report_type="qweb-pdf"
                menu="False"
                name="purchase_reports.purchase_summary_template"
                file="purchase_reports.purchase_summary_template"
                paperformat="report_layout.paperformat_backend_portrait"
        />
</odoo>
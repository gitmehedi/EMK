<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="pending_purchase_wizard_view" model="ir.ui.view">
			<field name="name">Pending Purchase Wizard View</field>
			<field name="model">pending.purchase.wizard</field>
			<field name="arch" type="xml">
			<form>
				<lebel><h3>Dou you want see a report?</h3></lebel>
				<footer>
					<button name ="process_print" string="Print" type="object" class="oe_highlight"  />
                    <button special="cancel" string="Cancel" />
				</footer>
               </form>
			</field>
		</record>

		<record id="action_pending_purchase_local_wizard" model="ir.actions.act_window">
			<field name="name">Purchase(Local) Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pending.purchase.wizard</field>
			<field name="view_type">form</field>
			<field name="context">{'type': 'local'}</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="action_pending_purchase_foreign_wizard" model="ir.actions.act_window">
			<field name="name">Purchase(Foregin) Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pending.purchase.wizard</field>
			<field name="view_type">form</field>
			<field name="context">{'type': 'foreign'}</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

	</data>
</odoo>

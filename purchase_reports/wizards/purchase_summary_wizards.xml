<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="purchase_summary_wizard_view" model="ir.ui.view">
			<field name="name">Purchase Summary Wizard View</field>
			<field name="model">purchase.summary.wizard</field>
			<field name="arch" type="xml">
			    <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"  widget="date" options="{'datepicker':{'minDate': 0}}"/>
                                <field name="dept_location_id" placeholder="ALL" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                            </group>
                            <group>
                                <field name="date_to" options="{'datepicker':{'minuteStepping': 5}}"/>
                                <!--<field name="operating_unit_id" placeholder="Please Select" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>-->
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name ="process_print" string="Print" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
			</field>
		</record>
        <record id="action_purchase_summary_local_wizard" model="ir.actions.act_window">
			<field name="name">Purchase Summary(Local)</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.summary.wizard</field>
			<field name="view_type">form</field>
			<field name="context">{'type': 'local'}</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
        <record id="action_purchase_summary_foreign_wizard" model="ir.actions.act_window">
			<field name="name">Purchase Summary(foreign)</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.summary.wizard</field>
			<field name="view_type">form</field>
			<field name="context">{'type': 'foreign'}</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- wizard -->
        <record id="view_pr_summary_wizard" model="ir.ui.view">
			<field name="name">purchase.requisition.summary.wizard</field>
			<field name="model">purchase.requisition.summary.wizard</field>
			<field name="arch" type="xml">
			    <form>
                    <group>
                        <group>
                            <field name="pr_no"/>
                        </group>
                        <group>
                            <field name="is_only_pending"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="operating_unit_ids" required="1" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name ="process_print" string="Print" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
			</field>
		</record>

        <!-- action -->
        <record id="action_pr_summary_wizard" model="ir.actions.act_window">
			<field name="name">Purchase Requisition Summary Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.requisition.summary.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

        <!-- menu -->
        <menuitem
                id="custom_purchase_report_menu"
                name="Reports"
                parent="purchase.menu_purchase_root"
                sequence="10"
                groups="purchase.group_purchase_user,stock.group_stock_user"/>

        <menuitem
                id="purchase.purchase_report"
                name="Purchase Analysis"
                parent="custom_purchase_report_menu"
                sequence="99"
                groups="-purchase.group_purchase_manager,base_technical_features.group_technical_features"
                action="purchase.action_purchase_order_report_all"/>

        <menuitem
                name="PR Summary: Unit"
                action="action_pr_summary_wizard"
                id="menu_pr_summary_report"
                parent="stock.menu_warehouse_report"
                groups="stock.group_stock_user"
                sequence="5"/>
    </data>
</odoo>
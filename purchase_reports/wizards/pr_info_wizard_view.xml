<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- wizard -->
        <record id="view_pr_info_wizard" model="ir.ui.view">
			<field name="name">purchase.requisition.info.wizard</field>
			<field name="model">purchase.requisition.info.wizard</field>
			<field name="arch" type="xml">
			    <form>
                    <group>
                        <group>
                            <field name="pr_no"/>
                        </group>
                        <group>
                            <field name="is_only_pending"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="type" required="1"/>
                        </group>
                        <group>
                            <field name="operating_unit_ids" required="1" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name ="button_export_xlsx" string="Export" type="object" class="oe_highlight"/>
<!--                        <button name ="button_print_pdf" string="Print" type="object" class="oe_highlight"/>-->
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
			</field>
		</record>

        <!-- action -->
        <record id="action_pr_info_wizard" model="ir.actions.act_window">
			<field name="name">PR Info Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.requisition.info.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

        <!-- menu -->
        <menuitem
                name="PR Info"
                action="action_pr_info_wizard"
                id="menu_pr_info_report"
                parent="custom_purchase_report_menu"
                groups="purchase.group_purchase_user"
                sequence="20"/>
        <menuitem
                name="PR Info"
                action="action_pr_info_wizard"
                id="menu_pr_info_report_2"
                parent="stock.menu_warehouse_report"
                groups="stock.group_stock_user"
                sequence="6"/>
    </data>
</odoo>
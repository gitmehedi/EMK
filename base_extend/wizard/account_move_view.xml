<openerp>
    <data>

        <record id="account_move_post_view" model="ir.ui.view">
            <field name="name">account.move.post.form</field>
            <field name="model">account.move.post</field>
            <field name="arch" type="xml">
                <form string="Post Journals">
                    <p class="oe_grey">
                        Once journals are posted, you will not be able
                        to modify them.
                    </p>
                    <footer>
                        <button string="Post Journals" name="post_move" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_account_move_post"
            multi="True"
            key2="client_action_multi" name="Post Journals"
            res_model="account.move.post" src_model="account.move"
            view_mode="form" target="new" view_type="form" />

    </data>
</openerp>

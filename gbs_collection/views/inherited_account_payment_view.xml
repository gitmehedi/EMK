<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Inherit Payments form view-->
        <record id="inherited_acc_payment_view" model="ir.ui.view">
            <field name="name">Account.payment.view.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='currency_id']" position="replace">
                    <field name="currency_id"
                           options="{'no_create': True, 'no_open': True}"
                           groups="base.group_multi_currency"
                           attrs="{'readonly': [('state', '!=', 'draft')]}"
                           invisible="1"
                    />
                </xpath>
                <field name="journal_id" position="replace">
                    <field name="journal_id" string="Collection Journal" widget="selection" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </field>

                <field name="payment_type" position="before">
                    <field name="my_menu_check" invisible="1"/>
                </field>

                <field name="payment_type" position="before">
                    <field name="is_cash_payment" invisible="1"/>
                </field>

                <field name="payment_date" position="before">
                    <field name="is_auto_invoice_paid" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="sale_order_id" widget="many2many_tags"
                           attrs="{'invisible':[('my_menu_check','=',False)], 'readonly':['|',('is_auto_invoice_paid', '=', True), ('state', '!=', 'draft')]}"
                           options="{'no_open': True, 'no_create': True}"/>
                </field>

                <field name="payment_type" position="replace">
                    <field name="payment_type" widget="radio" attrs="{'invisible':[('my_menu_check','=',True)]}"/>
                </field>

                <field name="payment_type" position="after">
                    <field name="is_this_payment_checked" invisible="1"/>
                </field>

                <field name="partner_type" position="replace">
                    <field name="partner_type" widget="selection" attrs="{'required': [('payment_type', 'in', ('inbound', 'outbound'))],
                    'invisible': 1,
                     'readonly': [('state', 'in', ('draft','posted')), ('my_menu_check','=',True)]}"/>
                </field>
                <field name="partner_id" position="replace">
                    <field name="partner_id" string="Customer"
                           attrs="{'required': [('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))], 'readonly': [('state', '!=', 'draft')]}"
                           context="{'default_is_company': True, 'default_supplier': payment_type == 'outbound', 'default_customer': payment_type == 'inbound'}"
                           options="{'no_open': True, 'no_create': True}"/>
                </field>
                <field name="journal_id" position="after">
                    <field name="deposited_bank" options="{'no_open': True, 'no_create': True}" attrs="{'invisible':[('my_menu_check','=',False)]}" />
                </field>

                <field name="deposited_bank" position="after">
                    <field name="bank_branch" attrs="{'invisible':[('my_menu_check','=',False)]}"/>
                </field>

                <field name="journal_id" position="after">
                    <field name="deposit_slip" invisible="1"/>
                </field>

                <field name="journal_id" position="after">
                    <field name="cheque_no" invisible="1"/>
                </field>

                <field name="journal_id" position="after">
                    <field name="is_entry_receivable_cleared_payments" invisible="1"/>
                </field>

                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>

            </field>
        </record>

        <!-- Inherited action to set context value-->
        <record id="account.action_account_payments" model="ir.actions.act_window">
            <field name="context">{'default_my_menu_check': False}</field>
        </record>

        <!-- Newly added action-->
        <record id="action_account_payments_new" model="ir.actions.act_window">
            <field name="name">Customer Collection</field>
            <field name="res_model">account.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{'default_my_menu_check': True, 'default_payment_type': 'inbound',
                'default_partner_type': 'customer'}
            </field>
            <field name="domain">[('partner_type', '=', 'customer')]</field>
            <field name="view_id" ref="account.view_account_payment_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to register a payment
                </p>
                <p>
                    Payments are used to register liquidity movements (send, collect or transfer money).
                    You can then process those payments by your own means or by using installed facilities.
                </p>
            </field>
        </record>

        <!--Inherit Accounting Menus-->
        <menuitem id="account.menu_finance_receivables"
                  name="Sales"
                  groups="gbs_application_group.group_account_income,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  parent="account.menu_finance"
                  sequence="2"/>

        <menuitem action="action_account_payments_new"
                  id="menu_action_account_payments_receivable_new"
                  groups="account.group_account_user,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  parent="account.menu_finance_receivables"
                  sequence="19"/>

        <record id="account.menu_action_account_payments_receivable" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="max_do_without_lc_view" model="ir.ui.view">
            <field name="name">max.delivery.without.lc.wizard</field>
            <field name="model">max.delivery.without.lc.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <h4><field name="info_text"/> 's Delivery Qty crossed 100 MT. Do you want to proceed?</h4>

                    <footer>
                        <button name="update_state" string="Proceed" type="object" class="oe_highlight"/>
                        or
                         <button special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_max_do_without_lc" model="ir.actions.act_window">
            <field name="name">max.delivery.without.lc.wizard</field>
            <field name="res_model">max.delivery.without.lc.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="max_do_without_lc_view"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
<?xml version="1.0" ?>
<odoo>
    <record id="gbs_file_import_wizard_form" model="ir.ui.view">
        <field name="name">gbs.file.import.wizard.form</field>
        <field name="model">gbs.file.import.wizard</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Import File">
                <group col="4">
                    <separator string="Please select CSV file to import data :" colspan="4"/>
                    <field name="aml_data" filename="aml_fname"/>
                    <field name="aml_fname" readonly="1"/>
                    <newline/>
                    <field name="csv_separator" groups="base.group_system"/>
                    <field name="decimal_separator" groups="base.group_system"/>
                    <field name="codepage" groups="base.group_system"/>
                </group>
                <footer>
                    <button name="aml_import" string="Import" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_gbs_file_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gbs.file.import.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
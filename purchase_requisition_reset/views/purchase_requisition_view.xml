<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_purchase_requisition_form" model="ir.ui.view">
            <field name="name">purchase.requisition.form.inherit.reset</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[@name='action_cancel']" position="after">
                    <button name="action_confirm" states="approve_head_procurement,done" string="Reset to Confirm"
                            groups="purchase.group_purchase_user" type="object" class="btn-primary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Customer Invoices -->
        <record model="ir.ui.view" id="inherit_acc_invoice_form_view">
            <field name="name">inherit.account.invoice.form.view</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@groups='base.group_multi_currency']" position="after">
                    <field name="conversion_rate_visibility" invisible="1"/>
                    <field name="conversion_rate"
                           attrs="{'invisible':[('conversion_rate_visibility', '==', False)], 'readonly':[('state','in', 'open')]}"
                           groups="base.group_multi_currency" required="True"/>
                </xpath>
            </field>
        </record>

        <!-- Vendor Bills -->
        <record model="ir.ui.view" id="invoice_supplier_form">
            <field name="name">inherit.account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group[2]/field[@name='currency_id']" position="after">
                    <field name="conversion_rate_visibility" invisible="1"/>
                    <field name="conversion_rate"
                           attrs="{'invisible':[('conversion_rate_visibility', '==', False)], 'readonly':[('state','in', 'open')]}"
                           groups="base.group_multi_currency" required="True"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_inherit_account_payment_batch_form" model="ir.ui.view">
            <field name="name">inherit.account.payment.batch.form</field>
            <field name="model">account.payment.batch</field>
            <field name="inherit_id" ref="gbs_collection_batch.view_account_payment_batch_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_transaction_id']" position="after">
                    <field name="conversion_rate_visibility" invisible="1"/>
                    <field name="conversion_rate"
                           attrs="{'invisible':[('conversion_rate_visibility', '==', False)]}"
                           required="True"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
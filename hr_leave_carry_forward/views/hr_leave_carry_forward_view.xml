<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="leave_carry_forward_tree" model="ir.ui.view">
			<field name="name">hr.leave.carry.forward.tree</field>
			<field name="model">hr.leave.carry.forward</field>
			<field name="arch" type="xml">
				<tree string="Leave Carry Forward">
					<field name="name" />
					<field name="carry_forward_year" />
					<field name="leave_type" />
				</tree>
			</field>
		</record>
		
	
		<record id="leave_carry_forward_form" model="ir.ui.view">
			<field name="name">hr.leave.carry.forward.form</field>
			<field name="model">hr.leave.carry.forward</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Leave Carry Forward" delete="false" copy='0'>
					<header>
						<button name="%(hr_leave_carry_forward_wizard_action_view)d"
								type="action" string="Generate" />
					</header>
					<sheet>
						<group>
							<field name="name" />
							<field name="carry_forward_year" />
							<field name="leave_type" />
						</group>
						<notebook colspan="4">
							<page string="Carry Forward">
								<field name="line_ids">
									<tree string="List" editable="bottom">
										<field  name="employee_id"  readonly='1'/>
										<field  name="pending_leave" />
										<field  name="leave_days_to_be_caryy_forwarded" />
										<field  name="want_to_carry_forward" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
	
		<record id="hr_holidays_leave_carry_forward" model="ir.actions.act_window">
			<field name="name">Leave Carry Forward</field>
			<field name="res_model">hr.leave.carry.forward</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_hr_leave_carry_forward" name="Leave Carry Forward"
			parent="hr_holidays.menu_hr_holidays_root" sequence="6"
			action="hr_holidays_leave_carry_forward" />
		<menuitem id="hr_leave_carry_forward" name="Leave Carry Forward"
			parent="menu_hr_leave_carry_forward"
			action="hr_holidays_leave_carry_forward" />
	</data>
</odoo>

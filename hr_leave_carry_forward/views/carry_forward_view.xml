<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
	
		<!--  Leave Carry Forward Tree View-->
		<record id="leave_carry_forward_tree" model="ir.ui.view">
			<field name="name">hr.leave.carry.forward.tree</field>
			<field name="model">hr.leave.carry.forward</field>
			<field name="arch" type="xml">
				<tree string="Leave Carry Forward">
					<field name="name"/>					
					<field name="carry_foward_year"/>
					<field name="leave_type"/>
				</tree>
			</field>
		</record>
		
		<!-- Leave Carry Forward Form View -->
		<record id="leave_carry_forward_form" model="ir.ui.view">
			<field name="name">hr.leave.carry.forward.form</field>
			<field name="model">hr.leave.carry.forward</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Leave carry Forward">
					<sheet>
						<group>
							<field name="name"/>					
							<field name="carry_foward_year"/>
							<field name="leave_type"/>
						</group>
					</sheet>					
				</form>
			</field>
		</record>
		
		<record id="open_public_holidays_view_1" model="ir.actions.act_window">
			<field name="name">Leave Carry Forward</field>
			<field name="res_model">hr.leave.carry.forward</field>
			<field name="view_mode">tree,form</field>
		</record>
	
		<menuitem id="menu_hr_holidays_type1" name="Leave Carry Forward" parent="hr_holidays.menu_hr_holidays_configuration"  
			action="open_public_holidays_view_1" sequence="6" string="Carry Forward"/>
            
	</data>
</openerp>
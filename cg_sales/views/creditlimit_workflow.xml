<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf" model="workflow">
            <field name="name">customer.creditlimit.assign.basic</field>
            <field name="osv">customer.creditlimit.assign</field>
            <field name="on_create">True</field>
        </record>
        
        <!-- Activity -->   
        <record id="act_draft" model="workflow.activity">  <!-- draft -->
            <field name="wkf_id" ref="wkf"/>
            <field name="name">draft</field>
            <field name="flow_start">True</field>
        </record>
        
        <record id="act_done" model="workflow.activity">  <!-- approve -->
            <field name="wkf_id" ref="wkf"/>
            <field name="name">approve</field>
            <field name="action">approve_creditlimit_run()</field>
            <field name="kind">function</field>
            <field name="flow_stop">True</field>
        </record>
        
        <!-- workflow transition  -->    

        <record id="t1" model="workflow.transition">  <!-- draft 2 approve -->
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_done"/>
            <field name="signal">limit_confirm</field>
        </record>        

    </data>
</openerp>

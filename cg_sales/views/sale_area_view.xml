<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
	    <!-- sale.area Tree View  -->
	    
	    <record model="ir.ui.view" id="sale_area_view">
	        <field name="name">Sale Area</field>
	        <field name="model">sale.area</field>
	        <field name="type">tree</field>
	        <field name="arch" type="xml">
	           <tree string=" Sale Area">
	              <field name="complete_name"/>
	              <field name="code"/>
	              <field name="manager_id"/>
	           </tree>
	        </field>
	    </record>
    
	    <!-- sale.area Form View -->
	    
	    <record id="sale_area_form" model="ir.ui.view">
	            <field name="name">Sale Area.form</field>
	            <field name="model">sale.area</field>
	            <field name="arch" type="xml">
	                <form string=" Sale Area" version="7.0">
	                  <label for="name" class="oe_edit_only"/>
	                  <h1><field name="name"/></h1>
	                    <group>
	                        <group>
	                        	<field name="parent_id"/>
	                            <field name="manager_id"/>
	                        </group>
	                        <group>
	                            <field name="code"/>
	                            <field name="warehouse_id"/>
	                        </group>
	                    </group>
	                </form>
	            </field>
	    </record>
        
	    <record id="action_sale_area" model="ir.actions.act_window">
	       <field name="name">Sale Areas</field>
	       <field name="res_model">sale.area</field>
	       <field name="view_type">form</field>
	       <field name="view_mode">tree,form</field>
	    </record>
	    
	    <menuitem name="Sales Zone" id="menu_action_sale_zone" parent="base.menu_base_config" 
	    		sequence="33" groups="group_head_sale"/>
    
    	<menuitem action="action_sale_area" id="menu_action_sale_area" 
    			parent="menu_action_sale_zone" sequence="33" groups="group_head_sale"/>
    
    </data>
</openerp>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="journal_adding_cheque_view" model="ir.ui.view">
            <field name="name">journal.adding.wizard</field>
            <field name="model">journal.adding.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="journal_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="update_payment_journal_to_cheque_received" string="Proceed" type="object"
                                class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_journal_adding_cheque" model="ir.actions.act_window">
            <field name="name">journal.adding.wizard.action</field>
            <field name="res_model">journal.adding.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="journal_adding_cheque_view"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
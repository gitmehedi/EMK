<?xml version="1.0"?>
<odoo>

    <record id="accounting_cheque_received_form_view" model="ir.ui.view">
        <field name="name">accounting.cheque.received.form</field>
        <field name="model">accounting.cheque.received</field>
        <field name="arch" type="xml">
            <form string="Cheque Received Form">
                <header>
                    <button name="action_reset_to_draft" type="object" states="received,dishonoured,deposited"
                            string="Reset To Draft" class="oe_highlight"/>
                    <button name="action_received" type="object" states="draft" string="Received" class="oe_highlight"/>
                    <button name="action_deposited" type="object" states="received" string="Deposited"
                            class="oe_highlight"/>
                    <button name="action_honoured" type="object" states="deposited" string="Honoured"
                            groups="gbs_accounting_cheque_received.group_cheque_receive_adviser"
                            class="oe_highlight"/>
                    <button name="action_dishonoured" type="object" states="deposited"
                            groups="gbs_accounting_cheque_received.group_cheque_receive_adviser" string="Dishonoured"/>
                    <button name="action_deposited" type="object" states="dishonoured" string="Deposited"
                            class="oe_highlight"/>
                    <button name="action_returned_to_customer" type="object" states="dishonoured"
                            string="Returned to Customer"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,deposited"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="button_journal_entries"
                                string="Journal Items" type="object"
                                attrs="{'invisible':[('state', '!=', 'honoured')]}" icon="fa-bars"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="journal_id" string="Collection Journal" widget="selection"/>
                            <field name="bank_name" string="Customer Bank"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="branch_name"/>
                            <field name="cheque_no"/>
                            <field name="is_cheque_payment" invisible="1"/>
                            <field name="currency_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="operating_unit_id" options="{'no_open': True, 'no_create': True}"
                                   required="1"/>
                            <field name="received_from" readonly="1"/>
                            <field name="payment_date" invisible="1"/>
                            <field name="payment_method_id" invisible="1"/>
                            <field name="payment_type" invisible="1"/>
                            <field name="is_this_payment_checked" invisible="1"/>
                            <field name="is_entry_receivable_cleared" invisible="1"/>
                        </group>

                        <group>
                            <field name="date_on_cheque"/>
                            <field name="honoured_date" attrs="{'invisible':[('honoured_date', '=', False)]}"/>
                            <field name="cheque_amount"/>
                            <field name="sale_order_id" widget="many2many_tags"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="narration" required="1"/>
                        </group>

                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="accounting_cheque_recieved_tree_view" model="ir.ui.view">
        <field name="name">accounting.cheque.received.tree.view</field>
        <field name="model">accounting.cheque.received</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Cheque Received Tree">
                <field name="partner_id"/>
                <field name="name"/>
                <field name="bank_name"/>
                <field name="cheque_amount"/>
                <field name="sale_order_id"/>
                <field name="received_from"/>
                <field name="operating_unit_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Generate automated sequence -->
    <record id="cheque_rcv_seq" model="ir.sequence">
        <field name="name">cheque_rcv_seqs</field>
        <field name="code">accounting.cheque.received</field>
        <field name="prefix">CUST.IN/%(year)s/</field>
        <field name="padding">4</field>
    </record>

    <!-- Generate automated sequence -->
    <record id="account_move_seqs" model="ir.sequence">
        <field name="name">account.move</field>
        <field name="code">account.move</field>
        <field name="prefix">BNK1/%(range_year)s/</field>
        <field name="padding">4</field>
    </record>


    <record id="accounting_cheque_recieved_search_view" model="ir.ui.view">
        <field name="name">accounting.cheque.received.search</field>
        <field name="model">accounting.cheque.received</field>
        <field name="arch" type="xml">
            <search string="Receive Cheques">
                <filter name="received_from_type" string="Received From" domain="[('received_from', '=', 'ho')]"/>
            </search>
        </field>
    </record>



    <!--All view all cheques with HO filter in serach view-->
    <record model="ir.actions.act_window" id="cheque_received_action_from_accounting">
        <field name="name">Cheque Received</field>
        <field name="res_model">accounting.cheque.received</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_received_from': 'ho'}</field>
        <field name="search_view_id" ref="accounting_cheque_recieved_search_view"/>
    </record>


    <menuitem action="cheque_received_action_from_accounting"
              id="menu_accounting_cheque_received"
              parent="account.menu_finance_receivables"
              groups="gbs_accounting_cheque_received.group_cheque_receive_ho"
              name="Cheque Received"
              sequence="17"/>
</odoo>
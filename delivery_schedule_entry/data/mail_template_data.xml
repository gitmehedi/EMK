<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Email template -->
        <record id="template_delivery_order" model="mail.template">
            <field name="name">Delivery Schedule Entry Template</field>
            <field name="subject">${object.user_id.company_id.name}</field>
            <field name="email_from">${(object.user_id.email and '%s &lt;%s&gt;' % (object.user_id.name, object.user_id.email) or '')|safe}</field>
            <field name="subject">${object.name}</field>
            <field name="model_id" ref="delivery_schedule_entry.model_delivery_schedule_entry"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="custome_report_ds_entry"/>
            <field name="report_name">${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>
            <!--<field name="lang">${object.line_ids.partner_id.lang}</field>-->
            <field name="body_html"><![CDATA[
<p>Dear L,
<div class="page">
<h1>Hello!!</h1>
</div>


]]></field>
        </record>


    </data>
</odoo>

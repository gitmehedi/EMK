        <!-- Form View -->
		<record id="attendance_error_correct_form" model="ir.ui.view">
			<field name="name">hr.attendance.error.correct.form</field>
			<field name="model">hr.attendance.error.correct</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Correct Attendances" create="false" edit="false" delete="false">
					<header>
						<button name="generate_filtered_data" type="object" string="Generate" class="oe_highlight" />
					</header>
					<sheet>
						<div class="oe_title">
						</div>
						<group col="2">
							<label for="type" />
							<div>
								<field name="type" class="oe_inline" placeholder="Please Select" />
							</div>
							<label for="department_name" attrs="{'invisible': [('type', '!=', 'department_type')]}" />
							<div>
								<field name="department_name" class="oe_inline" placeholder="Please Select"
									   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
									   attrs="{'invisible': [('type', '!=', 'department_type')]}" />
							</div>
							<label for="employee_name" attrs="{'invisible': [('type', '!=', 'employee_type')]}" />
							<div>
								<field name="employee_name" class="oe_inline" placeholder="Please Select"
									   options="{'no_create_edit': True, 'no_open': True}"
									   attrs="{'invisible': [('type', '!=', 'employee_type')]}" />
							</div>
							<label for="from_date" />
							<div>
								<field name="from_date" class="oe_inline" />
							</div>
							<label for="to_date" />
							<div>
								<field name="to_date" class="oe_inline" />
							</div>
						</group>
						<!--<notebook position="inside">
                            <page string="Error Data">
								<field name="attendance_line_ids">
									<tree string="Correct Attendances">
										<field name="employee_id"/>
										<field name="check_in"/>
										<field name="check_out"/>
									</tree>
								</field>
                            </page>
                        </notebook>-->
					</sheet>
				</form>
			</field>
		</record>
        <!-- Menu Action -->
        <record id="attendance_error_correct_action" model="ir.actions.act_window">
			<field name="name">Attendance Error Correct</field>
			<field name="res_model">hr.attendance.error.correct</field>
			<field name="view_mode">form,tree</field>
		</record>

        <!--Menu Item-->
		<menuitem id="menu_attendance_error_correct" name="Correct Attendances"
				  parent="hr_attendance.menu_hr_attendance_manage_attendances"
                  action="attendance_error_correct_action" />
    </data>

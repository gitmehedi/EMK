<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- Form View -->
		<record id="attendance_error_correct_form" model="ir.ui.view">
			<field name="name">hr.attendance.error.correction.form</field>
			<field name="model">hr.attendance.error.correction</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Correct Attendances">
					<header>
						<button name="search_data" type="object" string="Generate" class="oe_highlight" />
					</header>
					<sheet>
						<div class="oe_title">
						</div>
						<group col="2">
							<label for="type" />
							<div>
								<field name="type" class="oe_inline" placeholder="Please Select" />
							</div>
							<label for="operating_unit_id" attrs="{'invisible': [('type', '!=', 'op_type')]}"/>
							<div>
								<field name="operating_unit_id" class="oe_inline"
									   options='{"no_open": True,"no_create": 1, "no_create_edit":1}'
									   groups="operating_unit.group_multi_operating_unit"
									   attrs="{'invisible': [('type', '!=', 'op_type')]}"/>
							</div>
							<label for="department_id" attrs="{'invisible': [('type', '!=', 'department_type')]}" />
							<div>
								<field name="department_id" class="oe_inline" placeholder="Please Select"
									   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
									   attrs="{'invisible': [('type', '!=', 'department_type')]}" />
							</div>
							<label for="employee_id" attrs="{'invisible': [('type', '!=', 'employee_type')]}" />
							<div>
								<field name="employee_id" class="oe_inline" placeholder="Please Select"
									   options="{'no_create_edit': True, 'no_open': True}"
									   attrs="{'invisible': [('type', '!=', 'employee_type')]}" />
							</div>
							<label for="from_date" />
							<div>
								<field name="from_date" class="oe_inline" />
							</div>
							<label for="to_date" />
							<div>
								<field name="to_date" class="oe_inline" />
							</div>
						</group>
						<footer>
							<footer>
								<button string="Cancel" class="btn btn-sm btn-default o_form_button_cancel" special="cancel"/>
							</footer>
						</footer>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Menu Action -->
		<record id="attendance_error_correct_action" model="ir.actions.act_window">
			<field name="name">Attendance Error Correction</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.attendance.error.correction</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<!--Menu Item-->
		<menuitem id="attendance_error_correct_menu" name="Correct Attendances"
				  parent="hr_attendance.menu_hr_attendance_manage_attendances" groups="hr.group_hr_user"
				  action="attendance_error_correct_action" />
	</data>
</openerp>
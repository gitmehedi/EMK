<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <report
                id="action_top_sheet"
                string="Delivery Challan"
                model="stock.picking"
                report_type="qweb-pdf"
                file="delivery_challan_report.report_top_sheet"
                name="delivery_challan_report.report_top_sheet"
                paperformat="report_layout.custom_challan_paperformat"
                menu="False"

        />
        <template id="report_top_sheet">
            <t t-call="report.html_container">
                <div class="page" style="page-break-inside:auto;">
                    <div class="row">
                        <style type="text/css">

                            .page { font-size: 22px; }
                            .odo-bg-gray, .odo-bg-gray > td {  }
                            .challan-header { line-height: 1.5em; min-height: 230px; }
                            .vehicle-no { padding-left: 165px; margin-top: 10px;}
                            .vehicle-no span { display: block; width: 150px; line-height: 1.25em; }

                            .challan-no { padding-left: 170px; margin-top: 12px;}
                            .do-date { padding-left: 60px; margin-top: 12px; white-space:nowrap;}

                            .partner-name { padding-left: 170px; margin-top: 7px; line-height: 1.25em; }
                            .shipping-address { padding-left: 170px; margin-top: 7px; }

                            .challan-table { margin-top: 27px; margin-left: 35px; }
                            .challan-table, .challan-table tbody { height: 285px; min-height: 285px; }
                            .challan-table th, .challan-table td { border: 0 none !important; }

                        </style>
                        <div class="challan-header clearfix">
                            <div class="row">
                                <div class="col-xs-12 text-left vehicle-no">
                                    <!--Vehicle No: <span t-esc="data['vehicle_no']"/>-->
                                    <span t-esc="data['vehicle_no']"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-9 challan-no">
                                    <!--DC No: <span t-esc="data['challan_no']"/>-->
                                    <span t-esc="data['challan_no']"/>
                                </div>
                                <div class="col-xs-3 text-right do-date">
                                    <!--<strong>Date : </strong>-->
                                    <span t-esc="data['do_date']" t-options='{"widget": "date"}'/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-left partner-name">
                                    <!-- Party Name: -->
                                    <span t-esc="data['partner_name']"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-left shipping-address">
                                    <!-- Destination: -->
                                    <span t-esc="data['shipping_address']"/>
                                </div>
                            </div>
                        </div>

                        <table class="table table-report-md challan-table">
                            <tbody>
                                <t t-foreach="lists" t-as="l">
                                    <tr>
                                        <td style="width: 130px; line-height: 1em;">
                                            <span t-esc="data['so_name']"/>
                                        </td>
                                        <td style="white-space: no-wrap; line-height: 1em;">
                                            <span t-esc="data['so_date']" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td style="width: 335px; line-height: 1em;">
                                            <span t-esc="l['product_name']"/>
                                        </td>
                                        <td style="width: 120px;">
                                            <span t-esc="l['qty']"/>
                                            <span t-esc="l['uom_name']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix" style="margin-left: 35px;">
                            <div class="row" style="min-height:30px;">
                                <div class="col-xs-6">
                                    <span style="padding-left:5px;">Total:</span>
                                </div>
                                <div class="col-xs-6 text-right" style="width: 140px; float: right; line-height: 1em;">
                                    <span t-esc="sum(l['qty'] for l in lists)"/>
                                    <span t-esc="lists[0]['uom_name']"/>
                                    <t t-if="lists[0]['uom_name'] == 'MT'">
                                        /
                                        <span t-esc="sum(l['qty_in_kg'] for l in lists)"/>
                                        <span>kg</span>
                                    </t>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12" style="margin-top: 5px;">
<!--                                        In Word (Quantity):-->
                                    <div style="margin-left: 165px; height: 32px;">
                                        <span t-esc="amount_to_word(sum(l['qty_in_kg'] for l in lists))"/>  KG:S
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12" style="margin-top: 10px;">
<!--                                        Others:-->
                                    <div style="margin-left: 85px; height:30px;">
                                        <span t-esc="data['note']"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-7" style="margin-top: 12px;">
<!--                                        Vat/Challan No:-->
                                    <div style="margin-left: 140px;">
                                        <span t-esc="data['vat_challan_id']"/>
                                    </div>
                                </div>
                                <div class="col-xs-5" style="margin-top: 13px;">
<!--                                        Date:-->
                                    <div style="margin-left: 40px;">
                                        <span t-esc="data['do_date']" t-options='{"widget": "date"}'/>
                                    </div>
                                </div>
                            </div>
                        </div>



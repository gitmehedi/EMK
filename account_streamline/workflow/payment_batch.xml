<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Workflow -->
        <record id="wkf_payment_batch" model="workflow">
            <field name="name">Payment Batch Workflow</field>
            <field name="osv">account.payment_batch</field>
            <field name="on_create" eval="True" />
        </record>

        <!-- Activities -->
        <record id="payment_batch_act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_payment_batch" />
            <field name="name">draft</field>
            <field name="flow_start" eval="True" />
            <field name="kind">function</field>
            <field name="action">wkf_draft()</field>
        </record>
        <record id="payment_batch_act_paid" model="workflow.activity">
            <field name="wkf_id" ref="wkf_payment_batch" />
            <field name="name">paid</field>
            <field name="kind">function</field>
            <field name="action">wkf_paid()</field>
        </record>

        <!-- Transitions -->
        <record id="payment_batch_trans_draft_paid" model="workflow.transition">
            <field name="act_from" ref="payment_batch_act_draft" />
            <field name="act_to" ref="payment_batch_act_paid" />
            <field name="signal">pay</field>
        </record>
    </data>
</openerp>
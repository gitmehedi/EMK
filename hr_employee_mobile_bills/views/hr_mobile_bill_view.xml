<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_mobile_bill_form" model="ir.ui.view">
			<field name="name">hr.mobile.bill.form</field>
			<field name="model">hr.mobile.bill</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Employee Mobile Bills" delete="false">
					<header>

                         <button name="action_confirm" type="object"
                                string="Apply" states="draft"
                                class="oe_highlight"/>
                         <button name="action_done" type="object" groups ="hr.group_hr_manager"
                                string="Approve" states="applied"
                                class="oe_highlight"/>
						<button name="action_draft" type="object"
                                string="Reset to Draft" groups ="hr.group_hr_manager"
                                states="applied,approved"/>
                         <field name="state" widget="statusbar"/>
					</header>
					<sheet>
	                 		<group >
	                 			<group>
	                            	<field name="name" />
									<field name="company_id" groups="base.group_multi_company" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>

	                            </group>
		                        <notebook colspan="4">
									<page string="Mobile Bills">
										<field name="line_ids">
											<tree string="List" editable="bottom">
												<field  name="emp_mobile_phone" />											
												<field name="employee_id"/>
												<field  name="bill_amount" />
												<field  name="amount" />
												<field  name="state" invisible="1"/>
											</tree>
										</field>
									</page>
								</notebook>
	                        </group>
					</sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>
		<record id="hr_mobile_bill_tree" model="ir.ui.view">
			<field name="name">hr.mobile.bill.tree</field>
			<field name="model">hr.mobile.bill</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Employee Mobile bills">
					<field name="name" />
					<field name="state" />
				</tree>
			</field>
		</record>

        <record model="ir.actions.act_window" id="hr_mobile_bill_action">
            <field name="name">Mobile Bills</field>
            <field name="res_model">hr.mobile.bill</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_mobile_bill_menu" name="Employee Mobile Bills" parent="hr.menu_hr_root"
                  action="hr_mobile_bill_action" groups="gbs_hr_security.group_payroll_user" sequence="92"/>
		<menuitem id="hr_mobile_bills_menu" name="Mobile Bills" parent="hr_mobile_bill_menu"
                  action="hr_mobile_bill_action" groups="gbs_hr_security.group_payroll_user"/>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_mobile_bill_form" model="ir.ui.view">
			<field name="name">hr.mobile.bill.form</field>
			<field name="model">hr.mobile.bill</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Employee Mobile bills">
					<header>
						 <button name="action_draft" type="object"
                                string="Reject"
                                states="applied,approved"/>
                         <button name="action_confirm" type="object"
                                string="Apply" states="draft"
                                class="oe_highlight"/>
                         <button name="action_done" type="object"
                                string="Approve" states="applied"
                                class="oe_highlight"/>
                         <field name="state" widget="statusbar"/>
					</header>
					<sheet>						
						<label for="name" string="Employee Mobile bills"/>
	                 		<group >
	                 			<group>
	                            	<field name="name" />
	                            </group>
		                        <notebook colspan="4">
									<page string="Bills">
										<field name="line_ids">
											<tree string="List" editable="bottom">
												<field  name="emp_mobile_phone" />											
												<field name="employee_id"/>
												<field  name="bill_amount" />
												<field  name="amount" />
											</tree>
										</field>
									</page>
									<page string="Bills">
										<field name="line_ids">
											<tree string="List" editable="bottom">
												<field  name="emp_mobile_phone" />
												<field name="employee_id"/>
												<field  name="bill_amount" />
												<field  name="amount" />
											</tree>
										</field>
									</page>
								</notebook>
	                        </group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="hr_mobile_bill_tree" model="ir.ui.view">
			<field name="name">hr.mobile.bill.tree</field>
			<field name="model">hr.mobile.bill</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Employee Mobile bills">
					<field name="name" />
					<field name="state" />
				</tree>
			</field>
		</record>

        <record model="ir.actions.act_window" id="hr_mobile_bill_action">
            <field name="name">Mobile Bills</field>
            <field name="res_model">hr.mobile.bill</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_mobile_bill_menu" name="Mobile Bills"
                  action="hr_mobile_bill_action" groups="base.group_user"/>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_mobile_bill_limit_form" model="ir.ui.view">
			<field name="name">hr.mobile.bill.limit.form</field>
			<field name="model">hr.mobile.bill.limit</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<header>

                         <button name="action_confirm" type="object"
                                string="Apply" states="draft"
                                class="oe_highlight"/>
                         <button name="action_done" type="object"
                                string="Approve" states="applied"
                                class="oe_highlight"/>
						<button name="action_draft" type="object"
                                string="Reject"
                                states="applied"/>
                         <field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="effective_bill_date"/>
								<field name="company_id" groups="base.group_multi_company" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>

							</group>
						</group>
						<field name="line_ids">
							<tree editable="top">
								<field name="employee_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
								<field name="effective_date"/>
								<field name="limit"/>
							</tree>
						</field>
					</sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>
		<record id="hr_mobile_bill_limit_tree" model="ir.ui.view">
			<field name="name">hr.mobile.bill.limit.tree</field>
			<field name="model">hr.mobile.bill.limit</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Employee Mobile bills">
					<field name="name" />
					<field name="effective_bill_date" />
					<field name="state" />
				</tree>
			</field>
		</record>

        <record model="ir.actions.act_window" id="hr_mobile_bill_limit_action">
            <field name="name">Mobile Bill Limits</field>
            <field name="res_model">hr.mobile.bill.limit</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_mobile_bill_limits_menu" name="Mobile Bill Limits" parent="hr_mobile_bill_menu"
                  action="hr_mobile_bill_limit_action" groups="gbs_hr_security.group_payroll_user"/>
    </data>
</odoo>
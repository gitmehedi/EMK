<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="lc_shipment_history" model="ir.ui.view">
			<field name="name">view_local_credit_form_inherit</field>
			<field name="model">letter.credit</field>
			<field name="inherit_id" ref="letter_of_credit.view_local_credit_form"/>
			<field name="arch" type="xml">
				<data>
					<xpath expr="//page[1]" position="after">
						<page string="Products">
                            <field name="product_lines">
                                 <tree string="Purchase Order Lines" create="false">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="date_planned"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom"/>
                                    <field name="price_unit"/>

                                </tree>

                            </field>
                            <div class="oe_clear"/>
                        </page>
					</xpath>
				</data>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="po_ids" widget="many2many_tags"/>
                </xpath>
			</field>
		</record>

    </data>
</odoo>
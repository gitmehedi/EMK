<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="lc_shipment_history" model="ir.ui.view">
			<field name="name">view_local_credit_form_inherit</field>
			<field name="model">letter.credit</field>
			<field name="inherit_id" ref="letter_of_credit.view_local_credit_form"/>
			<field name="arch" type="xml">
				<data>
					<xpath expr="//page[1]" position="after">
						<page string="Products">
                            <field name="product_lines">
                                 <tree string="Purchase Order Lines" create="false" editable="bottom"
                                       colors="grey: product_received_qty==product_qty;green: product_received_qty!=product_qty;">
                                    <field name="product_id" readonly='1'/>
                                    <field name="name" readonly='1'/>
                                    <field name="date_planned" readonly='1'/>
                                    <field name="product_qty" readonly='1'/>
                                    <field name="product_uom" readonly='1'/>
                                     <field name="product_received_qty" readonly='1'/>
                                    <field name="price_unit" readonly='1'/>

                                </tree>

                            </field>
                            <div class="oe_clear"/>
                        </page>
					</xpath>
				</data>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="po_ids" widget="many2many_tags" domain="[('state','in',['purchase','done']),('region_type','=',region_type)]"
                           options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                </xpath>
			</field>
		</record>

    </data>
</odoo>
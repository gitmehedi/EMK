<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_event_task_list_form">
            <field name="name">event.task.list.form</field>
            <field name="model">event.task.list</field>
            <field name="arch" type="xml">
                <form string="Event Task List">
                    <header>
                        <button name="act_assign" string="Assign Task" type="object" states="draft"
                                class="oe_highlight"/>
                        <button name="act_start" string="Start Task" type="object" states="assign"
                                class="oe_highlight" groups="event.group_event_user"/>
                        <button name="act_draft" string="Set to Draft" type="object" states="assign"
                                groups="event_user.group_event_officer"/>
                        <button name="act_finish" string="Finish Task" type="object" states="start"
                                class="oe_highlight" groups="event.group_event_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="assign,start,finish"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="event_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="task_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="assign_emp_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>

                            </group>
                            <group>
                                <field name="task_duration" widget="float_time"/>
                                <field name="assign_date" states="draft,assign,start,finish"/>
                                <field name="task_start" states="start,finish"/>
                                <field name="task_stop" states="finish"/>
                            </group>
                        </group>
                        <group string="Task Description">
                            <field name="task_description" widget="html" nolabel="1"/>
                        </group>
                        <group string="Task Feedback">
                            <field name="task_feedback" widget="html" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_task_list_tree">
            <field name="name">event.task.list.tree</field>
            <field name="model">event.task.list</field>
            <field name="arch" type="xml">
                <tree string="Event Task List" decoration-bf="state in ('start','assign','draft')"
                      colors="orange:state=='draft';green:state=='assign';salmon:state=='start';silver:state=='finish';">
                    <field name="task_id"/>
                    <field name="event_id"/>
                    <field name="assign_emp_id"/>
                    <field name="task_duration" widget="float_time" sum="Task Duration"/>
                    <field name="assign_date"/>
                    <field name="task_start"/>
                    <field name="task_stop"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_task_list_search">
            <field name="name">event.task.list.search</field>
            <field name="model">event.task.list</field>
            <field name="arch" type="xml">
                <search string="Event Management">
                    <field name="task_id"/>
                    <field name="event_id"/>
                    <field name="assign_emp_id"/>
                    <field name="assign_date"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Event" domain="[]" context="{'group_by':'event_id'}"/>
                        <filter string="Assigned Employee" domain="[]" context="{'group_by':'assign_emp_id'}"/>
                        <filter string="Assign Date" domain="[]" context="{'group_by':'assign_date'}"/>
                        <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_event_task_list">
            <field name="name">Event Tasks</field>
            <field name="res_model">event.task.list</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="menu_event_task_list" action="action_event_task_list" sequence="10"
                  parent="menu_event_operations" groups="event.group_event_user"/>
    </data>
</odoo>
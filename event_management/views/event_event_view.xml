<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherited_view_event_form">
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="duplicate">0</attribute>
                    <attribute name="create">0</attribute>
                    <attribute name="delete">0</attribute>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="%(event.act_event_registration_from_event)d"
                            type="action"
                            class="oe_stat_button oe_event_attendee_button"
                            icon="fa-users"
                            help="Register with this event">
                        <field name="total_participation_amount" widget="statinfo" string="Collection"/>
                    </button>
                </xpath>
                <xpath expr="//page[@name='registrations']" position="replace">
                    <page name="registrations" string="Registrations" invisible="1">
                        <group>
                            <group>
                                <field name="auto_confirm" groups="base.group_no_one"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//form/header" position="replace">
                    <header>
                        <button string="Approve Event" name="button_approve" states="draft" type="object"
                                class="oe_highlight" groups="event_user.group_event_officer"/>
                        <button string="Confirm Event" name="button_confirm" states="approve" type="object"
                                class="oe_highlight" groups="event_user.group_event_officer"/>
                        <button string="Mark as Close" name="act_mark_close" states="confirm" type="object"
                                class="oe_highlight" groups="event_user.group_event_officer"/>
                        <button string="Finish Event" name="button_done" states="mark_close" type="object"
                                class="oe_highlight" groups="event_user.group_event_officer"/>
                        <button string="Set To Draft" name="button_draft" states="cancel" type="object"
                                groups="event_user.group_event_officer"/>
                        <button string="Cancel Event" name="button_cancel" states="draft,confirm" type="object"
                                groups="event_user.group_event_officer"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approve,confirm"/>
                    </header>
                </xpath>
                <xpath expr="//button[@name='toggle_active']" position="replace"></xpath>
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='organizer_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='organizer_id']" position="after">
                    <field name="contact_number"/>
                    <field name="work_email"/>
                    <field name="poc_type_id"
                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                    <field name="expected_session"/>
                    <field name="facilities_ids" widget="many2many_tags"
                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                </xpath>
                <xpath expr="//div[2]" position="before">
                    <field name="image_medium" widget='image' class="oe_avatar"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page" position="inside">
                    <field name="purpose_of_event"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_event_sale_form">
            <field name="model">event.event</field>
            <field name="inherit_id" ref="website_event.view_event_sale_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_open_badge_editor']" position="attributes">
                    <attribute name="groups">event_user.group_event_officer</attribute>
                </xpath>
                <xpath expr="//button[@name='website_publish_button']" position="attributes">
                    <attribute name="groups">event_user.group_event_officer</attribute>
                </xpath>
                <xpath expr="//field[@name='twitter_hashtag']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='date_tz']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//group[@name='main_field_group']/group[2]" position="replace">
                    <group>
                        <field name="user_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        <field name="event_type_id" domain="[('state','=','approve')]"
                               options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        <field name="pillar_id" domain="[('state','=','approve')]"
                               options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        <field name="theme_id" domain="[('state','=','approve')]"
                               options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        <field name="space_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                    </group>
                </xpath>
                <xpath expr="//group[@name='main_field_group']" position="after">
                    <group string="Event Information">
                        <group>
                            <field name="seats_availability"/>
                            <field name="seats_max"/>
                            <field name="seats_min"/>
                            <field name="total_seat_available"/>
                            <field name="seats_available" string="Current Available Seats"/>
                            <field name="seats_used" string="Current Participant"/>
                            <field name="seats_reserved"/>
                            <field name="seats_unconfirmed" string="Pending Reservation Seats"/>
                            <field name="auto_confirm" string="Confirmation Not Required"/>
                        </group>
                        <group>
                            <field name="date_begin"/>
                            <field name="date_end"/>
                            <field name="last_date_reg"/>
                        </group>
                    </group>
                    <group string="Payments Information">
                        <group>
                            <field name="mode_of_payment"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,'horizontal': true}"/>
                            <field name="payment_type" widget="radio" options="{'horizontal':true}"/>
                            <field name="date_of_payment"/>
                        </group>
                        <group>
                            <field name="proposed_budget"/>
                            <field name="approved_budget"/>
                            <field name="paid_amount"/>
                            <field name="refundable_amount"/>
                            <field name="paid_attendee" widget="radio"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,'horizontal': true}"/>
                            <field name="participating_amount" attrs="{'required':[('paid_attendee','=','yes')]}"/>

                        </group>
                    </group>
                    <group string="Additional Information">
                        <group>
                            <field name="target_audience_group"/>
                            <field name="target_age"/>
                            <field name="event_share_name" invisible="True"/>
                            <field name="event_share" filename="event_share_name"/>
                        </group>
                        <group>
                            <field name="outreach_plan" widget="many2many_tags"
                                   options="{'no_create':True,'no_open':True}"/>
                            <field name="outreach_plan_other"/>
                            <field name="snacks_required" widget="radio"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True,'horizontal': true}"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='registrations']" position="before">
                    <page string="Details &amp; Rules Regulations">
                        <separator string="Event Description"/>
                        <field name="description" nolabel="1"/>
                        <separator string="Rules and Regulations"/>
                        <field name="rules_regulation" nolabel="1"/>
                        <separator string="Comments/Notes"/>
                        <field name="notes" nolabel="1"/>
                        <separator string="Purpose of Events"/>
                        <field name="purpose_of_event" nolabel="1"/>
                    </page>
                    <page string="Room Booking">
                        <field name="event_book_ids">
                            <tree editable="bottom">
                                <field name="room_id" domain="[('state','=','approve')]"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="seat_no" sum="Available Seat"/>
                                <field name="event_start"/>
                                <field name="event_stop"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Event Tasks">
                        <field name="event_task_ids">
                            <tree editable="bottom" decoration-bf="state in ('start','assign','draft')"
                                  colors="orange:state=='draft';green:state=='assign';salmon:state=='start';silver:state=='finish';">
                                <field name="task_id" domain="[('state','=','approve')]"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="assign_emp_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="task_duration" sum="Task Duration"/>
                                <field name="assign_date" required="True"/>
                                <field name="task_description"/>
                                <field name="task_start" readonly="True"/>
                                <field name="task_stop" readonly="True"/>
                                <field name="state" readonly="True"/>
                                <button name="button_assign" string="Assign Event" type="object" states="draft"
                                        icon="fas fa-arrow-circle-right text-success"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Invoices">
                        <field name="invoice_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="inherit_view_event_tree">
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Events" duplicate="0" create="0" delete="0"
                          colors="orange:state=='draft';green:state=='confirm';yellowgreen:state=='mark_close';grey:state=='done';red:state=='cancel';">
                        <field name="name"/>
                        <field name="organizer_id"/>
                        <field name="user_id"/>
                        <field name="expected_session"/>
                        <field name="paid_amount"/>
                        <field name="participating_amount"/>
                        <field name="last_date_reg"/>
                        <field name="date_begin"/>
                        <field name="date_end"/>
                        <field name="state"/>
                    </tree>
                </xpath>
            </field>
        </record>
        <record model="ir.actions.act_window" id="event.action_event_view">
            <field name="view_mode">tree,kanban,calendar,form</field>
            <field name="domain">[('state','in',['draft','approve','confirm'])]</field>
            <field name="context">{}</field>
        </record>

        <record id="event_event_close_action" model="ir.actions.act_window">
            <field name="name">Events Close</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">event.event</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,calendar,form</field>
            <field name="domain">[('state','in',['mark_close','close','done'])]</field>
            <field name="search_view_id" ref="event.view_event_search"/>
        </record>

        <menuitem id="event_event_close_menu" name="Event Close" sequence="21" groups="event_user.group_event_officer"
                  parent="menu_event_general" action="event_event_close_action"/>
    </data>
</odoo>

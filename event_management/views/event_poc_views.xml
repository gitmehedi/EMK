<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_event_organizer_tree" model="ir.ui.view">
            <field name="name">res.partner.tree.view</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="PoC" decoration-bf="status==True"
                      colors="green:status==True;silver:status==False;">
                    <field name="display_name" string="Name"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="company_name"/>
                    <field name="email"/>
                    <field name="function"/>
                    <field name="event_count" sum="event_count"/>
                    <field name="status" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_event_organizer_form" model="ir.ui.view">
            <field name="name">res.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Organizers">
                    <header>
                        <button string="Create Login" name="create_login"
                                type="object" class="oe_highlight" attrs="{'invisible': [('partner_user_id','>', 0)]}"
                                groups="event.group_event_manager"/>
                        <field name="partner_user_id" invisible="True"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button"
                                    type="object"
                                    icon="fa-ticket"
                                    name="action_event_view" attrs="{'invisible': [('event_count','=', 0)]}">
                                <field string="Events" name="event_count" widget="statinfo"/>
                            </button>
                            <field name="is_poc" invisible="True"/>
                        </div>
                        <field name="image" widget='image' class="oe_avatar"
                               options='{"preview_image": "image_medium", "size": [90, 90]}'/>

                        <div class="oe_title">
                            <field name="is_company" invisible="1"/>
                            <field name="company_type" widget="radio"
                                   class="oe_edit_only"
                                   options="{'horizontal': true}"/>
                            <h1>
                                <field name="name" placeholder="Name" invisible="0" required="1" readonly="1"/>
                            </h1>
                            <group>
                                <field name="firstname" required="True"/>
                                <field name="middlename"/>
                                <field name="lastname" required="True"/>
                            </group>

                            <div class="o_row">
                                <field name="parent_id"
                                       placeholder="Company"
                                       domain="[('is_company', '=', True)]"
                                       context="{'default_is_company': True}"
                                       invisible="1"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="type" attrs="{'invisible': [('parent_id','=', False)]}"
                                       groups="base.group_no_one"/>

                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <div class="oe_edit_only">
                                        <button name="open_parent" type="object" string="(edit)" class="oe_link"
                                                attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                                    </div>
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                    <field name="city" placeholder="City" class="o_address_city"
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"
                                           context="{'country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'
                                           attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                </div>
                                <field name="website" widget="url" placeholder="e.g. www.emk.com"/>
                                <field name="company_name"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="function" placeholder="e.g. Job Position"
                                       attrs="{'invisible': [('is_company','=', True)]}"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone" placeholder="8801900000000"/>
                                <field name="fax"/>
                                <field name="user_ids" invisible="1"/>
                                <field name="email" widget="email" required="1"/>
                                <field name="lang" invisible="1"/>
                                <field name="customer" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_event_organizer_kanban" model="ir.ui.view">
            <field name="name">res.partner.kanban.view</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="display_name"/>
                    <field name="email"/>
                    <field name="parent_id"/>
                    <field name="function"/>
                    <field name="country_id"/>
                    <field name="city"/>
                    <field name="mobile"/>
                    <field name="image_small"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <div class="o_kanban_image">
                                    <t t-if="record.image_small.raw_value">
                                        <img t-att-src="kanban_image('res.partner', 'image_small', record.id.value)"/>
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_heading">
                                        <field name="display_name"/>
                                    </strong>
                                    <ul>
                                        <li t-if="record.parent_id.raw_value and !record.function.raw_value">
                                            <field name="parent_id"/>
                                        </li>
                                        <li t-if="!record.parent_id.raw_value and record.function.raw_value">
                                            <field name="function"/>
                                        </li>
                                        <li t-if="record.parent_id.raw_value and record.function.raw_value">
                                            <field name="function"/>
                                            at
                                            <field name="parent_id"/>
                                        </li>
                                        <li t-if="record.city.raw_value and !record.country_id.raw_value">
                                            <field name="city"/>
                                        </li>
                                        <li t-if="!record.city.raw_value and record.country_id.raw_value">
                                            <field name="country_id"/>
                                        </li>
                                        <li t-if="record.city.raw_value and record.country_id.raw_value"><field
                                                name="city"/>,
                                            <field name="country_id"/>
                                        </li>
                                        <li t-if="record.email.raw_value" class="o_text_overflow">
                                            <field name="email"/>
                                        </li>
                                    </ul>
                                    <div class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_event_organizer" model="ir.actions.act_window">
            <field name="name">PoC</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('is_poc','=',True)]</field>
            <field name="context">{'default_is_poc': 1,'default_supplier': 0,
                'default_customer':1,'default_supplier': 0}
            </field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a contact in your address book.
                </p>
            </field>
        </record>

        <record id="action_event_organizer_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_event_organizer_tree"/>
            <field name="act_window_id" ref="action_event_organizer"/>
        </record>

        <record id="action_event_organizer_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_event_organizer_kanban"/>
            <field name="act_window_id" ref="action_event_organizer"/>
        </record>

        <record id="action_event_organizer_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_event_organizer_form"/>
            <field name="act_window_id" ref="action_event_organizer"/>
        </record>

        <menuitem id="menu_partner_organizer" action="action_event_organizer" name="PoC"
                  groups="event_user.group_event_officer" parent="event.menu_event_configuration"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_event_category_form">
            <field name="name">event.category.form</field>
            <field name="model">event.category</field>
            <field name="arch" type="xml">
                <form string="Event Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="event_category"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_category_tree">
            <field name="name">event.category.tree</field>
            <field name="model">event.category</field>
            <field name="arch" type="xml">
                <tree string="Event Category"
                      decoration-bf="status==True" decoration-muted="status==False"
                      decoration-success="status==True">
                    <field name="name"/>
                    <field name="event_category"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_event_category">
            <field name="name">Event Category</field>
            <field name="res_model">event.category</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="menu_event_category" action="action_event_category"
                  groups="event_user.group_event_officer" parent="event.menu_event_configuration"/>

    </data>
</odoo>
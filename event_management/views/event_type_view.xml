<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event_type_form_view" model="ir.ui.view">
            <field name="model">event.type</field>
            <field name="inherit_id" ref="event.view_event_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form delete="0">
                        <sheet>
                            <field name="image" widget='image' class="oe_avatar"/>
                            <div class="oe_title">
                                <label class="oe_edit_only" for="organizer_id" string="Event Type"/>
                                <h1>
                                    <field name="name" placeholder="Name" default_focus="1" tabindex="1"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                </h1>
                            </div>
                            <group>
                                <group>
                                    <field name="event_count"/>
                                    <field name="status"/>
                                </group>
                            </group>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </xpath>
            </field>
        </record>

        <record id="event_type_tree_view" model="ir.ui.view">
            <field name="model">event.type</field>
            <field name="inherit_id" ref="event.view_event_type_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-bf">status == True</attribute>
                    <attribute name="decoration-success">status == True</attribute>
                    <attribute name="decoration-muted">status == False</attribute>
                </xpath>
                <xpath expr="//tree" position="inside">
                    <field name="event_count"/>
                    <field name="status"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.menu" id="event.menu_event_type">
            <field name="name">Event Type</field>
            <field name="sequence">10</field>
            <field name="groups_id"
                   eval="[(4, ref('event_user.group_event_officer'))]"/>
        </record>
    </data>
</odoo>
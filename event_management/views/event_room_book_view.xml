<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="meeting_room_reservation_tree_view" model="ir.ui.view">
            <field name="name">event.room.reservation.view.tree</field>
            <field name="model">event.room.book</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0">
                    <field name="room_id"/>
                    <field name="event_id"/>
                    <field name="event_start"/>
                    <field name="event_stop"/>
                    <field name="seat_no"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="event_management_calender_view" model="ir.ui.view">
            <field name="name">event.room.calendar</field>
            <field name="model">event.room.book</field>
            <field name="arch" type="xml">
                <calendar string="Event Room Reservation" date_start="event_start" date_stop="event_stop" color="event_id">
                    <field name="room_id"/>
                </calendar>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_meeting_room_reservation">
            <field name="name">Event Room Reservation</field>
            <field name="res_model">event.room.book</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,calendar</field>
        </record>

        <menuitem name="Meeting Room Calender" id="menu_meeting_room_reservation" action="action_meeting_room_reservation"
                  parent="menu_event_general"  groups="event_user.group_event_administration" sequence="83"/>
    </data>
</odoo>

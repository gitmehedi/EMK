<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="meeting_room_reservation_form_view" model="ir.ui.view">
            <field name="name">event.room.reservation.view.form</field>
            <field name="model">event.room.book</field>
            <field name="arch" type="xml">
                <form string="Event Room Booking">
                    <header>
                        <button name="act_done" string="Done" type="object" class="oe_highlight" states="assign"
                                groups="event_user.group_event_officer,event.group_event_manager"/>
                        <button name="act_cancel" string="Cancel" type="object" states="assign"
                                groups="event_user.group_event_officer,event.group_event_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="assign,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="room_id"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="event_id"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            </group>
                            <group>
                                <field name="event_start"/>
                                <field name="event_stop"/>
                                <field name="seat_no"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="meeting_room_reservation_tree_view" model="ir.ui.view">
            <field name="name">event.room.reservation.view.tree</field>
            <field name="model">event.room.book</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" decoration-bf="state in ('assign','assign')"
                      colors="green:state == 'assign';grey:state == 'done';red:state == 'cancel'">
                    <field name="room_id"/>
                    <field name="event_id"/>
                    <field name="event_start"/>
                    <field name="event_stop"/>
                    <field name="seat_no"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="meeting_room_reservation_search_view">
            <field name="name">event.room.reservation.view.search</field>
            <field name="model">event.room.book</field>
            <field name="arch" type="xml">
                <search string="Event Management">
                    <field name="room_id"/>
                    <field name="event_id"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Event Room" domain="[]" context="{'group_by':'room_id'}"/>
                        <filter string="Event" domain="[]" context="{'group_by':'event_id'}"/>
                        <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="event_management_calender_view" model="ir.ui.view">
            <field name="name">event.room.calendar</field>
            <field name="model">event.room.book</field>
            <field name="arch" type="xml">
                <calendar string="Event Room Reservation" date_start="event_start" date_stop="event_stop"
                          color="event_id">
                    <field name="room_id"/>
                </calendar>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_meeting_room_reservation">
            <field name="name">Event Room Booking</field>
            <field name="res_model">event.room.book</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,calendar,form</field>
        </record>

        <menuitem name="Event Room Booking" id="menu_meeting_room_reservation" action="action_meeting_room_reservation"
                  parent="menu_event_operations" sequence="30"
                  groups="event.group_event_user,event_user.group_event_officer,event.group_event_manager,event_user.group_event_organizer"
        />
    </data>
</odoo>

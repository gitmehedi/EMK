<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_event_room_form">
            <field name="name">event.room.form</field>
            <field name="model">event.room</field>
            <field name="arch" type="xml">
                <form string="Event Room">
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <button name="toggle_status" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="status" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="event_count"/>
                                <field name="service_ids" widget="many2many_tags"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            </group>
                            <group>
                                <field name="max_seat"/>
                                <field name="min_seat"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_room_tree">
            <field name="name">event.room.tree</field>
            <field name="model">event.room</field>
            <field name="arch" type="xml">
                <tree string="Event Room"
                      decoration-bf="status==True" decoration-muted="status==False"
                      decoration-success="status==True">
                    <field name="name"/>
                    <field name="event_count"/>
                    <field name="max_seat"/>
                    <field name="min_seat"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_event_room">
            <field name="name">Event Rooms</field>
            <field name="res_model">event.room</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="Event Room" id="menu_event_room" action="action_event_room"
                  groups="event_user.group_event_administration" parent="event.menu_event_configuration"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_event_task_type_form">
            <field name="name">event.task.type.form</field>
            <field name="model">event.task.type</field>
            <field name="arch" type="xml">
                <form string="Event Task Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <button name="toggle_status" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="status" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_task_type_tree">
            <field name="name">event.task.type.tree</field>
            <field name="model">event.task.type</field>
            <field name="arch" type="xml">
                <tree string="Event Task Type"
                      decoration-bf="status==True" decoration-muted="status==False"
                      decoration-success="status==True">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_event_task_type">
            <field name="name">Event Task Types</field>
            <field name="res_model">event.task.type</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="menu_event_task_type" action="action_event_task_type"
                  groups="event_user.group_event_officer" parent="event.menu_event_configuration"/>


        <record model="ir.ui.view" id="view_event_service_type_form">
            <field name="name">event.service.type.form</field>
            <field name="model">event.service.type</field>
            <field name="arch" type="xml">
                <form string="Event Service Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <button name="toggle_status" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="status" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                 <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_service_type_tree">
            <field name="name">event.service.type.tree</field>
            <field name="model">event.service.type</field>
            <field name="arch" type="xml">
                <tree string="Event Service Type"
                      decoration-bf="status==True" decoration-muted="status==False"
                      decoration-success="status==True">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_event_service_type">
            <field name="name">Event Services</field>
            <field name="res_model">event.service.type</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="menu_event_service_type" action="action_event_service_type"
                  groups="event_user.group_event_officer" parent="event.menu_event_configuration"/>
    </data>
</odoo>
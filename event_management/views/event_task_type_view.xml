<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_event_task_type_form">
            <field name="name">event.task.type.form</field>
            <field name="model">event.task.type</field>
            <field name="arch" type="xml">
                <form string="Event Task Type" duplicate="0">
                    <header>
                        <button name="act_approve" string="Approve" states="draft" type="object" class="oe_highlight"/>
                        <button name="act_draft" string="Draft" states="reject" type="object" class="oe_highlight"/>
                        <button name="act_reject" string="Reject" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"cancel":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <!--                            <button name="toggle_status" type="object"-->
                            <!--                                    class="oe_stat_button" icon="fa-archive">-->
                            <!--                                <field name="status" widget="boolean_button"-->
                            <!--                                       options='{"terminology": "archive"}'/>-->
                            <!--                            </button>-->
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>

                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_task_type_tree">
            <field name="name">event.task.type.tree</field>
            <field name="model">event.task.type</field>
            <field name="arch" type="xml">
                <tree string="Event Task Type" decoration-info="state=='draft'" decoration-success="state=='approve'"
                      decoration-danger="state=='reject'"
                      decoration-bf="state in ('approve',)">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_event_task_type_search" model="ir.ui.view">
            <field name="name">view.event.task.type.search</field>
            <field name="model">event.task.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="state"/>
                    <group string="Group By">
                        <filter string="Pending" name="pending" icon="terp-personal"
                                domain="[('state','in',('draft','approve')),('pending','=',1),'|',('active','=',0),('active','=',1)]"/>
                        <filter string="Rejected" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','reject')]"/>
                        <filter string="In-Active" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','approve')]"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_event_task_type">
            <field name="name">Event Task Types</field>
            <field name="res_model">event.task.type</field>
            <field name="view_type">form</field>
            <field name="context">
                {"search_default_active":'False',"search_default_pending":'True'}
            </field>
        </record>

        <menuitem id="menu_event_task_type" action="action_event_task_type"
                  groups="event_user.group_event_officer" parent="event.menu_event_configuration"/>


        <record model="ir.ui.view" id="view_event_service_type_form">
            <field name="name">event.service.type.form</field>
            <field name="model">event.service.type</field>
            <field name="arch" type="xml">
                <form string="Event Service Type" duplicate="0">
                    <header>
                        <button name="act_approve" string="Approve" states="draft" type="object" class="oe_highlight"/>
                        <button name="act_draft" string="Draft" states="reject" type="object" class="oe_highlight"/>
                        <button name="act_reject" string="Reject" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"cancel":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <!--                            <button name="toggle_status" type="object"-->
                            <!--                                    class="oe_stat_button" icon="fa-archive">-->
                            <!--                                <field name="status" widget="boolean_button"-->
                            <!--                                       options='{"terminology": "archive"}'/>-->
                            <!--                            </button>-->
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="service_type"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_event_service_type_tree">
            <field name="name">event.service.type.tree</field>
            <field name="model">event.service.type</field>
            <field name="arch" type="xml">
                <tree string="Event Service Type" decoration-info="state=='draft'" decoration-success="state=='approve'"
                      decoration-danger="state=='reject'"
                      decoration-bf="state in ('approve',)">
                    <field name="name"/>
                    <field name="service_type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_event_service_type_search" model="ir.ui.view">
            <field name="name">view.event.service.type.search</field>
            <field name="model">event.service.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="state"/>
                    <group string="Group By">
                        <filter string="Pending" name="pending" icon="terp-personal"
                                domain="[('state','in',('draft','approve')),('pending','=',1),'|',('active','=',0),('active','=',1)]"/>
                        <filter string="Rejected" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','reject')]"/>
                        <filter string="In-Active" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','approve')]"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_event_service_type">
            <field name="name">Event Services</field>
            <field name="res_model">event.service.type</field>
            <field name="view_type">form</field>
            <field name="context">
                {"search_default_active":'False',"search_default_pending":'True'}
            </field>
        </record>

        <menuitem id="menu_event_service_type" action="action_event_service_type"
                  groups="event_user.group_event_officer" parent="event.menu_event_configuration"/>
    </data>
</odoo>
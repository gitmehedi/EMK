<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event_close_tree_view" model="ir.ui.view">
            <field name="name">event_close_tree_view</field>
            <field name="model">event.close</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="event_id"/>
                    <field name="event_type_id"/>
                    <field name="moderator_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="activity_duration"/>
                    <field name="total_participants"/>
                </tree>
            </field>
        </record>
        <record id="event_close_form_view" model="ir.ui.view">
            <field name="name">event_close_form_view</field>
            <field name="model">event.close</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="event_colse_confirm"  string="Confirm" type="object" class="oe_highlight" states="draft"/>
                        <button name="event_close_cancel" string="Cancel"  type="object" states="draft"/>
                        <button name="event_close_approve" string="Approve" type="object" states="confirm"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="event_id"/>
                        </h1>
                        <group>
                            <group>
                                <field name="event_type_id"/>
                                <field name="location_id"/>
                                <field name="organizer_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="activity_duration"/>
                            </group>
                            <group>
                                <field name="moderator_id"/>
                                <field name="designation_id"/>
                                <field name="company_id"/>
                                <field name="mobile_phone"/>
                                <field name="work_email"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Others">
                                <group>
                                    <group>
                                        <field name="theme_id"/>
                                        <field name="audience_id"/>
                                        <field name="total_participants"/>
                                        <field name="male_participants"/>
                                        <field name="female_participants"/>
                                    </group>
                                    <group>
                                        <field name="event_summary"/>
                                        <field name="website"/>
                                        <field name="attach_file"/>
                                        <field name="comment"/>
                                    </group>
                                </group>
                                <p><b>Age Group</b></p>
                                <field name="age_group" widget="radio" nolabel="1"/>
                                <p><b>Did you collaborate with any non-USG organization to carry out this activity?</b></p>
                                <field name="non_usg" widget="radio" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="event_close_action" model="ir.actions.act_window">
            <field name="name">Event Close</field>
            <field name="res_model">event.close</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu items -->
        <menuitem id="event_close_menu" name="Event Close" sequence="82"
                  parent="menu_event_general" action="event_close_action"
                  />

    </data>
</odoo>
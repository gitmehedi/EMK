<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event_close_tree_view" model="ir.ui.view">
            <field name="name">event_close_tree_view</field>
            <field name="model">event.close</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="event_id"/>
                    <field name="event_type_id"/>
                    <field name="organizer_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="activity_duration"/>
                    <field name="total_participants"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="event_close_form_view" model="ir.ui.view">
            <field name="name">event_close_form_view</field>
            <field name="model">event.close</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="act_submit" string="Submit" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="act_approve" string="Approve" type="object" class="oe_highlight"
                                states="confirm"/>
                        <button name="act_close" string="Close Event" type="object" states="approve"
                                class="oe_highlight"/>
                        <button name="act_reset" string="Reset to Draft" type="object" states="confirm,approve"/>
                        <button name="act_cancel" string="Cancel" type="object" states="confirm,approve"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,close"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="event_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"
                            attrs="{'readonly': [('state','!=','draft')]}"/>
                        </h1>
                        <group>
                            <group>
                                <field name="event_type_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="activity_duration"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>

                        <group string="Moderator of the event">
                            <group>
                                <field name="organizer_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="designation"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            </group>
                            <group>
                                <field name="company_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="contract_number"/>
                                <field name="work_email"/>
                            </group>
                        </group>
                        <group string="Key US and non-US people associate with this activity">
                            <field name="event_associate_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="associate_id"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="job_title"/>
                                    <field name="organization_id"/>
                                </tree>
                            </field>
                        </group>
                    
                        <notebook>
                            <page string="Information">
                                <group>
                                    <group>
                                        <field name="total_participants"/>
                                        <field name="male_participants"/>
                                        <field name="female_participants"/>
                                    </group>
                                    <group>
                                        <field name="theme_id"
                                               options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                        <field name="audience_id"
                                               options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                        <field name="space_id"
                                               options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    </group>
                                </group>
                                <p>
                                    <b>Age Group</b>
                                </p>
                                <field name="age_group" widget="radio" nolabel="1"/>
                                <group string="One sentence summary about your company">
                                    <field name="event_summary" nolabel="1" widget="html"/>
                                </group>
                                <p>
                                    <b>Did you collaborate with any non-USG organization to carry out this activity?</b>
                                </p>
                                <field name="non_usg" widget="radio" nolabel="1"/>
                                <group string="If yes,please mention">
                                    <field name="comment" nolabel="1" widget="html"/>
                                </group>
                                <group string="Summary of Event">
                                    <field name="event_summary" nolabel="1" widget="html"/>
                                </group>
                                <group string="Please the URL of your organization's websites and social media accounts">
                                    <field name="comment" nolabel="1" widget="html"/>
                                </group>
                                <group string="Comment">
                                    <field name="comment" nolabel="1" widget="html"/>
                                </group>
                            </page>
                            <page string="Attachments">
                                <field name="attachment_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="filename"/>
                                        <field name="description"/>
                                    </tree>
                                    <form>
                                        <field name="name"/>
                                        <field name="filename"/>
                                        <field name="description"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="event_close_action" model="ir.actions.act_window">
            <field name="name">Event Close</field>
            <field name="res_model">event.close</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu items -->
        <menuitem id="event_close_menu" name="Event Close" sequence="20" groups="event_user.group_event_administration"
                  parent="menu_event_operations" action="event_close_action"/>

    </data>
</odoo>
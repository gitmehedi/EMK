<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event_close_tree_view" model="ir.ui.view">
            <field name="name">event_close_tree_view</field>
            <field name="model">event.close</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="event_id"/>
                    <field name="event_type_id"/>
                    <field name="moderator_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="activity_duration"/>
                    <field name="total_participants"/>
                </tree>
            </field>
        </record>
        <record id="event_close_form_view" model="ir.ui.view">
            <field name="name">event_close_form_view</field>
            <field name="model">event.close</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="event_colse_confirm"  string="Confirm" type="object" class="oe_highlight" states="draft"/>
                        <button name="event_cancel" string="Cancel"  type="object" states="draft"/>
                        <button name="event_approve" string="Approve" type="object" states="confirm"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="event_id"/>
                        </h1>
                        <group>
                            <group>
                                <field name="event_type_id"/>
                                <field name="location_id"/>
                                <field name="organizer_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="activity_duration"/>
                            </group>
                            <group>
                                <field name="moderator_id"/>
                                <!--<field name="designation_id"/>-->
                                <!--<field name="company_id"/>-->
                                <!--<field name="mobile_phone"/>-->
                                <!--<field name="work_email"/>-->
                                <!--<field name="date" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>-->
                            </group>
                        </group>
                        <notebook>
                            <page string="Others">
                                <tree string="Service Lines Tree" editable="bottom" colors="#10993b:state=='done';#f20b07:state=='pending'">
                                    <field name="theme_id"/>
                                    <field name="audience_id"/>
                                    <field name="total_participants"/>
                                    <field name="male_participants"/>
                                    <field name="female_participants"/>
                                </tree>
                                <tree string="Service Lines Tree" editable="bottom" colors="#10993b:state=='done';#f20b07:state=='pending'">
                                    <field name="age_group" widget="redio"/>
                                    Did you collaborate with any non-USG organization to carry out this activity?
                                    <field name="non_usg" widget="redio"/>
                                    <field name="event_summary"/>
                                    <field name="website"/>
                                    <field name="attach_file"/>
                                    <field name="comment"/>
                                </tree>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="event_close_action" model="ir.actions.act_window">
            <field name="name">Event Close</field>
            <field name="res_model">event.close</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add an event order.
              </p><p>
                Here you can create and manage your events.
              </p>
            </field>
        </record>
    </data>
</odoo>
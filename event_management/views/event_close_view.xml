<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event_close_tree_view" model="ir.ui.view">
            <field name="name">event_close_tree_view</field>
            <field name="model">event.close</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="event_id"/>
                    <field name="event_type_id"/>
                    <field name="organizer_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="activity_duration"/>
                    <field name="total_participants"/>
                </tree>
            </field>
        </record>
        <record id="event_close_form_view" model="ir.ui.view">
            <field name="name">event_close_form_view</field>
            <field name="model">event.close</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="act_confirm" string="Confirm" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="act_approve" string="Approve" type="object" states="confirm"
                                class="oe_highlight"/>
                        <button name="act_cancel" string="Cancel" type="object" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="event_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </h1>
                        <group>
                            <group>
                                <field name="event_type_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="activity_duration"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>

                        <group string="Moderator of the event">
                            <group>
                                <field name="organizer_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="designation_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            </group>
                            <group>
                                <field name="company_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="mobile_phone"/>
                                <field name="work_email"/>
                            </group>
                        </group>
                    
                        <notebook>
                            <page string="Information">
                                <group>
                                    <group>
                                        <field name="total_participants"/>
                                        <field name="male_participants"/>
                                        <field name="female_participants"/>
                                    </group>
                                    <group>
                                        <field name="theme_id"
                                               options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                        <field name="audience_id"
                                               options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                        <field name="website"/>
                                        <field name="attach_file"/>
                                    </group>
                                </group>
                                <p>
                                    <b>Age Group</b>
                                </p>
                                <field name="age_group" widget="radio" nolabel="1"/>
                                <p>
                                    <b>Did you collaborate with any non-USG organization to carry out this activity?</b>
                                </p>
                                <field name="non_usg" widget="radio" nolabel="1"/>
                                <group string="Summary of Event">
                                    <field name="event_summary" nolabel="1" widget="html"/>
                                </group>
                                <group string="Comment">
                                    <field name="comment" nolabel="1" widget="html"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="event_close_action" model="ir.actions.act_window">
            <field name="name">Event Close</field>
            <field name="res_model">event.close</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu items -->
        <menuitem id="event_close_menu" name="Event Close" sequence="82"
                  parent="menu_event_general" action="event_close_action"
        />

    </data>
</odoo>
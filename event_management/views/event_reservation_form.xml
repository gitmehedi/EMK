<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event_reservation_form_tree_view" model="ir.ui.view">
            <field name="name">event.reservation.form.tree.view</field>
            <field name="model">event.reservation.form</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="organizer_id"/>
                    <field name="org_type"/>
                    <field name="event_type_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="event_reservation_form_view" model="ir.ui.view">
            <field name="name">event.reservation.form.view</field>
            <field name="model">event.reservation.form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="act_submit" string="Send" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="act_approve" string="Confirm" type="object" class="oe_highlight"
                                states="on_process"/>
                        <button name="act_close" string="Done" type="object" states="approve"
                                class="oe_highlight"/>
                        <button name="act_reset" string="Reset to Draft" type="object" states="confirm,on_process"/>
                        <button name="act_cancel" string="Cancel Reservation" type="object" states="confirm,on_process"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,on_process,confirm,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="organizer_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}" required="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="org_type" required="1"/>
                                <field name="contract_number" required="1"/>
                                <field name="work_email" required="1"/>
                                <field name="request_date" required="1"/>
                                <field name="payment_date" required="1"/>
                            </group>
                            <group>
                                <field name="event_type_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}" required="1"/>
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="space_id" required="1"/>
                                <field name="attendee_number" required="1"/>
                                <field name="payment_mode" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="event_reservation_form_action" model="ir.actions.act_window">
            <field name="name">Event Reservation Form</field>
            <field name="res_model">event.reservation.form</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu items -->
        <menuitem id="event_reservation_form_menu" name="Event Reservation Form" sequence="80"
                  parent="menu_event_general" action="event_reservation_form_action"
        />

    </data>
</odoo>
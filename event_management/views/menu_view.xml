<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event.event_main_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('event_user.group_event_organizer'))]"/>
        </record>
        <record id="event.menu_reporting_events" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('event_user.group_event_organizer'))]"/>
        </record>
        <record id="event.menu_report_event_registration" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('event_user.group_event_organizer'))]"/>
        </record>

        <menuitem id="menu_event_general" name="Events" parent="event.event_main_menu"
                  groups="event_user.group_event_organizer,event.group_event_user"/>

        <menuitem id="menu_event_operations" name="Event Operations" parent="event.event_main_menu"
                  groups="event_user.group_event_organizer,event.group_event_user"/>

        <record id="event.menu_action_registration" model="ir.ui.menu">
            <field name="parent_id" eval="ref('menu_event_operations')"/>
            <field name="sequence">1</field>
            <field name="groups_id"
                   eval="[(4, ref('event_user.group_event_administration')),(4, ref('base.group_no_one'))]"/>
        </record>

        <menuitem id="account.menu_finance_receivables" name="Sales" parent="account.menu_finance" sequence="2"
                  groups="base.group_no_one"/>

        <menuitem id="account.menu_finance_payables" name="Purchases" parent="account.menu_finance" sequence="3"
                  groups="base.group_no_one"/>

        <record id="event.menu_event_event" model="ir.ui.menu">
            <field name="parent_id" eval="ref('menu_event_general')"/>
            <field name="sequence">10</field>
            <field name="groups_id"
                   eval="[(4, ref('event_user.group_event_organizer')),(4, ref('event_user.group_event_administration'))]"/>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event_reservation_view" model="ir.ui.view">
            <field name="name">event.reservation.view</field>
            <field name="model">event.reservation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="send_reservation" string="Send Reservation Email" type="object"
                                class="oe_highlight"
                                attrs="{'invisible':[('state','!=','draft'),('reserv_url','!=',False)]}"/>
                        <button name="act_approve" string="Approve" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="act_on_process" string="On Process" type="object" class="oe_highlight"
                                states="approve"/>
                        <button name="act_confirm" string="Confirm" type="object" class="oe_highlight"
                                states="on_process"/>
                        <button name="act_set_approve" string="Set To Approve" type="object"
                                states="on_process"/>
                        <button name="act_draft" string="Reset to Draft" type="object" states="approve"/>
                        <button name="act_cancel" string="Cancel" type="object" states="draft"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,approve,on_process,confirm"/>
                    </header>
                    <sheet>
                        <field name="image_medium" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="event_name" string="Event Name"/>
                            <h1>
                                <field name="event_name" placeholder="Event Name" default_focus="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="poc_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="contact_number"/>
                                <field name="work_email"/>
                                <field name="poc_type_id" domain="[('state','=','approve')]"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="facilities_ids" widget="many2many_tags"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="event_id" attrs="{'invisible':[('state','in',['draft','on_process'])]}"/>
                                <field name="reserv_url" invisible="True"/>
                            </group>
                            <group>
                                <field name="org_id" readonly="1"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="event_type_id" domain="[('state','=','approve')]"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="pillar_id" domain="[('state','=','approve')]"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="theme_id" domain="[('state','=','approve')]"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="space_id" widget="radio"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True,'horizontal': true}"/>
                            </group>
                        </group>
                        <group string="Seats Information">
                            <group>
                                <field name="seats_availability" widget="radio" options="{'horizontal': true}"/>
                                <field name="attendee_number"/>
                                <field name="total_session"/>
                            </group>
                            <group>
                                <field name="request_date"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="last_date_reg"/>
                            </group>
                        </group>
                        <group string="Payments Information">
                            <group>
                                <field name="mode_of_payment"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True,'horizontal': true}"/>
                                <field name="payment_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="date_of_payment"/>
                            </group>
                            <group>
                                <field name="proposed_budget"/>
                                <field name="approved_budget"/>
                                <field name="paid_amount" attrs="{'required':[('payment_type','=','paid')]}"/>
                                <field name="refundable_amount"/>
                                <field name="paid_attendee" widget="radio"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True,'horizontal': true}"/>
                                <field name="participating_amount" attrs="{'required':[('paid_attendee','=','yes')]}"/>
                            </group>
                        </group>
                        <group string="Additional Information">
                            <group>
                                <field name="target_audience_group"/>
                                <field name="target_age"/>
                                <field name="event_details_name" invisible="1"/>
                                <field name="event_details" filename="event_details_name"/>
                            </group>
                            <group>
                                <field name="outreach_plan"/>
                                <field name="outreach_plan_other"/>
                                <field name="snacks_required" widget="radio"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True,'horizontal': true}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details &amp; Rules Regulations" tabindex="-1">
                                <separator string="Event Description"/>
                                <field name="description" nolabel="1"/>
                                <separator string="Rules and Regulations"/>
                                <field name="rules_regulation" nolabel="1"/>
                                <separator string="Comments/Notes"/>
                                <field name="notes" nolabel="1"/>
                                <separator string="Purpose of Events"/>
                                <field name="purpose_of_event" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="event_reservation_tree_view" model="ir.ui.view">
            <field name="name"> event.reservation.tree.view</field>
            <field name="model">event.reservation</field>
            <field name="arch" type="xml">
                <tree decoration-bf="state in ['draft','on_process','confirm']"
                      colors="orange:state=='draft';green:state=='approve';blue:state=='on_process';grey:state=='confirm';salmon:state=='cancel';silver:state=='done';">
                    <field name="name"/>
                    <field name="event_name"/>
                    <field name="poc_id"/>
                    <field name="org_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="last_date_reg"/>
                    <field name="approved_budget"/>
                    <field name="paid_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="event_reservation_action" model="ir.actions.act_window">
            <field name="name">Event Reservation</field>
            <field name="res_model">event.reservation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="event_reservation_menu" sequence="80" groups="event_user.group_event_officer"
                  parent="menu_event_general" action="event_reservation_action"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event_reservation_tree_view" model="ir.ui.view">
            <field name="name">event.reservation.tree.view</field>
            <field name="model">event.reservation</field>
            <field name="arch" type="xml">
                <tree decoration-bf="status==on_process" decoration-danger="status=='on_process"
                      decoration-success="status=='confirm" decoration-muted="status==done">
                    <field name="organizer_id"/>
                    <field name="org_type_id"/>
                    <field name="event_type_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="event_reservation_view" model="ir.ui.view">
            <field name="name">event.reservation.view</field>
            <field name="model">event.reservation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="act_on_process" string="On Process" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="act_confirm" string="Confirm" type="object" class="oe_highlight"
                                states="on_process"/>
                        <button name="act_done" string="Done" type="object" states="confirm"
                                class="oe_highlight"/>
                        <button name="act_draft" string="Reset to Draft" type="object" states="on_process"/>
                        <button name="act_cancel" string="Cancel" type="object"
                                states="draft,on_process"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,on_process,confirm,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="organizer_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </h1>
                        <group>
                            <group>
                                <field name="contract_number"/>
                                <field name="work_email"/>
                                <field name="org_type_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="event_type_id"
                                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="attendee_number"/>
                                <field name="payment_mode"/>
                            </group>
                            <group>
                                <field name="request_date"/>
                                <field name="payment_date"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="event_reservation_action" model="ir.actions.act_window">
            <field name="name">Event Reservation</field>
            <field name="res_model">event.reservation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="event_reservation_menu" sequence="80"
                  parent="menu_event_general" action="event_reservation_action"/>
    </data>
</odoo>
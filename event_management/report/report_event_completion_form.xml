<?xml version="1.0" encoding="utf-8"?>
<!--Custom report. -->
<odoo>
	<data>
		<report
			id="action_report_event_completion"
			model="event.close"
			string="Event Completion Form"
			report_type="qweb-pdf"
			name="event_management.report_event_completion"
			file="event_management.report_event_completion"
            paperformat="report_layout.paperformat_backend_portrait"
		/>

		<template id="report_event_completion">
			<t t-call="report.html_container">
				<t t-call="report_layout.gbs_internal_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="page-break-inside:auto">
                            <div class="row" style="padding-top:5px;">
                                <style type="text/css">
                                    .report-title { text-align:center; }
                                    .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                                </style>
                                <div class="clearfix">
                                    <h3 class="report-title">Event Completion Form</h3>
                                    <br/>
                                    <h4><strong>General Information:</strong></h4>
                                    <div class="row">
                                        <div class="col-xs-6 text-left">
                                            <h6><b>Program Ttle :  </b><span t-esc="o.event_id.name"/></h6>
                                            <h6><b>Program Type :  </b><span t-esc="o.event_type_id.name"/></h6>
                                            <h6><b>Activity Duration :  </b><span t-esc="o.activity_duration"/></h6>
                                            <h6><b>Total Participants :  </b><span t-esc="o.total_participants"/></h6>
                                            <h6><b>Total Male Participants :  </b><span t-esc="o.male_participants"/></h6>
                                            <h6><b>Total Female Participants :  </b><span t-esc="o.female_participants"/></h6>
                                        </div>
                                        <div class="col-xs-6 text-left">
                                            <h6><b>Start Date :  </b><span t-esc="o.start_date" t-options='{"widget": "date"}'/></h6>
                                            <h6><b>End date :  </b><span t-esc="o.end_date" t-options='{"widget": "date"}'/></h6>
                                            <h6><b>Theme :  </b><span t-esc="o.theme_id.name"/></h6>
                                            <h6><b>Key Audience :  </b><span t-esc="o.audience_id.name"/></h6>
                                            <h6><b>Age Group :  </b>
                                                <t t-if = "o.age_group == 'one'">Below 18</t>
                                                <t t-elif = "o.age_group == 'two'">18-35</t>
                                                <t t-if="o.age_group == 'three'">Over 18</t>
                                                <t t-else=""></t>
                                            </h6>
                                            <h6><b>Space Used :  </b><span t-esc="o.audience_id.name"/></h6>
                                        </div>
                                    </div>
                                    <br/>

                                    <h4><strong>Moderator of the event:</strong></h4>
                                    <div class="row">
                                        <div class="col-xs-6 text-left">
                                            <h6><b>Moderator Name :  </b><span t-esc="o.organizer_id.name"/></h6>
                                            <h6><b>Designation :  </b><span t-esc="o.designation"/></h6>
                                            <h6><b>Organization :  </b><span t-esc="o.company_id.name"/></h6>
                                        </div>
                                        <div class="col-xs-6 text-left">
                                            <h6><b>Contract Number :  </b><span t-esc="o.contract_number"/></h6>
                                            <h6><b>Email Address :  </b><span t-esc="o.work_email"/></h6>
                                        </div>
                                    </div>
                                    <br/>

                                    <h4><strong>Key US and non-US people associate with this activity:</strong></h4>
                                    <t t-if="o.event_associate_ids" >
                                        <table class="table table-report-xs table-bordered table-striped">
                                            <thead>
                                                <tr class="odo-bg-gray">
                                                    <th class="text-left">Name</th>
                                                    <th class="text-left">Designation</th>
                                                    <th class="text-left">Organization</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="o.event_associate_ids" t-as="pay">
                                                    <tr>
                                                        <td class="text-left"><span t-esc="pay.associate_id.name"/></td>
                                                        <td class="text-left"><span t-esc="pay.job_title"/></td>
                                                        <td class="text-left"><span t-esc="pay.organization_id.name"/></td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </t>
                                    <br/>

                                    <div class="row">
                                        <div class="col-xs-12 text-left">
                                            <h4><strong>One sentence summary about your company:</strong></h4>
                                            <p t-raw="o.event_summary"/>
                                        </div>
                                    </div>
                                    <br/>

                                    <div class="row">
                                        <div class="col-xs-12 text-left">
                                            <h4><strong>Did you collaborate with any non-USG organization to carry out this activity?</strong></h4>
                                            <h4>Answer: <span t-esc="o.non_usg"/></h4>
                                        </div>
                                    </div>
                                    <br/>

                                    <div class="row">
                                        <div class="col-xs-12 text-left">
                                            <h4><strong>If yes,please mention:</strong></h4>
                                            <p t-raw="o.comment"/>
                                        </div>
                                    </div>
                                    <br/>

                                    <div class="row">
                                        <div class="col-xs-12 text-left">
                                            <h4><strong>Summary of Event:(Please be specific; include highlights and all segments in the events)</strong></h4>
                                            <p t-raw="o.event_summary"/>
                                            <br/>
                                            <h4><strong>Please the URL of your organization's websites and social media accounts(if any):</strong></h4>
                                            <p t-raw="o.comment"/>
                                            <br/>
                                            <h4><strong>Please attach a copy/a set of copies of any printed material(if any) that you have distributed to the participants.</strong></h4>
                                            <t t-foreach="o.attachment_ids" t-as="att">
                                                <tr>
                                                    <td class="text-left"><t t-esc="att_index+1"/></td>
                                                    <td class="text-left"><span t-esc="att.name"/></td>
                                                </tr>
                                                <br/>
                                            </t>
                                            <br/>
                                            <h4><strong>Comments:</strong></h4>
                                            <p t-raw="o.comment"/>
                                        </div>
                                    </div>
                                    <br/>
                                    <br/>
                                    <p>_____________________________</p>
                                    <h6>Signature of the Moderator</h6>
                                </div>
                            </div>
                        </div>
                    </t>
				</t>
			</t>
		</template>
	</data>
</odoo>
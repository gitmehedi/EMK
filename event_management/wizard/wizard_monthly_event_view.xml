<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wizard_monthly_event_report_form_view" model="ir.ui.view">
            <field name="name">wizard.monthly.report</field>
            <field name="model">wizard.monthly.report</field>
            <field name="arch" type="xml">
                <form string="Monthly Event Report">
                    <group>
                        <group>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <footer>
                        <button name="process_report" type="object" context="{'pdf':'True'}" string="PDF"
                                class="oe_highlight"/>
                        <button name="process_report" type="object" context="{'xlsx':'True'}" string="XLSX"
                                class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_monthly_event_report_view" model="ir.actions.act_window">
            <field name="name">Monthly Event</field>
            <field name="type">ir.actions.act_window</field>
            <field name="src_model">event.event</field>
            <field name="res_model">wizard.monthly.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_monthly_event_report_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="monthly_event_report_form_view_menu" groups="event_user.group_event_officer"
                  parent="event.menu_reporting_events" sequence="10" action="action_monthly_event_report_view"/>


    </data>
</odoo>
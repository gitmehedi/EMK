<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Employee Exit Search Form Views -->
		<record id="wizard_monthly_report_form_view" model="ir.ui.view">
			<field name="name">wizard.monthly.report</field>
			<field name="model">wizard.monthly.report</field>
			<field name="arch" type="xml">
				<form string="Monthly Report">
					<sheet>
						<group>
							<group>
								<field name="start_date" required="1"/>
							</group>
							<group>
								<field name="end_date" required="1" t-field-options='{"format": "Y-MM-dd"}'/>
							</group>
						</group>
					</sheet>
					<footer>
						<button name="process_report" type="object"
							string="Submit" class="oe_highlight" />
						<button string="Cancel" special="cancel" class="oe_link" />
					</footer>
				</form>
			</field>
		</record>

		<!-- Employee Exit Search Action Views -->
		<record id="action_monthly_report_view" model="ir.actions.act_window">
			<field name="name">Monthly Report Wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="src_model">event.event</field>
			<field name="res_model">wizard.monthly.report</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_monthly_report_form_view" />
			<field name="target">new</field>
		</record>

		<!-- Post Dated Cheque Menu -->
		<menuitem id="monthly_report_form_view_menu" name="Monthly Event Report"
			parent="event.menu_reporting_events" sequence="10" action="action_monthly_report_view" />
	</data>
</odoo>
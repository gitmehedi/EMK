<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="event.event_main_menu" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(4, ref('event_user.group_event_organizer'))]"/>
        </record>
        <record id="event.menu_reporting_events" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(4, ref('event_user.group_event_organizer'))]"/>
        </record>
        <record id="event.menu_report_event_registration" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(4, ref('event_user.group_event_organizer'))]"/>
        </record>

        <menuitem id="menu_event_general" name="General" parent="event.event_main_menu"
                  groups="event_user.group_event_organizer,event.group_event_user"/>
        <menuitem name="Attendees"
            id="event.menu_action_registration" parent="event.event_main_menu"
            action="event.action_registration" groups="base.group_no_one,event_user.group_event_administration"/>

        <menuitem id="account.menu_finance_receivables" name="Sales" parent="account.menu_finance" sequence="2" groups="base.group_no_one"/>


        <record id="event.menu_event_event" model="ir.ui.menu">
            <field name="parent_id" eval="ref('menu_event_general')"/>
            <field name="sequence">10</field>
            <field name="groups_id"
                   eval="[(4, ref('event_user.group_event_organizer')),(4, ref('event_user.group_event_administration'))]"/>
        </record>

        <record id="event.menu_action_registration" model="ir.ui.menu">
            <field name="parent_id" eval="ref('menu_event_general')"/>
            <field name="sequence">20</field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!--<template id="assets_backend" name="hr_attendance_and_ot_summary assets" inherit_id="web.assets_backend">-->
			<!--<xpath expr="." position="inside">-->
				<!--<link rel="stylesheet" href="/hr_attendance_and_ot_summary/static/libs/jquery.scrollbar.css" type="text/css"/>-->
				<!--<link rel="stylesheet" href="/hr_attendance_and_ot_summary/static/src/css/scrollbar.css" type="text/css"/>-->
				<!--<script type="text/javascript" src="/hr_attendance_and_ot_summary/static/libs/jquery.scrollbar.js"></script>-->
				<!--<script type="text/javascript" src="/hr_attendance_and_ot_summary/static/src/js/scrollbar.js"></script>-->
			<!--</xpath>-->
		<!--</template>-->
		<!-- Tree View -->
		<record id="attendance_ot_summary_tree" model="ir.ui.view">
			<field name="name">hr.attendance.summary.tree</field>
			<field name="model">hr.attendance.summary</field>
			<field name="arch" type="xml">
				<tree string="Attendance and Over Time Summary">
					<field name="name"/>
					<field name="period"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<!-- Form View -->
		<record id="attendance_ot_summary_form" model="ir.ui.view">
			<field name="name">hr.attendance.summary.form</field>
			<field name="model">hr.attendance.summary</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Attendance and Over Time Summary" delete="false" create="0">
					<style>
						.o-form_attendance_summary {
							max-width: 100% !important;
							padding-top: 0px !important;
						}

						.o-form_attendance_summary .o_list_view thead,
						.o-form_attendance_summary .o_list_view thead th {
							white-space: nowrap;
							position: -webkit-sticky;
							position: sticky;
							top: 0;
						}

						.o-form_attendance_summary .o_list_view thead th {
							background: #ededed;
							border-left: 1px solid #dfdfdf;
							border-bottom: 2px solid #ddd;
						}

						.o-form_attendance_summary .o_list_view tbody td {
							white-space: nowrap;
						}
						.o-form_attendance_summary .o_list_editable {
							max-height: calc(100vh - 255px);
							overflow: auto;
							border: 1px solid #ddd;
						}
						.o-form_attendance_summary .table-responsive {
							overflow: initial;
						}


					</style>
					<header>
						<button name="%(hr_attendance_and_ot_summary.attendance_summary_wizard_action_view)d"
							type="action" string="Generated" states="draft" context="{'operating_unit_id': operating_unit_id}"/>
						<button name="%(hr_attendance_and_ot_summary.attendance_summary_wizard_action_view)d" context="{'operating_unit_id': operating_unit_id}"
							 type="action" string="Re Generate" states="confirmed"/>
  						<button name="action_draft" type="object" string="Set to Draft" states="confirmed,approved"/>
                        <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                        <button name="action_done" type="object" string="Approve" states="confirmed" class="oe_highlight"/>
						<field name="state" widget="statusbar"/>
					</header>
					<sheet class="o-form_attendance_summary">
						<group col="2">
							<group>
								<field name="name" />
								<field name="period"/>
							</group>
							<group>
								<field name="company_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
								<field name="operating_unit_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}' />
							</group>
						</group>
						<field name="att_summary_lines" attrs="{'readonly':[('state','=','approved')]}">
							<tree string="List" editable="top" colors="red:is_entered_rostering == 0">
								<field name="is_entered_rostering" invisible="1"/>
								<field name="employee_id" readonly='1'/>
								<field name="state" invisible='1'/>
								<field name="department_id" readonly='1'/>
								<field name="salary_days" string="Sal. Days" readonly='1'/>
								<field name="present_days" string="Pr. Days" readonly='1'/>
								<field name="weekend_days_count" readonly='1'/>

								<field name="absent_days_count" string="Abs. Days" invisible='1'/>
								<field name="absent_count" string="Abs. Days" readonly='1'/>
								<field name="absent_deduction_days" string="Abs. Ded. Days" groups="hr.group_hr_manager"/>
								<field name="late_days_count" readonly='1'/>
								<field name="holidays_days" readonly='1'/>
								<field name="leave_days" readonly='1'/>
								<field name="unpaid_holidays" string="Unp. Holidays" readonly='1'/>
								<field name="deduction_days" string="Lt. Ded. Days" groups="hr.group_hr_manager"/>
								<field name="nis_days" string="NIS Days" readonly='1'/>
								<field name="late_hrs" readonly='1' widget="float_time"/>
								<field name="schedule_ot_hrs" readonly='1' widget="float_time"/>
								<field name="cal_ot_hrs" readonly='1' widget="float_time"/>
								<field name="extra_ot" readonly='1' widget="float_time"/>
								<button name="action_regenerate" string="Action" type="object" icon="fa-cogs" attrs="{'invisible':[('state','=','approved')]}"/>
							</tree>
						</field>
					</sheet>

					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>

				</form>
			</field>
		</record>

		<record id="hr_attendance_ot_summary_action" model="ir.actions.act_window">
			<field name="name">Attendance Summary</field>
			<field name="res_model">hr.attendance.summary</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_hr_attendance_ot_summary" name="Attendance Summary" parent="hr_attendance.menu_hr_attendance_manage_attendances"
					groups="hr.group_hr_user" action="hr_attendance_ot_summary_action" />

		<!-- Detail View -->
		<record id="view_attendance_summary_line_details_form" model="ir.ui.view">
            <field name="name">hr.attendance.summary.line.form</field>
            <field name="model">hr.attendance.summary.line</field>
            <field name="arch" type="xml">
                <form string="Absent">
                    <sheet>
                        <notebook>
                            <page string="Absent Days">
								<field name="absent_days">
									<tree editable="top">
										<field name="date" />
										<field name="schedule_time_start"/>
										<field name="schedule_time_end" />
										<field name="ot_time_start" />
										<field name="ot_time_end" />
										<field name="schedule_working_hours" widget="float_time"/>
										<field name="working_hours" widget="float_time"/>
									</tree>
								</field>
	                        </page>
                            <page string="Late Days">
								<field name="late_days">
									<tree editable="top">
										<field name="date" />
										<field name="schedule_time_start"/>
										<field name="schedule_time_end" />
										<field name="ot_time_start" />
										<field name="ot_time_end" />
										<field name="schedule_working_hours" widget="float_time"/>
										<field name="working_hours" widget="float_time"/>
									</tree>
								</field>
	                        </page>
                            <page string="Weekend">
								<field name="weekend_days">
									<tree editable="top">
										<field name="date" />
									</tree>
								</field>
	                        </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

		<record id="view_attendance_absent_time_form" model="ir.ui.view">
            <field name="name">hr.attendance.absent.day.form</field>
            <field name="model">hr.attendance.absent.day</field>
            <field name="arch" type="xml">
                <form string="Time">
                    <sheet string="Day Time">
						<field name="attendance_day_list">
							<tree editable="top">
								<field name="check_in"/>
								<field name="check_out"/>
								<field name="duration" widget="float_time"/>
							</tree>
						</field>
					</sheet>
                </form>
            </field>
        </record>

		<record id="view_attendance_late_time_form" model="ir.ui.view">
            <field name="name">hr.attendance.late.day.form</field>
            <field name="model">hr.attendance.late.day</field>
            <field name="arch" type="xml">
                <form string="Time">
                    <sheet string="Day Time">
						<field name="attendance_day_list">
							<tree editable="top">
								<field name="check_in"/>
								<field name="check_out"/>
								<field name="duration" widget="float_time"/>
							</tree>
						</field>
					</sheet>
                </form>
            </field>
        </record>
					
	</data>
</openerp>

<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- Tree View -->
		<record id="attendance_ot_summary_tree" model="ir.ui.view">
			<field name="name">hr.attendance.summary.tree</field>
			<field name="model">hr.attendance.summary</field>
			<field name="arch" type="xml">
				<tree string="Attendance and Over Time Summary">
					<field name="name"/>
					<field name="period"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		<!-- Form View -->
		<record id="attendance_ot_summary_form" model="ir.ui.view">
			<field name="name">hr.attendance.summary.form</field>
			<field name="model">hr.attendance.summary</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Attendance and Over Time Summary">
					<header>
						<button name="hr_attendance_and_ot_summary.hr_attendance_ot_summary_wizard_action_view"
							type="action" string="Generate" states="draft"/>
						<button name="hr_attendance_and_ot_summary.hr_attendance_ot_summary_wizard_action_view"
							 type="action" string="Re Generate" states="generated"/>
						
						<button name="get_summary_data" type="object" string="Get Summary" />
  						<button name="action_draft" type="object" string="Reject" states="confirmed,approved"/>
  						<button name="action_generated" type="object" string="Generated" states="draft" class="oe_highlight"/>
                        <button name="action_confirm" type="object" string="Confirm" states="generated" class="oe_highlight"/>
                        <button name="action_done" type="object" string="Approve" states="confirmed" class="oe_highlight"/>                                 <field name="state" widget="statusbar"/>			
					</header>
					<sheet>
						<group>
							<field name="name" />
							<field name="period"/>
						</group>
						<notebook colspan="4"> 
							<page string="Attendance and OT Summary">
								<field name="att_summary_lines">
									<tree string="List" editable="bottom">
										<field name="employee_id" readonly='1'/>
										<!--<field name="department_id" />-->
										<field name="salary_days" />
										<!--<field name="attendance_summary" />-->
										<!--<field name="over_time_history" />-->
										<!--<field name="over_time_summary" />-->
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
					
				</form>
			</field>
		</record>
	
		<record id="hr_attendance_ot_summary_action" model="ir.actions.act_window">
			<field name="name">Attendance Summary</field>
			<field name="res_model">hr.attendance.summary</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_hr_attendance_ot_summary" name="Attendance Summary" parent="hr_attendance.menu_hr_attendance_manage_attendances"
					action="hr_attendance_ot_summary_action" />
					
					
					
	</data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_report_gbs_internal" name="report assets" inherit_id="web.layout">
        <xpath expr="//head" position="inside">
            <link href="/custom_report/static/src/css/report.css" rel="stylesheet"/>
        </xpath>
    </template>

    <template id="gbs_custom_pad_report_template">
        <t t-if="not o and doc">
        <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>

        <t t-call="custom_report.gbs_layout_header" />
        <t t-raw="0" />
        <t t-call="custom_report.gbs_layout_footer" />
    </template>

    <template id="gbs_layout_header">
        <div class="header">
            <div class="header-content">
                <div class="company-logo">
                    <img class="com-logo-img" t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" />
                </div>
            </div>
            <div class="pull-right">
                <ul style="list-style:none;">
                    <t t-set="company" t-value="company.sudo()"/>
                    <li t-if="company.website">Website:
                        <span t-field="company.website"/>
                    </li>
                    <li t-if="company.phone">Phone:
                        <span t-field="company.phone"/>
                    </li>
                    <li t-if="company.fax and company.phone">&amp;bull;</li>
                    <li t-if="company.email">Email:
                        <span t-field="company.email"/>
                    </li>
                </ul>
            </div>
        </div>
    </template>



    <template id="gbs_layout_footer">
        <div class="footer">
            <div class="text-left" style="font-size: 15px; color: ash;">
                <div class="row">
                    <div class="company-info">
                         <span t-field="company.partner_id" t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' style="width: 100%; display: inline-block;"/>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>

<?xml version="1.0"?>
<odoo>
    <record id="view_account_asset_category_wizard" model="ir.ui.view">
        <field name="name">account.asset.category.wizard</field>
        <field name="model">account.asset.category.wizard</field>
        <field name="arch" type="xml">
            <form string="Proposed">
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="status"/>
                    </group>
                </group>
                <group string="Journal Entries">
                    <group>
                        <field name="journal_id"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="account_asset_id"
                               domain="[('internal_type','!=','view')]"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="asset_suspense_account_id"
                               domain="[('internal_type','!=','view')]"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="account_depreciation_expense_id"
                               domain="[('internal_type','!=','view')]"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                    </group>
                    <group>
                        <field name="account_depreciation_id"
                               domain="[('internal_type','!=','view')]"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="account_asset_loss_id"
                               domain="[('internal_type','!=','view')]"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="account_asset_gain_id"
                               domain="[('internal_type','!=','view')]"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="asset_sale_suspense_account_id"
                               domain="[('internal_type','!=','view')]"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                    </group>
                </group>
                <group>
                    <group string="Depreciation Method">
                        <field name="method" widget="radio"/>
                        <field name="method_progress_factor"
                               attrs="{'invisible':[('method','=','linear')], 'required':[('method','=','degressive')]}"/>
                        <field name="method_number" string="Asset Life (In Year)"
                               attrs="{'invisible':[('method','=','degressive')], 'required':[('method','=','linear')]}"/>
                    </group>
                    <group string="No Depreciation">
                        <field name="no_depreciation"/>
                    </group>
                </group>
                <footer>
                    <button name="act_change_name" string="Change Request" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_asset_category_wizard" model="ir.actions.act_window">
        <field name="name">Request for Change</field>
        <field name="res_model">account.asset.category.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_asset_category_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
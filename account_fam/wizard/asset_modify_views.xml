<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherit_asset_modify_form">
        <field name="model">asset.modify</field>
        <field name="inherit_id" ref="account_asset.asset_modify_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Modify Assets">
                    <group>
                        <group>
                            <field name="asset_method_time" invisible="1"/>
                            <field name="method"/>
                            <field name="method_progress_factor" attrs="{'invisible': [('method', '=', 'linear')]}"/>
                            <field name="depreciation_year"/>
                            <field name="adjusted_depr_amount"/>
                            <field name="method_number" invisible="1" attrs="{'invisible': [('asset_method_time', '=', 'end')]}"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="method_end" attrs="{'invisible': [('asset_method_time', '=', 'number')]}"/>
                            <field name="method_period" invisible="True"/>months
                        </group>
                    </group>
                    <footer>
                        <button name="modify" string="Change Method" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </xpath>
        </field>
    </record>
</odoo>

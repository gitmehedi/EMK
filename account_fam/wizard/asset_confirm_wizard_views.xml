<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="asset_confirm_wizard_form">
        <field name="name">asset.confirm.wiazrd</field>
        <field name="model">asset.confirm.wiazrd</field>
        <field name="arch" type="xml">
            <form string="Asset Confirm">
                <group>
                    <h2>Selected assets set to confirm</h2>
                </group>
                <footer>
                    <button name="confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_asset" model="ir.actions.act_window">
        <field name="name">Assets Confirm</field>
        <field name="res_model">asset.confirm.wiazrd</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="asset_confirm_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>

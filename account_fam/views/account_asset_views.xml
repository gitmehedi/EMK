<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_account_asset_asset_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='category_id']" position="replace">
                <field name="category_id"
                       domain="[('type', '=', 'purchase'),('parent_type_id', '=',False)]"
                       context="{'default_type': 'purchase'}"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                <field name="asset_type_id"
                       domain="[('type', '=', 'purchase'),('parent_type_id', '!=',False)]"
                       context="{'default_type': 'purchase'}"
                       attrs="{'required': [('category_id','!=',False)]}"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='value']" position="before">
                <field name="operating_unit_id"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='date']" position="after">
                <field name="receive_date"/>
                <field name="asset_usage_date"/>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='invoice_id']" position="after">
                <field name="invoice_date"/>
            </xpath>
            <xpath expr="//field[@name='method_number']" position="before">
                <field name="depreciation_year"/>
            </xpath>
            <xpath expr="//field[@name='method_period']" position="replace">
                <field name="method_period" invisible="True"/>
            </xpath>
        </field>
    </record>
</odoo>

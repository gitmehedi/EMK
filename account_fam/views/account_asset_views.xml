<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_account_asset_asset_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='set_to_close']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='category_id']" position="replace">
                <field name="name"/>
                <field name="category_id"
                       domain="[('type', '=', 'purchase'),('parent_type_id', '=',False)]"
                       context="{'default_type': 'purchase'}"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                <field name="asset_type_id"
                       domain="[('type', '=', 'purchase'),('parent_type_id', '!=',False)]"
                       context="{'default_type': 'purchase'}"
                       attrs="{'required': [('category_id','!=',False)]}"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                <field name="batch_no"/>
                <field name="allocation_status" invisible="True"/>
            </xpath>
            <xpath expr="//form/header/button[5]" position="after">
                <button name="%(action_asset_allocation_wizard)d" string="Allocation"
                        type="action" context="{'allocation':'True'}"
                        attrs="{'invisible': ['|',('allocation_status','=', True),('state','!=', 'open')]}"/>
                <button name="%(action_asset_allocation_wizard)d" string="Transfer"
                        type="action" context="{'transfer':'True'}"
                        attrs="{'invisible': ['|',('allocation_status','=', False),('state','!=', 'open')]}"/>
            </xpath>
            <xpath expr="//form/sheet/div[2]" position="replace">
                <div class="oe_title">
                    <h1>
                        <field name="asset_seq"/>
                    </h1>
                </div>

            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='value']" position="before">
                <field name="operating_unit_id"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_id']" position="attributes">
                <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='date']" position="after">
                <field name="receive_date"/>
                <field name="asset_usage_date"/>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='invoice_id']" position="after">
                <field name="invoice_date"/>
            </xpath>
            <xpath expr="//field[@name='method_number']" position="before">
                <field name="depreciation_year"/>
            </xpath>
            <xpath expr="//field[@name='method_number']" position="replace">
                <field name="method_number" invisible="True"/>
            </xpath>
            <xpath expr="//field[@name='prorata']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Allocation History">
                    <field name="asset_allocation_ids" string="Allocation History">
                        <tree string="Allocation History" decoration-success="state=='active'"
                              decoration-bf="state=='active'"
                              decoration-muted="state=='inactive'" delete="0" create="0">
                            <field name="operating_unit_id"/>
                            <field name="receive_date"/>
                            <field name="transfer_date"/>
                            <field name="move_id"/>
                            <field name="state"/>
                        </tree>
                        <form string="Allocation History" create="0" edit="0">
                            <header>
                                <field name="state" widget="statusbar"/>
                            </header>
                            <group>
                                <group>
                                    <field name="operating_unit_id"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="move_id"/>
                                </group>
                                <group>
                                    <field name="transfer_date"/>
                                    <field name="receive_date"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="inherit_view_account_asset_search" model="ir.ui.view">
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="asset_type_id"/>
                <field name="asset_seq"/>
                <field name="batch_no"/>
            </xpath>
        </field>
    </record>
</odoo>

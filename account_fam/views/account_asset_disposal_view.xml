<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_asset_disposal_form">
        <field name="name">account.asset.disposal.form</field>
        <field name="model">account.asset.disposal</field>
        <field name="arch" type="xml">
            <form string="Assets Written-Off" duplicate="0">
                <header>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            states="draft" groups="account.group_account_manager"/>
                    <button name="action_dispose" string="Confirm" type="object" class="oe_highlight"
                            context="{'dispose':True}" states="approve"/>
                    <button name="%(action_asset_dispose_wizard)d" states="draft"
                            type="action" string="Add Assets"/>
                    <field name="state" widget="statusbar" statusbar_visible="approve,dispose"/>
                </header>
                <sheet>
                    <div class="pull-left">
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="branch_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="narration"/>
                            <field name="narration_gl"/>
                            <field name="note"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="total_value" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="total_depr_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="approve_date" states="approve,dispose"/>
                            <field name="dispose_date" states="dispose"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Assets">
                            <field name="line_ids" string="Dispose Assets">
                                <tree string="Tree Views" editable="bottom" create="0">
                                    <field name="asset_id" readonly="1"
                                           domain="[('state','=','open'),('asset_status','=','active'),('depreciation_flag','=',True),('current_branch_id','=',parent.branch_id)]"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="cost_value"/>
                                    <field name="asset_value" readonly="1"/>
                                    <field name="depreciation_value"/>
                                    <field name="move_id" class="oe_link" readonly="True"/>
                                </tree>
                                <form string="Form Views">
                                    <group>
                                        <group>
                                            <field name="asset_id"/>
                                            <field name="move_id" readonly="True"/>
                                        </group>
                                        <group>
                                            <field name="cost_value"/>
                                            <field name="asset_value"/>
                                            <field name="depreciation_value"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_disposal_tree">
        <field name="name">account.asset.disposal.tree</field>
        <field name="model">account.asset.disposal</field>
        <field name="arch" type="xml">
            <tree string="Assets Written-Off" decoration-info="state=='draft'" decoration-success="state=='approve'"
                  decoration-bf="state in ('approve','dispose')"
                  decoration-muted="state=='dispose'" duplicate="0">
                <field name="name"/>
                <field name="branch_id"/>
                <field name="total_value"/>
                <field name="total_depr_amount"/>
                <field name="request_date"/>
                <field name="approve_date"/>
                <field name="dispose_date"/>
                <field name="approve_user_id"/>
                <field name="dispose_user_id"/>
                <field name="state" widget="statusbar"/>
            </tree>
        </field>
    </record>

    <record id="view_account_asset_disposal_search" model="ir.ui.view">
        <field name="name">account.asset.disposal.search</field>
        <field name="model">account.asset.disposal</field>
        <field name="arch" type="xml">
            <search string="Fixed Assets Account Disposal">
                <field name="name" string="Asset"/>
                <field name="state" string="State"/>
                <group expand="0" string="Group By...">
                    <filter string="Current" name="state" domain="[('state','in', ('draft','approve'))]"/>
                    <filter string="Disposed" domain="[('state','=', 'dispose')]"/>
                </group>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_account_asset_disposal">
        <field name="name">Fixed Assets Written-Off</field>
        <field name="res_model">account.asset.disposal</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_state":1}</field>
        <field name="search_view_id" ref="view_account_asset_disposal_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new Fixed Assets Written-Off.
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="action_account_asset_disposal_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_asset_disposal_tree"/>
        <field name="act_window_id" ref="action_account_asset_disposal"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_account_asset_disposal_form">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_asset_disposal_form"/>
        <field name="act_window_id" ref="action_account_asset_disposal"/>
    </record>

    <menuitem parent="sub_assets_menu" id="menu_action_account_asset_disposal"
              action="action_account_asset_disposal" sequence="10"/>

</odoo>

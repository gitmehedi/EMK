<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherited_account_asset_category_form">
        <field name="model">account.asset.category</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Account Asset Category" edit="0" duplicate="0">
                    <header>
                        <button name="act_approve" string="Approve" type="object" states="draft" class="oe_highlight"
                                groups="mtbl_access.group_mtbl_sys_admin"/>
                        <button name="act_reject" string="Reject" type="object" states="draft"
                                groups="mtbl_access.group_mtbl_sys_admin"/>
                        <button name="%(action_account_asset_category_wizard)d" string="Edit" type="action"
                                class="oe_highlight" groups="mtbl_access.group_mtbl_sys_admin"
                                attrs="{'invisible':['|',('state','in',('draft','reject')),('pending','=', True)]}"/>
                        <button name="act_approve_pending" string="Approve" type="object" class="oe_highlight"
                                groups="mtbl_access.group_mtbl_sys_admin"
                                attrs="{'invisible':['|',('state','in',('draft','reject')),('pending','=', False)]}"/>
                        <button name="act_reject_pending" string="Reject" type="object"
                                groups="mtbl_access.group_mtbl_sys_admin"
                                attrs="{'invisible':['|',('state','in',('draft','reject')),('pending','=', False)]}"/>
                        <button name="act_draft" string="Set to Draft" type="object" states="reject"
                                groups="mtbl_access.group_mtbl_sys_admin"/>
                        <field name="state" widget="statusbar" invisible="True"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="code" readonly='True'/>
                            </h1>
                            <label for="name" string="Asset Type" class="oe_edit_only"
                                   attrs="{'invisible': [('type','!=','purchase')]}"/>
                            <label for="name" string="Deferred Revenue Type" class="oe_edit_only"
                                   attrs="{'invisible': [('type','==','purchase')]}"/>
                            <h1>
                                <field name="name" placeholder="e.g. Lenovo"/>
                            </h1>
                        </div>
                        <div>
                            <field name="pending" invisible="1"/>
                            <field name="is_custom_depr" invisible="1"/>
                            <field name="type" invisible="1"/>
                            <field name="company_id" options="{'no_create': True}"
                                   groups="base.group_multi_company"/>
                        </div>
                        <group string="Journal Entries">
                            <group>
                                <field name="journal_id"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="account_asset_id" attrs="{'invisible': [('type','=', False)]}"
                                       domain="[('company_id', '=', company_id)]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="asset_suspense_account_id" domain="[('company_id', '=', company_id)]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="account_depreciation_expense_id" domain="[('company_id', '=', company_id)]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            </group>
                            <group>
                                <field name="account_depreciation_id" domain="[('company_id', '=', company_id)]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="account_asset_loss_id" domain="[('company_id', '=', company_id)]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="account_asset_gain_id" domain="[('company_id', '=', company_id)]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="asset_sale_suspense_account_id" domain="[('company_id', '=', company_id)]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            </group>
                        </group>
                        <group>
                            <group string="Periodicity">
                                <field name="method_time" string="Time Method Based On" widget="radio"
                                       attrs="{'invisible': ['|',('type','!=','purchase'),('is_custom_depr','=',True)]}"/>
                                <label for="depreciation_year" string="Asset Life (In Year)"/>
                                <div>
                                    <field name="depreciation_year" nolabel="1" class="oe_inline"
                                           attrs="{'invisible':['|',('method_time','!=','number'),'&amp;',('type','=', False)], 'required':[('method_time','=','number')]}"/>
                                </div>
                                <field name="method_number" string="Number of Entries" invisible="1"
                                       attrs="{'invisible':['|',('method_time','!=','number'),'&amp;',('type','=', False)]}"/>
                                <label for="method_period"/>
                                <div>
                                    <field name="method_period" nolabel="1" attrs="{'invisible': [('type','=', False)]}"
                                           class="oe_inline"/>
                                </div>
                                <field name="method_end"
                                       attrs="{'required': [('method_time','=','end')], 'invisible':[('method_time','!=','end')]}"/>
                            </group>
                            <group string="Additional Options" attrs="{'invisible': [('is_custom_depr','=',True)]}">
                                <field name="open_asset"/>
                                <field name="group_entries"/>
                            </group>
                            <group attrs="{'invisible': [('type','=','sale')]}" string="Depreciation Method">
                                <field name="method" widget="radio"/>
                                <field name="method_progress_factor"
                                       attrs="{'invisible':[('method','=','linear')], 'required':[('method','=','degressive')]}"/>
                                <field name="prorata"
                                       attrs="{'invisible': ['|',('method_time','=','end'),('is_custom_depr','=',True)]}"/>
                            </group>
                        </group>
                        <field name="line_ids" attrs="{'invisible':[('line_ids','=',[])]}">
                            <tree decoration-info="state=='pending'" decoration-success="state=='approve'"
                                  decoration-bf="state in ('pending',)"
                                  decoration-danger="state=='reject'">
                                <field name="change_name"/>
                                <field name="request_date"/>
                                <field name="change_date"/>
                                <field name="status"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="account_asset.view_account_asset_category_tree">
        <field name="name">account.asset.category.tree</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <tree string="Account Asset Category" decoration-info="state=='draft'"
                  decoration-success="state=='approve'"
                  decoration-danger="state=='reject'"
                  decoration-bf="state in ('approve',)">
                <field name="name"/>
                <field name="code"/>
                <field name="journal_id"/>
                <field name="method"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" string="Status"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="inherited_account_asset_category_search">
        <field name="model">account.asset.category</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_category_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="replace">
                <search string="Search Asset Category">
                    <field name="name" string="Category"/>
                    <field name="journal_id"/>
                    <group expand='0' string="Group By">
                        <filter string="Pending" name="pending" icon="terp-personal"
                                domain="[('state','in',('draft','approve')),('pending','=',1),'|',('active','=',0),('active','=',1)]"/>
                        <filter string="Rejected" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','reject')]"/>
                        <filter string="In-Active" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','approve')]"/>
                    </group>
                </search>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="account_asset.action_account_asset_asset_list_normal_purchase">
        <field name="context">
            {"search_default_active":'False',"search_default_pending":'True','default_type':
            'purchase'}
        </field>
    </record>
</odoo>

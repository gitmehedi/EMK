<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherited_account_asset_category_form">
        <field name="model">account.asset.category</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group/group[4]" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="after">
                <div>
                    <label for="asset_suspense_account_id" attrs="{'invisible': [('type','!=','purchase')]}"/>
                    <label for="asset_suspense_account_id" string="Asset Suspense Account"
                           attrs="{'invisible': [('type','!=','sale')]}"/>
                </div>
                <field name="asset_suspense_account_id" nolabel="1" domain="[('company_id', '=', company_id)]"
                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
            </xpath>
            <xpath expr="//field[@name='account_asset_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='account_depreciation_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='account_depreciation_expense_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_create_edit':True,'no_open':True}</attribute>
            </xpath>

            <xpath expr="//field[@name='method_number']" position="before">
                <field name="is_custom_depr" invisible="True"/>
                <label for="depreciation_year" string="Asset Life (In Year)"/>
                <div>
                    <field name="depreciation_year" nolabel="1" class="oe_inline"
                           attrs="{'invisible':['|',('method_time','!=','number'),'&amp;',('type','=', False)], 'required':[('method_time','=','number')]}"/>
                    years
                </div>
            </xpath>
            <xpath expr="//field[@name='prorata']" position="replace">
                <field name="prorata"
                       attrs="{'invisible': ['|',('method_time','=','end'),('is_custom_depr','=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='method_time']" position="replace">
                <field name="method_time" string="Time Method Based On" widget="radio"
                       attrs="{'invisible': ['|',('type','!=','purchase'),('is_custom_depr','=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='method_number']" position="replace">
                <field name="method_number" string="Number of Entries" invisible="True"
                       attrs="{'invisible':[('is_custom_depr','=',True),'|',('method_time','!=','number'),'&amp;',('type','=', False)], 'required':[('method_time','=','number')]}"/>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_asset_sell_form">
        <field name="name">account.asset.sell.form</field>
        <field name="model">account.asset.sell</field>
        <field name="arch" type="xml">
            <form string="Asset Sell">
                <header>
                    <button name="%(action_asset_sell_wizard)d" string="Asset To Sell" type="action" class="oe_highlight"
                            states="draft"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            states="draft"/>
                    <button name="action_sell" string="Sell" type="object" class="oe_highlight"
                            context="{'sell':True}" states="approve"/>
                    <field name="state" widget="statusbar" statusbar_visible="approve,sold"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" states="approve,sold"/>
                            <field name="total_value"/>
                            <field name="total_sell_amount"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="approve_date" states="approve,sold"/>
                            <field name="sell_date" states="sell"/>
                            <field name="request_user_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="approve_user_id" states="approve,sell"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="sell_user_id" states="sell"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Assets">
                            <field name="line_ids">
                                <tree string="Tree Views" editable="bottom">
                                    <field name="asset_id"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="asset_value"/>
                                    <field name="depreciation_value"/>
                                    <field name="sell_value"/>
                                    <field name="journal_entry"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_sell_tree">
        <field name="name">account.asset.sell.tree</field>
        <field name="model">account.asset.sell</field>
        <field name="arch" type="xml">
            <tree string="Asset Sell">
                <field name="name"/>
                <field name="total_value"/>
                <field name="total_sell_amount"/>
                <field name="request_date"/>
                <field name="approve_date"/>
                <field name="sell_date"/>
                <field name="request_user_id"/>
                <field name="approve_user_id"/>
                <field name="sell_user_id"/>
                <field name="state" widget="statusbar"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_account_asset_sell">
        <field name="name">Asset Sell</field>
        <field name="res_model">account.asset.sell</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_account_asset_sell_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_asset_sell_tree"/>
        <field name="act_window_id" ref="action_account_asset_sell"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_account_asset_sell_form">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_asset_sell_form"/>
        <field name="act_window_id" ref="action_account_asset_sell"/>
    </record>

    <menuitem parent="sub_assets_menu" id="menu_action_account_asset_sell"
              action="action_account_asset_sell" sequence="10"/>

</odoo>

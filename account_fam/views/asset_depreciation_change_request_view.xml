<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="asset_depreciation_change_request_form" model="ir.ui.view">
        <field name="name">asset.depreciation.change.request.form</field>
        <field name="model">asset.depreciation.change.request</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Asset Depreciation Change Request">
                <header>
                    <button string="Confirm" name="action_confirm" states="draft"
                            type="object" class="oe_highlight"
                            confirm="Are you sure, you want to confirm?"/>
                    <button string="Approve" name="action_approve" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'confirm')]}"
                            confirm="Are you sure, you want to approve?"/>
                    <button string="Cancel" name="action_cancel" states="confirm" type="object"
                            confirm="Are you sure you want to Cancel this?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                </header>
                <sheet>
                    <div class="pull-left">
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="asset_cat_id"
                                   options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                            <field name="asset_life"/>
                        </group>
                        <group>
                            <field name="method" widget="radio"/>
                            <field name="narration"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="asset_depreciation_change_request_tree" model="ir.ui.view">
        <field name="name">asset.depreciation.change.request.tree</field>
        <field name="model">asset.depreciation.change.request</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Asset Depreciation Change Request" decoration-success="state=='confirm'"
                  decoration-muted="state=='approve'"
                  decoration-bf="state in ('draft','confirm')" duplicate="0">
                <field name="name"/>
                <field name="asset_cat_id"/>
                <field name="asset_life"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="asset_depreciation_change_request_search" model="ir.ui.view">
        <field name="name">asset.depreciation.change.request.filter</field>
        <field name="model">asset.depreciation.change.request</field>
        <field name="arch" type="xml">
            <search string="Search Asset Depreciation Change Request">
                <filter name="draft_sd" string="Pending" domain="[('state','=','confirm')]"/>
                <separator/>
                <filter name="confirm_sd" string="Confirmed" domain="[('state','=','confirm')]"/>
                <separator/>
                <filter name="approved_sd" string="Approved" domain="[('state','=','approve')]"/>
            </search>
        </field>
    </record>

    <record id="action_asset_depreciation_change_request" model="ir.actions.act_window">
        <field name="name">Depreciation Change Request</field>
        <field name="res_model">asset.depreciation.change.request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="asset_depreciation_change_request_search"/>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_asset_depreciation_change_request"
              parent="account_fam.menu_action_account_asset_operation"
              action="action_asset_depreciation_change_request" sequence="60"/>
</odoo>
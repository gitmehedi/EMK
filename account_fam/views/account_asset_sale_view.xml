<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_asset_sale_form">
        <field name="name">account.asset.sale.form</field>
        <field name="model">account.asset.sale</field>
        <field name="arch" type="xml">
            <form string="Asset Sale">
                <header>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            states="draft"/>
                    <button name="action_sale" string="Sell" type="object" class="oe_highlight"
                            context="{'sale':True,'sale_id':name}" states="approve"/>
                    <field name="state" widget="statusbar" statusbar_visible="approve,sale"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" states="approve,sale"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total_value" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="total_sale_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="approve_date" states="approve,sale"/>
                            <field name="sale_date" states="sale"/>
                            <field name="request_user_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="approve_user_id" states="approve,sale"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="sale_user_id" states="sale"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Assets">
                            <field name="line_ids">
                                <tree string="Tree Views" editable="bottom">
                                    <field name="asset_id" domain="[('state','=','open')]"
                                           options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="asset_value"/>
                                    <field name="depreciation_value"/>
                                    <field name="sale_value"/>
                                    <field name="move_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_sale_tree">
        <field name="name">account.asset.sale.tree</field>
        <field name="model">account.asset.sale</field>
        <field name="arch" type="xml">
            <tree string="Asset Sale" decoration-info="state=='draft'" decoration-success="state=='approve'"
                  decoration-bf="state in ('approve','sale')"
                  decoration-muted="state=='sale'">
                <field name="name"/>
                <field name="total_value"/>
                <field name="total_sale_amount"/>
                <field name="request_date"/>
                <field name="approve_date"/>
                <field name="sale_date"/>
                <field name="request_user_id"/>
                <field name="approve_user_id"/>
                <field name="sale_user_id"/>
                <field name="state" widget="statusbar"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_account_asset_sale">
        <field name="name">Asset Sale</field>
        <field name="res_model">account.asset.sale</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_account_asset_sale_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_asset_sale_tree"/>
        <field name="act_window_id" ref="action_account_asset_sale"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_account_asset_sale_form">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_asset_sale_form"/>
        <field name="act_window_id" ref="action_account_asset_sale"/>
    </record>

    <menuitem parent="sub_assets_menu" id="menu_action_account_asset_sale"
              action="action_account_asset_sale" sequence="10"/>

</odoo>

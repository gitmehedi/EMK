<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_asset_depreciation_history_form">
        <field name="name">account.asset.depreciation.history.form</field>
        <field name="model">account.asset.depreciation.history</field>
        <field name="arch" type="xml">
            <form string="Depreciation History" edit="0" create="0" delete="0" duplicate="0">
                <header>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            states="draft" groups="account_fam.grp_fixasset_manager,account_fam.grp_fam_system_settings,account.group_account_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="total_amount"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="approve_date" states="approve,sale"/>
                            <field name="request_user_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="approve_user_id" states="approve,sale"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                    <field name="line_ids">
                        <tree>
                            <field name="journal_id"/>
                            <field name="amount"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="journal_id"/>
                                    <field name="amount"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_depreciation_history_tree">
        <field name="name">account.asset.depreciation.history.tree</field>
        <field name="model">account.asset.depreciation.history</field>
        <field name="arch" type="xml">
            <tree string="Depreciation History" decoration-success="state=='draft'" decoration-muted="state=='approve'"
                  decoration-bf="state in ('draft')" edit="0" create="0" delete="0" duplicate="0">
                <field name="date"/>
                <field name="total_amount"/>
                <field name="request_date"/>
                <field name="approve_date"/>
                <field name="request_user_id"/>
                <field name="approve_user_id"/>
                <field name="state" widget="statusbar"/>
            </tree>
        </field>
    </record>
    <record id="view_account_asset_depreciation_history_search" model="ir.ui.view">
        <field name="name">account.asset.depreciation.history.search</field>
        <field name="model">account.asset.depreciation.history</field>
        <field name="arch" type="xml">
            <search string="Depreciation History">
                <field name="state" string="Status"/>
                <group expand="0" string="Group By...">
                    <filter string="To Approve" name="state" domain="[('state','in', ('draft',))]"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_asset_depreciation_history">
        <field name="name">Depreciation History</field>
        <field name="res_model">account.asset.depreciation.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_state":1}</field>
        <field name="search_view_id" ref="view_account_asset_depreciation_history_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new Asset Depreciation.
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="action_account_asset_depreciation_history_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_asset_depreciation_history_tree"/>
        <field name="act_window_id" ref="action_account_asset_depreciation_history"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_account_asset_depreciation_history_form">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_asset_depreciation_history_form"/>
        <field name="act_window_id" ref="action_account_asset_depreciation_history"/>
    </record>

    <menuitem parent="menu_action_account_asset_operation" id="menu_action_account_asset_depreciation_history"
              action="action_account_asset_depreciation_history" sequence="20"/>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_asset_type_form">
        <field name="name">account.asset.category.form</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <form string="Asset Type">
                <group>
                    <div class="oe_title">
                        <label for="name" string="Asset Category" class="oe_edit_only"
                               attrs="{'invisible': [('type','!=','purchase')]}"/>
                        <label for="name" string="Deferred Revenue Type" class="oe_edit_only"
                               attrs="{'invisible': [('type','==','purchase')]}"/>
                        <h1>
                            <field name="name" placeholder="e.g. Lenovo"/>
                        </h1>
                        <label for="parent_type_id" string="Asset Type" class="oe_edit_only"
                               attrs="{'invisible': [('type','!=','purchase')]}"/>
                        <h1>
                            <field name="parent_type_id" required="True"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                   domain="[('parent_type_id','=',False)]"/>
                        </h1>
                    </div>
                    <group>
                        <field name="is_custom_depr" invisible="1"/>
                        <field name="type" invisible="1"/>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                    </group>
                    <group string="Journal Entries">
                        <field name="journal_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <div>
                            <label for="account_asset_id" attrs="{'invisible': [('type','!=','purchase')]}"/>
                            <label for="account_asset_id" string="Deferred Revenue Account"
                                   attrs="{'invisible': [('type','!=','sale')]}"/>
                        </div>
                        <field name="account_asset_id" nolabel="1" attrs="{'invisible': [('type','=', False)]}"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <div>
                            <label for="asset_suspense_account_id" attrs="{'invisible': [('type','!=','purchase')]}"/>
                            <label for="asset_suspense_account_id" string="Asset Suspense Account"
                                   attrs="{'invisible': [('type','!=','sale')]}"/>
                        </div>
                        <field name="asset_suspense_account_id" nolabel="1" domain="[('company_id', '=', company_id)]"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <div>
                            <label for="account_depreciation_id" attrs="{'invisible': [('type','!=','purchase')]}"/>
                            <label for="account_depreciation_id" string="Recognition Income Account"
                                   attrs="{'invisible': [('type','!=','sale')]}"/>
                        </div>
                        <field name="account_depreciation_id" nolabel="1"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <div>
                            <label for="account_depreciation_expense_id"
                                   attrs="{'invisible': [('type','!=','purchase')]}"/>
                            <label for="account_depreciation_expense_id"
                                   attrs="{'invisible': [('type','!=','sale')]}"/>
                        </div>
                        <field name="account_depreciation_expense_id" nolabel="1"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <div>
                            <label for="account_asset_loss_id"
                                   attrs="{'invisible': [('type','!=','purchase')]}"/>
                            <label for="account_asset_loss_id"
                                   attrs="{'invisible': [('type','!=','sale')]}"/>
                        </div>
                        <field name="account_asset_loss_id" nolabel="1"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <div>
                            <label for="account_asset_gain_id"
                                   attrs="{'invisible': [('type','!=','purchase')]}"/>
                            <label for="account_asset_gain_id"
                                   attrs="{'invisible': [('type','!=','sale')]}"/>
                        </div>
                        <field name="account_asset_gain_id" nolabel="1"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <div>
                            <label for="asset_sale_suspense_account_id"
                                   attrs="{'invisible': [('type','!=','purchase')]}"/>
                            <label for="asset_sale_suspense_account_id"
                                   attrs="{'invisible': [('type','!=','sale')]}"/>
                        </div>
                        <field name="asset_sale_suspense_account_id" nolabel="1"
                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="account_analytic_id" groups="analytic.group_analytic_accounting"/>
                    </group>
                    <group string="Periodicity">
                        <field name="method_time" string="Time Method Based On" widget="radio"
                               attrs="{'invisible': ['|',('type','!=','purchase'),('is_custom_depr','=',True)]}"/>
                        <label for="depreciation_year" string="Asset Life (In Year)"/>
                        <div>
                            <field name="depreciation_year" nolabel="1" class="oe_inline"
                                   attrs="{'invisible':['|',('method_time','!=','number'),'&amp;',('type','=', False)], 'required':[('method_time','=','number')]}"/>
                            years
                        </div>
                        <field name="method_number" string="Number of Entries" invisible="1"
                               attrs="{'invisible':['|',('method_time','!=','number'),'&amp;',('type','=', False)]}"/>
                        <label for="method_period" string="One Entry Every"/>
                        <div>
                            <field name="method_period" nolabel="1" attrs="{'invisible': [('type','=', False)]}"
                                   class="oe_inline"/>
                            months
                        </div>
                        <field name="method_end"
                               attrs="{'required': [('method_time','=','end')], 'invisible':[('method_time','!=','end')]}"/>
                    </group>
                    <group string="Additional Options" attrs="{'invisible': [('is_custom_depr','=',True)]}">
                        <field name="open_asset"/>
                        <field name="group_entries"/>
                    </group>
                    <group attrs="{'invisible': [('type','=','sale')]}" string="Depreciation Method">
                        <field name="method" widget="radio"/>
                        <field name="method_progress_factor"
                               attrs="{'invisible':[('method','=','linear')], 'required':[('method','=','degressive')]}"/>
                        <field name="prorata"
                               attrs="{'invisible': ['|',('method_time','=','end'),('is_custom_depr','=',True)]}"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_account_asset_type_kanban" model="ir.ui.view">
        <field name="name">account.asset.category.kanban</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="journal_id"/>
                <field name="method"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-xs-6">
                                    <strong>
                                        <span>
                                            <t t-esc="record.name.value"/>
                                        </span>
                                    </strong>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <span class="badge">
                                        <strong>
                                            <t t-esc="record.method.value"/>
                                        </strong>
                                    </span>
                                </div>
                            </div>
                            <div>
                                <t t-esc="record.journal_id.value"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_type_tree">
        <field name="name">account.asset.category.tree</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <tree string="Asset category">
                <field name="name" string="Asset Category"/>
                <field name="parent_type_id"/>
                <field name="journal_id"/>
                <field name="method"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_type_search">
        <field name="name">account.asset.category.search</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <search string="Search Asset Category">
                <filter string="Sales" domain="[('type','=', 'sale')]" help="Deferred Revenues"/>
                <filter string="Purchase" domain="[('type','=', 'purchase')]" help="Assets"/>
                <field name="name" string="Category"/>
                <field name="journal_id"/>
                <group expand="0" string="Group By...">
                    <filter string="Type" domain="[]" context="{'group_by':'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_asset_type">
        <field name="name">Asset Category</field>
        <field name="res_model">account.asset.category</field>
        <field name="domain">[('type', '=', 'purchase')]</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('parent_type_id','!=',False)]</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_account_asset_type_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_asset_type_tree"/>
        <field name="act_window_id" ref="action_account_asset_type"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_account_asset_type_kanban">
        <field name="sequence" eval="2"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_account_asset_type_kanban"/>
        <field name="act_window_id" ref="action_account_asset_type"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_account_asset_type_form">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_asset_type_form"/>
        <field name="act_window_id" ref="action_account_asset_type"/>
    </record>

    <menuitem parent="sub_configuration_menu" id="menu_action_account_asset_type"
              action="action_account_asset_type" sequence="10"/>

    <record model="ir.actions.act_window" id="account_asset.action_account_asset_asset_list_normal_purchase">
        <field name="domain">[('type', '=', 'purchase'),('parent_type_id','=',False)]</field>
    </record>
</odoo>

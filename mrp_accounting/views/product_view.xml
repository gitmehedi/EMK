<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.inherit.mrp.accounting</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_income_id']" position="after">
                    <field name="raw_cogs_account_id"
                           groups="account.group_account_user"
                           domain="[('internal_type','=','other'),('deprecated','=',False)]"
                           attrs="{'invisible': [('sale_ok', '=', False)]}"/>

                    <field name="packing_cogs_account_id"
                           groups="account.group_account_user"
                           domain="[('internal_type','=','other'),('deprecated','=',False)]"
                           attrs="{'invisible': [('sale_ok', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_mrp_config" model="ir.ui.view">
            <field name="name">mrp.config.settings.mrp.extend</field>
            <field name="model">mrp.config.settings</field>
            <field name="inherit_id" ref="mrp.view_mrp_config"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group[2]" position="after">
                    <group string="Accounting">
                        <label for="id" string="Features" groups="account.group_account_user"/>
                        <div>
                            <div>
                                <field name="stock_valuation_accounting" class="oe_inline"/>
                                <label for="stock_valuation_accounting"/>
                            </div>
                            <div>
                                <field name="cogs_accounting" class="oe_inline"/>
                                <label for="cogs_accounting"/>
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_cost_center_top_sheet_wizard" model="ir.ui.view">
            <field name="name">cost.center.top.sheet.wizard.view</field>
            <field name="model">cost.center.top.sheet.wizard</field>
            <field name="arch" type="xml">
                <form string="Cost Center Wise Top Sheet">
                    <group>

                        <group>
                            <field name="cost_center_ids" placeholder="All"
                                   options="{'no_create': True,'no_create_edit': True,'no_open': True}"
                                   widget="many2many_tags"/>

                            <field name="hr_payslip_run_id" invisible="1"/>

                        </group>
                    </group>
                    <footer>
                        <button name="button_export_xlsx" string="Export" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
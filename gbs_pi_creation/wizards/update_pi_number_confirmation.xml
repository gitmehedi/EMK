<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="update_pi_number_confirmation_form" model="ir.ui.view">
            <field name="name">update.pi.number.confirmation.wizard</field>
            <field name="model">update.pi.number.confirmation</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="current_pi_number"/>
                        </group>
                        <group></group>
                        <group>
                            <field name="pi_number"/>
                        </group>

                    </group>
                    <footer>
                        <button name="action_update_pi_number" string="Update" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
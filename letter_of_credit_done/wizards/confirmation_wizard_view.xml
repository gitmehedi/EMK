<odoo>
    <data>

        <record id="lc_done_confirmation_wizard" model="ir.ui.view">
            <field name="name">lc.done.confirmation.wizard</field>
            <field name="model">lc.done.confirmation.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="LC Done Confirmation">
                    <field name="text" style="font-weight: bold;" colspan="4" nolabel="1" readonly="1"  widget="html"/>
                    <separator string="Product List"/>
                    <field name="product_lines" nolabel="1">
                         <tree string="Purchase Order Lines" create="false" delete="false">
                            <field name="product_id" readonly='1'/>
                            <field name="name" readonly='1'/>
                            <field name="date_planned" readonly='1'/>
                            <field name="product_qty" readonly='1'/>
                            <field name="product_uom" readonly='1'/>
                             <field name="product_received_qty" readonly='1'/>
                        </tree>
                    </field>

                    <footer>
                        <button string="Yes" name="do_lc_done" type="object" class="oe_highlight"/>
                        <button special="cancel" string="No" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
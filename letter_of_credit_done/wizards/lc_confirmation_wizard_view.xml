<odoo>
    <data>
        <record id="lc_confirmation_wizard" model="ir.ui.view">
            <field name="name">lc.confirmation.wizard</field>
            <field name="model">lc.confirmation.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="HR Confirmation">
                    <group colspan="4">
                        <separator string="Confirmation Criteria" colspan="4"/>
                        <newline/>
                        <field name="criteria_line_ids" nolabel="1">
                            <tree string="LC Confirmation" create="false" delete="false" editable="bottom">
                                <field name="name" readonly="1"/>
                                <field name="marks" readonly="1"/>
                                <field name="obtain_marks"/>
                            </tree>
                        </field>
                    </group>
                    <div colspan="1">
                        <separator string="Comments"/>
                        <field name="comment"/>
                    </div>
                    <footer>
                        <button string="Save" name="save_evaluating" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>

            </field>
        </record>
    </data>
</odoo>
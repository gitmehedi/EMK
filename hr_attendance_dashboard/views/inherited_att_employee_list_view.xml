<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Tree View -->
		<record id="hr_att_absent_tree_view" model="ir.ui.view">
			<field name="name">hr.att.absent.tree.view</field>
			<field name="model">hr.employee</field>
			<field name="arch" type="xml">
				<tree string="Absent Employees" editable="bottom">
					<field name="name" readonly="True"></field>
					<field name="department_id" readonly="True"></field>
					<field name="job_id" readonly="True"></field>
				</tree>
			</field>
		</record>

        <!-- Tree View -->
		<record id="hr_att_late_tree_view" model="ir.ui.view">
			<field name="name">hr.attendance.error.tree</field>
			<field name="model">hr.attendance</field>
            <field name="arch" type="xml">
				<tree string="Late Employees" editable="bottom">
					<field name="employee_id" readonly="True"></field>
					<field name="duty_date" readonly="True"></field>
					<field name="check_in" readonly="True"></field>
				</tree>
			</field>
		</record>
    </data>
</odoo>
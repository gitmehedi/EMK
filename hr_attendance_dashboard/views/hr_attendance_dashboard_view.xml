<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_attendance_dashboard_kanban">
        <field name="name">hr.attendance.dashboard.kanban</field>
        <field name="model">operating.unit</field>
        <field name="arch" type="xml">
            <kanban default_order="operating_unit_sequence" class="oe_background_grey o_kanban_dashboard o_stock_kanban" create="0" >
                <!--<field name="name"/>default_group_by="operating_unit_id"-->
                <field name="color"/>
                <field name="kanban_dashboard"/>
                <field name="kanban_dashboard_graph"/>
                <!--<field name="operating_unit_id"/>-->
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                                <t t-value="JSON.parse(record.kanban_dashboard.raw_value)" t-set="dashboard"/>
                                <!--<t t-value="record.type.raw_value" t-set="journal_type"/>-->
                                <div class="o_project_kanban_manage">
                                    <div class="o_kanban_card_header">
                                        <div class="o_kanban_card_header_title">
                                            <div class="o_primary">
                                                <field name="name"/>
                                            </div>
                                            <!--<div class="o_secondary"><field class="o_secondary" name="operating_unit_id"/></div>-->
                                        </div>
                                        <div class="o_kanban_manage_button_section">
                                            <a class="o_kanban_manage_toggle_button" href="#">More <i class="fa fa-caret-down"/></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content o_visible" >
                                    <div class="row">
                                        <div class="col-xs-6 o_kanban_primary_left" >
                                            <div>
                                                <center>
                                                    <button class="btn btn-primary" type="object" name="dashboard_absent_employee_action_id">Absent</button>
                                                    <button class="btn btn-primary" type="object" name="dashboard_late_employee_action_id">Late</button>
                                                </center>
                                                <!---->
                                            </div>
                                        </div>
                                        <div class="col-xs-6 o_kanban_primary_right">
                                            <div class="row">
                                                <div class="col-xs-9">
                                                    <a>Total Employee</a>
                                                </div>
                                                <div class="col-xs-3">
                                                    <t t-esc="dashboard.total_emp"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-9">
                                                    <a>On Time Present</a>
                                                </div>
                                                <div class="col-xs-3">
                                                    <t t-esc="dashboard.on_time_present"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-9">
                                                    <a>Late</a>
                                                </div>
                                                <div class="col-xs-3">
                                                    <t t-esc="dashboard.late"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-9">
                                                    <a>Absent</a>
                                                </div>
                                                <div class="col-xs-3">
                                                    <t t-esc="dashboard.absent"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_manage_pane o_invisible">
                                    <!--<div class="col-xs-6 o_kanban_card_manage_section o_kanban_manage_view">-->
                                    <!--<div class="o_kanban_card_manage_title">-->
                                    <!--<span>View</span>-->
                                    <!--</div>-->
                                    <!--</div>-->
                                    <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                                        <div class="col-xs-8">
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                        <!--<div class="col-xs-4 text-right">-->
                                            <!--<a type="edit">Settings</a>-->
                                        <!--</div>-->
                                    </div>

                                </div>
                                <!--<div class="o_kanban_graph_section">-->
                                    <!--<field name="kanban_dashboard_graph" t-att-graph_type="bar" widget="dashboard_graph"/>-->
                                <!--</div>-->
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

    <record id="view_attendance_dashboard_filter" model="ir.ui.view">
        <field name="name">hr.attendance.dashboard.filter</field>
        <field name="model">operating.unit</field>
        <field name="arch" type="xml">
            <search string="Search">
                <group>
                    <separator/>
                    <!--<field name="operating_unit_name"/>-->
                </group>

           </search>
        </field>
    </record>

    <record id="custom_sales_dashboard_action" model="ir.actions.act_window">
        <field name="name">Today's Attendance Dashboard</field>
        <field name="res_model">operating.unit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="context">{}</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p>
                Attendance Dashboard.
            </p>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_permission_head_of_sales" model="ir.rule">
        <field name="name">Sales Team Member</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">[('team_id.member_ids','child_of',[user.id])]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('sales_team.group_sale_salesman_all_leads'))]"/>
    </record>

    <record id="sale_order_permission_head_of_accounts" model="ir.rule">
        <field name="name">Sale Order Permission HOA</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('gbs_application_group.group_head_account'))]"/>
    </record>

    <record id="sale_order_permission_director" model="ir.rule">
        <field name="name">Sale Order Permission For CXO/M.D/Director</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('gbs_application_group.group_cxo'))]"/>
    </record>

</odoo>
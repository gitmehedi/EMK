<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_quotation_inherit_add_property" inherit_id="sale.report_saleorder_document">

            <xpath expr="//div/div/div[@class='col-xs-3'][3]" position="after">
                <div t-if="doc.date_order" class="col-xs-3">
                    <strong>Packing Mode:</strong>
                    <p t-field="doc.pack_type"/>
                </div>
                <div t-if="doc.date_order" class="col-xs-3">
                    <strong>Currency:</strong>
                    <p t-field="doc.currency_id"/>
                </div>
            </xpath>

            <xpath expr="//th[@class='text-right'][2]" position="after">
                <th class="text-right">Commission Rate</th>
            </xpath>

            <xpath expr="//td[@class='text-right'][2]" position="after">
                <td class="text-center">
                    <span t-field="l.commission_rate"/>
                </td>
            </xpath>

            <xpath expr="//th[@class='text-right'][6]" position="replace">
                <th class="text-right">Price</th>
            </xpath>

            <xpath expr="//td[@class='text-right'][5]" position="replace">
                <td class="text-right">
                    <span t-field="l.price_subtotal"
                          t-field-options='{"widget": "monetary", "display_currency": "doc.type_id.currency_id"}'/>
                </td>
            </xpath>


            <xpath expr="//div/div/div/table/tr[@class='border-black'][1]" position="replace">
                <tr class="border-black">
                    <td>
                        <strong>Total Without Taxes</strong>
                    </td>
                    <td class="text-right">
                        <span t-field="doc.amount_untaxed"
                              t-field-options='{"widget": "monetary", "display_currency": "doc.type_id.currency_id"}'/>
                    </td>
                </tr>
            </xpath>

            <xpath expr="//div[@class='col-xs-4 pull-right']//table//t" position="replace">
                <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                    <tr>
                        <td>
                            <span t-esc="amount_by_group[0] or 'Taxes'"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="amount_by_group[1]"
                                  t-options='{"widget": "monetary", "display_currency": doc.type_id.currency_id}'/>
                        </td>
                    </tr>
                </t>
            </xpath>

            <xpath expr="//div/div/div/table/tr[@class='border-black'][2]" position="replace">
                <tr>
                    <td>
                        <strong>Total</strong>
                    </td>
                    <td class="text-right">
                        <span t-field="doc.amount_total"
                              t-field-options='{"widget": "monetary", "display_currency": "doc.type_id.currency_id"}'/>
                    </td>
                </tr>
            </xpath>

            <xpath expr="//div/div[@name='total']" position="after">
                <div style="text-align:right">
                    <strong>Amount in words:</strong>
                    <span t-esc="doc.amount_to_word(doc.amount_total)"/>
                </div>
            </xpath>

        </template>

        <template id="report_quotation_footer" inherit_id="report.external_layout_footer">
            <xpath expr="//div/div/ul[@class='list-inline'][1]" position="before">
                <p>This is a computer generated report. No signature is required.</p>
            </xpath>
        </template>
    </data>
</odoo>
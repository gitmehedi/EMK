        <record id="customized_sale_order_form_view" model="ir.ui.view">
            <field name="name">customized_sale_order_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <header>
                        <button name="action_submit" attrs="{'invisible': [('state','in',('validate','sent','done','cancel','sale'))]}" type="object" string="Submit Quotation"/>
                        <button name="action_validate" attrs="{'invisible': [('state','in',('draft','sent','done','submit_quotation','cancel','sale'))]}" states="submit_quotation" type="object" string="Validate" />
                    </header>

                    <xpath expr="//field[@name='state']" position="replace">
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit_quotation,sent,sale"/>
                    </xpath>

                    <xpath expr="//group/group/field[@name='payment_term_id']" position="after">
                        <field name="credit_sales_or_lc"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>

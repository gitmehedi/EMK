<?xml version="1.0"?>
<odoo>

    <record id="sales_channel_form_view" model="ir.ui.view">
        <field name="name">sales.channel.form.view</field>
        <field name="model">sales.channel</field>
        <field name="arch" type="xml">
            <form copy="0" delete="false">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </group>

                    <group>
                        <field name="operating_unit_id"
                               options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="user_id"
                               options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="warehouse_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sales_channel_tree_view" model="ir.ui.view">
        <field name="name">sales.channel.tree.view</field>
        <field name="model">sales.channel</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Sales Channel Tree">
                <field name="name"/>
                <field name="operating_unit_id"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_sales_channel">
        <field name="name">Sales Channel</field>
        <field name="res_model">sales.channel</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sales_channel_menu" parent="sales_team.menu_sale_config"
              groups="gbs_application_group.group_head_sale"
              action="action_sales_channel" sequence="22"/>

</odoo>
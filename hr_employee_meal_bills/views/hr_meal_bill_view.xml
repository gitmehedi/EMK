<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_meal_bill_form" model="ir.ui.view">
            <field name="name">hr.meal.bill.form</field>
            <field name="model">hr.meal.bill</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Employee Meal Details" delete="false">
                    <header>
                        <button name="action_confirm" type="object"
                                string="Apply" states="draft"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="Approve" states="applied" groups="hr.group_hr_manager"
                                class="oe_highlight"/>
                        <button name="action_draft" type="object"
                                string="Reject" groups="hr.group_hr_manager"
                                states="applied"/>
                        <button name="action_draft" type="object"
                                string="Reset to draft" states="applied,approved" groups="hr.group_hr_manager"
                                />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            </group>
                            <notebook colspan="4">
                                <page string="Bills">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="employee_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="bill_amount"/>
                                            <field  name="state" invisible="1"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="hr_meal_bill_tree" model="ir.ui.view">
            <field name="name">hr.meal.bill.tree</field>
            <field name="model">hr.meal.bill</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Meal Information">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hr_meal_bill_action">
            <field name="name">Meal Bills</field>
            <field name="res_model">hr.meal.bill</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_meal_bill_menu" name="Meal Bills" parent="hr.menu_hr_root" sequence="95" action="hr_meal_bill_action" groups="gbs_hr_security.group_payroll_user"/>
        <menuitem id="hr_meal_bill" name="Meal Bills" parent="hr_meal_bill_menu" action="hr_meal_bill_action" groups="gbs_hr_security.group_payroll_user"/>
    </data>
</odoo>
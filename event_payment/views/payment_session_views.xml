<?xml version="1.0"?>
<odoo>
    <record id="inherit_view_payment_session_form" model="ir.ui.view">
        <field name="model">payment.session</field>
        <field name="inherit_id" ref="emk_payment.inherit_view_payment_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="after">
                <page string="Invoice Payments">
                    <field name="member_fee_ids">
                        <tree string="Invoice Payment" decoration-bf="state == 'draft'"
                              decoration-success="state == 'draft'" decoration-muted="state == 'paid'">
                            <field name="invoice_type"/>
                            <field name="payment_partner_id"/>
                            <field name="payment_ref"/>
                            <field name="journal_id"/>
                            <field name="date"/>
                            <field name="state"/>
                            <field name="paid_amount" sum="paid_amount"/>
                        </tree>
                    </field>
                </page>
                <page string="Service Payments">
                    <field name="service_fee_ids">
                        <tree string="Service Payment" decoration-bf="state == 'draft'"
                              decoration-success="state == 'draft'" decoration-muted="state == 'paid'">
                            <field name="payment_type_id"/>
                            <field name="membership_id"/>
                            <field name="journal_id"/>
                            <field name="collection_date"/>
                            <field name="state"/>
                            <field name="paid_amount" sum="paid_amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
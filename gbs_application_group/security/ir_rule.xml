<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'operating_unit'), ('name', '=', 'operating_unit_comp_rule')]"/>
        </function>
        <value eval="{'noupdate': False}"/>
    </function>

    <record id="operating_unit.operating_unit_comp_rule" model="ir.rule">
        <field name="name">Operating Unit Entry</field>
        <field name="model_id" ref="operating_unit.model_operating_unit"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'operating_unit'), ('name', '=', 'operating_unit_comp_rule')]"/>
        </function>
        <value eval="{'noupdate': True}"/>
    </function>


    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'operating_unit'), ('name', '=', 'ir_rule_operating_unit_allowed_operating_units')]"/>
        </function>
        <value eval="{'noupdate': False}"/>
    </function>

    <record id="operating_unit.ir_rule_operating_unit_allowed_operating_units"
            model="ir.rule">
        <field name="model_id" ref="operating_unit.model_operating_unit"/>
        <field name="domain_force">[('id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="name">Allowed operating units</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'operating_unit'), ('name', '=', 'ir_rule_operating_unit_allowed_operating_units')]"/>
        </function>
        <value eval="{'noupdate': True}"/>
    </function>

</odoo>
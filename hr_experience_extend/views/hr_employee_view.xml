<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_employee_form_inherit2">
            <field name="name">hr.experience.employee.formmm</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='study_field']" position="after">
                        <field name="passing_yr"/>
                    </xpath>
                </field>
        </record>
        <record model="ir.ui.view" id="view_academic_form_inherit">
            <field name="name">view.academic.form</field>
            <field name="model">hr.academic</field>
            <field name="inherit_id" ref="hr_experience.view_academic_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='study_field']" position="after">
                        <field name="passing_yr"/>
                    </xpath>
                </field>
        </record>
    </data>


</odoo>

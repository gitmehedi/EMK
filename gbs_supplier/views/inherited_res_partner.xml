        <record id="inherited_res_partner_supplier" model="ir.ui.view">
            <field name="name">inherited.res.partner.supplier</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="31"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='purchase']" position="inside">
                    <field name="supplier_category_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="ntn_no"/>
                    <field name="gst_no"/>
                    <field name="iec_no"/>
                </xpath>

                <xpath expr="//field[@name='category_id']" position="replace">
                    <field name="category_id" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="sector_id"/>
                    <field name="supplier_type"/>
                </xpath>
                <xpath expr="//group[@name='container_row_2']/group[2]" position="after">
                    <group string="CNF Agent" name="cnf" attrs="{'invisible':['|',('supplier', '=', True),('customer', '=', True)]}">
                        <field name="is_cnf"/>
                    </group>
                </xpath>

                 <xpath expr="//group[@name='purchase']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_cnf', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//group[@name='sale']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_cnf', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>


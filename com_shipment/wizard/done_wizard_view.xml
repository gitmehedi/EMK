<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="done_wizard" model="ir.ui.view">
            <field name="name">done.wizard</field>
            <field name="model">done.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Do you want to done this Shipment?" create="false" edit="false">
                    <!--<p>Would you want to leave a message?</p>-->
                    <group attrs="{'invisible':[('region_type', '=', False)]}">
                        <group>
                            <field name="region_type" invisible="1"/>
                            <field name="shipment_done_date" attrs="{'required': ['|', ('region_type', '=', 'foreign'),('region_type', '=', 'local')]}" />
                            <field name="ait_amount" attrs="{'invisible':[('region_type', '=', 'foreign')],'required': [('region_type', '=', 'local')]}" />
                            <field name="payment_rec_date" attrs="{'required': ['|',('region_type', '=', 'local'), ('region_type', '=', 'foreign')]}"/>
                            <field name="payment_rec_amount" attrs="{'required': ['|',('region_type', '=', 'local'), ('region_type', '=', 'foreign')], 'readonly': 1}"/>
                        </group>
                        <group>
                            <field name="payment_charge" attrs="{'required': ['|',('region_type', '=', 'local'), ('region_type', '=', 'foreign')]}"/>
                            <field name="discrepancy_amount" attrs="{'required': ['|',('region_type', '=', 'local'), ('region_type', '=', 'foreign')]}"/>
                            <field name="exp_number" attrs="{'required': [('region_type', '=', 'foreign')]}"/>
                        </group>
                    </group>
                    <group string="Comments">
                        <field name="comments" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Save" name="save_done" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="cancel_wizard" model="ir.ui.view">
            <field name="name">cancel.wizard</field>
            <field name="model">cancel.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Do you want to Cancel this Shipment?" create="false" edit="false">
                    <group string="Comments">
                        <field name="comments" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Save" name="save_done" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
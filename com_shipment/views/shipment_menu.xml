<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_shipment_filter" model="ir.ui.view">
            <field name="name">purchase.shipment.filter.view</field>
            <field name="model">purchase.shipment</field>
            <field name="arch" type="xml">
                <search string="Search LC Shipment">
                    <field name="lc_id"/>
                    <field name="name"/>
                    <filter name="active" string="Active" domain="[('state', 'not in', ('done','cancel'))]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="shipment_creation_action">
            <field name="name">LC Shipment</field>
            <field name="res_model">purchase.shipment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active':1}</field>
            <field name="search_view_id" ref="view_shipment_filter"/>
        </record>

        <menuitem id="lc_shipment_creation_menu" parent="commercial.menu_commercial_root"
            sequence="2" name="Shipment" />

        <menuitem id="shipment_creation_submenu" name="LC Shipment" parent="lc_shipment_creation_menu"
                  sequence="2" action="shipment_creation_action"/>
    </data>
</odoo>
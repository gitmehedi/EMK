<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_shipment_form" model="ir.ui.view">
            <field name="name">purchase.shipment.form</field>
            <field name="model">purchase.shipment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Shipment" delete="false" copy='0'>
                    <link rel="stylesheet" href="/com_shipment/static/src/css/lc_style.css"></link>
                    <header>
                        <!--<button string="Open" name="action_open" states="draft" type="object" class="oe_highlight"/>-->
                    	<!--<button string="Confirm" name="action_confirm" states="open" type="object" class="oe_highlight"/>-->
                     	<!--<button string="Reset to Draft" name="action_draft" type="object" states="confirmed" class="oe_read_only"/>-->
                        <!--<button string="Amendment" name="action_revision" class="oe_read_only" type="object" attrs="{'invisible': [('state', 'in', ('draft', 'open'))]}"/>-->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Shipment Details" colspan="4">
                                <group>
                                    <field name="name"/>
                                    <field name="etd_date"/>
                                    <field name="eta_date"/>
                                </group>
                                <group>
                                    <field name="lc_id" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    <field name="arrival_date"/>
                                </group>
                            </group>
                            <group string="Bill Of Lading">
                                <field name="bill_of_lading_number"/>
                                <field name="shipment_date"/>
                            </group>
                            <group string="Packing List">
                                <field name="net_weight"/>
                                <field name="gross_weight"/>
                            </group>

                            <notebook colspan="4">
                                <page string="Attachments">
                                    <field name="shipment_attachment_ids" widget="one2many" class="lc_attachment">
                                        <tree string="Attachments" editable="top">
                                            <field name="name" string="Title"/>
                                            <field name="datas_fname" invisible="1"/>
                                            <field name="db_datas" filename="datas_fname"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Remarks">
                                    <field name="comments" widget="html" options="{'style-inline': true}"/>
                                </page>

                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="shipment_tree_view" model="ir.ui.view">
            <field name="name">purchase.shipment.tree</field>
            <field name="model">purchase.shipment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Shipment">
                    <field name="lc_id"/>
                    <field name="name"/>
                    <field name="etd_date"/>
                    <field name="shipment_date"/>
                    <field name="eta_date"/>
                    <field name="arrival_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="lc_shipment_history" model="ir.ui.view">
			<field name="name">view_local_credit_form_inherit</field>
			<field name="model">letter.credit</field>
			<field name="inherit_id" ref="letter_of_credit.view_local_credit_form"/>
			<field name="arch" type="xml">
				<data>
					<xpath expr="//page[6]" position="after">
						<page string="Shipment">
                            <field name="shipment_ids">
                                <tree create="false">
                                    <field name="name"/>
                                    <field name="etd_date"/>
                                    <field name="shipment_date"/>
                                    <field name="eta_date"/>
                                    <field name="arrival_date"/>
                                    <field name="state"/>
                                    <button name="action_view_shipment" string="View" type="object" icon="fa-search-plus" />
                                    <button name="action_edit_shipment" string="Edit" type="object" icon="fa-pencil-square-o" />
                                </tree>
                            </field>
                        </page>
					</xpath>
				</data>
                <xpath expr="//button[@name='action_revision']" position="after">
                    <button string="Shipment" name="action_shipment" type="object" attrs="{'invisible': [('state', 'in', ('draft', 'open', 'done'))]}" class="oe_highlight oe_read_only"/>

                </xpath>
			</field>
		</record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- wizard action on res.partner -->
    <act_window id="customer_aging_statement_wizard_action"
        name="Customer Aging Statement"
        src_model="res.partner"
        res_model="customer.aging.statement.wizard"
        view_type="form" view_mode="form"
        key2="client_action_multi" target="new"
        groups="account.group_account_user"/>

    <!-- wizard view -->
    <record id="customer_aging_statement_wizard_view" model="ir.ui.view">
        <field name="name">Customer Aging Statement Wizard</field>
        <field name="model">customer.aging.statement.wizard</field>
        <field name="arch" type="xml">
            <form name="Report Options">
                <group>
                    <group name="main_info">
                        <field name="company_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}' groups="base.group_multi_company"/>
                        <field name="type"/>
                    </group>
                    <group name="dates">
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                </group>
                <group>
                    <group name="aging_report">
                        <field name="show_aging_buckets" invisible="1"/>
                    </group>
                    <group name="multiple_partners">
                        <field name="number_partner_ids" readonly="1" invisible="1"/>
                        <field name="filter_partners_non_due" invisible="1"/>
                    </group>
                </group>

                <footer>
                    <button name="button_export_pdf" string="Export PDF" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>

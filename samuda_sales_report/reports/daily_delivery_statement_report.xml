<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="action_report_daily_delivery_statement"
                model="res.partner"
                string="Daily Delivery Statement"
                report_type="qweb-pdf"
                menu="False"
                name="samuda_sales_report.report_daily_delivery_statement"
                file="samuda_sales_report.report_daily_delivery_statement"
                paperformat="report_layout.paperformat_backend_landscape"
        />
        <template id="report_daily_delivery_statement">
            <t t-call="report.html_container">
                 <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside:auto;">
                        <div class="row">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h4 class="report-title">Executive Wise Daily Delivery Statement</h4>
                                <br/>
                                <div class="row" style="padding-bottom:5px;">
                                    <div class="col-xs-6">
                                        <strong>Executive Name : </strong>
                                        <span t-esc="data['executive_name']"/>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <strong>Date : </strong>
                                        <span t-esc="time.strftime('%d-%b-%Y',time.strptime(data['date_delivery'],'%Y-%m-%d'))"/>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-report-xs table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th class="text-center" style="width:15%;">SO No</th>
                                        <th class="text-center" style="width:15%;">Party Name</th>
                                        <th class="text-center" style="width:10%;">Delivery Qty</th>
                                        <th class="text-center" style="width:10%;">Delivery Challan</th>
                                        <th class="text-center" style="width:10%;">VAT Challan</th>
                                        <th class="text-center" style="width:15%;">Value</th>
                                        <th class="text-center" style="width:15%;">Transport Name</th>
                                        <th class="text-center" style="width:10%;">Vehical No</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
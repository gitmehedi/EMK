<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="action_report_outstanding_statement"
                model="res.partner"
                string="Outstanding Statement Report"
                report_type="qweb-pdf"
                menu="False"
                name="samuda_sales_report.report_outstanding_statement"
                file="samuda_sales_report.report_outstanding_statement"
                paperformat="report_layout.paperformat_backend_portrait"
        />
        <template id="report_outstanding_statement">
            <t t-call="report.html_container">
                 <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside:auto;">
                        <div class="row">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h4 class="report-title">Total Outstanding Statement</h4>
                                <br/>
                                <div class="row" style="padding-bottom:5px;">
                                    <div class="col-xs-6">
                                        <ul class="list-inline">
                                            <li>
                                                <strong>Executive : </strong>
                                                <t t-if="not data['executive_name']">All</t>
                                                <span t-esc="data['executive_name']"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <strong>Date : </strong>
                                        <span t-esc="time.strftime('%d-%b-%Y',time.strptime(data['date_from'],'%Y-%m-%d'))"/>
                                        <strong> to </strong>
                                        <span t-esc="time.strftime('%d-%b-%Y',time.strptime(data['date_to'],'%Y-%m-%d'))"/>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-report-xs table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th class="text-center" style="width:40%;">Sales Person</th>
                                        <th class="text-center" style="width:20%;">Total Sales Value</th>
                                        <th class="text-center" style="width:20%;">Credit Value</th>
                                        <th class="text-center" style="width:20%;">Outstanding Percentage (%)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="report_data" t-as="l">
                                        <tr>
                                            <td>
                                                <span class="text-nowrap" t-esc="l['sales_person']"/>
                                            </td>
                                            <td class="text-right">
                                                <span class="text-nowrap" t-esc="formatLang(l['total_sale_value'])"/>
                                            </td>
                                            <td class="text-right">
                                                <span class="text-nowrap" t-esc="formatLang(l['credit_value'])"/>
                                            </td>
                                            <td class="text-right">
                                                <span class="text-nowrap" t-esc="formatLang(l['percentage'])"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="report_data">
                                        <tr>
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <strong class="text-nowrap" t-esc="formatLang(sum(l['total_sale_value'] for l in report_data))"/>
                                            </td>
                                            <td class="text-right">
                                                <strong class="text-nowrap" t-esc="formatLang(sum(l['credit_value'] for l in report_data))"/>
                                            </td>
                                            <td class="text-right">
<!--                                                <span class="text-nowrap" t-esc="formatLang(sum(l['percentage'] for l in report_data))"/>-->
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
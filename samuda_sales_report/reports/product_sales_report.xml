<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="action_report_product_sales"
                model="res.partner"
                string="Product Sales Report"
                report_type="qweb-pdf"
                menu="False"
                name="samuda_sales_report.report_product_sales"
                file="samuda_sales_report.report_product_sales"
                paperformat="report_layout.paperformat_backend_portrait"
        />
        <template id="report_product_sales">
            <t t-call="report.html_container">
                 <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside:auto;">
                        <div class="row">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h4 class="report-title">Product Wise Sales Report</h4>
                                <br/>
                                <div class="row" style="padding-bottom:5px;">
                                    <div class="col-xs-6">
                                        <ul class="list-inline">
                                            <li>
                                                <strong>Product : </strong>
                                                <t t-if="not data['product_name']">All</t>
                                                <span t-esc="data['product_name']"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <strong>Date : </strong>
                                        <span t-esc="time.strftime('%d-%b-%Y',time.strptime(data['date_from'],'%Y-%m-%d'))"/>
                                        <strong> to </strong>
                                        <span t-esc="time.strftime('%d-%b-%Y',time.strptime(data['date_to'],'%Y-%m-%d'))"/>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-report-xs table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th style="text-align: center;">
                                            Sector Name
                                        </th>
                                        <th style="text-align: center;">
                                            Qty
                                        </th>
                                        <th style="text-align: center;">
                                            Value
                                        </th>
                                        <th style="text-align: center;">
                                            Ratio(%)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="report_data" t-as="obj">
                                        <tr>
                                            <td class="odo-bg-info" colspan="100%">
                                                <strong class="text-nowrap" t-esc="obj_value['product_name']"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="obj_value['sectors']" t-as="sec">
                                            <tr>
                                                <td>
                                                    <span class="text-nowrap" t-esc="sec['sector_name']"/>
                                                </td>
                                                <td class="text-right">
                                                    <span class="text-nowrap" t-esc="formatLang(sec['qty'])"/>
                                                </td>
                                                <td class="text-right">
                                                    <span class="text-nowrap" t-esc="formatLang(sec['val'])"/>
                                                </td>
                                                <td class="text-right">
                                                    <span class="text-nowrap" t-esc="formatLang(sec['ratio'])"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td>
                                                <strong class="text-nowrap">Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <strong class="text-nowrap"
                                                        t-esc="formatLang(sum(sec['qty'] for sec in obj_value['sectors']))"/>
                                            </td>
                                            <td class="text-right">
                                                <strong class="text-nowrap"
                                                        t-esc="formatLang(sum(sec['val'] for sec in obj_value['sectors']))"/>
                                            </td>
                                            <td class="text-right">
                                                <strong class="text-nowrap"
                                                        t-esc="formatLang(sum(sec['ratio'] for sec in obj_value['sectors']))"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
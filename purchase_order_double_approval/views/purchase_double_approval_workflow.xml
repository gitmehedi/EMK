<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		
		<record id="act_double_wait_1" model="workflow.activity">
            <field name="wkf_id" ref="purchase.purchase_order"/>
            <field name="name">WaitForApproval1</field>
            <field name="split_mode">OR</field>
            <field name="kind">function</field>
<!--             <field name="action">wkf_approval_1st()</field> -->
            <field name="action">write({'state':'confirmed1'})</field>
        </record>

       <record id="trans_draft_confirm_1" model="workflow.transition">
            <field name="act_from" ref="act_double_wait_1"/>
            <field name="act_to" ref="purchase.act_confirmed"/>
            <field name="signal">purchase_confirm_1</field>
            <field name="group_id" ref="purchase.group_purchase_user"/>
        </record> 
	    
	    <record id="purchase.trans_draft_confirmed" model="workflow.transition">
            <field name="act_from" ref="purchase.act_draft"/>
            <field name="act_to" ref="act_double_wait_1"/>
            <field name="signal">purchase_confirm</field>
        </record>
        

    </data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.cron" id="employee_birthday_reminder">
            <field name="name">Employee Birthday Notification</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 00:00:00')" />
            <field name="doall" eval="False"/>
            <field name="model" eval="'hr.employee'"/>
            <field name="function" eval="'mail_reminder'"/>
            <field name="args" eval="'()'" />
        </record>
        <record id="birthday_notification" model="mail.template">
            <field name="name">Birthday Notification For Employees</field>
            <field name="model_id" ref="birth_day_notification.model_hr_employee"/>
            <field name="subject">Birthday Notification</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
<div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
    <p>Dear ${object.name},</p>
    <p>Birthday Wishes</p>
    <p>Wishing you the very best as you celebrate your big day. Happy Birthday to you from all of us!</p>
</div>
<div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
    <p style="font-size: 11px; margin-top: 10px;">
    <br></br>
    Your Family at
        <strong>${user.company_id.name}</strong>
    </p>
</div>]]>
            </field>
            <field name="user_signature" eval="False"/>
        </record>
        <record model="ir.cron" id="employee_anniversary_reminder">
            <field name="name">Employee Anniversary Notification</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 00:00:00')" />
            <field name="doall" eval="False"/>
            <field name="model" eval="'hr.employee'"/>
            <field name="function" eval="'anniversary_mail_reminder'"/>
            <field name="args" eval="'()'" />
        </record>
        <record id="anniversary_notification" model="mail.template">
            <field name="name">Anniversary Notification For Employees</field>
            <field name="model_id" ref="birth_day_notification.model_hr_employee"/>
            <field name="subject">Anniversary Notification</field>
            <field name="body_html"><![CDATA[
            <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
            <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                <p>Dear ${object.name},</p>
                <p>Anniversary Wishes</p>
                <p>Hope you have a great Year Ahead. Stay Healthy, Stay Happy.Cheers.</p>
            </div>
            <div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
                <p style="font-size: 11px; margin-top: 10px;">
                <br></br>
                Your Family at
                    <strong>${user.company_id.name}</strong>
                </p>
            </div>]]>
            </field>
            <field name="user_signature" eval="False"/>
        </record>
        <record id="inherit_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.from</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='birthday']" position="after">
                    <field name="anniversary"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>




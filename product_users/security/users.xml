<?xml version="1.0" encoding='utf-8'?>
<odoo>
    <record id="module_category_products" model="ir.module.category">
        <field name="name">Products</field>
        <field name="sequence">90</field>
    </record>

    <record id="group_pro_gen_user" model="res.groups">
        <field name="name">Product: General User</field>
        <field name="sequence">1</field>
        <field name="category_id" ref="module_category_products"/>
        <field name="comment">General users will only see template,products and variants information.</field>
    </record>

    <record id="group_pro_officer" model="res.groups">
        <field name="name">Product: Officer</field>
        <field name="sequence">1</field>
        <field name="category_id" ref="module_category_products"/>
        <field name="comment">Officers can create,update and delete template,products and variants information.</field>
    </record>

    <record id="group_pro_manager" model="res.groups">
        <field name="name">Product: Manager</field>
        <field name="sequence">1</field>
        <field name="category_id" ref="module_category_products"/>
        <field name="comment">Manager can create,update and delete template,products and variants information.</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <template id="stock_distribution_to_shop">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <div class="row mb32">
                            <div class="col-xs-12">
                                <h2 class="text-center">Stock Distribution To Shop</h2>
                            </div>
                        </div>
                        <div class="row mb32" style="margin: 10mm 10mm 30mm 10mm;">
                            <div class="col-xs-6">
                                <p>
                                    <strong>Distribution Ref:</strong>
                                    <span t-esc="record['name']"/>
                                    <br/>
                                    <strong>Style No:</strong>
                                    <span t-esc="record['product_name']"/>
                                </p>
                            </div>
                            <div class="col-xs-5 col-xs-offset-1">
                                <p>
                                    <strong>Warehouse Name:</strong>
                                    <span t-esc="record['warehouse']"/>
                                </p>
                            </div>
                        </div>

                        <!-- Report Body -->

                        <table class="table table-bordered">
                            <thead>
                                <tr style="background-color: #EFECEB;">
                                    <th class="text-center">Product Name</th>
                                    <t t-foreach="config" t-as="conf">
                                        <th>
                                            <t t-esc="conf_value"/>
                                        </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="data" t-as="vals">
                                    <tr>
                                        <td>
                                            <t t-esc="vals_value['name']"/>
                                        </td>
                                        <t t-foreach="vals_value['value']" t-as="val">
                                            <td style="text-align: center;">
                                                <t t-esc="val_value['value']"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- End Report Body -->

                        <t t-call="custom_report.report_signing"></t>
                    </div>
                </t>
            </t>
        </template>

        <report id="action_report_stock_distribution_to_shop"
                string="Distribution To Shop "
                model="stock.distribution.to.shop"
                report_type="qweb-pdf"
                name="stock_distribution_matrix.stock_distribution_to_shop"
                file="stock_distribution_matrix.stock_distribution_to_shop"/>

        <record id="action_report_stock_distribution_to_shop" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="custom_report.paperformat_pebbles_backend"/>
        </record>
    </data>
</openerp>
<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <template id="stock_distribution_to_shop">
            <t t-call="report.html_container">
                <div class="page">
                    <div class="row mb32">
                        <div class="col-xs-12">
                            <h2 class="text-center">Stock Distribution To Shop</h2>
                        </div>
                    </div>
                    <div class="row mb32" style="margin: 10mm 10mm 30mm 10mm;">
                        <div class="col-xs-6">
                            <p>
                                <strong>Distribution Reference:</strong>
                                <span t-esc="record['name']"/>
                                <br/>
                                <strong>Style No:</strong>
                                <span t-esc="record['product_name']"/>
                            </p>
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                            <p>
                                <strong>Warehouse Name:</strong>
                                <span t-esc="record['warehouse']"/>
                            </p>
                        </div>
                    </div>

                    <!-- Report Body -->

                    <table class="table table-bordered">
                        <thead>
                            <tr style="background-color: #D8D5D4;">
                                <th class="text-center">Product Name</th>
                                <t t-foreach="config" t-as="conf">
                                    <th>
                                        <t t-esc="conf_value"/>
                                    </th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="data" t-as="vals">
                                <tr>
                                    <td>
                                        <t t-esc="vals_value['name']"/>
                                    </td>
                                    <t t-foreach="vals_value['value']" t-as="val">
                                        <td style="text-align: center;">
                                            <t t-esc="val_value['value']"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="row mb32" style="margin: 30mm 10mm 10mm 10mm;">
                        <div class="col-xs-6">
                            <p>
                                <strong>Signature:
                                    <span style="color: ash;">_______________________</span>
                                </strong>
                                <br/>
                                <br/>
                                <br/>
                                <strong>Transfered By:
                                    <span style="color: ash;">_______________________</span>
                                </strong>

                            </p>
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                            <p>
                                <strong>Signature:
                                    <span style="color: ash;">_______________________</span>
                                </strong>
                                <br/>
                                <br/>
                                <br/>
                                <strong>Received By:
                                    <span style="color: ash;">_______________________</span>
                                </strong>
                            </p>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
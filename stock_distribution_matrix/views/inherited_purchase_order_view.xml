<openerp>
    <data>
        <record id="inherited_purchase_order_quantity_form" model="ir.ui.view">
            <field name="name">inherited.purchase.order.quantity.form</field>
            <field name="model">purchase.order</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/sheet/notebook/page[@string='Deliveries &amp; Invoices']" position="after">
                        <page string="Quantity">
                            <field name="order_quantity_ids">
                                <tree string="Purchase Order Quantity" editable="top">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="rule_warehouse_to_shop_distribution_by_manager" model="ir.rule">
            <field name="name">Warehouse to Shop Distribution by Manager</field>
            <field name="model_id" ref="model_warehouse_to_shop_distribution"/>
            <field name="groups" eval="[(4,ref('pebbles_transfer_user.group_requisition_transfer_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('shop_id','in', [rec.id for rec in user.operating_unit_ids]),('state','in', ['transfer','received'])]</field>
        </record>

        <record id="rule_warehouse_to_shop_distribution_by_manager_line" model="ir.rule">
            <field name="name">Warehouse to Shop Distribution Line by Manager</field>
            <field name="model_id" ref="model_warehouse_to_shop_distribution_line"/>
            <field name="groups" eval="[(4,ref('pebbles_transfer_user.group_requisition_transfer_user'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <record id="rule_warehouse_to_shop_distribution_by_warehouse" model="ir.rule">
            <field name="name">Warehouse to Shop Distribution by Manager</field>
            <field name="model_id" ref="model_warehouse_to_shop_distribution"/>
            <field name="groups" eval="[(4,ref('stock.group_stock_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[('warehouse_id.operating_unit_id','in', [rec.id for rec in user.operating_unit_ids])]</field>
        </record>

        <record id="rule_warehouse_to_shop_distribution_line_by_warehouse" model="ir.rule">
            <field name="name">Warehouse to Shop Distribution Line by Manager</field>
            <field name="model_id" ref="model_warehouse_to_shop_distribution_line"/>
            <field name="groups" eval="[(4,ref('stock.group_stock_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</openerp>
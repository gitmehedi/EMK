<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<template id="report_individual_payslip1">
			<t t-call="report.external_layout">
				<t t-call="report.html_container">
					<t t-name="external_layout_header">
						<div class="header">
							<div class="row">
								<div class="col-xs-4 col-xs-offset-8">
									<h5>Individual Payslip Summary Report</h5>
								</div>
							</div>
						</div>
					</t>
					<t t-name="report.external_layout">
						<div class="page">

							<p>Payslip Bank Letter for: <span t-esc="bank_name"></span></p>
							<div class="row">
								<table class="table table-bordered">
									<thead>
										<tr
											style="background-color:#B4FDF0; 
												border-bottom: 1px solid #030303;">
											<th>SN</th>
											<th>Employee</th>
											<th>Designation</th>
											<th>Bank A/C</th>
											<th>Net</th>

										</tr>
									</thead>
									<tbody>

										<t t-foreach="docs" t-as="k">
											<t t-if="k['val']">
												<t t-foreach="k['val']" t-as="o">
													<tr>
														<td><span t-esc="o['sn']"></span></td>
														<td><span t-esc="o['emp_name']"></span></td>
														<td><span t-esc="o['designation']"></span></td>
														<td><span t-esc="o['acc_no']"></span></td>

														<td class="text-right">
																<span t-esc="'%.2f'% o['NET']"></span>
															</td>
													</tr>
												</t>
											</t>
										</t>

									</tbody>
								</table>
							</div>
						</div>
					</t>
				</t>
			</t>

		</template>
	</data>
</openerp>
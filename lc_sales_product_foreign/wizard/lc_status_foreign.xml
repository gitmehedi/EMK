<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="lc_status_wizard_view" model="ir.ui.view">
            <field name="name">lc.status.wizard</field>
            <field name="model">lc.status.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Foreign LC Status">
                    <group>
                        <group>
                            <field name="status"/>
                            <field name="product_id" placeholder="All" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="month"/>
                            <field name="year"/>
                        </group>
                    </group>
                    <footer>
                        <button name ="process_print" string="Print" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_lc_status_wizard" model="ir.actions.act_window">
            <field name="name">LC Status(Foreign) Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lc.status.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_lc_status_wizard"
                  id="menu_lc_status_wizard"
                  parent="letter_of_credit.lc_report_menu_root"
                  sequence="12"/>
    </data>
</odoo>
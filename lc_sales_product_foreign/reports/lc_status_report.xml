<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main template -->
    <template id="lc_status_foreign_template">
        <t t-call="report.html_container">
            <t t-call="report_layout.gbs_internal_layout">
                <div class="page" style="page-break-inside:auto">
                    <div class="row">
                        <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                        </style>
                        <div class="clearfix">
                            <h4 class="report-title">Foreign LC Status Report</h4>
                            <div class="row" style="padding-top:40px; padding-bottom:5px;">
                                <div class="col-xs-6 text-left">
                                    <t t-if="data['pur_month']">
                                        <strong>Month :</strong>
                                        <t t-if="data['pur_month'] == '1'">January</t>
                                        <t t-if="data['pur_month'] == '2'">February</t>
                                        <t t-if="data['pur_month'] == '3'">March</t>
                                        <t t-if="data['pur_month'] == '4'">April</t>
                                        <t t-if="data['pur_month'] == '5'">May</t>
                                        <t t-if="data['pur_month'] == '6'">June</t>
                                        <t t-if="data['pur_month'] == '7'">July</t>
                                        <t t-if="data['pur_month'] == '8'">August</t>
                                        <t t-if="data['pur_month'] == '9'">September</t>
                                        <t t-if="data['pur_month'] == '10'">October</t>
                                        <t t-if="data['pur_month'] == '11'">November</t>
                                        <t t-if="data['pur_month'] == '12'">December</t>
                                    </t>
                                    <br/>
                                    <t t-if="data['pur_year']">
                                        <strong>Year :</strong>
                                        <t t-if="data['pur_year'] == '1'">2019</t>
                                        <t t-if="data['pur_year'] == '2'">2020</t>
                                        <t t-if="data['pur_year'] == '3'">2021</t>
                                        <t t-if="data['pur_year'] == '4'">2022</t>
                                        <t t-if="data['pur_year'] == '5'">2023</t>
                                        <t t-if="data['pur_year'] == '6'">2024</t>
                                        <t t-if="data['pur_year'] == '7'">2025</t>
                                        <t t-if="data['pur_year'] == '8'">2026</t>
                                        <t t-if="data['pur_year'] == '9'">2027</t>
                                        <t t-if="data['pur_year'] == '10'">2028</t>
                                        <t t-if="data['pur_year'] == '11'">2029</t>
                                        <t t-if="data['pur_year'] == '12'">2030</t>
                                    </t>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <strong>Product :</strong>
                                    <t t-if="not data['product_id']">All</t>
                                    <t t-foreach="data['product_id']" t-as="unit">
                                        <t t-esc="unit"/>
                                    </t>
                                    <br/>
                                    <strong>Status :</strong>
                                    <t t-if="data['status'] == 'active'">Active</t>
                                    <t t-if="data['status'] == 'done'">Done</t>
                                    <t t-if="data['status'] == 'cancel'">Cancel</t>
                                </div>
                            </div>
                        </div>
                        <table class="table table-report-xs table-bordered table-striped">
                            <thead>
                                <tr class="odo-bg-gray">
                                    <th class="text-center">SL</th>
                                    <th class="text-center">LC NO</th>
                                    <th class="text-center">LC Date</th>
                                    <th class="text-center">Party Name</th>
                                    <th class="text-center">LC Quantity</th>
                                    <th class="text-center">PI No.</th>
                                    <th class="text-center">PI Date</th>
                                    <th class="text-center">Delivery Qty</th>
                                    <th class="text-center">Pending Qty</th>
                                    <th class="text-center">Last SP.Date</th>
                                    <th class="text-center">LC Expiry Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lc_list" t-as="data">
                                    <tr>
                                        <td>
                                            <span t-esc="data_index+1"/>
                                        </td>
                                        <td>
                                            <span t-esc="data['lc_name']"/>
                                        </td>
                                        <td>
                                            <span t-esc="data['lc_date']"/>
                                        </td>
                                        <td>
                                            <t t-esc="data['first_party']"/>
                                        </td>
                                        <td>
                                            <span t-esc="data['lc_qty']"/>
                                        </td>
                                        <td>
                                            <span t-esc="data['pi_no']"/>
                                        </td>
                                        <td>
                                            <span t-esc="data['pi_date']"/>
                                        </td>
                                        <td>
                                            <span t-esc="data['delivery_qty']"/>
                                        </td>
                                        <td>
                                            <t t-esc="data['pending_qty']"/>
                                        </td>
                                        <td>
                                            <span t-esc="data['lst_sp_date']"/>
                                        </td>
                                        <td>
                                            <span t-esc="data['lc_expiry_date']"/>
                                        </td>
                                    </tr>
                                    <td colspan="9">Total</td>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report
            id="action_purchase_summary_template"
            model="hr.employee"
            string="Purchase Summary"
            report_type="qweb-pdf"
            menu="False"
            name="lc_sales_product_foreign.lc_status_foreign_template"
            file="lc_sales_product_foreign.lc_status_foreign_template"
            paperformat="report_layout.paperformat_backend_portrait"
    />
</odoo>
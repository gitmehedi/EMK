<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <report
                id="action_beneficiary_certificate"
                string="Beneficiary Certificate"
                model="purchase.shipment"
                report_type="qweb-pdf"
                file="lc_sales_product_foreign.report_beneficiary_certificate"
                name="lc_sales_product_foreign.report_beneficiary_certificate"
                paperformat="report_layout.custom_pad_paperformat"
                menu="False"

        />

        <template id="report_beneficiary_certificate">
            <t t-call="report.html_container">
                <t t-call="report_layout.gbs_custom_pad_report_template">
                    <div class="page" style="page-break-inside: auto; text-transform: uppercase;">
                        <style>
                            .auth-signature { padding: 5px; border-top: 1px dashed #333; float: right; }
                        </style>
                        <div class="beneficiary-certf">
                            <div class="report-title">
                                <h4 class="mt-0">
                                    <b>
                                        <u>Beneficiary Certificate/DESPATCH NOTE/SHIPMENT ADVICE</u>
                                    </b>
                                </h4>
                                <t t-if="data['lc_clause']">
                                    <h6 class="mt-0">
                                        <strong t-esc="data['lc_clause']"/>
                                    </h6>
                                </t>
                            </div>
                            <br/>
                            <div>
                                <p><b>Date: </b>
                                    <strong t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                </p>
                                <div>
                                    <p><b>To: </b><strong t-esc="data['insurance_company_name']"/>,
                                        <strong t-raw="data['insurance_company_address']"/>
                                    </p>
                                </div>
                                <div>
                                    <h5>
                                        <b>
                                            <u>(INSURANCE OPEN POLICY NO.: <strong t-esc="data['insurance_number']"/>
                                                DATE: <strong t-esc="data['insurance_policy_date']"/>
                                            </u>
                                        </b>
                                    </h5>
                                </div>
                                <br/>
                                <div>
                                    <p>
                                        <b>RE:</b>
                                        <t t-foreach="lists" t-as="l">
                                            <strong t-esc="l['quantity']"/>
                                            <strong t-esc="l['uom']"/>
                                            <span t-esc="l['name']"/>
                                            <t t-if="len(lists)>1">,</t>
                                        </t>
                                        DESPATCHED UNDER LC NO:
                                        <strong t-esc="data['lc_id']"/>,
                                        <strong>DATE:</strong>
                                        <strong t-esc="data['issue_date']"/>
                                        <b>(INSURANCE OPEN POLICY NO.: <strong t-esc="data['insurance_number']"/>, DATE:
                                            INSURANCE DATE) OF
                                            <strong t-esc="data['second_party_bank']"/>
                                        </b>
                                        GOODS ARE UNDER H.S.CODE NO:
                                        <t t-foreach="lists" t-as="l">
                                            <strong t-esc="l['hs_code']"/>.
                                        </t>
                                        <t t-if="len(lists)>1">,</t>
                                        <t t-if="data['partial_shipment'] == True">
                                            (Partial Shipment:
                                            <span t-esc="data['shipment_number']"/>)
                                        </t>
                                    </p>
                                </div>
                                <br/>
                                <table class="mb-0">
                                    <tbody>
                                        <tr>
                                            <td class="w75px">A/C:</td>
                                            <td>
                                                <strong t-esc="data['second_party_applicant']"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>ADDRESS:
                                                <span t-esc="data['invoice_address']"/>
                                            </td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br/>
                                <div>
                                    <p>
                                        THIS IS TO CERTIFY THAT GOODS DESPATCHED STRICTLY AS PER OUR PROFORMA INVOICE:
                                        <t t-foreach="pi_list" t-as="p">
                                            <strong t-esc="p['number']"/>
                                            <b>,DATE:</b>
                                            <strong t-esc="p['date']"/>
                                        </t>
                                        <t t-if="len(pi_list)>1">,</t>
                                    </p>
                                </div>
                            </div>
                            <hr class="hr-xs"/>
                            <br/>
                            <div class="text-center">
                                <p>
                                    <b>
                                        <u>DESPATCH NOTE/SHIPMENT ADVICE</u>
                                    </b>
                                </p>
                            </div>
                            <br/>
                            <table class="mb-0">
                                <tbody>
                                    <p><tr>
                                        <td class="w200px">
                                            <span t-esc="data['model_type']"/>
                                            NO
                                        </td>
                                        <td>
                                            :   <strong t-esc="data['lc_id']"/>,
                                            <strong>DATE: </strong>
                                            <strong t-esc="data['issue_date']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">Goods   </td>
                                        <td>
                                            <t t-foreach="lists" t-as="l">
                                                :   <span t-esc="l['name']"/>
                                                <t t-if="len(lists)>1">,</t>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">H.S.CODE   </td>
                                        <td>
                                            <t t-foreach="lists" t-as="l">
                                                :   <span t-esc="l['hs_code']"/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">Buyer Name   </td>
                                        <td>
                                            :   <strong t-esc="data['second_party_applicant']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">BL No.   </td>
                                        <td>
                                            :   <strong t-esc="data['truck_receipt_no']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">CONTAINER No.   </td>
                                        <td>
                                            :   <strong t-esc="data['container_no']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">LOADING/CARRYING VESSEL   </td>
                                        <td>
                                            :   <strong t-esc="data['truck_receipt_no']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">ETD <span t-esc="data['landing_port']"/> (DATE OF SHIPMENT)   </td>
                                        <td>
                                            :   <strong t-esc="data['etd_date']"/>
                                        </td>
                                    </tr>
                                    <t t-if="data['trans_shipment']== True">
                                        <tr>
                                            <td class="w200px">ETA <SPAN t-esc="data['transshipment_country_id']"/>   </td>
                                            <td>
                                                :   <strong t-esc="data['eta_trans_shipment_date']"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="w200px">MOTHER VESSEL   </td>
                                            <td>
                                                :   <strong t-esc="data['mother_vessel']"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="w200px">ETD <SPAN t-esc="data['transshipment_country_id']"/>   </td>
                                            <td>
                                                :   <strong t-esc="data['etd_trans_shipment_date']"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td class="w200px">ETA <span t-esc="data['discharge_port']"/>,<span t-esc="data['discharge_port_country_id']"/>   </td>
                                        <td>
                                            :   <strong t-esc="data['eta_date']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">GROSS WEIGHT   </td>
                                        <td>
                                            :   <strong t-esc="data['gross_weight']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">NET WEIGHT   </td>
                                        <td>
                                            :   <strong t-esc="data['net_weight']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">PORT OF LOADING   </td>
                                        <td>
                                            :   <span t-esc="data['landing_port']"/>,<strong t-esc="data['landing_port_country_id']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w200px">PORT OF DESTINATION   </td>
                                        <td>
                                            :   <span t-esc="data['discharge_port']"/>,<span t-esc="data['discharge_port_country_id']"/>
                                        </td>
                                    </tr></p>
                                </tbody>
                            </table>
                            <br/>
                            <hr class="hr-xs"/>
                            <br/>

                            <div class="row text-right">
                                <div class="col-xs-12 text-right">
                                    <p>For and on behalf of
                                        <br/>
                                        <span t-esc="data['first_party']"/>
                                    </p>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <p class="auth-signature">Authorized Signature</p>
                                </div>
                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
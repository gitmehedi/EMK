<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <report
                id="action_commercial_invoice"
                string="Commercial Invoice"
                model="purchase.shipment"
                report_type="qweb-pdf"
                file="lc_sales_product_foreign.report_commercial_invoice"
                name="lc_sales_product_foreign.report_commercial_invoice"
                paperformat="report_layout.custom_pad_paperformat"
                menu="False"

        />

        <template id="report_commercial_invoice">
            <t t-call="report.html_container">
                <t t-call="report_layout.gbs_custom_pad_report_template">
                    <div class="page" style="page-break-inside: auto;text-transform: uppercase;">
                        <style>
                            .auth-signature { padding: 5px 0; border-top: 1px dashed #333; float: right; }
                        </style>
                        <div class="commercial-invo">
                            <div class="report-title">
                                <h3 class="mt-0"><b>Commercial Invoice</b></h3>
                            </div>
                            <table class="table table-bordered mb-0">
                                <tr>
                                    <td class="w50">
                                        <p><strong><u>Exporter</u></strong></p>
                                        <p><strong t-esc="data['company_id']"/> <br/>
                                            <span t-esc="data['factory']"/></p>
                                        <br/>
                                        <p><strong><u>Importer</u></strong></p>
                                        <p><strong t-esc="data['buyer']"/> <br/>
                                           <span t-esc="data['buyer_address']"/></p>
                                        <t t-if="data['ntn_no']">
                                            <p><b>NTN No: </b><span t-esc="data['ntn_no']"/></p>
                                        </t>
                                        <t t-if="data['gst_no']">
                                            <p><b>GST No: </b><span t-esc="data['gst_no']"/></p>
                                        </t>
                                        <t t-if="data['iec_no']">
                                            <p><b>IEC No: </b><span t-esc="data['iec_no']"/></p>
                                        </t>
                                    </td>

                                    <td class="w50 p-0">
                                        <table class="table table-bordered mb-0">
                                            <tr class="odo-bg-gray">
                                                <td class="w50 bt-0">
                                                    Invoice No: <strong t-esc="data['invoice_number_dummy']"/>
                                                </td>
                                                <td class="w50 bt-0">
                                                    Date: <strong t-esc="data['invoice_date_dummy']"/>
                                                </td>
                                            </tr>
                                            <tr class="odo-bg-gray">
                                                <td>
                                                    <p><u><b>Place/Port of Loading:</b></u> <br/>
                                                        <span t-esc="data['landing_port']"/>,<span t-esc="data['landing_port_country_id']"/>
                                                    </p>
                                                    <p><u><b>Payment Terms: </b></u><br/>
                                                        <span t-esc="data['payment_terms']"/>
                                                    </p>
                                                </td>
                                                <td>
                                                    <p><u><b>Place/Port of Discharge:</b></u> <br/>
                                                        <span t-esc="data['discharge_port']"/>,
                                                        <span t-esc="data['discharge_port_country_id']"/>
                                                    </p>


                                                </td>
                                            </tr>
                                            <tr class="odo-bg-gray">
                                                <td>
                                                    <p><b><u>Packing:</u></b> <br/>
                                                        Export Standard Packing
                                                        <t t-foreach="pi_id_list" t-as="r">
                                                            (<span t-esc="r['pack_type']"/><t t-if="len(pi_id_list)>1">,<br/></t>)
                                                        </t><br/>
                                                        <t t-if="data['not_for_medical_use'] == True">
                                                            (Not For Medical Use)
                                                        </t>
                                                    </p>
                                                </td>
                                                <td>
                                                    <p><b><u>Partial Shipment:</u></b> <br/>
                                                        <span t-esc="data['shipment_number']"/>
                                                    </p>
                                                </td>
                                            </tr>
                                            <tr class="odo-bg-gray">
                                                <td>
                                                    <p><u><b>Marine Cover Note No:</b></u> <br/>
                                                        <span t-esc="data['cover_note_no']"/><br/>
                                                        Date: <span t-esc="data['insurance_date']"/>
                                                    </p>
                                                </td>
                                                <td>
                                                    <p><u><b>BL No.</b></u> <br/>
                                                        <span t-esc="data['truck_receipt_no']"/><br/>
                                                        Date: <span t-esc="data['bl_date']"/>                                             </p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <div>
                                            <p>We certify that the goods supplied are strictly
                                                in accordance with the Proforma Invoice No.
                                            <t t-foreach="pi_id_list" t-as="r">
                                                <strong t-esc="r['pi_id']"/>
                                                Date: <strong t-esc="r['pi_date']"/>
                                            </t></p>
                                        </div>
                                        <div>
                                            <span t-esc="data['declaration']"/>
                                        </div>
                                    </td>
                                    <td class="bl-1 bl-r">
                                        <div>
                                            <p>
                                                <t t-if = "data['model_type'] == 'lc'">
                                                    Drawn under the LC No.:
                                                </t>
                                                <t t-elif = "data['model_type'] == 'tt'">
                                                    Delivery under confirmation of TT No.:
                                                </t>
                                                <t t-elif = "data['model_type'] == 'sales_contract'">
                                                    <t t-if = "data['sc_type'] == 'sc'">
                                                        Drawn under the sales contract No.:
                                                    </t>
                                                    <t t-elif = "data['sc_type'] == 'pi'">
                                                        Drawn under the proforma invoice No.:
                                                    </t>
                                                    <t t-elif = "data['sc_type'] == 'po'">
                                                        Drawn under the purchase order No.:
                                                    </t>
                                                </t>
                                                <br/>
                                                <strong t-esc="data['lc_id']"/> Date: <strong t-esc="data['lc_date']"/> <br/>
                                                <t t-foreach="lc_revision_list" t-as="r">
                                                    <strong>
                                                        Number of Amendment :<span t-esc="r['no']"/> &amp; Date :<span t-esc="r['date']"/> <br/>
                                                    </strong>
                                                </t>
                                                <span style="padding-left:25%">of</span> <br/>
                                                <span t-esc="data['second_party_bank']"/>
                                            </p>
                                        </div>
                                    </td>
                                </tr>
                            </table>

                            <!--<hr class="hr-xxs"/>-->
                            <h5 class="text-left"><u><b>Description of Goods</b></u></h5>

                            <table class="table table-report-sm table-bordered table-striped m-middle">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th class="w50">Products</th>
                                        <th class="text-center w10">Qty</th>
                                        <th class="text-center w10">UoM</th>
                                        <th class="text-center w10">H.S Code</th>
                                        <th class="text-center w10">Unit Price</th>
                                        <th class="text-center w10">Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid">
                                            <td>
                                                <span t-esc="l['name']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="l['quantity']"/>
                                            </td>
                                            <td>
                                                <span t-esc="l['product_uom']"/>
                                            </td>
                                            <td>
                                                <span t-esc="l['hs_code']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="l['unit_price']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="l['sub_total_price']"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="5" class="text-right">Total CFR
                                            <t t-if="data['fob_value']">(FOB <span t-esc="data['fob_value']"/></t>
                                            <t t-if="data['feright_value']">+Feright <span t-esc="data['feright_value']"/>)</t>
                                        </td>
                                        <td class="text-right">
                                            <strong t-esc=" '%.2f' %data['invoice_value']"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <p>
                                In Words: <span t-esc="data['currency_id']"/> <strong t-esc="amt_to_word"/> <strong>only</strong>
                            </p>
                            <hr class="hr-xs mb-10"/>
                            <div class="text-left">
                                <p><u><strong t-esc="data['cylinder_details_label']"/></u></p>
                                <p class="m-0 p-0" t-raw="data['cylinder_details']"/>
                            </div><br/>

                            <div class="text-right">
                                <p>For and on behalf of <br/>
                                    <span t-esc="data['company_id']"/>
                                </p>
                                <br/>
                                <br/>
                                <br/>
                                <p class="auth-signature">Authorised Signature</p>
                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
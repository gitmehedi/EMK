<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <act_window name="Print Reports (Foreign)"
                    res_model="lc.sales.report.foreign.wizard"
                    src_model="purchase.shipment"
                    view_mode="form" target="new"
                    view_type="form"
                    view_id="lc_sales_report_foreign_wizard_view"
                    groups="gbs_application_group.group_export_foreign_lc"
                    id="act_lc_sales_foreign_report"/>

        <record id="view_shipment_export_form" model="ir.ui.view">
            <field name="name">purchase.shipment.form</field>
            <field name="model">purchase.shipment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Shipment" delete="false" copy='0' create="false">
                    <link rel="stylesheet" href="/lc_sales_product_foreign/static/src/css/lc_foreign_style.css"></link>
                    <style>

                        .gbs-goods-condition {
                        font-size: 13px !important;
                        color: #4c4c4c !important;
                        }
                    </style>
                    <header>

                        <button string="To Draft" name="action_draft_local_sales" type="object"
                                attrs="{'invisible': [('state', 'in', ('draft'))]}"
                                groups="base_technical_features.group_technical_features"/>
                        <button string="To Email" name="action_email_temp" type="object" class="oe_read_only"/>
                        <button string="Delivery" name="action_doc_receive_export_foreign" states="draft" type="object"
                                class="oe_highlight"/>
                        <button string="Add Invoice" name="action_add_invoice_export_foreign" states="receive_doc"
                                type="object" class="oe_highlight"/>

                        <!--<button string="To Sales" name="action_to_sales_export_foreign" states="add_invoice" type="object" class="oe_highlight"/>-->
                        <!--<button string="To Buyer" name="action_to_buyer_export_foreign" states="to_sales" type="object" class="oe_highlight"/>-->

                        <button string="To Seller Bank" name="action_to_seller_bank_export_foreign" states="add_invoice"
                                type="object" class="oe_highlight"/>
                        <button string="To Buyer Bank" name="action_to_buyer_bank_export_foreign"
                                states="to_seller_bank" type="object" class="oe_highlight"/>
                        <button string="To Maturity" name="action_to_maturity_export_foreign" states="to_buyer_bank"
                                type="object" class="oe_highlight"/>
                        <button string="Done" name="action_done_export_foreign" states="to_maturity" type="object"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,receive_doc,add_invoice,to_seller_bank,to_buyer_bank,to_maturity,done"/>
                        <button string="Cancel" name="action_cancel"
                                class="btn-primary btn-danger mr24 pull-right oe_read_only" type="object"
                                attrs="{'invisible': [('state', 'in', ('done', 'cancel'))]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"></div>
                        <group name="details">
                            <group string="Shipment Details" colspan="4">
                                <group>
                                    <field name="lc_id"
                                           options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    <field name="name" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                </group>
                                <table class="o_group o_inner_group o_group_col_6">
                                    <tbody>
                                        <tr>
                                            <td colspan="1" class="o_td_label">
                                                <b>ETD
                                                (<field name="landing_port_country_id" required="1" class="oe_inline" nolable="1"
                                                        readonly="1" style="text-decoration: none; !important"/>)</b>
                                            </td>
                                            <td colspan="1" style="width: 100%;">
                                                <field name="etd_date" string="ETD" class="oe_inline" nolable="1"
                                                               attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                            </td>
                                        </tr>
                                        <tr attrs="{'invisible': [('trans_shipment', '!=', True)]}">
                                            <td colspan="1" class="o_td_label">
                                                <b>ETA
                                                (<field name="shipment_country_id" class="oe_inline" nolable="1"
                                                               readonly="1" />)</b>
                                            </td>
                                            <td colspan="1" style="width: 100%;">
                                                <field name="eta_trans_shipment_date" string="ETA" nolable="1" class="oe_inline"
                                                               attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                            </td>
                                        </tr>
                                        <tr attrs="{'invisible': [('trans_shipment', '!=', True)]}">
                                            <td colspan="1" class="o_td_label">
                                                <b>Mother Vessel</b>
                                            </td>
                                            <td colspan="1" style="width: 100%;">
                                                <field name="mother_vessel" string="Mother Vessel" nolable="1" class="oe_inline"
                                                               attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                            </td>
                                        </tr>
                                        <tr attrs="{'invisible': [('trans_shipment', '!=', True)]}">
                                            <td colspan="1" class="o_td_label">
                                                <b>ETD
                                                (<field name="transshipment_country_id" class="oe_inline" nolable="1"
                                                               readonly="1"/>)</b>
                                            </td>
                                            <td colspan="1" style="width: 100%;">
                                                <field name="etd_trans_shipment_date" string="ETA" class="oe_inline" nolable="1"
                                                               attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="1" class="o_td_label">
                                                <b>ETA
                                                (<field name="discharge_port_country_id" required="1" class="oe_inline" nolable="1"
                                                               readonly="1"/>)</b>
                                            </td>
                                            <td colspan="1" style="width: 100%;">
                                                <field name="eta_date" string="ETA" class="oe_inline" nolable="1"
                                                               attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <separator class="gbs-goods-condition" string="Remarks/Status"/>
                                <field name="comment" nolabel="1"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                            </group>
                            <!---->
                            <group string="Acceptance Info">
                                <field name="to_seller_bank_date" readonly="1"/>
                                <field name="to_buyer_bank_date" readonly="1"/>
                                <field name="trans_shipment" invisible="1"/>
                            </group>
                            <group string="Maturity Info">
                                <field name="to_maturity_date" readonly="1"/>
                                <field name="bill_id" readonly="1"/>
                            </group>

                            <group string="Invoice">
                                <field name="invoice_number_dummy" string="Number (Dummy)"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <field name="invoice_date_dummy" string="Date (Dummy)"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <field name="invoice_id" readonly="1"
                                       options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="invoice_value" required="1"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <field name="feright_value" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <field name="fob_value" readonly="1"/>
                                <field name="is_print_cfr" required="1" invisible="1"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                            </group>

                            <group string="Transport Info">
                                <field name="transport_by" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <field name="vehical_no" string="Vehicle/Vessel Name"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <field name="truck_receipt_no"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <field name="bl_date"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <field name="container_no"
                                       attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                <!--<field name="mother_vessel"-->
                                       <!--attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>-->
                            </group>
                            <group string="Packing Details" colspan="4">
                                <group>
                                    <field name="gross_weight" required="1"
                                           attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                    <field name="net_weight" required="1"
                                           attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                </group>
                                <group>
                                    <field name="weight_uom" required="1"
                                           attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"
                                           options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                </group>
                            </group>
                            <group colspan="4">
                                <p>
                                    <b>Total(Jar/Drum/Bag/Bulk): &#x2063;&#x2063;</b>
                                    <field name="count_qty" required="1" class="oe_inline" nolable="1"
                                           style="width: 70px !important"
                                           attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                    &#x2063;&#x2063;<field name="count_uom" required="1" class="oe_inline" nolable="1"
                                                           style="width: 80px !important"
                                                           attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"
                                                           options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                </p>
                            </group>

                            <separator class="gbs-goods-condition" string="Cylinder Details"/>
                            <field name="cylinder_details" widget="html" nolabel="1"
                                   attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>

                            <notebook colspan="4">
                                <page string="Products">
                                    <field name="shipment_product_lines">
                                        <tree string="Purchase Order Lines" create="false" delete="false"
                                              editable="false">
                                            <field name="product_id" readonly='1'/>
                                            <field name="name" readonly='1'/>
                                            <field name="date_planned" readonly='1'/>
                                            <field name="product_qty" string="Qty" readonly='1'/>
                                            <field name="product_uom" string="UOM" readonly='1'/>
                                            <field name="price_unit" invisible='1'/>
                                        </tree>

                                    </field>
                                    <div class="oe_clear"/>
                                </page>
                                <!--<page string="Attachments">-->
                                <!--<field name="shipment_attachment_ids" widget="one2many_list" class="lc_attachment" context="{'default_res_id': id, 'default_res_model': 'purchase.shipment'}">-->
                                <!--<tree string="Attachments" editable="top">-->
                                <!--<field name="res_id" invisible="1"/>-->
                                <!--<field name="res_model" invisible="1"/>-->
                                <!--<field name="name" string="Title"/>-->
                                <!--<field name="datas_fname" invisible="1"/>-->
                                <!--<field name="db_datas" filename="datas_fname" string="File"/>-->
                                <!--</tree>-->
                                <!--</field>-->
                                <!--</page>-->
                                <page string="Remarks">
                                    <field name="comments" widget="html" options="{'style-inline': true}"
                                           attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                                </page>

                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>
    </data>
</odoo>
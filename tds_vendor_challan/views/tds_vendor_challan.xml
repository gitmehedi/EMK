<odoo>
    <data>

        <record model="ir.ui.view" id="tds_vendor_challan_tree_view">
            <field name="name">tds_vendor_challan_list</field>
            <field name="model">tds.vendor.challan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="supplier_id"/>
                    <field name="sub_operating_unit_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tds_vendor_challan_form_view">
            <field name="name">tds_vendor_challan_from_view</field>
            <field name="model">tds.vendor.challan</field>
            <field name="arch" type="xml">
                 <form string="TDS Vendor Challan">
                    <header>
                        <!--<button name="action_confirm" type="object"-->
                                <!--string="Confirm" states="draft"-->
                                <!--class="oe_highlight"/>-->
                        <button string="Deposit" name="action_confirm" type="object" class="oe_read_only"
                                attrs="{'invisible': [('state', 'in', ('draft'))]}"/>
                        <button string="Distribute" name="action_confirm" type="object" class="oe_read_only"
                                attrs="{'invisible': [('state', 'in', ('draft,deposited'))]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <!--<div class="oe_title">-->
                            <!--<label class="oe_edit_only" for="name" string="Name"/>-->
                            <!--<h1><field name="name" placeholder="Name"/></h1>-->
                            <!--</div>-->
                        <group>
                            <group>
                                <field name="supplier_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="sub_operating_unit_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Details">
                                <group>
                                    <field name="line_ids" nolabel="1">
                                        <tree string="List" editable="bottom">
                                            <field name="provider_id"/>
                                            <field name="total_bill"/>
                                            <field name="undistributed_bill"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tds_vendor_challan_action">
            <field name="name">TDS Vendor Challan</field>
            <field name="res_model">tds.vendor.challan</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem
                name="Challan"
                parent="account.account_account_menu"
                action="tds_vendor_challan_action"
                id="tds_challan_menu"
                sequence="11" />

    </data>
</odoo>
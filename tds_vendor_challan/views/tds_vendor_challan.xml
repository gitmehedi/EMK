<odoo>
    <data>

        <record model="ir.ui.view" id="tds_vendor_challan_tree_view">
            <field name="name">tds_vendor_challan_list</field>
            <field name="model">tds.vendor.challan</field>
            <field name="arch" type="xml">
                <tree delete="false" create="false" edit="false">
                    <field name="date"/>
                    <field name="supplier_id"/>
                    <field name="operating_unit_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tds_vendor_challan_form_view">
            <field name="name">tds_vendor_challan_from_view</field>
            <field name="model">tds.vendor.challan</field>
            <field name="arch" type="xml">
                 <form string="TDS Vendor Challan" create="false" edit="false">
                    <header>
                        <button string="Deposit" name="action_deposited" type="object"
                                states="draft" class="oe_highlight"/>
                        <button string="Distribute" name="action_distributed" type="object"
                                states="deposited" class="oe_highlight"/>
                        <button string="Cancel" name="action_distributed" type="object"
                                states="draft,deposited" class="btn-default"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,deposited,distributed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="supplier_id" readonly="1"
                                       options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                <field name="operating_unit_id" readonly="1"
                                       options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                <field name="deposit_approver" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                                <field name="distribute_approver" attrs="{'invisible': [('state', 'in', ('draft','deposited'))]}"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="deposit_date" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                                <field name="distribute_date" attrs="{'invisible': [('state', 'in', ('draft','deposited'))]}"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Details">
                                <group>
                                    <field name="line_ids" nolabel="1" readonly="1">
                                        <tree string="List" editable="false" create="false" delete="false">
                                            <field name="supplier_id"/>
                                            <field name="total_bill"/>
                                            <field name="challan_provided"/>
                                            <field name="undistributed_bill"/>
                                            <field name="state" invisible="1"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tds_vendor_challan_action">
            <field name="name">TDS Vendor Challan</field>
            <field name="res_model">tds.vendor.challan</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem
                name="TDS Challan"
                parent="account.menu_finance_payables"
                action="tds_vendor_challan_action"
                id="tds_challan_menu"
                sequence="11" />

    </data>
</odoo>
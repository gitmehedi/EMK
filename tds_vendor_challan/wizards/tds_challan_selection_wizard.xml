<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_tds_challan_selection_wizard" model="ir.ui.view">
            <field name="name">tds.challan.selection.wizard.form</field>
            <field name="model">tds.challan.selection.wizard</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="TDS Vendor Challan">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="type"/>
                                <field name="supplier_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="sub_operating_unit_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
						 <button string="Save" name="generate_action" type="object" class="oe_highlight"  />
                    </footer>
                </form>
            </field>
        </record>

        <record id="tds_challan_selection_wizard_action_view" model="ir.actions.act_window">
			<field name="name">TDS Vendor Challan</field>
			<field name="res_model">tds.challan.selection.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                name="TDS Vendor Challan"
                parent="account.menu_finance_payables"
                action="tds_challan_selection_wizard_action_view"
                id="tds_challan_selection_wizard_menu"
                sequence="10" />
    </data>
</odoo>
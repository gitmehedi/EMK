<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Checklist Type Form Views -->
        <record id="calendar_weekly_holiday_form_view" model="ir.ui.view">
            <field name="name">calendar_weekly_holiday_form</field>
            <field name="model">calendar.weekly.holiday</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Weekly Holiday">

                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Checklist Type Tree Views -->
        <record id="calendar_weekly_holiday_tree_view" model="ir.ui.view">
            <field name="name">calendar_weekly_holiday_tree</field>
            <field name="model">calendar.weekly.holiday</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Weekly Holiday Tree">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <!-- Checklist Type Search Views -->
        <record id="checklist_type_search_view" model="ir.ui.view">
            <field name="name">calendar_weekly_holiday_search</field>
            <field name="model">calendar.weekly.holiday</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Name" filter_domain="[('name','ilike','self')]" />
                </search>
            </field>
        </record>

        <!-- Checklist Type Action Views -->
        <record id="action_calendar_type_view" model="ir.actions.act_window">
            <field name="name">Calendar Weekly Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">calendar.weekly.holiday</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="calendar_weekly_holiday_tree_view"/>
        </record>

        <!-- Checklist Type Menu -->
        <menuitem id="calendar_weekly_holiday_type_menu" name="Weekly Holiday" parent="calendar_holiday_config_menu"
                  sequence="6" action="action_calendar_type_view"/>
    </data>
</openerp>
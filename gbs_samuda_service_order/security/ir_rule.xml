<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_for_service_order_user" model="ir.rule">
        <field name="name">Service Order User Access</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="domain_force">
            [('service_order_creator.id','=',user.id)]
        </field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('gbs_samuda_service_order.group_service_order_user_unit')),(4,ref('gbs_samuda_service_order.group_service_order_user_ho'))]"/>
    </record>


    <record id="rule_for_service_order_unit_manager_1" model="ir.rule">
        <field name="name">Service Order Unit Manager Access</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="domain_force">
             [('is_service_order','=',True),('purchase_from','=','own'),('operating_unit_id','in',user.operating_unit_ids.ids)]
        </field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('gbs_samuda_service_order.group_service_order_manager_unit'))]"/>
    </record>

    <record id="rule_for_service_order_ho_manager_1" model="ir.rule">
        <field name="name">Service Order HO Manager Access</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="domain_force">
            [('is_service_order','=',True),('purchase_from','=','ho'),('operating_unit_id','in',user.operating_unit_ids.ids)]
        </field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('gbs_samuda_service_order.group_service_order_manager_ho'))]"/>
    </record>



    <record id="stock_picking_type_rule_service_order_user" model="ir.rule">
        <field name="model_id" ref="stock.model_stock_picking_type"/>
        <field name="domain_force">[(1 ,'=', 1)]</field>
        <field name="name">Service Order User Access for Stock Picking Type</field>
        <field name="groups" eval="[(4,ref('gbs_samuda_service_order.group_service_order_user_unit')),(4,ref('gbs_samuda_service_order.group_service_order_user_ho'))]"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>




     <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'purchase_operating_unit'), ('name', '=', 'ir_rule_purchase_order_allowed_operating_units')]"/>
        </function>
        <value eval="{'noupdate': False}"/>
    </function>

    <record id="purchase_operating_unit.ir_rule_purchase_order_allowed_operating_units" model="ir.rule">
        <field name="domain_force">['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in user.operating_unit_ids]),('is_service_order','=', False)]</field>
    </record>

    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'purchase_operating_unit'), ('name', '=', 'ir_rule_purchase_order_allowed_operating_units')]"/>
        </function>
        <value eval="{'noupdate': True}"/>
    </function>


</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="service_order_category">
            <field name="name">Service Order</field>
            <field name="sequence">501</field>
        </record>

        <record id="group_service_order_user_ho" model="res.groups">
            <field name="name">Service Order User (HO)</field>
            <field name="category_id" ref="gbs_samuda_service_order.service_order_category"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>
        <record id="group_service_order_user_unit" model="res.groups">
            <field name="name">Service Order User (Unit)</field>
            <field name="category_id" ref="gbs_samuda_service_order.service_order_category"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>

        <record id="group_service_order_manager_ho" model="res.groups">
            <field name="name">Service Order Manager (HO)</field>
            <field name="category_id" ref="gbs_samuda_service_order.service_order_category"/>
            <field name="implied_ids" eval="[(4, ref('group_service_order_user_ho'))]"/>

        </record>

        <record id="group_service_order_manager_unit" model="res.groups">
            <field name="name">Service Order Manager (Unit)</field>
            <field name="category_id" ref="gbs_samuda_service_order.service_order_category"/>
            <field name="implied_ids" eval="[(4, ref('group_service_order_user_unit'))]"/>

        </record>

        <record id="group_service_order_adviser" model="res.groups">
            <field name="name">Adviser</field>
            <field name="category_id" ref="gbs_samuda_service_order.service_order_category"/>
            <field name="implied_ids" eval="[(4, ref('group_service_order_manager_unit')),(4,ref('group_service_order_manager_ho'))]"/>

        </record>


    </data>
</odoo>
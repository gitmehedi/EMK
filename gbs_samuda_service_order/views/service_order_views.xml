<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem name="Services"
                  id="menu_service_root"
                  groups="gbs_samuda_service_order.group_service_order_user_unit,gbs_samuda_service_order.group_service_order_user_ho,gbs_samuda_service_order.group_service_order_manager_unit,gbs_samuda_service_order.group_service_order_manager_ho"
                  web_icon="purchase,static/description/icon.png"
                  sequence="26"/>
        <menuitem id="menu_service_management" name="Service"
                  groups="gbs_samuda_service_order.group_service_order_user_unit,gbs_samuda_service_order.group_service_order_user_ho,gbs_samuda_service_order.group_service_order_manager_unit,gbs_samuda_service_order.group_service_order_manager_ho"
                  parent="menu_service_root" sequence="1"/>

        <!--service_order_form-->


        <record id="service_order_form" model="ir.ui.view">
            <field name="name">service.order.form</field>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <form string="Service Order">
                    <header>

                        <button name="action_rfq_send" groups="base.group_system" states="draft" string="Send RFQ by Email" type="object"
                                context="{'send_rfq':True}" class="oe_highlight"/>
                        <button name="action_rfq_send" groups="base.group_system" states="sent" string="Re-Send RFQ by Email" type="object"
                                context="{'send_rfq':True}"/>
                        <button name="print_quotation" groups="base.group_system"  string="Print RFQ" type="object" states="draft"
                                class="oe_highlight"/>
                        <button name="print_quotation" groups="base.group_system" string="Print RFQ" type="object" states="sent"/>
                        <button name="button_confirm" type="object" states="draft" string="Confirm Order"
                                id="draft_confirm" groups="gbs_samuda_service_order.group_service_order_manager_unit,gbs_samuda_service_order.group_service_order_manager_ho"/>
                        <button name="button_confirm" type="object" states="sent" string="Confirm Order"
                                class="oe_highlight" groups="gbs_samuda_service_order.group_service_order_manager_unit,gbs_samuda_service_order.group_service_order_manager_ho" id="bid_confirm"/>
                        <button name="button_approve" type="object" states='to approve' string="Approve Order"
                                class="oe_highlight"/>
                        <button name="action_rfq_send" groups="base.group_system"  states="purchase" string="Send PO by Email" type="object"
                                context="{'send_rfq':False}"/>
<!--                        <button name="action_view_picking" string="Receive Products" class="oe_highlight" type="object"-->
<!--                                attrs="{'invisible': ['|', '|' , ('is_shipped', '=', True), ('state','not in', ('purchase','done')), ('picking_count', '=', 0)]}"/>-->
                        <button name="button_draft" states="cancel" string="Set to Draft" type="object"/>
<!--                        <button name="button_cancel" states="draft,to approve,sent,purchase" string="Cancel" groups="gbs_samuda_service_order.group_service_order_manager_unit,gbs_samuda_service_order.group_service_order_manager_ho" type="object"/>-->
                        <button name="button_done" type="object" string="Lock" groups="gbs_samuda_service_order.group_service_order_manager_ho,gbs_samuda_service_order.group_service_order_manager_unit" states="purchase"/>
<!--                        <button name="button_unlock" type="object" string="Unlock" groups="gbs_samuda_service_order.group_service_order_manager_ho,gbs_samuda_service_order.group_service_order_manager_unit" states="done"/>-->

                        <button name="print_service_order" style="background-color: #39B05F;color:white;" type="object" attrs="{'invisible':[('partner_id','=',False)]}" string="Print"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,done" readonly="1"/>
                        <button string="Cancel" name="action_cancel_service_order" class="btn-primary btn-danger mr24 pull-right oe_read_only" type="object" states="draft,to approve,sent,purchase,done" confirm="Are you sure to cancel this service order?" groups="gbs_samuda_service_order.group_service_order_manager_unit,gbs_samuda_service_order.group_service_order_manager_ho"/>


                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object"
                                    name="action_view_picking"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    invisible="1"
                                    attrs="{'invisible':[('state', 'in', ('draft','sent','to approve', 'cancel'))]}">
                                <field name="picking_count" widget="statinfo" string="Shipment"
                                       help="Incoming Shipments" invisible="1"/>
                                <field name="picking_ids" invisible="1"/>
                            </button>
                            <button type="object" name="action_view_invoice"
                                    class="oe_stat_button"
                                    icon="fa-pencil-square-o"
                                    attrs="{'invisible':[('state', 'in', ('draft','sent','to approve', 'cancel'))]}">
                                <field name="invoice_count" widget="statinfo" string="Vendor Bills"/>
                                <field name='invoice_ids' invisible="1"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label string="Request for Quotation "
                                   attrs="{'invisible': [('state','not in',('draft','sent'))]}"/>
                            <label string="Service Order " attrs="{'invisible': [('state','in',('draft','sent'))]}"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" string="Supplier" options="{'no_create': True,'no_edit': True}"
                                       domain="['|',('supplier','=',True),('is_cnf','=',True)]"/>
                                <field name="partner_ref" string="Supplier Reference"/>
                                <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                                <field name="currency_id" groups="base.group_multi_currency"/>
                                <field name="is_shipped" invisible="1"/>
                                <field name="is_service_order" invisible="1"/>
                                <field name="purchase_from" invisible="1"/>
                            </group>
                            <group>
                                <field name="date_order" readonly="1" force_save = "1"/>
                                <field name="service_order_creator" attrs="{'required': [('is_service_order','=',True)]}" readonly="1" force_save = "1"/>
                                <field name="origin" attrs="{'invisible': [('origin','=',False)]}"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True}"/>

                                <field name="picking_type_id" options="{'no_create': True}" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Services">
                                <field name="order_line" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}">
                                    <tree string="Service Order Lines" editable="bottom">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="state" invisible="1"/>
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id" string="Service"
                                               domain="[('type','=','service'),('purchase_ok','=',True)]"
                                               attrs="{'readonly': [('state', 'in', ('purchase', 'to approve','done', 'cancel'))]}"
                                               context="{'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom, 'company_id': parent.company_id}"/>
                                        <field name="name"/>
                                        <field name="date_planned" invisible="1"/>
                                        <field name="company_id" groups="base.group_multi_company"
                                               options="{'no_create': True}"/>
                                        <field name="account_analytic_id"
                                               context="{'default_partner_id':parent.partner_id}"
                                               groups="purchase.group_analytic_accounting"/>
                                        <field name="analytic_tag_ids" groups="purchase.group_analytic_accounting"
                                               widget="many2many_tags"/>
                                        <field name="product_qty"/>
                                        <field name="qty_received" invisible="not context.get('show_purchase', False)"/>
                                        <field name="qty_invoiced" invisible="not context.get('show_purchase', False)"/>
                                        <field name="product_uom" invisible="1" groups="product.group_uom"
                                               attrs="{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}"/>
                                        <field name="price_unit"/>
                                        <field name="taxes_id" widget="many2many_tags"
                                               domain="[('type_tax_use','=','purchase')]"
                                               context="{'default_type_tax_use': 'purchase'}"/>
                                        <field name="price_subtotal" widget="monetary"/>
                                    </tree>
                                    <form string="Service Order Line">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="product_id"
                                                           context="{'partner_id': parent.partner_id}"/>
                                                    <label for="product_qty"/>
                                                    <div>
                                                        <field name="product_qty" class="oe_inline"/>
                                                        <span class="oe_inline">&#160;</span>
                                                        <field name="product_uom" groups="product.group_uom"
                                                               class="oe_inline"/>
                                                    </div>
                                                    <field name="price_unit"/>
                                                </group>
                                                <group>
                                                    <field name="taxes_id" widget="many2many_tags"
                                                           domain="[('type_tax_use', '=', 'purchase')]"/>
                                                    <field name="date_planned" widget="date"/>
                                                    <field name="account_analytic_id" colspan="2"
                                                           groups="purchase.group_analytic_accounting"/>
                                                    <field name="company_id" groups="base.group_multi_company"
                                                           options="{'no_create': True}"/>

                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Notes">
                                                    <field name="name"/>
                                                </page>
                                                <page string="Invoices and Incoming Shipments">
                                                    <field name="invoice_lines"/>
                                                    <field name="move_ids"/>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_tax" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator"
                                           widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <field name="notes" class="oe_inline"
                                       placeholder="An administrator can set up default Terms and conditions in your Company settings."/>
                                <div class="oe_clear"/>
                            </page>
                            <page string="Attachments">
                                <field name="attachment_ids" widget="one2many_list"
                                       attrs="{'readonly': [('state','=','purchase')]}"
                                       context="{'default_res_id': id, 'default_res_model': 'purchase.order'}">
                                    <tree string="Attachments" editable="top">
                                        <field name="res_id" invisible="1"/>
                                        <field name="res_model" invisible="1"/>
                                        <field name="name" string="Title"/>
                                        <field name="datas_fname" invisible="1"/>
                                        <field name="db_datas" filename="datas_fname" string="File"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Terms &amp; Condition">
                                <field name="terms_condition" widget="html" options="{'style-inline': true}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="service_order_tree" model="ir.ui.view">
            <field name="name">service.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <tree decoration-bf="message_unread==True" decoration-muted="state=='cancel'"
                      decoration-info="state in ('wait','confirmed')" string="Service Order">
                    <field name="message_unread" invisible="1"/>
                    <field name="name" string="Reference"/>
                    <field name="date_order"/>
                    <field name="service_order_creator"/>
                    <field name="partner_id" string="Supplier"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="date_planned" invisible="context.get('quotation_only', False)"/>
                    <field name="origin" invisible="1"/>
                    <field name="amount_untaxed" sum="Total Untaxed amount" string="Untaxed" widget="monetary"/>
                    <field name="amount_total" sum="Total amount" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state"/>
                    <field name="invoice_status" invisible="not context.get('show_purchase', False)"/>
                </tree>
            </field>
        </record>


        <record id="service_form_action_ho" model="ir.actions.act_window">
            <field name="name">Service Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                    (0, 0, {'sequence': 1002, 'view_mode': 'tree', 'view_id': ref('service_order_tree')}),
                    (0, 0, {'sequence': 1004, 'view_mode': 'form', 'view_id': ref('service_order_form')}),

                ]"/>

            <field name="domain">[('is_service_order', '=', True),('state', '=', 'draft'),('purchase_from', '=', 'ho')]</field>
            <field name="context">{'default_is_service_order': True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a quotation that will be converted into a service order.
                </p>
                <p>
                </p>
            </field>
        </record>


        <record id="service_form_action_unit" model="ir.actions.act_window">
            <field name="name">Service Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                    (0, 0, {'sequence': 1002, 'view_mode': 'tree', 'view_id': ref('service_order_tree')}),
                    (0, 0, {'sequence': 1004, 'view_mode': 'form', 'view_id': ref('service_order_form')}),

                ]"/>

            <field name="domain">[('is_service_order', '=', True),('state', '=', 'draft'),('purchase_from', '=', 'own')]</field>
            <field name="context">{'default_is_service_order': True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a quotation that will be converted into a service order.
                </p>
                <p>
                </p>
            </field>
        </record>

        <record id="rfq_form_action_unit" model="ir.actions.act_window">
            <field name="name">Service Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                    (0, 0, {'sequence': 1002, 'view_mode': 'tree', 'view_id': ref('service_order_tree')}),
                    (0, 0, {'sequence': 1004, 'view_mode': 'form', 'view_id': ref('service_order_form')}),

                ]"/>
            <field name="domain">[('is_service_order', '=', True),('purchase_from', '=', 'own')]</field>
            <field name="context">{'default_is_service_order': True,'default_purchase_from': 'own'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a quotation that will be converted into a service order.
                </p>
                <p>
                </p>
            </field>
        </record>



        <record id="rfq_form_action_ho" model="ir.actions.act_window">
            <field name="name">Service Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                    (0, 0, {'sequence': 1002, 'view_mode': 'tree', 'view_id': ref('service_order_tree')}),
                    (0, 0, {'sequence': 1004, 'view_mode': 'form', 'view_id': ref('service_order_form')}),

                ]"/>
            <field name="domain">[('is_service_order', '=', True),('purchase_from', '=', 'ho')]</field>
            <field name="context">{'default_is_service_order': True,'default_purchase_from': 'ho'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a quotation that will be converted into a service order.
                </p>
                <p>
                </p>
            </field>
        </record>

        <menuitem action="service_form_action_ho" id="menu_service_form_action_ho"
                  name="Pending Service Orders(HO)"
                  parent="menu_service_management"
                  groups="gbs_samuda_service_order.group_service_order_manager_ho"
                  sequence="6"/>

        <menuitem action="service_form_action_unit" id="menu_service_form_action_unit"
                  name="Pending Service Orders(Unit)"
                  parent="menu_service_management"
                  groups="gbs_samuda_service_order.group_service_order_manager_unit"
                  sequence="8"/>

        <menuitem action="rfq_form_action_ho" id="menu_service_rfq_form_action_ho"
                  name="Service Orders(HO)"
                  parent="menu_service_management"
                  groups="gbs_samuda_service_order.group_service_order_user_ho,gbs_samuda_service_order.group_service_order_manager_ho"
                  sequence="4"/>
        <menuitem action="rfq_form_action_unit" id="menu_service_rfq_form_action_unit"
                  name="Service Orders(Unit)"
                  parent="menu_service_management"
                  groups="gbs_samuda_service_order.group_service_order_user_unit,gbs_samuda_service_order.group_service_order_manager_unit"
                  sequence="5"/>

    </data>
</odoo>
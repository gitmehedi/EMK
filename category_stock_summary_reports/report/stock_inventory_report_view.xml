<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Main template -->
        <template id="stock_inventory_report_qweb">
            <style>

                .table th {
                padding: 2px !important;
                }
                .table td {
                padding: 2px !important;
                font-size: 12px !important;
                }
            </style>
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <div class="row mb32">
                            <div class="col-xs-12">
                                <h2 class="text-center">Stock Summary (Groupwise)</h2>
                                <p class="text-center">
                                    <strong>Shop Name:
                                        <span t-esc="record['shop_name']"/>
                                    </strong>
                                    <br/>
                                    <span t-esc="record['date_from']"/>
                                    <strong>To</strong>
                                    <span t-esc="record['date_to']"/>
                                </p>
                            </div>
                        </div>

                        <table class="table table-bordered" style="padding: 0px;">
                            <thead>
                                <tr style="background-color: #EFECEB;">
                                    <th colspan="3" class="text-center">Particulars and Alias</th>
                                    <t t-if="'OS' in record['report_type']">
                                        <th colspan="3" class="text-center">Opening</th>
                                    </t>
                                    <t t-if="'IWS' in record['report_type']">
                                        <th colspan="3" class="text-center">Inward</th>
                                    </t>
                                    <t t-if="'OWS' in record['report_type']">
                                        <th colspan="3" class="text-center">Outward</th>
                                    </t>
                                    <t t-if="'CS' in record['report_type']">
                                        <th colspan="3" class="text-center">Closing</th>
                                    </t>
                                </tr>
                                <tr style="background-color: #EFECEB;">
                                    <th class="text-center">Barcode</th>
                                    <th class="text-center">Product</th>
                                    <th class="text-center">UoM</th>
                                    <t t-if="'OS' in record['report_type']">
                                        <th class="text-center">Qty</th>
                                        <th class="text-center">Rate</th>
                                        <th class="text-center">Value</th>
                                    </t>
                                    <t t-if="'IWS' in record['report_type']">
                                        <th class="text-center">Qty</th>
                                        <th class="text-center">Rate</th>
                                        <th class="text-center">Value</th>
                                    </t>
                                    <t t-if="'OWS' in record['report_type']">
                                        <th class="text-center">Qty</th>
                                        <th class="text-center">Rate</th>
                                        <th class="text-center">Value</th>
                                    </t>
                                    <t t-if="'CS' in record['report_type']">
                                        <th class="text-center">Qty</th>
                                        <th class="text-center">Rate</th>
                                        <th class="text-center">Value</th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lines" t-as="data">
                                    <t t-if="data_value">

                                        <tr style="background-color: #ebebe0; text-align:center;">
                                            <td colspan="15" style="padding: 0px;">
                                                <strong>
                                                    <t t-esc="data"/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <t t-foreach="data_value" t-as="line">
                                            <tr>
                                                <td>
                                                    <t t-esc="line['code']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['name']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['uom_name']"/>
                                                </td>
                                                <t t-if="'OS' in record['report_type']">
                                                    <td  class="text-right">
                                                        <t t-esc="line['qty_dk']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['rate_dk']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['val_dk']"/>
                                                    </td>
                                                </t>
                                                <t t-if="'IWS' in record['report_type']">
                                                    <td class="text-right">
                                                        <t t-esc="line['qty_in_tk']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['rate_in']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['val_in_tk']"/>
                                                    </td>
                                                </t>
                                                <t t-if="'OWS' in record['report_type']">
                                                    <td class="text-right">
                                                        <t t-esc="line['qty_out_tk']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['rate_out']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['val_out_tk']"/>
                                                    </td>
                                                </t>
                                                <t t-if="'CS' in record['report_type']">
                                                    <td class="text-right">
                                                        <t t-esc="line['qty_ck']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['rate_ck']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['val_ck']"/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <t t-call="custom_report.report_signing"></t>
                    </div>
                </t>
            </t>
        </template>

        <report id="report_stock_inventory_summary"
                model="stock.move"
                string="Stock Inventory"
                name="category_stock_summary_reports.stock_inventory_report_qweb"
                file="category_stock_summary_reports.stock_inventory_report_qweb"
                multi="True"
                report_type="qweb-pdf"/>

        <record id="report_stock_inventory_summary" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="custom_report.paperformat_pebbles_backend_landscape"/>
        </record>
    </data>
</openerp>
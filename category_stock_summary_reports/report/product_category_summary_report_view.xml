<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Main template -->
        <template id="report_product_category_summary_qweb">
            <style>

                .table th {
                padding: 2px !important;
                }
                .table td {
                padding: 2px !important;
                font-size: 12px !important;
                }
            </style>
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <div class="row mb32">
                            <div class="col-xs-12">
                                <h2 class="text-center">Category Summary</h2>
                                <p class="text-center">
                                    <strong>Category Name:
                                        <span t-esc="data['category_name']"/>
                                    </strong>
                                    <br/>
                                    <t t-if="data['location_id']">
                                        <strong>Shop Name:
                                            <span t-esc="data['location_name']"/>
                                        </strong>
                                    </t>
                                </p>
                            </div>
                        </div>

                        <table class="table table-bordered" style="padding: 0px;">
                            <thead>
                                <tr style="background-color: #EFECEB;">
                                    <th class="text-center">Barcode</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Brand</th>
                                    <th class="text-center">Attributes</th>
                                    <th class="text-center">Received Qty</th>
                                    <th class="text-center">Sales Qty</th>
                                    <t t-if="data['location_id']">
                                        <th class="text-center">Move Qty</th>
                                    </t>
                                    <th class="text-center">On Hand Qty</th>
                                    <th class="text-center">Sales Price</th>
                                    <t t-if="not data['location_id']">
                                        <th class="text-center">Cost Price</th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="report_data" t-as="obj">
                                    <tr>
                                        <td class="text-left">
                                            <span class="text-nowrap" t-esc="obj['code']"/>
                                        </td>
                                        <td class="text-left">
                                            <span class="text-nowrap" t-esc="obj['name']"/>
                                        </td>
                                        <td class="text-left">
                                            <span class="text-nowrap" t-esc="obj['brand']"/>
                                        </td>
                                        <td class="text-left">
                                            <span class="text-nowrap" t-esc="obj['attributes']"/>
                                        </td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="obj['received_qty']"/>
                                        </td>
                                        <td class="text-center">
                                            <span class="text-nowrap" t-esc="obj['sale_qty']"/>
                                        </td>
                                        <t t-if="data['location_id']">
                                            <td class="text-center">
                                                <span class="text-nowrap" t-esc="obj['move_qty']"/>
                                            </td>
                                        </t>
                                        <td class="text-center">
                                            <span class="text-nowrap" t-esc="obj['on_hand']"/>
                                        </td>
                                        <td class="text-center">
                                            <span class="text-nowrap" t-esc="obj['sale_price']"/>
                                        </td>
                                        <t t-if="not data['location_id']">
                                            <td class="text-center">
                                                <span class="text-nowrap" t-esc="obj['cost_price']"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>

        <report id="action_report_product_category_summary"
                model="stock.move"
                string="Category Summary"
                name="category_stock_summary_reports.report_product_category_summary_qweb"
                file="category_stock_summary_reports.report_product_category_summary_qweb"
                multi="True"
                report_type="qweb-pdf"/>

        <record id="action_report_product_category_summary" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="custom_report.paperformat_pebbles_backend_landscape"/>
        </record>
    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wizard_product_category_summary" model="ir.ui.view">
            <field name="name">wizard.product.category.summary</field>
            <field name="model">product.category.summary.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="category_id" options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                        </group>
                        <group>
                            <field name="location_id" options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="report_print" string="Print" type="object" icon="gtk-print" default_focus="1"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_product_category_summary" model="ir.actions.act_window">
            <field name="name">Product Category Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.category.summary.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_wizard_product_category_summary"
                  id="menu_product_category_summary"
                  string="Product Category Summary"
                  parent="menu_inventory_report_main_menu" sequence="2"
                  groups="stock.group_stock_manager,pebbles_transfer_user.group_requisition_transfer_approval_manager"/>

    </data>
</openerp>

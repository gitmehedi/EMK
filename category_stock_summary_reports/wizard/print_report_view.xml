<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wizard_stock_inventory_report" model="ir.ui.view">
            <field name="name">wizard.stock.inventory.report</field>
            <field name="model">stock.inventory.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="shop_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                        </group>
                        <group>
                            <field name="report_type_ids" widget="many2many_tags"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                            <field name="category_id"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>

                        </group>
                    </group>
                    <footer>
                        <button name="report_print" string="Print" type="object" icon="gtk-print" default_focus="1"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_wizard_stock_inventory_report" model="ir.actions.act_window">
            <field name="name">Stock Inventory Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.inventory.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem action="action_wizard_stock_inventory_report"
                  id="menu_action_wizard_sale_report_inventory"
                  parent="stock.next_id_61" sequence="2"/>


    </data>
</openerp>

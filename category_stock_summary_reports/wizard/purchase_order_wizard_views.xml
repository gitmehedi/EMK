<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase_order_wizard_form_view" model="ir.ui.view">
            <field name="name">purchase.order.wizard.report</field>
            <field name="model">purchase.order.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="date_from"/>

                        </group>
                        <group>
                            <field name="date_to"/>
                            <field name="supplier_id" groups="operating_unit.group_multi_operating_unit"
                                   options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"
                                   widget="many2many_tags" invisible="True"/>

                        </group>
                    </group>
                    <footer>
                        <button name="report_print" string="Print" type="object" icon="gtk-print" default_focus="1"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_purchase_order_wizard" model="ir.actions.act_window">
            <field name="name">Purchase Order Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem action="action_purchase_order_wizard"
                  id="menu_purchase_order_wizard"
                  parent="base.next_id_73" sequence="10"
                  groups="stock.group_stock_manager"/>

    </data>
</openerp>

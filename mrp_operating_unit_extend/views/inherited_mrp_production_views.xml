<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit.mrp.extend</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp_operating_unit.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

                <!-- Miscellaneous -->
                <xpath expr="//form/sheet/notebook/page[3]/group/group/field[@name='picking_type_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[3]/group/group/field[@name='location_src_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[3]/group/group/field[@name='location_dest_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- Tree View-->
		<record id="hr_manpower_req_tree" model="ir.ui.view">
			<field name="name">hr.employee.requisition.tree</field>
			<field name="model">hr.employee.requisition</field>
			<field name="arch" type="xml">
				<tree string="Manpower Requisition">
                   <field name="employee_id"/>
					<field name="department_id"/>
					<field name="replaced_or_new" />
					<field name="replace_of_whom_emp_id" />
					<field name="replace_of_whom_designation" />
					<field name="reson_or_justification" />
					<field name="issue_date"/>
					<field name="current_no_of_emp" />
					<field name="expected_date" />
					<field name="req_no_of_employee" />
					<field name="qualification" />
					<field name="age" />
					<field name="training_or_practical_skills"/>
					<field name="principle_duties"/>
					<field name="comment_by_co_md"/>
					<field name="state"/>
					<field name="factory_or_head_office"/>
				</tree>
			</field>
		</record>

		<!-- Form View-->
		<record id="hr_manpower_req_form" model="ir.ui.view">
			<field name="name">hr.employee.requisition.form</field>
			<field name="model">hr.employee.requisition</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Manpower Requisition">
					<header>
                        <button string="Confirm" name="action_confirm"
								states="draft" type="object" class="oe_highlight"
								groups="gbs_base_package.group_dept_manager,hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"/>

                    	<button string="HOP Approve" name="action_hop_approve"
								states="confirmed" type="object" class="oe_highlight"
								groups="gbs_hr_manpower_requisition.group_head_of_plant,hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"
								/>

						<button string="HR Approve" name="action_hr_approve"
								states="hr_approve" type="object" class="oe_highlight"
								groups="hr_recruitment.group_hr_recruitment_manager"
								/>

						<button string="CXO Approve" name="action_cxo_approve"
								states="cxo_approve" type="object" class="oe_highlight"
								groups="gbs_application_group.group_cxo"
								/>

                     	<button string="Decline" name="action_decline"
								type="object" states="confirmed,hr_approve,cxo_approve"
								/>

						<button string="Reset To Draft" name="action_reset"
								type="object" states="confirmed,hr_approve,cxo_approve"
								/>

						<field name="state" widget="statusbar" statusbar_visible="draft,hr_approve,cxo_approve,approved"/>

					</header>
					<sheet>
						<group>
							<group>
								<field name="employee_id"/>
								<field name="department_id"/>
								<field name="current_no_of_emp" />
								<field name="factory_or_head_office" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="replaced_or_new" widget="radio" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="replace_of_whom_emp_id" attrs="{'invisible': [('replaced_or_new', '!=','replaced')]}"
									   options='{"no_open": True,"no_create": 1, "no_create_edit":1}' domain="[('department_id','=',department_id)]"/>
								<field name="replace_of_whom_designation" attrs="{'invisible': [('replaced_or_new', '!=','replaced')]}"/>
								<field name="reson_or_justification" attrs="{'invisible': [('replaced_or_new', '!=','new')]}"/>
							</group>

							<group>
								<field name="issue_date"/>
								<field name="expected_date" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="req_no_of_employee" attrs="{'readonly':[('state','!=','draft')]}" />
								<field name="approved_no_of_emp" />
								<field name="comment_by_co_md" attrs="{'readonly':[('state','!=','draft')]}"/>
							</group>
							<field name="qualification" colspan="4" attrs="{'readonly':[('state','!=','draft')]}"/>
							<field name="age" colspan="4" attrs="{'readonly':[('state','!=','draft')]}"/>
							<field name="training_or_practical_skills" colspan="4" attrs="{'readonly':[('state','!=','draft')]}" />
							<field name="principle_duties" colspan="4" attrs="{'readonly':[('state','!=','draft')]}"/>

						</group>
					</sheet>

					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>

				</form>
			</field>
		</record>

		<record id="action_hr_manpower_requisition" model="ir.actions.act_window">
			<field name="name">HR Manpower Requisition</field>
			<field name="res_model">hr.employee.requisition</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!--<menuitem name="Recruitment" id="hr_recruitment.menu_hr_recruitment_root" web_icon="hr_recruitment,static/description/icon.png"-->
				   <!--sequence="80" groups="gbs_base_package.group_dept_manager,hr_recruitment.group_hr_recruitment_user"/>-->
		<menuitem parent="hr_recruitment.menu_hr_recruitment_root" id="hr_recruitment.menu_hr_job_position" action="hr_recruitment.action_hr_job" sequence="1"
			groups="hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"/>

		<menuitem id="hr_recruitment.menu_hr_recruitment_configuration" name="Configuration" parent="hr_recruitment.menu_hr_recruitment_root"
        	sequence="100" groups="hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"/>

		<menuitem name="Resumes and Letters" parent="hr_recruitment.menu_hr_recruitment_root" id="hr_recruitment.menu_crm_case_categ0_act_job02"
				  action="hr_recruitment.hr_applicant_resumes" sequence="3" groups="hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"/>

		<menuitem name="Manpower Requisition" parent="hr_recruitment.menu_hr_recruitment_root" id="main_menu_hr_manpower_requisition"
				  sequence="80"
				  groups="gbs_base_package.group_dept_manager,hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"/>

		<menuitem name="Manpower Requisition" parent="main_menu_hr_manpower_requisition" id="menu_hr_manpower_requisition"
				  groups="gbs_base_package.group_dept_manager,hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"
				  action="action_hr_manpower_requisition"/>

	</data>
</openerp>

<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- Tree View-->
		<record id="hr_manpower_req_tree" model="ir.ui.view">
			<field name="name">hr.manpower.requisition.tree</field>
			<field name="model">hr.manpower.requisition</field>
			<field name="arch" type="xml">
				<tree string="Manpower Requisition">
                   <field name="employee_id"/>
					<field name="department_id"/>
					<field name="replaced_or_new"  widget="radio"/>
					<field name="replace_of_whom_emp_id" attrs="{'invisible': [('replaced_or_new', '!=','replaced')]}"/>
					<field name="replace_of_whom_designation" attrs="{'invisible': [('replaced_or_new', '!=','replaced')]}"/>
					<field name="reson_or_justification" attrs="{'invisible': [('replaced_or_new', '!=','new')]}"/>
					<field name="no_of_joined"/>
					<field name="issue_date"/>
					<field name="emp_head_count" />
					<field name="expected_date" />
					<field name="no_of_employee" />
					<field name="qualification" colspan="4"/>
					<field name="age" colspan="4"/>
					<field name="training_or_practical_skills"  colspan="4" />
					<field name="principle_duties"  colspan="4"/>
					<field name="comment_by_co_md"  colspan="4" />
				</tree>
			</field>
		</record>

		<!-- Form View-->
		<record id="hr_manpower_req_form" model="ir.ui.view">
			<field name="name">hr.manpower.requisition.form</field>
			<field name="model">hr.manpower.requisition</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Manpower Requisition">
					<header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
                    	<button string="Approve" name="action_approve" states="confirm" type="object" class="oe_highlight" groups="hr.group_hr_user"/>
                     	<button string="Refuse" name="action_refuse" states="confirm" type="object" groups="hr.group_hr_user"/>
                    	<button string="Reset to Draft" name="action_draft" type="object" states="confirm" groups="hr.group_hr_user"/>


						<field name="state" widget="statusbar" statusbar_visible="draft,confirmed,verify,justify,approved,declined"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="employee_id"/>
								<field name="department_id"/>
								<field name="replaced_or_new"  widget="radio"/>
								<field name="replace_of_whom_emp_id" attrs="{'invisible': [('replaced_or_new', '!=','replaced')]}"/>
								<field name="replace_of_whom_designation" attrs="{'invisible': [('replaced_or_new', '!=','replaced')]}"/>
								<field name="reson_or_justification" attrs="{'invisible': [('replaced_or_new', '!=','new')]}"/>
								<field name="no_of_joined"/>
							</group>

							<group>
								<field name="issue_date"/>
								<field name="emp_head_count" />
								<field name="expected_date" />
								<field name="no_of_employee" />
							</group>

							<field name="qualification" colspan="4"/>
							<field name="age" colspan="4"/>
							<field name="training_or_practical_skills"  colspan="4" />
							<field name="principle_duties"  colspan="4"/>
							<field name="comment_by_co_md"  colspan="4" />
						</group>
					</sheet>

					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>

				</form>
			</field>
		</record>

		<record id="action_hr_manpower_requisition" model="ir.actions.act_window">
			<field name="name">HR Manpower Requisition</field>
			<field name="res_model">hr.manpower.requisition</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem
				name="Manpower Requisition"
				parent="hr_recruitment.menu_hr_recruitment_root"
				id="menu_hr_manpower_requisition"
				action="action_hr_manpower_requisition"
		/>

	</data>
</openerp>

        <record id="mail_template_appointment_app" model="mail.template">
            <field name="name">Approved Appointment Request: Send by Email</field>
            <field name="model_id" ref="appointments.model_appointment_appointment"/>
            <field name="report_template" ref="appointments.report_appoint_visiting_card_done"/>
            <field name="report_name">Visiting Card (Ref ${object.name})</field>
            <field name="email_from">
                <![CDATA["${user.company_id.name|safe}" <${(user.company_id.email or user.email)|safe}>]]></field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Approved Appointment Request (Ref ${object.name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 0px;">
                        <p>
                            Dear ${object.first_name +' '+ object.last_name},
                            <br/>
                            <br/>
                            I have received your request to appointment of EMK Center.
                            This is a notification that serves as confirmation that request has been approved.
                            <br/>
                            <br/>
                            Appointment Date: ${object.appointment_date}
                            Web Link:
                        </p>
                        If you have queries feel free to ask.
                        <br/>
                        <br/>
                        Additionally, I thank you for being a part of ${user.company_id.name}.
                    </p>
                    <p style="font-size: 11px; margin-top: 10px;">
                        <strong>Sent by ${user.company_id.name}</strong>
                    </p>
                </div>
            </field>
        </record>


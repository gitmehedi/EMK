<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_appointment_topics_tree">
            <field name="name">appointment.topics.tree</field>
            <field name="model">appointment.topics</field>
            <field name="arch" type="xml">
                <tree string="Appointment Topics"
                      decoration-bf="status==True" decoration-muted="status==False"
                      decoration-success="status==True">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_appointment_topics_form">
            <field name="name">appointment.topics.form</field>
            <field name="model">appointment.topics</field>
            <field name="arch" type="xml">
                <form string="Appointment Type">

                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="status"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Appointment Person">
                                <field name="contact_ids">
                                    <tree string="Contacts" editable="bottom">
										<field name="name" />
										<field name="status" />
									</tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="appointment_topics_search_view" model="ir.ui.view">
            <field name="name">appointment.topics.search.view</field>
            <field name="model">appointment.topics</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="status"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" domain="[]" context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_appointment_topics">
            <field name="name">Appointment Topics</field>
            <field name="res_model">appointment.topics</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_appointment_topics" action="action_appointment_topics" sequence="10"
                  groups="" parent="appointment_menu.sub_configuration_menu"/>
    </data>
</odoo>
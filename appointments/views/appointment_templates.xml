<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_appointments_reserv" name="web_appointments_reserv" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/appointments/static/src/js/main.js"></script>
            <script type="text/javascript" src="/appointments/static/src/js/bootstrap.validator.js"></script>
            <link rel="stylesheet" href="/appointments/static/src/css/style.css"/>
        </xpath>
    </template>

    <template id="appointment_reservation" name="Appointment Reservation">
        <t t-call="web.login_layout">
            <div class="container">
                <div class="row" id="appointment_reservation">
                    <form class="s_website_form container-fluid mt32" enctype="multipart/form-data" role="form"
                          method="post" t-if="not message" data-toggle="validator2" id="appointment-reservation">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <script type="text/javascript">
                            var config = {
                            baseurl: "<t t-esc="baseurl"/>",
                            };
                        </script>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <input type="hidden" name="token" t-att-value="token"/>
                        <h1 class="text-center">Appointment Reservation</h1>

                        <div class="col-md-12 margin-top-15">
                            <div class="panel panel-success">
                                <div class="panel-heading odoobg">
                                    <h3 class="panel-title text-center">Appointee Information</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="form-group form-field">
                                                <label for="first_name" class="control-label">First Name</label>
                                                <input type="text" name="first_name" t-att-value="first_name"
                                                       id="first_name"
                                                       maxlength="100"
                                                       placeholder="First Name"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-field">
                                                <label for="last_name" class="control-label">Last Name</label>
                                                <input type="text" name="last_name" t-att-value="last_name"
                                                       id="last_name"
                                                       maxlength="100"
                                                       placeholder="Last Name" class="form-control input-sm reqfield"
                                                       required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="form-group form-field">
                                                <label for="email" class="control-label">E-mail</label>
                                                <input type="email" name="email" t-att-value="email" id="app-email"
                                                       placeholder="info@info.com" pattern="[^\s@]+@[^\s@]+\.[^\s@]+"
                                                       class="form-control input-sm reqfield" required="required"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-field">
                                                <label for="phone" class="control-label">Phone</label>
                                                <input type="text" name="phone" t-att-value="phone" id="phone"
                                                       placeholder="8801900000000" maxlength="13" minlength="13"
                                                       class="form-control input-sm reqfield number" pattern="(880)([0-9]{10})"
                                                       data-minlength="13" data-maxlength="13" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="form-group form-field">
                                                <label for="street" class="control-label">Current Address</label>
                                                <input type="text" name="street" t-att-value="street" id="street"
                                                       class="form-control input-sm reqfield" maxlength="50"
                                                       minlength="2" placeholder="Address"
                                                       required="required"/>
                                            </div>
                                            <div class="form-group form-field">
                                                <input type="text" name="street2" t-att-value="street2" id="street2"
                                                       class="form-control input-sm"/>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group form-field">
                                                        <input type="text" name="city" t-att-value="city" id="city"
                                                               minlength="2"
                                                               maxlength="30" required="required" placeholder="City"
                                                               class="form-control input-sm reqfield"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group form-field">
                                                        <input type="text" name="zipcode" t-att-value="zipcode"
                                                               id="zipcode" minlength="4"
                                                               maxlength="10" placeholder="Zip"
                                                               class="form-control input-sm reqfield"
                                                               required="required"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group form-field">
                                                        <select class="form-control input-sm reqfield"
                                                                name="country_id">
                                                            <option value="">--Please Select--</option>
                                                            <t t-foreach="country_ids" t-as='label'>
                                                                <option t-att-value="label_value[0]"
                                                                        t-att-selected="'selected' if country_id==label_value[0] else None">
                                                                    <t t-esc="label_value[1]"/>
                                                                </option>
                                                            </t>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-field">
                                                <label for="gender_id" class="control-label">Gender</label>
                                                <select class="form-control input-sm reqfield" name="gender_id"
                                                        id="gender_id" required="required">
                                                    <option value="">--Please Select--</option>
                                                    <t t-foreach="gender_ids" t-as='label'>
                                                        <option t-att-value="label_value[0]"
                                                                t-att-selected="'selected' if gender_id==label_value[0] else None">
                                                            <t t-esc="label_value[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-success">
                                <div class="panel-heading odoobg">
                                    <h3 class="panel-title text-center">Appointment Information</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="form-group form-field">
                                                <label for="type_id" class="control-label">Appointment Types</label>
                                                <select class="form-control input-sm reqfield" name="type_id"
                                                        id="type_id" required="required">
                                                    <option value="">--Please Select--</option>
                                                    <t t-foreach="type_ids" t-as='label'>
                                                        <option t-att-value="label_value[0]"
                                                                t-att-selected="'selected' if type_id==label_value[0] else None">
                                                            <t t-esc="label_value[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                            <div class="form-group form-field">
                                                <label for="topic_id" class="control-label">Appointment Topics</label>
                                                <select class="form-control input-sm reqfield" name="topic_id"
                                                        id="topic_id" required="required">
                                                    <option value="">--Please Select--</option>
                                                    <t t-foreach="topic_ids" t-as='label'>
                                                        <option t-att-value="label_value[0]"
                                                                t-att-selected="'selected' if topic_id==label_value[0] else None">
                                                            <t t-esc="label_value[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>

                                            <div class="form-group form-field">
                                                <label for="contact_id" class="control-label">Appointer Contacts</label>
                                                <select class="form-control input-sm reqfield" name="contact_id"
                                                        id="contact_id" required="required">
                                                    <option value="">--Please Select--</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-field">
                                                <label>Appointment Days</label>
                                                <div id="weekday_days"></div>
                                            </div>
                                            <div class="form-group form-field">
                                                <label for="appointment_date" class="control-label">Appointment Date
                                                </label>
                                                <input type="text" name="appointment_date"
                                                       t-att-value="appointment_date"
                                                       maxlength="10"
                                                       placeholder="1960-12-31"
                                                       minlength="10" class="form-control input-sm reqfield"
                                                       id="appointment_date" required="required"/>
                                            </div>
                                            <div class="form-group form-field">
                                                <label for="timeslot_id" class="control-label">Time Slot</label>
                                                <select class="form-control input-sm reqfield" name="timeslot_id"
                                                        id="timeslot_id" required="required">
                                                    <option value="">--Please Select--</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-md-offset-5" style="margin-bottom: 100px;">
                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary btn-lg">Submit Appointment</button>
                                <button type="button" class="btn btn-lg">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <template id="appointment_reservation_success" name="Appointment Reservation Success">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="container">
                    <div class="jumbotron mt32">
                        <h1>Thank you!</h1>
                        <div>
                            Your request has been submitted successfully. Check email for
                            further processing.
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="appointment_reservation_expire" name="Appointment Reservation Success">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="container">
                    <div class="jumbotron mt32">
                        <h1>Thank you!</h1>
                        <div>
                            Session has expired, please contact with administrator
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>


</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_appointment_appointment_tree">
            <field name="name">appointment.appointment.tree</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <tree string="Appointment" decoration-info="state == 'draft'" decoration-bf="state in ('draft','confirm')"
					  colors="gray:state=='done';green:state=='confirm';red:state=='reject';">
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="appointment_date"/>
                    <field name="topic_id"/>
                    <field name="contact_id"/>
                    <field name="timeslot_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_appointment_appointment_form">
            <field name="name">appointment.appointment.form</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <form string="Appointment">
                    <header>
                        <button name="appointment_confirm" string="Confirm" states="draft"
                                class="oe_highlight" type="object"/>
                        <button name="appointment_approve" string="Approve" states="confirm" type="object"
                                class="oe_highlight"/>
                        <button name="appointment_reject" string="Reject" states="confirm"
                                type="object"/>
                        <button name="%(action_appointment_wizard)d" string="Reschedule" states="confirm" type="action"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done,reject"
                               statusbar_colors='{"reject":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="topic_id" options="{'no_create_edit':True,'no_open':True}" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="contact_id" options="{'no_create_edit':True,'no_open':True}" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="timeslot_id" options="{'no_create_edit':True,'no_open':True}" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="first_name"  attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="last_name"  attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="phone"  attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="email"  attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>

                            </group>
                            <group>
                                <field name="appointment_date" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="type_id" options="{'no_create_edit':True,'no_open':True}" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="gender" options="{'no_create_edit':True,'no_open':True}" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="date_of_birth" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="address" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="city" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                                <field name="country" options="{'no_create_edit':True,'no_open':True}" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Meeting Room">
                                <field name="meeting_room_id" attrs="{'readonly':[('state','in',('reject'))]}"/>
                            </page>
                        </notebook>
                        <field name="description" attrs="{'readonly':[('state','in',('reject','confirm','approve'))]}"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="appointment_search_view" model="ir.ui.view">
            <field name="name">appointment.search.view</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Date" domain="[]" context="{'group_by':'appointment_date'}"/>
                        <filter string="Appointee" domain="[]" context="{'group_by':'contact_id'}"/>
                        <filter string="Time Slot" domain="[]" context="{'group_by':'timeslot_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_appointment_appointment">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','draft')]</field>
        </record>
        <record model="ir.actions.act_window" id="action_appointment_confirm">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','confirm')]</field>
        </record>
        <record model="ir.actions.act_window" id="action_appointment_approve">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','done')]</field>
        </record>
        <record model="ir.actions.act_window" id="action_appointment_reject">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','reject')]</field>
        </record>

        <menuitem id="menu_appointment_appointment" name="Appointment (Draft)" action="action_appointment_appointment" sequence="30"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>
        <menuitem id="menu_appointment_confirm" name="Appointment (Confirmed)" action="action_appointment_confirm" sequence="35"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>
        <menuitem id="menu_appointment_done" name="Appointment (Approved)" action="action_appointment_approve" sequence="40"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>
        <menuitem id="menu_appointment_reject" name="Appointment (Rejected)" action="action_appointment_reject" sequence="50"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>
    </data>
</odoo>
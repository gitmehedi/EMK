<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_appointment_appointment_tree">
            <field name="name">appointment.appointment.tree</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <tree string="Appointment">
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="appointment_date"/>
                    <field name="topic_id"/>
                    <field name="contact_id"/>
                    <field name="timeslot_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_appointment_appointment_form">
            <field name="name">appointment.appointment.form</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <form string="Appointment">
                    <header>
                        <button name="appointment_confirm" string="Confirm" states="draft"
                                class="oe_highlight" type="object"/>
                        <button name="appointment_approve" string="Approve" states="confirm" type="object"
                                class="oe_highlight"/>
                        <button name="appointment_reject" string="Reject" states="confirm"
                                type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done,reject"
                               statusbar_colors='{"reject":"red"}'/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="topic_id" options="{'no_create_edit':True,'no_open':True}"/>
                                <field name="contact_id" options="{'no_create_edit':True,'no_open':True}"/>
                                <field name="timeslot_id" options="{'no_create_edit':True,'no_open':True}"/>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="phone"/>
                                <field name="email"/>

                            </group>
                            <group>
                                <field name="appointment_date"/>
                                <field name="type_id" options="{'no_create_edit':True,'no_open':True}"/>
                                <field name="gender"/>
                                <field name="date_of_birth"/>
                                <field name="address"/>
                                <field name="city"/>
                                <field name="country"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Meeting Room">
                                <field name="meeting_room_id"/>
                            </page>
                        </notebook>
                        <field name="description"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="appointment_search_view" model="ir.ui.view">
            <field name="name">appointment.search.view</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_appointment_appointment">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_appointment_appointment" action="action_appointment_appointment" sequence="30"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>
    </data>
</odoo>
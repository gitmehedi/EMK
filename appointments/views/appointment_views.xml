<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_appointment_appointment_tree">
            <field name="name">appointment.appointment.tree</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <tree string="Appointment" decoration-info="state == 'draft'"
                      decoration-bf="state in ('draft','confirm')"
                      colors="gray:state=='done';green:state=='confirm';red:state=='reject';">
                    <field name="name"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="gender_id"/>
                    <field name="appointment_date"/>
                    <field name="topic_id"/>
                    <field name="contact_id"/>
                    <field name="timeslot_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_appointment_appointment_form">
            <field name="name">appointment.appointment.form</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <form string="Appointment">
                    <header>
                        <button name="confirm_appointment" string="Confirm" states="draft"
                                class="oe_highlight" type="object"/>
                        <button name="approve_appointment" string="Approve" states="confirm" type="object"
                                class="oe_highlight"/>
                        <button name="finish_appointment" string="Finish" states="approve" type="object"
                                class="oe_highlight"/>
                        <button name="reject_appointment" string="Reject" states="draft,confirm"
                                type="object"/>
                        <button name="%(action_appointment_wizard)d" string="Reschedule" states="confirm,approve"
                                type="action" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,done,reject"
                               statusbar_colors='{"reject":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="topic_id" domain="[('status','=','True')]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                <field name="contact_id" domain="[('status','=','True')]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                <field name="type_id" domain="[('status','=','True')]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                            </group>
                            <group>
                                <field name="appointment_date"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                <field name="timeslot_id" domain="[('status','=','True')]"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                <field name="meeting_room_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}" domain="[('status','=','True')]"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                            </group>
                        </group>
                        <group string="Appointee Information">
                            <group>
                                <field name="first_name"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                <field name="last_name"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                <field name="gender_id"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                <field name="date_of_birth"
                                       attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                 <field name="phone" attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                            </group>
                            <group>
                                <field name="email" attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                    <field name="city" placeholder="City" class="o_address_city" attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                    <field name="zipcode" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}' attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                                </div>
                            </group>
                        </group>

                        <field name="description" placeholder="Describe about this appointment" attrs="{'readonly':[('state','in',('reject','confirm','approve','done'))]}"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_appointment_appointment_calendar" model="ir.ui.view">
            <field name="name">view.appointment.appointment.calendar</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <calendar string="Appointments" date_start="appointment_date" color="contact_id"
                          mode="month" all_day="appointment_date">
                    <field name="name" style="background-color:red;"/>
                </calendar>
            </field>
        </record>

        <record id="appointment_search_view" model="ir.ui.view">
            <field name="name">appointment.search.view</field>
            <field name="model">appointment.appointment</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Date" domain="[]" context="{'group_by':'appointment_date'}"/>
                        <filter string="Appointee" domain="[]" context="{'group_by':'contact_id'}"/>
                        <filter string="Time Slot" domain="[]" context="{'group_by':'timeslot_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_appointment_appointment">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('state','=','draft')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_appointment_confirm">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('state','=','confirm')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_appointment_approve">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('state','=','approve')]</field>
        </record>
        <record model="ir.actions.act_window" id="action_appointment_finish">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,pivot</field>
            <field name="domain">[('state','=','done')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_appointment_reject">
            <field name="name">Appointment</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('state','=','reject')]</field>
        </record>

        <record id="action_appointment_appointment_calender" model="ir.actions.act_window">
            <field name="name">Appointment Calendar</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">appointment.appointment</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="view_id" ref="view_appointment_appointment_calendar"/>
        </record>


        <menuitem id="menu_appointment_appointment" name="Appointment (Draft)" action="action_appointment_appointment"
                  sequence="30"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>

        <menuitem id="menu_appointment_confirm" name="Appointment (Confirmed)" action="action_appointment_confirm"
                  sequence="35"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>

        <menuitem id="menu_appointment_approve" name="Appointment (Approved)" action="action_appointment_approve"
                  sequence="40"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>
        <menuitem id="menu_appointment_done" name="Appointment (Finished)" action="action_appointment_finish"
                  sequence="45"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>

        <menuitem id="menu_appointment_reject" name="Appointment (Rejected)" action="action_appointment_reject"
                  sequence="50"
                  groups="" parent="appointment_menu.sub_appoint_menu"/>
    </data>
</odoo>
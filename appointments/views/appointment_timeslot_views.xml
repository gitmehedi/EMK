<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_appointment_timeslot_tree">
            <field name="name">appointment.timeslot.tree</field>
            <field name="model">appointment.timeslot</field>
            <field name="arch" type="xml">
                <tree string="Appointment Time Slot" decoration-info="state=='draft'" decoration-success="state=='approve'"
                      decoration-danger="state=='reject'"
                      decoration-bf="state in ('approve',)">
                    <field name="day"/>
                    <field name="name"/>
                    <field name="start_time" widget="float_time"/>
                    <field name="end_time" widget="float_time"/>
                    <field name="active" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_appointment_timeslot_form">
            <field name="name">appointment.timeslot.form</field>
            <field name="model">appointment.timeslot</field>
            <field name="arch" type="xml">
                <form string="Appointment Time Slot" duplicate="0">
                    <header>
                        <button name="act_approve" string="Approve" states="draft" type="object" class="oe_highlight"/>
                        <button name="act_draft" string="Draft" states="reject" type="object" class="oe_highlight"/>
                        <button name="act_reject" string="Reject" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"cancel":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="day"/>
                                <field name="start_time" widget="float_time"/>
                                <field name="end_time" widget="float_time"/>
                            </group>
                            <group>
                                <field name="description" placeholder="Description if any"></field>
                            </group>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="appointment_timeslot_search_view" model="ir.ui.view">
            <field name="name">appointment.timeslot.search.view</field>
            <field name="model">appointment.timeslot</field>
            <field name="arch" type="xml">
                <search>
                    <field name="day"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="state"/>
                    <group string="Group By">
                        <filter string="Pending" name="pending" icon="terp-personal"
                                domain="[('state','in',('draft','approve')),('pending','=',1),'|',('active','=',0),('active','=',1)]"/>
                        <filter string="Rejected" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','reject')]"/>
                        <filter string="In-Active" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','approve')]"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_appointment_timeslot">
            <field name="name">Appointment Time Slot</field>
            <field name="res_model">appointment.timeslot</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {"search_default_active":'False',"search_default_pending":'True'}
            </field>
        </record>

        <menuitem id="menu_appointment_timeslot" action="action_appointment_timeslot" sequence="10"
                  groups="appointment_user.group_appoint_manager" parent="appointment_menu.sub_configuration_menu"/>
    </data>
</odoo>
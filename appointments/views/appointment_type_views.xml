<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_appointment_type_tree">
            <field name="name">appointment.type.tree</field>
            <field name="model">appointment.type</field>
            <field name="arch" type="xml">
                <tree string="Appointment Type"
                      decoration-bf="status==True" decoration-muted="status==False"
                      decoration-success="status==True">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_appointment_type_form">
            <field name="name">appointment.type.form</field>
            <field name="model">appointment.type</field>
            <field name="arch" type="xml">
                <form string="Appointment Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="appointment_type_search_view" model="ir.ui.view">
            <field name="name">appointment.type.search.view</field>
            <field name="model">appointment.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="status"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" domain="[]" context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>



        <record model="ir.actions.act_window" id="action_appointment_type">
            <field name="name">Appointment Type</field>
            <field name="res_model">appointment.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_appointment_type" action="action_appointment_type" sequence="5"
                  groups="" parent="appointment_menu.sub_configuration_menu"/>
    </data>
</odoo>
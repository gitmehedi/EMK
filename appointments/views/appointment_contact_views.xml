<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_appointment_contact_tree">
            <field name="name">appointment.contact.tree</field>
            <field name="model">appointment.contact</field>
            <field name="arch" type="xml">
                <tree string="Appointment Contact"
                      decoration-bf="status==True" decoration-muted="status==False"
                      decoration-success="status==True">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_appointment_contact_form">
            <field name="name">appointment.contact.form</field>
            <field name="model">appointment.contact</field>
            <field name="arch" type="xml">
                <form string="Appointment Contact">
                    <sheet>
                        <group>
                            <group>
                                <field name="appointee_id" domain="[('state','=','employment')]" options="{'no_open': True,'no_create_edit': true}"/>
                                <field name="name"/>
                                <field name="status"/>
                                <field name="description"></field>
                            </group>
                        </group>
                         <notebook>
                            <page string="Appointment Time Slot">
                                <field name="timeslot_ids"></field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="appointment_contact_search_view" model="ir.ui.view">
            <field name="name">appointment.contact.search.view</field>
            <field name="model">appointment.contact</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="status"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" domain="[]" context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>



        <record model="ir.actions.act_window" id="action_appointment_contact">
            <field name="name">Appointment Contact</field>
            <field name="res_model">appointment.contact</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_appointment_contact" action="action_appointment_contact" sequence="15"
                  groups="" parent="appointment_menu.sub_configuration_menu"/>
    </data>
</odoo>
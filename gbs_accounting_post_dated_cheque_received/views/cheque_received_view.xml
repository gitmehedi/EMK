<?xml version="1.0"?>
<odoo>

    <record id="accounting_cheque_received_form" model="ir.ui.view">
        <field name="name">accounting.cheque.received.form</field>
        <field name="model">accounting.cheque.received</field>
        <field name="arch" type="xml">
            <form copy="0" delete="false">
                <header>
                    <button name="action_approve" type="object" states="draft" string="Approve" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="bank_name"/>
                            <field name="branch_name"/>
                            <field name="date_on_cheque"/>
                            <field name="cheque_amount"/>
                            <field name="sale_order_id"/>
                        </group>
                    </group>

                </sheet>
                <!--<div class="oe_chatter">-->
                    <!--<field name="message_follower_ids" widget="mail_followers"/>-->
                    <!--<field name="message_ids" widget="mail_thread"/>-->
                <!--</div>-->
            </form>
        </field>
    </record>

    <record id="accounting_cheque_recieved_tree" model="ir.ui.view">
        <field name="name">accounting.cheque.received.tree.view</field>
        <field name="model">accounting.cheque.received</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Cheque Received Tree">
                <field name="partner_id"/>
                <field name="bank_name"/>
                <field name="cheque_amount"/>
                <field name="sale_order_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="accounting_cheque_received_action">
        <field name="name">Cheque Received</field>
        <field name="res_model">accounting.cheque.received</field>
        <field name="view_mode">form,tree</field>
    </record>


    <!--Inherit Accounting Menus-->
    <menuitem id="menu_finance_receivables"
              name="Sales"
              parent="account.menu_finance"
              sequence="2"/>

    <menuitem action="accounting_cheque_received_action"
              id="menu_accounting_cheque_received"
              parent="account.menu_finance_receivables"
              name="Cheque Received"
              sequence="19"/>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_vendor_bill_generation_batch_wizard" model="ir.ui.view">
            <field name="name">Vendor Bill Generation Batch</field>
            <field name="model">vendor.bill.generation.batch.wizard</field>
            <field name="arch" type="xml">
                <form string="Agreements">
                    <group col="3">
                        <group><field name="billing_period" readonly="1"/></group>
                        <group><field name="period_id" readonly="1"/></group>
                    </group>
                    <group colspan="4" >
                        <separator string="Agreements" colspan="4"/>
                        <newline/>
                        <field name="agreement_ids" nolabel="1"
                               domain="[('type', '=', 'multi'), ('state', '=', 'approve'), ('billing_period', '=', billing_period)]">
                        	<tree string="List" editable="bottom">
                        		<field name="name"/>
                        		<field name="partner_id"/>
                                <field name="product_id"/>
                                <field name="total_service_value"/>
                                <field name="adjustment_value"/>
                                <field name="state" invisible="1"/>
                        	</tree>
                        </field>
                    </group>
                    <footer>
                        <button icon="fa-cogs" string="Generate" name="generate_record" type="object" class="oe_highlight"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_vendor_bill_generation_wizard" model="ir.actions.act_window">
            <field name="name">Generate Vendor Bill Generation Batch</field>
            <field name="res_model">vendor.bill.generation.batch.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vendor_bill_generation_batch_wizard"/>
            <field name="context">{'default_billing_period': context.get('billing_period', False),
                                   'default_period_id': context.get('period_id', False)}</field>
            <field name="target">new</field>
        </record>

    </data>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record model="ir.ui.view" id="mrp_bom_version_tree_view">
            <field name="name">mrp.bom.version.tree</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">name desc</attribute>
                </xpath>
                <xpath expr="//field[@name='product_tmpl_id']" position="before">
                    <field name="name" />
                </xpath>
                <xpath expr="//field[@name='routing_id']" position="after">
                    <field name="state"/>
                </xpath>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="mrp_bom_version_form_view">
            <field name="name">mrp.bom.version.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="action_new_version" type="object" string="New version"
                                attrs="{'invisible':[('state','==','historical')]}"
                                class="oe_highlight"/>
                        <field name="state"
                               widget="statusbar"
                               statusbar_visible="draft,active,historical"
                               attrs="{'invisible':[('state','==','historical')]}"/>
                    </header>
                </xpath>
                <xpath expr="//form/sheet/div[@name='button_box']" position="attributes">
                    <attribute name="attrs">{'invisible': [('state','==','historical')]}</attribute>
                </xpath>
                <xpath expr="//form/sheet/div[@name='button_box']" position="after">
                    <div class="oe_title">
                        <h1><field name="name" nolabel="1"/></h1>
                    </div>
                </xpath>
                <field name="company_id" position="after">
                    <field name="version" />
                    <field name="historical_date" attrs="{'invisible': [('state','!=','historical')]}"/>
                </field>
                <notebook position="inside">
                    <page string="Versions">
                        <field name="old_version_ids">
                            <tree>
                                <field name='name'/>
                                <field name='historical_date' string="Historical Date"/>
                                <field name='create_uid' string="Created by"/>
                                <field name='state'/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="mrp_bom_version_search_view">
            <field name="name">mrp.bom.version.search</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.view_mrp_bom_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="state"/>
                </xpath>
                <xpath expr="//group" position="before">
                    <filter string="Active" domain="[('active','=',True)]" name="is_active_filter"/>
                    <filter string="Inactive" domain="[('active','=',False)]" name="is_inactive_filter"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter string="Active" domain="[]" context="{'group_by':'active'}"/>
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

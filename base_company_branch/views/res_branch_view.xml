<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 	   
 

<!-- Res Branch Tree View  -->
    
	    <record model="ir.ui.view" id="res_branch_tree_view">
	        <field name="name">Company Branch</field>
	        <field name="model">res.branch</field>
	        <field name="type">tree</field>
	        <field name="arch" type="xml">
	           <tree string="Branch">
	              <field name="name"/>
	              <field name="branch_manager"/>
	              <field name="company_id"/>
	           </tree>
	        </field>
	    </record>
	    
<!-- Res Branch Form View  -->
    
	    <record model="ir.ui.view" id="res_branch_form_view">
	        <field name="name">Company Branch</field>
	        <field name="model">res.branch</field>
	        <field name="type">form</field>
	        <field name="arch" type="xml">
	           <form string=" Branch ">
	                  <sheet>
	                    <group>
	                        <group>
	                        	<field name="name"/>
	                        	<field name="code"/>
	              				<field name="company_id" widget="selection" groups="base.group_multi_company"/>
	                        </group>
	                        <group>
	                            <field name="branch_manager"/>
	                        	<field name="active"/>
	                        </group>
	                    </group> 
	                  </sheet>
	                </form>
	        </field>
	    </record>  	    
     
     	<record model="ir.actions.act_window" id="act_res_branch_view">
            <field name="name">Branches</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.branch</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="act_res_branch_view" groups="base.group_erp_manager"
        		id="menu_res_branch" parent="base.menu_res_company_global" sequence="20"/>   
     
 
    </data>
</openerp>    
        
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_leave_summary_wizard_form" model="ir.ui.view">
            <field name="name">hr.leave.summary.wizard.form</field>
            <field name="model">hr.leave.summary.wizard</field>
            <field name="arch" type="xml">
                <form string="Leaves Report">
                    <group>
                        <group>
                            <field name="operating_unit_id"
                                   options="{'no_open':1,'no_create_edit':1,'no_create':1}"/>
                            <field name="department_id"
                                   options="{'no_open':1,'no_create_edit':1,'no_create':1}"
                                   placeholder="All"/>
                        </group>
                        <group>
                            <field name="year_id"
                                   options="{'no_open':1,'no_create_edit':1,'no_create':1}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="process_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_leave_summary_report_wizard" model="ir.actions.act_window">
            <field name="name">Leaves Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.leave.summary.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                name="Leaves Summary"
                parent="hr_holidays.menu_hr_holidays_report"
                action="action_leave_summary_report_wizard"
                id="menu_hr_leave_summary"/>
    </data>
</odoo>

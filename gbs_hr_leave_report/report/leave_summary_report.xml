<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_emp_leave_summary">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <!--<t t-foreach="docs" t-as="o">-->
                    <div class="page" style="page-break-inside: auto">
                        <div class="row">
                            <div class="col-xs-12" style="text-align:center;">
                                <h2>
                                    <strong>Employee Leave Summary Report</strong>
                                </h2>
                                <hr/>
                            </div>
                        </div>
                        <div style=" background-color:#85C1E9; font-size:15px">
                            <div class="row">
                                <div class="col-xs-9">
                                    <div class="col-xs-10" style="text-align:left;padding-top: 10px;">
                                        <strong>Operating Unit :</strong>
                                        <span t-esc="operating_unit"/>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="row">
                                        <div style="padding-left: 30px;">
                                            <strong>Date From :</strong>
                                            <span t-esc="form_date"/>
                                        </div>
                                        <div style="padding-left: 30px;">
                                            <strong>Date To :</strong>
                                            <span t-esc="to_date"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>

                        <table class="table table-bordered" style="width:100%">
                            <thead>
                                <tr style="background-color:#CACFD2;">
                                    <t t-foreach="header" t-as="head">
                                        <t t-if="len(head_value)>1">
                                            <th rowspan="2" style="text-align: center;">
                                                <t t-esc="head_value"/>
                                            </th>
                                        </t>
                                        <t t-if="len(head_value)==1">
                                            <t t-foreach="head_value" t-as="dynamic">
                                                <th colspan="2" style="text-align: center;">
                                                    <t t-esc="dynamic"/>
                                                </th>
                                            </t>
                                        </t>
                                    </t>
                                </tr>
                                <tr style="background-color:#CACFD2;">
                                    <t t-foreach="range(0,len(header)-4)" t-as="tas">
                                        <th style="text-align: center;">
                                            Avail
                                        </th>
                                        <th style="text-align: center;" >
                                            Balance
                                        </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="holiday_objs" t-as="holiday">
                                    <tr>
                                        <td>
                                            <span t-esc="holiday_index+1"/>
                                        </td>
                                        <td>
                                            <span t-esc="holiday.employee_id.name"></span>
                                        </td>
                                        <td>
                                            <span t-esc="holiday.employee_id.job_id.name"></span>
                                        </td>
                                        <td>
                                            <span t-esc="holiday.department_id.name"></span>
                                        </td>
                                        <!--<td><span t-esc="type_all.number_of_days_temp"></span></td>-->
                                        <!--<td><span t-esc="emp['dept']"></span></td>-->
                                        <!--<td><span t-esc="emp['designation']"></span></td>-->
                                        <!--<t t-foreach="dynamic_col_list" t-as="c">-->
                                        <!--<td class="text-right"><span t-esc="emp[c]"></span></td>-->
                                        <!--</t>-->
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <!--<footer>-->
                        <!--<p><b>Submitted by:</b> <span t-field="o.requested_by"/></p>-->
                        <!--<p><b>First Approval by:</b> <span t-field="o.approver1_id"/></p>-->
                        <!--<p><b>Final Approval by: </b><span t-field="o.approver2_id"/></p>-->
                        <!--</footer>-->
                    </div>
                </t>
            </t>
        </template>

        <report id="report_leave_summary"
                string="Leaves Summary"
                model="hr.holidays"
                report_type="qweb-pdf"
                name="gbs_hr_leave_report.report_emp_leave_summary"
                file="gbs_hr_leave_report.report_emp_leave_summary"
                menu="False"
        />


    </data>
</odoo>

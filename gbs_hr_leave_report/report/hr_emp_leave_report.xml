<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="hr_emp_leave_report">
            <t t-call="report.html_container">
                <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside: auto">
                        <style>
                            .leave-type-title {
                                border-bottom:1px solid #ddd;
                                padding: 5px 5px;
                                margin: 0;
                                text-align: left;
                                background: #e5e5e5;
                                font-size: 14px;
                                font-weight: bold;
                            }

                            .emp-leave-header { border: 1px solid #ddd; border-bottom: none; }
                            .data-legend { margin: 3px 0 2px; padding: 0 5px; font-size: 12px; }

                            .hr-2, .hr-1 { border-color: #ddd; }
                            .hr-1 { margin: 15px 0 10px; }
                            .hr-2 { margin: 10px 0 0; }

                        </style>
                        <div class="clearfix">
                            <div class="">
                                <h3 class="text-center">Employee's Leave Summary</h3>
                            </div>
                            <hr class="hr-1"/>
                            <div class="row">
                                <div class="col-xs-6 text-left">
                                    <div>
                                        <strong>Employee ID:</strong>
                                        <span t-esc="data['emp_acc']"/>
                                    </div>
                                    <div>
                                        <strong>Employee Name:</strong>
                                        <span t-esc="data['emp_name']"/>
                                    </div>
                                    <div>
                                        <strong>Year:</strong>
                                        <span t-esc="data['year_name']"/>
                                    </div>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <div>
                                        <strong>Designation:</strong>
                                        <span t-esc="data['designation']"/>
                                    </div>
                                    <div>
                                        <strong>Department:</strong>
                                        <span t-esc="data['department']"/>
                                    </div>
                                </div>
                            </div>
                            <hr class="hr-2"/>
                        </div>

                        <t t-foreach="lists" t-as="list">
                            <header class="emp-leave-header">
                                <h4 class="leave-type-title text-primary">
                                    <t t-esc="list_value['name']"/>
                                </h4>
                                <div class="row">
                                    <div class="col-xs-4">
                                        <p class="text-left data-legend">
                                            <strong>Initial Balance:</strong>
                                            <span t-esc="list_value['init_bal']"/>
                                        </p>
                                    </div>
                                    <div class="col-xs-4">
                                        <p class="text-center data-legend">
                                            <strong>Avail:</strong>
                                            <span t-esc="list_value['avail']"/>
                                        </p>
                                    </div>
                                    <div class="col-xs-4">
                                        <p class="text-right data-legend">
                                            <strong>Current Balance:</strong>
                                            <span t-esc="list_value['cur_bal']"/>
                                        </p>
                                    </div>
                                </div>
                            </header>

                            <table class="table table-bordered table-report-xs table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th class="text-center">From Date</th>
                                        <th class="text-center">To Date</th>
                                        <th class="text-center">Day(s)</th>
                                        <th class="text-center">Leave Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="list_value['detail']">
                                        <t t-foreach="list_value['detail']" t-as="rec">
                                            <tr>
                                                <td class="text-center">
                                                    <t t-esc="rec_value['from_date']"/>
                                                </td>
                                                <td class="text-center">
                                                    <t t-esc="rec_value['to_date']"/>
                                                </td>
                                                <td class="text-center">
                                                    <t t-esc="rec_value['days']"/>
                                                </td>
                                                <td class="text-center">
                                                    <t t-esc="rec_value['type']"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="4">
                                                In information available
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-call="report_layout.report_signing"></t>
                    </div>
                </t>
            </t>
        </template>
        <report id="action_hr_emp_leave_report"
                string="Employee's Leave Report"
                model="hr.holidays"
                report_type="qweb-pdf"
                name="gbs_hr_leave_report.hr_emp_leave_report"
                file="gbs_hr_leave_report.hr_emp_leave_report"
                menu="False"
                paperformat="report_layout.paperformat_backend_portrait"
        />
    </data>
</odoo>

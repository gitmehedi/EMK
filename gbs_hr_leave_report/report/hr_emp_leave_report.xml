<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="hr_emp_leave_report">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page" style="page-break-inside: auto">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2 class="text-center">Employee's Leave Summary</h2>
                            </div>
                            <br/>
                            <br/>
                            <br/>
                            <br/>

                            <div class="col-xs-12">
                                <div class="col-xs-6 text-left">
                                    <div>
                                        <strong>Employee ID:</strong>
                                        <span t-esc="data['emp_id']"/>
                                    </div>
                                    <div>
                                        <strong>Employee Name:</strong>
                                        <span t-esc="data['emp_name']"/>
                                    </div>
                                    <div>
                                        <strong>Year:</strong>
                                        <span t-esc="data['year_name']"/>
                                    </div>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <div>
                                        <strong>Designation:</strong>
                                        <span t-esc="data['designation']"/>
                                    </div>
                                    <div>
                                        <strong>Department:</strong>
                                        <span t-esc="data['department']"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br/>
                        <t t-foreach="lists" t-as="list">
                            <div class="row">
                                <div class="col-xs-12 text-center">
                                    <h3>
                                        <t t-esc="list_value['name']"/>
                                    </h3>
                                </div>
                                <div class="col-xs-4">
                                    <div class="text-left">
                                        <strong>Initial Balance:</strong>
                                        <span t-esc="list_value['init_bal']"/>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div class="text-center">
                                        <strong>Avail:</strong>
                                        <span t-esc="list_value['avail']"/>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div class="text-right">
                                        <strong>Current Balance:</strong>
                                        <span t-esc="list_value['cur_bal']"/>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <table class="table table-bordered">
                                <thead>
                                    <tr style="background-color:#EFECEB;">
                                        <th class="text-center">From Date</th>
                                        <th class="text-center">To Date</th>
                                        <th class="text-center">Day(s)</th>
                                        <th class="text-center">Leave Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="list_value['detail']">
                                        <t t-foreach="list_value['detail']" t-as="rec">
                                            <tr>
                                                <td class="text-center">
                                                    <t t-esc="rec_value['from_date']"/>
                                                </td>
                                                <td class="text-center">
                                                    <t t-esc="rec_value['to_date']"/>
                                                </td>
                                                <td class="text-center">
                                                    <t t-esc="rec_value['days']"/>
                                                </td>
                                                <td class="text-center">
                                                    <t t-esc="rec_value['type']"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="4">
                                                In information available
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <div class="row mb32" style="margin-top: 30mm;">
                            <div class="col-xs-3 text-center">
                                <strong style="border-top: 1px solid black; padding-top:5px;">Prepared By</strong>
                            </div>
                            <div class="col-xs-3 text-center">
                                <strong style="border-top: 1px solid black; padding-top:5px;">Checked By</strong>
                            </div>
                            <div class="col-xs-3 text-center">
                                <strong style="border-top: 1px solid black; padding-top:5px;">Recommended By</strong>
                            </div>
                            <div class="col-xs-3 text-center">
                                <strong style="border-top: 1px solid black; padding-top:5px;">Authorized By</strong>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
        <report id="action_hr_emp_leave_report"
                string="Employee's Leave Report"
                model="hr.holidays"
                report_type="qweb-pdf"
                name="gbs_hr_leave_report.hr_emp_leave_report"
                file="gbs_hr_leave_report.hr_emp_leave_report"
                menu="False"
                paperformat="custom_report.paperformat_backend_portrait"
        />
    </data>
</odoo>

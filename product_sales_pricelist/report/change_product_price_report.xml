<odoo>
    <data>
        <report id="report_product_sales_pricelist"
                model="product.sales.pricelist"
                string="Product Pricelist"
                name="product_sales_pricelist.report_productPricelist_view"
                file="product_sales_pricelist.report_productPricelist"
                paperformat="report_layout.paperformat_backend_portrait"
                report_type="qweb-pdf"/>

        <template id="report_productPricelist_view">
            <t t-call="report.html_container">
                <t t-call="report_layout.gbs_internal_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page" style="page-break-inside:auto">
                            <div class="row">
                                <div class="clearfix">
                                    <h4 class="report-title">Product Sales Pricelist</h4>
                                    <div class="row">
                                        <div class="col-xs-7 text-left">
                                            <h6><b>Prepared By: </b><span t-field="doc.requested_by"/></h6>
                                            <h6><b>First Approval By: </b><span t-field="doc.approver1_id"/></h6>
                                        </div>
                                        <div class="col-xs-5 text-left">
                                            <h6><b>Second Approval By: </b><span t-field="doc.approver2_id"/></h6>
                                            <h6><b>Effective Date: </b><span t-field="doc.effective_date" t-field-options='{"format": "Y-MM-dd"}'/></h6>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-bordered table-report-xs table-striped"
                                   style="margin-bottom: 10px;table-layout:fixed;">
                                    <thead>
                                        <tr class="odo-bg-gray">
                                            <th class="text-center">Product</th>
                                            <th class="text-center" style="width:12%;">Packaging Mode</th>
                                            <th class="text-center" style="width:8%;">UoM</th>
                                            <th class="text-center" style="width:8%;">Currency</th>
                                            <th class="text-center" style="width:18%;">Old Price</th>
                                            <th class="text-center" style="width:18%;">New Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="page-break-inside: avoid">
                                            <td>
                                                <span t-field="doc.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="doc.product_package_mode"/>
                                            </td>
                                            <td>
                                                <span t-field="doc.uom_id"/>
                                            </td>
                                            <td>
                                                <span t-field="doc.currency_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="doc.list_price"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="doc.new_price"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
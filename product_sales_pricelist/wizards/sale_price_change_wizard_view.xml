<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
		<!-- Form View -->
		<record id="sale_price_changes_form" model="ir.ui.view">
			<field name="name">sale.price.details.form</field>
			<field name="model">sale.price.details</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Product Sale Price Change History">
					<sheet>
						<group>
							<group>
                                <field name="product_id" options="{'no_open': True}"/>
								<field name="currency_id" options="{'no_open': True}"/>
							</group>
						</group>
						<footer>
							<footer>
								<button name= "search_data" type="object" string="View History" class="oe_highlight" />
								<button string="Cancel" class="btn btn-sm btn-default o_form_button_cancel" special="cancel"/>
                			</footer>
						</footer>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Menu Action -->
		<record id="price_history_action" model="ir.actions.act_window">
			<field name="name">Single Product Price History</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sale.price.details</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

    </data>
</openerp>
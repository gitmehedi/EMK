<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="Variant_wise_price_list_form_view" model="ir.ui.view">
            <field name="name">Variant_wise_price_list_form</field>
            <field name="model">product.sale.history.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Change Products Sale Price">
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="product_package_mode"/>
                            <field name="uom_id"/>
                            <field name="new_price"/>
                            <field name="discount"/>
                            <field name="currency_id"/>
                            <!--<field name="country_id"/>-->
                            <!--<field name="terms_setup_id"/>-->
                            <!--<field name="freight_mode"/>-->
                            <field name="approve_price_date" string="Effective Date"/>
                            <field name="category_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="product_sale_price_history_variant_wise_tree" model="ir.ui.view">
            <field name="name">Variant_wise_price_list_tree</field>
            <field name="model">product.sale.history.line</field>
            <field name="arch" type="xml">
                <tree string="Product Sale Price History">
                    <field name="product_id"/>
                    <field name="product_package_mode"/>
                    <field name="uom_id"/>
                    <field name="new_price"/>
                    <field name="discount"/>
                    <field name="currency_id"/>
                    <!--<field name="country_id"/>-->
                    <!--<field name="terms_setup_id"/>-->
                    <!--<field name="freight_mode"/>-->
                    <field name="approve_price_date" string="Effective Date"/>
                </tree>
            </field>
        </record>

        <record id="action_product_variants_sale_price_history_tree_view" model="ir.actions.act_window">
            <field name="name">Current Approved Price</field>
            <field name="res_model">product.sale.history.line</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="product_sale_price_history_variant_wise_tree"/>
        </record>

        <menuitem id="variant_wise_price_history_menu"
                  name="Current Approved Price" sequence="10"
                  parent="custom_menu_products"
                  groups="account.group_account_user,gbs_application_group.group_sales_customer_manager,gbs_application_group.group_sales_product_manager,sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  action="action_product_variants_sale_price_history_tree_view"/>

    </data>
</odoo>
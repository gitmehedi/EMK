<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="product_packaging_tree_view" model="ir.ui.view">
			<field name="name">product_package_mode_tree_view</field>
			<field name="model">product.packaging.mode</field>
			<field name="arch" type="xml">
				<tree>
                    <field name="packaging_mode"/>
				</tree>
			</field>
		</record>

		<record id="product_packaging_form_view" model="ir.ui.view">
			<field name="name">product_package_form_view</field>
			<field name="model">product.packaging.mode</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Product Packaging Mode">
					<sheet>
						<group>
							<group>
								<field name="packaging_mode"/>
								<field name="uom_id"/>
							</group>
							<group>
								<field name="sequence"/>
								<field name="is_jar_bill_included"/>
							</group>
						</group>
	                </sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="product_packaging_mode_action">
            <field name="name">Packing Modes</field>
            <field name="res_model">product.packaging.mode</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="product_packaging_mode_menu" name="Packing Modes" parent="sale.prod_config_main" sequence="3"
                  action="product_packaging_mode_action"/>


    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherited_product_temp_form_view" model="ir.ui.view">
            <field name="name">inherited_product_temp_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" string="Pricing History"
                                name="action_view_pricing_history"
                                class="oe_stat_button"
                                icon="fa-usd">
                        </button>
                    </div>
                </data>

                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="max_ordering_qty" invisible="1"/>
                </xpath>

                <!--<xpath expr="//field[@name='max_ordering_qty']" position="after">-->
                    <!--<field name="available_qty" invisible="1"/>-->
                <!--</xpath>-->


            </field>
        </record>

        <record id="inherit_product_template_form_view" model="ir.ui.view">
            <field name="name">Inherited Product Template Form View</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/button[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="inherit_product_template_form_view_procurement_button" model="ir.ui.view">
            <field name="name">Inherited Product Template Form View Procurement Button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header/button[3]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="inherited_product_temp_kanban_view" model="ir.ui.view">
            <field name="name">inherited_product_temp_kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div/div/ul/li/field[@name='lst_price']" position="after">
                    <!--<li>Available Qty: <field name="available_qty" invisible="1"></field></li>-->
                </xpath>
            </field>
        </record>

        <menuitem id="custom_menu_productss" sequence="5" name="Products"
                  groups="gbs_application_group.group_sales_customer_manager,gbs_application_group.group_sales_product_manager,sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  parent="sales_team.menu_base_partner"/>

    </data>
</odoo>
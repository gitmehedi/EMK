<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="1">

    <record id="ir_cron_product_prices_update" model="ir.cron">
        <field name="name">Product Price Automation</field>
        <field name="active" eval="False"/>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">1</field> <!-- (-1) indicates unlimited -->
        <field name="nextcall"
               eval="(datetime.now() + timedelta(hours=1)).strftime('%Y-%m-%d 02:00:00')"
               />
        <field name="model">product.product</field>
        <field name="function">update_product_variants_wise_pricing</field>
    </record>

</odoo>

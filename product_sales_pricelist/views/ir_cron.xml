<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="1">

    <record id="ir_cron_sales_product_variants_price_update" model="ir.cron">
        <field name="name">Auto Updating Variants Price of Product</field>
        <field name="active">0</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field> <!-- (-1) indicates unlimited -->
        <field name="nextcall"
               eval="(datetime.now() + timedelta(minutes=1)).strftime('%Y-%m-%d 02:00:00')"/>
        <field name="model">product.sale.history.line</field>
        <field name="function">pull_automation</field>
    </record>

</odoo>

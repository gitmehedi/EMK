<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="sale_price_change_tree" model="ir.ui.view">
            <field name="name">sale_price_change_tree_view</field>
            <field name="model">product.sales.pricelist</field>
            <field name="arch" type="xml">
                <tree string="Change Products Sale Price"
                      colors="blue:state == 'confirm';red:state == 'validate1'">
                    <field name="product_id"/>
                    <field name="new_price"/>
                    <field name="discount"/>
                    <field name="currency_id"/>
                    <!--<field name="country_id"/>-->
                    <field name="state"/>
                    <field name="approver2_date"/>
                    <field name="effective_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="sale_price_change_form_view" model="ir.ui.view">
            <field name="name">sale_price_change_form_view</field>
            <field name="model">product.sales.pricelist</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Change Products Sale Price">
                    <header>

                        <button string="Confirm" name="action_confirm"
                                groups="sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_account,gbs_application_group.group_head_sale,gbs_application_group.group_cxo"
                                states="draft" type="object" class="oe_highlight"/>

                        <button string="Apparove" name="action_approve" groups="gbs_application_group.group_cxo"
                                states="validate1" type="object" class="oe_highlight"/>

                        <button string="Validate" name="action_validate"
                                groups="gbs_application_group.group_cxo,gbs_application_group.group_head_account"
                                states="validate2" type="object" class="oe_highlight"/>

                        <button string="Approve" name="action_sales_head"
                                groups="gbs_application_group.group_head_sale,gbs_application_group.group_cxo"
                                states="confirm" class="oe_highlight" type="object"/>

                        <button string="Refuse" name="action_refuse"
                                groups="gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                                states="confirm,validate1,validate2" type="object"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirm,validate2,validate1,validate"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" options="{'no_open':True, 'no_create_edit': True}"/>
                                <field name="product_package_mode"/>
                                <field name="uom_id" options="{'no_open':True, 'no_create_edit': True}"/>
                                <field name="category_id" invisible="1"/>
                                <field name="currency_id" options="{'no_open':True,'no_create_edit': True}"/>
                                <field name="list_price" invisible="1"/>
                                <field name="new_price"/>
                                <field name="discount"/>
                                <!--<field name="country_id" options="{'no_open':True,'no_create_edit': True}"/>-->
                                <!--<field name="terms_setup_id" options="{'no_open':True,'no_create_edit': True}"/>-->
                                <!--<field name="freight_mode"/>-->
                                <field name="effective_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Others">
                                <group>
                                    <group>
                                        <field name="request_date"/>
                                        <field name="requested_by"/>
                                    </group>
                                    <group>
                                        <field name="approver1_id"
                                               attrs="{'invisible':['|', ('state','=','draft'),('state','=','confirm')]}"/>
                                        <field name="approver1_date"
                                               attrs="{'invisible':['|', ('state','=','draft'),('state','=','confirm')]}"/>
                                    </group>
                                    <group>
                                        <field name="approver2_id"
                                               attrs="{'invisible': [('state','in',('draft','confirm','validate1'))]}"/>
                                        <field name="approver2_date"
                                               attrs="{'invisible': [('state','in',('draft','confirm','validate1'))]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>


        <record id="search_view_pricelists" model="ir.ui.view">
            <field name="name">product.sales.pricelist.search</field>
            <field name="model">product.sales.pricelist</field>
            <field name="arch" type="xml">
                <search string="Sales Pricelist">
                    <filter name="confirm" string="To Approve" domain="[('state','=','confirm')]"/>
                </search>
            </field>
        </record>


        <record id="action_product_sale_price_change" model="ir.actions.act_window">
            <field name="name">Product Sales Pricelist</field>
            <field name="res_model">product.sales.pricelist</field>
            <field name="context">{'search_default_group_product_id':1,'search_default_confirm':1}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Sales"
                  id="sales_team.menu_base_partner"
                  groups="gbs_application_group.group_account_income,gbs_application_group.group_sales_customer_manager,gbs_application_group.group_sales_product_manager,sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  web_icon="sale,static/description/icon.png"/>

        <menuitem id="custom_menu_products"
                  sequence="8"
                  name="Products"
                  groups="sales_team.group_sale_salesman_all_leads,account.group_account_user,gbs_application_group.group_sales_customer_manager,gbs_application_group.group_sales_product_manager,gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  parent="sales_team.menu_base_partner"/>
        <menuitem id="sale.menu_products"
                  groups="sales_team.group_sale_salesman_all_leads,account.group_account_user,gbs_application_group.group_sales_customer_manager,gbs_application_group.group_sales_product_manager,gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  action="product.product_normal_action_sell" parent="custom_menu_products" sequence="10"/>
        <menuitem id="product_sale_price_change_menu_action"
                  name="Product Sales Pricelist"
                  groups="account.group_account_user,gbs_application_group.group_sales_customer_manager,gbs_application_group.group_sales_product_manager,sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  parent="custom_menu_products" sequence="9" action="action_product_sale_price_change"/>

        <menuitem id="sale.menu_product_template_action"
                  parent="custom_menu_products" sequence="8"
                  action="product.product_template_action"
                  groups="account.group_account_user,gbs_application_group.group_sales_customer_manager,gbs_application_group.group_sales_product_manager,sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"/>

        <menuitem id="price_history_menu"
                  name="Single Product Price" sequence="11"
                  parent="custom_menu_products"
                  groups="account.group_account_user,gbs_application_group.group_sales_customer_manager,gbs_application_group.group_sales_product_manager,sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"
                  action="price_history_action"/>


        <!--Remove Customer Manager group from certain menu-->
        <record id="product_sales_pricelist.price_history_menu" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(3,ref('gbs_application_group.group_sales_customer_manager'))]"/>
        </record>

        <record id="sale.menu_product_template_action" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(3,ref('gbs_application_group.group_sales_customer_manager'))]"/>
        </record>

        <record id="sale.menu_product_template_action" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(3,ref('gbs_application_group.group_sales_customer_manager'))]"/>
        </record>

        <record id="sale.menu_sale_order_upselling" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(3,ref('gbs_application_group.group_sales_customer_manager'))]"/>
        </record>

        <record id="product_sales_pricelist.custom_menu_products" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(3,ref('gbs_application_group.group_sales_customer_manager'))]"/>
        </record>

        <!--<record id="sales_team.menu_sales" model="ir.ui.menu">-->
        <!--<field name="groups_id"-->
        <!--eval="[(3,ref('gbs_application_group.group_sales_customer_manager'))]"/>-->
        <!--</record>-->


    </data>
</odoo>
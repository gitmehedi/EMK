<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_inherit_currency_tree" model="ir.ui.view">
            <field name="name">inherit.res.currency.tree</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rate']" position="replace">
                    <field name="rate" invisible="1"/>
                    <field name="reverse_rate"/>
                </xpath>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_inherit_currency_form" model="ir.ui.view">
            <field name="name">inherit.res.currency.form</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rate']" position="replace">
                    <field name="reverse_rate"/>
                    <field name="rate" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
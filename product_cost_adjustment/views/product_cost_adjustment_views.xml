<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="product_cost_adjustment_view_form" model="ir.ui.view">
			<field name="name">product.cost.adjustment</field>
			<field name="model">product.cost.adjustment</field>
			<field name="arch" type="xml">
				<form string="product size Form">
                    <header>
						<!--<button name="action_confirm" type="object" states="draft"-->
							<!--string="Confirm" class="oe_highlight" />-->

						<field name="state" widget="statusbar" />
					</header>
					<sheet>
                        <div colspan="6" class="oe_title">
                            <label for="name" class="oe_form_label_help oe_align_right oe_edit_only"/>
                            <h1>
                                <span colspan="6" class="oe_form_field oe_form_field_char oe_form_required">
                                    <field name="name" placeholder="e.g. Annual Inventory"/>
                                </span>
                            </h1>
                        </div>
						<group colspan="4">
                            <group>
                                <field name="inventory_date" />
                            </group>

                            <group>
                                <field name="product_tmp_id" />
                                <field name="state" invisible="1" />
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Inventory Details">
								<field name="cost_adjustment_ids">
									<tree string="" editable="top">
										<field name="product_id" domain="[('product_tmpl_id','=',parent.product_tmp_id)]"/>
										<field name="old_cost_price"/>
										<field name="new_cost_price"/>
									</tree>
								</field>
                            </page>
                        </notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- season tree/list view -->
		<record id="product_cost_adjustment_view_tree" model="ir.ui.view">
			<field name="name">product.cost.adjustment.tree</field>
			<field name="model">product.cost.adjustment</field>
			<field name="arch" type="xml">
				<tree string="product size Tree">
					<field name="name" />
					<field name="inventory_date" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- season search view -->

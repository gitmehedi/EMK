					<!--<group string="Group By">-->
						<!--<filter name="status" string="active" context="{'group_by': 'active'}" />-->
					<!--</group>-->
				<!--</search>-->
			<!--</field>-->
		<!--</record>-->

		<record id="product_cost_adjustment_action" model="ir.actions.act_window">
			<field name="name">Product Cost Adjustment</field>
			<field name="res_model">product.cost.adjustment</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem name="Product Adjustment Matrix" id="menu_product_cost_adjustment_maxtix"
		    	parent="stock.menu_stock_inventory_control" action="product_cost_adjustment_action" />

	</data>
</openerp>

































<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_loan_employee" model="ir.rule">
        <field name="name">Employee Loan</field>
        <field name="model_id" ref="model_hr_employee_loan"/>
        <field name="domain_force"> [('employee_id','in',[e.id for e in user.employee_ids])]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

    <record id="hr_employee_loan_unit_hr" model="ir.rule">
        <field name="model_id" ref="model_hr_employee_loan"/>
        <field name="domain_force">[('employee_id.operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="name">Allowed Loan to HR</field>
        <field eval="1" name="perm_unlink"/>
        <field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="1" name="perm_create"/>
        <field name="groups" eval="[(4,ref('hr_employee_loan.group_manager_loan'))]"/>
    </record>

</odoo>
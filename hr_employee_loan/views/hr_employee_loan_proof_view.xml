<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="hr_employee_loan_proof_form" model="ir.ui.view" >
			<field name="name">hr.employee.loan.proof.form</field>
			<field name="model">hr.employee.loan.proof</field>
			<field name="type">form</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<form string="Employee Loan Types">
					<sheet>
						<group>
							<group>
								<field name="name" />
							</group>
							<group>
								<field name="mandatory" />
							</group>	
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="hr_employee_loan_proof_tree_view" model="ir.ui.view">
			<field name="name">hr.employee.loan.proof.tree</field>
			<field name="model">hr.employee.loan.proof</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<form string="Employee Loan Proof">
					<field name="name" />
					<field name="mandatory" />
				</form>
			</field>
		</record>
        <record  id="hr_loan_proof_action" model="ir.actions.act_window">
            <field name="name">Loan Proofs</field>
            <field name="res_model">hr.employee.loan.proof</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem id="loan_proof_menu" name="Loan Proofs" parent="configuration_menu" sequence="15"
                  action="hr_loan_proof_action" groups="base.group_user" />
        
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="hr_employee_loan_type_form" model="ir.ui.view" >
			<field name="name">hr.loan.type.form</field>
			<field name="model">hr.employee.loan.type</field>
			<field name="type">form</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<form string="Employee Loan Types">
				<sheet>
					Name<h2><field name="name" /></h2>
					Code<h2><field name="code" /></h2>
					<field name="company_id" readonly="1" groups="base.group_multi_company"/>
					<group string="General" invisible="1">
						<group>
							<field name="is_interest_payable" />
							<field name="interest_mode_id" attrs="{'invisible': [('is_interest_payable', '=', False)]}" />
							<field name="rate" attrs="{'invisible': [('is_interest_payable', '=', False)]}"/>
							<field name="interest_account_id" />
						</group>
						<group>
							<field name="repayment_method_id" />
							<field name="disburse_method_id" />
							<field name="company_id" readonly="1" groups="base.group_multi_company"/>
						</group>
					</group>
					<notebook position="inside">
						<page string="Loan Proofs">
							<field name="loan_proof_ids" />	
						</page>
						<page string="Employee Categories" invisible="1">
							<field name="employee_tag_ids" />
						</page>
						<page string="Loan Policies">
							<field name="loan_policy_ids" />		
						</page>
					</notebook>	
				</sheet>		
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_employee_loan_type_tree_view">
			<field name="name">hr.loan.type.tree</field>
			<field name="model">hr.employee.loan.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
			<tree string="Employee Loan Types">
					<field name="name" />
					<field name="is_interest_payable" />
					<field name="interest_mode_id" />
					<field name="rate" />
					<field name="repayment_method_id" />
					<field name="disburse_method_id" />
					<field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="hr_loan_type_action">
			<field name="name">Loan Types</field>
			<field name="res_model">hr.employee.loan.type</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="loan_type_menu" name="Loan Types" parent="configuration_menu"
			sequence="5" action="hr_loan_type_action" groups="group_manager_loan" />
	 </data>
</odoo>
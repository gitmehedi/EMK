<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="hr_employee_loan_type_form" model="ir.ui.view" >
			<field name="name">hr.loan.type.form</field>
			<field name="model">hr.employee.loan.types</field>
			<field name="type">form</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<form string="Employee Loan Types">
				<sheet>
					Name<h2><field name="name" /></h2>
					Code<h2><field name="code_ids" /></h2>
					<group string="General">
						<group>
							<field name="is_interest_payable" />
							<field name="interest_mode" />
							<field name="rate" />
							<field name="interest_account" />
						</group>
						<group>
							<field name="repayment_method" />
							<field name="disburse_method" />
							<field name="company_id" readonly="1" groups="base.group_multi_company"/>
						</group>
					</group>	
					<notebook position="inside">
						<page string="Loan Proofs">
							<field name="loan_proofs_ids" />	
						</page>
						<page string="Employee Categories">
							<field name="employee_tag_ids" />		
						</page>
					</notebook>	
				</sheet>		
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_employee_loan_type_tree_view">
			<field name="name">hr.loan.type.tree</field>
			<field name="model">hr.employee.loan.types</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
			<tree string="Employee Loan Types">
					<field name="name" />
					<field name="is_interest_payable" />
					<field name="interest_mode" />
					<field name="rate" />
					<field name="repayment_method" />
					<field name="disburse_method" />
					<field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="hr_loan_types_action">
			<field name="name">Loan Types</field>
			<field name="res_model">hr.employee.loan.types</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="courses_menu_7" name="Loan Types" parent="configuration_menu"
			sequence="10" action="hr_loan_types_action" />
	 </data>
</odoo>
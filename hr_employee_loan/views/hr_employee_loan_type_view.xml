<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="hr_employee_loan_type_form" model="ir.ui.view" >
			<field name="name">hr.loan.type.form</field>
			<field name="model">hr.employee.loan.types</field>
			<field name="type">form</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<form string="Employee Loan Types">
					<group>
						<group>
							<field name="name" />
							<field name="is_interest_payable" />
							<field name="interest_mode" />
							<field name="rate" />
							<field name="repayment_method" />
							<field name="disburse_method" />
							<field name="company" />
						</group>	
					</group>
					<notebook position="inside">
						<page string="Loan Proof">
								
						</page>
						<page string="Configaration">
								
						</page>
					</notebook>		
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_employee_loan_type_tree_view">
			<field name="name">hr.loan.type.tree</field>
			<field name="model">hr.employee.loan.types</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
			<form string="Employee Loan Types">
					<field name="name" />
					<field name="is_interest_payable" />
					<field name="interest_mode" />
					<field name="rate" />
					<field name="repayment_method" />
					<field name="disburse_method" />
					<field name="company" />
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="hr_loan_types_action">
			<field name="name">Loan Types</field>
			<field name="res_model">hr.employee.loan.types</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="courses_menu_7" name="Loan Types" parent="configuration_menu"
			sequence="10" action="hr_loan_types_action" />
	 </data>
</odoo>
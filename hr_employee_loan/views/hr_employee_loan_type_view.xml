<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_employee_loan_type_tree" model="ir.ui.view">
			<field name="name">hr.employee.loan.type.tree</field>
			<field name="model">hr.employee.loan.type</field>
			<field name="arch" type="xml">
				<tree string="Employee Loan Types">
					<field name="name" />
					<field name="is_interest_payable" />
					<field name="interest_mode" />
					<field name="rate" />
					<field name="repayment_method" />
					<field name="disburse_method" />
					<field name="company" />
				</tree>
			</field>
		</record>
		
		<record id="hr_employee_loan_type_form" model="ir.ui.view">
			<field name="name">hr.employee.loan.type.form</field>
			<field name="model">hr.employee.loan.type</field>
			<field name="arch" type="xml">
				<tree string="Employee Loan Types">
					<field name="name" />
					<field name="is_interest_payable" />
					<field name="interest_mode" />
					<field name="rate" />
					<field name="repayment_method" />
					<field name="disburse_method" />
					<field name="company" />
				</tree>
			</field>
		</record>
		
        <record model="ir.actions.act_window" id="hr_loan_types_action">
            <field name="name">Loan Types</field>
            <field name="res_model">hr.employee.loan.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_loan_menu" name="Loan"/>
                    
        <!-- Configuration level --> 
        <menuitem id="courses_menu_5" name="Configuration" parent="main_loan_menu" sequence="8"/>
        
        <menuitem id="courses_menu_7" name="Loan Types" parent="courses_menu_5" sequence="10"
                  action="hr_loan_types_action"/>
         
    </data>
</odoo>
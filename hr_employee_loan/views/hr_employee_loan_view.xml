<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_employee_loan_form" model="ir.ui.view">
            <field name="name">hr.employee.loan.form</field>
            <field name="model">hr.employee.loan</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Employee Loan Requests" delete="false" copy='0'>
                    <header>
                        <button name="action_done" type="object"
                                string="Approve"
                                states="applied" groups="hr_employee_loan.group_manager_loan" class="oe_highlight"/>
                        <button name="action_confirm" type="object"
                                string="Reject" groups="hr_employee_loan.group_manager_loan"
                                states="applied"/>
                        <button name="action_draft" type="object"
                                string="Apply" states="draft"
                                class="oe_highlight"/>
                        <button name="generate_schedules" states="approved"
                                string="Compute" type="object" groups="hr_employee_loan.group_manager_loan,hr.group_hr_manager"
                                class="oe_highlight"/>
                        <button name="action_disbursed" type="object"
                                string="Disburse Loan" states="approved" groups="hr.group_hr_manager,hr_employee_loan.group_manager_loan"
                                class="oe_highlight"/>
                        <button name="%(hr_loan_wizard_action_view)d" type="action" string="Reschedule"
                                 context="{'remaining_amount': remaining_loan_amount}" states="disbursed" groups="hr.group_hr_manager,hr_employee_loan.group_manager_loan" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="employee_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employee_id" placeholder="Employee's Name" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="loan_type_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                            </group>
                            <group>
                                <field name="applied_date"/>
                                <field name="approved_date"/>
                                <field name="disbursement_date"/>
                                <field name="department_id" invisible="1"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="user_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook position="inside">
                            <page string="General">
                                <group>
                                    <group>
                                        <field name="principal_amount"/>
                                        <field name="remaining_loan_amount"/>
                                        <field name="installment_amount"/>
                                    </group>
                                    <group>
                                        <field name="repayment_date"/>
                                        <field name="is_interest_payble"/>
                                        <field name="interst_mode_id"
                                               attrs="{'invisible': [('is_interest_payble', '=', False)]}"/>
                                        <field name="req_rate"
                                               attrs="{'invisible': [('is_interest_payble', '=', False)]}"/>
                                    </group>
                                    <field name="line_ids" readonly="1">
                                        <tree string="List" editable="bottom">
                                            <field name="employee_id" invisible="1"/>
                                            <field name="emp_loan" invisible="1"/>
                                            <field name="num_installment" style="text-align: center;"/>
                                            <field name="schedule_date"/>
                                            <field name="installment"/>
                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Proofs">
                                <field name="employee_loan_proof_ids" widget="many2many">
                                    <field name="name"/>
                                    <field name="mandatory"/>
                                </field>
                            </page>
                            <page string="Policies">
                                <field name="employee_loan_policy_ids" widget="many2many">
                                    <tree>
                                        <field name="name"/>
                                        <!--<field name="code"/>-->
                                        <!--<field name="policy_type_id"/>-->
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
                </form>
            </field>
        </record>

        <record id="hr_employee_loan_request_tree" model="ir.ui.view">
            <field name="name">hr.employee.loan.tree</field>
            <field name="model">hr.employee.loan</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Loan Requests">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="loan_type_id"/>
                    <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="hr_employee_loan_request_search" model="ir.ui.view">
            <field name="name">hr.employee.loan.view</field>
            <field name="model">hr.employee.loan</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Employee Project Search">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="loan_type_id"/>
                </search>
            </field>
        </record>

        <!-- Sequence Records -->
        <record id="seq_loan_request" model="ir.sequence">
            <field name="name">Loan Sequence</field>
            <field name="code">emp_code_id</field>
            <field name="prefix">EMPC/</field>
            <field name="padding">10</field>
        </record>


        <record model="ir.actions.act_window" id="hr_employee_loan_applied_action">
            <field name="name">Loan Requests</field>
            <field name="res_model">hr.employee.loan</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="hr_employee_loan_approved_action">
            <field name="name">Loan to Approve</field>
            <field name="res_model">hr.employee.loan</field>
            <field name="domain">[('state','=','applied')]</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="hr_employee_loan_disbursed_action">
            <field name="name">Loan to Disburse</field>
            <field name="res_model">hr.employee.loan</field>
            <field name="domain">[('state','=', 'approved')]</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="loan_request_menu" name="Loan Requests" parent="main_loan_menu"
                  sequence="10" action="hr_employee_loan_applied_action" groups="base.group_user"/>
        <menuitem id="loan_request_approve_menu" name="Loans to Approve" parent="main_loan_menu" sequence="20"
                  action="hr_employee_loan_approved_action" groups="hr_employee_loan.group_manager_loan"/>
        <menuitem id="loan_disburse_menu" name="Loans to Disburse" parent="main_loan_menu" sequence="30"
                  action="hr_employee_loan_disbursed_action" groups="hr_employee_loan.group_manager_loan"/>

    </data>
</odoo>
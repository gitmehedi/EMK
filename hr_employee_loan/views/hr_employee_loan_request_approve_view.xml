<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="hr_employee_loan_request_approve_form_view" model="ir.ui.view" >
			<field name="name">hr.employee.loan.request.approve.form</field>
			<field name="model">hr.employee.loan.request.approve</field>
			<field name="type">form</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<form string="Employee Loan Request Approve">
					<group>
						<group>
							<field name="name" />
							<field name="code" />
							<field name="date" />
						</group>	
					</group>
				</form>
			</field>
		</record>
		<record id="hr_employee_loan_request_approve_tree_view" model="ir.ui.view">
			<field name="name">hr.employee.loan.request.approve.tree</field>
			<field name="model">hr.employee.loan.request.approve</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Employee Loan Request Approve">
					<field name="name" />
					<field name="code" />
					<field name="date" />
				</tree>
			</field>
		</record>
        <record  id="hr_employee_loan_request_approve_action" model="ir.actions.act_window">
            <field name="name">Loan Request To Approve</field>
            <field name="res_model">hr.employee.loan.request.approve</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem id="hr_employee_loan_request_approve_menu" name="Loan Request To Approve" parent="loans_menu" sequence="16"
                  action="hr_employee_loan_request_approve_action"/>
        
    </data>
</odoo>
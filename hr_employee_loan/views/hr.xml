<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">hr.employee.loan.proof</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first course
                </p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_loan_menu" name="Loan"/>
      
        <menuitem id="loans_menu" name="Loans" sequence="2"
                  parent="main_loan_menu"/>
       
        <menuitem id="courses_menu" name="Loan Requests" parent="loans_menu" sequence="3"
                  action="course_list_action"/>
       
        <menuitem id="courses_menu_1" name="Loan Requests to Approve" parent="loans_menu" sequence="4"
                  action="course_list_action"/>
          
        <menuitem id="courses_menu_2" name="Loan Installation" parent="loans_menu" sequence="5"
                  action="course_list_action"/>
                    
        <!-- Accouting level --> 
        <menuitem id="courses_menu_3" name="Accounting"
        		  parent="main_loan_menu" sequence="6"/>          
                  
        <menuitem id="courses_menu_4" name="Loan to Disburse" parent="courses_menu_3" sequence="7"
                  action="course_list_action"/>    
                    
        <!-- Configuration level --> 
        <menuitem id="courses_menu_5" name="Configuration" parent="main_loan_menu" sequence="8"/>
        
        <menuitem id="courses_menu_6" name="Loan Proofs" parent="courses_menu_5" sequence="9"
                  action="course_list_action"/>
        <menuitem id="courses_menu_7" name="Loan Types" parent="courses_menu_5" sequence="10"
                  action="course_list_action"/>
        <menuitem id="courses_menu_8" name="Loan Policies" parent="courses_menu_5" sequence="11"
                  action="course_list_action"/>   
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="hr_loan_reschedule_wizard_view" model="ir.ui.view">
			<field name="name">HR Loan Reschedule Wizard</field>
			<field name="model">hr.loan.reschedule.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				 <form string="Button form" edit="false" create="false" delete="false">
					 <group>
						 <label colspan="4" nolabel="1" string="This form will process for employee loan rescheduling." />
					 </group>
					 <group colspan="4" >
						 <field name="remaining_amount"/>
						 <field name="new_installment_amount"/>
						 <field name="new_repayment_date"/>
					 </group>
					 <footer>
						 <button icon="fa-cogs" string="Reschedule" name="genarate_reschudle" type="object" class="oe_highlight"  />
					 </footer>
               </form>
			</field>
		</record>


		<record id="hr_loan_wizard_action_view" model="ir.actions.act_window">
			<field name="name">Loan Reschedule</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.loan.reschedule.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

	</data>
</odoo>

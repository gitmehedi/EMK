<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="update_rate_wizard_form" model="ir.ui.view">
            <field name="name">update.rate.wizard.form</field>
            <field name="model">update.rate.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="invoice_avg_currency_rate" readonly="1" groups="base.group_system"/>
                        <field name="shipment_rate" readonly="1" groups="base.group_system"/>
                        <field name="final_rate"/>
                    </group>
                    <footer>
                        <button name="update_currency_rate" string="Confirm" type="object" default_focus="1"
                                class="oe_highlight"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
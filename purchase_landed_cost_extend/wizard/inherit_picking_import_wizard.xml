<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_cost_distribution_form_inherit" model="ir.ui.view">
            <field name="name">picking.import.wizard_form_inherit</field>
            <field name="model">picking.import.wizard</field>
            <field name="inherit_id" ref="purchase_landed_cost.picking_import_wizard_view"/>

            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='supplier']" position="after">
                        <field name="lc_id" required="1" attrs="{'invisible':[('supplier', '=', False)]}" domain="[('second_party_beneficiary', '=', supplier),('operating_unit_id', '=', operating_unit_id)]"/>
                    </xpath>
                    <xpath expr="//field[@name='pickings']" position="after">
                        <field name="shipment_selected" invisible="1"/>
                        <field name="journal_entry_created" invisible="1"/>
                        <field name="include_product_purchase_cost" invisible="1"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
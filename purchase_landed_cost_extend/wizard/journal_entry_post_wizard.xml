<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="journal_entry_post_wizard_form" model="ir.ui.view">
            <field name="name">journal.entry.post.wizard.form</field>
            <field name="model">journal.entry.post.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="debit_account"/>
                    </group>

                    <footer>
                        <button name="post_entry" string="Update Product Cost" type="object" default_focus="1"
                                confirm="Are you sure to update product cost and post journal entry?"
                                class="oe_highlight"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
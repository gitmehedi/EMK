<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--inherited product_template form view-->
        <record id="inherited_product_template_service_form_view" model="ir.ui.view">
            <field name="name">inherited.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="gbs_service.inherited_product_template_form_view"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='type']" position="after">
                        <field name="is_duty_tax" attrs="{'invisible': [('type', '!=', 'service')]}"/>
                    </xpath>
            </field>
        </record>

    </data>
</odoo>
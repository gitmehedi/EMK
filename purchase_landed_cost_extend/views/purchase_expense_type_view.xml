<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--        Tree View-->
        <record id="purchase_expense_type_tree" model="ir.ui.view">
            <field name="model">purchase.expense.type</field>
            <field name="inherit_id" ref="purchase_landed_cost.purchase_expense_type_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="editable"/>
                </tree>
            </field>
        </record>

        <!--        Form View-->
        <record id="view_purchase_expense_type_form" model="ir.ui.view">
            <field name="model">purchase.expense.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="default_expense"/>
                                <field name="default_amount"/>
                            </group>
                            <group>
                                <field name="calculation_method" required="1"/>
                                <field name="note"/>
                                <field name="company_id"
                                       options='{"no_open":1,"no_create":1, "no_create_edit":1}'
                                       groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <menuitem id="purchase_landed_cost.menu_purchase_expense_type"
                  action="purchase_landed_cost.action_purchase_expense_type"
                  parent="account.menu_finance_configuration"
                  sequence="30"
        />


    </data>
</odoo>
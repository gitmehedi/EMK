<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="purchase_cost_distribution_form" model="ir.ui.view">
            <field name="name">purchase.cost.distribution.form.inherit.extend</field>
            <field name="model">purchase.cost.distribution</field>
            <field name="inherit_id" ref="purchase_landed_cost.purchase_cost_distribution_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="duplicate">0</attribute>
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="replace">
                    <h1>
                        <field name="name" class="oe_inline" readonly="1"/>
                    </h1>
                </xpath>
                <xpath expr="//button[@name='action_calculate'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='cost_update_type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='cost_update_type']" position="after">
                    <field name="operating_unit_id" attrs="{'readonly': [('field_readonly', '=', True)]}" options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                    <field name="field_readonly" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='cost_lines']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='cost_lines']/tree/field[@name='picking_id']" position="after">
                    <field name="date_done"/>
                </xpath>
                <xpath expr="//field[@name='expense_lines']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='%(purchase_landed_cost.action_import_invoice_line_wizard)d']" position="attributes">
                    <attribute name="class">oe_highlight</attribute>
                </xpath>


                 <xpath expr="//field[@name='type']" position="before">
                        <field name="account_id"/>
                    </xpath>

                    <xpath expr="//field[@name='affected_lines']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>

                    <xpath expr="//field[@name='invoice_line']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>


                    <xpath expr="//field[@name='currency_id']" position="after">
                        <field name="debit_account" required="1"/>
                        <field name="account_move_id" invisible="1"/>
                    </xpath>

                    <xpath expr="//field[@name='name']" position="before">
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="get_journal_entry"
                                   attrs="{'invisible':['|',('state','=','draft'),('account_move_id','=',False)]}"  string="Journal Entry" icon="fa-book">
                            </button>
                        </div>
                    </xpath>

                    <xpath expr="//header/button[@name='action_calculate']" position="after">
                        <button name="post_journal_entry"
                                string="Post Journal Entry"
                                type="object"
                                states="calculated"
                                attrs="{'invisible':[('account_move_id','!=',False)]}"
                                class="oe_highlight"/>
                    </xpath>

                    <xpath expr="//button[@name='%(purchase_landed_cost.action_import_invoice_line_wizard)d']" position="after">
                        <button style="margin-left:5px;" name="action_import_using_analytic_account"
                                string="Import Using Analytic Account" states="draft" type="object"
                                class="btn-primary"/>
                    </xpath>

                    <xpath expr="//button[@name='%(purchase_landed_cost.action_import_invoice_line_wizard)d']"
                           position="attributes">
                          <attribute name="groups">base.group_no_one</attribute>
                    </xpath>

            </field>
        </record>

        <record id="purchase_landed_cost.action_purchase_cost_distribution" model="ir.actions.act_window">
            <field name="name">Landed Costs</field>
        </record>

        <menuitem id="purchase_landed_cost.menu_purchase_cost_control"
              name="Landed Costs"
              parent="purchase.menu_purchase_root"/>

        <menuitem id="purchase_landed_cost.menu_purchase_cost_distribution"
                name="Landed Costs"
                parent="purchase_landed_cost.menu_purchase_cost_control"
        />

    </data>
</odoo>
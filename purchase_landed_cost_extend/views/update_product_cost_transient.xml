<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="update_product_cost_form" model="ir.ui.view">
            <field name="name">update.product.cost.form</field>
            <field name="model">update.product.cost</field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="8" col="4">
                        <field name="product_cost_per_unit"/>

                    </group>
                    <group>
                        <field name="cost_line" readonly="1"/>
                    </group>
                    <footer>
                        <button name="update_cost" string="Update" type="object" default_focus="1"
                                class="oe_highlight"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
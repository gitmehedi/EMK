<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="product_requisition_form_view" model="ir.ui.view">
            <field name="name">Product Requisition Form View</field>
            <field name="model">product.requisition</field>
            <field name="arch" type="xml">
                <form string="Product Requisition Form">
                    <header>
                        <button name="act_branch_issue" type="object" states="submit"
                                string="Issue" class="oe_highlight"/>
                        <button name="action_draft" type="object" states="submit"
                                string="Draft" class="" invisible="True"/>
                        <button name="%(action_wizard_product_requisition_template)d" type="action" states="draft"
                                string="Generate" class="oe_highlight"/>
                        <button name="action_submit" type="object" states="draft"
                                string="Submit" class=""/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <group>
                            <field name="quantity"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            <field name="period_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="operating_unit_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                                   groups="operating_unit.group_multi_operating_unit"/>
                            <field name="date" readonly="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" colspan="2"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="uom_id"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="stock_in_hand_qty" readonly="True"/>
                                    <field name="required_qty"/>
                                    <field name="adjustment_qty"/>
                                    <field name="average_qty"/>
                                    <field name="minimum_stock_qty" readonly="True"/>
                                    <field name="product_required_qty"/>
                                    <field name="excess_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <!--</sheet>-->
                </form>
            </field>
        </record>

        <record id="product_requisition_tree_view" model="ir.ui.view">
            <field name="name">Product Requisition Tree View</field>
            <field name="model">product.requisition</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="operating_unit_id"/>
                    <field name="period_id"/>
                    <field name="quantity"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="product_requisition_search_view" model="ir.ui.view">
            <field name="name">Product Requisition Search View</field>
            <field name="model">product.requisition</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Product Requisition Search">
                    <field name="period_id"/>
                    <field name="quantity"/>
                    <field name="date"/>
                    <field name="operating_unit_id"/>
                </search>
            </field>
        </record>

        <record id="product_requisition_action" model="ir.actions.act_window">
            <field name="name">Product Requisition</field>
            <field name="res_model">product.requisition</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="product_requisition_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="product_requisition_tree_view"/>
            <field name="act_window_id" ref="product_requisition_action"/>
        </record>

        <record id="product_requisition_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_requisition_form_view"/>
            <field name="act_window_id" ref="product_requisition_action"/>
        </record>

        <menuitem id="product_requisition_menu" name="Branch Requisitions"
                  sequence="5" action="product_requisition_action" parent="menu_stock_requisition"
                  groups="stock.group_stock_user"/>
    </data>
</openerp>

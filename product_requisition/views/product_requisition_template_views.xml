<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="product_requisition_template_form_view" model="ir.ui.view">
            <field name="name">Product Requisition Template Form View</field>
            <field name="model">product.requisition.template</field>
            <field name="arch" type="xml">
                <form string="Product Requisition Template Form">

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="operating_unit_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                                   groups="operating_unit.group_multi_operating_unit"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" colspan="2"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="category_id" colspan="2"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="uom_id"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <!--</sheet>-->
                </form>
            </field>
        </record>

        <record id="product_requisition_template_tree_view" model="ir.ui.view">
            <field name="name">Product Requisition Template Tree View</field>
            <field name="model">product.requisition.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="operating_unit_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="product_requisition_template_search_view" model="ir.ui.view">
            <field name="name">Product Requisition Template Search View</field>
            <field name="model">product.requisition.template</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Product Requisition Template Search">
                    <field name="operating_unit_id"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="product_requisition_template_action" model="ir.actions.act_window">
            <field name="name">Product Requisition Template</field>
            <field name="res_model">product.requisition.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="product_requisition_template_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="product_requisition_template_tree_view"/>
            <field name="act_window_id" ref="product_requisition_template_action"/>
        </record>

        <record id="product_requisition_template_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_requisition_template_form_view"/>
            <field name="act_window_id" ref="product_requisition_template_action"/>
        </record>

        <menuitem id="product_requisition_template_menu" name="Branch Requisition Templates"
                  sequence="5" action="product_requisition_template_action" parent="menu_stock_requisition"/>
    </data>
</openerp>

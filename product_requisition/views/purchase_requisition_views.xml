<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="purchase_requisition_form_view" model="ir.ui.view">
            <field name="name">Purchase Requisition Form View</field>
            <field name="model">purchase.requisition</field>
            <field name="arch" type="xml">
                <form string="Purchase Requisition Form">
                    <header>
                        <button name="%(action_wizard_branch_selection)d" type="action" states="draft"
                                attrs="{'invisible': [('operating_unit_id', '!=', False)]}"
                                string="Select Branch" class="oe_highlight"/>
                        <button name="generate_action" type="object" states="generate"
                                attrs="{'invisible': [('line_ids', '!=', False)]}"
                                string="Generate" class="oe_highlight"/>
                        <button name="action_submit" type="object" states="generate"
                                string="Submit"/>
                        <field name="state" widget="statusbar" statusbar_visible="generate,submit"/>
                    </header>

                    <group>
                        <group>
                            <field name="quantity"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            <field name="date" readonly="True"/>
                        </group>
                        <group>
                            <field name="operating_unit_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                                   groups="operating_unit.group_multi_operating_unit"/>
                            <field name="period_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="uom_id" readonly="True"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="stock_in_hand_qty" readonly="True"/>
                                    <field name="required_qty" invisible="True"/>
                                    <field name="adjustment_qty"/>
                                    <field name="average_qty" invisible="True"/>
                                    <field name="total_branch_qty" readonly="True"/>
                                    <field name="minimum_stock_qty" readonly="True"/>
                                    <field name="product_required_qty"/>
                                    <field name="excess_qty"/>
                                    <field name="purchase_qty"/>
                                    <field name="supplier_id"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </form>
            </field>
        </record>

        <record id="purchase_requisition_tree_view" model="ir.ui.view">
            <field name="name">Purchase Requisition Tree View</field>
            <field name="model">purchase.requisition</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="period_id"/>
                    <field name="quantity"/>
                    <field name="date"/>
                    <field name="operating_unit_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="purchase_requisition_search_view" model="ir.ui.view">
            <field name="name">Purchase Requisition Search View</field>
            <field name="model">purchase.requisition</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Purchase Requisition Search">
                    <field name="period_id"/>
                    <field name="quantity"/>
                </search>
            </field>
        </record>

        <record id="purchase_requisition_action" model="ir.actions.act_window">
            <field name="name">Purchase Requisition</field>
            <field name="res_model">purchase.requisition</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="purchase_requisition_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="purchase_requisition_tree_view"/>
            <field name="act_window_id" ref="purchase_requisition_action"/>
        </record>

        <record id="purchase_requisition_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_requisition_form_view"/>
            <field name="act_window_id" ref="purchase_requisition_action"/>
        </record>

        <menuitem id="purchase_requisition_menu" name="Purchase Requisitions"
                  sequence="5" action="purchase_requisition_action" parent="menu_stock_requisition"/>
    </data>
</openerp>

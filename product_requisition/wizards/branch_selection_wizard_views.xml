<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_wizard_branch_selection_wizard" model="ir.ui.view">
            <field name="name">Branch Selection Wizard Form</field>
            <field name="model">branch.selection.wizard</field>
            <field name="arch" type="xml">
                <form string="Branch Selection">
                    <group>
                        <group>
                            <field name="operating_unit_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                                   groups="operating_unit.group_multi_operating_unit"/>
                            <field name="period_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                                   groups="operating_unit.group_multi_operating_unit"/>
                        </group>
                        <group>

                        </group>
                    </group>
                    <footer>
                        <button name="select_branch" string="Select" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_wizard_branch_selection" model="ir.actions.act_window">
            <field name="name">Branch Selection Wizard</field>
            <field name="res_model">branch.selection.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_wizard_branch_selection_wizard"/>
            <field name="target">new</field>
        </record>


    </data>
</openerp>
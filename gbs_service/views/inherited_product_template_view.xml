<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--inherited product_template form view-->
        <record id="inherited_product_template_form_view" model="ir.ui.view">
            <field name="name">inherited.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_expense_id']" position="replace">
                    <field name="property_account_expense_id"
                           domain="[('internal_type','=','other'),('deprecated','=',False)]"
                           groups="account.group_account_user"
                           options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
                           attrs="{'invisible': [('purchase_ok', '=', False)], 'required': [('purchase_ok', '=', True), ('type', '=', 'service')]}"/>
                </xpath>
            </field>
        </record>

        <!-- action for Service Menu -->
        <record id="product_template_service_action" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">
                {"search_default_filter_to_purchase":1,"search_default_services":1,"default_sale_ok":False,
                "default_purchase_ok":True,"default_type":'service'}
            </field>
            <field name="search_view_id" eval="False"/> <!-- Force empty -->
            <field name="view_id" eval="False"/> <!-- Force empty -->
        </record>
    </data>
</odoo>
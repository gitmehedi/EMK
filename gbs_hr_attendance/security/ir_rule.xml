<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record id="hr_attendance.group_hr_attendance_user" model="res.groups">
            <field name="implied_ids" eval="[(3, ref('hr.group_hr_attendance'))]"/>
        </record>
         <!--<record id="hr_attendance.menu_hr_attendance_kiosk_mode" model="ir.ui.menu">-->
            <!--<field name="implied_ids" eval="[(3, ref('hr_attendance.group_hr_attendance_user'))]"/>-->
        <!--</record>-->

        <record id="hr_attendance_rule_officer" model="ir.rule">
            <field name="name">HR Attendance (Unit Officer)</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="domain_force">[('employee_id.operating_unit_id.id','in',user.operating_unit_ids.ids)]</field>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4,ref('hr_attendance.group_hr_attendance_user'))]"/>
        </record>

        <!--Find the corresponding "to be inherited record" with noupdate="1" -->
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                    eval="[('module', '=', 'hr_attendance'), ('name', '=', 'hr_attendance_rule_attendance_manager')]"
                 />
            </function>

            <!--Set noupdate to False-->
            <value eval="{'noupdate': False}" />
        </function>

        <record id="hr_attendance.hr_attendance_rule_attendance_manager" model="ir.rule">
            <field name="name">attendance manager: full access</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(6, 0, [ref('hr_attendance.group_hr_attendance_manager')])]"/>
        </record>

        <!--Optional, if you want to set noupdate to True again-->
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                    eval="[('module', '=', 'hr_attendance'), ('name', '=', 'hr_attendance_rule_attendance_manager')]"
                 />
            </function>
            <!--Set noupdate to True-->
            <value eval="{'noupdate': True}" />
        </function>

        <record id="hr_attendance_for_dept_manager" model="ir.rule">
        <field name="name">HR Attendance Permission for Department Manager</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">['|',('employee_id.parent_id','in',[e.id for e in user.employee_ids]),
            ('employee_id.department_id.manager_id','in',[e.id for e in user.employee_ids])]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('gbs_application_group.group_dept_manager'))]"/>
    </record>
    </data>
</openerp>
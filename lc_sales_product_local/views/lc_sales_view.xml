<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_lc_export_form" model="ir.ui.view">
            <field name="name">letter.credit.form</field>
            <field name="model">letter.credit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Letter Credit" delete="false" copy='0'>
                    <link rel="stylesheet" href="/letter_of_credit/static/src/css/lc_style.css"></link>
                    <header>
                        <button string="Confirm" name="action_confirm_export" states="draft" type="object" class="oe_highlight"/>
                        <button string="Reset to Draft" name="action_draft" type="object" states="confirmed" class="oe_read_only" groups="base_technical_features.group_technical_features"/>
                        <button string="Amendment" name="action_amendment" class="oe_read_only" type="object" attrs="{'invisible': [('state', 'in', ('draft', 'open', 'done', 'cancel'))]}"/>
                        <button string="New Shipment" name="action_shipment_export" type="object" attrs="{'invisible': [('state', 'in', ('draft', 'open', 'done', 'cancel'))]}" class="oe_highlight oe_read_only"/>
                        <button string="Done" name="action_lc_done_export" class="oe_read_only" type="object" states="progress" confirm="Are you sure you want to continue?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,progress,done"/>
                        <button string="Cancel" name="action_cancel_export" class="btn-primary btn-danger mr24 pull-right oe_read_only" type="object" states="confirmed,progress" confirm="Are you sure you want to continue?"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box"></div>
                        <group>
                            <group colspan="4">
                                <field name="pi_ids_temp" widget="many2many_tags" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                            </group>

                            <group colspan="2">
                                <group>
                                    <field name="name" required="1" attrs="{'readonly': [('state', 'in', ('confirmed','amendment','progress','done', 'cancel'))]}"/>
                                    <field name="type" attrs="{'invisible': '1'}" />
                                    <field name="tenure" required="1" />
                                </group>
                                <group>
                                    <field name="region_type" widget="radio" options="{'horizontal': true}"/>
                                </group>
                            </group>
                            <group colspan="4">
                                <field name="title" class="gbs-text-area" required="1"/>
                            </group>

                            <group>
                                <separator string="Beneficiary" colspan="2"/>
                                <field name="first_party" string="Beneficiary"/>
                                <field name="first_party_bank_acc"/>
                                <field name="operating_unit_id" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                            </group>

                            <group>
                                <separator string="Customer" colspan="2"/>
                                <field name="second_party_applicant" required="1"/>
                                <field name="second_party_bank" required="1" string="Bank Details"/>
                                <field name="bank_code"/>
                                <field name="bank_branch"/>
                            </group>


                            <!--Same Group-->
                            <group string="LC Value">
                                <field name="lc_value"/>
                                <field name="currency_id" required="1" options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="tolerance"/>
                            </group>
                            <group string="LC Dateline">
                                <field name="issue_date" required="1"/>
                                <field name="expiry_date" required="1"/>
                                <field name="shipment_date" required="1"/>
                            </group>
                            <group string="Others Info" colspan="4">
                                <group>
                                    <field name="hs_code"/>
                                    <field name="lc_mode"/>
                                    <field name="payment_terms"/>
                                    <field name="period_of_presentation"/>
                                    <field name="trans_shipment"/>
                                </group>
                                <group>
                                    <field name="master_lc_number"/>
                                    <field name="ship_mode"/>
                                    <field name="inco_terms"/>
                                    <field name="partial_shipment"/>
                                </group>
                            </group>
                            <notebook colspan="4">
                                <page string="Additional Info">
                                    <group>
                                        <group string="Port Info">
                                            <field name="landing_port"/>
                                            <field name="discharge_port"/>
                                            <field name="cnf_agent"/>
                                        </group>
                                        <group string="Lien Bank">
                                            <field name="require_lien"/>
                                            <field name="lien_bank" attrs="{'invisible': [('require_lien','=',False)]}"/>
                                            <field name="lien_date" attrs="{'invisible': [('require_lien','=',False)]}"/>
                                        </group>
                                        <group string="Insurance">
                                            <field name="insurance_company_name"/>
                                            <field name="insurance_number"/>
                                            <field name="insurance_bill"/>
                                        </group>
                                    </group>

                                </page>
                                <page string="Products">
                                    <field name="product_lines">
                                        <tree string="Sale Order Lines" create="false" delete="false"
                                              colors="grey: product_received_qty==product_qty;green: product_received_qty!=product_qty;">
                                            <field name="product_id" readonly='1'/>
                                            <field name="name" readonly='1'/>
                                            <field name="product_uom" string="UOM" readonly='1'/>
                                            <field name="product_qty" string="LC Qty" readonly='1'/>
                                            <field name="delivered_qty" string="Delivered Qty" readonly='1'/>
                                            <field name="product_received_qty" string="Document Qty" readonly='1'/>
                                            <field name="price_unit" readonly='1'/>
                                        </tree>
                                    </field>
                                    <div class="oe_clear"/>
                                </page>
                                <page string="Terms &amp; Condition">
                                    <field name="terms_condition" widget="html" options="{'style-inline': true}"/>
                                </page>
                                <page string="LC Documents">
                                    <field name="lc_document_line" create="false" delete="false">
                                        <tree string="LC Documents" editable="bottom">
                                            <field name="doc_name"/>
                                            <field name="original"/>
                                            <field name="copy"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Attachments">
                                    <field name="attachment_ids" widget="one2many_list" class="lc_attachment" context="{'default_res_id': id, 'default_res_model': 'letter.credit'}">
                                        <tree string="Attachments" editable="top">
                                            <field name="res_id" invisible="1"/>
                                            <field name="res_model" invisible="1"/>
                                            <field name="name" string="Title"/>
                                            <field name="datas_fname" invisible="1"/>
                                            <field name="db_datas" filename="datas_fname" string="File"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Shipment">
                                    <field name="shipment_ids" widget="one2many">
                                        <tree create="false" delete="false" editable="bottom"
                                              colors="black:state=='receive_doc';blue:state=='eta';blue:state=='cnf_quotation';blue:state=='approve_cnf_quotation';green:state=='cnf_clear';gray:state=='done';">
                                            <field name="name"/>
                                            <field name="etd_date"/>
                                            <field name="shipment_date"/>
                                            <field name="eta_date"/>
                                            <field name="arrival_date"/>
                                            <field name="state"/>
                                            <button name="action_view_shipment_export" string="View" type="object" icon="fa-search-plus" />
                                            <button name="action_edit_shipment_export" string="Edit" type="object" icon="fa-pencil-square-o" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Amendment">
                                    <field name="old_revision_ids" >
                                        <tree>
                                            <field name='name'/>
                                            <field name='amendment_date' string="Amendment On"/>
                                            <field name='create_uid' string="Amendment By"/>
                                            <field name='state' invisible='1'/>
                                        </tree>
                                    </field>
                                    <group attrs="{'invisible': [('active', '=', True)]}">
                                        <field name="current_revision_id"/>
                                        <field name="active" invisible="1"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="export_letter_credit_tree_view" model="ir.ui.view">
            <field name="name">export.local.credit.tree</field>
            <field name="model">letter.credit</field>
            <field name="type">tree</field>
            <!--<field name="view_id" ref="view_lc_export_form"/>-->
            <field name="arch" type="xml">
                <tree string="Letter of Credit">
                    <field name="name"/>
                    <field name="second_party_applicant" string="Applicant Name"/>
                    <field name="second_party_bank" string="Applicant Bank"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="shipment_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
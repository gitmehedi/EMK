<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="hr_payslip_rule_loan" model="hr.salary.rule">
            <field name="code">LOAN</field>
            <field name="name">Loan Deduction</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">python</field>
            <field name="condition_python">if payslip.type == '1': result = False
else: result = (inputs.LOAN and inputs.LOAN.amount) or False</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = - (inputs.LOAN.amount)</field>
            <field name="sequence" eval="140"/>
            <field name="note">If there is any loan installment will be deducted</field>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_payroll_arrear_form" model="ir.ui.view">
            <field name="name">hr.payroll.arrear.form</field>
            <field name="model">hr.payroll.arrear</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Employee Arear Details" delete="false">
                    <header>
                        <button name="action_confirm" type="object"
                                string="Apply" states="draft"
                                class="oe_highlight"/>
                        <button name="action_done" type="object"
                                string="Approve" states="applied" groups="hr.group_hr_manager"
                                class="oe_highlight"/>
                        <button name="action_draft" type="object"
                                string="Reset to Draft" groups="hr.group_hr_manager"
                                states="applied,approved"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            </group>
                            <notebook colspan="4">
                                <page string="Arrear Details">
                                    <field name="line_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="employee_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                            <field name="arear_amount"/>
                                            <field  name="state" invisible="1"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hr_payroll_tree" model="ir.ui.view">
            <field name="name">hr.payroll.arrear.tree</field>
            <field name="model">hr.payroll.arrear</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Arrear Information">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hr_arrear_action">
            <field name="name">Arrear</field>
            <field name="res_model">hr.payroll.arrear</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_arrear_menu" name="Arrear" parent="hr.menu_hr_root" groups="gbs_hr_security.group_payroll_user" sequence="96"/>
        <menuitem id="hr_arrear_submenu" name="Arrear" parent="hr_arrear_menu" groups="gbs_hr_security.group_payroll_user"
                  action="hr_arrear_action"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_category_vendor_advance" model="ir.module.category">
            <field name="name">Vendor Advance</field>
            <field name="sequence">85</field>
        </record>

        <record id="group_vendor_advance_user" model="res.groups">
            <field name="name">Branch User</field>
            <field name="category_id" ref="vendor_advance.module_category_vendor_advance"/>
            <field name="sequence">10</field>
        </record>

        <record id="vendor_advance_approver" model="res.groups">
            <field name="name">Vendor Advance Approver</field>
            <field name="implied_ids" eval="[(4, ref('account.group_account_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_vendor_advance_manager" model="res.groups">
            <field name="name">Group Finance</field>
            <field name="category_id" ref="vendor_advance.module_category_vendor_advance"/>
            <field name="implied_ids" eval="[(4, ref('vendor_advance.group_vendor_advance_user')),(4, ref('vendor_advance.vendor_advance_approver'))]"/>
            <field name="sequence">20</field>
        </record>

        <record id="group_vendor_advance_system_settings" model="res.groups">
            <field name="name">System Settings</field>
            <field name="category_id" ref="vendor_advance.module_category_vendor_advance"/>
            <field name="implied_ids" eval="[(4, ref('vendor_advance.group_vendor_advance_manager'))]"/>
            <field name="sequence">30</field>
        </record>

    </data>
</odoo>
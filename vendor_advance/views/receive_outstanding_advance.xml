<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="receive_outstanding_advance_form" model="ir.ui.view">
            <field name="name">receive.outstanding.advance.form</field>
            <field name="model">receive.outstanding.advance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Receive Outstanding Advance">
                    <header>
	                    <button string="Confirm" name="action_confirm" states="draft"
                                type="object" class="oe_highlight"/>
						<button string="Approve" name="action_approve" type="object" class="oe_highlight"
								attrs="{'invisible': [('state', '!=', 'confirm')]}"
                                groups="base.vendor_advance_approver"/>
                     	<button string="Cancel" name="action_cancel" states="confirmed" type="object"
                                groups="base.vendor_advance_approver" attrs="{'invisible': [('state', '!=', 'confirm')]}"
                                confirm="Are you sure you want to Cancel this?"/>
                    	<field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                	</header>
                    <sheet>
                        <div class="pull-left">
                            <h1>
                                <field name="name" readonly="1" nolabel="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id_domain_ids" invisible="1"/>
                                <field name="partner_id" options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"
                                       domain="[('id', 'in', partner_id_domain_ids and partner_id_domain_ids[0] and partner_id_domain_ids[0][2] or False), ('parent_id', '=', False), ('supplier', '=', True)]"/>
                                <field name="advance_ids" widget="many2many_tags"
                                       domain="[('active', '=', False), ('partner_id', 'in', [partner_id]), ('outstanding_amount', '&gt;', 0)]"
                                       options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                                <field name="amount"/>
                                <field name="narration" string="Narration" required="1"/>
                            </group>
                            <group>
                                <field name="date" readonly="1" required="1"/>
                                <field name="debit_account_id" domain="[('level_id.name', '=', 'Layer 5'), ('reconcile', '=', False)]"/>
                                <field name="move_id" attrs="{'invisible': [('move_id', '=', False)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="History" attrs="{'invisible': [('state', 'in', ('draft', 'confirm'))]}">
                                <field name="history_ids" nolabel="1" readonly="True" mode="tree">
                                    <tree string="History" create="0" edit="0" editable="bottom" options="{'no_open': True}">
                                        <field name="advance_id" readonly="1"/>
                                        <field name="amount" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers"/>
							<field name="message_ids" widget="mail_thread"/>
	                	</div>
                    </sheet>
                </form>
            </field>

        </record>
        <record id="receive_outstanding_advance_tree" model="ir.ui.view">
            <field name="name">receive.outstanding.advance.tree</field>
            <field name="model">receive.outstanding.advance</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Receive Outstanding Advance"
                      decoration-primary="state=='draft'" decoration-info="state=='confirm'"
                      decoration-success="state=='approve'"
                      decoration-bf="state in ('confirm', 'approve')" decoration-muted="state=='cancel'">
                    <field name="name"/>
                    <field name="partner_id" string="Vendor"/>
                    <field name="amount"/>
					<field name="state"/>
                </tree>
            </field>
        </record>

        <record id="receive_outstanding_advance_search" model="ir.ui.view">
            <field name="name">receive.outstanding.advance.filter</field>
            <field name="model">receive.outstanding.advance</field>
            <field name="arch" type="xml">
                <search string="Search Receive Outstanding Advance">
                    <filter name="draft_sd" string="Draft" domain="[('state','=','confirm')]"/>
                	<separator/>
                    <filter name="confirm_sd" string="Waiting For Approval" domain="[('state','=','confirm')]"/>
                	<separator/>
                    <filter name="approved_sd" string="Approved" domain="[('state','=','approve')]"/>
                    <separator/>
                    <group name="groupby">
                        <filter string="By Vendor" name="partner_groupby" domain=""
                                context="{'group_by': 'partner_id'}"/>
                        <filter string="By Status" name="state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
				</search>
            </field>
        </record>

        <record id="action_receive_outstanding_advance_view" model="ir.actions.act_window">
            <field name="name">Receive Outstanding Advance</field>
            <field name="res_model">receive.outstanding.advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="receive_outstanding_advance_search"/>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_receive_outstanding_advance" name="Receive Outstanding Advance" groups="base.group_vendor_advance_user"
                  parent="account.menu_finance_payables" action="action_receive_outstanding_advance_view" sequence="130"/>
    </data>
</odoo>
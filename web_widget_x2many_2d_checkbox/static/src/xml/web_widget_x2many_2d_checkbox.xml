<templates>
    <t t-name="FieldX2Many2dCheckBox">
        <div t-att-class="widget.widget_class">
            <table class="oe_list_content">
                <thead>
                    <tr class="oe_list_header_columns">
                        <th />
                        <th t-foreach="widget.get_x_axis_values()" t-as="x" t-att-data-x="x">
                            <t t-esc="widget.get_x_axis_label(x)" />
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="widget.get_y_axis_values()" t-as="y" t-att-data-y="y">
                        <th><t t-esc="widget.get_y_axis_label(y)" /></th>
                        <td t-foreach="widget.get_x_axis_values()" t-as="x" t-att-class="'oe_list_field_cell' + (widget.is_numeric ? ' oe_number' : '')" t-att-data-x="x">
                            <span t-att-class="widget.get_xy_value_class()">
                              <t t-if="widget.get_xy_value(x, y)==true">
                                 <input class="edit" type="checkbox" t-att-data-id="widget.get_xy_id(x, y)" t-att-value="widget.get_xy_value(x, y)" t-att-checked="widget.get_xy_value(x, y)" />
                               </t>
                              <t t-if="widget.get_xy_value(x, y)==false">	
                            	<input class="edit" type="checkbox" t-att-data-id="widget.get_xy_id(x, y)" t-att-value="widget.get_xy_value(x, y)"  />
                              </t>
                               <span class="read"><t t-esc="widget.get_xy_value(x, y)" /></span> 
                            </span>
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>
    </t>
</templates>

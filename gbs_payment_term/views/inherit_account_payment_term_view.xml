<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_term_form" model="ir.ui.view">
            <field name="name">account.payment.term.form.inherit</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form" />
            <field name="arch" type="xml">
                <label for="note" position="replace"/>
                <xpath expr="//field[@name='note']" position="replace"/>
                <field name="line_ids" position="after">
                    <group>
                        <field name="terms_type" widget="radio"
                                   options="{'horizontal': true}"/>
                        <field name="terms_condition" widget="html" options="{'style-inline': true}"/>
                    </group>
                    <label for="note"/>
                    <field name="note" placeholder="Payment term explanation for the customer..."/>
                </field>
            </field>
        </record>


        <record id="view_account_payment_term_tree" model="ir.ui.view">
            <field name="name">account.payment.term.tree.inherit</field>
            <field name="model">account.payment.term</field>
            <field name="arch" type="xml">
                <tree string="Payment Terms">
                    <field name="name"/>
                    <field name="terms_type"/>
                </tree>
            </field>
        </record>

        <record id="payment_term_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id"  ref="view_account_payment_term_tree"/>
            <field name="act_window_id" ref="account.action_payment_term_form"/>
        </record>

        <menuitem
                id="menu_account_payment_term"
                name="Payment Terms"
                parent="sales_team.menu_sale_config"
                action="account.action_payment_term_form"
                sequence="90"/>

    </data>

</odoo>
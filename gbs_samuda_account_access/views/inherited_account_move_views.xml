<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">inherit.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='operating_unit_id']" position="after">
                    <field name="submitted_from" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='operating_unit_id']" position="attributes">
                    <attribute name="attrs">{'required': [('submitted_from', '=', 'unit')]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--First Acceptance Wizard start-->
        <record id="wizard_local_first_acceptance" model="ir.ui.view">
            <field name="name">wizard.local.first.acceptance</field>
            <field name="model">local.first.acceptance.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="product_temp_id" String="Select Product"/>
                        </group>
                        <group>

                        </group>
                    </group>
                    <footer>
                        <button name="report_print" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_local_first_acceptance" model="ir.actions.act_window">
            <field name="name">First Acceptance Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">local.first.acceptance.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_wizard_local_first_acceptance"
                  id="menu_wizard_local_first_acceptance"
                  parent="letter_of_credit.lc_report_menu_root"
                  sequence="2"/>

        <!--First Acceptance Wizard end-->


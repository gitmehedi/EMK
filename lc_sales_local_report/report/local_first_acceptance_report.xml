<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="head_local_first_acceptance_temp" inherit_id="custom_report.gbs_external_layout" primary="True">
        <xpath expr="//t[@t-call='custom_report.gbs_external_layout_header']" position="attributes">
            <attribute name="t-call">lc_sales_local_report.external_local_first_acceptance_temp</attribute>
        </xpath>
    </template>
    <template id="external_local_first_acceptance_temp" inherit_id="custom_report.gbs_external_layout_header" primary="True">
        <xpath expr="//div[@class='company-info']" position="after">
            <div name="company_address">
                <h5><span t-esc="address"/></h5>
            </div>
        </xpath>
    </template>
    <!-- Main template -->
    <template id="local_first_acceptance_temp">
        <t t-call="report.html_container">
            <t t-call="lc_sales_local_report.head_local_first_acceptance_temp">
                <div class="page" style="page-break-inside:auto">
                    <div class="row" style="padding-top:25px;">
                        <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                        </style>
                        <div class="clearfix">
                            <h4 class="report-title">First Acceptance Report</h4>
                            <div class="row" style="padding-bottom:2px;">
                                <div class="col-xs-8 text-left">
                                    <div><strong>Reported On: </strong><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%m/%d/%Y, %H:%M %p')"/></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-8 text-left">
                                    <strong>Product: </strong><span t-esc="record['product_temp_name']"/>
                                </div>
                            </div>
                        </div>
                        <table class="table table-bordered table-report-xs table-striped"
                                   style="margin-bottom: 10px;">
                            <thead>
                                <tr class="odo-bg-gray">
                                    <th class="text-center">SL</th>
                                    <th class="text-center">Customer</th>
                                    <th class="text-center">L/C No</th>
                                    <th class="text-center">Shipment No</th>
                                    <th class="text-center">Value</th>
                                    <th class="text-center">Tenor</th>
                                    <th class="text-center">Dispatch To Sales</th>
                                    <th class="text-center">Dispatch To Customer</th>
                                    <th class="text-center">Aging</th>
                                    <th class="text-center">First Delivery</th>
                                    <th class="text-center">Last Delivery</th>
                                    <th class="text-center">Remarks/Status</th>
                                    <th class="text-center">F.P.R</th>
                                    <th class="text-center">Customer Bank</th>
                                    <th class="text-center">Beneficiary Bank</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="lines">
                                    <t t-foreach="lines" t-as="line">
                                        <tr>
                                            <td>
                                                <t t-esc="line_index+1"/>
                                            </td>
                                            <td class="text-left">
                                                <t t-esc="line['customer']"/>
                                            </td>
                                            <td class="text-left">
                                                <t t-esc="line['lc_name']"/>
                                            </td>
                                            <td class="text-left">
                                                <t t-esc="line['shipment_name']"/>
                                            </td>
                                            <td >
                                                <span class="text-left" t-esc="line['currency']"/><span class="text-right" t-esc="line['value']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="line['tenor']"/>
                                            </td>
                                            <td class="text-center">
                                                <!--<t t-esc="line['dispatch_to_sale']"/>-->
                                                <t t-if="line['dispatch_to_sale']">
                                                    <t t-esc="time.strftime('%d-%b-%Y',time.strptime(line['dispatch_to_sale'],'%Y-%m-%d'))"/>
                                                </t>
                                            </td>
                                            <td class="text-center">
                                                <!--<t t-esc="line['dispatch_to_customer']"/>-->
                                                <t t-if="line['dispatch_to_customer']">
                                                    <t t-esc="time.strftime('%d-%b-%Y',time.strptime(line['dispatch_to_customer'],'%Y-%m-%d'))"/>
                                                </t>

                                            </td>
                                            <td class="text-center">
                                                <t t-esc="line['aging']"/>
                                            </td>
                                            <td class="text-center">
                                                <!--<t t-esc="line['']"/>-->
                                            </td>
                                            <td class="text-center">
                                                <!--<t t-esc="line['']"/>-->
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="line['comment']" />
                                            </td>
                                            <td class="text-center">
                                                <!--<t t-esc="line['']"/>-->
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="line['customer_bank']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="line['beneficiary_bank']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>

                            </tbody>
                        </table>
                        <!--<t t-call="custom_report.report_signing"></t>-->
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report id="report_local_first_acceptance"
            model="letter.credit"
            string="LC Sales First Acceptance Report"
            name="lc_sales_local_report.local_first_acceptance_temp"
            file="lc_sales_local_report.local_first_acceptance_temp"
            multi="True"
            menu="False"
            report_type="qweb-pdf"/>

    <record id="report_local_first_acceptance" model="ir.actions.report.xml">
        <field name="paperformat_id" ref="custom_report.paperformat_backend_landscape"/>
    </record>
</odoo>
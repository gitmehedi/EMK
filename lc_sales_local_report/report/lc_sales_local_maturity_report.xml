<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="head_lc_sales_maturity_temp" inherit_id="report_layout.gbs_internal_layout" primary="True">
        <xpath expr="//t[@t-call='report_layout.gbs_internal_layout_header']" position="attributes">
            <attribute name="t-call">lc_sales_local_report.external_lc_sales_maturity_temp</attribute>
        </xpath>
    </template>
    <template id="external_lc_sales_maturity_temp" inherit_id="report_layout.gbs_internal_layout_header" primary="True">
        <xpath expr="//div[@class='company-info']" position="after">
            <div name="company_address">
                <h5><span t-esc="address"/></h5>
            </div>
        </xpath>
    </template>
    <!-- Main template -->
    <template id="lc_sales_maturity_temp">
        <t t-call="report.html_container">
            <t t-call="lc_sales_local_report.head_lc_sales_maturity_temp">
                <div class="page" style="page-break-inside:auto">
                    <div class="row" style="padding-top:25px;">
                        <style type="text/css">
                            .report-title { text-align:center; }
                            .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                        </style>
                        <div class="clearfix">
                            <h4 class="report-title">Maturity Report</h4>
                            <div class="row" style="padding-bottom:10px;">
                                <div class="col-xs-6 text-left">
                                    <strong>Product: </strong><span t-esc="record['product_temp_name']"/>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <div><strong>Reported On: </strong><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%m/%d/%Y, %H:%M %p')"/></div>
                                </div>
                            </div>
                        </div>

                        <table class="table table-bordered table-report-xs table-striped"
                               style="margin-bottom: 10px;table-layout: fixed;">
                            <thead>
                                <tr class="odo-bg-gray">
                                    <th class="text-center" style="width:4%;">SL</th>
                                    <th class="text-center" style="width:22%;">Customer</th>
                                    <th class="text-center" style="width:12%;">L/C No</th>
                                    <th class="text-center" style="width:10%;">Shipment No</th>
                                    <th class="text-center" style="width:8%;">Value</th>
                                    <th class="text-center" style="width:6%;">Tenor</th>
                                    <th class="text-center" style="width:11%;">Customer Bank</th>
                                    <th class="text-center" style="width:7%;">Maturity</th>
                                    <th class="text-center" style="width:10%;">Bill Id</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="lines">
                                    <t t-foreach="lines" t-as="line">
                                        <tr>
                                            <td class="text-left">
                                                <t t-esc="line_index+1"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="line['customer']" />&amp;nbsp;
                                                <t t-if="line['beneficiary_bank']">
                                                    (<span t-esc="line['beneficiary_bank']"/>)
                                                </t>
                                            </td>
                                            <td class="text-left">
                                                <t t-esc="line['lc_name']"/>
                                            </td>
                                            <td class="text-left">
                                                <t t-esc="line['shipment_name']"/>
                                            </td>
                                            <td>
                                                <span style="float:left;" t-esc="line['currency']"/><span style="float:right;" t-esc="line['value']"/>
                                            </td>
                                            <td class="text-left">
                                                <t t-esc="line['tenor']"/>
                                            </td>
                                            <td class="text-left">
                                                <t t-esc="line['customer_bank']"/>
                                            </td>
                                            <td class="text-left">
                                                <t t-if="line['to_maturity_date']">
                                                    <t t-esc="time.strftime('%d-%b-%Y',time.strptime(line['to_maturity_date'],'%Y-%m-%d'))"/>
                                                </t>
                                            </td>
                                            <td class="text-left">
                                                <t t-esc="line['bill_id']" />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr style="font-weight: bold; background-color: #897d79; border-bottom: 1px solid black;">
                                    <td colspan="4" class="text-left">
                                        <t t-esc="total['title']"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="total['total_val']"/>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report id="report_lc_sales_maturity"
            model="letter.credit"
            string="LC Sales Maturity Report"
            name="lc_sales_local_report.lc_sales_maturity_temp"
            file="lc_sales_local_report.lc_sales_maturity_temp"
            multi="True"
            menu="False"
            report_type="qweb-pdf"/>

    <record id="report_lc_sales_maturity" model="ir.actions.report.xml">
        <field name="paperformat_id" ref="report_layout.paperformat_backend_portrait"/>
    </record>
</odoo>
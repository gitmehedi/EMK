<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_letter_of_credit_wizard_form" model="ir.ui.view">
            <field name="name">letter.credit.wizard.form</field>
            <field name="model">letter.credit.wizard</field>
            <field name="arch" type="xml">
                <form string="Letter of Credit Report">
                    <group>
                        <group>
                            <field name="report_type"
                                   options="{'no_open':1,'no_create_edit':1,'no_create':1}"/>

                        </group>
                    </group>
                    <footer>
                        <button name="process_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_letter_of_credit_wizard" model="ir.actions.act_window">
            <field name="name">Letter of Credit Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.credit.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="letter_of_credit.lc_report_menu_root" parent="commercial.menu_commercial_root"
            sequence="7" name="Reports" />
        <menuitem
                name="Letter of Credit Report"
                parent="letter_of_credit.lc_report_menu_root"
                action="action_letter_of_credit_wizard"
                id="lc_report_menu"/>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="template_letter_of_credit_report">
            <t t-call="report.html_container">
                <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside: auto">
                        <div class="clearfix">
                            <div class="row">
                                <h3 class="text-center">Letter of Credit</h3>
                                <hr class="hr-sm mb-0"/>
                                <div class="row">
                                    <div class="col-xs-4">
                                        <div><strong>Type : </strong><span t-esc="report_type"/></div>
                                    </div>
                                </div>
                                <hr class="hr-xs"/>
                            </div>
                        </div>


                        <div class="row">
                            <table class="table table-report table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray" style="text-align: center;">
                                        <th>Party Name</th>
                                        <th>PR No</th>
                                        <th>PR Date</th>
                                        <th>L/C No.</th>
                                        <th>Date</th>
                                        <th>Shipment Date</th>
                                        <th>Expire Date</th>
                                        <th>Value</th>
                                        <th>Discharging Port</th>
                                        <th>Shipment No.</th>
                                        <th>ETD</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!--<td t-att-colspan="partial_value" >-->
                                    <t t-foreach="lists" t-as="lc">
                                        <tr t-att-rowspan="len(lc['shipment_list'])" style="page-break-inside: avoid">
                                            <td><span t-esc="lc['party_name']"/></td>
                                            <td><span t-esc="lc['pr_no']"/></td>
                                            <td><span t-esc="lc['pr_date']"/></td>
                                            <td><span t-esc="lc['lc_number']"/></td>
                                            <td><span t-esc="lc['lc_date']"/></td>
                                            <td><span t-esc="lc['ship_date']"/></td>
                                            <td><span t-esc="lc['exp_date']"/></td>
                                            <td><span t-esc="lc['amount']"/></td>
                                            <td><span t-esc="lc['discharging_port']"/></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td><span t-esc="lc['state']"/></td>
                                        </tr>
                                        <tr>
                                            <t t-if="lc['shipment_list']">
                                                <t t-foreach="lc['shipment_list']" t-as="ship">
                                                    <tr t-att-rowspan="len(ship['product_list'])" style="page-break-inside: avoid">
                                                        <td colspan="9"></td>
                                                        <td><span t-esc="ship['shipment_number']"/></td>
                                                        <td><span t-esc="ship['etd']"/></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td><span t-esc="ship['state']"/></td>
                                                    </tr>
                                                    <tr>
                                                        <t t-foreach="ship['product_list']" t-as="product">
                                                            <tr style="page-break-inside: avoid">
                                                                <td colspan="11"></td>
                                                                <td><span t-esc="product['product_name']"/></td>
                                                                <td><span t-esc="product['qty']"/></td>
                                                                <td></td>
                                                            </tr>
                                                        </t>
                                                    </tr>
                                                </t>
                                            </t>

                                        </tr>

                                    </t>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </t>
            </t>
        </template>
        <report id="action_letter_of_credit_report"
                string="Letter of Credit"
                model="letter.credit"
                report_type="qweb-pdf"
                name="letter_of_credit_report.template_letter_of_credit_report"
                file="letter_of_credit_report.template_letter_of_credit_report"
                menu="False"
                paperformat="report_layout.paperformat_backend_landscape"
        />
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Item Loan Lending Tree View -->
        <record id='view_item_loan_lending_tree' model='ir.ui.view'>
            <field name="name">view.item.loan.lending.tree</field>
            <field name="model">item.loan.lending</field>
            <field name="arch" type="xml">
                <tree string="Item Loan Lending" ecoration-bf="message_needaction == True"
                      colors="gray:state=='approved';green:state=='waiting_approval';red:state=='reject';">
                    <field name="name" />
                    <field name="issuer_id" />
                    <field name="issue_date" />
                    <field name="company_id" />
                    <field name="operating_unit_id" />
                    <field name="state" />
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- Item Loan Lending Form View -->
        <record id='view_item_loan_lending_form' model='ir.ui.view'>
            <field name="name">view.item.loan.lending.form</field>
            <field name="model">item.loan.lending</field>
            <field name="arch" type="xml">
                <form string="Item Loan Lending">
                    <header>
                        <!--<button name="indent_confirm" string="Confirm" states="draft"-->
                        <!--class="oe_highlight" type="object"/>-->
                        <!--<button name="approve_indent" string="Approve" states="waiting_approval" type="object"-->
                        <!--class="oe_highlight" groups="stock_indent.group_stock_indent_approver"/>-->
                        <!--<button name="reject_indent" string="Reject" states="waiting_approval"-->
                        <!--groups="stock_indent.group_stock_indent_approver" type="object"/>-->
                        <!--<button name="action_view_picking" string="Issue Product(s)" type="object"-->
                        <!--states="inprogress" class="oe_highlight" groups="stock_indent.group_stock_indent_issuer"/>-->
                        <!--<button name="action_view_purchase_requisition" string="Issue PR" type="object"-->
                        <!--groups="stock_indent.group_stock_indent_issuer"-->
                        <!--attrs="{'invisible': ['|',('state','!=','inprogress'),('check_pr_issued','!=', True)]}"/>-->
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,waiting_approval,approved"
                               statusbar_colors='{"reject":"red"}' />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="issuer_id" readonly="1" />
                                <field name="issue_date" />
                                <field name="borrower_id"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True,'no_open':True}"/>
                                <field name="operating_unit_id" options="{'no_create': True,'no_open':True}"
                                       groups="operating_unit.group_multi_operating_unit" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Items">
                                <field name="item_lines">
                                    <tree string="Items" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="qty_available" readonly="1"/>
                                        <field name="product_uom" string="UOM"/>
                                        <field name="product_uom_qty" sum="Total Qty"/>
                                    </tree>
                                </field>
                                <div class="oe_clear">
                                    <label for="description" />
                                </div>
                                <field name="description" class="oe_inline" placeholder="The material ..." />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <!-- Item Loan Lending Window Action -->
        <record id='action_item_loan_lending' model='ir.actions.act_window'>
            <field name="name">Item Loan Lending</field>
            <field name="res_model">item.loan.lending</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Item Loan Lending.
                </p>
            </field>
        </record>
        <!-- Item Loan Lending Menu -->
        <menuitem name="Item Loan Process" parent="stock.menu_stock_root" id="menu_item_loan_lending_main"
                  sequence="4" groups="base.group_user"/>

        <menuitem action="action_item_loan_lending" name="Item Loan Lending"
                  parent="menu_item_loan_lending_main" id="menu_item_loan_lending" sequence="1"
                  groups="base.group_user"/>

    </data>
</odoo>
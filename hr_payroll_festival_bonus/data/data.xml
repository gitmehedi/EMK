<odoo>
    <data noupdate="0">
        <record id="festival_bonus_salary_rule" model="hr.salary.rule">
            <field name="name">Festival Bonus</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="code">FBONUS</field>
            <field name="sequence" eval="140"/>
            <field name="condition_select">python</field>
            <field name="condition_python">if payslip.type == '0': result = False
elif payslip.type == '1': result = True
elif payslip.type == '2': result = True</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = ((contract.wage*2.5+contract.supplementary_allowance)/2)</field>
        </record>

        <record id="arrears_allowance_salary_rule" model="hr.salary.rule">
            <field name="name">Arrears Allowance</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="code">ARS</field>
            <field name="condition_select">python</field>
            <field name="condition_python">if payslip.type == '0': result = False
elif payslip.type == '1': result = True
elif payslip.type == '2': result = True</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (inputs.ARS.amount)</field>
        </record>

        <record id="mess deduction_salary_rule" model="hr.salary.rule">
            <field name="name">Mess Deduction</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="code">MESS</field>
            <field name="condition_select">python</field>
            <field name="condition_python">if payslip.type == '0': result = False
elif payslip.type == '1': result = True
elif payslip.type == '2': result = True</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = - (inputs.MEAL.amount)</field>
        </record>


        <record id="hr_rule_basic_inherit" model="hr.salary.rule">
            <field name="name">Basic</field>
            <field name="sequence" eval="1"/>
            <field name="code">BASIC</field>
            <field name="inherit_id" ref="hr_payroll.hr_rule_basic"/>
            <field name="category_id" ref="hr_payroll.BASIC"/>
            <field name="condition_select">python</field>
            <field name="condition_python">if payslip.type == '0': result = True
elif payslip.type == '1': result = False
elif payslip.type == '2': result = True</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.wage</field>
        </record>

        <record id="hr_rule_taxable" model="hr.salary.rule">
            <field name="name">Gross</field>
            <field name="sequence" eval="100"/>
            <field name="code">GROSS</field>
            <field name="category_id" ref="hr_payroll.GROSS"/>
            <field name="condition_select">python</field>
            <field name="condition_python">if payslip.type == '0': result = True
elif payslip.type == '1': result = False
elif payslip.type == '2': result = True</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = categories.BASIC + categories.ALW</field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="int_hr_payslip_run_view" model="ir.ui.view">
            <field name="name">Inherited HR Payslip Batches</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group[1]" position="after">
                    <group>
                        <group>
                            <field name="type" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="festival_date"
                               attrs="{'required': [('type','!=','0')],'invisible': [('type','=','0')]}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="int_hr_payslip_view" model="ir.ui.view">
            <field name="name">Inherited HR Payslip</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit_note']" position="after">
                    <field name="type"/>
                    <field name="festival_date" attrs="{'required': [('type','!=','0')],'invisible': [('type','!=',('1','2'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
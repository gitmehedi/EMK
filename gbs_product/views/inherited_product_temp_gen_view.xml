<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="product_temp_from_view" model="ir.ui.view">
            <field name="name">product.temp.from.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='property_account_income_id']" position="replace">
                        <field name="property_account_income_id"
                               domain="[('internal_type','=','other'),('deprecated','=',False)]"
                               groups="account.group_account_user"
                               attrs="{'invisible': [('sale_ok', '=', False)]}"/>
                    </xpath>
                    <xpath expr="//field[@name='taxes_id']" position="replace">
                        <field name="taxes_id" widget="many2many_tags"
                               attrs="{'invisible': [('sale_ok', '=', False)]}"/>
                    </xpath>

                    <xpath expr="//field[@name='property_account_expense_id']" position="replace">
                        <field name="property_account_expense_id"
                               domain="[('internal_type','=','other'),('deprecated','=',False)]"
                               groups="account.group_account_user"
                               options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
                               attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                    </xpath>

                    <xpath expr="//field[@name='supplier_taxes_id']" position="replace">
                        <field name="supplier_taxes_id" widget="many2many_tags"
                               attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                    </xpath>


                    <xpath expr="//field[@name='list_price']" position="replace">
                        <field name="list_price" widget='monetary' readonly='True'
                               options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible': [('sale_ok', '=', False)]}"/>
                    </xpath>

                    <xpath expr="//field[@name='uom_po_id']" position="replace">
                        <field name="uom_po_id" groups="product.group_uom" options="{'no_create': True}"
                               attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                    </xpath>
                    <xpath expr="//label[@for='standard_price']" position="attributes">
                        <attribute name="string">Cost per unit</attribute>
                    </xpath>
                    <xpath expr="//field[@name='property_account_income_id']" position="after">
                        <field name="cost_center_id"
                               groups="account.group_account_user"
                               attrs="{'invisible': [('sale_ok', '=', False)]}"
                               options="{'no_open': 1, 'no_create': 1, 'no_create_edit': 1}"/>
                    </xpath>
                    <xpath expr="//field[@name='categ_id']" position="after">
                        <field name="receive_over_ok" attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                    </xpath>

                    <!--<xpath expr="//field[@name='purchase_method']" position="replace">-->
                    <!--<field name="purchase_method" widget="radio" groups="purchase.group_purchase_manager"-->
                    <!--attrs="{'invisible': [('purchase_ok', '=', False)]}"/>-->
                    <!--</xpath>-->

<!--                    <xpath expr="//label[@for='standard_price']" position="replace">-->
<!--                        <label for="standard_price" groups="base.group_user"-->
<!--                               attrs="{'invisible': [('purchase_ok', '=', False)]}"/>-->
<!--                    </xpath>-->

<!--                    <xpath expr="//div[@name='standard_price_uom']" position="replace">-->
<!--                        <div name="standard_price_uom" attrs="{'invisible': [('purchase_ok', '=', False)]}">-->
<!--                            <field name="standard_price" widget='monetary' options="{'currency_field': 'currency_id'}"-->
<!--                                   class="oe_inline"-->
<!--                                   attrs="{'invisible': [('purchase_ok', '=', False)]}"/>-->
<!--                        </div>-->
<!--                    </xpath>-->
                </data>
            </field>
        </record>
        <record model="ir.ui.view" id="product_view_barcode">
            <field name="name">product.barcode</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="replace">
                    <field name="barcode" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="replace">
                    <field name="company_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                </xpath>
                <xpath expr="//field[@name='attribute_id']" position="replace">
                    <field name="attribute_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                </xpath>
                <xpath expr="//field[@name='attribute_id']" position="replace">
                    <field name="attribute_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                </xpath>
                <xpath expr="//field[@name='uom_id']" position="replace">
                    <field name="uom_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                </xpath>
                <xpath expr="//field[@name='uom_po_id']" position="replace">
                    <field name="uom_po_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="replace">
                    <field name="categ_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                </xpath>
                <xpath expr="//field[@name='asset_category_id']" position="replace">
                    <field name="asset_category_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="product_view_control_purchase_bill">
            <field name="name">product.control.purchase.bill</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='purchase_method']" position="replace">
                    <field name="purchase_method" widget="radio" groups="purchase.group_purchase_manager"
                           attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
                    </xpath>


                    <xpath expr="//field[@name='list_price']" position="replace">
                        <field name="list_price" widget='monetary' readonly='True' options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible': [('sale_ok', '=', False)]}"/>
                    </xpath>

                    <xpath expr="//field[@name='uom_po_id']" position="replace">
                        <field name="uom_po_id" groups="product.group_uom" options="{'no_create': True}"
                               attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                    </xpath>

                    <xpath expr="//label[@for='standard_price']" position="replace">
                        <label for="standard_price" groups="base.group_user"
                               attrs="{'invisible': [('purchase_ok', '=', False)]}"/>

                    </xpath>


<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_advance_payment_instruction" model="ir.ui.view">
        <field name="name">inherit.vendor.advance.payment.instruction</field>
        <field name="model">vendor.advance</field>
        <field name="inherit_id" ref="vendor_advance.vendor_advance_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_validate']" position="after">
                <field name="payment_btn_visible" invisible="1"/>
                <button name="action_payment_instruction" type="object"
                        attrs="{'invisible': ['|', ('payment_btn_visible', '=', False), ('active', '=', False)]}"
                        string="Payment Instruction" class="oe_highlight"/>
            </xpath>
            <xpath expr="//notebook/page[1]" position="after">
                <page string="Payments" class="oe_page_title"
                      attrs="{'invisible': [('payment_line_ids', '=', [])]}">
                    <field name="payment_line_ids" string="Payments" readonly="1">
                        <tree string="Payment lines">
                            <field name="sequence" widget="handle"/>
                            <field name="code"/>
                            <field name="instruction_date"/>
                            <field name="partner_id"/>
                            <field name="amount"/>
                            <field name="default_debit_account_id"/>
                            <field name="debit_sub_operating_unit_id"/>
                            <field name="debit_operating_unit_id"/>
                            <field name="vendor_bank_acc"/>
                            <field name="default_credit_account_id"/>
                            <field name="credit_sub_operating_unit_id"/>
                            <field name="credit_operating_unit_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="state" string="Status"/>
                            <field name="is_sync" invisible="1"/>
                            <button name="sync" string="Sync" type="action"
                                    icon="fa fa-check text-success"
                                    attrs="{'invisible': [('is_sync', '=', False)]}"/>
                            <button name="not_sync" string="Not Sync" type="action"
                                    icon="fa-times-circle text-danger"
                                    attrs="{'invisible': [('is_sync', '=', True)]}"/>
                        </tree>
                        <form string="Payment">
                            <group>
                                <group>
                                    <field name="advance_id"/>
                                    <field name="instruction_date"/>
                                    <field name="partner_id"/>
                                </group>
                                <group>
                                    <field name="amount"/>
                                    <field name="currency_id"/>
                                    <field name="is_sync" invisible="1"/>
                                </group>
                            </group>
                        </form>
                    </field>
                    <group>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_payment_approved" widget="monetary"/>
                            <field name="amount_due" widget="monetary" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="inherit_rent_payment_instruction" model="ir.ui.view">
        <field name="name">inherit.rent.payment.instruction</field>
        <field name="model">vendor.advance</field>
        <field name="inherit_id" ref="rent_agreement.rent_agreement_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_validate']" position="after">
                <field name="payment_btn_visible" invisible="1"/>
                <button name="action_payment_instruction" type="object"
                        attrs="{'invisible': ['|', '|', '|', ('payment_btn_visible', '=', False), ('active', '=', False), ('is_amendment', '=', True), ('is_rejection', '=', True)]}"
                        string="Payment Instruction" class="oe_highlight"/>
            </xpath>
            <xpath expr="//button[@name='action_amendment']" position="replace">
                <button string="Amendment" name="action_amendment"
                                type="object" class="oe_read_only"
                                attrs="{'invisible': ['|', '|', '|', ('is_amendment', '=', True), ('is_rejection', '=', True), ('state', 'in', ('draft','confirm','cancel', 'done', 'reject', 'expired')), ('payment_btn_visible', '=', True)]}"/>
            </xpath>
            <xpath expr="//notebook/page[1]" position="after">
                <page string="Payments" class="oe_page_title"
                      attrs="{'invisible': [('payment_line_ids', '=', [])]}">
                    <field name="payment_line_ids" string="Payments" readonly="1">
                        <tree string="Payment lines">
                            <field name="sequence" widget="handle"/>
                            <field name="code"/>
                            <field name="instruction_date"/>
                            <field name="partner_id"/>
                            <field name="amount"/>
                            <field name="default_debit_account_id"/>
                            <field name="debit_sub_operating_unit_id"/>
                            <field name="debit_operating_unit_id"/>
                            <field name="vendor_bank_acc"/>
                            <field name="default_credit_account_id"/>
                            <field name="credit_sub_operating_unit_id"/>
                            <field name="credit_operating_unit_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="state" string="Status"/>
                            <field name="is_sync" invisible="1"/>
                            <button name="sync" string="Sync" type="action"
                                    icon="fa fa-check text-success"
                                    attrs="{'invisible': [('is_sync', '=', False)]}"/>
                            <button name="not_sync" string="Not Sync" type="action"
                                    icon="fa-times-circle text-danger"
                                    attrs="{'invisible': [('is_sync', '=', True)]}"/>
                        </tree>
                        <form string="Payment">
                            <group>
                                <group>
                                    <field name="advance_id" string="Rent Agreement"/>
                                    <field name="instruction_date"/>
                                    <field name="partner_id"/>
                                </group>
                                <group>
                                    <field name="amount"/>
                                    <field name="currency_id"/>
                                    <field name="is_sync" invisible="1"/>
                                </group>
                            </group>
                        </form>
                    </field>
                    <group>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_payment_approved" widget="monetary"/>
                            <field name="amount_due" class="oe_subtotal_footer_separator"
                                   widget="monetary"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="inherit_vendor_advance_tree" model="ir.ui.view">
        <field name="name">inherit.vendor.advance.tree</field>
        <field name="model">vendor.advance</field>
        <field name="inherit_id" ref="vendor_advance.vendor_advance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='advance_amount']" position="after">
                <field name="amount_due" string="Need To Pay"/>
            </xpath>
        </field>
    </record>
</odoo>
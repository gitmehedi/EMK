<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="payment_instruction_bill_form">
        <field name="name">payment.instruction.bill.form</field>
        <field name="model">payment.instruction</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Payment Instruction" create="false" delete="false" edit="false">
                <header>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', 'in', ('approved','cancel'))]}"
                            groups="gbs_payment_instruction.group_payment_approver"/>
                    <button name="action_reject" string="Cancel" type="object"
                            attrs="{'invisible': [('state', 'in', ('approved','cancel'))]}"
                            groups="gbs_payment_instruction.group_payment_approver"/>
                    <button name="action_hot_fix" string="  Fix Payment Instruction" type="object"
                            class="oe_highlight" confirm="Please Re-check Payment Instruction No and Invoice No and Submit"
                            groups="gbs_payment_instruction.group_payment_admin"
                            attrs="{'invisible': [('state', 'in', ('approved','cancel'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved"/>
                </header>
                <sheet>
                    <h1>
                        <field name="code"/>
                    </h1>
                    <group>
                        <group>
                            <field name="invoice_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"
                                   attrs="{'invisible':['|', ('advance_id','!=',False), ('security_return_id','!=',False)]}"/>
                            <field name="advance_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"
                                   attrs="{'invisible':['|', ('invoice_id','!=',False), ('security_return_id','!=',False)]}"/>
                            <field name="security_return_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"
                                   attrs="{'invisible':['|', ('invoice_id','!=',False), ('advance_id','!=',False)]}"/>
                            <field name="partner_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="instruction_date"/>
                            <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="narration"/>
                            <field name="reconcile_ref"/>
                            <field name="currency_id" invisible="1"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="default_debit_account_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="debit_sub_operating_unit_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="debit_operating_unit_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                    <group string="Payment To">
                        <group>
                            <field name="vendor_bank_acc"
                                   attrs="{'invisible':[('default_credit_account_id','!=',False)]}" readonly="1"/>
                            <field name="default_credit_account_id"
                                   attrs="{'invisible':[('vendor_bank_acc','!=',False)]}"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="credit_sub_operating_unit_id"
                                   attrs="{'invisible':[('vendor_bank_acc','!=',False)]}"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="credit_operating_unit_id"
                                   attrs="{'invisible':[('vendor_bank_acc','!=',False)]}"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>

                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="payment_instruction_bill_tree">
        <field name="name">payment.instruction.bill.tree</field>
        <field name="model">payment.instruction</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Payment Instruction" edit="0" create="0" delete="0" duplicate="0"
                  decoration-info="state == 'draft'" decoration-muted="state == 'approved'"
                  decoration-danger="state in ('cancel') ">
                <field name="code"/>
                <field name="invoice_id"/>
                <field name="advance_id"/>
                <field name="security_return_id"/>
                <field name="partner_id"/>
                <field name="default_debit_account_id"/>
                <field name="default_credit_account_id"/>
                <field name="credit_operating_unit_id"/>
                <field name="debit_operating_unit_id"/>
                <field name="vendor_bank_acc"/>
                <field name="instruction_date"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="state"/>
                <button name="not_sync" string="Not Sync" type="action"
                        icon="fa-times-circle text-danger"
                        attrs="{'invisible': [('is_sync', '=', True)]}"/>
                <button name="sync" string="Sync" type="action"
                        icon="fa fa-check text-success"
                        attrs="{'invisible': [('is_sync', '=', False)]}"/>
                <field name="is_sync" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="payment_instruction_bill_search">
        <field name="name">payment.instruction.bill.search</field>
        <field name="model">payment.instruction</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Move">
                <field name="code" filter_domain="[('code', 'ilike', self)]"
                       string="Payment Instruction"/>
                <field name="invoice_id" filter_domain="[('invoice_id.number', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="instruction_date"/>
                <field name="default_debit_account_id"/>
                <field name="default_credit_account_id"/>
                <field name="vendor_bank_acc"/>
                <field name="credit_operating_unit_id"/>
                <field name="debit_operating_unit_id"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Not Synced" name="is_sync" domain="[('is_sync','=',False)]"/>
                <filter string="Synced" domain="[('is_sync','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Vendor Bill" context="{'group_by':'invoice_id'}"/>
                    <filter string="Vendor" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_payment_instruction_bill" model="ir.actions.act_window">
        <field name="name">Payment Instructions</field>
        <field name="res_model">payment.instruction</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="payment_instruction_bill_search"/>
        <field name="domain">['|', '&amp;', ('invoice_id', '!=', False), '&amp;', ('invoice_id.is_asset', '=', False),
            ('invoice_id.vbg_batch_id', '=', False)
            ,'|', '&amp;', ('advance_id', '!=', False), ('advance_id.type', '!=', 'multi'), ('security_return_id', '!=',
            False)]
        </field>
        <field name="context">{'search_default_draft':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Payment instruction is empty.
            </p>
        </field>
    </record>


    <record model="ir.actions.act_window.view" id="action_bill_payment_instruction_form">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payment_instruction_bill_form"/>
        <field name="act_window_id" ref="action_payment_instruction_bill"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_bill_payment_instruction_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="payment_instruction_bill_tree"/>
        <field name="act_window_id" ref="action_payment_instruction_bill"/>
    </record>

    <menuitem
            parent="account.menu_finance_payables"
            action="action_payment_instruction_bill"
            id="menu_payment_instruction_bill" sequence="140"/>

    <record id="action_payment_instruction_asset" model="ir.actions.act_window">
        <field name="name">Payment Instructions</field>
        <field name="res_model">payment.instruction</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="payment_instruction_bill_search"/>
        <field name="domain">[('invoice_id.is_asset','=',True)]</field>
        <field name="context">{'search_default_draft':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Payment instruction is empty.
            </p>
        </field>
    </record>

    <record id="action_payment_instruction_rent_bill" model="ir.actions.act_window">
        <field name="name">Payment Instructions</field>
        <field name="res_model">payment.instruction</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="payment_instruction_bill_search"/>
        <field name="domain">['|', ('invoice_id.vbg_batch_id','!=', False), ('advance_id.type', '=', 'multi')]</field>
        <field name="context">{'search_default_draft':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Payment instruction is empty.
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="action_payment_instruction_asset_form">
        <field name="sequence" eval="4"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payment_instruction_bill_form"/>
        <field name="act_window_id" ref="action_payment_instruction_asset"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_payment_instruction_asset_tree">
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="payment_instruction_bill_tree"/>
        <field name="act_window_id" ref="action_payment_instruction_asset"/>
    </record>

    <menuitem name="Payment Instructions" parent="account_fam.sub_assets_vendor_menu"
              action="action_payment_instruction_asset"
              id="menu_payment_instruction_asset" sequence="10"/>

    <menuitem name="Payment Instructions" parent="rent_agreement.menu_vendor_operation_rent"
              action="action_payment_instruction_rent_bill" groups="account.group_account_user"
              id="menu_payment_instruction_rent" sequence="90"/>
</odoo>
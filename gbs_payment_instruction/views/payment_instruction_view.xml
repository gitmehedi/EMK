<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_payment_instruction_form">
        <field name="name">Payment Instructions</field>
        <field name="model">payment.instruction</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="partner_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="instruction_date"/>
                            <field name="is_sync"/>
                            <field name="vendor_bank_acc"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="default_debit_account_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="default_credit_account_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="operating_unit_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="sub_operating_unit_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_payment_instruction_tree">
        <field name="name">Payment Instructions</field>
        <field name="model">payment.instruction</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree decoration-success="is_sync==False"
                  decoration-muted="is_sync==True">
                <field name="code"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="default_debit_account_id"/>
                <field name="default_credit_account_id"/>
                <field name="vendor_bank_acc"/>
                <field name="operating_unit_id"/>
                <field name="instruction_date"/>
                <field name="is_sync"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_payment_instruction_search">
        <field name="name">Payment Instructions</field>
        <field name="model">payment.instruction</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Move">
                <field name="code" filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]" string="Move"/>
                <field name="instruction_date"/>
                <field name="is_sync"/>
                <field name="default_debit_account_id"/>
                <field name="default_credit_account_id"/>
                <field name="vendor_bank_acc"/>
                <field name="operating_unit_id"/>
                <field name="sub_operating_unit_id"/>
                <field name="partner_id"/>
                <field name="currency_id"/>
                <filter string="Not Synced" name="is_sync" domain="[('is_sync','=',False)]"/>
                <filter string="Synced" domain="[('is_sync','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Syncronization" context="{'group_by':'is_sync'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_payment_instruction_form" model="ir.actions.act_window">
        <field name="name">Payment Instructions</field>
        <field name="res_model">payment.instruction</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_payment_instruction_search"/>
        <field name="context">{"search_default_is_sync": 1 }</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Payment instruction is empty.
            </p>
        </field>
    </record>

    <menuitem parent="base.menu_custom" action="action_payment_instruction_form" id="payment_instruction_menu"/>
</odoo>

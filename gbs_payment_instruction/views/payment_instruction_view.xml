<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_payment_instruction_form">
        <field name="name">Payment Instructions</field>
        <field name="model">payment.instruction</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="code"/>
                            <field name="instruction_date"/>
                            <field name="is_sync"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="partner_id" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="currency_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="default_debit_account_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="default_credit_account_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="vendor_bank_acc"/>
                            <field name="operating_unit_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="sub_operating_unit_id"
                                   options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_payment_instruction_tree">
        <field name="name">Payment Instructions</field>
        <field name="model">payment.instruction</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree decoration-success="is_sync==False"
                  decoration-muted="is_sync==True">
                <field name="sequence"/>
                <field name="code"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="default_debit_account_id"/>
                <field name="default_credit_account_id"/>
                <field name="vendor_bank_acc"/>
                <field name="operating_unit_id"/>
                <field name="instruction_date"/>
                <field name="is_sync"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_payment_instruction_search">
        <field name="name">Payment Instructions</field>
        <field name="model">payment.instruction</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search options">
                <field name="sequence"/>
                <field name="code"/>
                <field name="instruction_date"/>
                <field name="is_sync"/>
                <field name="amount"/>
                <field name="partner_id"/>
                <field name="currency_id"/>
                <field name="default_debit_account_id"/>
                <field name="default_credit_account_id"/>
                <field name="vendor_bank_acc"/>
                <field name="operating_unit_id"/>
                <field name="sub_operating_unit_id"/>
                <field name="currency_id"/>
            </search>
        </field>
    </record>

    <act_window
            name="Payment Instructions"
            id="action_payment_instruction_form"
            res_model="payment.instruction"/>

    <menuitem
            parent="base.menu_custom"
            action="action_payment_instruction_form"
            id="payment_instruction_menu"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Template -->
    <record id="view_product_template_form_type_inherit" model="ir.ui.view">
        <field name="name">Product Template (form)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="asset_category_id" position="replace">
                <field name="asset_category_id"
                       attrs="{'required': [('type','=', 'asset')],'invisible': [('type','!=', 'asset')]}"
                       domain="[('type', '=', 'purchase'),('parent_id', '=',False)]"
                       context="{'default_type': 'purchase'}"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                <field name="asset_type_id"
                       domain="[('type', '=', 'purchase'),('parent_id', '=',asset_category_id)]"
                       context="{'default_type': 'purchase'}"
                       attrs="{'required': [('type','=', 'asset'),('asset_category_id','!=',False)],'invisible': [('type','!=', 'asset')]}"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
            </field>
        </field>
    </record>
</odoo>
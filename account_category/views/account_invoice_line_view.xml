<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherited_view_invoice_asset_type" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account_fam.asset_account_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='asset_category_id']" position="replace">
                <field name="asset_category_id" required="True"
                       domain="[('type', '=', 'purchase'),('parent_id', '=',False)]"
                       context="{'default_type': 'purchase'}"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                <field name="asset_type_id"
                       domain="[('type', '=', 'purchase'),('parent_id', '!=',False)]"
                       context="{'default_type': 'purchase'}"
                       attrs="{'required': [('asset_category_id','!=',False)]}"
                       options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
            </xpath>
        </field>
    </record>
</odoo>
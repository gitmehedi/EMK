<odoo>
    <record id="rule_ot_requisition_for_emp" model="ir.rule">
        <field name="name">OT Requisition(General Employee)</field>
        <field name="model_id" ref="model_hr_ot_requisition"/>
        <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.department_id.manager_id','in',[e.id for e in user.employee_ids])]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('base.group_user')),(4,ref('gbs_base_package.group_dept_manager'))]"/>
    </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_product_view_provisional" model="ir.ui.view">
            <field name="name">inherit_product_view_provisional</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="is_provisional_expense" attrs="{'invisible': [('type','!=','service')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

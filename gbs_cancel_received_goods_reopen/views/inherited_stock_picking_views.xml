<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Stock Picking Form View -->
        <record id="inherit_view_picking_reopen_form" model="ir.ui.view">
            <field name="name">inherit.stock.picking.reopen.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock_picking_extend.view_stock_picking_form1" />
            <field name="arch" type="xml">
                    <xpath expr="//button[@name='action_cancel']" position="before">
                        <button name="action_reopen" states="cancel" confirm="Are you sure you want to continue?"
                                string="Reopen" type="object" class="oe_highlight" groups="base.group_system,gbs_sale_order_approval.group_so_cancellation"/>
                    </xpath>
            </field>
        </record>

        <record id="inherit_view_picking_reopen_qc_sound_stock_form" model="ir.ui.view">
            <field name="name">inherit.stock.picking.reopen.qc.sound.stock.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                    <xpath expr="//button[@name='action_cancel']" position="before">
                        <button name="action_qc_sound_stock_cancel_reopen" states="cancel" confirm="Are you sure you want to continue?"
                                string="Reopen" type="object" class="oe_highlight" groups="base.group_system,gbs_sale_order_approval.group_so_cancellation"/>
                    </xpath>
            </field>
        </record>

    </data>
</odoo>
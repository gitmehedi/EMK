<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <act_window
                id="account.action_account_payment_from_invoices"
                name="Register Payment"
                res_model="account.register.payments"
                src_model="account.invoice"
                view_mode="form"
                multi="True"
                target="new"
                key2="client_action_multi"
                groups="base.group_system"
        />

        <!--Vendor-->
        <act_window id="portal.partner_wizard_action"
                    name="Portal Access Management"
                    src_model="res.partner"
                    res_model="portal.wizard"
                    view_type="form" view_mode="form"
                    key2="client_action_multi" target="new"
                    groups="base.group_system"/>
        <act_window
                id="account.act_account_partner_ledger_payable"
                name="Partner Ledger: Payable"
                res_model="account.move.line"
                context="{'search_default_partner_id':[active_id], 'search_default_unreconciled':1, 'search_default_payable':1}"
                src_model="res.partner"
                groups="base.group_system"/>
        <act_window
                id="account.act_account_partner_ledger_payable_no_partner"
                name="Unknown Partner Ledger"
                res_model="account.move.line"
                context="{'search_default_unreconciled':1, 'search_default_payable':1}"
                domain="[('partner_id', '=', False)]"
                src_model="res.partner"
                groups="base.group_system"/>
        <act_window
                id="account.act_account_partner_ledger_receivable"
                name="Partner Ledger: Receivable"
                res_model="account.move.line"
                context="{'search_default_partner_id':[active_id], 'search_default_unreconciled':1, 'search_default_receivable':1}"
                src_model="res.partner"
                groups="base.group_system"/>
        <act_window
                id="account.act_account_partner_ledger_receivable_no_partner"
                name="Unknown Partner Ledger"
                res_model="account.move.line"
                context="{'search_default_unreconciled':1, 'search_default_receivable':1}"
                domain="[('partner_id', '=', False)]"
                src_model="res.partner"
                groups="base.group_system"/>
        <act_window
                id="account.action_move_line_select_by_partner"
                name="Journal Items"
                context="{'search_default_partner_id': [active_id]}"
                res_model="account.move.line"
                src_model="res.partner"
                groups="base.group_system"/>
        <act_window
                id="account.act_account_invoice_partner_relation"
                name="Monthly Turnover"
                groups="base.group_system"
                context="{'search_default_partner_id':[active_id], 'search_default_month':1,'search_default_user':1,'group_by_no_leaf':1,'group_by':[]}"
                res_model="account.invoice.report"
                src_model="res.partner"
                view_mode="graph"/>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <!-- Form View -->
        <record id="hr_compensatory_leave_form" model="ir.ui.view">
            <field name="name">hr_compensatory_leave_form</field>
            <field name="model">hr.compensatory.leave</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Compensatory Leave">
                    <header>
                        <button string="Submit" name="action_submit" states="to_submit"
                                type="object" class="oe_highlight" groups="base.group_user"/>
                        <field name="current_user_is_approver" invisible="True"/>
                        <button string="Approve" name="action_approve" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|',('current_user_is_approver', '!=', True),('state', '!=', 'to_approve')]}"/>
                        <button string="Validate" name="action_validate" states="to_approve" class="oe_highlight"
                                type="object"
                                groups="hr_attendance.group_hr_attendance_user"/>
                        <button string="Refuse" name="action_refuse" states="to_approve,approved" type="object"
                                groups="gbs_application_group.group_dept_manager,hr_attendance.group_hr_attendance_user"/>
                        <button string="Reset to Draft" name="action_reset" states="to_approve" type="object"/>
                        <button string="Reset to Draft" name="action_reset" states="approved" type="object"
                                groups="base_technical_features.group_technical_features"/>
                        <field name="state" widget="statusbar" statusbar_visible="to_submit,to_approve,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" attrs="{'readonly':[('state','!=','to_submit')]}"
                                       options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                <field name="department_id"/>
                                <field name="from_datetime"
                                       attrs="{'readonly':[('state','in',['approved','refuse'])]}"/>
                                <field name="to_datetime" attrs="{'readonly':[('state','in',['approved','refuse'])]}"/>
                                <field name="available_hours" widget="float_time"/>
                                <field name="total_hours" widget="float_time"/>
                            </group>
                            <group>
                                <field name="pending_approver" groups="hr.group_hr_user"/>
                            </group>
                        </group>
                        <group>
                            <group string="Reason">
                                <field name="leave_reason" nolabel="1" colspan="4" placeholder="Add a reason..."
                                       attrs="{'readonly':[('state','in',['approved','refuse'])]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="hr_compensatory_leave_tree" model="ir.ui.view">
            <field name="name">hr_compensatory_leave_tree</field>
            <field name="model">hr.compensatory.leave</field>
            <field name="arch" type="xml">
                <tree string="Compensatory Leave" decoration-danger="state == 'refuse'"
                      decoration-info="state == 'to_approve'" decoration-success="state == 'approved'"
                      decoration-bf="message_needaction == True">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="from_datetime"/>
                    <field name="to_datetime"/>
                    <field name="total_hours" widget="float_time"/>
                    <field name="message_needaction" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!--search view-->
        <record id="view_hr_compensatory_leave_filter" model="ir.ui.view">
            <field name="name">hr.compensatory.leave.filter</field>
            <field name="model">hr.compensatory.leave</field>
            <field name="arch" type="xml">
                <search string="Search Compensatory Leave">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <filter name='my_approval' string="My Approval" domain="[('pending_approver.user_id','=',uid)]"/>
                </search>
            </field>
        </record>

        <record id="action_hr_compensatory_leave" model="ir.actions.act_window">
            <field name="name">Compensatory Leave</field>
            <field name="res_model">hr.compensatory.leave</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_hr_compensatory_leave_pending" model="ir.actions.act_window">
            <field name="name">Compensatory Leave</field>
            <field name="res_model">hr.compensatory.leave</field>
            <field name="view_type">form</field>
            <field name="domain">[('state','in',['to_approve'])]</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_my_approval':1}"/>
            <field name="search_view_id" ref="view_hr_compensatory_leave_filter"/>
        </record>

        <record id="action_hr_compensatory_leave_approved" model="ir.actions.act_window">
            <field name="name">Compensatory Leave</field>
            <field name="res_model">hr.compensatory.leave</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_hr_compensatory_leave" name="Compensatory Leave"
                  parent="main_menu_hr_compensatory_leave"
                  sequence="1" action="action_hr_compensatory_leave" groups="base.group_user"/>
    </data>
</openerp>
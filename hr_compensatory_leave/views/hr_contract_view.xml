<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="hr_contract_view_form_compensatory_allow" model="ir.ui.view">
            <field name="name">hr.contract.form.seniority</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="l10n_in_hr_payroll.hr_contract_form_in_inherit"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='supplementary_allowance']" position="after">
                        <field name="comp_allow_rate"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>

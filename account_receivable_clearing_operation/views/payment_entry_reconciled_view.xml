<?xml version="1.0"?>
<odoo>

    <record id="payment_entry_reconcile_form" model="ir.ui.view">
        <field name="name">payment.entry.reconciled.form</field>
        <field name="model">payment.entry.reconciled</field>
        <field name="arch" type="xml">
            <form string="Payment Entry Reconcile">
                <separator string="Accounts Clearing View"/>
                <header>
                    <button name="action_search" type="object" string="Search" class="oe_highlight"/>
                    <button name="action_clear_accounts" type="object" string="Accounts Clearing"/>

                </header>
                <sheet>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="date"/>
                        <field name="partner_id"
                               options="{'no_open':True, 'no_quick_create':True,'no_create_edit':True}"/>
                    </group>

                    <notebook colspan="4">
                        <page string="Clearing Accounts Items">
                            <field name="line_ids">
                                <tree string="List" editable="bottom">
                                    <field name="clear_acc_receivable"/>
                                    <field name="partner_id"
                                           options="{'no_open':True, 'no_quick_create':True,'no_create_edit':True}"/>
                                    <!--<field name="journal_id" options="{'no_open':True, 'no_quick_create':True,'no_create_edit':True}"/>-->
                                    <field name="amount"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id"
                                           options="{'no_open':True,'no_quick_create':True,'no_create_edit':True}"/>
                                    <field name="cheque_received_id" invisible="1"/>
                                    <field name="payment_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!--<record id="payment_entry_reconcile_list" model="ir.ui.view">-->

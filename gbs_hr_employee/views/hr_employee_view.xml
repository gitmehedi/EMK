<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="hr_emp_tin_view_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='bank_account_id']" position="after">
                        <field name="tin_req"/>
                        <field name="tin"  attrs="{'required': [('tin_req', '=', True)],
                                                    'invisible': [('tin_req', '=', False)]}"/>
                    </xpath>
                    <xpath expr="//field[@name='user_id']" position="after">
                        <field name="employee_sequence"/>
                        <field name="total_pf"/>
                    </xpath>
                    <xpath expr="//field[@name='address_id']" position="attributes">
                        <attribute name="options">{'no_create':1,'no_create_edit':1,'no_open':1,'always_reload':1,'highlight_first_line':1}</attribute>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
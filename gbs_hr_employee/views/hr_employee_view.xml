<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="hr_emp_tin_view_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='bank_account_id']" position="after">
                        <field name="tin_req"/>
                        <field name="tin"  attrs="{'required': [('tin_req', '=', True)],
                                                    'invisible': [('tin_req', '=', False)]}"/>
                    </xpath>
                    <xpath expr="//field[@name='user_id']" position="after">
                        <field name="employee_sequence"/>
                        <field name="total_pf"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="hr_employee_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.seniority</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_employee_seniority.hr_employee_view_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='initial_employment_date']" position="after">
                    <field name="last_employment_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
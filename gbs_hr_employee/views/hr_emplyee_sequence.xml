<odoo>
    <data>
        <!-- Inherited Form view-->
        <record id="hr_employee_sequence_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.sequence</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_employee_seniority.hr_employee_view_form_inherit"/>

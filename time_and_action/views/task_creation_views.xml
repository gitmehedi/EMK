<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Task Creation Tree or List view -->
		<record model="ir.ui.view" id="task_creation_tree_view" >
			<field name="name">task.creation.tree</field>
			<field name="model">task.creation</field>
			<field name="arch" type="xml">
				<tree string="Task Creation Tree">
					<field name="name" />
					<field name="task_name" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Task Creation Form Views -->
		<record model="ir.ui.view" id="task_creation_form_view">
			<field name="name">task.creation.form</field>
			<field name="model">task.creation</field>
			<field name="arch" type="xml">
				<form string="Task Creation Form">
					<header>
						<button name="action_confirm" type="object" states="draft"
							string="Confirm" class="oe_highlight" />

						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<h1>
							<field name="name" string="Serial No" />
						</h1>
						<group>
							<group>
								<field name="task_name" />
								<field name="related_process_id" />
								<field name="related_sub_process_id" />
								<field name="task_related_to" />
							</group>
							<group>
								<field name="task_type"  widget="radio"/>
								<field name="milestone_task" />
							</group>

                        </group>

						<separator string="Dependency" />

                        <div>
                            <div class="col-md-8 multifield_combination">
                                <field name="independent" widget="radio" options="{'horizontal': true}"/>
                            </div>
                        </div>
						<hr/>
                        <group>
                            <group attrs="{'invisible': [('independent','!=','independent')]}">
								<field name="independent_standard_duration" />
							</group>
							<group attrs="{'invisible': [('independent','!=','pre_defined_event_date')]}">
                                <field name="pre_defined_lag_days"/>
								<field name="backward_forward" widget="radio"/>
								<field name="event_date"/>
								<field name="pre_defined_standard_duration" />
							</group>
                             <group attrs="{'invisible': [('independent','!=','pressiding_task_dependent')]}">
								<field name="dependent_lag_days" />
								<field name="dependent_backward_forward" widget="radio"/>
								<field name="dependent_standard_duration" />
							</group>
                        </group>

                        <separator string="Remarks" />
						<field name="remarks" placeholder="Put an remarks..................." />
					</sheet>
				</form>
			</field>
		</record>




		<!-- Task Creation Search View -->
		<record model="ir.ui.view" id="task_creation_view_search" >
			<field name="name">task.creation.search</field>
			<field name="model">task.creation</field>
			<field eval="10" name="priority" />
			<field name="arch" type="xml">
				<search string="Task Creation">
					<field name="name" />
				</search>
			</field>
		</record>

		<!-- Sequences for Task Creation -->
		<record model="ir.sequence" id="seq_task_creation" >
			<field name="name">task.creation</field>
			<field name="code">tc_code</field>
			<field name="prefix">TC-</field>
			<field name="padding">10</field>
		</record>


		<!-- Task Creation Menu and Action -->
		<record model="ir.actions.act_window" id="task_creation_list_action" >
			<field name="name">Task Creation</field>
			<field name="res_model">task.creation</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="task_creation_main_menu" name="Task Creation"
			parent="time_and_action_menu" sequence="125"
			action="task_creation_list_action" />
	</data>
</openerp>

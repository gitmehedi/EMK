<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="sales_contract_conversion_wizard_form_view" model="ir.ui.view" >
			<field name="name">sales.contract.conversion.wizard.form</field>
			<field name="model">sales.contract.conversion.wizard</field>
			<field name="arch" type="xml">
				<form string="Sales Contract Conversion Wizard">
					<group>
						<h4>
							Do you want to convert sales contract?
						</h4>
					</group>
					<footer>
						<button name="convert_salse_contract" type="object" string="Convert"
							context="{'convert': True}" class="oe_highlight" />
						<button string="Cancel" special="cancel" class="oe_link" />
					</footer>
				</form>
			</field>
		</record>
		
		<record id="sales_contract_conversion_wizard_action" model="ir.actions.act_window">
			<field name="name">Sales Contract Conversion</field>
			<field name="type">ir.actions.act_window</field>
			<field name="src_model">sales.contract</field>
			<field name="res_model">sales.contract.conversion.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
	</data>
</openerp>
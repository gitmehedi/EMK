<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_tpm_product_form" model="ir.ui.view">
            <field name="name">view.res.tpm.product.form</field>
            <field name="model">res.tpm.product</field>
            <field name="arch" type="xml">
                <form string="TPM Product" duplicate="0" create="0" update="0">
                    <header>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title pull-left">
                            <h1>
                                <field name="branch_id"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products (BDT)">
                                <field name="line_ids">
                                    <tree>
                                        <field name="account_id"/>
                                        <field name="currency_id"/>
                                        <field name="income_rate"/>
                                        <field name="expense_rate"/>
                                        <field name="date"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="account_id"/>
                                                    <field name="currency_id"/>
                                                </group>
                                                <group>
                                                    <field name="date"/>
                                                    <field name="income_rate"/>
                                                    <field name="expense_rate"/>
                                                </group>
                                            </group>
                                        </sheet>
                                        <div class="oe_chatter">
                                            <field name="message_follower_ids" widget="mail_followers"/>
                                            <field name="message_ids" widget="mail_thread"/>
                                        </div>
                                    </form>
                                </field>
                            </page>
                            <page string="Products (Foreign Currency)">
                                <field name="line_fc_ids">
                                    <tree>
                                        <field name="account_id"/>
                                        <field name="currency_id"/>
                                        <field name="income_rate"/>
                                        <field name="expense_rate"/>
                                        <field name="date"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="account_id"/>
                                                    <field name="currency_id"/>
                                                </group>
                                                <group>
                                                    <field name="date"/>
                                                    <field name="income_rate"/>
                                                    <field name="expense_rate"/>
                                                </group>
                                            </group>
                                        </sheet>
                                        <div class="oe_chatter">
                                            <field name="message_follower_ids" widget="mail_followers"/>
                                            <field name="message_ids" widget="mail_thread"/>
                                        </div>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_res_tpm_product_tree" model="ir.ui.view">
            <field name="name">view.res.tpm.product.tree</field>
            <field name="model">res.tpm.product</field>
            <field name="arch" type="xml">
                <tree string="TPM Product" decoration-info="state=='draft'"
                      decoration-success="state in ('calculate','confirm')"
                      decoration-muted="state=='approve'"
                      decoration-danger="state=='reject'"
                      decoration-bf="state in ('calculate','confirm')" duplicate="0" create="0" update="0">
                    <field name="branch_id"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_res_tpm_product_search" model="ir.ui.view">
            <field name="name">res.tpm.product.search</field>
            <field name="model">res.tpm.product</field>
            <field name="arch" type="xml">
                <search string="Branch">
                    <field name="name"/>
                    <field name="date"/>
                </search>
            </field>
        </record>

        <record id="action_res_tpm_product" model="ir.actions.act_window">
            <field name="name">TPM Product</field>
            <field name="res_model">res.tpm.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to start a new TPM Product.
                </p>
            </field>
        </record>

        <menuitem id="menu_res_tpm_product" parent="menu_tpm_operations" action="action_res_tpm_product" sequence="1"/>
    </data>
</odoo>
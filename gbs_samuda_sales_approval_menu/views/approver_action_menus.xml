            </field>
        </record>
        <record model="ir.actions.act_window" id="delivery_order_action_head_account">
            <field name="name">Delivery Authorization</field>
            <field name="res_model">delivery.authorization</field>
            <field name="context">{
                'search_default_confirm':1,
                }</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_delivery_auth"/>
        </record>
        <record model="ir.actions.act_window" id="delivery_order_action_cxo">
            <field name="name">Delivery Authorization</field>
            <field name="res_model">delivery.authorization</field>
            <field name="context">{
                'search_default_validate':1,
                }</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_delivery_auth"/>
        </record>


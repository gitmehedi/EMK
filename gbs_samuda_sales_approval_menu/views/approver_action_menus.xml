<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--parent menus-->
        <menuitem id="menu_hos_approval" name="Head Of Sales Approval" groups="gbs_application_group.group_head_sale"
                  parent="sales_team.menu_base_partner" sequence="4"/>
        <menuitem id="menu_hoa_approval" name="Head Of Accounts Approval"
                  groups="gbs_application_group.group_head_account,account.group_account_user"
                  parent="sales_team.menu_base_partner" sequence="3"/>
        <menuitem id="menu_cxo_approval" name="CXO Approval" groups="gbs_application_group.group_cxo"
                  parent="sales_team.menu_base_partner" sequence="2"/>
        <!--........................................................................................................-->

        <!--SO-->
        <record id="search_so_pending" model="ir.ui.view">
            <field name="name">delivery.authorization.search</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <search string="Quotations">
                    <filter name="approvehos" string="To Approve" domain="[('approver_user_id','=',uid),('state','=','draft')]"/>
                    <filter name="approvehoa" string="To Approve" domain="[('state','=','validate')]"/>
                    <filter name="approvecxo" string="To Approve" domain="[('state','=','sent')]"/>
                </search>
            </field>
        </record>

        <record id="action_so_hos_pending" model="ir.actions.act_window">
            <field name="name">Pending</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_so_pending"/>
            <field name="context">{
                'search_default_approvehos':1,
                }
            </field>
        </record>

        <record id="action_so_hoa_pending" model="ir.actions.act_window">
            <field name="name">Pending</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_so_pending"/>
            <field name="context">{
                'search_default_approvehoa':1,
                }
            </field>
        </record>

        <record id="action_so_cxo_pending" model="ir.actions.act_window">
            <field name="name">Pending</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_so_pending"/>
            <field name="context">{
                'search_default_approvecxo':1,
                }
            </field>
        </record>

        <menuitem name="Pending SO"
                  id="menu_sale_hos_pending"
                  parent="menu_hos_approval"
                  action="action_so_hos_pending"
                  groups="gbs_application_group.group_head_sale" sequence="1"/>

        <menuitem name="Pending SO"
                  id="menu_sale_hoa_pending"
                  parent="menu_hoa_approval"

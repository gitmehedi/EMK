<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_hr_salary_rule_tree_view" model="ir.ui.view">
            <field name="name">inherit.hr.salary.rule.tree.view</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_list"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-danger">state == 'reject'</attribute>
                    <attribute name="decoration-bf">state == 'approve'</attribute>
                    <attribute name="decoration-success">state == 'approve'</attribute>
                    <attribute name="decoration-info">state == 'draft'</attribute>
                </xpath>
                <xpath expr="//field[@name='register_id']" position="after">
                    <field name="state"></field>
                </xpath>
            </field>
        </record>

        <record id="hr_salary_rule_form_inherit" model="ir.ui.view">
            <field name="name">hr.salary.rule</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/*" position="before">
                    <header>
                        <button name="act_approve" string="Approve" states="draft" type="object"
                                class="oe_highlight"/>
                        <button name="act_draft" string="Draft" states="reject" type="object" class="oe_highlight"/>
                        <button name="act_reject" string="Reject" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"cancel":"red"}'/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='register_id']" position="attributes">
                    <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
                </xpath>

                <xpath expr="//page[@name='rules']" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//page[3]" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//page[4]" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>

        <record id="inherit_hr_salary_rule_search_view" model="ir.ui.view">
            <field name="name">inherit.hr.salary.rule.search.view</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_rule_filter"/>
            <field name="arch" type="xml">
                <search>
                    <field name="state"/>
                    <group string="Group By">
                        <filter string="Pending" name="pending" icon="terp-personal"
                                domain="[('state','in',('draft','approve')),('pending','=',1),'|',('active','=',0),('active','=',1)]"/>
                        <filter string="Rejected" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','reject')]"/>
                        <filter string="In-Active" name="state" icon="terp-personal"
                                domain="[('active','=',0),('pending','=',0),('state','=','approve')]"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="hr_payroll.action_salary_rule_form">
            <field name="context">
                {"search_default_active":'False',"search_default_pending":'True'}
            </field>
        </record>

    </data>
</odoo>
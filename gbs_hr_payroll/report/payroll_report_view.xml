<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<template id="report_individual_payslip">

			<t t-call="report.html_container">
				<t t-name="report.external_layout_header">
					<div class="header">
						<div class="row">
							<div class="col-xs-4 col-xs-offset-8">
								<h5>Individual Payslip Summary Report</h5>
								<img src='/document/static/img/company_logo.png' />
							</div>
						</div>
					</div>
				</t>
				<t t-name="report.external_layout">
					<div class="page">
						<div class="row">
							<div class="col-xs-12"
								style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
								<h3>PAYSLIP</h3>
							</div>
						</div>

						<div class="row">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th>Employee</th>
										<th>Designation</th>
										<th>DOJ</th>
										<t t-foreach="rules" t-as="r">
											<th>
												<span t-esc="r['name']"></span>
											</th>
										</t>
									</tr>
								</thead>
								<tbody>

								<t t-foreach="docs" t-as="k">
									<t t-if="docs[k]">
									<td class="col-xs-8" colspan="int(docs[k])"><span t-esc="k"></span> </td>

									<t t-foreach="docs[k]" t-as="o">
											<tr>
												<td class="col-xs-8">
													<span t-esc="o['emp_name']"></span>
												</td>
												<td class="col-xs-8">
													<span t-esc="o['designation']"></span>
												</td>
												<td class="col-xs-8">
													<span t-esc="o['doj']"></span>
												</td>

												<t t-foreach="rules" t-as="r">
													<td class="col-xs-8">
														<span t-esc="o[r['code']]"></span>
													</td>
												</t>

											</tr>
										</t>
									</t>
									</t>

								</tbody>
							</table>
						</div>

					</div>
				</t>				
			</t>
		</template>
	</data>
</openerp>
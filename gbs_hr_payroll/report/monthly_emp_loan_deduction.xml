<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_monthly_loan_deduction">
            <t t-call="report.html_container">
                <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside:auto">
                        <div class="row">
                            <div class="clearfix">
                                <h3 class="report-title">Monthly Employee Loan Deduction Report</h3>
                                <h4>
                                    <label>Description</label>
                                    :
                                    <span t-esc="data['name']"/>
                                </h4>
                            </div>
                            <table class="table table-bordered table-report-xs table-striped"
                                   style="margin-bottom: 10px;">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>SN</th>
                                        <th>Employee</th>
                                        <th>Designation</th>
                                        <th>Department</th>
                                        <th style="min-width:60px">D.O.J</th>
                                        <th style="min-width:60px">Employee ID</th>
                                        <th style="min-width:60px">Loan Amount</th>
                                        <t t-foreach="rules" t-as="r">
                                            <t t-if="r['code']== 'LOAN'">
                                                <th>
                                                    <span t-esc="r['name']"></span>
                                                </th>
                                            </t>
                                        </t>
                                        <th style="min-width:60px">Remaining Loan</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="loan_list" t-as="o">
                                        <tr>
                                            <td>
                                                <span t-esc="o_index+1"></span>
                                            </td>
                                            <td>
                                                <span class="text-nowrap" t-esc="o['emp_name']"></span>
                                            </td>
                                            <td>
                                                <span class="text-nowrap" t-esc="o['designation']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="o['department']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="o['doj']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="o['device_employee_acc']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="o['initial_loan']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="o['LOAN']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="o['remain_loan']"></span>
                                            </td>
                                        </tr>
                                    </t>
<!--                                    <tr style="page-break-inside: avoid">-->
<!--                                        <t t-if="data['type'] != '1'">-->
<!--                                            <td colspan="6" class="text-right">Total</td>-->
<!--                                            <t t-foreach="rules" t-as="r">-->
<!--                                                <t t-if="r['code']== 'LOAN'">-->
<!--                                                    <td class="text-right">-->
<!--                                                        <strong class="text-nowrap" t-esc="row_total[r['code']]"></strong>-->
<!--                                                    </td>-->
<!--                                                </t>-->
<!--                                            </t>-->
<!--                                        </t>-->
<!--                                    </tr>-->
                                </tbody>
                            </table>
                        </div>
                        <t t-call="report_layout.report_signing"></t>
                    </div>
                </t>
            </t>
        </template>
        <report
                id="action_monthly_loan_deduction"
                string="Monthly Loan Deduction"
                model="hr.payslip.run"
                report_type="qweb-pdf"
                file="gbs_hr_payroll.report_monthly_loan_deduction"
                name="gbs_hr_payroll.report_monthly_loan_deduction"
                menu = "False"
                paperformat="report_layout.paperformat_backend_landscape"
        />
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_monthly_cash_salary">
            <t t-call="report.html_container">
                <t t-call="report_layout.gbs_internal_layout">
                    <div class="page" style="page-break-inside:auto">
                        <div class="row">
                            <div class="clearfix">
                                <h3 class="report-title">Monthly Salary Sheet</h3>
                                <h4>
                                    <label>Description</label>
                                    :
                                    <span t-esc="data['name']"/>
                                </h4>
                            </div>


                            <table class="table table-bordered table-report-xs table-striped"
                                   style="margin-bottom: 10px;">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>SN</th>
                                        <th>Employee</th>
                                        <th>Designation</th>
                                        <th style="min-width:90px">D.O.J</th>
                                        <t t-if="data['type'] != '1'">
                                            <th style="min-width:90px">Loan Balance</th>
                                        </t>
                                        <t t-if="data['type'] == '1'">
                                            <th>Gross</th>
                                        </t>
                                        <t t-if="data['type'] == '1'">
                                            <th>Special Allowance</th>
                                        </t>
                                        <t t-foreach="rules" t-as="r">
                                            <th>
                                                <span t-esc="r['name']"></span>
                                            </th>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody>

                                    <t t-foreach="docs" t-as="k">
                                        <t t-if="k['val']">
                                            <td class="odo-bg-info" t-att-colspan="docs_len" style="padding-left:15px">
                                                <strong t-esc="k['name']"></strong>
                                            </td>

                                            <t t-foreach="k['val']" t-as="o">
                                                <tr>
                                                    <td>
                                                        <span t-esc="o['sn']"></span>
                                                    </td>
                                                    <td>
                                                        <span class="text-nowrap" t-esc="o['emp_name']"></span>
                                                    </td>
                                                    <td>
                                                        <span class="text-nowrap" t-esc="o['designation']"></span>
                                                    </td>
                                                    <td>
                                                        <span t-esc="o['doj']"></span>
                                                    </td>
                                                    <t t-if="data['type'] != '1'">
                                                        <td>
                                                            <span t-esc="o['loan_balance']"></span>
                                                        </td>
                                                    </t>
                                                    <t t-if="data['type'] == '1'">
                                                        <td>
                                                            <span t-esc="o['gross']"></span>
                                                        </td>
                                                    </t>
                                                    <t t-if="data['type'] == '1'">
                                                        <td>
                                                            <span t-esc="o['sa']"></span>
                                                        </td>
                                                    </t>
                                                    <t t-foreach="rules" t-as="r">

                                                        <td class="text-right">
                                                            <span t-esc="o[r['code']]"></span>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>

                                    <tr style="page-break-inside: avoid">
                                        <t t-if="data['type'] != '1'">
                                            <td></td>
                                            <td>Total</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <t t-foreach="rules" t-as="r">
                                                <td class="text-right">
                                                    <strong class="text-nowrap" t-esc="row_total[r['code']]"></strong>
                                                </td>
                                            </t>
                                        </t>
                                    </tr>

                                    <tr>
                                        <td t-att-colspan="docs_len">
                                            <h4 class="text-right pr-5">
                                                <strong>Total:
                                                    <span t-esc="total_sum"></span>
                                                </strong>
                                            </h4>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <p class="text-right">In Words:
                                <strong t-esc="amt_to_word"></strong>
                            </p>
                        </div>
                        <t t-call="report_layout.report_signing"></t>
                    </div>
                </t>
            </t>
        </template>
        <report
                id="action_monthly_cash_salary"
                string="Monthly Cash Salay Report"
                model="hr.payslip.run"
                report_type="qweb-pdf"
                file="gbs_hr_payroll.report_monthly_cash_salary"
                name="gbs_hr_payroll.report_monthly_cash_salary"
                menu = "False"
                paperformat="report_layout.paperformat_backend_landscape"
        />
    </data>
</odoo>
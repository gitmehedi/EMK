<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="receive_outstanding_advance_form" model="ir.ui.view">
            <field name="name">receive.outstanding.advance.form</field>
            <field name="model">receive.outstanding.advance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Receive Outstanding Advance" create="false" delete="false" edit="false">
                    <header>
	                    <button string="Confirm" name="action_confirm" states="draft"
                                type="object" class="oe_highlight"/>
						<button string="Approve" name="action_approve" type="object" class="oe_highlight"
								attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                     	<button string="Cancel" name="action_cancel" states="confirmed" type="object"
                                attrs="{'invisible': [('state', '!=', 'confirm')]}" confirm="Are you sure you want to Cancel this?"/>
                    	<field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                	</header>
                    <sheet>
                        <div class="pull-left">
                            <h1>
                                <field name="name" readonly="1" nolabel="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="agreement_id"
                                       options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="branch_id"
                                       options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                                <field name="sou_id"
                                       options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                                <field name="debit_account_id"
                                       options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                            </group>
                        </group>
                        <div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers"/>
							<field name="message_ids" widget="mail_thread"/>
	                	</div>
                    </sheet>
                </form>
            </field>

        </record>
        <record id="receive_outstanding_advance_tree" model="ir.ui.view">
            <field name="name">receive.outstanding.advance.tree</field>
            <field name="model">receive.outstanding.advance</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Receive Outstanding Advance"
                      create="false" delete="false" edit="false"
                      decoration-info="state == 'draft'"
                      decoration-success="state == 'approved'"
                      decoration-muted="state in ('cancel')">
                    <field name="name"/>
					<field name="agreement_id"/>
                    <field name="branch_id"/>
                    <field name="sou_id"/>
                    <field name="debit_account_id"/>
                    <field name="amount"/>
					<field name="state"/>
                </tree>
            </field>
        </record>

        <record id="receive_outstanding_advance_search" model="ir.ui.view">
            <field name="name">receive.outstanding.advance.filter</field>
            <field name="model">receive.outstanding.advance</field>
            <field name="arch" type="xml">
                <search string="Search Receive Outstanding Advance">
                    <filter name="draft_sd" string="Pending" domain="[('state','=','confirm')]"/>
                	<separator/>
                    <filter name="confirm_sd" string="Confirmed" domain="[('state','=','confirm')]"/>
                	<separator/>
                    <filter name="approved_sd" string="Approved" domain="[('state','=','approve')]"/>
				</search>
            </field>
        </record>

        <record id="action_receive_outstanding_advance_view" model="ir.actions.act_window">
            <field name="name">Receive Outstanding Advance</field>
            <field name="res_model">receive.outstanding.advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="receive_outstanding_advance_search"/>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_receive_outstanding_advance" name="Receive Outstanding Advance"
                  parent="vendor_agreement.menu_agreements" action="action_receive_outstanding_advance_view" sequence="80"
                  groups="vendor_agreement.group_vendor_agreement_manager,vendor_agreement.group_vendor_agreement_user"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vendor_bill_generation_form" model="ir.ui.view">
            <field name="name">vendor.bill.generation.form</field>
            <field name="model">vendor.bill.generation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Vendor Bill Generation">
                    <header>
	                    <button string="Confirm" name="action_confirm" states="draft"
                                type="object" class="oe_highlight"/>
						<button string="Approve" name="action_approve" type="object" class="oe_highlight"
								attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                     	<button string="Cancel" name="action_cancel" states="confirmed" type="object"
                                attrs="{'invisible': [('state', '!=', 'confirm')]}" confirm="Are you sure you want to Cancel this?"/>
                    	<field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve"/>
                	</header>
                    <sheet>
                        <div class="pull-left">
                            <h1>
                                <field name="name" readonly="1" nolabel="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="period_id"
                                       options="{'no_open': True, 'no_create': 1, 'no_create_edit': 1}"/>
                                <field name="narration"/>
                            </group>
                            <group>
                                <field name="billing_period"/>
                            </group>
                        </group>
                        <div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers"/>
							<field name="message_ids" widget="mail_thread"/>
	                	</div>
                    </sheet>
                </form>
            </field>

        </record>
        <record id="vendor_bill_generation_tree" model="ir.ui.view">
            <field name="name">vendor.bill.generation.tree</field>
            <field name="model">vendor.bill.generation</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Vendor Bill Generation">
                    <field name="name"/>
					<field name="period_id"/>
                    <field name="billing_period"/>
					<field name="state"/>
                </tree>
            </field>
        </record>

        <record id="vendor_bill_generation_search" model="ir.ui.view">
            <field name="name">vendor.bill.generation.filter</field>
            <field name="model">vendor.bill.generation</field>
            <field name="arch" type="xml">
                <search string="Search Bill Generation">
                    <filter name="draft_sd" string="Pending" domain="[('state','=','confirm')]"/>
                	<separator/>
                    <filter name="confirm_sd" string="Confirmed" domain="[('state','=','confirm')]"/>
                	<separator/>
                    <filter name="approved_sd" string="Approved" domain="[('state','=','approve')]"/>
				</search>
            </field>
        </record>

        <record id="action_vendor_bill_generation_view" model="ir.actions.act_window">
            <field name="name">Vendor Bill Generation</field>
            <field name="res_model">vendor.bill.generation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="vendor_bill_generation_search"/>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_vendor_bill_generation" name="Vendor Bill Generation"
                  parent="vendor_agreement.menu_agreements" action="action_vendor_bill_generation_view" sequence="70"
                  groups="vendor_agreement.group_vendor_agreement_manager,vendor_agreement.group_vendor_agreement_user"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherited_agreement_tree" model="ir.ui.view">
            <field name="name">inherited_agreement_tree_view</field>
            <field name="model">agreement</field>
            <field name="inherit_id" ref="agreement_account.agreement_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Agreements"
                          decoration-info="state=='draft'" decoration-success="state=='confirm'"
                          decoration-bf="state in ('confirm','done')" decoration-muted="state=='done'">
                        <field name="name" string="Agreement reference"/>
                        <field name="partner_id" string="Vendor"/>
                        <field name="product_id" string="Service"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="advance_amount"/>
                        <field name="adjusted_amount"/>
                        <field name="state"/>
                    </tree>
                </xpath>
            </field>
        </record>
        <record id="inherited_agreement_form" model="ir.ui.view">
            <field name="name">inherited_agreement_form_view</field>
            <field name="model">agreement</field>
            <field name="inherit_id" ref="agreement_account.agreement_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Agreement">
                        <header>
                            <button name="action_confirm" type="object"
                                    string="Confirm" states="draft"
                                    groups="vendor_agreement.group_vendor_agreement_manager,vendor_agreement.group_vendor_agreement_user"
                                    class="oe_highlight"/>
                            <button name="action_validate" type="object"
                                    string="Validate" states="confirm"
                                    groups="vendor_agreement.group_vendor_agreement_manager"
                                    class="oe_highlight"/>
                            <button name="action_cancel" type="object"
                                    string="Cancel" states="confirm"
                                    groups="vendor_agreement.group_vendor_agreement_manager"/>
                            <button name="action_draft" type="object"
                                    string="Reset to draft" states="cancel"
                                    groups="vendor_agreement.group_vendor_agreement_manager"/>
                            <button string="Amendment" name="action_amendment" states="done"
                                    type="object" class="oe_read_only"
                                    groups="vendor_agreement.group_vendor_agreement_manager,account.group_account_invoice"/>
                            <button string="Payment" name="action_payment" states="done"
                                    type="object" class="oe_read_only"
                                    groups="vendor_agreement.group_vendor_agreement_manager"/>
                            <button string="Approve" name="action_approve_amendment"
                                    type="object" class="oe_highlight" attrs="{'invisible': [('is_amendment', '=', False)]}"
                                    groups="vendor_agreement.group_vendor_agreement_manager"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                        </header>
                        <sheet>
                            <div class="oe_button_box" name="button_box" states="done">
                                <button name="toggle_active" type="object"
                                        class="oe_stat_button" icon="fa-archive">
                                    <field name="active" widget="boolean_button"
                                           options='{"terminology": "archive"}'/>
                                </button>
                            </div>
                            <div class="pull-left">
                                <h1>
                                    <field name="name" readonly="1" nolabel="1"/>
                                </h1>
                            </div>
                            <group name="main">
                                <group name="left">
                                    <field name="partner_id" string="Vendor"
                                           options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                    <field name="product_id" string="Service"
                                           options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>-->
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="company_id" groups="base.group_multi_company"
                                           options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                    <field name="account_id" domain="[('internal_type','=','other')]"
                                           options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                    <field name="operating_unit_id"
                                           options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                                    <field name="is_amendment" invisible="1"/>
                                </group>
                                <group name="right">
                                    <field name="pro_advance_amount" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="advance_amount" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="agreement_type" widget="radio" invisible="1"/>
                                    <field name="code" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="adjustment_value" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="service_value" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="total_payment_approved" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="adjusted_amount" readonly="1" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="outstanding_amount" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="is_remaining" invisible="1"/>
                                </group>
                            </group>
                            <notebook>
                                <page string="Notes">
                                    <field name="description"/>
                                </page>
                                <page string="Invoices" class="oe_page_title"
                                      attrs="{'invisible': [('agreement_type', '!=', 'purchase')]}">
                                    <group string="Vendor Bills" name="in_invoices">
                                        <field name="in_invoice_ids" colspan="4" nolabel="1">
                                            <tree string="Invoices">
                                                <field name="partner_id" string="Vendor"/>
                                                <field name="user_id" string="Responsible"/>
                                                <field name="date_invoice" string="Bill Date"/>
                                                <field name="number" string="Bill Number"/>
                                                <field name="amount_total_signed" string="Total"/>
                                                <field name="residual_signed" string="To Pay"/>
                                                <field name="agreement_adjusted_amount" string="Adjusted"/>
                                                <field name="state"/>
                                            </tree>
                                            <from string="Invoice">
                                                <group>
                                                    <group>
                                                        <field name="partner_id"/>
                                                        <field name="user_id"/>
                                                        <field name="date_invoice"/>
                                                    </group>
                                                    <group>
                                                        <field name="amount_total_signed"/>
                                                        <field name="residual_signed"/>
                                                        <field name="agreement_adjusted_amount"/>
                                                    </group>
                                                </group>
                                            </from>
                                        </field>
                                    </group>
                                </page>
                                <page string="Payments" class="oe_page_title"
                                      attrs="{'invisible': [('state', '!=', 'done')]}">
                                    <field name="payment_line_ids" string="Payments" readonly="1">
                                        <tree string="Payment lines">
                                            <field name="sequence" widget="handle"/>
                                            <field name="instruction_date"/>
                                            <field name="partner_id"/>
                                            <field name="default_debit_account_id" invisible="1"/>
                                            <field name="default_credit_account_id" invisible="1"/>
                                            <field name="amount"/>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="is_sync" invisible="1"/>
                                            <field name="state" string="Status"/>
                                            <button name="sync" string="Sync" type="action"
                                                    icon="fa fa-check text-success"
                                                    attrs="{'invisible': [('is_sync', '=', False)]}"/>
                                            <button name="not_sync" string="Not Sync" type="action"
                                                    icon="fa-times-circle text-danger"
                                                    attrs="{'invisible': [('is_sync', '=', True)]}"/>
                                        </tree>
                                        <form string="Payment">
                                            <group>
                                                <group>
                                                    <field name="agreement_id"/>
                                                    <field name="instruction_date"/>
                                                    <field name="partner_id"/>
                                                </group>
                                                <group>
                                                    <field name="amount"/>
                                                    <field name="currency_id"/>
                                                    <field name="is_sync" invisible="1"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                    <group>
                                        <group></group>
                                        <group class="oe_subtotal_footer oe_right">
                                            <field name="total_payment_amount" class="oe_subtotal_footer_separator"
                                                   widget="monetary"/>
                                        </group>
                                    </group>
                                </page>
                                <page string="History" class="oe_page_title"
                                      attrs="{'invisible': [('state', '!=', 'done')]}">
                                    <field name="history_line_ids" string="History" readonly="1">
                                        <tree string="History lines"
                                              decoration-info="state=='pending'" decoration-success="state=='confirm'">
                                            <field name="end_date"/>
                                            <field name="account_id"/>
                                            <field name="adjustment_value"/>
                                            <field name="service_value"/>
                                            <field name="advance_amount_add"/>
                                            <field name="state" invisible="1"/>
                                        </tree>
                                        <form string="History">
                                            <group>
                                                <group>
                                                    <field name="end_date"/>
                                                    <field name="account_id"/>
                                                </group>
                                                <group>
                                                    <field name="adjustment_value"/>
                                                    <field name="service_value"/>
                                                    <field name="advance_amount_add"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </xpath>
            </field>
        </record>

        <record id="agreement_search_inherited" model="ir.ui.view">
            <field name="name">agreement.search.view</field>
            <field name="model">agreement</field>
            <field name="inherit_id" ref="agreement_account.agreement_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="replace">
                    <search string="Search Agreements">
                        <field name="name" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"
                               string="Name or Number"/>
                        <field name="partner_id"/>
                        <field name="product_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="pro_advance_amount"/>
                        <field name="adjustment_value"/>
                        <field name="service_value"/>
                        <field name="advance_amount"/>
                        <field name="adjusted_amount"/>
                        <separator/>
                        <filter name="inactive" string="Archived" domain="[('active', '=', False)]"/>
                        <group name="groupby">
                            <filter name="partner_groupby" string="Customer"
                                    context="{'group_by': 'partner_id'}"/>
                        </group>
                    </search>
                </xpath>
            </field>
        </record>


        <!-- Sequence Records -->
        <record id="seq_agreement" model="ir.sequence">
            <field name="name">agreement</field>
            <field name="code">name</field>
            <field name="prefix">VA-</field>
            <field name="padding">5</field>
        </record>

        <menuitem id="agreement_account.agreement_menu" action="agreement_account.agreement_action"
                  name="Vendor Agreements"
                  groups="vendor_agreement.group_vendor_agreement_manager,vendor_agreement.group_vendor_agreement_user"
                  parent="account.menu_finance_payables" sequence="2"/>




        <!-- inherit 'invoice supplier form' from agreement_account to add domain -->
        <record id="invoice_supplier_form" model="ir.ui.view">
            <field name="name">agreement.supplier.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="agreement_account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='agreement_id']" position="replace">
                    <field name="agreement_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'
                           domain="[('partner_id', 'child_of', commercial_partner_id), ('agreement_type', '=', 'purchase'),('state','=','done'),('is_remaining','=',True)]"
                           context="{'default_partner_id': commercial_partner_id, 'default_agreement_type': 'purchase'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
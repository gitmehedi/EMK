<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_agreement_invoice_merge" model="ir.ui.view">
        <field name="name">Merger Partner Invoice Inherit</field>
        <field name="model">invoice.merge</field>
        <field name="inherit_id" ref="account_invoice_merge.view_invoice_merge"/>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group/p[1]" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//form/group/separator" position="after">
                <p>
                    Please note that:
                    <br/><br/>
                    Invoices will only be merged if:
                    <br/>
                    * Invoices are in draft
                    <br/>
                    * Invoices belong to the same partner
                    <!--<br/>-->
                    <!--* Invoices belong to the same agreement-->
                    <br/><br/>
                    Lines will only be merged if:
                    <br/>
                    * Invoice lines are exactly the same except Description &amp; Quantity.
                    <br/>
                </p>
            </xpath>
        </field>
    </record>

</odoo>

<?xml version="1.0"?>
<odoo>
    <record id="view_agreement_payment_instruction_wizard" model="ir.ui.view">
        <field name="name">agreement.payment.instruction.wizard.form</field>
        <field name="model">agreement.payment.instruction.wizard</field>
        <field name="arch" type="xml">
            <form string="Payment Instruction">
                    <group>
                        <group>
                            <field name="agreement_id"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="instructed_amount" invisible="1"/>
                            <field name="instruction_date" invisible="1"/>
                        </group>
                    </group>
                <footer>
                    <button string="Confirm" name="action_confirm" type="object"
                            confirm="Are you sure to generate payment instruction?" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
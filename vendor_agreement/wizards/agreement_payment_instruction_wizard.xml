<?xml version="1.0"?>
<odoo>
    <record id="view_agreement_payment_instruction_wizard" model="ir.ui.view">
        <field name="name">agreement.payment.instruction.wizard.form</field>
        <field name="model">agreement.payment.instruction.wizard</field>
        <field name="arch" type="xml">
            <form string="Payment Instruction">
                <group>
                    <group>
                        <field name="agreement_id"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="advance_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_payment_approved" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <group>
                        <field name="instruction_date" invisible="1"/>
                        <field name="credit_account_id" domain="[('internal_type','=','other')]"
                               options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                        <field name="credit_operating_unit_id" required="1"
                               options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                        <field name="credit_sub_operating_unit_id"
                               options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                        <field name="debit_operating_unit_id" invisible="1"
                               options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                        <field name="debit_sub_operating_unit_id" invisible="1"
                               options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Confirm" name="action_confirm" type="object"
                            confirm="Are you sure to generate payment instruction?" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
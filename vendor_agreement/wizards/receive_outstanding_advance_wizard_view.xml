<?xml version="1.0"?>
<odoo>
    <record id="view_receive_outstanding_advance_wizard" model="ir.ui.view">
        <field name="name">receive.outstanding.advance.wizard.form</field>
        <field name="model">receive.outstanding.advance.wizard</field>
        <field name="arch" type="xml">
            <form string="Receive Outstanding Advance">
                <group>
                    <group>
                        <field name="agreement_id"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <group>
                        <field name="debit_account_id"
                               options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                        <field name="branch_id"
                               options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                        <field name="sou_id"
                               options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                    </group>
                </group>
                <footer>
                    <button string="Confirm" name="action_confirm" type="object"
                            confirm="Are you sure to receive outstanding advance?" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
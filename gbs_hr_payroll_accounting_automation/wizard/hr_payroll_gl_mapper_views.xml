<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="hr_payroll_provision_wizard_view" model="ir.ui.view">
            <field name="name">Provision Accounts Confirmation View</field>
            <field name="model">hr.payslip.run.gl.automapper</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="journal_id" options="{'no_quick_create': True, 'no_create_edit' : True}"
                                       domain="[('company_id','=',company_id),('type','=','general')]"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="payslip_run_id" invisible="1"/>
                                <field name="operating_unit_id" invisible="1"/>
                                <field name="current_user" invisible="1"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="company_id" invisible="1"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>

                            </group>
                            <group string="Payable Accounts">

                                <field name="payable_account"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="tds_payable_account" readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="telephone_bill_account" readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="employee_pf_contribution_account"
                                       readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="company_pf_contribution_account"
                                       readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>


                            </group>
                            <group string="Debit Account">

                                <field name="default_debit_account" readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Debit Accounts">
<!--                                <field name="debit_account_ids" readonly="True">-->
<!--                                    <tree>-->
<!--                                        <field name="department_id"-->
<!--                                               options="{'no_quick_create': True, 'no_create_edit' : True}"/>-->
<!--                                        <field name="account_id"-->
<!--                                               options="{'no_quick_create': True, 'no_create_edit' : True}"/>-->
<!--                                        <field name="operating_unit_id"/>-->
<!--                                    </tree>-->

<!--                                </field>-->
                            </page>
                        </notebook>
                    </sheet>
                    <footer>

                        <!--					<button name ="process_print" string="Print" type="object" class="oe_highlight"  />-->

                        <button name="create_provision" class="btn btn-primary" string="Create Provision" type="object"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_payroll_provision_wizard" model="ir.actions.act_window">
            <field name="name">Provision Accounts Confirmation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payslip.run.gl.automapper</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>

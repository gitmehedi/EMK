<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_payslip_run_form_inherit" model="ir.ui.view">
            <field name="name">inherited.hr_payslip_run.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">

                <xpath expr="//label[@for='name']" position="after">
                    <div class="oe_button_box" name="button_box">

                        <button class="oe_stat_button" type="object" name="get_journal_entry"
                                attrs="{'invisible':['|',('state','=','draft'),('account_move_id','=',False)]}" string="Journal Entry" icon="fa-book">

                        </button>
                    </div>
                </xpath>


                <xpath expr="//header/button[@name='draft_payslip_run']" position="after">

                    <button name="create_provision" string="Create Provision"
                            attrs="{'invisible':['|',('state','=','draft'),('account_move_id','!=',False)]}"
                            groups="gbs_hr_payroll_accounting_automation.group_payroll_accounting"
                            type="object" style="background-color: #5892D7;color:white;"/>


                </xpath>

                <xpath expr="//field[@name='send_email']" position="before">

                    <field name="operating_unit_id" attrs="{'readonly': [('state','=','close')]}" options="{'no_quick_create': True, 'no_create_edit' : True}" required="1"/>

                </xpath>

                 <xpath expr="//field[@name='available_advice']" position="before">
                    <field name="account_move_id" invisible="True"/>
                </xpath>


            </field>
        </record>
    </data>
</odoo>
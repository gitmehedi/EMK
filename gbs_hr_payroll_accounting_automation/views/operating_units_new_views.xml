<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="accounting_ou_form_view" model="ir.ui.view">
            <field name="name">accounting.operating.unit.form</field>
            <field name="model">operating.unit</field>
            <field name="priority">1002</field>
            <field name="arch" type="xml">
                <form string="Operating Unit" version="7.0" create="false">
                    <group>
                        <group>
                            <field name="name" readonly="True"/>
                            <field name="code" readonly="True"/>
                            <field name="active" readonly="True"/>
                            <field name="partner_id" readonly="True"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="company_id" readonly="True" groups="base.group_multi_company"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="cost_center_required"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                        </group>
                        <group string="Payable Accounts">

                            <field name="payable_account"
                                   domain="[('user_type_id', '=', 'Payable') ]"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="tds_payable_account"
                                   domain="[('user_type_id', '=', 'Payable') ]"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="telephone_bill_account"
                                   domain="[('user_type_id', '=', 'Expenses') ]"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="employee_pf_contribution_account"
                                   domain="[('user_type_id', '=', 'Payable')]"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="company_pf_contribution_account"
                                   domain="[('user_type_id', '=', 'Payable')]"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>

                        </group>
                        <group string="Debit Account">

                            <field name="default_debit_account" domain="[('user_type_id', '=', 'Expenses')]"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>

                        </group>


                    </group>
                    <notebook>
                        <page string="Debit Accounts">
                            <field name="debit_account_ids" context="{'default_operating_unit_id': active_id}">
                                <tree>
                                    <field name="department_id"
                                           options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                    <field name="account_id"
                                           options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                    <field name="operating_unit_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="operating_unit_id" readonly="True"
                                                   context="{'default_operating_unit_id': active_id}"/>
                                            <field name="department_id"
                                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                        </group>
                                        <group>
                                            <field name="account_id" domain="[('user_type_id', '=', 'Expenses')]"
                                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                        </group>
                                    </group>
                                </form>
                            </field>

                        </page>

                    </notebook>
                </form>
            </field>
        </record>

        <record id="accounting_ou_tree_view" model="ir.ui.view">
            <field name="name">accounting.operating.unit.tree</field>
            <field name="model">operating.unit</field>
            <field name="priority">1001</field>
            <field name="arch" type="xml">
                <tree string="Operating Unit" create="false">
                    <field name="code" readonly="True"/>
                    <field name="name" readonly="True"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="payable_account"/>
                    <field name="tds_payable_account"/>
                    <field name="telephone_bill_account"/>
                    <field name="employee_pf_contribution_account"/>
                    <field name="company_pf_contribution_account"/>

                </tree>
            </field>
        </record>


        <record id="ou_parent_action_window" model="ir.actions.act_window">
            <field name="name">Operating Units</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">operating.unit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                    (0, 0, {'sequence': 1001, 'view_mode': 'tree', 'view_id': ref('accounting_ou_tree_view')}),
                    (0, 0, {'sequence': 1002, 'view_mode': 'form', 'view_id': ref('accounting_ou_form_view')}),
                ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Operating Units
                </p>
            </field>
        </record>


        <menuitem id="ou_accounting_menu" name="Operating Units"
                  parent="account.menu_finance_configuration" action="ou_parent_action_window"
                  sequence="1"/>


    </data>
</odoo>
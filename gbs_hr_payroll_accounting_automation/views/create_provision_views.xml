<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="create_provision_form_view" model="ir.ui.view">
            <field name="name">hr.payslip.run.create.provision.form</field>
            <field name="model">hr.payslip.run.create.provision</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <button name="create_provision" class="btn btn-primary" string="Create Provision" type="object"/>
<!--                        <button name="load_values" class="btn btn-primary" string="Load Values" type="object"/>-->

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="journal_id" options="{'no_quick_create': True, 'no_create_edit' : True}"
                                       domain="[('company_id','=',company_id),('type','=','general')]"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="payslip_run_id" invisible="1"/>
                                <field name="operating_unit_id" readonly="True"/>
                                <field name="current_user" invisible="1"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="company_id" readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>

                            </group>
                            <group string="Payable Accounts">

                                <field name="payable_account"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="tds_payable_account" readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="telephone_bill_account" readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="employee_pf_contribution_account"
                                       readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                <field name="company_pf_contribution_account"
                                       readonly="True"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>


                            </group>
                            <group string="Debit Account">

                                <field name="default_debit_account" readonly="True" attrs="{'required': [('debit_account_ids','=', False)]}"
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Debit Accounts">
                                <field name="debit_account_ids" attrs="{'required': [('default_debit_account','=', False)]}" readonly="True">
                                    <tree>
                                        <field name="department_id"
                                               options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                        <field name="account_id"
                                               options="{'no_quick_create': True, 'no_create_edit' : True}"/>

                                    </tree>

                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="create_provision_tree_view" model="ir.ui.view">
            <field name="name">hr.payslip.run.create.provision.tree</field>
            <field name="model">hr.payslip.run.create.provision</field>
            <field name="arch" type="xml">
                <tree string="Provision Information">
                    <field name="payslip_run_id"/>
                </tree>
            </field>
        </record>


        <record id="create_provision_act_window" model="ir.actions.act_window">
            <field name="name">Provision Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payslip.run.create.provision</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Provisions
                </p>
            </field>
        </record>

        <!--        <menuitem name="ModelTitle" id="create_provision_menu" parent="your_root_menu" action="create_provision_act_window"/>-->

    </data>
</odoo>
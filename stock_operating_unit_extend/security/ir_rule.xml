<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="stock_quant_rule_group_user" model="ir.rule">
            <field name="name">User can only see his/her allowed operating units stock</field>
            <field name="model_id" ref="stock.model_stock_quant"/>
            <field name="domain_force">['|',('location_id.operating_unit_id','=',False),('location_id.operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
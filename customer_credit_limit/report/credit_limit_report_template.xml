<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<odoo>
    <data>
        <template id="customer_credit_limit">
            <t t-call="report.html_container">
                <t t-call="custom_report.gbs_internal_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="page-break-inside:auto">
                            <div class="row">
                                <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                                </style>
                                <div class="clearfix">
                                    <h3 class="report-title">Customer Credit Limit Summary</h3>
                                    <div class="row">
                                        <div class="col-xs-12 text-left">
                                            <h6><b>Description: </b><span t-field="o.name"/></h6>
                                            <h6><b>Approval Date: </b><span t-field="o.approve_date"/></h6>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-report-xs table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>SL</th>
                                            <th>Customer</th>
                                            <th>Credit Limit</th>
                                            <th>Days</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.limit_ids" t-as="l">
                                            <tr style="page-break-inside: avoid">
                                                <td>
                                                    <span t-esc="l_index+1"/>
                                                </td>
                                                <td>
                                                    <span t-esc="l.partner_id.name"/>
                                                </td>
                                                <td>
                                                    <span t-esc="'%.2f'%(l.value)"/>
                                                </td>
                                                <td>
                                                    <span t-esc="l.day_num"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <div class="row mb32" style="margin-top: 10mm;">
                                    <div class="col-xs-6 text-left">
                                        <b>Submitted by:</b>
                                        <span t-field="o.requested_by"/>
                                        <br/>
                                        <b>Sales Approval by:</b>
                                        <span t-field="o.approver3_id"/>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <b>Accounts Approval by:</b>
                                        <span t-field="o.approver1_id"/>
                                        <br/>
                                        <b>Final Approval by:</b>
                                        <span t-field="o.approver2_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
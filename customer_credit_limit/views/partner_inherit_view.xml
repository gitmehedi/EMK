<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="priority">3</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='sales_purchases']" position="after">
                        <page groups="sales_team.group_sale_salesman,account.group_account_user" string="Credit Limit" attrs="{'invisible': [('customer', '=', False)]}">
                            <group>
                                <field name="credit_limit"/>
                                <field name="remaining_credit_limit" invisible="0"/>
                            </group>

                            <field name="limit_ids">
                                <tree string="List" editable="bottom">
                                    <field name="assign_date"/>
                                    <field name="value"/>
                                    <!--<field name="remaining_credit_limit"/>-->
                                    <field name="day_num"/>
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
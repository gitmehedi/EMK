<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="priority">3</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <!--<xpath expr="//field[@name='debit']" position="replace">-->
                        <!--<field name="debit" groups="base.group_no_one,account.group_account_user,gbs_application_group.group_head_account"/>-->
                    <!--</xpath>-->

                    <!--<xpath expr="//field[@name='credit']" position="replace">-->
                        <!--<field name="credit" groups="base.group_no_one,account.group_account_user,gbs_application_group.group_head_account"/>-->
                    <!--</xpath>-->




                    <xpath expr="//page[@name='sales_purchases']" position="after">
                        <page groups="sales_team.group_sale_salesman,account.group_account_user,gbs_application_group.group_sales_customer_manager"
                              string="Credit Limit" attrs="{'invisible': [('customer', '=', False)]}">
                            <group>
                                <field name="credit_limit"/>
                                <field name="remaining_credit_limit" invisible="1"/>
                            </group>

                            <field name="limit_ids">
                                <tree string="List" editable="bottom">
                                    <field name="assign_date"/>
                                    <field name="value"/>
                                    <!--<field name="remaining_credit_limit"/>-->
                                    <field name="day_num"/>
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
        <record id="view_partner_tree1" model="ir.ui.view">
            <field name="name">partner.tree.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='email']" position="after">
                        <field name="credit_limit"
                               groups="sales_team.group_sale_salesman,gbs_application_group.group_sales_customer_manager"/>
                        <field name="credit"
                               groups="sales_team.group_sale_salesman,gbs_application_group.group_sales_customer_manager"/>
                    </xpath>
                </data>
            </field>
        </record>
        <record model="ir.ui.view" id="view_res_partner_kanban_contact1">
            <field name="name">res.partner.kanban.contact</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="credit_limit"/>
                    <field name="credit"/>
                </field>
                <xpath expr="//t[@t-name='kanban-box']//div[@class='oe_kanban_details']/ul/li[3]" position="after">
                    <field name="credit_limit"/>
                </xpath>
            </field>
        </record>

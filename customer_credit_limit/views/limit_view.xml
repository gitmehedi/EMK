<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- res.partner.credit.limit Tree View  -->

        <record model="ir.ui.view" id="res_partner_credit_limit_view">
            <field name="name">Partner limit</field>
            <field name="model">res.partner.credit.limit</field>
            <field name="arch" type="xml">
                <tree string="Partner limit">
                    <field name="partner_id"/>
                    <field name="value"/>
                    <!--<field name="remaining_credit_limit"/>-->
                </tree>
            </field>
        </record>

        <!-- customer.creditlimit.assign View  -->

        <record id="customer_creditlimit_assign_tree" model="ir.ui.view">
            <field name="name">customer.creditlimit.assign.tree</field>
            <field name="model">customer.creditlimit.assign</field>
            <field name="arch" type="xml">
                <tree string="Credit Limit"
                colors="blue:state == 'confirm';red:state == 'validate1'">
                    <field name="name"/>
                     <field name="description"/>
                    <field name="approve_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="customer_creditlimit_assign_form" model="ir.ui.view">
            <field name="name">customer.creditlimit.assign.form</field>
            <field name="model">customer.creditlimit.assign</field>
            <field name="arch" type="xml">
                <form string="Credit Limit" copy="0" delete="false">
                    <header>

                        <button string="Confirm" name="action_confirm" type="object" states="draft" class="oe_highlight"
                                groups="sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_account,gbs_application_group.group_head_sale,gbs_application_group.group_cxo"/>

                        <!--<button string="Generate Limit" name="%(action_creditlimit_by_partner)d" type="action"-->
                        <!--states="draft" class="oe_highlight"-->
                        <!--groups="sales_team.group_sale_salesman_all_leads,gbs_application_group.group_head_account,gbs_application_group.group_head_sale,gbs_application_group.group_cxo"/>-->


                        <button string="Approve" name="action_validate_sales_head" type="object" states="confirm"
                                class="oe_highlight"
                                groups="gbs_application_group.group_head_sale,gbs_application_group.group_cxo"/>

                        <button string="Validate" name="action_validate" type="object" states="validate"
                                class="oe_highlight"
                                groups="gbs_application_group.group_cxo,gbs_application_group.group_head_account"/>

                        <button string="Approve" name="approve_creditlimit_run" type="object" states="validate1"
                                class="oe_highlight"
                                groups="gbs_application_group.group_cxo"/>

                        <button string="Refuse" name="action_refuse" type="object" states="confirm,validate,validate1"
                                groups="gbs_application_group.group_head_sale,gbs_application_group.group_head_account,gbs_application_group.group_cxo"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirm,validate,validate1,approve"/>

                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                            <group>
                                <field name="description"/>
                            </group>
                        </h1>
                        <group>
                            <group>
                                <field name="approve_date"/>
                            </group>
                            <notebook colspan="4">
                                <page string="Customers">
                                    <field name="limit_ids">
                                        <tree string="List" editable="bottom">
                                            <field name="partner_id"
                                                   options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                            <field name="value"/>
                                            <field name="day_num"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Others">
                                    <group>
                                        <field name="requested_by"/>
                                        <field name="approver3_id"/>
                                        <field name="approver1_id"/>
                                        <field name="approver2_id"/>

                                    </group>
                                </page>
                            </notebook>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Sequence Records -->
        <record id="seq_creadit_limit" model="ir.sequence">
            <field name="name">Sequence</field>
            <field name="code">customer.creditlimit.assign</field>
            <field name="prefix">CL</field>
            <field name="padding">3</field>
        </record>


        <record id="search_view_credit_limit" model="ir.ui.view">
            <field name="name">customer.creditlimit.assign.search</field>
            <field name="model">customer.creditlimit.assign</field>
            <field name="arch" type="xml">
                <search string="Credit Limit">
                    <filter name="confirm" string="To Approve" domain="[('state','=','confirm')]"/>
                </search>
            </field>
        </record>


        <record id="action_creditlimit_tree" model="ir.actions.act_window">
            <field name="name">Customer Credit Limit</field>
            <field name="res_model">customer.creditlimit.assign</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_confirm':1}</field>
            <field name="view_id" ref="customer_creditlimit_assign_tree"/>
        </record>


    </data>
</odoo>

<?xml version="1.0" encoding='utf-8'?>
<odoo>
    <record model="ir.rule" id="rule_mem_card_replacement">
        <field name="name">Member Card Replacement</field>
        <field name="model_id" ref="model_member_card_replacement"></field>
        <field name="groups" eval="[(4,ref('membership_user.group_user_member'))]"></field>
        <field name="domain_force">[('membership_id','=',user.partner_id.id)]</field>
    </record>
    <record model="ir.rule" id="rule_off_card_replacement">
        <field name="name">Officer Card Replacement</field>
        <field name="model_id" ref="model_member_card_replacement"></field>
        <field name="groups" eval="[(4,ref('membership_user.group_mem_user_officer'))]"></field>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Variant Custom Form-->
        <record id="product_product_custom_form_view" model="ir.ui.view">
            <field name="name">product.product.custom.form</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <form string="Product Variant" create="false" edit="false">
                    <header>
                    </header>
                    <sheet>
                        <field name="product_variant_count" invisible="1"
                               modifiers="{'invisible': true, 'readonly': true}"/>
                        <field name="id" invisible="True" modifiers="{'invisible': true, 'readonly': true}"/>
                        <div class="oe_button_box" name="button_box">

                        </div>
                        <field name="image_medium" widget="image" class="oe_avatar" modifiers="{}"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Product Name"/>
                            <h1>
                                <field name="name" placeholder="Product Name" modifiers="{'required': true}"/>
                                <field name="product_tmpl_id" class="oe_inline" readonly="1" invisible="1"
                                       attrs="{'required': [('id', '!=', False)]}" on_change="1" can_create="true"
                                       can_write="true"
                                       modifiers="{'invisible': true, 'readonly': true, 'required': [['id', '!=', false]]}"/>
                            </h1>
                            <div name="options">
                                <div>
                                    <field name="sale_ok" modifiers="{}"/>
                                    <label for="sale_ok"/>
                                </div>
                                <div>
                                    <field name="purchase_ok" modifiers="{}"/>
                                    <label for="purchase_ok"/>
                                </div>
                            </div>
                            <field name="attribute_value_ids" widget="many2many_tags" can_create="true" can_write="true"
                                   modifiers="{}"/>
                        </div>
                        <notebook>
                            <page string="General Information">
                                <group>
                                    <group>
                                        <field name="type" on_change="1" modifiers="{'required': true}"/>
                                        <field name="default_code" modifiers="{}"/>
                                        <field name="barcode" modifiers="{}"/>
                                        <field name="categ_id" string="Internal Category" can_create="true"
                                               can_write="true" modifiers="{'required': true}"/>

                                    </group>
                                    <group>
                                        <field name="lst_price"/>
                                    </group>

                                </group>
                            </page>
                            <page string="Inventory">
                                <group>
                                    <group>
                                        <field name="route_ids" widget="many2many_checkboxes"
                                               attrs="{'invisible':[('type', 'in', ['service', 'digital'])]}"/>
                                        <field name="route_from_categ_ids" widget="many2many_tags" readonly="1"
                                               attrs="{'invisible':[('route_from_categ_ids', '=', [])]}"/>
                                    </group>
                                    <group name="group_lots_and_weight">
                                        <label for="weight"
                                               attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}"/>
                                        <div class="o_row" name="weight"
                                             attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                                            <field name="weight"/>
                                        </div>
                                        <field name="tracking" widget="radio"
                                               attrs="{'invisible':[('type', 'in', ['service', 'digital'])]}"
                                               groups="stock.group_production_lot"/>
                                        <label for="volume"
                                               attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}"/>
                                        <div class="o_row" name="volume"
                                             attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                                            <field name="volume" string="Volume"/>
                                        </div>
                                    </group>
                                    <group name="stock_property" groups="base.group_no_one">
                                        <field name="property_stock_procurement"
                                               domain="[('usage','=','procurement')]"/>
                                        <field name="property_stock_production" domain="[('usage','=','production')]"/>
                                        <field name="property_stock_inventory" domain="[('usage','=','inventory')]"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Invoicing" groups="account.group_account_invoice">
                                <group>
                                    <group>
                                        <field name="property_account_income_id"
                                               domain="[('internal_type','=','other'),('deprecated','=',False)]"
                                               groups="account.group_account_user"/>
                                        <field name="taxes_id" widget="many2many_tags"/>
                                    </group>
                                    <group>
                                        <field name="property_account_expense_id"
                                               domain="[('internal_type','=','other'),('deprecated','=',False)]"
                                               groups="account.group_account_user"/>
                                        <field name="supplier_taxes_id" widget="many2many_tags"/>
                                    </group>
                                </group>
                                <group name="accounting"/>
                            </page>


                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                        <field name="message_ids" widget="mail_thread" modifiers="{}"/>
                    </div>
                </form>

            </field>
        </record>


        <!--Variant Custom Tree-->
        <record id="product_product_tree_custom_view" model="ir.ui.view">
            <field name="name">product.product.custom.tree</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree string="Product Variants" create="false" edit="false">
                    <field name="default_code"/>
                    <field name="display_name"/>
                    <field name="lst_price"/>
                    <field name="price"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>


        <!--Variant Custom Kanban-->
        <record id="product_product_kanban_custom_view" model="ir.ui.view">
            <field name="name">product.product.custom.kanban</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <kanban create="false" edit="false">
                    <field name="image_small"/>
                    <field name="lst_price"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_tags_section">
                                    <field name="attribute_value_ids" groups="product.group_product_variant"/>
                                </div>
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('product.product', 'image_small', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <li>Price:
                                            <field name="lst_price"></field>
                                        </li>
                                    </ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="product_product_custom_action" model="ir.actions.act_window">
            <field name="name">Product Variants</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'sequence': 1001, 'view_mode': 'kanban', 'view_id': ref('product_product_kanban_custom_view')}),
                    (0, 0, {'sequence': 1002, 'view_mode': 'tree', 'view_id': ref('product_product_tree_custom_view')}),
                    (0, 0, {'sequence': 1003, 'view_mode': 'form', 'view_id': ref('product_product_custom_form_view')}),
                ]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Product Variants
                </p>
            </field>
        </record>

        <menuitem name="Product Variants" sequence="2" id="inventory_custom_variant_menu"
                  parent="stock.menu_stock_inventory_control"
                  action="product_product_custom_action"/>


    </data>
</odoo>
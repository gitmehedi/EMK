<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tpm_calculation_form" model="ir.ui.view">
            <field name="name">view.tpm.calculation.form</field>
            <field name="model">tpm.calculation</field>
            <field name="arch" type="xml">
                <form string="TPM Management" duplicate="0">
                    <header>
                        <button name="calculate_tpm" string="Calculate TPM" type="object" states="draft"
                                class="oe_highlight" groups="account.group_account_manager"/>
                        <button name="act_confirm" string="Confirm" type="object" states="calculate"
                                class="oe_highlight" groups="account.group_account_manager"/>
                        <button name="act_draft" string="Set to Re-Calculate" type="object" states="calculate"
                                groups="mtbl_access.group_mtbl_sys_admin"/>
                        <button name="act_approve" string="Approve" type="object" states="confirm"
                                class="oe_highlight" groups="account.group_account_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="calculate,confirm,approve"/>
                    </header>
                    <sheet>
                        <div class="oe_title pull-left">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="branch_id"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="date"/>
                                <field name="to_date"/>
                            </group>
                            <group>
                                <field name="total_income"/>
                                <field name="total_expense"/>
                                <field name="journal_id" attrs="{'invisible':[('journal_id','=',False)]}"
                                       options="{'no_create':True,'no_create_edit':True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Branch-wise Details">
                                <field name="line_ids">
                                    <tree decoration-success="pl_status=='income'"
                                          decoration-danger="pl_status=='expense'">
                                        <field name="branch_id"/>
                                        <field name="pl_status"/>
                                        <field name="income" sum="income"/>
                                        <field name="expense" sum="expense"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="branch_id"/>
                                                    <field name="pl_status"/>

                                                </group>
                                                <group>
                                                    <field name="from_date"/>
                                                    <field name="to_date"/>
                                                </group>
                                            </group>

                                            <field name="branch_line_ids">
                                                <tree decoration-success="pl_status=='income'"
                                                      decoration-danger="pl_status=='expense'">
                                                    <field name="date"/>
                                                    <field name="balance"/>
                                                    <field name="pl_status"/>
                                                    <field name="income_rate"/>
                                                    <field name="income" sum="income"/>
                                                    <field name="expense_rate"/>
                                                    <field name="expense" sum="expense"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="date"/>
                                                            <field name="pl_status"/>
                                                            <field name="balance"/>
                                                        </group>
                                                        <group>
                                                            <field name="income_rate"/>
                                                            <field name="expense_rate"/>
                                                            <field name="income"/>
                                                            <field name="expense"/>
                                                        </group>
                                                    </group>
                                                </form>
                                            </field>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tpm_calculation_tree" model="ir.ui.view">
            <field name="name">view.tpm.calculation.tree</field>
            <field name="model">tpm.calculation</field>
            <field name="arch" type="xml">
                <tree string="TPM Management" decoration-info="state=='draft'"
                      decoration-success="state in ('calculate','confirm')"
                      decoration-muted="state=='approve'"
                      decoration-danger="state=='reject'"
                      decoration-bf="state in ('calculate','confirm')">
                    <field name="name"/>
                    <field name="branch_id"/>
                    <field name="date"/>
                    <field name="to_date"/>
                    <field name="total_income" sum="total_income"/>
                    <field name="total_expense" sum="total_expense"/>
                    <field name="journal_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_tpm_calculation_search" model="ir.ui.view">
            <field name="name">tpm.calculation.search</field>
            <field name="model">tpm.calculation</field>
            <field name="arch" type="xml">
                <search string="Branch">
                    <field name="name"/>
                    <field name="branch_id"/>
                </search>
            </field>
        </record>

        <record id="seq_tpm_calculation" model="ir.sequence">
            <field name="name">TPM Calculation</field>
            <field name="code">tpm.calculation</field>
            <field name="prefix">TPM/</field>
            <field name="padding">4</field>
            <field name="number_increment" eval="1"/>
            <field name="company_id" eval="False"/>
        </record>

        <record id="action_tpm_calculation" model="ir.actions.act_window">
            <field name="name">TPM Management</field>
            <field name="res_model">tpm.calculation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to start a new TPM Calculation.
                </p>
            </field>
        </record>

        <menuitem id="menu_tpm_calculation" parent="main_menu_tpm" action="action_tpm_calculation"
                  sequence="1" />
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tpm_calculation_form" model="ir.ui.view">
            <field name="name">view.tpm.calculation.form</field>
            <field name="model">tpm.calculation</field>
            <field name="arch" type="xml">
                <form string="TPM Management" duplicate="0">
                    <header>
                        <button name="act_approve" string="Approve" type="object" states="draft"
                                class="oe_highlight" groups="mtbl_access.group_mtbl_sys_admin"/>
                        <button name="calculate_tpm" string="Calculate TPM" type="object" states="approve"
                                class="oe_highlight" groups="mtbl_access.group_mtbl_sys_admin"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="branch_id"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Branch Journal">
                                <field name="line_ids">
                                    <tree>
                                        <field name="branch_id"/>
                                        <field name="date"/>
                                        <field name="journal_id"/>
                                        <field name="journal_amount"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name"/>
                                                </group>
                                                <group>
                                                    <field name="journal_id"/>
                                                    <field name="journal_amount"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tpm_calculation_tree" model="ir.ui.view">
            <field name="name">view.tpm.calculation.tree</field>
            <field name="model">tpm.calculation</field>
            <field name="arch" type="xml">
                <tree string="TPM Management" decoration-info="state=='draft'"
                      decoration-success="state=='approve'"
                      decoration-danger="state=='reject'"
                      decoration-bf="state in ('approve',)">
                    <field name="branch_id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_tpm_calculation_search" model="ir.ui.view">
            <field name="name">tpm.calculation.search</field>
            <field name="model">tpm.calculation</field>
            <field name="arch" type="xml">
                <search string="Branch">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="branch_id"/>
                </search>
            </field>
        </record>

        <record id="action_tpm_calculation" model="ir.actions.act_window">
            <field name="name">TPM Calculation</field>
            <field name="res_model">tpm.calculation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to start a new TPM Calculation.
                </p>
            </field>
        </record>

        <menuitem id="menu_tpm_calculation" name="TPM" parent="main_menu_tpm" action="action_tpm_calculation"
                  sequence="1" groups="account_tds.group_tds_manager,account_tds.group_tds_user"/>
    </data>
</odoo>
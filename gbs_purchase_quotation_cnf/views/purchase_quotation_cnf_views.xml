<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_cnf_quotation_form" model="ir.ui.view">
            <field name="name">view.cnf.quotation.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!--<xpath expr="/form/header" position="attributes">-->
                <!--<attribute name="invisible">not context.get('is_order', False)</attribute>-->
                <!--</xpath>-->
                <!--<xpath expr="/form/header" position="after">-->
                <xpath expr="//header" position="replace">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object"
                                states="draft" class="oe_highlight"/>
                        <button name="action_approve" string="Approve" type="object"
                                states="confirm" class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirm,approved"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">C&amp;F Agent</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="cnf_quotation" />
                    <field name="lc_id" attrs="{'invisible': [('cnf_quotation', '!=', True)]}"/>
                    <field name="shipment_id" attrs="{'invisible': [('cnf_quotation', '!=', True)]}"/>
                </xpath>


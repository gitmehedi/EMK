<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_quotation_cnf_tree_view" model="ir.ui.view">
            <field name="name">purchase.quotation.cnf.tree</field>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <tree string="CNF Quotation">
                    <field name="shipment_id"/>
                </tree>
            </field>
        </record>

        <record id="purchase_quotation_cnf_form_view" model="ir.ui.view">
            <field name="name">purchase.quotation.cnf.form</field>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <form string="CNF Quotation">
                    <sheet>
                        <group>
                            <field name="shipment_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_purchase_quotation_cnf">
            <field name="name">CNF Quotation</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="purchase_quotation_cnf_tree_view"/>
        </record>

        <!--<menuitem id="menu_cnf_quatation" parent="commercial.menu_commercial_root"-->

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.actions.act_window" id="action_commercial_pq">
            <field name="name">Purchase Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_type">form</field>
            <field name="domain">[('cnf_quotation','=',False),('state','in',('draft','sent','bid','cancel', 'confirmed'))]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a request for quotation.
                </p>
                <p>
                    The quotation contains the history of the discussion/negotiation
                    you had with your supplier. Once confirmed, a request for
                    quotation is converted into a purchase order.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_commercial_po">
            <field name="name">Purchase Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_type">form</field>
            <field name="domain">[('cnf_quotation','=',False),('state','not in',('draft','sent','bid', 'confirmed'))]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a request for Order.
                </p>
            </field>
        </record>


        <menuitem id="menu_commercial_pq" parent="commercial.menu_commercial_root"
                  sequence="2" name="Purchase Quotation"/>

        <menuitem id="submenu_commercial_pq" name="Purchase Quotation" parent="menu_commercial_pq"
                  sequence="1" action="action_commercial_pq"/>

        <menuitem id="menu_commercial_po" parent="commercial.menu_commercial_root"
                  sequence="3" name="Purchase Order"/>

        <menuitem id="submenu_commercial_po" name="Purchase Order" parent="menu_commercial_po"
                  sequence="1" action="action_commercial_po"/>
    </data>
</odoo>
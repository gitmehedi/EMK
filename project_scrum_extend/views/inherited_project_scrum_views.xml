<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record  id="inherited_user_story_view_" model="ir.ui.view">
			<field name="name">User Stroy View Form</field>
			<field name="model">project.scrum.us</field>
			<field name="inherit_id" ref="project_scrum.view_ps_us_form"/>
			<field name="arch" type="xml">
				<xpath expr="//form/field[@name='project_id']" position="before">
					<header>
						<field name="story_state" widget="statusbar" string="Status" class="oe_highlight"/>
					</header>
				</xpath>
			</field>
		</record>
		
		<!-- season tree/list view -->
		<record id="inherited_user_story_tree_view_" model="ir.ui.view">
			<field name="name">User Stroy View Tree</field>
			<field name="model">project.scrum.us</field>
			<field name="inherit_id" ref="project_scrum.view_ps_us_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//tree/field[@name='project_id']" position="after">
					<field name="story_state" string="Status"/>
				</xpath>
			</field>
		</record>
		
		<!-- Inherited Story search view -->
		<record id="inherited_user_story_search_view_" model="ir.ui.view">
			<field name="name">User Stroy search view</field>
			<field name="model">project.scrum.us</field>
			<field name="inherit_id" ref="project_scrum.view_ps_us_search"/>
			<field eval="10" name="priority"/>
			<field name="arch" type="xml">
				<xpath expr="//search/field[@name='test_ids']" position="after">
					<filter name="draft_state" string="Draft" domain="[('story_state','=','draft')]"/>
					<filter name="progress_state" string="In Progress" domain="[('story_state','=','in progress')]"/>
					<filter name="done_state" string="Done" domain="[('story_state','=','done')]"/>
				</xpath>
			</field>
		</record>
		
		<record id="project_scrum.action_ps_us_all" model="ir.actions.act_window">
			<field name="name">User Stories</field>
			<field name="res_model">project.scrum.us</field>
			<field name="view_type">form</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="view_id" ref="project_scrum.view_ps_us_tree"/>
			<field name="context">
				{"search_default_current": 1,"search_default_draft_state":1,"search_default_progress_state":1}
			</field>
			<field name="search_view_id" ref="project_scrum_extend.inherited_user_story_search_view_"/>
			<field name="help">The user stories of scrum.</field>
		</record>
		
		
	</data>
</openerp>

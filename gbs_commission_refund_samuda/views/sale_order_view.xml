<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="commission_refund_sale_order_form_view" model="ir.ui.view">
            <field name="name">commission.refund.sale.order.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="corporate_commission_per_unit" string="Commission (Unit)"/>
                    <field name="corporate_commission_tolerable" invisible="1"/>
                    <field name="corporate_refund_per_unit" string="Refund (Unit)"/>
                    <field name="corporate_refund_tolerable" invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_commission_rate_invisible" model="ir.ui.view">
            <field name="name">inherited.sale.order.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="gbs_sales_commission_so.sale_inherited_sale_order_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='commission_rate']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
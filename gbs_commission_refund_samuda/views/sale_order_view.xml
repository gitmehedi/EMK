<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="commission_refund_sale_order_form_view" model="ir.ui.view">
            <field name="name">commission.refund.sale.order.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <style>
                        .alert { padding: 5px 30px 5px 5px; position: relative; font-size: 13px; font-weight: normal; line-height:1.2}
                        .alert .glyphicon { position: absolute; top: 5px; right: 5px; font-size: 24px;}
                        .alert p:last-child { margin:0; }
                        .oe_title { width: 100% !important; }

                    </style>

                    <field name="comment" widget="html" class="alert alert-danger" nolabel="1" readonly="1" attrs="{'invisible':[('state', 'in', ['to_submit', 'done', 'cancel'])]}"/>

                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="so_readonly_field" invisible="1"/>
                    <field name="price_unit_copy" invisible="1"/>
                    <field name="price_unit_actual" invisible="1"/>

                    <field name="commission_per_unit_copy" invisible="1"/>
                    <field name="refund_per_unit_copy" invisible="1"/>
                    <field name="commission_applicable_copy" invisible="1"/>
                    <field name="refund_applicable_copy" invisible="1"/>

                    <field name="corporate_commission_per_unit" string="Commission (Unit)" force_save="1" attrs="{'readonly':[('so_readonly_field','=',True)]}"/>
                    <field name="commission_actual" invisible="1"/>
                    <field name="commission_tolerable" invisible="1"/>

                    <field name="corporate_refund_per_unit" string="Refund (Unit)" force_save="1" attrs="{'readonly':[('so_readonly_field','=',True)]}"/>
                    <field name="refund_actual" invisible="1"/>
                    <field name="refund_tolerable" invisible="1"/>

                    <field name="dealer_commission_applicable" force_save="1" attrs="{'readonly':[('so_readonly_field','=',True)]}"/>
                    <field name="dealer_refund_applicable" force_save="1" attrs="{'readonly':[('so_readonly_field','=',True)]}"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('so_readonly_field','=',True)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="attrs">{'readonly':[('so_readonly_field','=',True)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
            <field name="category_id" ref="hr_payroll_ot.otawl"/>
            <field name="code">ARSOT</field>
            <field name="sequence" eval="40"/>
            <field name="condition_select">python</field>
            <field name="condition_python">if payslip.type == '0': result = False
elif payslip.type == '1': result = False
elif payslip.type == '2': result = True</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.ARSOT and inputs.ARSOT.amount</field>
        </record>

    </data>
</odoo>
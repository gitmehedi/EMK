<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.actions.act_window" id="hr_payroll_arrear.hr_arrear_action">
            <field name="name">Arrear</field>
            <field name="res_model">hr.payroll.arrear</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type', '=', 'regular')]</field>
            <field name="context">{'default_type': 'regular'}</field>
            <field name="view_id" ref="hr_payroll_arrear.hr_payroll_tree"/>
        </record>

        <record model="ir.actions.act_window" id="hr_arrear_ot_action">
            <field name="name">Arrear(OT)</field>
            <field name="res_model">hr.payroll.arrear</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type', '=', 'ot')]</field>
            <field name="context">{'default_type': 'ot'}</field>
            <field name="view_id" ref="hr_payroll_arrear_ot_tree" />
        </record>

        <record id="hr_payroll_arrear_ot_tree" model="ir.ui.view">
            <field name="name">hr.payroll.arrear.ot.tree</field>
            <field name="model">hr.payroll.arrear</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Employee Arrear (OT) Information">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <menuitem id="hr_arrear_ot_submenu" name="Arrear(OT)" parent="hr_payroll_arrear.hr_arrear_menu" groups="gbs_hr_security.group_payroll_user"
                  action="hr_arrear_ot_action"/>

        <record id="hr_payroll_arrear_ot_form" model="ir.ui.view">
            <field name="name">hr.payroll.arrear.ot</field>
            <field name="model">hr.payroll.arrear</field>
            <field name="inherit_id" ref="hr_payroll_arrear.hr_payroll_arrear_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='payroll_arrear']" position="after">
                    <group>
                        <field name="type" readonly='1' />
                    </group>
                </xpath>
                <xpath expr="//notebook//field[@name='line_ids']/tree/field[@name='arear_amount']" position="after">
                    <field name="type" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
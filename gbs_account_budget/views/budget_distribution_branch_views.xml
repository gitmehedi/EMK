<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="branch_budget_tree" model="ir.ui.view">
        <field name="name">branch.budget.tree</field>
        <field name="model">branch.budget</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" string="Branch Distribution" decoration-info="state == 'draft'" decoration-success="state == 'approve'"
                  decoration-muted="state =='cancel'"
                  decoration-bf="state in ('approve') ">
                <field name="name"/>
                <field name="account_id"/>
                <field name="creating_user_id"/>
                <field name="planned_amount"/>
                <field name="fiscal_year"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="branch_budget_form">
        <field name="name">branch.budget.form</field>
        <field name="model">branch.budget</field>
        <field name="arch" type="xml">
            <form string="Branch Distribution" create="false">
                <header>
                    <button string="Approve" name="action_budget_approve"
                            groups="account.group_account_manager"
                            states="draft" type="object" class="oe_highlight"/>
                    <button string="Reset to Draft" name="action_budget_draft"
                            groups="account.group_account_manager,account.group_account_user"
                            states="cancel" type="object" />
                    <button string="Cancel Budget" name="action_budget_cancel"
                            type="object" groups="account.group_account_manager"
                            attrs="{'invisible': ['|',('state','!=','draft'),('branch_budget_history_ids','!=', [])]}"/>
                    <button string="Amendment" name="action_amendment" states="approve" type="object"
                            groups="account.group_account_manager"
                            confirm="Are you sure to Amendment this budget?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approve"/>
                </header>
                <sheet>
                    <div class="pull-left">
                        <h1>
                            <field name="name" nolabel="1"/>
                            <field name="bottom_line_budget_line" invisible="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <label for="fiscal_year" string="Period"/>
                            <div>
                                <field name="fiscal_year" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                                <field name="date_from" class="oe_inline"/> -
                                <field name="date_to" class="oe_inline" nolabel="1"/>
                            </div>
                            <field name="creating_user_id"/>
                        </group>
                        <group>
                            <field name="account_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            <field name="planned_amount"/>
                            <field name="remaining_amount"/>
                            <field name="approve_date" attrs="{'invisible':[('state','=','draft')]}"/>
                            <field name="approved_user_id" attrs="{'invisible':[('state','=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Distribution" >
                            <field name="branch_budget_lines">
                                <tree editable="bottom" create="false" delete="false"
                                      decoration-danger="practical_amount>planned_amount"
                                      decoration-info="practical_amount>theoritical_amount" >
                                    <field name="operating_unit_id" readonly="1"/>
                                    <field name="planned_amount"/>
                                    <field name="practical_amount" readonly="1"/>
                                    <field name="theoritical_amount" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="History" attrs="{'invisible': [('branch_budget_history_ids','=', [])]}">
                            <field name="branch_budget_history_ids">
                                <tree editable="false" create="false" delete="false">
                                    <field name="name"/>
                                    <field name="fiscal_year"/>
                                    <field name="account_id"/>
                                    <field name="creating_user_id"/>
                                    <field name="planned_amount"/>
                                </tree>
                                <form string="History">
                                    <div class="pull-left">
                                        <h1>
                                            <field name="name" nolabel="1"/>
                                            <field name="bottom_line_budget_line" invisible="1"/>
                                        </h1>
                                    </div>
                                    <group>
                                        <group>
                                            <label for="fiscal_year" string="Period"/>
                                            <div>
                                                <field name="fiscal_year"/>
                                                <field name="date_from" class="oe_inline"/> -
                                                <field name="date_to" class="oe_inline" nolabel="1"/>
                                            </div>
                                            <field name="creating_user_id"/>
                                        </group>
                                        <group>
                                            <field name="account_id"/>
                                            <field name="planned_amount"/>
                                            <field name="remaining_amount"/>
                                            <field name="approve_date"/>
                                            <field name="approved_user_id"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Distribution" >
                                            <field name="branch_budget_lines">
                                                <tree editable="bottom" create="false" delete="false"
                                                      decoration-danger="practical_amount>planned_amount"
                                                      decoration-info="practical_amount>theoritical_amount" >
                                                    <field name="operating_unit_id" readonly="1"/>
                                                    <field name="planned_amount" readonly="1"/>
                                                    <field name="practical_amount" readonly="1"/>
                                                    <field name="theoritical_amount" readonly="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="branch_budget_search" model="ir.ui.view">
        <field name="name">branch.budget.search</field>
        <field name="model">branch.budget</field>
        <field name="arch" type="xml">
            <search string="Branch Distribution">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Budget"/>
                <field name="fiscal_year" filter_domain="[('fiscal_year','ilike',self)]" string="Year"/>
                <filter name="state" string="Pending" domain="[('state','=', 'draft')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Period" domain="[]"  context="{'group_by':'fiscal_year'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_branch_budget" model="ir.actions.act_window">
        <field name="name">Branch Distribution</field>
        <field name="res_model">branch.budget</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_state":1}</field>
        <field name="search_view_id" ref="branch_budget_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No budget defined
            </p><p>
                Branch wise budget distribution.
            </p>
        </field>
    </record>

    <menuitem
            action="action_branch_budget"
            id="menu_branch_budget"
            parent="main_menu_account_budget"
            groups="account.group_account_manager"
            sequence="2"/>

</odoo>
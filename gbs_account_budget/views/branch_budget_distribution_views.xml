<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="budget_branch_distribution_tree" model="ir.ui.view">
        <field name="name">budget.branch.distribution.tree</field>
        <field name="model">budget.branch.distribution</field>
        <field name="arch" type="xml">
            <tree string="Distribution">
                <field name="account_id"/>
                <field name="planned_amount"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="budget_branch_distribution_form">
        <field name="name">budget.branch.distribution.form</field>
        <field name="model">budget.branch.distribution</field>
        <field name="arch" type="xml">
            <form string="Distribution">
                <header>
                    <!--<button string="Generate" name="action_select_accounts" type="object" class="oe_highlight"/>-->
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="account_id" context="{'show_parent_account':True}"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        </group>
                        <group>
                            <field name="planned_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Distribution">
                            <field name="branch_budget_lines">
                                <tree>
                                    <field name="operating_unit_id"/>
                                    <field name="planned_amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--<record id="budget_branch_distribution_search" model="ir.ui.view">-->
        <!--<field name="name">budget.branch.distribution.search</field>-->
        <!--<field name="model">budget.branch.distribution</field>-->

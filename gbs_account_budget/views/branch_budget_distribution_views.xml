            <!--<search string="Distribution">-->
                <!--<field name="name" filter_domain="[('name','ilike',self)]" string="Bottom Line Budgetary"/>-->
            <!--</search>-->
        <!--</field>-->
    <!--</record>-->

    <record id="action_budget_branch_distribution" model="ir.actions.act_window">
        <field name="name">Distribution</field>
        <field name="res_model">budget.branch.distribution</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="search_view_id" ref="bottom_line_budget_search"/>-->
    </record>

    <menuitem
            action="action_budget_branch_distribution"
            id="menu_budget_distribution"
            parent="main_menu_account_budget"
            sequence="4"/>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem
            id="main_menu_account_budget"
            name="Budget"
            parent="account.menu_finance_configuration"
            sequence="99"
            groups="account.group_account_manager"/>

    <record id="branch_budget_tree" model="ir.ui.view">
        <field name="name">branch.budget.tree</field>
        <field name="model">branch.budget</field>
        <field name="arch" type="xml">
            <tree string="Branch Distribution" decoration-info="state == 'draft'" decoration-success="state == 'confirm'"
                  decoration-muted="state in ('approve','cancel') "
                  decoration-bf="state in ('confirm','approve') ">
                <field name="name"/>
                <field name="account_id"/>
                <field name="creating_user_id"/>
                <field name="planned_amount"/>
                <field name="fiscal_year"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="branch_budget_form">
        <field name="name">branch.budget.form</field>
        <field name="model">branch.budget</field>
        <field name="arch" type="xml">
            <form string="Branch Distribution">
                <header>
                    <button string="Confirm" name="action_budget_confirm" states="draft" type="object" class="oe_highlight"/>
                    <button string="Approve" name="action_budget_approve" states="confirm" type="object" class="oe_highlight"/>
                    <button string="Reset to Draft" name="action_budget_draft" states="cancel" type="object" />
                    <button string="Cancel Budget" name="action_budget_cancel" states="confirm" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <div class="pull-left">
                        <h1>
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="account_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            <field name="planned_amount"/>
                            <field name="creating_user_id"/>
                            <field name="confirm_date" attrs="{'invisible':[('state','=','draft')]}"/>
                        </group>
                        <group>
                            <label for="fiscal_year" string="Period"/>
                            <div>
                                <field name="fiscal_year" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                                <field name="date_from" class="oe_inline"/> -
                                <field name="date_to" class="oe_inline" nolabel="1"/>
                            </div>
                            <field name="approve_date" attrs="{'invisible':[('state','in',('draft','confirm'))]}"/>
                            <field name="approved_user_id" attrs="{'invisible':[('state','in',('draft','confirm'))]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Distribution" >
                            <field name="branch_budget_lines">
                                <tree>
                                    <field name="operating_unit_id"/>
                                    <field name="planned_amount"/>
                                    <field name="practical_amount"/>
                                    <field name="theoritical_amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="branch_budget_search" model="ir.ui.view">
        <field name="name">branch.budget.search</field>
        <field name="model">branch.budget</field>
        <field name="arch" type="xml">
            <search string="Branch Distribution">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Budget"/>
                <field name="fiscal_year" filter_domain="[('fiscal_year','ilike',self)]" string="Year"/>
                <group expand="0" string="Group By">
                    <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Period" domain="[]"  context="{'group_by':'fiscal_year'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_branch_budget" model="ir.actions.act_window">
        <field name="name">Branch Distribution</field>
        <field name="res_model">branch.budget</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="branch_budget_search"/>
    </record>

    <menuitem
            action="action_branch_budget"
            id="menu_branch_budget"
            parent="main_menu_account_budget"
            groups="account.group_account_manager"
            sequence="1"/>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
Budgets
-->
    <menuitem
            id="main_menu_account_budget"
            name="Budget"
            parent="account.menu_finance_configuration"
            sequence="99"
            groups="base.group_system"/>

    <record id="top_line_budget_temp_tree" model="ir.ui.view">
        <field name="name">top.line.budget.temp.tree</field>
        <field name="model">top.line.budget.temp</field>
        <field name="arch" type="xml">
            <tree string="Top Line Budgetary Template">
                <field name="date_create"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="top_line_budget_temp_form">
        <field name="name">top.line.budget.temp.form</field>
        <field name="model">top.line.budget.temp</field>
        <field name="arch" type="xml">
            <form string="Top Line Budgetary Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="date_create"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Accounts">
                            <field name="account_ids" context="{'tree_view_ref': 'account.view_account_list','show_parent_account':True}">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="top_line_budget_temp_search" model="ir.ui.view">
        <field name="name">top.line.budget.temp.search</field>
        <field name="model">top.line.budget.temp</field>
        <field name="arch" type="xml">
            <search string="Top Line Budgetary Template">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Top Line Budgetary"/>
            </search>
        </field>
    </record>

    <record id="action_top_line_budget_temp" model="ir.actions.act_window">
        <field name="name">Top Line Template</field>
        <field name="res_model">top.line.budget.temp</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="top_line_budget_temp_search"/>
    </record>

    <menuitem
            action="action_top_line_budget_temp"
            id="menu_top_line_budget_temp"
            parent="main_menu_account_budget"
            sequence="1"/>

    <!--......................................................................................................-->

    <record model="ir.ui.view" id="top_line_budget_form">
        <field name="name">top.line.budget.form</field>
        <field name="model">top.line.budget</field>
        <field name="arch" type="xml">
            <form string="Top Line Budget">
                <header>
                    <button string="Confirm" name="action_budget_confirm" states="draft" type="object" class="oe_highlight"/>
                    <button string="Approve" name="action_budget_validate" states="confirm" type="object" class="oe_highlight"/>
                    <button string="Reset to Draft" name="action_budget_draft" states="cancel" type="object" />
                    <button string="Cancel Budget" name="action_budget_cancel" states="confirm" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet string="Budget">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Budget Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="creating_user_id"/>
                            <field name="confirm_date" attrs="{'invisible':[('state','=','draft')]}"/>
                            <field name="approve_date" attrs="{'invisible':[('state','in',['draft','confirm'])]}"/>
                            <field name="top_line_budget_temp_id" string="Select Template"
                                   options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                        </group>
                        <group>
                            <label for="fiscal_year" string="Period"/>
                            <div>
                                <field name="fiscal_year" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                                <field name="date_from" class="oe_inline"/> -
                                <field name="date_to" class="oe_inline" nolabel="1"/>
                            </div>
                            <field name="planned_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Top Line Budget Lines">
                            <field name="top_line_budgets" context="{'default_fiscal_year': fiscal_year}" colspan="4" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree string="Top Line Budget Lines" editable="bottom">
                                    <field name="name"/>
                                    <field name="account_id" context="{'show_parent_account':True}"
                                           options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                                    <!--<field name="analytic_account_id" groups="analytic.group_analytic_accounting" required="1"/>-->
                                    <field name="fiscal_year" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="planned_amount" sum="Planned Amount" widget="monetary"/>
                                    <!--<field name="practical_amount" sum="Practical Amount" widget="monetary"/>-->
                                    <!--<field name="theoritical_amount" sum="Theoretical Amount" widget="monetary"/>-->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="top_line_budget_tree">
        <field name="name">top.line.budget.tree</field>
        <field name="model">top.line.budget</field>
        <field name="arch" type="xml">
            <tree string="Budget"
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'confirm'"
                  decoration-muted="state == 'validate'"
                  decoration-danger="state == 'cancel'"
                  decoration-bf="state =='confirm'">
                <field name="name" colspan="1"/>
                <field name="fiscal_year"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="creating_user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="top_line_budget_search" model="ir.ui.view">
        <field name="name">top.line.budget.temp.search</field>
        <field name="model">top.line.budget</field>
        <field name="arch" type="xml">
            <search string="Top Line Budget">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Top Line Budget"/>
                <field name="fiscal_year" filter_domain="[('fiscal_year','ilike',self)]" string="Period"/>
            </search>
        </field>
    </record>

    <record id="action_top_line_budget" model="ir.actions.act_window">
        <field name="name">Top Line Budget</field>
        <field name="res_model">top.line.budget</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="top_line_budget_search"/>
    </record>

    <menuitem
            action="action_top_line_budget"
            id="menu_top_line_budget"
            parent="main_menu_account_budget"
            sequence="2"/>


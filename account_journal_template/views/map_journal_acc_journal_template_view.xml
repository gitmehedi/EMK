<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_journal_acc_journal_template_form" model="ir.ui.view">
			<field name="name">map.journal.acc.journal.template.form</field>
			<field name="model">map.journal.acc.journal.template</field>
			<field name="arch" type="xml">
				<form string="Mapping Journal &amp; Account Journal Template">
					<sheet>
						<div class="col-md-6">
							<group>
								<group name="main_grp">
									<field name="journal_id"
										options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
									<field name="template_id"
										options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
									<field name="active" />

								</group>
							</group>
						</div>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_map_journal_acc_journal_template_tree" model="ir.ui.view">
			<field name="name">map.journal.acc.journal.template.tree</field>
			<field name="model">map.journal.acc.journal.template</field>
			<field name="arch" type="xml">
				<tree string="Mapping Journal &amp; Account Journal Template">
					<field name="journal_id" />
					<field name="template_id" />
					<field name="active" />
				</tree>
			</field>
		</record>

		<record id="view_map_journal_acc_journal_template_search"
			model="ir.ui.view">
			<field name="name">map.journal.acc.journal.template.search</field>
			<field name="model">map.journal.acc.journal.template</field>
			<field name="arch" type="xml">
				<search string="Mapping Journal &amp; Account Journal Template">
					<field name="journal_id" />
					<field name="template_id" />
				</search>
			</field>
		</record>

		<record id="action_map_journal_acc_journal_template_tree"
			model="ir.actions.act_window">
			<field name="name">Mapping Journal &amp; Account Journal Template
			</field>
			<field name="res_model">map.journal.acc.journal.template</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem action="action_map_journal_acc_journal_template_tree"
			id="menu_map_Journal_acc_journal_template" parent="account.account_account_menu"
			sequence="13" />
	</data>
</openerp>

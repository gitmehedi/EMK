<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_acc_journal_template_form" model="ir.ui.view">
			<field name="name">acc.journal.template.form</field>
			<field name="model">acc.journal.template</field>
			<field name="arch" type="xml">
				<form string="Account Journal Template">
					<header>
						<button name="action_confirm" type="object" string="Confirm"
							class="oe_highlight" states="draft" />
						<button name="action_approve" type="object" string="Approve"
							class="oe_highlight" states="confirm" />
						<button name="action_cancel" type="object" string="Cancel" 
							states="confirm, approve" />
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<group>
							<group name="main_grp">
								<field name="name"/>
								<field name="active"/>
							</group>
						</group>
						<notebook>
							<page string="Template Item">
								<field name="line_ids">
									<tree editable="bottom">
										<field name="name"/>
										<field name="account_id"
											options='{"no_open": True,"no_create":
											1, "no_create_edit":1}' />
										
										<field name="debit" />
										<field name="credit"/>
									</tree>
								</field>

							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_acc_journal_template_tree" model="ir.ui.view">
			<field name="name">acc.journal.template.tree</field>
			<field name="model">acc.journal.template</field>
			<field name="arch" type="xml">
				<tree string="Account Journal Template">
					<field name="name" />
					<field name="active" />
					<field name="state" string="Status" />
				</tree>
			</field>
		</record>

		<record id="view_acc_journal_template_search" model="ir.ui.view">
			<field name="name">acc.journal.template.search</field>
			<field name="model">acc.journal.template</field>
			<field name="arch" type="xml">
				<search string="Account Journal Template">
					<field name="name"/>
				</search>
			</field>
		</record>

		<record id="action_acc_journal_template_tree" model="ir.actions.act_window">
			<field name="name">Account Journal Template</field>
			<field name="res_model">acc.journal.template</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<menuitem action="action_acc_journal_template_tree" id="menu_acc_journal_template"
			parent="account.menu_finance_entries" sequence="30"/>
	</data>
</openerp>

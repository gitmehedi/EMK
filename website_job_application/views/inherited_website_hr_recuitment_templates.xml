<?xml version="1.0"?>
<odoo>
    <data>
        <template id="website_hr_recuitment_tests" name="Website HR Recruitment Tests" inherit_id="web.assets_common">
            <xpath expr="." position="inside">
                <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
                <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
                <script type="text/javascript" src="/website_job_application/static/src/js/custom.js"></script>
            </xpath>
        </template>

        <template id="website_job_description" inherit_id="website_hr_recruitment.detail"
                  name="Job description on Portal">
            <xpath expr="//div[hasclass('container')]" position="after">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="text-primary">Job Description / চাকরির বিবরণ</h3>
                            <div t-field="job.description"/>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//section/div/div/a[hasclass('pull-right')]" position="replace">
                <div></div>
            </xpath>
            <xpath expr="//section[hasclass('o_job_bottom_bar')]" position="replace">
                <section class="o_job_bottom_bar mt32 mb32">
                    <div class="text-center">
                        <a t-attf-href="/jobs/apply/#{job.id}" class="btn btn-info">Apply Now / আবেদন করুন</a>
                    </div>
                </section>

            </xpath>
        </template>
        <template id="inherited_website_job_apply" inherit_id="website_hr_recruitment.apply"
                  name="Job description on Portal">
            <xpath expr="//form" position="replace">
                <form action="/website_form/" method="post" class="s_website_form form-horizontal container-fluid mt32"
                      enctype="multipart/form-data" data-model_name="hr.applicant"
                      data-success_page="/page/website_hr_recruitment.thankyou"
                      t-att-data-form_field_department_id="job and job.department_id.id or False"
                      t-att-data-form_field_job_id="job and job.id or False" style="font-size: 12px;">
                    <div class="col-md-12">
                        <div class="panel panel-success">
                            <div class="panel-heading">Basic Information / প্রাথমিক তথ্য</div>
                            <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                <label class="control-label">Name(English in Capital Letter) / প্রার্থীর নাম(ইংরেজিতে)</label>
                                <input type="text" class="form-control o_website_form_input input-sm"
                                       name="partner_name" required=""/>
                            </div>
                            <div class="form-group col-md-6 form-field o_website_form_required_custom pull-right">
                                <label class="control-label">Name(Bangla) / প্রার্থীর নাম(বাংলায়)</label>
                                <input type="text" class="form-control o_website_form_input input-sm"
                                       name="partner_name_bangla" required=""/>
                            </div>
                            <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                <label class="control-label">National ID / জাতীয় পরিচয় নম্বর</label>
                                <input type="text" class="form-control o_website_form_input input-sm"
                                       name="national_id" required=""/>
                            </div>
                            <div class="form-group col-md-6 form-field o_website_form_required_custom  pull-right">
                                <label class="control-label">Birth Registration Number / জন্ম নিবন্ধন নম্বর</label>
                                <input type="text" class="form-control o_website_form_input input-sm"
                                       name="birth_registration_no" required=""/>
                            </div>
                            <div class="form-group col-md-6 form-field o_website_form_required_custom ">
                                <label class="control-label">Father Name / পিতার নাম</label>
                                <input type="text" class="form-control o_website_form_input input-sm"
                                       name="father_name" required=""/>
                            </div>
                            <div class="form-group col-md-6 form-field o_website_form_required_custom pull-right">
                                <label class="control-label">Birth Date / জন্মতারিখ</label>
                                <input type="text" class="form-control o_website_form_input input-sm" id="datepicker"
                                       name="birth_date" required=""/>
                            </div>


                            <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                <label class="control-label">Mother Name / মাতার নাম</label>
                                <input type="text" class="form-control o_website_form_input input-sm"
                                       name="mother_name" required=""/>
                            </div>
                            <div class="form-group col-md-6 form-field o_website_form_required_custom  pull-right">
                                <label class="control-label">Birth Location / জন্মস্থান</label>
                                <select class="form-control o_website_form_input input-sm" name="birth_city"
                                        required="">
                                    <t t-foreach='districts' t-as='label'>
                                        <option t-att-value="label">
                                            <t t-esc="label_value"/>
                                        </option>
                                    </t>
                                </select>
                            </div>

                        </div>
                        <div class="form-group col-md-6 form-field o_website_form_required_custom">
                            <label class="control-label">Mobile / মোবাইল</label>
                            <input type="text" class="form-control o_website_form_input input-sm"
                                   name="partner_phone" required=""/>
                        </div>
                        <div class="form-group col-md-6 form-field pull-right">
                            <label class="control-label">Email / ইমেইল</label>
                            <input type="email" class="form-control input-sm"
                                   name="email_from" required=""
                                   placeholder="johnodh@gmail.com"/>
                        </div>
                        <div class="form-group col-md-6 form-field o_website_form_required_custom">
                            <label class="control-label">Nationality / জাতীয়তা</label>
                            <input type="text" class="form-control o_website_form_input input-sm"
                                   name="nationality" required=""/>
                        </div>
                        <div class="form-group col-md-6 form-field o_website_form_required_custom pull-right">
                            <label class="control-label">Gender / জেন্ডার</label>
                            <select class="form-control o_website_form_input input-sm" name="gender" required="">
                                <option value="male">Male / পুরুষ</option>
                                <option value="female">Female / নারী</option>
                                <option value="other">Other / অন্যান্য</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6 form-field o_website_form_required_custom">
                            <label class="control-label">Religion / ধর্ম</label>
                            <input type="text" class="form-control o_website_form_input input-sm"
                                   name="religion" required=""/>
                        </div>
                        <div class="form-group col-md-6 form-field pull-right">
                            <label class="control-label">Occupation / পেশা</label>
                            <input type="text" class="form-control o_website_form_input input-sm "
                                   name="occupation"/>
                        </div>
                        <t t-if="authorize_districts">
                            <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                <label class="control-label">Authorize District</label>
                                <select class="form-control o_website_form_input input-sm" name="authorize_district" required="">
                                    <t t-foreach='authorize_districts' t-as='label'>
                                        <option t-att-value="label['id']">
                                            <t t-esc="label['name']"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </t>
                    </div>
                    <div class="col-md-12">
                        <div class="panel panel-success">
                            <div class="panel-heading">Present Address and Permanent Address / বর্তমান ঠিকানা ও স্থায়ী
                                ঠিকানা
                            </div>
                            <div class="col-md-5 pull-left">
                                <div class="form-group o_website_form_required_custom">
                                    <label class="control-label">Present House and Road(Name/No) / বর্তমান বাসা ও
                                        সড়ক(নাম ও নম্বর)
                                    </label>
                                    <input id="pre_address_1" name="pre_address_1" type="text"
                                           class="form-control o_website_form_input input-sm" required=""/>
                                </div>
                                <div class="form-group o_website_form_required_custom">
                                    <label class="control-label">Present Village/Para/Moholla/ (বর্তমান
                                        গ্রাম/পাড়া/মহল্লা)
                                    </label>
                                    <input id="pre_address_2" name="pre_address_2" type="text"
                                           class="form-control o_website_form_input input-sm" required=""/>
                                </div>
                                <div class="form-group col-md-7 pull-left o_website_form_required_custom">
                                    <label class="control-label">Union/Ward/ (বর্তমান ইউনিয়ন/ওয়ার্ড)</label>
                                    <input id="pre_city_town" name="pre_city_town" type="text"
                                           class="form-control o_website_form_input input-sm" required=""/>
                                </div>
                                <div class="form-group col-md-6 pull-right o_website_form_required_custom">
                                    <label class="control-label">Postal Code/পোস্ট কোড নম্বর</label>
                                    <input id="pre_zip_postal" name="pre_zip_postal" type="text"
                                           class="form-control o_website_form_input input-sm"/>
                                </div>

                                <div class="form-group col-md-7 pull-left o_website_form_required_custom">
                                    <label class="control-label">Sub-District / উপজেলা</label>
                                    <input name="pre_state_province" class="form-control o_website_form_input input-sm"
                                           required=""/>
                                </div>
                                <div class="form-group col-md-5 pull-right o_website_form_required_custom">
                                    <label class="control-label">Districts / জেলা</label>
                                    <select class="form-control o_website_form_input input-sm" name="pre_zip_postal">
                                        <t t-foreach='districts' t-as='label'>
                                            <option t-att-value="label">
                                                <t t-esc="label_value"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-5 pull-right">
                                <div class="form-group o_website_form_required_custom">
                                    <label class="control-label">Permanent House and Road(Name/No) / বর্তমান বাসা ও
                                        সড়ক(নাম ও নম্বর)
                                    </label>
                                    <input id="per_address_1" name="per_address_1" type="text"
                                           class="form-control o_website_form_input input-sm" required=""/>
                                </div>
                                <div class="form-group o_website_form_required_custom">
                                    <label class="control-label">Permanent Village/Para/Moholla / (বর্তমান
                                        গ্রাম/পাড়া/মহল্লা)
                                    </label>
                                    <input id="per_address_2" name="per_address_2" type="text"
                                           class="form-control o_website_form_input input-sm" required=""/>
                                </div>
                                <div class="form-group col-md-7 pull-left o_website_form_required_custom">
                                    <label class="control-label">Union/Ward (বর্তমান ইউনিয়ন/ওয়ার্ড)</label>
                                    <input id="per_city_town" name="per_city_town" type="text"
                                           class="form-control o_website_form_input input-sm" required=""/>
                                </div>
                                <div class="form-group col-md-6 pull-right o_website_form_required_custom">
                                    <label class="control-label">Postal Code/পোস্ট কোড নম্বর</label>
                                    <input id="pre_zip_postal" name="per_zip_postal" type="text"
                                           class="form-control o_website_form_input input-sm" required=""/>
                                </div>

                                <div class="form-group col-md-7 pull-left o_website_form_required_custom">
                                    <label class="control-label">Sub-District / উপজেলা</label>
                                    <input name="per_state_province"
                                           class="form-control o_website_form_input input-sm"/>
                                </div>
                                <div class="form-group col-md-6 pull-right o_website_form_required_custom">
                                    <label class="control-label">Districts / জেলা</label>
                                    <select class="form-control o_website_form_input input-sm" name="per_district">
                                        <t t-foreach='districts' t-as='label'>
                                            <option t-att-value="label">
                                                <t t-esc="label_value"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="panel panel-success">
                            <div class="panel-heading">Educational Qualification / শিক্ষাগত যোগ্যতা</div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Examination Name</th>
                                        <th>Subject</th>
                                        <th>Institute</th>
                                        <th>Passing Year</th>
                                        <th>Board/University</th>
                                        <th>Grade/Class/Division</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>

                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_ssc"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_ssc_subject"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_ssc_institute"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_ssc_passing_year"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_ssc_board"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_ssc_class"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_hsc"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_hsc_subject"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_hsc_institute"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_hsc_passing_year"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_hsc_board"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_hsc_class"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_bsc"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_bsc_subject"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_bsc_institute"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_bsc_passing_year"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_bsc_board"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_bsc_class"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_msc"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_msc_subject"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_msc_institute"/>
                                        </td>
                                        <td>
                                            <input type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   name="exm_msc_passing_year"/>

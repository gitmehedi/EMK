<?xml version="1.0"?>
<odoo>
    <data>

        <template id="website_hr_recuitment_tests" name="Website HR Recruitment Tests" inherit_id="web.assets_common">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_job_application/static/src/js/custom.js"></script>
                <link rel="stylesheet" href="/website_job_application/static/src/css/design_profile_pic.css"/>
            </xpath>
        </template>

        <template id="website_job_description" inherit_id="website_hr_recruitment.detail"
                  name="Job description on Portal">
            <xpath expr="//div[hasclass('container')]" position="after">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="text-primary">Job Description</h3>
                            <div t-field="job.description"/>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//section/div/div/a[hasclass('pull-right')]" position="replace">
                <div></div>
            </xpath>
            <xpath expr="//section[hasclass('o_job_bottom_bar')]" position="replace">
                <section class="o_job_bottom_bar mt32 mb32">
                    <div class="text-center">
                        <a t-attf-href="/jobs/apply/#{job.id}" class="btn btn-info">Apply Now</a>
                    </div>
                </section>

            </xpath>
        </template>
        <template id="inherited_website_job_apply" inherit_id="website_hr_recruitment.apply"
                  name="Job description on Portal">
            <xpath expr="//form" position="replace">
<!--                <form action="/website_form/" method="POST" class="s_website_form container-fluid mt32"-->
<!--                      enctype="multipart/form-data" data-model_name="hr.applicant"-->
<!--                      data-success_page="/page/website_hr_recruitment.thankyou"-->
<!--                      t-att-data-form_field_department_id="job and job.department_id.id or False"-->
<!--                      t-att-data-form_field_job_id="job and job.id or False" style="font-size: 12px;">-->
                <form class="s_website_form container-fluid mt32" enctype="multipart/form-data" role="form"
                          method="post"
                          t-if="not message" data-toggle="validator2" id="memberapp">
                     <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                     <script type="text/javascript">
                            var config = {
                            baseurl: "<t t-esc="baseurl"/>",
                            };
                        </script>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <input type="hidden" name="token" t-att-value="token"/>

                    <div class="col-md-12">
                        <div class="panel panel-success">
                            <div class="panel-heading odoobg">
                                <h3 class="panel-title">Basic Information</h3>
                            </div>
                            <div class="panel-body">
                                <div class="clearfix margin-top-10">
                                    <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                        <label class="control-label">First Name
                                        </label>
                                        <input type="text" class="form-control o_website_form_input input-sm"
                                               t-att-value="firstname" id="firstname"
                                               name="firstname" required="" minlength="2" maxlength="100"/>
                                    </div>
                                    <div class="form-group col-md-6 form-field o_website_form_required_custom ">
                                        <label class="control-label">Last Name</label>
                                        <input type="text" class="form-control o_website_form_input input-sm"
                                               t-att-value="partner_last_name" id="partner_last_name"
                                               name="partner_last_name" required="" minlength="2" maxlength="100"/>
                                    </div>

                                    <div class="form-group col-md-6 form-field o_website_form_required_custom ">
                                        <label class="control-label">Father Name</label>
                                        <input type="text" class="form-control o_website_form_input input-sm"
                                               t-att-value="father_name" id="father_name"
                                               name="father_name" required="" minlength="2" maxlength="100"/>
                                    </div>
                                    <div class="form-group col-md-6 form-field o_website_form_required_custom ">
                                        <label class="control-label">Birth Date</label>
                                        <input type="text" class="form-control o_website_form_input input-sm"
                                               t-att-value="birth_date"
                                               id="birth_date" name="birth_date" required=""/>
                                    </div>


                                    <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                        <label class="control-label">Mother Name</label>
                                        <input type="text" class="form-control o_website_form_input input-sm"
                                               t-att-value="mother_name" id="mother_name"
                                               name="mother_name" required="" minlength="2" maxlength="100"/>

                                    </div>
                                </div>

                                <div class="clearfix">
                                    <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                        <label class="control-label">Mobile</label>
                                        <input type="text" class="form-control o_website_form_input input-sm"
                                               placeholder="8801900000000" minlength="13" maxlength="13"
                                               pattern="(880)([0-9]{10})"
                                               t-att-value="partner_mobile" id="partner_mobile"
                                               data-minlength="13" data-maxlength="13"
                                               name="partner_mobile" required=""/>
                                    </div>
                                    <div class="form-group col-md-6 form-field ">
                                        <label class="control-label">Email</label>
                                        <input type="email" class="form-control input-sm"
                                               name="email_from" required=""
                                               t-att-value="email_from" id="email_from"
                                               placeholder="johnodh@gmail.com"/>
                                    </div>
                                    <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                        <label class="control-label">Nationality</label>
                                        <input type="text" class="form-control o_website_form_input input-sm"
                                               t-att-value="nationality" id="nationality"
                                               name="nationality" required=""/>
                                    </div>

                                    <div class="form-group col-md-6 form-field o_website_form_required_custom  ">
                                        <label class="control-label">Gender</label>
                                        <select class="form-control o_website_form_input input-sm" name="gender"
                                                id="gender"
                                                required="">
                                            <option value="">--Please Select--</option>
                                            <t t-foreach="gender_ids" t-as='label'>
                                                <option t-att-value="label_value[0]"
                                                        t-att-selected="'selected' if gender==label_value[0] else None">
                                                    <t t-esc="label_value[1]"/>
                                                </option>
                                            </t>

                                        </select>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="panel panel-success">
                            <div class="panel-heading  odoobg">
                                <h3 class="panel-title">Present Address and Permanent Address
                                </h3>
                            </div>
                            <div class="panel-body">
                                <div class="clearfix margin-top-10">
                                    <div class="col-md-6">
                                        <div class="form-group form-field o_website_form_required_custom">
                                            <label class="control-label">Present House and Road(Name/No)
                                            </label>
                                            <input id="pre_address_1" name="pre_address_1" type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   t-att-value="pre_address_1"
                                                   required="required"/>
                                        </div>
                                        <div class="form-group form-field o_website_form_required_custom">
                                            <label class="control-label">Present Village/Para/Moholla
                                            </label>
                                            <input id="pre_address_2" name="pre_address_2" type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   t-att-value="pre_address_2"
                                                   required="required"/>
                                        </div>
                                        <div class="row">
                                            <div class="form-group form-field col-md-6  o_website_form_required_custom">
                                                <label class="control-label">Postal Code</label>
                                                <input id="pre_zip_postal" name="pre_zip_postal" type="text"
                                                       class="form-control o_website_form_input input-sm"
                                                       t-att-value="pre_zip_postal"
                                                       required="required"/>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group form-field">
                                                    <label class="control-label">Country</label>
                                                    <select class="form-control input-sm reqfield"
                                                            name="pre_country_id">
                                                        <option value="">--Please Select--</option>
                                                        <t t-foreach="country_ids" t-as='label'>
                                                            <option t-att-value="label_value[0]"
                                                                    t-att-selected="'selected' if country_id==label_value[0] else None">
                                                                <t t-esc="label_value[1]"/>
                                                            </option>
                                                        </t>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-field o_website_form_required_custom ">
                                            <label class="control-label">Permanent House and Road(Name/No)
                                            </label>
                                            <input id="per_address_1" name="per_address_1" type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   t-att-value="per_address_1"
                                                   required="required"/>
                                        </div>
                                        <div class="form-group form-field o_website_form_required_custom">
                                            <label class="control-label">Permanent Village/Para/Moholla
                                            </label>
                                            <input id="per_address_2" name="per_address_2" type="text"
                                                   class="form-control o_website_form_input input-sm"
                                                   t-att-value="per_address_2"
                                                   required="required"/>
                                        </div>

                                        <div class="row">

                                            <div class="form-group form-field col-md-6  o_website_form_required_custom">
                                                <label class="control-label">Postal Code</label>
                                                <input id="pre_zip_postal" name="per_zip_postal" type="text"
                                                       class="form-control o_website_form_input input-sm"
                                                       t-att-value="per_zip_postal"
                                                       required="required"/>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group form-field">
                                                    <label class="control-label">Country</label>
                                                    <select class="form-control input-sm reqfield"
                                                            name="per_country_id">
                                                        <option value="">--Please Select--</option>
                                                        <t t-foreach="country_ids" t-as='label'>
                                                            <option t-att-value="label_value[0]"
                                                                    t-att-selected="'selected' if country_id==label_value[0] else None">
                                                                <t t-esc="label_value[1]"/>
                                                            </option>
                                                        </t>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="panel panel-success">
                            <div class="panel-heading odoobg">
                                <h3 class="panel-title">Additional Information</h3>
                            </div>
                            <div class="panel-body">
                                <div class="col-md-6">
                                    <div class="clearfix margin-top-10">
                                        <div class="form-group form-field col-md-12 o_website_form_required_custom"
                                             style="width:100%; padding:0; margin:0">
                                            <div class="form-group col-md-6 form-field o_website_form_required_custom">
                                                <label class="control-label" for="exampleInputFile">Resume
                                                </label>
                                                <input type="file" name="Resume" required="required" id="Resume"
                                                       accept=".doc,.docx,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,.pdf"
                                                />

<!--                                                <p class="help-block">Upload resume in any format.</p>-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-12" style="margin-bottom:10px">
                                        <div class="img__wrap" id="img_wrap">
                                            <input id="profile-image-upload" name="applicant_image" class="hidden" type="file" accept="image/*" required="required">
                                                <img id="uploaded_image"/>
                                            </input>
                                            <div class="img__description_layer">
                                                <p class="img__description">Click here to upload image.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-4 col-md-offset-4 form-field o_website_form_required_custom">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Submit Application</button>
<!--                            <span class="btn btn-info btn-lg btn-block o_website_form_send">Submit</span>-->
<!--                            <span id="o_website_form_result"></span>-->
                        </div>
                    </div>
                </form>
            </xpath>
        </template>

        <template id="website_hr_recruitment.success" name="Application Success">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="container">
                    <div class="jumbotron mt32">
                        <h1>Thank you!</h1>
                        <div>
                            <strong>
                                <t t-esc="name"/>
                            </strong>
                            Your request has been submitted successfully.
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    </data>
</odoo>
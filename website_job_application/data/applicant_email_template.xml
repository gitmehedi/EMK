<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="applicant_email_confirm_template" model="mail.template">
            <field name="name">Application Submit Confirmation</field>
            <field name="model_id" ref="gbs_hr_recruitment.model_hr_applicant"/>
            <field name="subject">Thank you for your application</field>
            <field name="email_from">
                <![CDATA["${object.company_id.name|safe}" <${(object.company_id.email or user.email)|safe}>]]></field>
            <field name="body_html"><![CDATA[
            <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
                    <tbody><tr>
                        <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                            <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${user.company_id.name}">
                        </td>
                    </tr></tbody>
                </table>
            </div>
            <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
            <p>Dear ${ctx['name']},</p>
                <p>
                Thank you for applying to the ${ctx['name']} position at ${object.company_id.name}.
                Iâ€™d like to inform you that we received your resume. Our hiring team is currently reviewing all applications and we are planning to schedule interviews within short time.
                If you are among qualified candidates, you will receive [e.g. a call/email] from our one of our recruiters to schedule interview.
                In any case, we will keep you posted on the status of your application.
                Thank you, again, for taking the time to apply to this role at ${object.company_id.name}
                </p>

                <p>Best regards,</p>
            </div>
            <div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
                ${user.signature | safe}
                <p style="font-size: 11px; margin-top: 10px;">
                    <strong>Sent by ${user.company_id.name}</strong>
                </p>
            </div>]]></field>
            <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>

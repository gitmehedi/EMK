<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="uom_jar_received_form" model="ir.ui.view">
            <field name="name">jar.received.form</field>
            <field name="model">jar.received</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Jar Received" delete="false" copy='0'>
                    <header>
                        <button name="action_confirm" type="object" states="draft" string="Confirm"
                                class="oe_highlight"/>
                        <field name="state" statusbar_visible="draft,confirmed" widget="statusbar"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="packing_mode"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                                <!--<field name="challan_id"/>-->
                                <field name="due_jar"/>
                                <field name="jar_received"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="uom_jar_received_tree" model="ir.ui.view">
            <field name="name">jar.received.tree</field>
            <field name="model">jar.received</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Jar Summary">
                    <field name="partner_id"/>
                    <field name="packing_mode"/>
                    <!--<field name="challan_id"/>-->
                    <field name="jar_received"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="uom_jar_received_action">
            <field name="name">Jar Received</field>
            <field name="res_model">jar.received</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="uom_jar_received_submenu"
                  parent="uom_jar_summary_menu"
                  groups="stock.delivery_user"
                  action="uom_jar_received_action"/>

    </data>
</odoo>
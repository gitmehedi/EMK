<?xml version="1.0" encoding='utf-8'?>
<odoo>
    <record id="module_category_appointment" model="ir.module.category">
        <field name="name">Appointment</field>
        <field name="sequence">90</field>
    </record>

    <record id="group_appoint_user" model="res.groups">
        <field name="name">Appointment: General User</field>
        <field name="sequence">1</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_appointment"/>
        <field name="comment">General User will have an access in Appointment Management form which shows only readonly mode.</field>
    </record>

    <record id="group_appoint_temp_user" model="res.groups">
        <field name="name">Appointment: Temporary User</field>
        <field name="sequence">1</field>
        <field name="implied_ids" eval="[(4,ref('base.group_portal'))]"/>
        <field name="category_id" ref="module_category_appointment"/>
        <field name="comment">Temporary User will have an access event form which shows only readonly mode.</field>
    </record>

    <record id="group_appoint_officer" model="res.groups">
        <field name="name">Appointment: Officer</field>
        <field name="sequence">1</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_appointment"/>
        <field name="comment">Officer will have an access event form which shows only readonly mode.</field>
    </record>

    <record id="group_appoint_manager" model="res.groups">
        <field name="name">Appointment: Manager</field>
        <field name="sequence">1</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_appointment"/>
        <field name="comment">Manager will have access on all features.</field>
    </record>

</odoo>
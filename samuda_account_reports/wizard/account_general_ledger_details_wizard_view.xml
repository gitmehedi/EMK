<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="account_general_ledger_details_wizard_view" model="ir.ui.view">
			<field name="name">account.general.ledger.details.wizard</field>
			<field name="model">account.general.ledger.details.wizard</field>
			<field name="arch" type="xml">
			    <form>
                    <group col="4">
                        <field name="operating_unit_id" options='{"no_open": 1,"no_create": 1, "no_create_edit":1}'/>
                        <field name="account_type_ids" placeholder="All"
                        options="{'no_create': True,'no_create_edit': True,'no_open': True}"
                        widget="many2many_tags"/>
                    </group>
                    <group col="4">
                        <field name="target_move" widget="radio"/>
                        <field name="display_account" widget="radio"/>
                    </group>
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button name ="button_export_details_xlsx" string="Export" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
			</field>
		</record>

        <record id="action_account_general_ledger_details_wizard" model="ir.actions.act_window">
            <field name="name">General Ledger Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.general.ledger.details.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_general_ledger_details_wizard_view"/>
            <field name="target">new</field>
        </record>

        <record id="account.action_account_general_ledger_details_values" model="ir.values">
            <field name="model_id" ref="account.model_account_account" />
            <field name="name">General Ledger Deatils</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('samuda_account_reports.action_account_general_ledger_details_wizard'))" />
            <field name="key">action</field>
            <field name="model">account.account</field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="account_general_ledger_wizard_view" model="ir.ui.view">
			<field name="name">account.general.ledger.wizard</field>
			<field name="model">account.general.ledger.wizard</field>
			<field name="arch" type="xml">
			    <form>
                    <group>
                        <group>
                            <field name="target_move" widget="radio"/>
                            <field name="display_account" widget="radio"/>
                        </group>
                        <group>
                            <field name="operating_unit_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                            <field name="cost_center_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                            <field name="analytic_account_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                            <field name="department_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                        </group>
                    </group>
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button name ="button_export_xlsx" string="Export" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
			</field>
		</record>

		<act_window id="action_account_general_ledger_wizard"
                    key2="client_print_multi"
                    name="General Ledger"
                    res_model="account.general.ledger.wizard"
                    src_model="account.account"
                    view_mode="form" target="new" view_type="form" />

    </data>
</odoo>
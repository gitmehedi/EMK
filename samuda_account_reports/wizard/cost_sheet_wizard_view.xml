<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cost_sheet_wizard_form" model="ir.ui.view">
            <field name="name">cost.sheet.wizard.form</field>
            <field name="model">cost.sheet.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <label for="all_entries" string="Options"/>
                            <div name="options">
                                <div>
                                    <field name="all_entries"/>
                                    <label for="all_entries"/>
                                </div>
                            </div>
                            <field name="date_filter" string="Periods"/>
                            <field name="comparison" invisible="1"/>
                            <field name="date_from" attrs="{'invisible': [('date_filter' , '!=', 'custom')]}"/>
                            <field name="date_to" attrs="{'invisible': [('date_filter' , '!=', 'custom')]}"/>
                        </group>
                        <group>
                            <field name="operating_unit_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                            <field name="cost_center_id" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
                            <field name="date_filter_cmp" string="Comparison"/>
                            <field name="periods_number" attrs="{'invisible': ['|', ('date_filter_cmp' , '=', 'no_comparison'), ('date_filter_cmp' , '=', 'custom')]}"/>
                            <field name="date_from_cmp" attrs="{'invisible': [('date_filter_cmp' , '!=', 'custom')]}"/>
                            <field name="date_to_cmp" attrs="{'invisible': [('date_filter_cmp' , '!=', 'custom')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="button_export_xlsx" string="Export" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_cost_sheet_wizard" model="ir.actions.act_window">
            <field name="name">Cost Sheet</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cost.sheet.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_cost_sheet_wizard"
                  id="menu_cost_sheet"
                  string="Cost Sheet"
                  parent="account_reports.account_reports_legal_statements_menu"
                  sequence="26"/>
    </data>
</odoo>

<?xml version="1.0"?>
<odoo>
    <record id="generator_view_form" model="ir.ui.view">
        <field name="name">Event sessions generator</field>
        <field name="model">wizard.event.session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main">
                        <group>
                            <field name="event_id" readonly="True" string="Event Name" required="True"/>
                            <field name="event_date_tz" readonly="True" invisible="1"/>
                            <field name="event_date_begin" readonly="True"/>
                            <field name="event_date_end" readonly="True"/>
                            <field name="name" invisible="1"/>
                        </group>
                        <group>
                            <field name="delete_existing_sessions"/>
                            <field name="event_mail_template_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Weekdays">
                            <field name="mondays"/>
                            <field name="tuesdays"/>
                            <field name="wednesdays"/>
                            <field name="thursdays"/>
                            <field name="fridays"/>
                            <field name="saturdays"/>
                            <field name="sundays"/>
                        </group>
                        <group string="Schedule Time">
                            <field name="session_hour_ids" nolabel="1">
                                <tree string="Hours" editable="top">
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_sessions" type="object" string="Generate Sessions"
                            class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="act_wizard_event_session" model="ir.actions.act_window">
        <field name="name">Generate Sessions</field>
        <field name="res_model">wizard.event.session</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="session_view_event_form" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <button string="Generate Sessions"
                        name="%(act_wizard_event_session)d"
                        states="confirm"
                        groups="event_user.group_event_officer"
                        type="action"/>
            </field>
        </field>
    </record>
</odoo>

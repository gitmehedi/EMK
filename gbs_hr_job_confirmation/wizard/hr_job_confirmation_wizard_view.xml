<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="job_confirmation_hr_manager_comment_wizard" model="ir.ui.view">
            <field name="name">hr.manager.comment.wizard</field>
            <field name="model">job.confirmation.persons.comment.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="Comments" create="false" edit="false">
                    <div colspan="1">
                        <separator string="Comments by HR Manager"/>
                        <field name="hr_manager_comment"/>
                    </div>
                    <footer>
                        <button string="Save" name="save_hr_manager_comment" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>


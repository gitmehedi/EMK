        <record id="job_confirmation_judgement_wizard" model="ir.ui.view">
            <field name="name">job.confirmation.judgement.wizard</field>
            <field name="model">job.confirmation.judgement.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml" >
                <form string="HR Confirmation">
                    <group colspan="4">
                        <separator string="Confirmation Criteria" colspan="4"/>
                        <newline/>
                        <field name="criteria_line_ids" nolabel="1">
                            <tree string="Confirmation Criteria Line" create="false" delete="false" editable="bottom">
                                <field name="seq" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="marks" readonly="1"/>
                                <field name="obtain_marks"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Save" name="save_evaluating_judgement" type="object" class="oe_highlight"  />
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
            </field>
        </record>


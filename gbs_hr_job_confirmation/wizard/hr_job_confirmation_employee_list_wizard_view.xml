<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_job_confirmation_employees_form" model="ir.ui.view">
            <field name="name">hr.job.confirmation.employee.list.wizard.form</field>
            <field name="model">hr.job.confirmation.employee.list.wizard</field>
            <field name="arch" type="xml">
                <form string="Employees For Job Confirmation">
                    <group colspan="4" >
                        <separator string="Employees" colspan="4"/>
                        <newline/>
                        <field name="employee_ids" nolabel="1">
                        	<tree string="List" editable="bottom">
                        		<field name="name"/>
                        		<field name="operating_unit_id"/>
                                <field name="company_id"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                        	</tree>
                        </field>
                    </group>
                    <footer>
                        <button icon="fa-cogs" string="Generate" name="generate_record" type="object" class="oe_highlight"  />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_hr_job_confirmation_employees" model="ir.actions.act_window">
            <field name="name">Employees For Job Confirmation</field>
            <field name="res_model">hr.job.confirmation.employee.list.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_job_confirmation_employees_form"/>
            <field name="context">{'operating_unit_id': context.get('operating_unit_id', False)}</field>
            <field name="target">new</field>
        </record>

    </data>

</odoo>

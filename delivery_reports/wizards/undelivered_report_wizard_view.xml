<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="undelivered_report_wizard_view" model="ir.ui.view">
			<field name="name">undelivered.report.wizard</field>
			<field name="model">undelivered.report.wizard</field>
			<field name="arch" type="xml">
			    <form>
                    <group>
						<group>
							<field name="partner_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
							<field name="operating_unit_id" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
							<field name="date_today"/>
						</group>
						<group>
							<field name="product_tmpl_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
							<field name="product_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"
								   domain="[('product_tmpl_id', 'child_of', product_tmpl_id.id)]"/>
						</group>
                    </group>
                    <footer>
                        <button name ="button_export_xlsx" string="Export" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
			</field>
		</record>

        <record id="action_undelivered_report_wizard" model="ir.actions.act_window">
            <field name="name">Undelivered Report</field>
            <field name="res_model">undelivered.report.wizard</field>
            <field name="view_type">form</field>
			<field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

		<menuitem id="menu_undelivered_report"
				  name="Undelivered Report"
                  action="action_undelivered_report_wizard"
                  parent="stock.menu_warehouse_report"
				  sequence="110"/>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="delivery_report_wizard_view" model="ir.ui.view">
			<field name="name">delivery.report.wizard</field>
			<field name="model">delivery.report.wizard</field>
			<field name="arch" type="xml">
			    <form>
                    <group>
						<group>
							<field name="partner_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
							<field name="operating_unit_id" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
							<field name="date_from"/>
						</group>
						<group>
							<field name="product_tmpl_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"/>
							<field name="product_id" placeholder="All" options="{'no_create': True,'no_create_edit': True,'no_open': True}"
								   domain="[('product_tmpl_id', 'child_of', product_tmpl_id.id)]"/>
							<field name="date_to"/>
						</group>
                    </group>
                    <footer>
                        <button name ="button_export_xlsx" string="Export" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
			</field>
		</record>

        <record id="action_delivery_report_wizard" model="ir.actions.act_window">
            <field name="name">Delivery Report</field>
            <field name="res_model">delivery.report.wizard</field>
            <field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'report_factory': True}</field>
            <field name="target">new</field>
        </record>

		<record id="action_delivery_report_wizard_sale" model="ir.actions.act_window">
            <field name="name">Delivery Report</field>
            <field name="res_model">delivery.report.wizard</field>
            <field name="view_type">form</field>
			<field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

		<menuitem id="menu_delivery_report"
				  name="Delivery Report"
                  action="action_delivery_report_wizard"
                  parent="stock.menu_warehouse_report"
				  groups="stock.delivery_user,stock.group_stock_user"
				  sequence="7"/>

		<menuitem id="menu_sales_delivery_report_submenu"
				  name="Delivery Report"
				  parent="delivery_order.delivery_menu"
				  action="action_delivery_report_wizard_sale" sequence="6"/>

    </data>
</odoo>
<?xml version="1.0"?>
<odoo>

    <!-- Inherit Product Template-->
    <record id="inherited_product_temp_view" model="ir.ui.view">
        <field name="name">inherited_product_tem</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='taxes_id']" position="after">
                <field name="commission_expense" string="Commission Expense"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Company-->
    <record id="inherited_company_form_view" model="ir.ui.view">
        <field name="name">inherit_company_form_v</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="gbs_account.inherited_company_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='general']" position="after">
                <group>
                    <field name="commission_journal"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>
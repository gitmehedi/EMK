<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Post Dated Bank Tree Views -->
		<record id="postdated_bank_tree_view" model="ir.ui.view">
			<field name="name">postdatedbank.tree</field>
			<field name="model">account.postdated.bank</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Bank Tree">
					<field name="code" />
					<field name="name" />
				</tree>
			</field>
		</record>
		
		<!-- Post Dated Cheque Form Views -->
		<record id="postdated_bank_form_view" model="ir.ui.view">
			<field name="name">postdatedbank.form</field>
			<field name="model">account.postdated.bank</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Bank Form">
					<sheet>
						<group>
							<!--<field name="name" select="1" class="oe_inline" />-->
							<field name="code" />
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Post Dated Cheque Action Views -->
		<record model="ir.actions.act_window" id="action_postdated_bank_view">
			<field name="name">Bank</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.postdated.bank</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="postdated_bank_tree_view" />
		</record>
		
		<!-- Post Dated Cheque Menu -->

		<menuitem id="bank_entry_menu" name="Bank Entry" parent="post_dated_cheque_configuration_menu"
			sequence="10" action="action_postdated_bank_view" />	
	</data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_job_description" inherit_id="website_hr_recruitment.detail" name="Job description on Portal">
        <xpath expr="//div[hasclass('container')]" position="after">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <h4>Job Description</h4>
                        <div t-field="job.description"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>